{
  "thi-ap13:0.1": "Therīapadāna",
  "thi-ap13:0.2": "Ekūposathikavagga",
  "thi-ap13:0.3": "3. Modakadāyikātherīapadāna",
  "thi-ap13:1.1": "“Nagare bandhumatiyā,",
  "thi-ap13:1.2": "kumbhadāsī ahosahaṃ;",
  "thi-ap13:1.3": "Mama bhāgaṃ gahetvāna,",
  "thi-ap13:1.4": "gacchaṃ udakahārikā.",
  "thi-ap13:2.1": "Panthamhi samaṇaṃ disvā,",
  "thi-ap13:2.2": "santacittaṃ samāhitaṃ;",
  "thi-ap13:2.3": "Pasannacittā sumanā,",
  "thi-ap13:2.4": "modake tīṇidāsahaṃ.",
  "thi-ap13:3.1": "Tena kammena sukatena,",
  "thi-ap13:3.2": "cetanāpaṇidhīhi ca;",
  "thi-ap13:3.3": "Ekanavutikappāni,",
  "thi-ap13:3.4": "vinipātaṃ nagacchahaṃ.",
  "thi-ap13:4.1": "Sampatti taṃ karitvāna,",
  "thi-ap13:4.2": "sabbaṃ anubhaviṃ ahaṃ;",
  "thi-ap13:4.3": "Modake tīṇi datvāna,",
  "thi-ap13:4.4": "pattāhaṃ acalaṃ padaṃ.",
  "thi-ap13:5.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap13:5.2": "…pe…",
  "thi-ap13:5.3": "viharāmi anāsavā.",
  "thi-ap13:6.1": "Svāgataṃ vata me āsi,",
  "thi-ap13:6.2": "…pe…",
  "thi-ap13:6.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap13:7.1": "Paṭisambhidā catasso,",
  "thi-ap13:7.2": "…pe…",
  "thi-ap13:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap13:8.1": "Itthaṃ sudaṃ modakadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap13:9.1": "Modakadāyikātheriyāpadānaṃ tatiyaṃ."
}