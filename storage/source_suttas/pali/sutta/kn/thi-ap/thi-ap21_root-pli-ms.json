{
  "thi-ap21:0.1": "Therīapadāna",
  "thi-ap21:0.2": "Kuṇḍalakesīvagga",
  "thi-ap21:0.3": "1 Kuṇḍalakesātherīapadāna",
  "thi-ap21:1.1": "“Padumuttaro nāma jino,",
  "thi-ap21:1.2": "sabbadhammāna pāragū;",
  "thi-ap21:1.3": "Ito satasahassamhi,",
  "thi-ap21:1.4": "kappe uppajji nāyako.",
  "thi-ap21:2.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "thi-ap21:2.2": "jātā seṭṭhikule ahuṃ;",
  "thi-ap21:2.3": "Nānāratanapajjote,",
  "thi-ap21:2.4": "mahāsukhasamappitā.",
  "thi-ap21:3.1": "Upetvā taṃ mahāvīraṃ,",
  "thi-ap21:3.2": "assosiṃ dhammadesanaṃ;",
  "thi-ap21:3.3": "Tato jātappasādāhaṃ,",
  "thi-ap21:3.4": "upesiṃ saraṇaṃ jinaṃ.",
  "thi-ap21:4.1": "Tadā mahākāruṇiko,",
  "thi-ap21:4.2": "padumuttaranāmako;",
  "thi-ap21:4.3": "Khippābhiññānamagganti,",
  "thi-ap21:4.4": "ṭhapesi bhikkhuniṃ subhaṃ.",
  "thi-ap21:5.1": "Taṃ sutvā muditā hutvā,",
  "thi-ap21:5.2": "dānaṃ datvā mahesino;",
  "thi-ap21:5.3": "Nipacca sirasā pāde,",
  "thi-ap21:5.4": "taṃ ṭhānamabhipatthayiṃ.",
  "thi-ap21:6.1": "Anumodi mahāvīro,",
  "thi-ap21:6.2": "‘bhadde yaṃ tebhipatthitaṃ;",
  "thi-ap21:6.3": "Samijjhissati taṃ sabbaṃ,",
  "thi-ap21:6.4": "sukhinī hohi nibbutā.",
  "thi-ap21:7.1": "Satasahassito kappe,",
  "thi-ap21:7.2": "okkākakulasambhavo;",
  "thi-ap21:7.3": "Gotamo nāma gottena,",
  "thi-ap21:7.4": "satthā loke bhavissati.",
  "thi-ap21:8.1": "Tassa dhammesu dāyādā,",
  "thi-ap21:8.2": "orasā dhammanimmitā;",
  "thi-ap21:8.3": "Bhaddākuṇḍalakesāti,",
  "thi-ap21:8.4": "hessati satthu sāvikā’.",
  "thi-ap21:9.1": "Tena kammena sukatena,",
  "thi-ap21:9.2": "cetanāpaṇidhīhi ca;",
  "thi-ap21:9.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap21:9.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap21:10.1": "Tato cutā yāmamagaṃ,",
  "thi-ap21:10.2": "tatohaṃ tusitaṃ gatā;",
  "thi-ap21:10.3": "Tato ca nimmānaratiṃ,",
  "thi-ap21:10.4": "vasavattipuraṃ tato.",
  "thi-ap21:11.1": "Yattha yatthūpapajjāmi,",
  "thi-ap21:11.2": "tassa kammassa vāhasā;",
  "thi-ap21:11.3": "Tattha tattheva rājūnaṃ,",
  "thi-ap21:11.4": "mahesittamakārayiṃ.",
  "thi-ap21:12.1": "Tato cutā manussesu,",
  "thi-ap21:12.2": "rājūnaṃ cakkavattinaṃ;",
  "thi-ap21:12.3": "Maṇḍalīnañca rājūnaṃ,",
  "thi-ap21:12.4": "mahesittamakārayiṃ.",
  "thi-ap21:13.1": "Sampattiṃ anubhotvāna,",
  "thi-ap21:13.2": "devesu mānusesu ca;",
  "thi-ap21:13.3": "Sabbattha sukhitā hutvā,",
  "thi-ap21:13.4": "nekakappesu saṃsariṃ.",
  "thi-ap21:14.1": "Imamhi bhaddake kappe,",
  "thi-ap21:14.2": "brahmabandhu mahāyaso;",
  "thi-ap21:14.3": "Kassapo nāma gottena,",
  "thi-ap21:14.4": "uppajji vadataṃ varo.",
  "thi-ap21:15.1": "Upaṭṭhāko mahesissa,",
  "thi-ap21:15.2": "tadā āsi narissaro;",
  "thi-ap21:15.3": "Kāsirājā kikī nāma,",
  "thi-ap21:15.4": "bārāṇasipuruttame.",
  "thi-ap21:16.1": "Tassa dhītā catutthāsiṃ,",
  "thi-ap21:16.2": "bhikkhudāyīti vissutā;",
  "thi-ap21:16.3": "Dhammaṃ sutvā jinaggassa,",
  "thi-ap21:16.4": "pabbajjaṃ samarocayiṃ.",
  "thi-ap21:17.1": "Anujāni na no tāto,",
  "thi-ap21:17.2": "agāreva tadā mayaṃ;",
  "thi-ap21:17.3": "Vīsavassasahassāni,",
  "thi-ap21:17.4": "vicarimha atanditā.",
  "thi-ap21:18.1": "Komāribrahmacariyaṃ,",
  "thi-ap21:18.2": "rājakaññā sukhedhitā;",
  "thi-ap21:18.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap21:18.4": "muditā satta dhītaro.",
  "thi-ap21:19.1": "Samaṇī samaṇaguttā ca,",
  "thi-ap21:19.2": "bhikkhunī bhikkhudāyikā;",
  "thi-ap21:19.3": "Dhammā ceva sudhammā ca,",
  "thi-ap21:19.4": "sattamī saṃghadāyikā.",
  "thi-ap21:20.1": "Khemā uppalavaṇṇā ca,",
  "thi-ap21:20.2": "paṭācārā ahaṃ tadā;",
  "thi-ap21:20.3": "Kisāgotamī dhammadinnā,",
  "thi-ap21:20.4": "visākhā hoti sattamī.",
  "thi-ap21:21.1": "Tehi kammehi sukatehi,",
  "thi-ap21:21.2": "cetanāpaṇidhīhi ca;",
  "thi-ap21:21.3": "Jahitvā mānusaṃ dehaṃ,",
  "thi-ap21:21.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap21:22.1": "Pacchime ca bhave dāni,",
  "thi-ap21:22.2": "giribbajapuruttame;",
  "thi-ap21:22.3": "Jātā seṭṭhikule phīte,",
  "thi-ap21:22.4": "yadāhaṃ yobbane ṭhitā.",
  "thi-ap21:23.1": "Coraṃ vadhatthaṃ nīyantaṃ,",
  "thi-ap21:23.2": "disvā rattā tahiṃ ahaṃ;",
  "thi-ap21:23.3": "Pitā me taṃ sahassena,",
  "thi-ap21:23.4": "mocayitvā vadhā tato.",
  "thi-ap21:24.1": "Adāsi tassa maṃ tāto,",
  "thi-ap21:24.2": "viditvāna manaṃ mama;",
  "thi-ap21:24.3": "Tassāhamāsiṃ visaṭṭhā,",
  "thi-ap21:24.4": "atīva dayitā hitā.",
  "thi-ap21:25.1": "So me bhūsanalobhena,",
  "thi-ap21:25.2": "balimajjhāsayo diso;",
  "thi-ap21:25.3": "Corappapātaṃ netvāna,",
  "thi-ap21:25.4": "pabbataṃ cetayī vadhaṃ.",
  "thi-ap21:26.1": "Tadāhaṃ paṇamitvāna,",
  "thi-ap21:26.2": "sattukaṃ sukatañjalī;",
  "thi-ap21:26.3": "Rakkhantī attano pāṇaṃ,",
  "thi-ap21:26.4": "idaṃ vacanamabraviṃ.",
  "thi-ap21:27.1": "‘Idaṃ suvaṇṇakeyūraṃ,",
  "thi-ap21:27.2": "muttā veḷuriyā bahū;",
  "thi-ap21:27.3": "Sabbaṃ harassu bhaddante,",
  "thi-ap21:27.4": "mañca dāsīti sāvaya’.",
  "thi-ap21:28.1": "‘Oropayassu kalyāṇī,",
  "thi-ap21:28.2": "mā bāḷhaṃ paridevasi;",
  "thi-ap21:28.3": "Na cāhaṃ abhijānāmi,",
  "thi-ap21:28.4": "ahantvā dhanamābhataṃ’.",
  "thi-ap21:29.1": "‘Yato sarāmi attānaṃ,",
  "thi-ap21:29.2": "yato pattosmi viññutaṃ;",
  "thi-ap21:29.3": "Na cāhaṃ abhijānāmi,",
  "thi-ap21:29.4": "aññaṃ piyataraṃ tayā.",
  "thi-ap21:30.1": "Ehi taṃ upagūhissaṃ,",
  "thi-ap21:30.2": "katvāna taṃ padakkhiṇaṃ;",
  "thi-ap21:30.3": "Na ca dāni puno atthi,",
  "thi-ap21:30.4": "mama tuyhañca saṅgamo’.",
  "thi-ap21:31.1": "‘Na hi sabbesu ṭhānesu,",
  "thi-ap21:31.2": "puriso hoti paṇḍito;",
  "thi-ap21:31.3": "Itthīpi paṇḍitā hoti,",
  "thi-ap21:31.4": "tattha tattha vicakkhaṇā.",
  "thi-ap21:32.1": "Na hi sabbesu ṭhānesu,",
  "thi-ap21:32.2": "puriso hoti paṇḍito;",
  "thi-ap21:32.3": "Itthīpi paṇḍitā hoti,",
  "thi-ap21:32.4": "lahuṃ atthavicintikā’.",
  "thi-ap21:33.1": "Lahuñca vata khippañca,",
  "thi-ap21:33.2": "nikaṭṭhe samacetayiṃ;",
  "thi-ap21:33.3": "Migaṃ uṇṇā yathā evaṃ,",
  "thi-ap21:33.4": "tadāhaṃ sattukaṃ vadhiṃ.",
  "thi-ap21:34.1": "Yo ca uppatitaṃ atthaṃ,",
  "thi-ap21:34.2": "na khippamanubujjhati;",
  "thi-ap21:34.3": "So haññate mandamati,",
  "thi-ap21:34.4": "corova girigabbhare.",
  "thi-ap21:35.1": "Yo ca uppatitaṃ atthaṃ,",
  "thi-ap21:35.2": "khippameva nibodhati;",
  "thi-ap21:35.3": "Muccate sattusambādhā,",
  "thi-ap21:35.4": "tadāhaṃ sattukā yathā.",
  "thi-ap21:36.1": "Tadāhaṃ pātayitvāna,",
  "thi-ap21:36.2": "giriduggamhi sattukaṃ;",
  "thi-ap21:36.3": "Santikaṃ setavatthānaṃ,",
  "thi-ap21:36.4": "upetvā pabbajiṃ ahaṃ.",
  "thi-ap21:37.1": "Saṇḍāsena ca kese me,",
  "thi-ap21:37.2": "luñcitvā sabbaso tadā;",
  "thi-ap21:37.3": "Pabbajitvāna samayaṃ,",
  "thi-ap21:37.4": "ācikkhiṃsu nirantaraṃ.",
  "thi-ap21:38.1": "Tato taṃ uggahetvāhaṃ,",
  "thi-ap21:38.2": "nisīditvāna ekikā;",
  "thi-ap21:38.3": "Samayaṃ taṃ vicintesiṃ,",
  "thi-ap21:38.4": "suvāno mānusaṃ karaṃ.",
  "thi-ap21:39.1": "Chinnaṃ gayha samīpe me,",
  "thi-ap21:39.2": "pātayitvā apakkami;",
  "thi-ap21:39.3": "Disvā nimittamalabhiṃ,",
  "thi-ap21:39.4": "hatthaṃ taṃ puḷavākulaṃ.",
  "thi-ap21:40.1": "Tato uṭṭhāya saṃviggā,",
  "thi-ap21:40.2": "apucchiṃ sahadhammike;",
  "thi-ap21:40.3": "Te avocuṃ ‘vijānanti,",
  "thi-ap21:40.4": "taṃ atthaṃ sakyabhikkhavo’.",
  "thi-ap21:41.1": "Sāhaṃ tamatthaṃ pucchissaṃ,",
  "thi-ap21:41.2": "upetvā buddhasāvake;",
  "thi-ap21:41.3": "Te mamādāya gacchiṃsu,",
  "thi-ap21:41.4": "buddhaseṭṭhassa santikaṃ.",
  "thi-ap21:42.1": "So me dhammamadesesi,",
  "thi-ap21:42.2": "khandhāyatanadhātuyo;",
  "thi-ap21:42.3": "Asubhāniccadukkhāti,",
  "thi-ap21:42.4": "anattāti ca nāyako.",
  "thi-ap21:43.1": "Tassa dhammaṃ suṇitvāhaṃ,",
  "thi-ap21:43.2": "dhammacakkhuṃ visodhayiṃ;",
  "thi-ap21:43.3": "Tato viññātasaddhammā,",
  "thi-ap21:43.4": "pabbajjaṃ upasampadaṃ.",
  "thi-ap21:44.1": "Āyācito tadā āha,",
  "thi-ap21:44.2": "‘ehi bhadde’ti nāyako;",
  "thi-ap21:44.3": "Tadāhaṃ upasampannā,",
  "thi-ap21:44.4": "parittaṃ toyamaddasaṃ.",
  "thi-ap21:45.1": "Pādapakkhālanenāhaṃ,",
  "thi-ap21:45.2": "ñatvā saudayabbayaṃ;",
  "thi-ap21:45.3": "Tathā sabbepi saṅkhāre,",
  "thi-ap21:45.4": "īdisaṃ cintayiṃ tadā.",
  "thi-ap21:46.1": "Tato cittaṃ vimucci me,",
  "thi-ap21:46.2": "anupādāya sabbaso;",
  "thi-ap21:46.3": "Khippābhiññānamaggaṃ me,",
  "thi-ap21:46.4": "tadā paññāpayī jino.",
  "thi-ap21:47.1": "Iddhīsu ca vasī homi,",
  "thi-ap21:47.2": "dibbāya sotadhātuyā;",
  "thi-ap21:47.3": "Paracittāni jānāmi,",
  "thi-ap21:47.4": "satthusāsanakārikā.",
  "thi-ap21:48.1": "Pubbenivāsaṃ jānāmi,",
  "thi-ap21:48.2": "dibbacakkhu visodhitaṃ;",
  "thi-ap21:48.3": "Khepetvā āsave sabbe,",
  "thi-ap21:48.4": "visuddhāsiṃ sunimmalā.",
  "thi-ap21:49.1": "Pariciṇṇo mayā satthā,",
  "thi-ap21:49.2": "kataṃ buddhassa sāsanaṃ;",
  "thi-ap21:49.3": "Ohito garuko bhāro,",
  "thi-ap21:49.4": "bhavanetti samūhatā.",
  "thi-ap21:50.1": "Yassatthāya pabbajitā,",
  "thi-ap21:50.2": "agārasmānagāriyaṃ;",
  "thi-ap21:50.3": "So me attho anuppatto,",
  "thi-ap21:50.4": "sabbasaṃyojanakkhayo.",
  "thi-ap21:51.1": "Atthadhammaniruttīsu,",
  "thi-ap21:51.2": "paṭibhāne tatheva ca;",
  "thi-ap21:51.3": "Ñāṇaṃ me vimalaṃ suddhaṃ,",
  "thi-ap21:51.4": "buddhaseṭṭhassa sāsane.",
  "thi-ap21:52.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap21:52.2": "bhavā sabbe samūhatā;",
  "thi-ap21:52.3": "Nāgīva bandhanaṃ chetvā,",
  "thi-ap21:52.4": "viharāmi anāsavā.",
  "thi-ap21:53.1": "Svāgataṃ vata me āsi,",
  "thi-ap21:53.2": "mama buddhassa santike;",
  "thi-ap21:53.3": "Tisso vijjā anuppattā,",
  "thi-ap21:53.4": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap21:54.1": "Paṭisambhidā catasso,",
  "thi-ap21:54.2": "vimokkhāpi ca aṭṭhime;",
  "thi-ap21:54.3": "Chaḷabhiññā sacchikatā,",
  "thi-ap21:54.4": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap21:55.1": "Itthaṃ sudaṃ bhaddākuṇḍalakesā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap21:56.1": "Kuṇḍalakesātheriyāpadānaṃ paṭhamaṃ."
}