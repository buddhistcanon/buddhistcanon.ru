{
  "thi-ap3:0.1": "Therīapadāna",
  "thi-ap3:0.2": "Sumedhāvagga",
  "thi-ap3:0.3": "3. Maṇḍapadāyikātherīapadāna",
  "thi-ap3:1.1": "“Koṇāgamanabuddhassa,",
  "thi-ap3:1.2": "maṇḍapo kārito mayā;",
  "thi-ap3:1.3": "Dhuvaṃ ticīvaraṃdāsiṃ,",
  "thi-ap3:1.4": "buddhassa lokabandhuno.",
  "thi-ap3:2.1": "Yaṃ yaṃ janapadaṃ yāmi,",
  "thi-ap3:2.2": "nigame rājadhāniyo;",
  "thi-ap3:2.3": "Sabbattha pūjitā homi,",
  "thi-ap3:2.4": "puññakammassidaṃ phalaṃ.",
  "thi-ap3:3.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap3:3.2": "…pe…",
  "thi-ap3:3.3": "viharāmi anāsavā.",
  "thi-ap3:4.1": "Svāgataṃ vata me āsi,",
  "thi-ap3:4.2": "…pe…",
  "thi-ap3:4.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap3:5.1": "Paṭisambhidā catasso,",
  "thi-ap3:5.2": "…pe…",
  "thi-ap3:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap3:6.1": "Itthaṃ sudaṃ maṇḍapadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap3:7.1": "Maṇḍapadāyikātheriyāpadānaṃ tatiyaṃ."
}