{
  "thi-ap11:0.1": "Therīapadāna",
  "thi-ap11:0.2": "Ekūposathikavagga",
  "thi-ap11:0.3": "1 Ekūposathikātherīapadāna",
  "thi-ap11:1.1": "“Nagare bandhumatiyā,",
  "thi-ap11:1.2": "bandhumā nāma khattiyo;",
  "thi-ap11:1.3": "Divase puṇṇamāya so,",
  "thi-ap11:1.4": "upavasi uposathaṃ.",
  "thi-ap11:2.1": "Ahaṃ tena samayena,",
  "thi-ap11:2.2": "kumbhadāsī ahaṃ tahiṃ;",
  "thi-ap11:2.3": "Disvā sarājakaṃ senaṃ,",
  "thi-ap11:2.4": "evāhaṃ cintayiṃ tadā.",
  "thi-ap11:3.1": "‘Rājāpi rajjaṃ chaḍḍetvā,",
  "thi-ap11:3.2": "upavasi uposathaṃ;",
  "thi-ap11:3.3": "Saphalaṃ nūna taṃ kammaṃ,",
  "thi-ap11:3.4": "janakāyo pamodito’.",
  "thi-ap11:4.1": "Yoniso paccavekkhitvā,",
  "thi-ap11:4.2": "duggaccañca daliddataṃ;",
  "thi-ap11:4.3": "Mānasaṃ sampahaṃsitvā,",
  "thi-ap11:4.4": "upavasiṃ uposathaṃ.",
  "thi-ap11:5.1": "Ahaṃ uposathaṃ katvā,",
  "thi-ap11:5.2": "sammāsambuddhasāsane;",
  "thi-ap11:5.3": "Tena kammena sukatena,",
  "thi-ap11:5.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap11:6.1": "Tattha me sukataṃ byamhaṃ,",
  "thi-ap11:6.2": "ubbhayojanamuggataṃ;",
  "thi-ap11:6.3": "Kūṭāgāravarūpetaṃ,",
  "thi-ap11:6.4": "mahāsanasubhūsitaṃ.",
  "thi-ap11:7.1": "Accharā satasahassā,",
  "thi-ap11:7.2": "upatiṭṭhanti maṃ sadā;",
  "thi-ap11:7.3": "Aññe deve atikkamma,",
  "thi-ap11:7.4": "atirocāmi sabbadā.",
  "thi-ap11:8.1": "Catusaṭṭhi devarājūnaṃ,",
  "thi-ap11:8.2": "mahesittamakārayiṃ;",
  "thi-ap11:8.3": "Tesaṭṭhi cakkavattīnaṃ,",
  "thi-ap11:8.4": "mahesittamakārayiṃ.",
  "thi-ap11:9.1": "Suvaṇṇavaṇṇā hutvāna,",
  "thi-ap11:9.2": "bhavesu saṃsarāmahaṃ;",
  "thi-ap11:9.3": "Sabbattha pavarā homi,",
  "thi-ap11:9.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:10.1": "Hatthiyānaṃ assayānaṃ,",
  "thi-ap11:10.2": "rathayānañca sīvikaṃ;",
  "thi-ap11:10.3": "Labhāmi sabbamevetaṃ,",
  "thi-ap11:10.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:11.1": "Soṇṇamayaṃ rūpimayaṃ,",
  "thi-ap11:11.2": "athopi phalikāmayaṃ;",
  "thi-ap11:11.3": "Lohitaṅgamayañceva,",
  "thi-ap11:11.4": "sabbaṃ paṭilabhāmahaṃ.",
  "thi-ap11:12.1": "Koseyyakambaliyāni,",
  "thi-ap11:12.2": "khomakappāsikāni ca;",
  "thi-ap11:12.3": "Mahagghāni ca vatthāni,",
  "thi-ap11:12.4": "sabbaṃ paṭilabhāmahaṃ.",
  "thi-ap11:13.1": "Annaṃ pānaṃ khādanīyaṃ,",
  "thi-ap11:13.2": "vatthasenāsanāni ca;",
  "thi-ap11:13.3": "Sabbametaṃ paṭilabhe,",
  "thi-ap11:13.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:14.1": "Varagandhañca mālañca,",
  "thi-ap11:14.2": "cuṇṇakañca vilepanaṃ;",
  "thi-ap11:14.3": "Sabbametaṃ paṭilabhe,",
  "thi-ap11:14.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:15.1": "Kūṭāgārañca pāsādaṃ,",
  "thi-ap11:15.2": "maṇḍapaṃ hammiyaṃ guhaṃ;",
  "thi-ap11:15.3": "Sabbametaṃ paṭilabhe,",
  "thi-ap11:15.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:16.1": "Jātiyā sattavassāhaṃ,",
  "thi-ap11:16.2": "pabbajiṃ anagāriyaṃ;",
  "thi-ap11:16.3": "Aḍḍhamāse asampatte,",
  "thi-ap11:16.4": "arahattamapāpuṇiṃ.",
  "thi-ap11:17.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap11:17.2": "bhavā sabbe samūhatā;",
  "thi-ap11:17.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap11:17.4": "natthi dāni punabbhavo.",
  "thi-ap11:18.1": "Ekanavutito kappe,",
  "thi-ap11:18.2": "yaṃ kammamakariṃ tadā;",
  "thi-ap11:18.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap11:18.4": "uposathassidaṃ phalaṃ.",
  "thi-ap11:19.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap11:19.2": "…pe…",
  "thi-ap11:19.3": "viharāmi anāsavā.",
  "thi-ap11:20.1": "Svāgataṃ vata me āsi,",
  "thi-ap11:20.2": "…pe…",
  "thi-ap11:20.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap11:21.1": "Paṭisambhidā catasso,",
  "thi-ap11:21.2": "…pe…",
  "thi-ap11:21.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap11:22.1": "Itthaṃ sudaṃ ekūposathikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap11:23.1": "Ekūposathikātheriyāpadānaṃ paṭhamaṃ."
}