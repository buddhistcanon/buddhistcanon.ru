{
  "thi-ap37:0.1": "Therīapadāna",
  "thi-ap37:0.2": "Khattiyāvagga",
  "thi-ap37:0.3": "7 Aḍḍhakāsitherīapadāna",
  "thi-ap37:1.1": "“Imamhi bhaddake kappe,",
  "thi-ap37:1.2": "brahmabandhu mahāyaso;",
  "thi-ap37:1.3": "Kassapo nāma gottena,",
  "thi-ap37:1.4": "uppajji vadataṃ varo.",
  "thi-ap37:2.1": "Tadāhaṃ pabbajitvāna,",
  "thi-ap37:2.2": "tassa buddhassa sāsane;",
  "thi-ap37:2.3": "Saṃvutā pātimokkhamhi,",
  "thi-ap37:2.4": "indriyesu ca pañcasu.",
  "thi-ap37:3.1": "Mattaññunī ca asane,",
  "thi-ap37:3.2": "yuttā jāgariyepi ca;",
  "thi-ap37:3.3": "Vasantī yuttayogāhaṃ,",
  "thi-ap37:3.4": "bhikkhuniṃ vigatāsavaṃ.",
  "thi-ap37:4.1": "Akkosiṃ duṭṭhacittāhaṃ,",
  "thi-ap37:4.2": "gaṇiketi bhaṇiṃ tadā;",
  "thi-ap37:4.3": "Tena pāpena kammena,",
  "thi-ap37:4.4": "nirayamhi apaccisaṃ.",
  "thi-ap37:5.1": "Tena kammāvasesena,",
  "thi-ap37:5.2": "ajāyiṃ gaṇikākule;",
  "thi-ap37:5.3": "Bahusova parādhīnā,",
  "thi-ap37:5.4": "pacchimāya ca jātiyaṃ.",
  "thi-ap37:6.1": "Kāsīsu seṭṭhikulajā,",
  "thi-ap37:6.2": "brahmacārībalenahaṃ;",
  "thi-ap37:6.3": "Accharā viya devesu,",
  "thi-ap37:6.4": "ahosiṃ rūpasampadā.",
  "thi-ap37:7.1": "Disvāna dassanīyaṃ maṃ,",
  "thi-ap37:7.2": "giribbajapuruttame;",
  "thi-ap37:7.3": "Gaṇikatte nivesesuṃ,",
  "thi-ap37:7.4": "akkosanabalena me.",
  "thi-ap37:8.1": "Sāhaṃ sutvāna saddhammaṃ,",
  "thi-ap37:8.2": "buddhaseṭṭhena desitaṃ;",
  "thi-ap37:8.3": "Pubbavāsanasampannā,",
  "thi-ap37:8.4": "pabbajiṃ anagāriyaṃ.",
  "thi-ap37:9.1": "Tadūpasampadatthāya,",
  "thi-ap37:9.2": "gacchantī jinasantikaṃ;",
  "thi-ap37:9.3": "Magge dhutte ṭhite sutvā,",
  "thi-ap37:9.4": "labhiṃ dūtopasampadaṃ.",
  "thi-ap37:10.1": "Sabbakammaṃ parikkhīṇaṃ,",
  "thi-ap37:10.2": "puññaṃ pāpaṃ tatheva ca;",
  "thi-ap37:10.3": "Sabbasaṃsāramuttiṇṇā,",
  "thi-ap37:10.4": "gaṇikattañca khepitaṃ.",
  "thi-ap37:11.1": "Iddhīsu ca vasī homi,",
  "thi-ap37:11.2": "dibbāya sotadhātuyā;",
  "thi-ap37:11.3": "Cetopariyañāṇassa,",
  "thi-ap37:11.4": "vasī homi mahāmune.",
  "thi-ap37:12.1": "Pubbenivāsaṃ jānāmi,",
  "thi-ap37:12.2": "dibbacakkhu visodhitaṃ;",
  "thi-ap37:12.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap37:12.4": "natthi dāni punabbhavo.",
  "thi-ap37:13.1": "Atthadhammaniruttīsu,",
  "thi-ap37:13.2": "paṭibhāne tatheva ca;",
  "thi-ap37:13.3": "Ñāṇaṃ mama mahāvīra,",
  "thi-ap37:13.4": "uppannaṃ tava santike.",
  "thi-ap37:14.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap37:14.2": "…pe…",
  "thi-ap37:14.3": "viharāmi anāsavā.",
  "thi-ap37:15.1": "Svāgataṃ vata me āsi,",
  "thi-ap37:15.2": "…pe…",
  "thi-ap37:15.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap37:16.1": "Paṭisambhidā catasso,",
  "thi-ap37:16.2": "…pe…",
  "thi-ap37:16.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap37:17.1": "Itthaṃ sudaṃ aḍḍhakāsi bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap37:18.1": "Aḍḍhakāsitheriyāpadānaṃ sattamaṃ."
}