{
  "thi-ap8:0.1": "Therīapadāna",
  "thi-ap8:0.2": "Sumedhāvagga",
  "thi-ap8:0.3": "8. Sattuppalamālikātherīapadāna",
  "thi-ap8:1.1": "“Nagare aruṇavatiyā,",
  "thi-ap8:1.2": "aruṇo nāma khattiyo;",
  "thi-ap8:1.3": "Tassa rañño ahuṃ bhariyā,",
  "thi-ap8:1.4": "vāritaṃ vārayāmahaṃ.",
  "thi-ap8:2.1": "Satta mālā gahetvāna,",
  "thi-ap8:2.2": "uppalā devagandhikā;",
  "thi-ap8:2.3": "Nisajja pāsādavare,",
  "thi-ap8:2.4": "evaṃ cintesi tāvade.",
  "thi-ap8:3.1": "‘Kiṃ me imāhi mālāhi,",
  "thi-ap8:3.2": "sirasāropitāhi me;",
  "thi-ap8:3.3": "Varaṃ me buddhaseṭṭhassa,",
  "thi-ap8:3.4": "ñāṇamhi abhiropitaṃ’.",
  "thi-ap8:4.1": "Sambuddhaṃ paṭimānentī,",
  "thi-ap8:4.2": "dvārāsanne nisīdahaṃ;",
  "thi-ap8:4.3": "‘Yadā ehiti sambuddho,",
  "thi-ap8:4.4": "pūjayissaṃ mahāmuniṃ’.",
  "thi-ap8:5.1": "Kakudho vilasantova,",
  "thi-ap8:5.2": "migarājāva kesarī;",
  "thi-ap8:5.3": "Bhikkhusaṃghena sahito,",
  "thi-ap8:5.4": "āgacchi vīthiyā jino.",
  "thi-ap8:6.1": "Buddhassa raṃsiṃ disvāna,",
  "thi-ap8:6.2": "haṭṭhā saṃviggamānasā;",
  "thi-ap8:6.3": "Dvāraṃ avāpuritvāna,",
  "thi-ap8:6.4": "buddhaseṭṭhamapūjayiṃ.",
  "thi-ap8:7.1": "Satta uppalapupphāni,",
  "thi-ap8:7.2": "parikiṇṇāni ambare;",
  "thi-ap8:7.3": "Chadiṃ karonto buddhassa,",
  "thi-ap8:7.4": "matthake dhārayanti te.",
  "thi-ap8:8.1": "Udaggacittā sumanā,",
  "thi-ap8:8.2": "vedajātā katañjalī;",
  "thi-ap8:8.3": "Tattha cittaṃ pasādetvā,",
  "thi-ap8:8.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap8:9.1": "Mahānelassa chādanaṃ,",
  "thi-ap8:9.2": "dhārenti mama muddhani;",
  "thi-ap8:9.3": "Dibbagandhaṃ pavāyāmi,",
  "thi-ap8:9.4": "sattuppalassidaṃ phalaṃ.",
  "thi-ap8:10.1": "Kadāci nīyamānāya,",
  "thi-ap8:10.2": "ñātisaṅghena me tadā;",
  "thi-ap8:10.3": "Yāvatā parisā mayhaṃ,",
  "thi-ap8:10.4": "mahānelaṃ dharīyati.",
  "thi-ap8:11.1": "Sattatidevarājūnaṃ,",
  "thi-ap8:11.2": "mahesittamakārayiṃ;",
  "thi-ap8:11.3": "Sabbattha issarā hutvā,",
  "thi-ap8:11.4": "saṃsarāmi bhavābhave.",
  "thi-ap8:12.1": "Tesaṭṭhi cakkavattīnaṃ,",
  "thi-ap8:12.2": "mahesittamakārayiṃ;",
  "thi-ap8:12.3": "Sabbe mamanuvattanti,",
  "thi-ap8:12.4": "ādeyyavacanā ahuṃ.",
  "thi-ap8:13.1": "Uppalasseva me vaṇṇo,",
  "thi-ap8:13.2": "gandho ceva pavāyati;",
  "thi-ap8:13.3": "Dubbaṇṇiyaṃ na jānāmi,",
  "thi-ap8:13.4": "buddhapūjāyidaṃ phalaṃ.",
  "thi-ap8:14.1": "Iddhipādesu kusalā,",
  "thi-ap8:14.2": "bojjhaṅgabhāvanāratā;",
  "thi-ap8:14.3": "Abhiññāpāramippattā,",
  "thi-ap8:14.4": "buddhapūjāyidaṃ phalaṃ.",
  "thi-ap8:15.1": "Satipaṭṭhānakusalā,",
  "thi-ap8:15.2": "samādhijhānagocarā;",
  "thi-ap8:15.3": "Sammappadhānamanuyuttā,",
  "thi-ap8:15.4": "buddhapūjāyidaṃ phalaṃ.",
  "thi-ap8:16.1": "Vīriyaṃ me dhuradhorayhaṃ,",
  "thi-ap8:16.2": "yogakkhemādhivāhanaṃ;",
  "thi-ap8:16.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap8:16.4": "natthi dāni punabbhavo.",
  "thi-ap8:17.1": "Ekatiṃse ito kappe,",
  "thi-ap8:17.2": "yaṃ pupphamabhipūjayiṃ;",
  "thi-ap8:17.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap8:17.4": "buddhapūjāyidaṃ phalaṃ.",
  "thi-ap8:18.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap8:18.2": "…pe…",
  "thi-ap8:18.3": "viharāmi anāsavā.",
  "thi-ap8:19.1": "Svāgataṃ vata me āsi,",
  "thi-ap8:19.2": "…pe…",
  "thi-ap8:19.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap8:20.1": "Paṭisambhidā catasso,",
  "thi-ap8:20.2": "…pe…",
  "thi-ap8:20.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap8:21.1": "Itthaṃ sudaṃ sattuppalamālikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap8:22.1": "Sattuppalamālikātheriyāpadānaṃ aṭṭhamaṃ."
}