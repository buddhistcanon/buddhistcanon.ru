{
  "thi-ap6:0.1": "Therīapadāna",
  "thi-ap6:0.2": "Sumedhāvagga",
  "thi-ap6:0.3": "6. Ekapiṇḍapātadāyikātherīapadāna",
  "thi-ap6:1.1": "“Nagare bandhumatiyā,",
  "thi-ap6:1.2": "bandhumā nāma khattiyo;",
  "thi-ap6:1.3": "Tassa rañño ahuṃ bhariyā,",
  "thi-ap6:1.4": "ekajjhaṃ cārayāmahaṃ.",
  "thi-ap6:2.1": "Rahogatā nisīditvā,",
  "thi-ap6:2.2": "evaṃ cintesahaṃ tadā;",
  "thi-ap6:2.3": "‘Ādāya gamanīyaṃ hi,",
  "thi-ap6:2.4": "kusalaṃ natthi me kataṃ.",
  "thi-ap6:3.1": "Mahābhitāpaṃ kaṭukaṃ,",
  "thi-ap6:3.2": "ghorarūpaṃ sudāruṇaṃ;",
  "thi-ap6:3.3": "Nirayaṃ nūna gacchāmi,",
  "thi-ap6:3.4": "ettha me natthi saṃsayo’.",
  "thi-ap6:4.1": "Rājānaṃ upasaṅkamma,",
  "thi-ap6:4.2": "idaṃ vacanamabraviṃ;",
  "thi-ap6:4.3": "‘Ekaṃ me samaṇaṃ dehi,",
  "thi-ap6:4.4": "bhojayissāmi khattiya’.",
  "thi-ap6:5.1": "Adāsi me mahārājā,",
  "thi-ap6:5.2": "samaṇaṃ bhāvitindriyaṃ;",
  "thi-ap6:5.3": "Tassa pattaṃ gahetvāna,",
  "thi-ap6:5.4": "paramannena pūrayiṃ.",
  "thi-ap6:6.1": "Pūrayitvā paramannaṃ,",
  "thi-ap6:6.2": "gandhālepaṃ akāsahaṃ;",
  "thi-ap6:6.3": "Jālena pidahitvāna,",
  "thi-ap6:6.4": "vatthayugena chādayiṃ.",
  "thi-ap6:7.1": "Ārammaṇaṃ mamaṃ etaṃ,",
  "thi-ap6:7.2": "sarāmi yāvajīvihaṃ;",
  "thi-ap6:7.3": "Tattha cittaṃ pasādetvā,",
  "thi-ap6:7.4": "tāvatiṃsamagacchahaṃ.",
  "thi-ap6:8.1": "Tiṃsānaṃ devarājūnaṃ,",
  "thi-ap6:8.2": "mahesittamakārayiṃ;",
  "thi-ap6:8.3": "Manasā patthitaṃ mayhaṃ,",
  "thi-ap6:8.4": "nibbattati yathicchitaṃ.",
  "thi-ap6:9.1": "Vīsānaṃ cakkavattīnaṃ,",
  "thi-ap6:9.2": "mahesittamakārayiṃ;",
  "thi-ap6:9.3": "Ocitattāva hutvāna,",
  "thi-ap6:9.4": "saṃsarāmi bhavesvahaṃ.",
  "thi-ap6:10.1": "Sabbabandhanamuttāhaṃ,",
  "thi-ap6:10.2": "apetā me upādikā;",
  "thi-ap6:10.3": "Sabbāsavā parikkhīṇā,",
  "thi-ap6:10.4": "natthi dāni punabbhavo.",
  "thi-ap6:11.1": "Ekanavutito kappe,",
  "thi-ap6:11.2": "yaṃ dānamadadiṃ tadā;",
  "thi-ap6:11.3": "Duggatiṃ nābhijānāmi,",
  "thi-ap6:11.4": "piṇḍapātassidaṃ phalaṃ.",
  "thi-ap6:12.1": "Kilesā jhāpitā mayhaṃ,",
  "thi-ap6:12.2": "…pe…",
  "thi-ap6:12.3": "viharāmi anāsavā.",
  "thi-ap6:13.1": "Svāgataṃ vata me āsi,",
  "thi-ap6:13.2": "…pe…",
  "thi-ap6:13.3": "kataṃ buddhassa sāsanaṃ.",
  "thi-ap6:14.1": "Paṭisambhidā catasso,",
  "thi-ap6:14.2": "…pe…",
  "thi-ap6:14.3": "kataṃ buddhassa sāsanaṃ”.",
  "thi-ap6:15.1": "Itthaṃ sudaṃ ekapiṇḍapātadāyikā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap6:16.1": "Ekapiṇḍapātadāyikātheriyāpadānaṃ chaṭṭhaṃ."
}