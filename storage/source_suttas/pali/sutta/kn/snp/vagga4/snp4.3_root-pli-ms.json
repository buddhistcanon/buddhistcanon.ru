{
  "snp4.3:0.1": "Sutta Nipāta 4.3",
  "snp4.3:0.2": "Duṭṭhaṭṭhakasutta",
  "snp4.3:1.1": "Vadanti ve duṭṭhamanāpi eke,",
  "snp4.3:1.2": "Athopi ve saccamanā vadanti;",
  "snp4.3:1.3": "Vādañca jātaṃ muni no upeti,",
  "snp4.3:1.4": "Tasmā munī natthi khilo kuhiñci.",
  "snp4.3:2.1": "Sakañhi diṭṭhiṃ kathamaccayeyya,",
  "snp4.3:2.2": "Chandānunīto ruciyā niviṭṭho;",
  "snp4.3:2.3": "Sayaṃ samattāni pakubbamāno,",
  "snp4.3:2.4": "Yathā hi jāneyya tathā vadeyya.",
  "snp4.3:3.1": "Yo attano sīlavatāni jantu,",
  "snp4.3:3.2": "Anānupuṭṭhova paresa pāva;",
  "snp4.3:3.3": "Anariyadhammaṃ kusalā tamāhu,",
  "snp4.3:3.4": "Yo ātumānaṃ sayameva pāva.",
  "snp4.3:4.1": "Santo ca bhikkhu abhinibbutatto,",
  "snp4.3:4.2": "Itihanti sīlesu akatthamāno;",
  "snp4.3:4.3": "Tamariyadhammaṃ kusalā vadanti,",
  "snp4.3:4.4": "Yassussadā natthi kuhiñci loke.",
  "snp4.3:5.1": "Pakappitā saṅkhatā yassa dhammā,",
  "snp4.3:5.2": "Purakkhatā santi avīvadātā;",
  "snp4.3:5.3": "Yadattani passati ānisaṃsaṃ,",
  "snp4.3:5.4": "Taṃ nissito kuppapaṭiccasantiṃ.",
  "snp4.3:6.1": "Diṭṭhīnivesā na hi svātivattā,",
  "snp4.3:6.2": "Dhammesu niccheyya samuggahītaṃ;",
  "snp4.3:6.3": "Tasmā naro tesu nivesanesu,",
  "snp4.3:6.4": "Nirassatī ādiyatī ca dhammaṃ.",
  "snp4.3:7.1": "Dhonassa hi natthi kuhiñci loke,",
  "snp4.3:7.2": "Pakappitā diṭṭhi bhavābhavesu;",
  "snp4.3:7.3": "Māyañca mānañca pahāya dhono,",
  "snp4.3:7.4": "Sa kena gaccheyya anūpayo so.",
  "snp4.3:8.1": "Upayo hi dhammesu upeti vādaṃ,",
  "snp4.3:8.2": "Anūpayaṃ kena kathaṃ vadeyya;",
  "snp4.3:8.3": "Attā nirattā na hi tassa atthi,",
  "snp4.3:8.4": "Adhosi so diṭṭhimidheva sabbanti.",
  "snp4.3:8.5": "Duṭṭhaṭṭhakasuttaṃ tatiyaṃ."
}