{
  "snp4.13:0.1": "Sutta Nipāta 4.13",
  "snp4.13:0.2": "Mahābyūhasutta",
  "snp4.13:1.1": "“Ye kecime diṭṭhiparibbasānā,",
  "snp4.13:1.2": "Idameva saccanti vivādayanti;",
  "snp4.13:1.3": "Sabbeva te nindamanvānayanti,",
  "snp4.13:1.4": "Atho pasaṃsampi labhanti tattha”.",
  "snp4.13:2.1": "“Appañhi etaṃ na alaṃ samāya,",
  "snp4.13:2.2": "Duve vivādassa phalāni brūmi;",
  "snp4.13:2.3": "Etampi disvā na vivādayetha,",
  "snp4.13:2.4": "Khemābhipassaṃ avivādabhūmiṃ”.",
  "snp4.13:3.1": "“Yā kācimā sammutiyo puthujjā,",
  "snp4.13:3.2": "Sabbāva etā na upeti vidvā;",
  "snp4.13:3.3": "Anūpayo so upayaṃ kimeyya,",
  "snp4.13:3.4": "Diṭṭhe sute khantimakubbamāno”.",
  "snp4.13:4.1": "“Sīluttamā saññamenāhu suddhiṃ,",
  "snp4.13:4.2": "Vataṃ samādāya upaṭṭhitāse;",
  "snp4.13:4.3": "Idheva sikkhema athassa suddhiṃ,",
  "snp4.13:4.4": "Bhavūpanītā kusalāvadānā.",
  "snp4.13:5.1": "Sace cuto sīlavatato hoti,",
  "snp4.13:5.2": "Pavedhatī kamma virādhayitvā;",
  "snp4.13:5.3": "Pajappatī patthayatī ca suddhiṃ,",
  "snp4.13:5.4": "Satthāva hīno pavasaṃ gharamhā.",
  "snp4.13:6.1": "Sīlabbataṃ vāpi pahāya sabbaṃ,",
  "snp4.13:6.2": "Kammañca sāvajjanavajjametaṃ;",
  "snp4.13:6.3": "Suddhiṃ asuddhinti apatthayāno,",
  "snp4.13:6.4": "Virato care santimanuggahāya.",
  "snp4.13:7.1": "Tamūpanissāya jigucchitaṃ vā,",
  "snp4.13:7.2": "Atha vāpi diṭṭhaṃ va sutaṃ mutaṃ vā;",
  "snp4.13:7.3": "Uddhaṃsarā suddhimanutthunanti,",
  "snp4.13:7.4": "Avītataṇhāse bhavābhavesu.",
  "snp4.13:8.1": "Patthayamānassa hi jappitāni,",
  "snp4.13:8.2": "Pavedhitaṃ vāpi pakappitesu;",
  "snp4.13:8.3": "Cutūpapāto idha yassa natthi,",
  "snp4.13:8.4": "Sa kena vedheyya kuhiṃ va jappe”.",
  "snp4.13:9.1": "“Yamāhu dhammaṃ paramanti eke,",
  "snp4.13:9.2": "Tameva hīnanti panāhu aññe;",
  "snp4.13:9.3": "Sacco nu vādo katamo imesaṃ,",
  "snp4.13:9.4": "Sabbeva hīme kusalāvadānā”.",
  "snp4.13:10.1": "“Sakañhi dhammaṃ paripuṇṇamāhu,",
  "snp4.13:10.2": "Aññassa dhammaṃ pana hīnamāhu;",
  "snp4.13:10.3": "Evampi viggayha vivādayanti,",
  "snp4.13:10.4": "Sakaṃ sakaṃ sammutimāhu saccaṃ.",
  "snp4.13:11.1": "Parassa ce vambhayitena hīno,",
  "snp4.13:11.2": "Na koci dhammesu visesi assa;",
  "snp4.13:11.3": "Puthū hi aññassa vadanti dhammaṃ,",
  "snp4.13:11.4": "Nihīnato samhi daḷhaṃ vadānā.",
  "snp4.13:12.1": "Saddhammapūjāpi nesaṃ tatheva,",
  "snp4.13:12.2": "Yathā pasaṃsanti sakāyanāni;",
  "snp4.13:12.3": "Sabbeva vādā tathiyā bhaveyyuṃ,",
  "snp4.13:12.4": "Suddhī hi nesaṃ paccattameva.",
  "snp4.13:13.1": "Na brāhmaṇassa paraneyyamatthi,",
  "snp4.13:13.2": "Dhammesu niccheyya samuggahītaṃ;",
  "snp4.13:13.3": "Tasmā vivādāni upātivatto,",
  "snp4.13:13.4": "Na hi seṭṭhato passati dhammamaññaṃ.",
  "snp4.13:14.1": "Jānāmi passāmi tatheva etaṃ,",
  "snp4.13:14.2": "Diṭṭhiyā eke paccenti suddhiṃ;",
  "snp4.13:14.3": "Addakkhi ce kiñhi tumassa tena,",
  "snp4.13:14.4": "Atisitvā aññena vadanti suddhiṃ.",
  "snp4.13:15.1": "Passaṃ naro dakkhati nāmarūpaṃ,",
  "snp4.13:15.2": "Disvāna vā ñassati tānimeva;",
  "snp4.13:15.3": "Kāmaṃ bahuṃ passatu appakaṃ vā,",
  "snp4.13:15.4": "Na hi tena suddhiṃ kusalā vadanti.",
  "snp4.13:16.1": "Nivissavādī na hi subbināyo,",
  "snp4.13:16.2": "Pakappitaṃ diṭṭhi purakkharāno;",
  "snp4.13:16.3": "Yaṃ nissito tattha subhaṃ vadāno,",
  "snp4.13:16.4": "Suddhiṃ vado tattha tathaddasā so.",
  "snp4.13:17.1": "Na brāhmaṇo kappamupeti saṅkhā,",
  "snp4.13:17.2": "Na diṭṭhisārī napi ñāṇabandhu;",
  "snp4.13:17.3": "Ñatvā ca so sammutiyo puthujjā,",
  "snp4.13:17.4": "Upekkhatī uggahaṇanti maññe.",
  "snp4.13:18.1": "Vissajja ganthāni munīdha loke,",
  "snp4.13:18.2": "Vivādajātesu na vaggasārī;",
  "snp4.13:18.3": "Santo asantesu upekkhako so,",
  "snp4.13:18.4": "Anuggaho uggahaṇanti maññe.",
  "snp4.13:19.1": "Pubbāsave hitvā nave akubbaṃ,",
  "snp4.13:19.2": "Na chandagū nopi nivissavādī;",
  "snp4.13:19.3": "Sa vippamutto diṭṭhigatehi dhīro,",
  "snp4.13:19.4": "Na lippati loke anattagarahī.",
  "snp4.13:20.1": "Sa sabbadhammesu visenibhūto,",
  "snp4.13:20.2": "Yaṃ kiñci diṭṭhaṃ va sutaṃ mutaṃ vā;",
  "snp4.13:20.3": "Sa pannabhāro muni vippamutto,",
  "snp4.13:20.4": "Na kappiyo nūparato na patthiyo”ti.",
  "snp4.13:20.5": "Mahābyūhasuttaṃ terasamaṃ."
}