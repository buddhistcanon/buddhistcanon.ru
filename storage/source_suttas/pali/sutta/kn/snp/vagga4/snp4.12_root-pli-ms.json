{
  "snp4.12:0.1": "Sutta Nipāta 4.12",
  "snp4.12:0.2": "Cūḷabyūhasutta",
  "snp4.12:1.1": "“Sakaṃsakaṃdiṭṭhiparibbasānā,",
  "snp4.12:1.2": "Viggayha nānā kusalā vadanti;",
  "snp4.12:1.3": "Yo evaṃ jānāti sa vedi dhammaṃ,",
  "snp4.12:1.4": "Idaṃ paṭikkosamakevalī so.",
  "snp4.12:2.1": "Evampi viggayha vivādayanti,",
  "snp4.12:2.2": "Bālo paro akkusaloti cāhu;",
  "snp4.12:2.3": "Sacco nu vādo katamo imesaṃ,",
  "snp4.12:2.4": "Sabbeva hīme kusalāvadānā”.",
  "snp4.12:3.1": "“Parassa ce dhammamanānujānaṃ,",
  "snp4.12:3.2": "Bālomako hoti nihīnapañño;",
  "snp4.12:3.3": "Sabbeva bālā sunihīnapaññā,",
  "snp4.12:3.4": "Sabbevime diṭṭhiparibbasānā.",
  "snp4.12:4.1": "Sandiṭṭhiyā ceva na vīvadātā,",
  "snp4.12:4.2": "Saṃsuddhapaññā kusalā mutīmā;",
  "snp4.12:4.3": "Na tesaṃ koci parihīnapañño,",
  "snp4.12:4.4": "Diṭṭhī hi tesampi tathā samattā.",
  "snp4.12:5.1": "Na vāhametaṃ tathiyanti brūmi,",
  "snp4.12:5.2": "Yamāhu bālā mithu aññamaññaṃ;",
  "snp4.12:5.3": "Sakaṃ sakaṃ diṭṭhimakaṃsu saccaṃ,",
  "snp4.12:5.4": "Tasmā hi bāloti paraṃ dahanti”.",
  "snp4.12:6.1": "“Yamāhu saccaṃ tathiyanti eke,",
  "snp4.12:6.2": "Tamāhu aññe tucchaṃ musāti;",
  "snp4.12:6.3": "Evampi vigayha vivādayanti,",
  "snp4.12:6.4": "Kasmā na ekaṃ samaṇā vadanti”.",
  "snp4.12:7.1": "“Ekañhi saccaṃ na dutīyamatthi,",
  "snp4.12:7.2": "Yasmiṃ pajā no vivade pajānaṃ;",
  "snp4.12:7.3": "Nānā te saccāni sayaṃ thunanti,",
  "snp4.12:7.4": "Tasmā na ekaṃ samaṇā vadanti”.",
  "snp4.12:8.1": "“Kasmā nu saccāni vadanti nānā,",
  "snp4.12:8.2": "Pavādiyāse kusalāvadānā;",
  "snp4.12:8.3": "Saccāni sutāni bahūni nānā,",
  "snp4.12:8.4": "Udāhu te takkamanussaranti”.",
  "snp4.12:9.1": "“Na heva saccāni bahūni nānā,",
  "snp4.12:9.2": "Aññatra saññāya niccāni loke;",
  "snp4.12:9.3": "Takkañca diṭṭhīsu pakappayitvā,",
  "snp4.12:9.4": "Saccaṃ musāti dvayadhammamāhu.",
  "snp4.12:10.1": "Diṭṭhe sute sīlavate mute vā,",
  "snp4.12:10.2": "Ete ca nissāya vimānadassī;",
  "snp4.12:10.3": "Vinicchaye ṭhatvā pahassamāno,",
  "snp4.12:10.4": "Bālo paro akkusaloti cāha.",
  "snp4.12:11.1": "Yeneva bāloti paraṃ dahāti,",
  "snp4.12:11.2": "Tenātumānaṃ kusaloti cāha;",
  "snp4.12:11.3": "Sayamattanā so kusalāvadāno,",
  "snp4.12:11.4": "Aññaṃ vimāneti tadeva pāva.",
  "snp4.12:12.1": "Atisāradiṭṭhiyā so samatto,",
  "snp4.12:12.2": "Mānena matto paripuṇṇamānī;",
  "snp4.12:12.3": "Sayameva sāmaṃ manasābhisitto,",
  "snp4.12:12.4": "Diṭṭhī hi sā tassa tathā samattā.",
  "snp4.12:13.1": "Parassa ce hi vacasā nihīno,",
  "snp4.12:13.2": "Tumo sahā hoti nihīnapañño;",
  "snp4.12:13.3": "Atha ce sayaṃ vedagū hoti dhīro,",
  "snp4.12:13.4": "Na koci bālo samaṇesu atthi.",
  "snp4.12:14.1": "Aññaṃ ito yābhivadanti dhammaṃ,",
  "snp4.12:14.2": "Aparaddhā suddhimakevalī te;",
  "snp4.12:14.3": "Evampi titthyā puthuso vadanti,",
  "snp4.12:14.4": "Sandiṭṭhirāgena hi tebhirattā.",
  "snp4.12:15.1": "Idheva suddhiṃ iti vādayanti,",
  "snp4.12:15.2": "Nāññesu dhammesu visuddhimāhu;",
  "snp4.12:15.3": "Evampi titthyā puthuso niviṭṭhā,",
  "snp4.12:15.4": "Sakāyane tattha daḷhaṃ vadānā.",
  "snp4.12:16.1": "Sakāyane vāpi daḷhaṃ vadāno,",
  "snp4.12:16.2": "Kamettha bāloti paraṃ daheyya;",
  "snp4.12:16.3": "Sayaṃva so medhagamāvaheyya,",
  "snp4.12:16.4": "Paraṃ vadaṃ bālamasuddhidhammaṃ.",
  "snp4.12:17.1": "Vinicchaye ṭhatvā sayaṃ pamāya,",
  "snp4.12:17.2": "Uddhaṃsa lokasmiṃ vivādameti;",
  "snp4.12:17.3": "Hitvāna sabbāni vinicchayāni,",
  "snp4.12:17.4": "Na medhagaṃ kubbati jantu loke”ti.",
  "snp4.12:17.5": "Cūḷabyūhasuttaṃ dvādasamaṃ."
}