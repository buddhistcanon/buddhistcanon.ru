{
  "snp4.16:0.1": "Sutta Nipāta 4.16",
  "snp4.16:0.2": "Sāriputtasutta",
  "snp4.16:1.1": "“Na me diṭṭho ito pubbe,",
  "snp4.16:1.2": "Na suto uda kassaci;",
  "snp4.16:1.3": "Evaṃ vagguvado satthā,",
  "snp4.16:1.4": "Tusitā gaṇimāgato.",
  "snp4.16:2.1": "Sadevakassa lokassa,",
  "snp4.16:2.2": "yathā dissati cakkhumā;",
  "snp4.16:2.3": "Sabbaṃ tamaṃ vinodetvā,",
  "snp4.16:2.4": "ekova ratimajjhagā.",
  "snp4.16:3.1": "Taṃ buddhaṃ asitaṃ tādiṃ,",
  "snp4.16:3.2": "akuhaṃ gaṇimāgataṃ;",
  "snp4.16:3.3": "Bahūnamidha baddhānaṃ,",
  "snp4.16:3.4": "atthi pañhena āgamaṃ.",
  "snp4.16:4.1": "Bhikkhuno vijigucchato,",
  "snp4.16:4.2": "bhajato rittamāsanaṃ;",
  "snp4.16:4.3": "Rukkhamūlaṃ susānaṃ vā,",
  "snp4.16:4.4": "pabbatānaṃ guhāsu vā.",
  "snp4.16:5.1": "Uccāvacesu sayanesu,",
  "snp4.16:5.2": "kīvanto tattha bheravā;",
  "snp4.16:5.3": "Yehi bhikkhu na vedheyya,",
  "snp4.16:5.4": "nigghose sayanāsane.",
  "snp4.16:6.1": "Katī parissayā loke,",
  "snp4.16:6.2": "gacchato agataṃ disaṃ;",
  "snp4.16:6.3": "Ye bhikkhu abhisambhave,",
  "snp4.16:6.4": "pantamhi sayanāsane.",
  "snp4.16:7.1": "Kyāssa byappathayo assu,",
  "snp4.16:7.2": "kyāssassu idha gocarā;",
  "snp4.16:7.3": "Kāni sīlabbatānāssu,",
  "snp4.16:7.4": "pahitattassa bhikkhuno.",
  "snp4.16:8.1": "Kaṃ so sikkhaṃ samādāya,",
  "snp4.16:8.2": "ekodi nipako sato;",
  "snp4.16:8.3": "Kammāro rajatasseva,",
  "snp4.16:8.4": "niddhame malamattano”.",
  "snp4.16:9.1": "“Vijigucchamānassa yadidaṃ phāsu,",
  "snp4.16:9.2": "Rittāsanaṃ sayanaṃ sevato ce;",
  "snp4.16:9.3": "Sambodhikāmassa yathānudhammaṃ,",
  "snp4.16:9.4": "Taṃ te pavakkhāmi yathā pajānaṃ.",
  "snp4.16:10.1": "Pañcannaṃ dhīro bhayānaṃ na bhāye,",
  "snp4.16:10.2": "Bhikkhu sato sapariyantacārī;",
  "snp4.16:10.3": "Ḍaṃsādhipātānaṃ sarīsapānaṃ,",
  "snp4.16:10.4": "Manussaphassānaṃ catuppadānaṃ.",
  "snp4.16:11.1": "Paradhammikānampi na santaseyya,",
  "snp4.16:11.2": "Disvāpi tesaṃ bahubheravāni;",
  "snp4.16:11.3": "Athāparāni abhisambhaveyya,",
  "snp4.16:11.4": "Parissayāni kusalānuesī.",
  "snp4.16:12.1": "Ātaṅkaphassena khudāya phuṭṭho,",
  "snp4.16:12.2": "Sītaṃ athuṇhaṃ adhivāsayeyya;",
  "snp4.16:12.3": "So tehi phuṭṭho bahudhā anoko,",
  "snp4.16:12.4": "Viriyaṃ parakkammadaḷhaṃ kareyya.",
  "snp4.16:13.1": "Theyyaṃ na kāre na musā bhaṇeyya,",
  "snp4.16:13.2": "Mettāya phasse tasathāvarāni;",
  "snp4.16:13.3": "Yadāvilattaṃ manaso vijaññā,",
  "snp4.16:13.4": "Kaṇhassa pakkhoti vinodayeyya.",
  "snp4.16:14.1": "Kodhātimānassa vasaṃ na gacche,",
  "snp4.16:14.2": "Mūlampi tesaṃ palikhañña tiṭṭhe;",
  "snp4.16:14.3": "Athappiyaṃ vā pana appiyaṃ vā,",
  "snp4.16:14.4": "Addhā bhavanto abhisambhaveyya.",
  "snp4.16:15.1": "Paññaṃ purakkhatvā kalyāṇapīti,",
  "snp4.16:15.2": "Vikkhambhaye tāni parissayāni;",
  "snp4.16:15.3": "Aratiṃ sahetha sayanamhi pante,",
  "snp4.16:15.4": "Caturo sahetha paridevadhamme.",
  "snp4.16:16.1": "Kiṃsū asissāmi kuva vā asissaṃ,",
  "snp4.16:16.2": "Dukkhaṃ vata settha kvajja sessaṃ;",
  "snp4.16:16.3": "Ete vitakke paridevaneyye,",
  "snp4.16:16.4": "Vinayetha sekho aniketacārī.",
  "snp4.16:17.1": "Annañca laddhā vasanañca kāle,",
  "snp4.16:17.2": "Mattaṃ so jaññā idha tosanatthaṃ;",
  "snp4.16:17.3": "So tesu gutto yatacāri gāme,",
  "snp4.16:17.4": "Rusitopi vācaṃ pharusaṃ na vajjā.",
  "snp4.16:18.1": "Okkhittacakkhu na ca pādalolo,",
  "snp4.16:18.2": "Jhānānuyutto bahujāgarassa;",
  "snp4.16:18.3": "Upekkhamārabbha samāhitatto,",
  "snp4.16:18.4": "Takkāsayaṃ kukkucciyūpachinde.",
  "snp4.16:19.1": "Cudito vacībhi satimābhinande,",
  "snp4.16:19.2": "Sabrahmacārīsu khilaṃ pabhinde;",
  "snp4.16:19.3": "Vācaṃ pamuñce kusalaṃ nātivelaṃ,",
  "snp4.16:19.4": "Janavādadhammāya na cetayeyya.",
  "snp4.16:20.1": "Athāparaṃ pañca rajāni loke,",
  "snp4.16:20.2": "Yesaṃ satīmā vinayāya sikkhe;",
  "snp4.16:20.3": "Rūpesu saddesu atho rasesu,",
  "snp4.16:20.4": "Gandhesu phassesu sahetha rāgaṃ.",
  "snp4.16:21.1": "Etesu dhammesu vineyya chandaṃ,",
  "snp4.16:21.2": "Bhikkhu satimā suvimuttacitto;",
  "snp4.16:21.3": "Kālena so sammā dhammaṃ parivīmaṃsamāno,",
  "snp4.16:21.4": "Ekodibhūto vihane tamaṃ so”ti.",
  "snp4.16:21.5": "Sāriputtasuttaṃ soḷasamaṃ.",
  "snp4.16:21.6": "Aṭṭhakavaggo catuttho.",
  "snp4.16:22.1": "Kāmaṃ guhañca duṭṭhā ca,",
  "snp4.16:22.2": "suddhañca paramā jarā;",
  "snp4.16:22.3": "Metteyyo ca pasūro ca,",
  "snp4.16:22.4": "māgaṇḍi purābhedanaṃ.",
  "snp4.16:23.1": "Kalahaṃ dve ca byūhāni,",
  "snp4.16:23.2": "punadeva tuvaṭṭakaṃ;",
  "snp4.16:23.3": "Attadaṇḍavaraṃ suttaṃ,",
  "snp4.16:23.4": "therapuṭṭhena soḷasa;",
  "snp4.16:23.5": "Iti etāni suttāni,",
  "snp4.16:23.6": "sabbānaṭṭhakavaggikāti."
}