{
  "snp5.13:0.1": "Sutta Nipāta 5.13",
  "snp5.13:0.2": "Bhadrāvudhamāṇavapucchā",
  "snp5.13:1.1": "“Okañjahaṃ taṇhacchidaṃ anejaṃ,",
  "snp5.13:1.2": "Nandiñjahaṃ oghatiṇṇaṃ vimuttaṃ;",
  "snp5.13:1.3": "Kappañjahaṃ abhiyāce sumedhaṃ,",
  "snp5.13:1.4": "Sutvāna nāgassa apanamissanti ito.",
  "snp5.13:2.1": "Nānājanā janapadehi saṅgatā,",
  "snp5.13:2.2": "Tava vīra vākyaṃ abhikaṅkhamānā;",
  "snp5.13:2.3": "Tesaṃ tuvaṃ sādhu viyākarohi,",
  "snp5.13:2.4": "Tathā hi te vidito esa dhammo”.",
  "snp5.13:3.1": "“Ādānataṇhaṃ vinayetha sabbaṃ,",
  "snp5.13:3.2": "Uddhaṃ adho tiriyañcāpi majjhe;",
  "snp5.13:3.3": "Yaṃ yañhi lokasmimupādiyanti,",
  "snp5.13:3.4": "Teneva māro anveti jantuṃ.",
  "snp5.13:4.1": "Tasmā pajānaṃ na upādiyetha,",
  "snp5.13:4.2": "Bhikkhu sato kiñcanaṃ sabbaloke;",
  "snp5.13:4.3": "Ādānasatte iti pekkhamāno,",
  "snp5.13:4.4": "Pajaṃ imaṃ maccudheyye visattan”ti.",
  "snp5.13:4.5": "Bhadrāvudhamāṇavapucchā dvādasamā."
}