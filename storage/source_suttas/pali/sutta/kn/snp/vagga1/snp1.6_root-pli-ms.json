{
  "snp1.6:0.1": "Sutta Nipāta 1.6",
  "snp1.6:0.2": "Parābhavasutta",
  "snp1.6:1.1": "Evaṃ me sutaṃ—",
  "snp1.6:1.2": " ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp1.6:1.3": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi.",
  "snp1.6:1.4": "Ekamantaṃ ṭhitā kho sā devatā bhagavantaṃ gāthāya ajjhabhāsi:",
  "snp1.6:2.1": "“Parābhavantaṃ purisaṃ,",
  "snp1.6:2.2": "mayaṃ pucchāma gotama;",
  "snp1.6:2.3": "Bhavantaṃ puṭṭhumāgamma,",
  "snp1.6:2.4": "kiṃ parābhavato mukhaṃ”.",
  "snp1.6:3.1": "“Suvijāno bhavaṃ hoti,",
  "snp1.6:3.2": "suvijāno parābhavo;",
  "snp1.6:3.3": "Dhammakāmo bhavaṃ hoti,",
  "snp1.6:3.4": "dhammadessī parābhavo”.",
  "snp1.6:4.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:4.2": "paṭhamo so parābhavo;",
  "snp1.6:4.3": "Dutiyaṃ bhagavā brūhi,",
  "snp1.6:4.4": "kiṃ parābhavato mukhaṃ”.",
  "snp1.6:5.1": "“Asantassa piyā honti,",
  "snp1.6:5.2": "sante na kurute piyaṃ;",
  "snp1.6:5.3": "Asataṃ dhammaṃ roceti,",
  "snp1.6:5.4": "taṃ parābhavato mukhaṃ”.",
  "snp1.6:6.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:6.2": "dutiyo so parābhavo;",
  "snp1.6:6.3": "Tatiyaṃ bhagavā brūhi,",
  "snp1.6:6.4": "kiṃ parābhavato mukhaṃ”.",
  "snp1.6:7.1": "“Niddāsīlī sabhāsīlī,",
  "snp1.6:7.2": "anuṭṭhātā ca yo naro;",
  "snp1.6:7.3": "Alaso kodhapaññāṇo,",
  "snp1.6:7.4": "taṃ parābhavato mukhaṃ”.",
  "snp1.6:8.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:8.2": "tatiyo so parābhavo;",
  "snp1.6:8.3": "Catutthaṃ bhagavā brūhi,",
  "snp1.6:8.4": "kiṃ parābhavato mukhaṃ”.",
  "snp1.6:9.1": "“Yo mātaraṃ pitaraṃ vā,",
  "snp1.6:9.2": "jiṇṇakaṃ gatayobbanaṃ;",
  "snp1.6:9.3": "Pahu santo na bharati,",
  "snp1.6:9.4": "taṃ parābhavato mukhaṃ”.",
  "snp1.6:10.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:10.2": "catuttho so parābhavo;",
  "snp1.6:10.3": "Pañcamaṃ bhagavā brūhi,",
  "snp1.6:10.4": "kiṃ parābhavato mukhaṃ”.",
  "snp1.6:11.1": "“Yo brāhmaṇaṃ samaṇaṃ vā,",
  "snp1.6:11.2": "Aññaṃ vāpi vanibbakaṃ;",
  "snp1.6:11.3": "Musāvādena vañceti,",
  "snp1.6:11.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:12.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:12.2": "Pañcamo so parābhavo;",
  "snp1.6:12.3": "Chaṭṭhamaṃ bhagavā brūhi,",
  "snp1.6:12.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:13.1": "“Pahūtavitto puriso,",
  "snp1.6:13.2": "Sahirañño sabhojano;",
  "snp1.6:13.3": "Eko bhuñjati sādūni,",
  "snp1.6:13.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:14.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:14.2": "Chaṭṭhamo so parābhavo;",
  "snp1.6:14.3": "Sattamaṃ bhagavā brūhi,",
  "snp1.6:14.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:15.1": "“Jātitthaddho dhanatthaddho,",
  "snp1.6:15.2": "Gottatthaddho ca yo naro;",
  "snp1.6:15.3": "Saññātiṃ atimaññeti,",
  "snp1.6:15.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:16.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:16.2": "Sattamo so parābhavo;",
  "snp1.6:16.3": "Aṭṭhamaṃ bhagavā brūhi,",
  "snp1.6:16.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:17.1": "“Itthidhutto surādhutto,",
  "snp1.6:17.2": "Akkhadhutto ca yo naro;",
  "snp1.6:17.3": "Laddhaṃ laddhaṃ vināseti,",
  "snp1.6:17.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:18.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:18.2": "Aṭṭhamo so parābhavo;",
  "snp1.6:18.3": "Navamaṃ bhagavā brūhi,",
  "snp1.6:18.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:19.1": "“Sehi dārehi asantuṭṭho,",
  "snp1.6:19.2": "Vesiyāsu padussati;",
  "snp1.6:19.3": "Dussati paradāresu,",
  "snp1.6:19.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:20.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:20.2": "Navamo so parābhavo;",
  "snp1.6:20.3": "Dasamaṃ bhagavā brūhi,",
  "snp1.6:20.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:21.1": "“Atītayobbano poso,",
  "snp1.6:21.2": "Āneti timbarutthaniṃ;",
  "snp1.6:21.3": "Tassā issā na supati,",
  "snp1.6:21.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:22.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:22.2": "Dasamo so parābhavo;",
  "snp1.6:22.3": "Ekādasamaṃ bhagavā brūhi,",
  "snp1.6:22.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:23.1": "“Itthiṃ soṇḍiṃ vikiraṇiṃ,",
  "snp1.6:23.2": "Purisaṃ vāpi tādisaṃ;",
  "snp1.6:23.3": "Issariyasmiṃ ṭhapeti,",
  "snp1.6:23.4": "Taṃ parābhavato mukhaṃ”.",
  "snp1.6:24.1": "“Iti hetaṃ vijānāma,",
  "snp1.6:24.2": "Ekādasamo so parābhavo;",
  "snp1.6:24.3": "Dvādasamaṃ bhagavā brūhi,",
  "snp1.6:24.4": "Kiṃ parābhavato mukhaṃ”.",
  "snp1.6:25.1": "“Appabhogo mahātaṇho,",
  "snp1.6:25.2": "Khattiye jāyate kule;",
  "snp1.6:25.3": "So ca rajjaṃ patthayati,",
  "snp1.6:25.4": "Taṃ parābhavato mukhaṃ.",
  "snp1.6:26.1": "Ete parābhave loke,",
  "snp1.6:26.2": "Paṇḍito samavekkhiya;",
  "snp1.6:26.3": "Ariyo dassanasampanno,",
  "snp1.6:26.4": "Sa lokaṃ bhajate sivan”ti.",
  "snp1.6:26.5": "Parābhavasuttaṃ chaṭṭhaṃ."
}