{
  "snp1.10:0.1": "Sutta Nipāta 1.10",
  "snp1.10:0.2": "Āḷavakasutta",
  "snp1.10:1.1": "Evaṃ me sutaṃ—",
  "snp1.10:1.2": " ekaṃ samayaṃ bhagavā āḷaviyaṃ viharati āḷavakassa yakkhassa bhavane.",
  "snp1.10:1.3": "Atha kho āḷavako yakkho yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ etadavoca:",
  "snp1.10:1.4": "“nikkhama, samaṇā”ti.",
  "snp1.10:1.5": "“Sādhāvuso”ti bhagavā nikkhami.",
  "snp1.10:1.6": "“Pavisa, samaṇā”ti.",
  "snp1.10:1.7": "“Sādhāvuso”ti bhagavā pāvisi.",
  "snp1.10:2.1": "Dutiyampi kho …pe…",
  "snp1.10:2.2": "tatiyampi kho āḷavako yakkho bhagavantaṃ etadavoca:",
  "snp1.10:2.3": "“nikkhama, samaṇā”ti.",
  "snp1.10:2.4": "“Sādhāvuso”ti bhagavā nikkhami.",
  "snp1.10:2.5": "“Pavisa, samaṇā”ti.",
  "snp1.10:2.6": "“Sādhāvuso”ti bhagavā pāvisi.",
  "snp1.10:3.1": "Catutthampi kho āḷavako yakkho bhagavantaṃ etadavoca:",
  "snp1.10:3.2": "“nikkhama, samaṇā”ti.",
  "snp1.10:3.3": "“Na khvāhaṃ taṃ, āvuso, nikkhamissāmi.",
  "snp1.10:3.4": "Yaṃ te karaṇīyaṃ, taṃ karohī”ti.",
  "snp1.10:4.1": "“Pañhaṃ taṃ, samaṇa, pucchissāmi.",
  "snp1.10:4.2": "Sace me na byākarissasi, cittaṃ vā te khipissāmi, hadayaṃ vā te phālessāmi, pādesu vā gahetvā pāragaṅgāya khipissāmī”ti.",
  "snp1.10:5.1": "“Na khvāhaṃ taṃ, āvuso, passāmi sadevake loke samārake sabrahmake sassamaṇabrāhmaṇiyā pajāya sadevamanussāya yo me cittaṃ vā khipeyya hadayaṃ vā phāleyya pādesu vā gahetvā pāragaṅgāya khipeyya.",
  "snp1.10:5.2": "Api ca tvaṃ, āvuso, puccha yadākaṅkhasī”ti.",
  "snp1.10:5.3": "Atha kho āḷavako yakkho bhagavantaṃ gāthāya ajjhabhāsi:",
  "snp1.10:6.1": "“Kiṃ sūdha vittaṃ purisassa seṭṭhaṃ,",
  "snp1.10:6.2": "Kiṃ su suciṇṇaṃ sukhamāvahāti;",
  "snp1.10:6.3": "Kiṃ su have sādutaraṃ rasānaṃ,",
  "snp1.10:6.4": "Kathaṃjīviṃ jīvitamāhu seṭṭhaṃ”.",
  "snp1.10:7.1": "“Saddhīdha vittaṃ purisassa seṭṭhaṃ,",
  "snp1.10:7.2": "Dhammo suciṇṇo sukhamāvahāti;",
  "snp1.10:7.3": "Saccaṃ have sādutaraṃ rasānaṃ,",
  "snp1.10:7.4": "Paññājīviṃ jīvitamāhu seṭṭhaṃ”.",
  "snp1.10:8.1": "“Kathaṃ su tarati oghaṃ,",
  "snp1.10:8.2": "kathaṃ su tarati aṇṇavaṃ;",
  "snp1.10:8.3": "Kathaṃ su dukkhamacceti,",
  "snp1.10:8.4": "kathaṃ su parisujjhati”.",
  "snp1.10:9.1": "“Saddhāya tarati oghaṃ,",
  "snp1.10:9.2": "appamādena aṇṇavaṃ;",
  "snp1.10:9.3": "Vīriyena dukkhamacceti,",
  "snp1.10:9.4": "paññāya parisujjhati”.",
  "snp1.10:10.1": "“Kathaṃ su labhate paññaṃ,",
  "snp1.10:10.2": "kathaṃ su vindate dhanaṃ;",
  "snp1.10:10.3": "Kathaṃ su kittiṃ pappoti,",
  "snp1.10:10.4": "kathaṃ mittāni ganthati;",
  "snp1.10:10.5": "Asmā lokā paraṃ lokaṃ,",
  "snp1.10:10.6": "kathaṃ pecca na socati”.",
  "snp1.10:11.1": "“Saddahāno arahataṃ,",
  "snp1.10:11.2": "dhammaṃ nibbānapattiyā;",
  "snp1.10:11.3": "Sussūsaṃ labhate paññaṃ,",
  "snp1.10:11.4": "appamatto vicakkhaṇo.",
  "snp1.10:12.1": "Patirūpakārī dhuravā,",
  "snp1.10:12.2": "uṭṭhātā vindate dhanaṃ;",
  "snp1.10:12.3": "Saccena kittiṃ pappoti,",
  "snp1.10:12.4": "dadaṃ mittāni ganthati.",
  "snp1.10:13.1": "Yassete caturo dhammā,",
  "snp1.10:13.2": "saddhassa gharamesino;",
  "snp1.10:13.3": "Saccaṃ dhammo dhiti cāgo,",
  "snp1.10:13.4": "sa ve pecca na socati.",
  "snp1.10:14.1": "Iṅgha aññepi pucchassu,",
  "snp1.10:14.2": "puthū samaṇabrāhmaṇe;",
  "snp1.10:14.3": "Yadi saccā damā cāgā,",
  "snp1.10:14.4": "khantyā bhiyyodha vijjati”.",
  "snp1.10:15.1": "“Kathaṃ nu dāni puccheyyaṃ,",
  "snp1.10:15.2": "Puthū samaṇabrāhmaṇe;",
  "snp1.10:15.3": "Yohaṃ ajja pajānāmi,",
  "snp1.10:15.4": "Yo attho samparāyiko.",
  "snp1.10:16.1": "Atthāya vata me buddho,",
  "snp1.10:16.2": "Vāsāyāḷavimāgamā;",
  "snp1.10:16.3": "Yohaṃ ajja pajānāmi,",
  "snp1.10:16.4": "Yattha dinnaṃ mahapphalaṃ.",
  "snp1.10:17.1": "So ahaṃ vicarissāmi,",
  "snp1.10:17.2": "Gāmā gāmaṃ purā puraṃ;",
  "snp1.10:17.3": "Namassamāno sambuddhaṃ,",
  "snp1.10:17.4": "Dhammassa ca sudhammatan”ti.",
  "snp1.10:17.5": "Āḷavakasuttaṃ dasamaṃ."
}