{
  "snp1.7:0.1": "Sutta Nipāta 1.7",
  "snp1.7:0.2": "Vasalasutta",
  "snp1.7:1.1": "Evaṃ me sutaṃ—",
  "snp1.7:1.2": " ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp1.7:1.3": "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya sāvatthiṃ piṇḍāya pāvisi.",
  "snp1.7:1.4": "Tena kho pana samayena aggikabhāradvājassa brāhmaṇassa nivesane aggi pajjalito hoti āhuti paggahitā.",
  "snp1.7:1.5": "Atha kho bhagavā sāvatthiyaṃ sapadānaṃ piṇḍāya caramāno yena aggikabhāradvājassa brāhmaṇassa nivesanaṃ tenupasaṅkami.",
  "snp1.7:2.1": "Addasā kho aggikabhāradvājo brāhmaṇo bhagavantaṃ dūratova āgacchantaṃ.",
  "snp1.7:2.2": "Disvāna bhagavantaṃ etadavoca:",
  "snp1.7:2.3": "“tatreva, muṇḍaka;",
  "snp1.7:2.4": "tatreva, samaṇaka;",
  "snp1.7:2.5": "tatreva, vasalaka, tiṭṭhāhī”ti.",
  "snp1.7:3.1": "Evaṃ vutte, bhagavā aggikabhāradvājaṃ brāhmaṇaṃ etadavoca:",
  "snp1.7:3.2": "“jānāsi pana tvaṃ, brāhmaṇa, vasalaṃ vā vasalakaraṇe vā dhamme”ti?",
  "snp1.7:3.3": "“Na khvāhaṃ, bho gotama, jānāmi vasalaṃ vā vasalakaraṇe vā dhamme;",
  "snp1.7:3.4": "sādhu me bhavaṃ gotamo tathā dhammaṃ desetu, yathāhaṃ jāneyyaṃ vasalaṃ vā vasalakaraṇe vā dhamme”ti.",
  "snp1.7:3.5": "“Tena hi, brāhmaṇa, suṇāhi, sādhukaṃ manasi karohi; bhāsissāmī”ti.",
  "snp1.7:3.6": "“Evaṃ, bho”ti kho aggikabhāradvājo brāhmaṇo bhagavato paccassosi.",
  "snp1.7:3.7": "Bhagavā etadavoca:",
  "snp1.7:4.1": "“Kodhano upanāhī ca,",
  "snp1.7:4.2": "pāpamakkhī ca yo naro;",
  "snp1.7:4.3": "Vipannadiṭṭhi māyāvī,",
  "snp1.7:4.4": "taṃ jaññā vasalo iti.",
  "snp1.7:5.1": "Ekajaṃ vā dvijaṃ vāpi,",
  "snp1.7:5.2": "yodha pāṇaṃ vihiṃsati;",
  "snp1.7:5.3": "Yassa pāṇe dayā natthi,",
  "snp1.7:5.4": "taṃ jaññā vasalo iti.",
  "snp1.7:6.1": "Yo hanti parirundhati,",
  "snp1.7:6.2": "gāmāni nigamāni ca;",
  "snp1.7:6.3": "Niggāhako samaññāto,",
  "snp1.7:6.4": "taṃ jaññā vasalo iti.",
  "snp1.7:7.1": "Gāme vā yadi vā raññe,",
  "snp1.7:7.2": "yaṃ paresaṃ mamāyitaṃ;",
  "snp1.7:7.3": "Theyyā adinnamādeti,",
  "snp1.7:7.4": "taṃ jaññā vasalo iti.",
  "snp1.7:8.1": "Yo have iṇamādāya,",
  "snp1.7:8.2": "cujjamāno palāyati;",
  "snp1.7:8.3": "Na hi te iṇamatthīti,",
  "snp1.7:8.4": "taṃ jaññā vasalo iti.",
  "snp1.7:9.1": "Yo ve kiñcikkhakamyatā,",
  "snp1.7:9.2": "panthasmiṃ vajantaṃ janaṃ;",
  "snp1.7:9.3": "Hantvā kiñcikkhamādeti,",
  "snp1.7:9.4": "taṃ jaññā vasalo iti.",
  "snp1.7:10.1": "Attahetu parahetu,",
  "snp1.7:10.2": "dhanahetu ca yo naro;",
  "snp1.7:10.3": "Sakkhipuṭṭho musā brūti,",
  "snp1.7:10.4": "taṃ jaññā vasalo iti.",
  "snp1.7:11.1": "Yo ñātīnaṃ sakhīnaṃ vā,",
  "snp1.7:11.2": "dāresu paṭidissati;",
  "snp1.7:11.3": "Sāhasā sampiyena vā,",
  "snp1.7:11.4": "taṃ jaññā vasalo iti.",
  "snp1.7:12.1": "Yo mātaraṃ pitaraṃ vā,",
  "snp1.7:12.2": "jiṇṇakaṃ gatayobbanaṃ;",
  "snp1.7:12.3": "Pahu santo na bharati,",
  "snp1.7:12.4": "taṃ jaññā vasalo iti.",
  "snp1.7:13.1": "Yo mātaraṃ pitaraṃ vā,",
  "snp1.7:13.2": "Bhātaraṃ bhaginiṃ sasuṃ;",
  "snp1.7:13.3": "Hanti roseti vācāya,",
  "snp1.7:13.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:14.1": "Yo atthaṃ pucchito santo,",
  "snp1.7:14.2": "Anatthamanusāsati;",
  "snp1.7:14.3": "Paṭicchannena manteti,",
  "snp1.7:14.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:15.1": "Yo katvā pāpakaṃ kammaṃ,",
  "snp1.7:15.2": "Mā maṃ jaññāti icchati;",
  "snp1.7:15.3": "Yo paṭicchannakammanto,",
  "snp1.7:15.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:16.1": "Yo ve parakulaṃ gantvā,",
  "snp1.7:16.2": "Bhutvāna sucibhojanaṃ;",
  "snp1.7:16.3": "Āgataṃ nappaṭipūjeti,",
  "snp1.7:16.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:17.1": "Yo brāhmaṇaṃ samaṇaṃ vā,",
  "snp1.7:17.2": "Aññaṃ vāpi vanibbakaṃ;",
  "snp1.7:17.3": "Musāvādena vañceti,",
  "snp1.7:17.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:18.1": "Yo brāhmaṇaṃ samaṇaṃ vā,",
  "snp1.7:18.2": "Bhattakāle upaṭṭhite;",
  "snp1.7:18.3": "Roseti vācā na ca deti,",
  "snp1.7:18.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:19.1": "Asataṃ yodha pabrūti,",
  "snp1.7:19.2": "Mohena paliguṇṭhito;",
  "snp1.7:19.3": "Kiñcikkhaṃ nijigīsāno,",
  "snp1.7:19.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:20.1": "Yo cattānaṃ samukkaṃse,",
  "snp1.7:20.2": "Pare ca mavajānāti;",
  "snp1.7:20.3": "Nihīno sena mānena,",
  "snp1.7:20.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:21.1": "Rosako kadariyo ca,",
  "snp1.7:21.2": "Pāpiccho maccharī saṭho;",
  "snp1.7:21.3": "Ahiriko anottappī,",
  "snp1.7:21.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:22.1": "Yo buddhaṃ paribhāsati,",
  "snp1.7:22.2": "Atha vā tassa sāvakaṃ;",
  "snp1.7:22.3": "Paribbājaṃ gahaṭṭhaṃ vā,",
  "snp1.7:22.4": "Taṃ jaññā vasalo iti.",
  "snp1.7:23.1": "Yo ve anarahaṃ santo,",
  "snp1.7:23.2": "Arahaṃ paṭijānāti;",
  "snp1.7:23.3": "Coro sabrahmake loke,",
  "snp1.7:23.4": "Eso kho vasalādhamo;",
  "snp1.7:23.5": "Ete kho vasalā vuttā,",
  "snp1.7:23.6": "Mayā yete pakāsitā.",
  "snp1.7:24.1": "Na jaccā vasalo hoti,",
  "snp1.7:24.2": "Na jaccā hoti brāhmaṇo;",
  "snp1.7:24.3": "Kammunā vasalo hoti,",
  "snp1.7:24.4": "Kammunā hoti brāhmaṇo.",
  "snp1.7:25.1": "Tadamināpi jānātha,",
  "snp1.7:25.2": "Yathāmedaṃ nidassanaṃ;",
  "snp1.7:25.3": "Caṇḍālaputto sopāko,",
  "snp1.7:25.4": "Mātaṅgo iti vissuto.",
  "snp1.7:26.1": "So yasaṃ paramaṃ patto,",
  "snp1.7:26.2": "Mātaṅgo yaṃ sudullabhaṃ;",
  "snp1.7:26.3": "Āgacchuṃ tassupaṭṭhānaṃ,",
  "snp1.7:26.4": "Khattiyā brāhmaṇā bahū.",
  "snp1.7:27.1": "Devayānaṃ abhiruyha,",
  "snp1.7:27.2": "Virajaṃ so mahāpathaṃ;",
  "snp1.7:27.3": "Kāmarāgaṃ virājetvā,",
  "snp1.7:27.4": "Brahmalokūpago ahu;",
  "snp1.7:27.5": "Na naṃ jāti nivāresi,",
  "snp1.7:27.6": "Brahmalokūpapattiyā.",
  "snp1.7:28.1": "Ajjhāyakakule jātā,",
  "snp1.7:28.2": "Brāhmaṇā mantabandhavā;",
  "snp1.7:28.3": "Te ca pāpesu kammesu,",
  "snp1.7:28.4": "Abhiṇhamupadissare.",
  "snp1.7:29.1": "Diṭṭheva dhamme gārayhā,",
  "snp1.7:29.2": "Samparāye ca duggati;",
  "snp1.7:29.3": "Na ne jāti nivāreti,",
  "snp1.7:29.4": "Duggatyā garahāya vā.",
  "snp1.7:30.1": "Na jaccā vasalo hoti,",
  "snp1.7:30.2": "Na jaccā hoti brāhmaṇo;",
  "snp1.7:30.3": "Kammunā vasalo hoti,",
  "snp1.7:30.4": "Kammunā hoti brāhmaṇo”ti.",
  "snp1.7:31.1": "Evaṃ vutte, aggikabhāradvājo brāhmaṇo bhagavantaṃ etadavoca:",
  "snp1.7:31.2": "“abhikkantaṃ, bho gotama …pe…",
  "snp1.7:31.3": "upāsakaṃ maṃ bhavaṃ gotamo dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti.",
  "snp1.7:31.4": "Vasalasuttaṃ sattamaṃ."
}