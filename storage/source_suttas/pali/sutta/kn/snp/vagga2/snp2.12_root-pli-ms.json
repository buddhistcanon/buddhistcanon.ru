{
  "snp2.12:0.1": "Sutta Nipāta 2.12",
  "snp2.12:0.2": "Nigrodhakappa (vaṅgīsa) sutta",
  "snp2.12:1.1": "Evaṃ me sutaṃ—",
  "snp2.12:1.2": " ekaṃ samayaṃ bhagavā āḷaviyaṃ viharati aggāḷave cetiye.",
  "snp2.12:1.3": "Tena kho panasamayena āyasmato vaṅgīsassa upajjhāyo nigrodhakappo nāma thero aggāḷave cetiyeaciraparinibbuto hoti.",
  "snp2.12:1.4": "Atha kho āyasmato vaṅgīsassa rahogatassa paṭisallīnassaevaṃ cetaso parivitakko udapādi—",
  "snp2.12:1.5": "parinibbuto nu kho me upajjhāyo udāhu noparinibbutoti?",
  "snp2.12:1.6": "Atha kho āyasmā vaṅgīso sāyanhasamayaṃ paṭisallānā vuṭṭhito yenabhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi.",
  "snp2.12:1.7": "Ekamantaṃ nisinno kho āyasmā vaṅgīso bhagavantaṃ etadavoca—",
  "snp2.12:1.8": "idha mayhaṃ,bhante, rahogatassa paṭisallīnassa evaṃ cetaso parivitakko udapādi—",
  "snp2.12:1.9": "parinibbuto nu kho me upajjhāyo, udāhu no parinibbutoti.",
  "snp2.12:1.10": "Atha kho āyasmāvaṅgīso uṭṭhāyāsanā ekaṃsaṃ cīvaraṃ katvā yena bhagavā tenañjaliṃ paṇāmetvābhagavantaṃ gāthāya ajjhabhāsi:",
  "snp2.12:2.1": "“Pucchāmi satthāramanomapaññaṃ,",
  "snp2.12:2.2": "Diṭṭheva dhamme yo vicikicchānaṃ chettā;",
  "snp2.12:2.3": "Aggāḷave kālamakāsi bhikkhu,",
  "snp2.12:2.4": "Ñāto yasassī abhinibbutatto.",
  "snp2.12:3.1": "Nigrodhakappo iti tassa nāmaṃ,",
  "snp2.12:3.2": "Tayā kataṃ bhagavā brāhmaṇassa;",
  "snp2.12:3.3": "So taṃ namassaṃ acari mutyapekkho,",
  "snp2.12:3.4": "Āraddhaviriyo daḷhadhammadassī.",
  "snp2.12:4.1": "Taṃ sāvakaṃ sakya mayampi sabbe,",
  "snp2.12:4.2": "Aññātumicchāma samantacakkhu;",
  "snp2.12:4.3": "Samavaṭṭhitā no savanāya sotā,",
  "snp2.12:4.4": "Tuvaṃ no satthā tvamanuttarosi.",
  "snp2.12:5.1": "Chindeva no vicikicchaṃ brūhi metaṃ,",
  "snp2.12:5.2": "Parinibbutaṃ vedaya bhūripañña;",
  "snp2.12:5.3": "Majjheva no bhāsa samantacakkhu,",
  "snp2.12:5.4": "Sakkova devāna sahassanetto.",
  "snp2.12:6.1": "Ye keci ganthā idha mohamaggā,",
  "snp2.12:6.2": "Aññāṇapakkhā vicikicchaṭhānā;",
  "snp2.12:6.3": "Tathāgataṃ patvā na te bhavanti,",
  "snp2.12:6.4": "Cakkhuñhi etaṃ paramaṃ narānaṃ.",
  "snp2.12:7.1": "No ce hi jātu puriso kilese,",
  "snp2.12:7.2": "Vāto yathā abbhaghanaṃ vihāne;",
  "snp2.12:7.3": "Tamovassa nivuto sabbaloko,",
  "snp2.12:7.4": "Na jotimantopi narā tapeyyuṃ.",
  "snp2.12:8.1": "Dhīrā ca pajjotakarā bhavanti,",
  "snp2.12:8.2": "Taṃ taṃ ahaṃ vīra tatheva maññe;",
  "snp2.12:8.3": "Vipassinaṃ jānamupāgamumhā,",
  "snp2.12:8.4": "Parisāsu no āvikarohi kappaṃ.",
  "snp2.12:9.1": "Khippaṃ giraṃ eraya vaggu vagguṃ,",
  "snp2.12:9.2": "Haṃsova paggayha saṇikaṃ nikūja;",
  "snp2.12:9.3": "Bindussarena suvikappitena,",
  "snp2.12:9.4": "Sabbeva te ujjugatā suṇoma.",
  "snp2.12:10.1": "Pahīnajātimaraṇaṃ asesaṃ,",
  "snp2.12:10.2": "Niggayha dhonaṃ vadessāmi dhammaṃ;",
  "snp2.12:10.3": "Na kāmakāro hi puthujjanānaṃ,",
  "snp2.12:10.4": "Saṅkheyyakāro ca tathāgatānaṃ.",
  "snp2.12:11.1": "Sampannaveyyākaraṇaṃ tavedaṃ,",
  "snp2.12:11.2": "Samujjupaññassa samuggahītaṃ;",
  "snp2.12:11.3": "Ayamañjalī pacchimo suppaṇāmito,",
  "snp2.12:11.4": "Mā mohayī jānamanomapañña.",
  "snp2.12:12.1": "Parovaraṃ ariyadhammaṃ viditvā,",
  "snp2.12:12.2": "Mā mohayī jānamanomavīra;",
  "snp2.12:12.3": "Vāriṃ yathā ghammani ghammatatto,",
  "snp2.12:12.4": "Vācābhikaṅkhāmi sutaṃ pavassa.",
  "snp2.12:13.1": "Yadatthikaṃ brahmacariyaṃ acarī,",
  "snp2.12:13.2": "Kappāyano kaccissa taṃ amoghaṃ;",
  "snp2.12:13.3": "Nibbāyi so ādu saupādiseso,",
  "snp2.12:13.4": "Yathā vimutto ahu taṃ suṇoma”.",
  "snp2.12:14.1": "“Acchecchi taṇhaṃ idha nāmarūpe,",
  "snp2.12:14.2": "Kaṇhassa sotaṃ dīgharattānusayitaṃ;",
  "snp2.12:14.3": "Atāri jātiṃ maraṇaṃ asesaṃ”,",
  "snp2.12:14.4": "Iccabravī bhagavā pañcaseṭṭho.",
  "snp2.12:15.1": "“Esa sutvā pasīdāmi,",
  "snp2.12:15.2": "Vaco te isisattama;",
  "snp2.12:15.3": "Amoghaṃ kira me puṭṭhaṃ,",
  "snp2.12:15.4": "Na maṃ vañcesi brāhmaṇo.",
  "snp2.12:16.1": "Yathāvādī tathākārī,",
  "snp2.12:16.2": "Ahu buddhassa sāvako;",
  "snp2.12:16.3": "Acchidā maccuno jālaṃ,",
  "snp2.12:16.4": "Tataṃ māyāvino daḷhaṃ.",
  "snp2.12:17.1": "Addasā bhagavā ādiṃ,",
  "snp2.12:17.2": "Upādānassa kappiyo;",
  "snp2.12:17.3": "Accagā vata kappāyano,",
  "snp2.12:17.4": "Maccudheyyaṃ suduttaran”ti.",
  "snp2.12:17.5": "Nigrodhakappasuttaṃ dvādasamaṃ."
}