{
  "snp2.7:0.1": "Sutta Nipāta 2.7",
  "snp2.7:0.2": "Brāhmaṇadhammikasutta",
  "snp2.7:1.1": "Evaṃ me sutaṃ—",
  "snp2.7:1.2": " ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "snp2.7:1.3": "Atha kho sambahulā kosalakā brāhmaṇamahāsālā jiṇṇā vuḍḍhā mahallakā addhagatā vayoanuppattā yena bhagavā tenupasaṅkamiṃsu; upasaṅkamitvā bhagavatā saddhiṃ sammodiṃsu.",
  "snp2.7:1.4": "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ nisīdiṃsu.",
  "snp2.7:1.5": "Ekamantaṃ nisinnā kho te brāhmaṇamahāsālā bhagavantaṃ etadavocuṃ:",
  "snp2.7:1.6": "“sandissanti nu kho, bho gotama, etarahi brāhmaṇā porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhamme”ti?",
  "snp2.7:1.7": "“Na kho, brāhmaṇā, sandissanti etarahi brāhmaṇā porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhamme”ti.",
  "snp2.7:1.8": "“Sādhu no bhavaṃ gotamo porāṇānaṃ brāhmaṇānaṃ brāhmaṇadhammaṃ bhāsatu, sace bhoto gotamassa agarū”ti.",
  "snp2.7:1.9": "“Tena hi, brāhmaṇā, suṇātha, sādhukaṃ manasi karotha, bhāsissāmī”ti.",
  "snp2.7:1.10": "“Evaṃ, bho”ti kho te brāhmaṇamahāsālā bhagavato paccassosuṃ.",
  "snp2.7:1.11": "Bhagavā etadavoca:",
  "snp2.7:2.1": "“Isayo pubbakā āsuṃ,",
  "snp2.7:2.2": "saññatattā tapassino;",
  "snp2.7:2.3": "Pañca kāmaguṇe hitvā,",
  "snp2.7:2.4": "attadatthamacārisuṃ.",
  "snp2.7:3.1": "Na pasū brāhmaṇānāsuṃ,",
  "snp2.7:3.2": "na hiraññaṃ na dhāniyaṃ;",
  "snp2.7:3.3": "Sajjhāyadhanadhaññāsuṃ,",
  "snp2.7:3.4": "brahmaṃ nidhimapālayuṃ.",
  "snp2.7:4.1": "Yaṃ nesaṃ pakataṃ āsi,",
  "snp2.7:4.2": "dvārabhattaṃ upaṭṭhitaṃ;",
  "snp2.7:4.3": "Saddhāpakatamesānaṃ,",
  "snp2.7:4.4": "dātave tadamaññisuṃ.",
  "snp2.7:5.1": "Nānārattehi vatthehi,",
  "snp2.7:5.2": "sayanehāvasathehi ca;",
  "snp2.7:5.3": "Phītā janapadā raṭṭhā,",
  "snp2.7:5.4": "te namassiṃsu brāhmaṇe.",
  "snp2.7:6.1": "Avajjhā brāhmaṇā āsuṃ,",
  "snp2.7:6.2": "ajeyyā dhammarakkhitā;",
  "snp2.7:6.3": "Na ne koci nivāresi,",
  "snp2.7:6.4": "kuladvāresu sabbaso.",
  "snp2.7:7.1": "Aṭṭhacattālīsaṃ vassāni,",
  "snp2.7:7.2": "(komāra) Brahmacariyaṃ cariṃsu te;",
  "snp2.7:7.3": "Vijjācaraṇapariyeṭṭhiṃ,",
  "snp2.7:7.4": "Acaruṃ brāhmaṇā pure.",
  "snp2.7:8.1": "Na brāhmaṇā aññamagamuṃ,",
  "snp2.7:8.2": "napi bhariyaṃ kiṇiṃsu te;",
  "snp2.7:8.3": "Sampiyeneva saṃvāsaṃ,",
  "snp2.7:8.4": "saṅgantvā samarocayuṃ.",
  "snp2.7:9.1": "Aññatra tamhā samayā,",
  "snp2.7:9.2": "utuveramaṇiṃ pati;",
  "snp2.7:9.3": "Antarā methunaṃ dhammaṃ,",
  "snp2.7:9.4": "nāssu gacchanti brāhmaṇā.",
  "snp2.7:10.1": "Brahmacariyañca sīlañca,",
  "snp2.7:10.2": "ajjavaṃ maddavaṃ tapaṃ;",
  "snp2.7:10.3": "Soraccaṃ avihiṃsañca,",
  "snp2.7:10.4": "khantiñcāpi avaṇṇayuṃ.",
  "snp2.7:11.1": "Yo nesaṃ paramo āsi,",
  "snp2.7:11.2": "Brahmā daḷhaparakkamo;",
  "snp2.7:11.3": "Sa vāpi methunaṃ dhammaṃ,",
  "snp2.7:11.4": "Supinantepi nāgamā.",
  "snp2.7:12.1": "Tassa vattamanusikkhantā,",
  "snp2.7:12.2": "Idheke viññujātikā;",
  "snp2.7:12.3": "Brahmacariyañca sīlañca,",
  "snp2.7:12.4": "Khantiñcāpi avaṇṇayuṃ.",
  "snp2.7:13.1": "Taṇḍulaṃ sayanaṃ vatthaṃ,",
  "snp2.7:13.2": "Sappitelañca yāciya;",
  "snp2.7:13.3": "Dhammena samodhānetvā,",
  "snp2.7:13.4": "Tato yaññamakappayuṃ.",
  "snp2.7:14.1": "Upaṭṭhitasmiṃ yaññasmiṃ,",
  "snp2.7:14.2": "Nāssu gāvo haniṃsu te;",
  "snp2.7:14.3": "Yathā mātā pitā bhātā,",
  "snp2.7:14.4": "Aññe vāpi ca ñātakā;",
  "snp2.7:14.5": "Gāvo no paramā mittā,",
  "snp2.7:14.6": "Yāsu jāyanti osadhā.",
  "snp2.7:15.1": "Annadā baladā cetā,",
  "snp2.7:15.2": "Vaṇṇadā sukhadā tathā;",
  "snp2.7:15.3": "Etamatthavasaṃ ñatvā,",
  "snp2.7:15.4": "Nāssu gāvo haniṃsu te.",
  "snp2.7:16.1": "Sukhumālā mahākāyā,",
  "snp2.7:16.2": "Vaṇṇavanto yasassino;",
  "snp2.7:16.3": "Brāhmaṇā sehi dhammehi,",
  "snp2.7:16.4": "Kiccākiccesu ussukā;",
  "snp2.7:16.5": "Yāva loke avattiṃsu,",
  "snp2.7:16.6": "Sukhamedhitthayaṃ pajā.",
  "snp2.7:17.1": "Tesaṃ āsi vipallāso,",
  "snp2.7:17.2": "Disvāna aṇuto aṇuṃ;",
  "snp2.7:17.3": "Rājino ca viyākāraṃ,",
  "snp2.7:17.4": "Nāriyo samalaṅkatā.",
  "snp2.7:18.1": "Rathe cājaññasaṃyutte,",
  "snp2.7:18.2": "Sukate cittasibbane;",
  "snp2.7:18.3": "Nivesane nivese ca,",
  "snp2.7:18.4": "Vibhatte bhāgaso mite.",
  "snp2.7:19.1": "Gomaṇḍalaparibyūḷhaṃ,",
  "snp2.7:19.2": "Nārīvaragaṇāyutaṃ;",
  "snp2.7:19.3": "Uḷāraṃ mānusaṃ bhogaṃ,",
  "snp2.7:19.4": "Abhijjhāyiṃsu brāhmaṇā.",
  "snp2.7:20.1": "Te tattha mante ganthetvā,",
  "snp2.7:20.2": "Okkākaṃ tadupāgamuṃ;",
  "snp2.7:20.3": "Pahūtadhanadhaññosi,",
  "snp2.7:20.4": "Yajassu bahu te vittaṃ;",
  "snp2.7:20.5": "Yajassu bahu te dhanaṃ.",
  "snp2.7:21.1": "Tato ca rājā saññatto,",
  "snp2.7:21.2": "Brāhmaṇehi rathesabho;",
  "snp2.7:21.3": "Assamedhaṃ purisamedhaṃ,",
  "snp2.7:21.4": "Sammāpāsaṃ vājapeyyaṃ niraggaḷaṃ;",
  "snp2.7:21.5": "Ete yāge yajitvāna,",
  "snp2.7:21.6": "Brāhmaṇānamadā dhanaṃ.",
  "snp2.7:22.1": "Gāvo sayanañca vatthañca,",
  "snp2.7:22.2": "Nāriyo samalaṅkatā;",
  "snp2.7:22.3": "Rathe cājaññasaṃyutte,",
  "snp2.7:22.4": "Sukate cittasibbane.",
  "snp2.7:23.1": "Nivesanāni rammāni,",
  "snp2.7:23.2": "Suvibhattāni bhāgaso;",
  "snp2.7:23.3": "Nānādhaññassa pūretvā,",
  "snp2.7:23.4": "Brāhmaṇānamadā dhanaṃ.",
  "snp2.7:24.1": "Te ca tattha dhanaṃ laddhā,",
  "snp2.7:24.2": "Sannidhiṃ samarocayuṃ;",
  "snp2.7:24.3": "Tesaṃ icchāvatiṇṇānaṃ,",
  "snp2.7:24.4": "Bhiyyo taṇhā pavaḍḍhatha;",
  "snp2.7:24.5": "Te tattha mante ganthetvā,",
  "snp2.7:24.6": "Okkākaṃ puna mupāgamuṃ.",
  "snp2.7:25.1": "Yathā āpo ca pathavī ca,",
  "snp2.7:25.2": "Hiraññaṃ dhanadhāniyaṃ;",
  "snp2.7:25.3": "Evaṃ gāvo manussānaṃ,",
  "snp2.7:25.4": "Parikkhāro so hi pāṇinaṃ;",
  "snp2.7:25.5": "Yajassu bahu te vittaṃ,",
  "snp2.7:25.6": "Yajassu bahu te dhanaṃ.",
  "snp2.7:26.1": "Tato ca rājā saññatto,",
  "snp2.7:26.2": "Brāhmaṇehi rathesabho;",
  "snp2.7:26.3": "Nekā satasahassiyo,",
  "snp2.7:26.4": "Gāvo yaññe aghātayi.",
  "snp2.7:27.1": "Na pādā na visāṇena,",
  "snp2.7:27.2": "Nāssu hiṃsanti kenaci;",
  "snp2.7:27.3": "Gāvo eḷakasamānā,",
  "snp2.7:27.4": "Soratā kumbhadūhanā;",
  "snp2.7:27.5": "Tā visāṇe gahetvāna,",
  "snp2.7:27.6": "Rājā satthena ghātayi.",
  "snp2.7:28.1": "Tato devā pitaro ca,",
  "snp2.7:28.2": "Indo asurarakkhasā;",
  "snp2.7:28.3": "Adhammo iti pakkanduṃ,",
  "snp2.7:28.4": "Yaṃ satthaṃ nipatī gave.",
  "snp2.7:29.1": "Tayo rogā pure āsuṃ,",
  "snp2.7:29.2": "Icchā anasanaṃ jarā;",
  "snp2.7:29.3": "Pasūnañca samārambhā,",
  "snp2.7:29.4": "Aṭṭhānavutimāgamuṃ.",
  "snp2.7:30.1": "Eso adhammo daṇḍānaṃ,",
  "snp2.7:30.2": "Okkanto purāṇo ahu;",
  "snp2.7:30.3": "Adūsikāyo haññanti,",
  "snp2.7:30.4": "Dhammā dhaṃsanti yājakā.",
  "snp2.7:31.1": "Evameso aṇudhammo,",
  "snp2.7:31.2": "Porāṇo viññugarahito;",
  "snp2.7:31.3": "Yattha edisakaṃ passati,",
  "snp2.7:31.4": "Yājakaṃ garahatī jano.",
  "snp2.7:32.1": "Evaṃ dhamme viyāpanne,",
  "snp2.7:32.2": "Vibhinnā suddavessikā;",
  "snp2.7:32.3": "Puthū vibhinnā khattiyā,",
  "snp2.7:32.4": "Patiṃ bhariyāvamaññatha.",
  "snp2.7:33.1": "Khattiyā brahmabandhū ca,",
  "snp2.7:33.2": "Ye caññe gottarakkhitā;",
  "snp2.7:33.3": "Jātivādaṃ nirākatvā,",
  "snp2.7:33.4": "Kāmānaṃ vasamanvagun”ti.",
  "snp2.7:34.1": "Evaṃ vutte, te brāhmaṇamahāsālā bhagavantaṃ etadavocuṃ:",
  "snp2.7:34.2": "“abhikkantaṃ, bho gotama …pe…",
  "snp2.7:34.3": "upāsake no bhavaṃ gotamo dhāretu ajjatagge pāṇupete saraṇaṃ gate”ti.",
  "snp2.7:34.4": "Brāhmaṇadhammikasuttaṃ sattamaṃ."
}