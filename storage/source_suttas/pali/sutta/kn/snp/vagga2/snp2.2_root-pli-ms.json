{
  "snp2.2:0.1": "Sutta Nipāta 2.2",
  "snp2.2:0.2": "Āmagandhasutta",
  "snp2.2:1.1": "“Sāmākaciṅgūlakacīnakāni ca,",
  "snp2.2:1.2": "Pattapphalaṃ mūlaphalaṃ gavipphalaṃ;",
  "snp2.2:1.3": "Dhammena laddhaṃ satamasnamānā,",
  "snp2.2:1.4": "Na kāmakāmā alikaṃ bhaṇanti.",
  "snp2.2:2.1": "Yadasnamāno sukataṃ suniṭṭhitaṃ,",
  "snp2.2:2.2": "Parehi dinnaṃ payataṃ paṇītaṃ;",
  "snp2.2:2.3": "Sālīnamannaṃ paribhuñjamāno,",
  "snp2.2:2.4": "So bhuñjasī kassapa āmagandhaṃ.",
  "snp2.2:3.1": "Na āmagandho mama kappatīti,",
  "snp2.2:3.2": "Icceva tvaṃ bhāsasi brahmabandhu;",
  "snp2.2:3.3": "Sālīnamannaṃ paribhuñjamāno,",
  "snp2.2:3.4": "Sakuntamaṃsehi susaṅkhatehi;",
  "snp2.2:3.5": "Pucchāmi taṃ kassapa etamatthaṃ,",
  "snp2.2:3.6": "Kathaṃpakāro tava āmagandho”.",
  "snp2.2:4.1": "“Pāṇātipāto vadhachedabandhanaṃ,",
  "snp2.2:4.2": "Theyyaṃ musāvādo nikativañcanāni ca;",
  "snp2.2:4.3": "Ajjhenakuttaṃ paradārasevanā,",
  "snp2.2:4.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:5.1": "Ye idha kāmesu asaññatā janā,",
  "snp2.2:5.2": "Rasesu giddhā asucibhāvamassitā;",
  "snp2.2:5.3": "Natthikadiṭṭhī visamā durannayā,",
  "snp2.2:5.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:6.1": "Ye lūkhasā dāruṇā piṭṭhimaṃsikā,",
  "snp2.2:6.2": "Mittadduno nikkaruṇātimānino;",
  "snp2.2:6.3": "Adānasīlā na ca denti kassaci,",
  "snp2.2:6.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:7.1": "Kodho mado thambho paccupaṭṭhāpanā,",
  "snp2.2:7.2": "Māyā usūyā bhassasamussayo ca;",
  "snp2.2:7.3": "Mānātimāno ca asabbhi santhavo,",
  "snp2.2:7.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:8.1": "Ye pāpasīlā iṇaghātasūcakā,",
  "snp2.2:8.2": "Vohārakūṭā idha pāṭirūpikā;",
  "snp2.2:8.3": "Narādhamā yedha karonti kibbisaṃ,",
  "snp2.2:8.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:9.1": "Ye idha pāṇesu asaññatā janā,",
  "snp2.2:9.2": "Paresamādāya vihesamuyyutā;",
  "snp2.2:9.3": "Dussīlaluddā pharusā anādarā,",
  "snp2.2:9.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:10.1": "Etesu giddhā viruddhātipātino,",
  "snp2.2:10.2": "Niccuyyutā pecca tamaṃ vajanti ye;",
  "snp2.2:10.3": "Patanti sattā nirayaṃ avaṃsirā,",
  "snp2.2:10.4": "Esāmagandho na hi maṃsabhojanaṃ.",
  "snp2.2:11.1": "Na macchamaṃsānamanāsakattaṃ,",
  "snp2.2:11.2": "Na naggiyaṃ na muṇḍiyaṃ jaṭājallaṃ;",
  "snp2.2:11.3": "Kharājināni nāggihuttassupasevanā,",
  "snp2.2:11.4": "Ye vāpi loke amarā bahū tapā;",
  "snp2.2:11.5": "Mantāhutī yaññamutūpasevanā,",
  "snp2.2:11.6": "Sodhenti maccaṃ avitiṇṇakaṅkhaṃ.",
  "snp2.2:12.1": "Sotesu gutto viditindriyo care,",
  "snp2.2:12.2": "Dhamme ṭhito ajjavamaddave rato;",
  "snp2.2:12.3": "Saṅgātigo sabbadukkhappahīno,",
  "snp2.2:12.4": "Na lippati diṭṭhasutesu dhīro”.",
  "snp2.2:13.1": "Iccetamatthaṃ bhagavā punappunaṃ,",
  "snp2.2:13.2": "Akkhāsi naṃ vedayi mantapāragū;",
  "snp2.2:13.3": "Citrāhi gāthāhi munī pakāsayi,",
  "snp2.2:13.4": "Nirāmagandho asito durannayo.",
  "snp2.2:14.1": "Sutvāna buddhassa subhāsitaṃ padaṃ,",
  "snp2.2:14.2": "Nirāmagandhaṃ sabbadukkhappanūdanaṃ;",
  "snp2.2:14.3": "Nīcamano vandi tathāgatassa,",
  "snp2.2:14.4": "Tattheva pabbajjamarocayitthāti.",
  "snp2.2:14.5": "Āmagandhasuttaṃ dutiyaṃ."
}