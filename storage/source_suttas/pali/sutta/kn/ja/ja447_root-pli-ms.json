{
  "ja447:0.1": "Jātaka",
  "ja447:0.2": "Dasakanipāta",
  "ja447:0.3": "Catudvāravagga",
  "ja447:0.4": "9. Mahādhammapālajātaka",
  "ja447:1.1": "“Kiṃ te vataṃ kiṃ pana brahmacariyaṃ,",
  "ja447:1.2": "Kissa suciṇṇassa ayaṃ vipāko;",
  "ja447:1.3": "Akkhāhi me brāhmaṇa etamatthaṃ,",
  "ja447:1.4": "Kasmā nu tumhaṃ daharā na miyyare”.",
  "ja447:2.1": "“Dhammaṃ carāma na musā bhaṇāma,",
  "ja447:2.2": "Pāpāni kammāni parivajjayāma;",
  "ja447:2.3": "Anariyaṃ parivajjemu sabbaṃ,",
  "ja447:2.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:3.1": "Suṇoma dhammaṃ asataṃ satañca,",
  "ja447:3.2": "Na cāpi dhammaṃ asataṃ rocayāma;",
  "ja447:3.3": "Hitvā asante na jahāma sante,",
  "ja447:3.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:4.1": "Pubbeva dānā sumanā bhavāma,",
  "ja447:4.2": "Dadampi ve attamanā bhavāma;",
  "ja447:4.3": "Datvāpi ve nānutappāma pacchā,",
  "ja447:4.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:5.1": "Samaṇe mayaṃ brāhmaṇe addhike ca,",
  "ja447:5.2": "Vanibbake yācanake dalidde;",
  "ja447:5.3": "Annena pānena abhitappayāma,",
  "ja447:5.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:6.1": "Mayañca bhariyaṃ nātikkamāma,",
  "ja447:6.2": "Amhe ca bhariyā nātikkamanti;",
  "ja447:6.3": "Aññatra tāhi brahmacariyaṃ carāma,",
  "ja447:6.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:7.1": "Pāṇātipātā viramāma sabbe,",
  "ja447:7.2": "Loke adinnaṃ parivajjayāma;",
  "ja447:7.3": "Amajjapā nopi musā bhaṇāma,",
  "ja447:7.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:8.1": "Etāsu ve jāyare suttamāsu,",
  "ja447:8.2": "Medhāvino honti pahūtapaññā;",
  "ja447:8.3": "Bahussutā vedaguno ca honti,",
  "ja447:8.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:9.1": "Mātā pitā ca bhaginī bhātaro ca,",
  "ja447:9.2": "Puttā ca dārā ca mayañca sabbe;",
  "ja447:9.3": "Dhammaṃ carāma paralokahetu,",
  "ja447:9.4": "Tasmā hi amhaṃ daharā na miyyare.",
  "ja447:10.1": "Dāsā ca dāsyo anujīvino ca,",
  "ja447:10.2": "Paricārakā kammakarā ca sabbe;",
  "ja447:10.3": "Dhammaṃ caranti paralokahetu,",
  "ja447:10.4": "Tasmā hi amhaṃ daharā na miyyare”.",
  "ja447:11.1": "“Dhammo have rakkhati dhammacāriṃ,",
  "ja447:11.2": "Dhammo suciṇṇo sukhamāvahāti;",
  "ja447:11.3": "Esānisaṃso dhamme suciṇṇe,",
  "ja447:11.4": "Na duggatiṃ gacchati dhammacārī.",
  "ja447:12.1": "Dhammo have rakkhati dhammacāriṃ,",
  "ja447:12.2": "Chattaṃ mahantaṃ viya vassakāle;",
  "ja447:12.3": "Dhammena gutto mama dhammapālo,",
  "ja447:12.4": "Aññassa aṭṭhīni sukhī kumāro”ti.",
  "ja447:13.1": "Mahādhammapālajātakaṃ navamaṃ."
}