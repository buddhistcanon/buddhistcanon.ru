{
  "ja474:0.1": "Jātaka",
  "ja474:0.2": "Terasakanipāta",
  "ja474:0.3": "Ambavagga",
  "ja474:0.4": "1. Ambajātaka",
  "ja474:1.1": "“Ahāsi me ambaphalāni pubbe,",
  "ja474:1.2": "Aṇūni thūlāni ca brahmacāri;",
  "ja474:1.3": "Teheva mantehi na dāni tuyhaṃ,",
  "ja474:1.4": "Dumapphalā pātubhavanti brahme”.",
  "ja474:2.1": "“Nakkhattayogaṃ paṭimānayāmi,",
  "ja474:2.2": "Khaṇaṃ muhuttañca mante na passaṃ;",
  "ja474:2.3": "Nakkhattayogañca khaṇañca laddhā,",
  "ja474:2.4": "Addhāharissambaphalaṃ pahūtaṃ”.",
  "ja474:3.1": "“Nakkhattayogaṃ na pure abhāṇi,",
  "ja474:3.2": "Khaṇaṃ muhuttaṃ na pure asaṃsi;",
  "ja474:3.3": "Sayaṃ harī ambaphalaṃ pahūtaṃ,",
  "ja474:3.4": "Vaṇṇena gandhena rasenupetaṃ.",
  "ja474:4.1": "Mantābhijappena pure hi tuyhaṃ,",
  "ja474:4.2": "Dumapphalā pātubhavanti brahme;",
  "ja474:4.3": "Svājja na pāresi jappampi mantaṃ,",
  "ja474:4.4": "Ayaṃ so ko nāma tavajja dhammo”.",
  "ja474:5.1": "“Caṇḍālaputto mama sampadāsi,",
  "ja474:5.2": "Dhammena mante pakatiñca saṃsi;",
  "ja474:5.3": "Mā cassu me pucchito nāmagottaṃ,",
  "ja474:5.4": "Guyhittho atthaṃ vijaheyya manto.",
  "ja474:6.1": "Sohaṃ janindena janamhi puṭṭho,",
  "ja474:6.2": "Makkhābhibhūto alikaṃ abhāṇiṃ;",
  "ja474:6.3": "‘Mantā ime brāhmaṇassā’ti micchā,",
  "ja474:6.4": "Pahīnamanto kapaṇo rudāmi”.",
  "ja474:7.1": "“Eraṇḍā pucimandā vā,",
  "ja474:7.2": "atha vā pālibhaddakā;",
  "ja474:7.3": "Madhuṃ madhutthiko vinde,",
  "ja474:7.4": "so hi tassa dumuttamo.",
  "ja474:8.1": "Khattiyā brāhmaṇā vessā,",
  "ja474:8.2": "suddā caṇḍālapukkusā;",
  "ja474:8.3": "Yamhā dhammaṃ vijāneyya,",
  "ja474:8.4": "so hi tassa naruttamo.",
  "ja474:9.1": "Imassa daṇḍañca vadhañca datvā,",
  "ja474:9.2": "Gale gahetvā khalayātha jammaṃ;",
  "ja474:9.3": "Yo uttamatthaṃ kasirena laddhaṃ,",
  "ja474:9.4": "Mānātimānena vināsayittha”.",
  "ja474:10.1": "“Yathā samaṃ maññamāno pateyya,",
  "ja474:10.2": "Sobbhaṃ guhaṃ narakaṃ pūtipādaṃ;",
  "ja474:10.3": "Rajjūti vā akkame kaṇhasappaṃ,",
  "ja474:10.4": "Andho yathā jotimadhiṭṭhaheyya;",
  "ja474:10.5": "Evampi maṃ tvaṃ khalitaṃ sapañña,",
  "ja474:10.6": "Pahīnamantassa punappadāhi”.",
  "ja474:11.1": "“Dhammena mantaṃ tava sampadāsiṃ,",
  "ja474:11.2": "Tuvampi dhammena pariggahesi;",
  "ja474:11.3": "Pakatimpi te attamano asaṃsiṃ,",
  "ja474:11.4": "Dhamme ṭhitaṃ taṃ na jaheyya manto.",
  "ja474:12.1": "Yo bāla mantaṃ kasirena laddhaṃ,",
  "ja474:12.2": "Yaṃ dullabhaṃ ajja manussaloke;",
  "ja474:12.3": "Kiñcāpi laddhā jīvituṃ appapañño,",
  "ja474:12.4": "Vināsayī alikaṃ bhāsamāno.",
  "ja474:13.1": "Bālassa mūḷhassa akataññuno ca,",
  "ja474:13.2": "Musā bhaṇantassa asaññatassa;",
  "ja474:13.3": "Mante mayaṃ tādisake na dema,",
  "ja474:13.4": "Kuto mantā gaccha na mayha ruccasī”ti.",
  "ja474:14.1": "Ambajātakaṃ paṭhamaṃ."
}