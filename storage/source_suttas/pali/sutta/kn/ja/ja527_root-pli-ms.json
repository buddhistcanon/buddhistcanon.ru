{
  "ja527:0.1": "Jātaka",
  "ja527:0.2": "Paṇṇāsanipāta",
  "ja527:0.3": "Niḷinikāvagga",
  "ja527:0.4": "2 Ummādantījātaka",
  "ja527:1.1": "“Nivesanaṃ kassa nudaṃ sunanda,",
  "ja527:1.2": "Pākārena paṇḍumayena guttaṃ;",
  "ja527:1.3": "Kā dissati aggisikhāva dūre,",
  "ja527:1.4": "Vehāyasaṃ pabbataggeva acci.",
  "ja527:2.1": "Dhītā nvayaṃ kassa sunanda hoti,",
  "ja527:2.2": "Suṇisā nvayaṃ kassa athopi bhariyā;",
  "ja527:2.3": "Akkhāhi me khippamidheva puṭṭho,",
  "ja527:2.4": "Avāvaṭā yadi vā atthi bhattā”.",
  "ja527:3.1": "“Ahañhi jānāmi janinda etaṃ,",
  "ja527:3.2": "Matyā ca petyā ca athopi assā;",
  "ja527:3.3": "Taveva so puriso bhūmipāla,",
  "ja527:3.4": "Rattindivaṃ appamatto tavatthe.",
  "ja527:4.1": "Iddho ca phīto ca suvaḍḍhito ca,",
  "ja527:4.2": "Amacco ca te aññataro janinda;",
  "ja527:4.3": "Tassesā bhariyābhipārakassa,",
  "ja527:4.4": "Ummādantī nāmadheyyena rāja”.",
  "ja527:5.1": "“Ambho ambho nāmamidaṃ imissā,",
  "ja527:5.2": "Matyā ca petyā ca kataṃ susādhu;",
  "ja527:5.3": "Tadā hi mayhaṃ avalokayantī,",
  "ja527:5.4": "Ummattakaṃ ummadantī akāsi.",
  "ja527:6.1": "Yā puṇṇamāse migamandalocanā,",
  "ja527:6.2": "Upāvisi puṇḍarīkattacaṅgī;",
  "ja527:6.3": "Dve puṇṇamāyo tadahū amaññahaṃ,",
  "ja527:6.4": "Disvāna pārāvatarattavāsiniṃ.",
  "ja527:7.1": "Aḷārapamhehi subhehi vaggubhi,",
  "ja527:7.2": "Palobhayantī maṃ yadā udikkhati;",
  "ja527:7.3": "Vijambhamānā harateva me mano,",
  "ja527:7.4": "Jātā vane kimpurisīva pabbate.",
  "ja527:8.1": "Tadā hi brahatī sāmā,",
  "ja527:8.2": "āmuttamaṇikuṇḍalā;",
  "ja527:8.3": "Ekaccavasanā nārī,",
  "ja527:8.4": "migī bhantāvudikkhati.",
  "ja527:9.1": "Kadāssu maṃ tambanakhā sulomā,",
  "ja527:9.2": "Bāhāmudū candanasāralittā;",
  "ja527:9.3": "Vaṭṭaṅgulī sannatadhīrakuttiyā,",
  "ja527:9.4": "Nārī upaññissati sīsato subhā.",
  "ja527:10.1": "Kadāssu maṃ kañcanajāluracchadā,",
  "ja527:10.2": "Dhītā tirīṭissa vilaggamajjhā;",
  "ja527:10.3": "Mudūhi bāhāhi palissajissati,",
  "ja527:10.4": "Brahāvane jātadumaṃva māluvā.",
  "ja527:11.1": "Kadāssu lākhārasarattasucchavī,",
  "ja527:11.2": "Bindutthanī puṇḍarīkattacaṅgī;",
  "ja527:11.3": "Mukhaṃ mukhena upanāmayissati,",
  "ja527:11.4": "Soṇḍova soṇḍassa surāya thālaṃ.",
  "ja527:12.1": "Yadāddasaṃ taṃ tiṭṭhantiṃ,",
  "ja527:12.2": "Sabbabhaddaṃ manoramaṃ;",
  "ja527:12.3": "Tato sakassa cittassa,",
  "ja527:12.4": "Nāvabodhāmi kañcinaṃ.",
  "ja527:13.1": "Ummādantimahaṃ daṭṭhā,",
  "ja527:13.2": "āmuttamaṇikuṇḍalaṃ;",
  "ja527:13.3": "Na supāmi divārattiṃ,",
  "ja527:13.4": "sahassaṃva parājito.",
  "ja527:14.1": "Sakko ce me varaṃ dajjā,",
  "ja527:14.2": "so ca labbhetha me varo;",
  "ja527:14.3": "Ekarattaṃ dvirattaṃ vā,",
  "ja527:14.4": "bhaveyyaṃ abhipārako;",
  "ja527:14.5": "Ummādantyā ramitvāna,",
  "ja527:14.6": "sivirājā tato siyaṃ”.",
  "ja527:15.1": "“Bhūtāni me bhūtapatī namassato,",
  "ja527:15.2": "Āgamma yakkho idametadabravi;",
  "ja527:15.3": "Rañño mano ummadantyā niviṭṭho,",
  "ja527:15.4": "Dadāmi te taṃ paricārayassu”.",
  "ja527:16.1": "“Puññā ca dhaṃse amaro na camhi,",
  "ja527:16.2": "Jano ca me pāpamidañca jaññā;",
  "ja527:16.3": "Bhuso ca tyassa manaso vighāto,",
  "ja527:16.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
  "ja527:17.1": "“Janinda nāññatra tayā mayā vā,",
  "ja527:17.2": "Sabbāpi kammassa katassa jaññā;",
  "ja527:17.3": "Yaṃ te mayā ummadantī padinnā,",
  "ja527:17.4": "Bhusehi rājā vanathaṃ sajāhi”.",
  "ja527:18.1": "“Yo pāpakaṃ kamma karaṃ manusso,",
  "ja527:18.2": "So maññati māyida maññiṃsu aññe;",
  "ja527:18.3": "Passanti bhūtāni karontametaṃ,",
  "ja527:18.4": "Yuttā ca ye honti narā pathabyā.",
  "ja527:19.1": "Añño nu te koci naro pathabyā,",
  "ja527:19.2": "Saddheyya lokasmi na me piyāti;",
  "ja527:19.3": "Bhuso ca tyassa manaso vighāto,",
  "ja527:19.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
  "ja527:20.1": "“Addhā piyā mayha janinda esā,",
  "ja527:20.2": "Na sā mamaṃ appiyā bhūmipāla;",
  "ja527:20.3": "Gaccheva tvaṃ ummadantiṃ bhadante,",
  "ja527:20.4": "Sīhova selassa guhaṃ upeti”.",
  "ja527:21.1": "“Na pīḷitā attadukhena dhīrā,",
  "ja527:21.2": "Sukhapphalaṃ kamma pariccajanti;",
  "ja527:21.3": "Sammohitā vāpi sukhena mattā,",
  "ja527:21.4": "Na pāpakammañca samācaranti”.",
  "ja527:22.1": "“Tuvañhi mātā ca pitā ca mayhaṃ,",
  "ja527:22.2": "Bhattā patī posako devatā ca;",
  "ja527:22.3": "Dāso ahaṃ tuyha saputtadāro,",
  "ja527:22.4": "Yathāsukhaṃ sāmi karohi kāmaṃ”.",
  "ja527:23.1": "“Yo issaromhīti karoti pāpaṃ,",
  "ja527:23.2": "Katvā ca so nuttasate paresaṃ;",
  "ja527:23.3": "Na tena so jīvati dīghamāyu,",
  "ja527:23.4": "Devāpi pāpena samekkhare naṃ.",
  "ja527:24.1": "Aññātakaṃ sāmikehī padinnaṃ,",
  "ja527:24.2": "Dhamme ṭhitā ye paṭicchanti dānaṃ;",
  "ja527:24.3": "Paṭicchakā dāyakā cāpi tattha,",
  "ja527:24.4": "Sukhapphalaññeva karonti kammaṃ.",
  "ja527:25.1": "Añño nu te koci naro pathabyā,",
  "ja527:25.2": "Saddheyya lokasmi na me piyāti;",
  "ja527:25.3": "Bhuso ca tyassa manaso vighāto,",
  "ja527:25.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
  "ja527:26.1": "“Addhā piyā mayha janinda esā,",
  "ja527:26.2": "Na sā mamaṃ appiyā bhūmipāla;",
  "ja527:26.3": "Yaṃ te mayā ummadantī padinnā,",
  "ja527:26.4": "Bhusehi rājā vanathaṃ sajāhi”.",
  "ja527:27.1": "“Yo attadukkhena parassa dukkhaṃ,",
  "ja527:27.2": "Sukhena vā attasukhaṃ dahāti;",
  "ja527:27.3": "Yathevidaṃ mayha tathā paresaṃ,",
  "ja527:27.4": "Yo evaṃ jānāti sa vedi dhammaṃ.",
  "ja527:28.1": "Añño nu te koci naro pathabyā,",
  "ja527:28.2": "Saddheyya lokasmi na me piyāti;",
  "ja527:28.3": "Bhuso ca tyassa manaso vighāto,",
  "ja527:28.4": "Datvā piyaṃ ummadantiṃ adaṭṭhā”.",
  "ja527:29.1": "“Janinda jānāsi piyā mamesā,",
  "ja527:29.2": "Na sā mamaṃ appiyā bhūmipāla;",
  "ja527:29.3": "Piyena te dammi piyaṃ janinda,",
  "ja527:29.4": "Piyadāyino deva piyaṃ labhanti”.",
  "ja527:30.1": "“So nūnāhaṃ vadhissāmi,",
  "ja527:30.2": "attānaṃ kāmahetukaṃ;",
  "ja527:30.3": "Na hi dhammaṃ adhammena,",
  "ja527:30.4": "ahaṃ vadhitumussahe”.",
  "ja527:31.1": "“Sace tuvaṃ mayha satiṃ janinda,",
  "ja527:31.2": "Na kāmayāsi naravīra seṭṭha;",
  "ja527:31.3": "Cajāmi naṃ sabbajanassa sibyā,",
  "ja527:31.4": "Mayā pamuttaṃ tato avhayesi naṃ”.",
  "ja527:32.1": "“Adūsiyañce abhipāraka tvaṃ,",
  "ja527:32.2": "Cajāsi katte ahitāya tyassa;",
  "ja527:32.3": "Mahā ca te upavādopi assa,",
  "ja527:32.4": "Na cāpi tyassa nagaramhi pakkho”.",
  "ja527:33.1": "“Ahaṃ sahissaṃ upavādametaṃ,",
  "ja527:33.2": "Nindaṃ pasaṃsaṃ garahañca sabbaṃ;",
  "ja527:33.3": "Mametamāgacchatu bhūmipāla,",
  "ja527:33.4": "Yathāsukhaṃ sivi karohi kāmaṃ”.",
  "ja527:34.1": "“Yo neva nindaṃ na panappasaṃsaṃ,",
  "ja527:34.2": "Ādiyati garahaṃ nopi pūjaṃ;",
  "ja527:34.3": "Sirī ca lakkhī ca apeti tamhā,",
  "ja527:34.4": "Āpo suvuṭṭhīva yathā thalamhā”.",
  "ja527:35.1": "“Yaṃ kiñci dukkhañca sukhañca etto,",
  "ja527:35.2": "Dhammātisārañca manovighātaṃ;",
  "ja527:35.3": "Urasā ahaṃ paccuttarissāmi sabbaṃ,",
  "ja527:35.4": "Pathavī yathā thāvarānaṃ tasānaṃ”.",
  "ja527:36.1": "“Dhammātisārañca manovighātaṃ,",
  "ja527:36.2": "Dukkhañca nicchāmi ahaṃ paresaṃ;",
  "ja527:36.3": "Ekovimaṃ hārayissāmi bhāraṃ,",
  "ja527:36.4": "Dhamme ṭhito kiñci ahāpayanto”.",
  "ja527:37.1": "“Saggūpagaṃ puññakammaṃ janinda,",
  "ja527:37.2": "Mā me tuvaṃ antarāyaṃ akāsi;",
  "ja527:37.3": "Dadāmi te ummadantiṃ pasanno,",
  "ja527:37.4": "Rājāva yaññe dhanaṃ brāhmaṇānaṃ”.",
  "ja527:38.1": "“Addhā tuvaṃ katte hitesi mayhaṃ,",
  "ja527:38.2": "Sakhā mamaṃ ummadantī tuvañca;",
  "ja527:38.3": "Nindeyyu devā pitaro ca sabbe,",
  "ja527:38.4": "Pāpañca passaṃ abhisamparāyaṃ”.",
  "ja527:39.1": "“Na hetadhammaṃ sivirāja vajjuṃ,",
  "ja527:39.2": "Sanegamā jānapadā ca sabbe;",
  "ja527:39.3": "Yaṃ te mayā ummadantī padinnā,",
  "ja527:39.4": "Bhusehi rājā vanathaṃ sajāhi”.",
  "ja527:40.1": "“Addhā tuvaṃ katte hitesi mayhaṃ,",
  "ja527:40.2": "Sakhā mamaṃ ummadantī tuvañca;",
  "ja527:40.3": "Satañca dhammāni sukittitāni,",
  "ja527:40.4": "Samuddavelāva duraccayāni”.",
  "ja527:41.1": "“Āhuneyyo mesi hitānukampī,",
  "ja527:41.2": "Dhātā vidhātā casi kāmapālo;",
  "ja527:41.3": "Tayī hutā rāja mahapphalā hi,",
  "ja527:41.4": "Kāmena me ummadantiṃ paṭiccha”.",
  "ja527:42.1": "“Addhā hi sabbaṃ abhipāraka tvaṃ,",
  "ja527:42.2": "Dhammaṃ acārī mama kattuputta;",
  "ja527:42.3": "Añño nu te ko idha sotthikattā,",
  "ja527:42.4": "Dvipado naro aruṇe jīvaloke”.",
  "ja527:43.1": "“Tuvaṃ nu seṭṭho tvamanuttarosi,",
  "ja527:43.2": "Tvaṃ dhammagutto dhammavidū sumedho;",
  "ja527:43.3": "So dhammagutto cirameva jīva,",
  "ja527:43.4": "Dhammañca me desaya dhammapāla”.",
  "ja527:44.1": "“Tadiṅgha abhipāraka,",
  "ja527:44.2": "suṇohi vacanaṃ mama;",
  "ja527:44.3": "Dhammaṃ te desayissāmi,",
  "ja527:44.4": "sataṃ āsevitaṃ ahaṃ.",
  "ja527:45.1": "Sādhu dhammaruci rājā,",
  "ja527:45.2": "sādhu paññāṇavā naro;",
  "ja527:45.3": "Sādhu mittānamaddubbho,",
  "ja527:45.4": "pāpassākaraṇaṃ sukhaṃ.",
  "ja527:46.1": "Akkodhanassa vijite,",
  "ja527:46.2": "ṭhitadhammassa rājino;",
  "ja527:46.3": "Sukhaṃ manussā āsetha,",
  "ja527:46.4": "sītacchāyāya saṅghare.",
  "ja527:47.1": "Na cāhametaṃ abhirocayāmi,",
  "ja527:47.2": "Kammaṃ asamekkhakataṃ asādhu;",
  "ja527:47.3": "Ye vāpi ñatvāna sayaṃ karonti,",
  "ja527:47.4": "Upamā imā mayhaṃ tuvaṃ suṇohi.",
  "ja527:48.1": "Gavañce taramānānaṃ,",
  "ja527:48.2": "jimhaṃ gacchati puṅgavo;",
  "ja527:48.3": "Sabbā tā jimhaṃ gacchanti,",
  "ja527:48.4": "nette jimhaṃ gate sati.",
  "ja527:49.1": "Evameva manussesu,",
  "ja527:49.2": "yo hoti seṭṭhasammato;",
  "ja527:49.3": "So ce adhammaṃ carati,",
  "ja527:49.4": "pageva itarā pajā;",
  "ja527:49.5": "Sabbaṃ raṭṭhaṃ dukhaṃ seti,",
  "ja527:49.6": "rājā ce hoti adhammiko.",
  "ja527:50.1": "Gavañce taramānānaṃ,",
  "ja527:50.2": "ujuṃ gacchati puṅgavo;",
  "ja527:50.3": "Sabbā gāvī ujuṃ yanti,",
  "ja527:50.4": "nette ujuṃ gate sati.",
  "ja527:51.1": "Evameva manussesu,",
  "ja527:51.2": "yo hoti seṭṭhasammato;",
  "ja527:51.3": "So sace dhammaṃ carati,",
  "ja527:51.4": "pageva itarā pajā;",
  "ja527:51.5": "Sabbaṃ raṭṭhaṃ sukhaṃ seti,",
  "ja527:51.6": "rājā ce hoti dhammiko.",
  "ja527:52.1": "Na cāpāhaṃ adhammena,",
  "ja527:52.2": "amarattamabhipatthaye;",
  "ja527:52.3": "Imaṃ vā pathaviṃ sabbaṃ,",
  "ja527:52.4": "vijetuṃ abhipāraka.",
  "ja527:53.1": "Yañhi kiñci manussesu,",
  "ja527:53.2": "ratanaṃ idha vijjati;",
  "ja527:53.3": "Gāvo dāso hiraññañca,",
  "ja527:53.4": "vatthiyaṃ haricandanaṃ.",
  "ja527:54.1": "Assitthiyo ratanaṃ maṇikañca,",
  "ja527:54.2": "Yañcāpi me candasūriyā abhipālayanti;",
  "ja527:54.3": "Na tassa hetu visamaṃ careyyaṃ,",
  "ja527:54.4": "Majjhe sivīnaṃ usabhomhi jāto.",
  "ja527:55.1": "Netā hitā uggato raṭṭhapālo,",
  "ja527:55.2": "Dhammaṃ sivīnaṃ apacāyamāno;",
  "ja527:55.3": "So dhammamevānuvicintayanto,",
  "ja527:55.4": "Tasmā sake cittavase na vatto”.",
  "ja527:56.1": "“Addhā tuvaṃ mahārāja,",
  "ja527:56.2": "niccaṃ abyasanaṃ sivaṃ;",
  "ja527:56.3": "Karissasi ciraṃ rajjaṃ,",
  "ja527:56.4": "paññā hi tava tādisī.",
  "ja527:57.1": "Etaṃ te anumodāma,",
  "ja527:57.2": "yaṃ dhammaṃ nappamajjasi;",
  "ja527:57.3": "Dhammaṃ pamajja khattiyo,",
  "ja527:57.4": "raṭṭhā cavati issaro.",
  "ja527:58.1": "Dhammaṃ cara mahārāja,",
  "ja527:58.2": "mātāpitūsu khattiya;",
  "ja527:58.3": "Idha dhammaṃ caritvāna,",
  "ja527:58.4": "rāja saggaṃ gamissasi.",
  "ja527:59.1": "Dhammaṃ cara mahārāja,",
  "ja527:59.2": "puttadāresu khattiya;",
  "ja527:59.3": "…pe…",
  "ja527:60.1": "Dhammaṃ cara mahārāja,",
  "ja527:60.2": "mittāmaccesu khattiya;",
  "ja527:60.3": "…pe…",
  "ja527:61.1": "Dhammaṃ cara mahārāja,",
  "ja527:61.2": "vāhanesu balesu ca;",
  "ja527:61.3": "…pe…",
  "ja527:62.1": "Dhammaṃ cara mahārāja,",
  "ja527:62.2": "gāmesu nigamesu ca;",
  "ja527:62.3": "…pe…",
  "ja527:63.1": "Dhammaṃ cara mahārāja,",
  "ja527:63.2": "raṭṭhesu janapadesu ca;",
  "ja527:63.3": "…pe…",
  "ja527:64.1": "Dhammaṃ cara mahārāja,",
  "ja527:64.2": "samaṇabrāhmaṇesu ca;",
  "ja527:64.3": "…pe…",
  "ja527:65.1": "Dhammaṃ cara mahārāja,",
  "ja527:65.2": "migapakkhīsu khattiya;",
  "ja527:65.3": "…pe…",
  "ja527:66.1": "Dhammaṃ cara mahārāja,",
  "ja527:66.2": "dhammo ciṇṇo sukhāvaho;",
  "ja527:66.3": "Idha dhammaṃ caritvāna,",
  "ja527:66.4": "rāja saggaṃ gamissasi.",
  "ja527:67.1": "Dhammaṃ cara mahārāja,",
  "ja527:67.2": "saindā devā sabrahmakā;",
  "ja527:67.3": "Suciṇṇena divaṃ pattā,",
  "ja527:67.4": "mā dhammaṃ rāja pāmado”ti.",
  "ja527:68.1": "Ummādantījātakaṃ dutiyaṃ."
}