{
  "ja452:0.1": "Jātaka",
  "ja452:0.2": "Dasakanipāta",
  "ja452:0.3": "Catudvāravagga",
  "ja452:0.4": "14. Bhūripaññajātaka",
  "ja452:1.1": "“Saccaṃ kira tvaṃ api bhūripañña,",
  "ja452:1.2": "Yā tādisī sīri dhitī matī ca;",
  "ja452:1.3": "Na tāyatebhāvavasūpanitaṃ,",
  "ja452:1.4": "Yo yavakaṃ bhuñjasi appasūpaṃ”.",
  "ja452:2.1": "“Sukhaṃ dukkhena paripācayanto,",
  "ja452:2.2": "Kālā kālaṃ vicinaṃ chandachanno;",
  "ja452:2.3": "Atthassa dvārāni avāpuranto,",
  "ja452:2.4": "Tenāhaṃ tussāmi yavodanena.",
  "ja452:3.1": "Kālañca ñatvā abhijīhanāya,",
  "ja452:3.2": "Mantehi atthaṃ paripācayitvā;",
  "ja452:3.3": "Vijambhissaṃ sīhavijambhitāni,",
  "ja452:3.4": "Tāyiddhiyā dakkhasi maṃ punāpi”.",
  "ja452:4.1": "“Sukhīpi heke na karonti pāpaṃ,",
  "ja452:4.2": "Avaṇṇasaṃsaggabhayā puneke;",
  "ja452:4.3": "Pahū samāno vipulatthacintī,",
  "ja452:4.4": "Kiṃkāraṇā me na karosi dukkhaṃ”.",
  "ja452:5.1": "“Na paṇḍitā attasukhassa hetu,",
  "ja452:5.2": "Pāpāni kammāni samācaranti;",
  "ja452:5.3": "Dukkhena phuṭṭhā khalitāpi santā,",
  "ja452:5.4": "Chandā ca dosā na jahanti dhammaṃ”.",
  "ja452:6.1": "“Yena kenaci vaṇṇena,",
  "ja452:6.2": "mudunā dāruṇena vā;",
  "ja452:6.3": "Uddhare dīnamattānaṃ,",
  "ja452:6.4": "pacchā dhammaṃ samācare”.",
  "ja452:7.1": "“Yassa rukkhassa chāyāya,",
  "ja452:7.2": "nisīdeyya sayeyya vā;",
  "ja452:7.3": "Na tassa sākhaṃ bhañjeyya,",
  "ja452:7.4": "mittadubbho hi pāpako.",
  "ja452:8.1": "Yassāpi dhammaṃ puriso vijaññā,",
  "ja452:8.2": "Ye cassa kaṅkhaṃ vinayanti santo;",
  "ja452:8.3": "Taṃ hissa dīpañca parāyanañca,",
  "ja452:8.4": "Na tena mettiṃ jarayetha pañño”.",
  "ja452:9.1": "“Alaso gihī kāmabhogī na sādhu,",
  "ja452:9.2": "Asaññato pabbajito na sādhu;",
  "ja452:9.3": "Rājā na sādhu anisammakārī,",
  "ja452:9.4": "Yo paṇḍito kodhano taṃ na sādhu.",
  "ja452:10.1": "Nisamma khattiyo kayirā,",
  "ja452:10.2": "nānisamma disampati;",
  "ja452:10.3": "Nisammakārino rāja,",
  "ja452:10.4": "yaso kitti ca vaḍḍhatī”ti.",
  "ja452:11.1": "Bhūripaññajātakaṃ cuddasamaṃ."
}