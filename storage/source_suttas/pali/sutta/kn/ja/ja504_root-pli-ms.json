{
  "ja504:0.1": "Jātaka",
  "ja504:0.2": "Vīsatinipāta",
  "ja504:0.3": "Mātaṅgavagga",
  "ja504:0.4": "8. Bhallātiyajātaka",
  "ja504:1.1": "Bhallātiyo nāma ahosi rājā,",
  "ja504:1.2": "Raṭṭhaṃ pahāya migavaṃ acāri so;",
  "ja504:1.3": "Agamā girivaraṃ gandhamādanaṃ,",
  "ja504:1.4": "Supupphitaṃ kimpurisānuciṇṇaṃ.",
  "ja504:2.1": "Sāḷūrasaṃghañca nisedhayitvā,",
  "ja504:2.2": "Dhanuṃ kalāpañca so nikkhipitvā;",
  "ja504:2.3": "Upāgami vacanaṃ vattukāmo,",
  "ja504:2.4": "Yatthaṭṭhitā kimpurisā ahesuṃ.",
  "ja504:3.1": "“Himaccaye hemavatāya tīre,",
  "ja504:3.2": "Kimidhaṭṭhitā mantayavho abhiṇhaṃ;",
  "ja504:3.3": "Pucchāmi vo mānusadehavaṇṇe,",
  "ja504:3.4": "Kathaṃ vo jānanti manussaloke”.",
  "ja504:4.1": "“Mallaṃ giriṃ paṇḍarakaṃ tikūṭaṃ,",
  "ja504:4.2": "Sītodakā anuvicarāma najjo;",
  "ja504:4.3": "Migā manussāva nibhāsavaṇṇā,",
  "ja504:4.4": "Jānanti no kimpurisāti ludda”.",
  "ja504:5.1": "“Sukiccharūpaṃ paridevayavho,",
  "ja504:5.2": "Āliṅgito cāsi piyo piyāya;",
  "ja504:5.3": "Pucchāmi vo mānusadehavaṇṇe,",
  "ja504:5.4": "Kimidha vane rodatha appatītā.",
  "ja504:6.1": "Sukiccharūpaṃ paridevayavho,",
  "ja504:6.2": "Āliṅgito cāsi piyo piyāya;",
  "ja504:6.3": "Pucchāmi vo mānusadehavaṇṇe,",
  "ja504:6.4": "Kimidha vane vilapatha appatītā.",
  "ja504:7.1": "Sukiccharūpaṃ paridevayavho,",
  "ja504:7.2": "Āliṅgito cāsi piyo piyāya;",
  "ja504:7.3": "Pucchāmi vo mānusadehavaṇṇe,",
  "ja504:7.4": "Kimidha vane socatha appatītā”.",
  "ja504:8.1": "“Mayekarattaṃ vippavasimha ludda,",
  "ja504:8.2": "Akāmakā aññamaññaṃ sarantā;",
  "ja504:8.3": "Tamekarattaṃ anutappamānā,",
  "ja504:8.4": "Socāma ‘sā ratti punaṃ na hessati’”.",
  "ja504:9.1": "“Yamekarattaṃ anutappathetaṃ,",
  "ja504:9.2": "Dhanaṃ va naṭṭhaṃ pitaraṃ va petaṃ;",
  "ja504:9.3": "Pucchāmi vo mānusadehavaṇṇe,",
  "ja504:9.4": "Kathaṃ vinā vāsamakappayittha”.",
  "ja504:10.1": "“Yamimaṃ nadiṃ passasi sīghasotaṃ,",
  "ja504:10.2": "Nānādumacchādanaṃ selakūlaṃ;",
  "ja504:10.3": "Taṃ me piyo uttari vassakāle,",
  "ja504:10.4": "Mamañca maññaṃ anubandhatīti.",
  "ja504:11.1": "Ahañca aṅkolakamocināmi,",
  "ja504:11.2": "Atimuttakaṃ sattaliyothikañca;",
  "ja504:11.3": "‘Piyo ca me hehiti mālabhārī,",
  "ja504:11.4": "Ahañca naṃ mālinī ajjhupessaṃ’.",
  "ja504:12.1": "Ahañcidaṃ kuravakamocināmi,",
  "ja504:12.2": "Uddālakā pāṭalisindhuvārakā;",
  "ja504:12.3": "‘Piyo ca me hehiti mālabhārī,",
  "ja504:12.4": "Ahañca naṃ mālinī ajjhupessaṃ’.",
  "ja504:13.1": "Ahañca sālassa supupphitassa,",
  "ja504:13.2": "Oceyya pupphāni karomi mālaṃ;",
  "ja504:13.3": "‘Piyo ca me hehiti mālabhārī,",
  "ja504:13.4": "Ahañca naṃ mālinī ajjhupessaṃ’.",
  "ja504:14.1": "Ahañca sālassa supupphitassa,",
  "ja504:14.2": "Oceyya pupphāni karomi bhāraṃ;",
  "ja504:14.3": "Idañca no hehiti santharatthaṃ,",
  "ja504:14.4": "Yatthajjimaṃ viharissāma rattiṃ.",
  "ja504:15.1": "Ahañca kho agaḷuṃ candanañca,",
  "ja504:15.2": "Silāya piṃsāmi pamattarūpā;",
  "ja504:15.3": "‘Piyo ca me hehiti rositaṅgo,",
  "ja504:15.4": "Ahañca naṃ rositā ajjhupessaṃ’.",
  "ja504:16.1": "Athāgamā salilaṃ sīghasotaṃ,",
  "ja504:16.2": "Nudaṃ sāle salaḷe kaṇṇikāre;",
  "ja504:16.3": "Āpūratha tena muhuttakena,",
  "ja504:16.4": "Sāyaṃ nadī āsi mayā suduttarā.",
  "ja504:17.1": "Ubhosu tīresu mayaṃ tadā ṭhitā,",
  "ja504:17.2": "Sampassantā ubhayo aññamaññaṃ;",
  "ja504:17.3": "Sakimpi rodāma sakiṃ hasāma,",
  "ja504:17.4": "Kicchena no āgamā saṃvarī sā.",
  "ja504:18.1": "Pātova kho uggate sūriyamhi,",
  "ja504:18.2": "Catukkaṃ nadiṃ uttariyāna ludda;",
  "ja504:18.3": "Āliṅgiyā aññamaññaṃ mayaṃ ubho,",
  "ja504:18.4": "Sakimpi rodāma sakiṃ hasāma.",
  "ja504:19.1": "Tīhūnakaṃ sattasatāni ludda,",
  "ja504:19.2": "Yamidha mayaṃ vippavasimha pubbe;",
  "ja504:19.3": "Vassekimaṃ jīvitaṃ bhūmipāla,",
  "ja504:19.4": "Ko nīdha kantāya vinā vaseyya”.",
  "ja504:20.1": "“Āyuñca vo kīvatako nu samma,",
  "ja504:20.2": "Sacepi jānātha vadetha āyuṃ;",
  "ja504:20.3": "Anussavā vuḍḍhato āgamā vā,",
  "ja504:20.4": "Akkhātha me taṃ avikampamānā”.",
  "ja504:21.1": "“Āyuñca no vassasahassaṃ ludda,",
  "ja504:21.2": "Na cantarā pāpako atthi rogo;",
  "ja504:21.3": "Appañca dukkhaṃ sukhameva bhiyyo,",
  "ja504:21.4": "Avītarāgā vijahāma jīvitaṃ”.",
  "ja504:22.1": "“Idañca sutvāna amānusānaṃ,",
  "ja504:22.2": "Bhallātiyo ittara jīvitanti;",
  "ja504:22.3": "Nivattatha na migavaṃ acari,",
  "ja504:22.4": "Adāsi dānāni abhuñji bhoge.",
  "ja504:23.1": "Idañca sutvāna amānusānaṃ,",
  "ja504:23.2": "Sammodatha mā kalahaṃ akattha;",
  "ja504:23.3": "Mā vo tapī attakammāparādho,",
  "ja504:23.4": "Yathāpi te kimpurisekarattaṃ.",
  "ja504:24.1": "Idañca sutvāna amānusānaṃ,",
  "ja504:24.2": "Sammodatha mā vivādaṃ akattha;",
  "ja504:24.3": "Mā vo tapī attakammāparādho,",
  "ja504:24.4": "Yathāpi te kimpurisekarattaṃ”.",
  "ja504:25.1": "“Vividhaṃ adhimanā suṇomahaṃ,",
  "ja504:25.2": "Vacanapathaṃ tava atthasaṃhitaṃ;",
  "ja504:25.3": "Muñcaṃ giraṃ nudaseva me daraṃ,",
  "ja504:25.4": "Samaṇa sukhāvaha jīva me ciran”ti.",
  "ja504:26.1": "Bhallātiyajātakaṃ aṭṭhamaṃ."
}