{
  "ja472:0.1": "Jātaka",
  "ja472:0.2": "Dvādasakanipāta",
  "ja472:0.3": "Cūḷakuṇālavagga",
  "ja472:0.4": "9. Mahāpadumajātaka",
  "ja472:1.1": "“Nādaṭṭhā parato dosaṃ,",
  "ja472:1.2": "aṇuṃthūlāni sabbaso;",
  "ja472:1.3": "Issaro paṇaye daṇḍaṃ,",
  "ja472:1.4": "sāmaṃ appaṭivekkhiya.",
  "ja472:2.1": "Yo ca appaṭivekkhitvā,",
  "ja472:2.2": "daṇḍaṃ kubbati khattiyo;",
  "ja472:2.3": "Sakaṇṭakaṃ so gilati,",
  "ja472:2.4": "jaccandhova samakkhikaṃ.",
  "ja472:3.1": "Adaṇḍiyaṃ daṇḍayati,",
  "ja472:3.2": "daṇḍiyañca adaṇḍiyaṃ;",
  "ja472:3.3": "Andhova visamaṃ maggaṃ,",
  "ja472:3.4": "na jānāti samāsamaṃ.",
  "ja472:4.1": "Yo ca etāni ṭhānāni,",
  "ja472:4.2": "Aṇuṃthūlāni sabbaso;",
  "ja472:4.3": "Sudiṭṭhamanusāseyya,",
  "ja472:4.4": "Sa ve voharitumarahati.",
  "ja472:5.1": "Nekantamudunā sakkā,",
  "ja472:5.2": "Ekantatikhiṇena vā;",
  "ja472:5.3": "Attaṃ mahante ṭhapetuṃ,",
  "ja472:5.4": "Tasmā ubhayamācare.",
  "ja472:6.1": "Paribhūto mudu hoti,",
  "ja472:6.2": "atitikkho ca veravā;",
  "ja472:6.3": "Etañca ubhayaṃ ñatvā,",
  "ja472:6.4": "anumajjhaṃ samācare.",
  "ja472:7.1": "Bahumpi ratto bhāseyya,",
  "ja472:7.2": "duṭṭhopi bahu bhāsati;",
  "ja472:7.3": "Na itthikāraṇā rāja,",
  "ja472:7.4": "puttaṃ ghātetumarahasi”.",
  "ja472:8.1": "“Sabbova loko ekato,",
  "ja472:8.2": "Itthī ca ayamekikā;",
  "ja472:8.3": "Tenāhaṃ paṭipajjissaṃ,",
  "ja472:8.4": "Gacchatha pakkhipatheva taṃ”.",
  "ja472:9.1": "“Anekatāle narake,",
  "ja472:9.2": "gambhīre ca suduttare;",
  "ja472:9.3": "Pātito giriduggasmiṃ,",
  "ja472:9.4": "kena tvaṃ tattha nāmari”.",
  "ja472:10.1": "“Nāgo jātaphaṇo tattha,",
  "ja472:10.2": "thāmavā girisānujo;",
  "ja472:10.3": "Paccaggahi maṃ bhogehi,",
  "ja472:10.4": "tenāhaṃ tattha nāmariṃ”.",
  "ja472:11.1": "“Ehi taṃ paṭinessāmi,",
  "ja472:11.2": "rājaputta sakaṃ gharaṃ;",
  "ja472:11.3": "Rajjaṃ kārehi bhaddante,",
  "ja472:11.4": "kiṃ araññe karissasi”.",
  "ja472:12.1": "“Yathā gilitvā baḷisaṃ,",
  "ja472:12.2": "Uddhareyya salohitaṃ;",
  "ja472:12.3": "Uddharitvā sukhī assa,",
  "ja472:12.4": "Evaṃ passāmi attanaṃ”.",
  "ja472:13.1": "“Kiṃ nu tvaṃ baḷisaṃ brūsi,",
  "ja472:13.2": "kiṃ tvaṃ brūsi salohitaṃ;",
  "ja472:13.3": "Kiṃ nu tvaṃ ubbhataṃ brūsi,",
  "ja472:13.4": "taṃ me akkhāhi pucchito”.",
  "ja472:14.1": "“Kāmāhaṃ baḷisaṃ brūmi,",
  "ja472:14.2": "hatthiassaṃ salohitaṃ;",
  "ja472:14.3": "Cattāhaṃ ubbhataṃ brūmi,",
  "ja472:14.4": "evaṃ jānāhi khattiya”.",
  "ja472:15.1": "“Ciñcamāṇavikā mātā,",
  "ja472:15.2": "devadatto ca me pitā;",
  "ja472:15.3": "Ānando paṇḍito nāgo,",
  "ja472:15.4": "sāriputto ca devatā;",
  "ja472:15.5": "Rājaputto ahaṃ āsiṃ,",
  "ja472:15.6": "evaṃ dhāretha jātakan”ti.",
  "ja472:16.1": "Mahāpadumajātakaṃ navamaṃ."
}