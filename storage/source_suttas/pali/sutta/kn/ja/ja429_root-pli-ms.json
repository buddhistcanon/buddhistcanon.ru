{
  "ja429:0.1": "Jātaka",
  "ja429:0.2": "Navakanipāta",
  "ja429:0.3": "Gijjhavagga",
  "ja429:0.4": "3. Mahāsuvajātaka",
  "ja429:1.1": "“Dumo yadā hoti phalūpapanno,",
  "ja429:1.2": "Bhuñjanti naṃ vihaṅgamā sampatantā;",
  "ja429:1.3": "Khīṇanti ñatvāna dumaṃ phalaccaye,",
  "ja429:1.4": "Disodisaṃ yanti tato vihaṅgamā.",
  "ja429:2.1": "Cara cārikaṃ lohitatuṇḍa māmari,",
  "ja429:2.2": "Kiṃ tvaṃ suva sukkhadumamhi jhāyasi;",
  "ja429:2.3": "Tadiṅgha maṃ brūhi vasantasannibha,",
  "ja429:2.4": "Kasmā suva sukkhadumaṃ na riñcasi”.",
  "ja429:3.1": "“Ye ve sakhīnaṃ sakhāro bhavanti,",
  "ja429:3.2": "Pāṇaccaye dukkhasukhesu haṃsa;",
  "ja429:3.3": "Khīṇaṃ akhīṇampi na taṃ jahanti,",
  "ja429:3.4": "Santo sataṃ dhammamanussarantā.",
  "ja429:4.1": "Sohaṃ sataṃ aññatarosmi haṃsa,",
  "ja429:4.2": "Ñātī ca me hoti sakhā ca rukkho;",
  "ja429:4.3": "Taṃ nussahe jīvikattho pahātuṃ,",
  "ja429:4.4": "Khīṇanti ñatvāna na hesa dhammo”.",
  "ja429:5.1": "“Sādhu sakkhi kataṃ hoti,",
  "ja429:5.2": "metti saṃsati santhavo;",
  "ja429:5.3": "Sacetaṃ dhammaṃ rocesi,",
  "ja429:5.4": "pāsaṃsosi vijānataṃ.",
  "ja429:6.1": "So te suva varaṃ dammi,",
  "ja429:6.2": "pattayāna vihaṅgama;",
  "ja429:6.3": "Varaṃ varassu vakkaṅga,",
  "ja429:6.4": "yaṃ kiñci manasicchasi”.",
  "ja429:7.1": "“Varañca me haṃsa bhavaṃ dadeyya,",
  "ja429:7.2": "Ayañca rukkho punarāyuṃ labhetha;",
  "ja429:7.3": "So sākhavā phalimā saṃvirūḷho,",
  "ja429:7.4": "Madhutthiko tiṭṭhatu sobhamāno”.",
  "ja429:8.1": "“Taṃ passa samma phalimaṃ uḷāraṃ,",
  "ja429:8.2": "Sahāva te hotu udumbarena;",
  "ja429:8.3": "So sākhavā phalimā saṃvirūḷho,",
  "ja429:8.4": "Madhutthiko tiṭṭhatu sobhamāno”.",
  "ja429:9.1": "“Evaṃ sakka sukhī hohi,",
  "ja429:9.2": "saha sabbehi ñātibhi;",
  "ja429:9.3": "Yathāhamajja sukhito,",
  "ja429:9.4": "disvāna saphalaṃ dumaṃ”.",
  "ja429:10.1": "“Suvassa ca varaṃ datvā,",
  "ja429:10.2": "katvāna saphalaṃ dumaṃ;",
  "ja429:10.3": "Pakkāmi saha bhariyāya,",
  "ja429:10.4": "devānaṃ nandanaṃ vanan”ti.",
  "ja429:11.1": "Mahāsuvajātakaṃ tatiyaṃ."
}