{
  "ja449:0.1": "Jātaka",
  "ja449:0.2": "Dasakanipāta",
  "ja449:0.3": "Catudvāravagga",
  "ja449:0.4": "11. Maṭṭhakuṇḍalījātaka",
  "ja449:1.1": "“Alaṅkato maṭṭhakuṇḍalī,",
  "ja449:1.2": "Māladhārī haricandanussado;",
  "ja449:1.3": "Bāhā paggayha kandasi,",
  "ja449:1.4": "Vanamajjhe kiṃ dukkhito tuvaṃ”.",
  "ja449:2.1": "“Sovaṇṇamayo pabhassaro,",
  "ja449:2.2": "Uppanno rathapañjaro mama;",
  "ja449:2.3": "Tassa cakkayugaṃ na vindāmi,",
  "ja449:2.4": "Tena dukkhena jahāmi jīvitaṃ”.",
  "ja449:3.1": "“Sovaṇṇamayaṃ maṇīmayaṃ,",
  "ja449:3.2": "Lohamayaṃ atha rūpiyāmayaṃ;",
  "ja449:3.3": "Pāvada rathaṃ karissāmi te,",
  "ja449:3.4": "Cakkayugaṃ paṭipādayāmi taṃ”.",
  "ja449:4.1": "“So māṇavo tassa pāvadi,",
  "ja449:4.2": "Candasūriyā ubhayettha bhātaro;",
  "ja449:4.3": "Sovaṇṇamayo ratho mama,",
  "ja449:4.4": "Tena cakkayugena sobhati”.",
  "ja449:5.1": "“Bālo kho tvaṃsi māṇava,",
  "ja449:5.2": "Yo tvaṃ patthayase apatthiyaṃ;",
  "ja449:5.3": "Maññāmi tuvaṃ marissasi,",
  "ja449:5.4": "Na hi tvaṃ lacchasi candasūriye”.",
  "ja449:6.1": "“Gamanāgamanampi dissati,",
  "ja449:6.2": "Vaṇṇadhātu ubhayettha vīthiyo;",
  "ja449:6.3": "Peto pana neva dissati,",
  "ja449:6.4": "Ko nu kho kandataṃ bālyataro”.",
  "ja449:7.1": "“Saccaṃ kho vadesi māṇava,",
  "ja449:7.2": "Ahameva kandataṃ bālyataro;",
  "ja449:7.3": "Candaṃ viya dārako rudaṃ,",
  "ja449:7.4": "Petaṃ kālakatābhipatthaye.",
  "ja449:8.1": "Ādittaṃ vata maṃ santaṃ,",
  "ja449:8.2": "ghatasittaṃva pāvakaṃ;",
  "ja449:8.3": "Vārinā viya osiñcaṃ,",
  "ja449:8.4": "sabbaṃ nibbāpaye daraṃ.",
  "ja449:9.1": "Abbahī vata me sallaṃ,",
  "ja449:9.2": "yamāsi hadayassitaṃ;",
  "ja449:9.3": "Yo me sokaparetassa,",
  "ja449:9.4": "puttasokaṃ apānudi.",
  "ja449:10.1": "Sohaṃ abbūḷhasallosmi,",
  "ja449:10.2": "vītasoko anāvilo;",
  "ja449:10.3": "Na socāmi na rodāmi,",
  "ja449:10.4": "tava sutvāna māṇavā”ti.",
  "ja449:11.1": "Maṭṭhakuṇḍalījātakaṃ ekādasamaṃ."
}