{
  "ja407:0.1": "Jātaka",
  "ja407:0.2": "Sattakanipāta",
  "ja407:0.3": "Gandhāravagga",
  "ja407:0.4": "2. Mahākapijātaka",
  "ja407:1.1": "“Attānaṃ saṅkamaṃ katvā,",
  "ja407:1.2": "Yo sotthiṃ samatārayi;",
  "ja407:1.3": "Kiṃ tvaṃ tesaṃ kime tuyhaṃ,",
  "ja407:1.4": "Honti ete mahākapi”.",
  "ja407:2.1": "“Rājāhaṃ issaro tesaṃ,",
  "ja407:2.2": "yūthassa parihārako;",
  "ja407:2.3": "Tesaṃ sokaparetānaṃ,",
  "ja407:2.4": "bhītānaṃ te arindama.",
  "ja407:3.1": "Ullaṅghayitvā attānaṃ,",
  "ja407:3.2": "vissaṭṭhadhanuno sataṃ;",
  "ja407:3.3": "Tato aparapādesu,",
  "ja407:3.4": "daḷhaṃ bandhaṃ latāguṇaṃ.",
  "ja407:4.1": "Chinnabbhamiva vātena,",
  "ja407:4.2": "Nuṇṇo rukkhaṃ upāgamiṃ;",
  "ja407:4.3": "Sohaṃ appabhavaṃ tattha,",
  "ja407:4.4": "Sākhaṃ hatthehi aggahiṃ.",
  "ja407:5.1": "Taṃ maṃ viyāyataṃ santaṃ,",
  "ja407:5.2": "sākhāya ca latāya ca;",
  "ja407:5.3": "Samanukkamantā pādehi,",
  "ja407:5.4": "sotthiṃ sākhāmigā gatā.",
  "ja407:6.1": "Taṃ maṃ na tapate bandho,",
  "ja407:6.2": "mato me na tapessati;",
  "ja407:6.3": "Sukhamāharitaṃ tesaṃ,",
  "ja407:6.4": "yesaṃ rajjamakārayiṃ.",
  "ja407:7.1": "Esā te upamā rāja,",
  "ja407:7.2": "taṃ suṇohi arindama;",
  "ja407:7.3": "Raññā raṭṭhassa yoggassa,",
  "ja407:7.4": "balassa nigamassa ca;",
  "ja407:7.5": "Sabbesaṃ sukhameṭṭhabbaṃ,",
  "ja407:7.6": "khattiyena pajānatā”ti.",
  "ja407:8.1": "Mahākapijātakaṃ dutiyaṃ."
}