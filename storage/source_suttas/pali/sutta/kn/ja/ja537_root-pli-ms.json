{
  "ja537:0.1": "Jātaka",
  "ja537:0.2": "Asītinipāta",
  "ja537:0.3": "Cūḷahaṃsavagga",
  "ja537:0.4": "5. Mahāsutasomajātaka",
  "ja537:1.1": "“Kasmā tuvaṃ rasaka edisāni,",
  "ja537:1.2": "Karosi kammāni sudāruṇāni;",
  "ja537:1.3": "Hanāsi itthī purise ca mūḷho,",
  "ja537:1.4": "Maṃsassa hetu adu dhanassa kāraṇā”.",
  "ja537:2.1": "“Na attahetū na dhanassa kāraṇā,",
  "ja537:2.2": "Na puttadārassa sahāyañātinaṃ;",
  "ja537:2.3": "Bhattā ca me bhagavā bhūmipālo,",
  "ja537:2.4": "So khādati maṃsaṃ bhadantedisaṃ”.",
  "ja537:3.1": "“Sace tuvaṃ bhatturatthe payutto,",
  "ja537:3.2": "Karosi kammāni sudāruṇāni;",
  "ja537:3.3": "Pātova antepuraṃ pāpuṇitvā,",
  "ja537:3.4": "Lapeyyāsi me rājino sammukhe taṃ”.",
  "ja537:4.1": "“Tathā karissāmi ahaṃ bhadante,",
  "ja537:4.2": "Yathā tuvaṃ bhāsasi kāḷahatthi;",
  "ja537:4.3": "Pātova antepuraṃ pāpuṇitvā,",
  "ja537:4.4": "Vakkhāmi te rājino sammukhe taṃ”.",
  "ja537:5.1": "Tato ratyā vivasāne,",
  "ja537:5.2": "sūriyuggamanaṃ pati;",
  "ja537:5.3": "Kāḷo rasakamādāya,",
  "ja537:5.4": "rājānaṃ upasaṅkami;",
  "ja537:5.5": "Upasaṅkamma rājānaṃ,",
  "ja537:5.6": "idaṃ vacanamabravi.",
  "ja537:6.1": "“Saccaṃ kira mahārāja,",
  "ja537:6.2": "rasako pesito tayā;",
  "ja537:6.3": "Hanati itthipurise,",
  "ja537:6.4": "tuvaṃ maṃsāni khādasi”.",
  "ja537:7.1": "“Evameva tathā kāḷa,",
  "ja537:7.2": "rasako pesito mayā;",
  "ja537:7.3": "Mama atthaṃ karontassa,",
  "ja537:7.4": "kimetaṃ paribhāsasi”.",
  "ja537:8.1": "“Ānando sabbamacchānaṃ,",
  "ja537:8.2": "khāditvā rasagiddhimā;",
  "ja537:8.3": "Parikkhīṇāya parisāya,",
  "ja537:8.4": "attānaṃ khādiyā mato.",
  "ja537:9.1": "Evaṃ pamatto rasagārave ratto,",
  "ja537:9.2": "Bālo yadī āyati nāvabujjhati;",
  "ja537:9.3": "Vidhamma putte caji ñātake ca,",
  "ja537:9.4": "Parivattiya attānaññeva khādati.",
  "ja537:10.1": "Idaṃ te sutvāna vigetu chando,",
  "ja537:10.2": "Mā bhakkhayī rāja manussamaṃsaṃ;",
  "ja537:10.3": "Mā tvaṃ imaṃ kevalaṃ vārijova,",
  "ja537:10.4": "Dvipadādhipa suññamakāsi raṭṭhaṃ”.",
  "ja537:11.1": "“Sujāto nāma nāmena,",
  "ja537:11.2": "oraso tassa atrajo;",
  "ja537:11.3": "Jambupesimaladdhāna,",
  "ja537:11.4": "mato so tassa saṅkhaye.",
  "ja537:12.1": "Evameva ahaṃ kāḷa,",
  "ja537:12.2": "bhutvā bhakkhaṃ rasuttamaṃ;",
  "ja537:12.3": "Aladdhā mānusaṃ maṃsaṃ,",
  "ja537:12.4": "maññe hissāmi jīvitaṃ”.",
  "ja537:13.1": "“Māṇava abhirūposi,",
  "ja537:13.2": "kule jātosi sotthiye;",
  "ja537:13.3": "Na tvaṃ arahasi tāta,",
  "ja537:13.4": "abhakkhaṃ bhakkhayetave”.",
  "ja537:14.1": "“Rasānaṃ aññataraṃ etaṃ,",
  "ja537:14.2": "kasmā maṃ tvaṃ nivāraye;",
  "ja537:14.3": "Sohaṃ tattha gamissāmi,",
  "ja537:14.4": "yattha lacchāmi edisaṃ.",
  "ja537:15.1": "Sovāhaṃ nippatissāmi,",
  "ja537:15.2": "na te vacchāmi santike;",
  "ja537:15.3": "Yassa me dassanena tvaṃ,",
  "ja537:15.4": "nābhinandasi brāhmaṇa”.",
  "ja537:16.1": "“Addhā aññepi dāyāde,",
  "ja537:16.2": "putte lacchāma māṇava;",
  "ja537:16.3": "Tvañca jamma vinassassu,",
  "ja537:16.4": "yattha pattaṃ na taṃ suṇe”.",
  "ja537:17.1": "“Evameva tuvaṃ rāja,",
  "ja537:17.2": "dvipadinda suṇohi me;",
  "ja537:17.3": "Pabbājessanti taṃ raṭṭhā,",
  "ja537:17.4": "soṇḍaṃ māṇavakaṃ yathā”.",
  "ja537:18.1": "“Sujāto nāma nāmena,",
  "ja537:18.2": "bhāvitattāna sāvako;",
  "ja537:18.3": "Accharaṃ kāmayantova,",
  "ja537:18.4": "na so bhuñji na so pivi.",
  "ja537:19.1": "Kusaggenudakamādāya,",
  "ja537:19.2": "samudde udakaṃ mine;",
  "ja537:19.3": "Evaṃ mānusakā kāmā,",
  "ja537:19.4": "dibbakāmāna santike.",
  "ja537:20.1": "Evameva ahaṃ kāḷa,",
  "ja537:20.2": "bhutvā bhakkhaṃ rasuttamaṃ;",
  "ja537:20.3": "Aladdhā mānusaṃ maṃsaṃ,",
  "ja537:20.4": "maññe hissāmi jīvitaṃ”.",
  "ja537:21.1": "“Yathāpi te dhataraṭṭhā,",
  "ja537:21.2": "haṃsā vehāyasaṅgamā;",
  "ja537:21.3": "Abhuttaparibhogena,",
  "ja537:21.4": "sabbe abbhatthataṃ gatā.",
  "ja537:22.1": "Evameva tuvaṃ rāja,",
  "ja537:22.2": "dvipadinda suṇohi me;",
  "ja537:22.3": "Abhakkhaṃ rāja bhakkhesi,",
  "ja537:22.4": "tasmā pabbājayanti taṃ”.",
  "ja537:23.1": "“Tiṭṭhāhīti mayā vutto,",
  "ja537:23.2": "So tvaṃ gacchasi pammukho;",
  "ja537:23.3": "Aṭṭhito tvaṃ ṭhitomhīti,",
  "ja537:23.4": "Lapasi brahmacārini;",
  "ja537:23.5": "Idaṃ te samaṇāyuttaṃ,",
  "ja537:23.6": "Asiñca me maññasi kaṅkapattaṃ”.",
  "ja537:24.1": "“Ṭhitohamasmī sadhammesu rāja,",
  "ja537:24.2": "Na nāmagottaṃ parivattayāmi;",
  "ja537:24.3": "Corañca loke aṭhitaṃ vadanti,",
  "ja537:24.4": "Āpāyikaṃ nerayikaṃ ito cutaṃ.",
  "ja537:25.1": "Sace tvaṃ saddahasi rāja,",
  "ja537:25.2": "sutaṃ gaṇhāhi khattiya;",
  "ja537:25.3": "Tena yaññaṃ yajitvāna,",
  "ja537:25.4": "evaṃ saggaṃ gamissasi”.",
  "ja537:26.1": "“Kismiṃ nu raṭṭhe tava jātibhūmi,",
  "ja537:26.2": "Atha kena atthena idhānupatto;",
  "ja537:26.3": "Akkhāhi me brāhmaṇa etamatthaṃ,",
  "ja537:26.4": "Kimicchasī demi tayajja patthitaṃ”.",
  "ja537:27.1": "“Gāthā catasso dharaṇīmahissara,",
  "ja537:27.2": "Sugambhiratthā varasāgarūpamā;",
  "ja537:27.3": "Taveva atthāya idhāgatosmi,",
  "ja537:27.4": "Suṇohi gāthā paramatthasaṃhitā”.",
  "ja537:28.1": "“Na ve rudanti matimanto sapaññā,",
  "ja537:28.2": "Bahussutā ye bahuṭhānacintino;",
  "ja537:28.3": "Dīpañhi etaṃ paramaṃ narānaṃ,",
  "ja537:28.4": "Yaṃ paṇḍitā sokanudā bhavanti.",
  "ja537:29.1": "Attānaṃ ñātī udāhu puttadāraṃ,",
  "ja537:29.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
  "ja537:29.3": "Kimeva tvaṃ sutasomānutappe,",
  "ja537:29.4": "Korabyaseṭṭha vacanaṃ suṇoma tetaṃ”.",
  "ja537:30.1": "“Nevāhamattānamanutthunāmi,",
  "ja537:30.2": "Na puttadāraṃ na dhanaṃ na raṭṭhaṃ;",
  "ja537:30.3": "Satañca dhammo carito purāṇo,",
  "ja537:30.4": "Taṃ saṅkaraṃ brāhmaṇassānutappe.",
  "ja537:31.1": "Kato mayā saṅkaro brāhmaṇena,",
  "ja537:31.2": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:31.3": "Taṃ saṅkaraṃ brāhmaṇasappadāya,",
  "ja537:31.4": "Saccānurakkhī punarāvajissaṃ”.",
  "ja537:32.1": "“Nevāhametaṃ abhisaddahāmi,",
  "ja537:32.2": "Sukhī naro maccumukhā pamutto;",
  "ja537:32.3": "Amittahatthaṃ punarāvajeyya,",
  "ja537:32.4": "Korabyaseṭṭha na hi maṃ upesi.",
  "ja537:33.1": "Mutto tuvaṃ porisādassa hatthā,",
  "ja537:33.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
  "ja537:33.3": "Madhuraṃ piyaṃ jīvitaṃ laddha rāja,",
  "ja537:33.4": "Kuto tuvaṃ ehisi me sakāsaṃ”.",
  "ja537:34.1": "“Mataṃ vareyya parisuddhasīlo,",
  "ja537:34.2": "Na jīvitaṃ garahito pāpadhammo;",
  "ja537:34.3": "Na hi taṃ naraṃ tāyati duggatīhi,",
  "ja537:34.4": "Yassāpi hetu alikaṃ bhaṇeyya.",
  "ja537:35.1": "Sacepi vāto girimāvaheyya,",
  "ja537:35.2": "Cando ca suriyo ca chamā pateyyuṃ;",
  "ja537:35.3": "Sabbā ca najjo paṭisotaṃ vajeyyuṃ,",
  "ja537:35.4": "Na tvevahaṃ rāja musā bhaṇeyyaṃ.",
  "ja537:36.1": "Nabhaṃ phaleyya udadhīpi susse,",
  "ja537:36.2": "Saṃvaṭṭaye bhūtadharā vasundharā;",
  "ja537:36.3": "Siluccayo meru samūlamuppate,",
  "ja537:36.4": "Na tvevahaṃ rāja musā bhaṇeyyaṃ.",
  "ja537:37.1": "Asiñca sattiñca parāmasāmi,",
  "ja537:37.2": "Sapathampi te samma ahaṃ karomi;",
  "ja537:37.3": "Tayā pamutto anaṇo bhavitvā,",
  "ja537:37.4": "Saccānurakkhī punarāvajissaṃ”.",
  "ja537:38.1": "“Yo te kato saṅgaro brāhmaṇena,",
  "ja537:38.2": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:38.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
  "ja537:38.4": "Saccānurakkhī punarāvajassu”.",
  "ja537:39.1": "“Yo me kato saṅgaro brāhmaṇena,",
  "ja537:39.2": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:39.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
  "ja537:39.4": "Saccānurakkhī punarāvajissaṃ”.",
  "ja537:40.1": "Mutto ca so porisādassa hatthā,",
  "ja537:40.2": "Gantvāna taṃ brāhmaṇaṃ etadavoca;",
  "ja537:40.3": "“Suṇoma gāthāyo satārahāyo,",
  "ja537:40.4": "Yā me sutā assu hitāya brahme”.",
  "ja537:41.1": "“Sakideva sutasoma,",
  "ja537:41.2": "sabbhi hoti samāgamo;",
  "ja537:41.3": "Sā naṃ saṅgati pāleti,",
  "ja537:41.4": "nāsabbhi bahu saṅgamo.",
  "ja537:42.1": "Sabbhireva samāsetha,",
  "ja537:42.2": "sabbhi kubbetha santhavaṃ;",
  "ja537:42.3": "Sataṃ saddhammamaññāya,",
  "ja537:42.4": "seyyo hoti na pāpiyo.",
  "ja537:43.1": "Jīranti ve rājarathā sucittā,",
  "ja537:43.2": "Atho sarīrampi jaraṃ upeti;",
  "ja537:43.3": "Satañca dhammo na jaraṃ upeti,",
  "ja537:43.4": "Santo have sabbhi pavedayanti.",
  "ja537:44.1": "Nabhañca dūre pathavī ca dūre,",
  "ja537:44.2": "Pāraṃ samuddassa tadāhu dūre;",
  "ja537:44.3": "Tato have dūrataraṃ vadanti,",
  "ja537:44.4": "Satañca dhammo asatañca rāja”.",
  "ja537:45.1": "“Sahassiyā imā gāthā,",
  "ja537:45.2": "nahimā gāthā satārahā;",
  "ja537:45.3": "Cattāri tvaṃ sahassāni,",
  "ja537:45.4": "khippaṃ gaṇhāhi brāhmaṇa”.",
  "ja537:46.1": "“Āsītiyā nāvutiyā ca gāthā,",
  "ja537:46.2": "Satārahā cāpi bhaveyya gāthā;",
  "ja537:46.3": "Paccattameva sutasoma jānahi,",
  "ja537:46.4": "Sahassiyā nāma kā atthi gāthā”.",
  "ja537:47.1": "“Icchāmi vohaṃ sutavuddhimattano,",
  "ja537:47.2": "Santoti maṃ sappurisā bhajeyyuṃ;",
  "ja537:47.3": "Ahaṃ savantīhi mahodadhīva,",
  "ja537:47.4": "Na hi tāta tappāmi subhāsitena.",
  "ja537:48.1": "Aggi yathā tiṇakaṭṭhaṃ dahanto,",
  "ja537:48.2": "Na tappatī sāgarova nadīhi;",
  "ja537:48.3": "Evampi te paṇḍitā rājaseṭṭha,",
  "ja537:48.4": "Sutvā na tappanti subhāsitena.",
  "ja537:49.1": "Sakassa dāsassa yadā suṇomi,",
  "ja537:49.2": "Gāthaṃ ahaṃ atthavatiṃ janinda;",
  "ja537:49.3": "Tameva sakkacca nisāmayāmi,",
  "ja537:49.4": "Na hi tāta dhammesu mamatthi titti.",
  "ja537:50.1": "Idaṃ te raṭṭhaṃ sadhanaṃ sayoggaṃ,",
  "ja537:50.2": "Sakāyuraṃ sabbakāmūpapannaṃ;",
  "ja537:50.3": "Kiṃ kāmahetu paribhāsasi maṃ,",
  "ja537:50.4": "Gacchāmahaṃ porisādassa ñatte”.",
  "ja537:51.1": "“Attānurakkhāya bhavanti hete,",
  "ja537:51.2": "Hatthārohā rathikā pattikā ca;",
  "ja537:51.3": "Assāruhā ye ca dhanuggahāse,",
  "ja537:51.4": "Senaṃ payuñjāma hanāma sattuṃ”.",
  "ja537:52.1": "“Sudukkaraṃ porisādo akāsi,",
  "ja537:52.2": "Jīvaṃ gahetvāna avassajī maṃ;",
  "ja537:52.3": "Taṃ tādisaṃ pubbakiccaṃ saranto,",
  "ja537:52.4": "Dubbhe ahaṃ tassa kathaṃ janinda”.",
  "ja537:53.1": "Vanditvā so pitaraṃ mātarañca,",
  "ja537:53.2": "Anusāsetvā negamañca balañca;",
  "ja537:53.3": "Saccavādī saccānurakkhamāno,",
  "ja537:53.4": "Agamāsi so yattha porisādo.",
  "ja537:54.1": "“Kato mayā saṅgaro brāhmaṇena,",
  "ja537:54.2": "Raṭṭhe sake issariye ṭhitena;",
  "ja537:54.3": "Taṃ saṅgaraṃ brāhmaṇasappadāya,",
  "ja537:54.4": "Saccānurakkhī punarāgatosmi;",
  "ja537:54.5": "Yajassu yaññaṃ khāda maṃ porisāda”.",
  "ja537:55.1": "“Na hāyate khāditaṃ mayhaṃ pacchā,",
  "ja537:55.2": "Citakā ayaṃ tāva sadhūmikāva;",
  "ja537:55.3": "Niddhūmake pacitaṃ sādhupakkaṃ,",
  "ja537:55.4": "Suṇoma gāthāyo satārahāyo”.",
  "ja537:56.1": "“Adhammiko tvaṃ porisādakāsi,",
  "ja537:56.2": "Raṭṭhā ca bhaṭṭho udarassa hetu;",
  "ja537:56.3": "Dhammañcimā abhivadanti gāthā,",
  "ja537:56.4": "Dhammo ca adhammo ca kuhiṃ sameti.",
  "ja537:57.1": "Adhammikassa luddassa,",
  "ja537:57.2": "niccaṃ lohitapāṇino;",
  "ja537:57.3": "Natthi saccaṃ kuto dhammo,",
  "ja537:57.4": "kiṃ sutena karissasi”.",
  "ja537:58.1": "“Yo maṃsahetu migavaṃ careyya,",
  "ja537:58.2": "Yo vā hane purisamattahetu;",
  "ja537:58.3": "Ubhopi te pecca samā bhavanti,",
  "ja537:58.4": "Kasmā no adhammikaṃ brūsi maṃ tvaṃ”.",
  "ja537:59.1": "“Pañca pañca na khā bhakkhā,",
  "ja537:59.2": "khattiyena pajānatā;",
  "ja537:59.3": "Abhakkhaṃ rāja bhakkhesi,",
  "ja537:59.4": "tasmā adhammiko tuvaṃ”.",
  "ja537:60.1": "“Mutto tuvaṃ porisādassa hatthā,",
  "ja537:60.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
  "ja537:60.3": "Amittahatthaṃ punarāgatosi,",
  "ja537:60.4": "Na khattadhamme kusalosi rāja”.",
  "ja537:61.1": "“Ye khattadhamme kusalā bhavanti,",
  "ja537:61.2": "Pāyena te nerayikā bhavanti;",
  "ja537:61.3": "Tasmā ahaṃ khattadhammaṃ pahāya,",
  "ja537:61.4": "Saccānurakkhī punarāgatosmi;",
  "ja537:61.5": "Yajassu yaññaṃ khāda maṃ porisāda”.",
  "ja537:62.1": "“Pāsādavāsā pathavīgavāssā,",
  "ja537:62.2": "Kāmitthiyo kāsikacandanañca;",
  "ja537:62.3": "Sabbaṃ tahiṃ labhasi sāmitāya,",
  "ja537:62.4": "Saccena kiṃ passasi ānisaṃsaṃ”.",
  "ja537:63.1": "“Ye kecime atthi rasā pathabyā,",
  "ja537:63.2": "Saccaṃ tesaṃ sādhutaraṃ rasānaṃ;",
  "ja537:63.3": "Sacce ṭhitā samaṇabrāhmaṇā ca,",
  "ja537:63.4": "Taranti jātimaraṇassa pāraṃ”.",
  "ja537:64.1": "“Mutto tuvaṃ porisādassa hatthā,",
  "ja537:64.2": "Gantvā sakaṃ mandiraṃ kāmakāmī;",
  "ja537:64.3": "Amittahatthaṃ punarāgatosi,",
  "ja537:64.4": "Na hi nūna te maraṇabhayaṃ janinda;",
  "ja537:64.5": "Alīnacitto asi saccavādī”.",
  "ja537:65.1": "“Katā me kalyāṇā anekarūpā,",
  "ja537:65.2": "Yaññā yiṭṭhā ye vipulā pasatthā;",
  "ja537:65.3": "Visodhito paralokassa maggo,",
  "ja537:65.4": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:66.1": "Katā me kalyāṇā anekarūpā,",
  "ja537:66.2": "Yaññā yiṭṭhā ye vipulā pasatthā;",
  "ja537:66.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
  "ja537:66.4": "Yajassu yaññaṃ ada maṃ porisāda.",
  "ja537:67.1": "Pitā ca mātā ca upaṭṭhitā me,",
  "ja537:67.2": "Dhammena me issariyaṃ pasatthaṃ;",
  "ja537:67.3": "Visodhito paralokassa maggo,",
  "ja537:67.4": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:68.1": "Pitā ca mātā ca upaṭṭhitā me,",
  "ja537:68.2": "Dhammena me issariyaṃ pasatthaṃ;",
  "ja537:68.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
  "ja537:68.4": "Yajassu yaññaṃ ada maṃ porisāda.",
  "ja537:69.1": "Ñātīsu mittesu katā me kārā,",
  "ja537:69.2": "Dhammena me issariyaṃ pasatthaṃ;",
  "ja537:69.3": "Visodhito paralokassa maggo,",
  "ja537:69.4": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:70.1": "Ñātīsu mittesu katā me kārā,",
  "ja537:70.2": "Dhammena me issariyaṃ pasatthaṃ;",
  "ja537:70.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
  "ja537:70.4": "Yajassu yaññaṃ ada maṃ porisāda.",
  "ja537:71.1": "Dinnaṃ me dānaṃ bahudhā bahūnaṃ,",
  "ja537:71.2": "Santappitā samaṇabrāhmaṇā ca;",
  "ja537:71.3": "Visodhito paralokassa maggo,",
  "ja537:71.4": "Dhamme ṭhito ko maraṇassa bhāye.",
  "ja537:72.1": "Dinnaṃ me dānaṃ bahudhā bahūnaṃ,",
  "ja537:72.2": "Santappitā samaṇabrāhmaṇā ca;",
  "ja537:72.3": "Anānutappaṃ paralokaṃ gamissaṃ,",
  "ja537:72.4": "Yajassu yaññaṃ ada maṃ porisāda”.",
  "ja537:73.1": "“Visaṃ pajānaṃ puriso adeyya,",
  "ja537:73.2": "Āsīvisaṃ jalitamuggatejaṃ;",
  "ja537:73.3": "Muddhāpi tassa viphaleyya sattadhā,",
  "ja537:73.4": "Yo tādisaṃ saccavādiṃ adeyya.",
  "ja537:74.1": "Sutvā dhammaṃ vijānanti,",
  "ja537:74.2": "Narā kalyāṇapāpakaṃ;",
  "ja537:74.3": "Api gāthā suṇitvāna,",
  "ja537:74.4": "Dhamme me ramate mano”.",
  "ja537:75.1": "“Sakideva mahārāja,",
  "ja537:75.2": "sabbhi hoti samāgamo;",
  "ja537:75.3": "Sā naṃ saṅgati pāleti,",
  "ja537:75.4": "nāsabbhi bahu saṅgamo.",
  "ja537:76.1": "Sabbhireva samāsetha,",
  "ja537:76.2": "sabbhi kubbetha santhavaṃ;",
  "ja537:76.3": "Sataṃ saddhammamaññāya,",
  "ja537:76.4": "seyyo hoti na pāpiyo.",
  "ja537:77.1": "Jīranti ve rājarathā sucittā,",
  "ja537:77.2": "Atho sarīrampi jaraṃ upeti;",
  "ja537:77.3": "Satañca dhammo na jaraṃ upeti,",
  "ja537:77.4": "Santo have sabbhi pavedayanti.",
  "ja537:78.1": "Nabhañca dūre pathavī ca dūre,",
  "ja537:78.2": "Pāraṃ samuddassa tadāhu dūre;",
  "ja537:78.3": "Tato have dūrataraṃ vadanti,",
  "ja537:78.4": "Satañca dhammo asatañca rāja”.",
  "ja537:79.1": "“Gāthā imā atthavatī subyañjanā,",
  "ja537:79.2": "Subhāsitā tuyha janinda sutvā;",
  "ja537:79.3": "Ānandi vitto sumano patīto,",
  "ja537:79.4": "Cattāri te samma vare dadāmi”.",
  "ja537:80.1": "“Yo nattano maraṇaṃ bujjhasi tuvaṃ,",
  "ja537:80.2": "Hitāhitaṃ vinipātañca saggaṃ;",
  "ja537:80.3": "Giddho rase duccarite niviṭṭho,",
  "ja537:80.4": "Kiṃ tvaṃ varaṃ dassasi pāpadhamma.",
  "ja537:81.1": "Ahañca taṃ dehi varanti vajjaṃ,",
  "ja537:81.2": "Tvañcāpi datvāna avākareyya;",
  "ja537:81.3": "Sandiṭṭhikaṃ kalahamimaṃ vivādaṃ,",
  "ja537:81.4": "Ko paṇḍito jānamupabbajeyya”.",
  "ja537:82.1": "“Na taṃ varaṃ arahati jantu dātuṃ,",
  "ja537:82.2": "Yaṃ vāpi datvāna avākareyya;",
  "ja537:82.3": "Varassu samma avikampamāno,",
  "ja537:82.4": "Pāṇaṃ cajitvānapi dassameva”.",
  "ja537:83.1": "“Ariyassa ariyena sameti sakhyaṃ,",
  "ja537:83.2": "Paññassa paññāṇavatā sameti;",
  "ja537:83.3": "Passeyya taṃ vassasataṃ arogaṃ,",
  "ja537:83.4": "Etaṃ varānaṃ paṭhamaṃ varāmi”.",
  "ja537:84.1": "“Ariyassa ariyena sameti sakhyaṃ,",
  "ja537:84.2": "Paññassa paññāṇavatā sameti;",
  "ja537:84.3": "Passāsi maṃ vassasataṃ arogaṃ,",
  "ja537:84.4": "Etaṃ varānaṃ paṭhamaṃ dadāmi”.",
  "ja537:85.1": "“Ye khattiyāse idha bhūmipālā,",
  "ja537:85.2": "Muddhābhisittā katanāmadheyyā;",
  "ja537:85.3": "Na tādise bhūmipatī adesi,",
  "ja537:85.4": "Etaṃ varānaṃ dutiyaṃ varāmi”.",
  "ja537:86.1": "“Ye khattiyāse idha bhūmipālā,",
  "ja537:86.2": "Muddhābhisittā katanāmadheyyā;",
  "ja537:86.3": "Na tādise bhūmipatī ademi,",
  "ja537:86.4": "Etaṃ varānaṃ dutiyaṃ dadāmi”.",
  "ja537:87.1": "“Parosataṃ khattiyā te gahitā,",
  "ja537:87.2": "Talāvutā assumukhā rudantā;",
  "ja537:87.3": "Sake te raṭṭhe paṭipādayāhi,",
  "ja537:87.4": "Etaṃ varānaṃ tatiyaṃ varāmi”.",
  "ja537:88.1": "“Parosataṃ khattiyā me gahitā,",
  "ja537:88.2": "Talāvutā assumukhā rudantā;",
  "ja537:88.3": "Sake te raṭṭhe paṭipādayāmi,",
  "ja537:88.4": "Etaṃ varānaṃ tatiyaṃ dadāmi”.",
  "ja537:89.1": "“Chiddaṃ te raṭṭhaṃ byathitā bhayā hi,",
  "ja537:89.2": "Puthū narā leṇamanuppaviṭṭhā;",
  "ja537:89.3": "Manussamaṃsaṃ viramehi rāja,",
  "ja537:89.4": "Etaṃ varānaṃ catutthaṃ varāmi”.",
  "ja537:90.1": "“Addhā hi so bhakkho mama manāpo,",
  "ja537:90.2": "Etassa hetumhi vanaṃ paviṭṭho;",
  "ja537:90.3": "Sohaṃ kathaṃ etto upārameyyaṃ,",
  "ja537:90.4": "Aññaṃ varānaṃ catutthaṃ varassu”.",
  "ja537:91.1": "“Na ve piyaṃ meti janinda tādiso,",
  "ja537:91.2": "Attaṃ niraṃkacca piyāni sevati;",
  "ja537:91.3": "Attāva seyyo paramā ca seyyo,",
  "ja537:91.4": "Labbhā piyā ocitatthena pacchā”.",
  "ja537:92.1": "“Piyaṃ me mānusaṃ maṃsaṃ,",
  "ja537:92.2": "Sutasoma vijānahi;",
  "ja537:92.3": "Namhi sakkā nivāretuṃ,",
  "ja537:92.4": "Aññaṃ varaṃ samma varassu”.",
  "ja537:93.1": "“Yo ve piyaṃ meti piyānurakkhī,",
  "ja537:93.2": "Attaṃ niraṃkacca piyāni sevati;",
  "ja537:93.3": "Soṇḍova pitvā visamissapānaṃ,",
  "ja537:93.4": "Teneva so hoti dukkhī parattha.",
  "ja537:94.1": "Yo cīdha saṅkhāya piyāni hitvā,",
  "ja537:94.2": "Kicchenapi sevati ariyadhamme;",
  "ja537:94.3": "Dukkhitova pitvāna yathosadhāni,",
  "ja537:94.4": "Teneva so hoti sukhī parattha”.",
  "ja537:95.1": "“Ohāyahaṃ pitaraṃ mātarañca,",
  "ja537:95.2": "Manāpiye kāmaguṇe ca pañca;",
  "ja537:95.3": "Etassa hetumhi vanaṃ paviṭṭho,",
  "ja537:95.4": "Taṃ te varaṃ kinti mahaṃ dadāmi”.",
  "ja537:96.1": "“Na paṇḍitā diguṇamāhu vākyaṃ,",
  "ja537:96.2": "Saccappaṭiññāva bhavanti santo;",
  "ja537:96.3": "Varassu samma iti maṃ avoca,",
  "ja537:96.4": "Iccabravī tvaṃ na hi te sameti”.",
  "ja537:97.1": "“Apuññalābhaṃ ayasaṃ akittiṃ,",
  "ja537:97.2": "Pāpaṃ bahuṃ duccaritaṃ kilesaṃ;",
  "ja537:97.3": "Manussamaṃsassa kate upāgā,",
  "ja537:97.4": "Taṃ te varaṃ kinti mahaṃ dadeyyaṃ”.",
  "ja537:98.1": "“Na taṃ varaṃ arahati jantu dātuṃ,",
  "ja537:98.2": "Yaṃ vāpi datvāna avākareyya;",
  "ja537:98.3": "Varassu samma avikampamāno,",
  "ja537:98.4": "Pāṇaṃ cajitvānapi dassameva.",
  "ja537:99.1": "Pāṇaṃ cajanti santo nāpi dhammaṃ,",
  "ja537:99.2": "Saccappaṭiññāva bhavanti santo;",
  "ja537:99.3": "Datvā varaṃ khippamavākarohi,",
  "ja537:99.4": "Etena sampajja surājaseṭṭha.",
  "ja537:100.1": "Caje dhanaṃ aṅgavarassa hetu,",
  "ja537:100.2": "Aṅgaṃ caje jīvitaṃ rakkhamāno;",
  "ja537:100.3": "Aṅgaṃ dhanaṃ jīvitañcāpi sabbaṃ,",
  "ja537:100.4": "Caje naro dhammamanussaranto.",
  "ja537:101.1": "Yasmā hi dhammaṃ puriso vijaññā,",
  "ja537:101.2": "Ye cassa kaṅkhaṃ vinayanti santo;",
  "ja537:101.3": "Taṃ hissa dīpañca parāyaṇañca,",
  "ja537:101.4": "Na tena mittiṃ jirayetha pañño”.",
  "ja537:102.1": "“Addhā hi so bhakkho mama manāpo,",
  "ja537:102.2": "Etassa hetumhi vanaṃ paviṭṭho;",
  "ja537:102.3": "Sace ca maṃ yācasi etamatthaṃ,",
  "ja537:102.4": "Etampi te samma varaṃ dadāmi.",
  "ja537:103.1": "Satthā ca me hosi sakhā ca mesi,",
  "ja537:103.2": "Vacanampi te samma ahaṃ akāsiṃ;",
  "ja537:103.3": "Tuvampi me samma karohi vākyaṃ,",
  "ja537:103.4": "Ubhopi gantvāna pamocayāma”.",
  "ja537:104.1": "“Satthā ca te homi sakhā ca tyamhi,",
  "ja537:104.2": "Vacanampi me samma tuvaṃ akāsi;",
  "ja537:104.3": "Ahampi te samma karomi vākyaṃ,",
  "ja537:104.4": "Ubhopi gantvāna pamocayāma”.",
  "ja537:105.1": "“Kammāsapādena viheṭhitattha,",
  "ja537:105.2": "Talāvutā assumukhā rudantā;",
  "ja537:105.3": "Na jātu dubbhetha imassa rañño,",
  "ja537:105.4": "Saccappaṭiññaṃ me paṭissuṇātha”.",
  "ja537:106.1": "“Kammāsapādena viheṭhitamhā,",
  "ja537:106.2": "Talāvutā assumukhā rudantā;",
  "ja537:106.3": "Na jātu dubbhema imassa rañño,",
  "ja537:106.4": "Saccappaṭiññaṃ te paṭissuṇāma”.",
  "ja537:107.1": "“Yathā pitā vā atha vāpi mātā,",
  "ja537:107.2": "Anukampakā atthakāmā pajānaṃ;",
  "ja537:107.3": "Evameva vo hotu ayañca rājā,",
  "ja537:107.4": "Tumhe ca vo hotha yatheva puttā”.",
  "ja537:108.1": "“Yathā pitā vā atha vāpi mātā,",
  "ja537:108.2": "Anukampakā atthakāmā pajānaṃ;",
  "ja537:108.3": "Evameva no hotu ayañca rājā,",
  "ja537:108.4": "Mayampi hessāma yatheva puttā”.",
  "ja537:109.1": "“Catuppadaṃ sakuṇañcāpi maṃsaṃ,",
  "ja537:109.2": "Sūdehi randhaṃ sukataṃ suniṭṭhitaṃ;",
  "ja537:109.3": "Sudhaṃva indo paribhuñjiyāna,",
  "ja537:109.4": "Hitvā katheko ramasī araññe.",
  "ja537:110.1": "Tā khattiyā vallivilākamajjhā,",
  "ja537:110.2": "Alaṅkatā samparivārayitvā;",
  "ja537:110.3": "Indaṃva devesu pamodayiṃsu,",
  "ja537:110.4": "Hitvā katheko ramasī araññe.",
  "ja537:111.1": "Tambūpadhāne bahugoṇakamhi,",
  "ja537:111.2": "Subhamhi sabbassayanamhi saṅge;",
  "ja537:111.3": "Seyyassa majjhamhi sukhaṃ sayitvā,",
  "ja537:111.4": "Hitvā katheko ramasī araññe.",
  "ja537:112.1": "Pāṇissaraṃ kumbhathūṇaṃ nisīthe,",
  "ja537:112.2": "Athopi ve nippurisampi tūriyaṃ;",
  "ja537:112.3": "Bahuṃ sugītañca suvāditañca,",
  "ja537:112.4": "Hitvā katheko ramasī araññe.",
  "ja537:113.1": "Uyyānasampannaṃ pahūtamālyaṃ,",
  "ja537:113.2": "Migājinūpetapuraṃ surammaṃ;",
  "ja537:113.3": "Hayehi nāgehi rathehupetaṃ,",
  "ja537:113.4": "Hitvā katheko ramasī araññe”.",
  "ja537:114.1": "“Kāḷapakkhe yathā cando,",
  "ja537:114.2": "hāyateva suve suve;",
  "ja537:114.3": "Kāḷapakkhūpamo rāja,",
  "ja537:114.4": "asataṃ hoti samāgamo.",
  "ja537:115.1": "Yathāhaṃ rasakamāgamma,",
  "ja537:115.2": "sūdaṃ kāpurisādhamaṃ;",
  "ja537:115.3": "Akāsiṃ pāpakaṃ kammaṃ,",
  "ja537:115.4": "yena gacchāmi duggatiṃ.",
  "ja537:116.1": "Sukkapakkhe yathā cando,",
  "ja537:116.2": "vaḍḍhateva suve suve;",
  "ja537:116.3": "Sukkapakkhūpamo rāja,",
  "ja537:116.4": "sataṃ hoti samāgamo.",
  "ja537:117.1": "Yathāhaṃ tuvamāgamma,",
  "ja537:117.2": "sutasoma vijānahi;",
  "ja537:117.3": "Kāhāmi kusalaṃ kammaṃ,",
  "ja537:117.4": "yena gacchāmi suggatiṃ.",
  "ja537:118.1": "Thale yathā vāri janinda vuṭṭhaṃ,",
  "ja537:118.2": "Anaddhaneyyaṃ na ciraṭṭhitīkaṃ;",
  "ja537:118.3": "Evampi hoti asataṃ samāgamo,",
  "ja537:118.4": "Anaddhaneyyo udakaṃ thaleva.",
  "ja537:119.1": "Sare yathā vāri janinda vuṭṭhaṃ,",
  "ja537:119.2": "Ciraṭṭhitīkaṃ naravīraseṭṭha;",
  "ja537:119.3": "Evampi ve hoti sataṃ samāgamo,",
  "ja537:119.4": "Ciraṭṭhitīko udakaṃ sareva.",
  "ja537:120.1": "Abyāyiko hoti sataṃ samāgamo,",
  "ja537:120.2": "Yāvampi tiṭṭheyya tatheva hoti;",
  "ja537:120.3": "Khippañhi veti asataṃ samāgamo,",
  "ja537:120.4": "Tasmā sataṃ dhammo asabbhi ārakā”.",
  "ja537:121.1": "“Na so rājā yo ajeyyaṃ jināti,",
  "ja537:121.2": "Na so sakhā yo sakhāraṃ jināti;",
  "ja537:121.3": "Na sā bhariyā yā patino na vibheti,",
  "ja537:121.4": "Na te puttā ye na bharanti jiṇṇaṃ.",
  "ja537:122.1": "Na sā sabhā yattha na santi santo,",
  "ja537:122.2": "Na te santo ye na bhaṇanti dhammaṃ;",
  "ja537:122.3": "Rāgañca dosañca pahāya mohaṃ,",
  "ja537:122.4": "Dhammaṃ bhaṇantāva bhavanti santo.",
  "ja537:123.1": "Nābhāsamānaṃ jānanti,",
  "ja537:123.2": "missaṃ bālehi paṇḍitaṃ;",
  "ja537:123.3": "Bhāsamānañca jānanti,",
  "ja537:123.4": "desentaṃ amataṃ padaṃ.",
  "ja537:124.1": "Bhāsaye jotaye dhammaṃ,",
  "ja537:124.2": "Paggaṇhe isinaṃ dhajaṃ;",
  "ja537:124.3": "Subhāsitaddhajā isayo,",
  "ja537:124.4": "Dhammo hi isinaṃ dhajo”ti. (4212)",
  "ja537:125.1": "Mahāsutasomajātakaṃ pañcamaṃ.",
  "ja537:126.1": "Asītinipātaṃ niṭṭhitaṃ.",
  "ja537:127.1": "Tassuddānaṃ",
  "ja537:128.1": "Sumukho pana haṃsavaro ca mahā,",
  "ja537:128.2": "Sudhabhojaniko ca paro pavaro;",
  "ja537:128.3": "Sakuṇāladijādhipativhayano,",
  "ja537:128.4": "Sutasomavaruttamasavhayanoti."
}