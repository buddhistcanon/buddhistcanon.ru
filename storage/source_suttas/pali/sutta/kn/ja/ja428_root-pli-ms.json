{
  "ja428:0.1": "Jātaka",
  "ja428:0.2": "Navakanipāta",
  "ja428:0.3": "Gijjhavagga",
  "ja428:0.4": "2. Kosambiyajātaka",
  "ja428:1.1": "“Puthusaddo samajano,",
  "ja428:1.2": "na bālo koci maññatha;",
  "ja428:1.3": "Saṃghasmiṃ bhijjamānasmiṃ,",
  "ja428:1.4": "nāññaṃ bhiyyo amaññaruṃ.",
  "ja428:2.1": "Parimuṭṭhā paṇḍitābhāsā,",
  "ja428:2.2": "vācāgocarabhāṇino;",
  "ja428:2.3": "Yāvicchanti mukhāyāmaṃ,",
  "ja428:2.4": "yena nītā na taṃ vidū.",
  "ja428:3.1": "Akkocchi maṃ avadhi maṃ,",
  "ja428:3.2": "ajini maṃ ahāsi me;",
  "ja428:3.3": "Ye ca taṃ upanayhanti,",
  "ja428:3.4": "veraṃ tesaṃ na sammati.",
  "ja428:4.1": "Akkocchi maṃ avadhi maṃ,",
  "ja428:4.2": "ajini maṃ ahāsi me;",
  "ja428:4.3": "Ye ca taṃ nupanayhanti,",
  "ja428:4.4": "veraṃ tesūpasammati.",
  "ja428:5.1": "Na hi verena verāni,",
  "ja428:5.2": "sammantīdha kudācanaṃ;",
  "ja428:5.3": "Averena ca sammanti,",
  "ja428:5.4": "esa dhammo sanantano.",
  "ja428:6.1": "Pare ca na vijānanti,",
  "ja428:6.2": "mayamettha yamāmase;",
  "ja428:6.3": "Ye ca tattha vijānanti,",
  "ja428:6.4": "tato sammanti medhagā.",
  "ja428:7.1": "Aṭṭhicchinnā pāṇaharā,",
  "ja428:7.2": "gavāssa dhanahārino;",
  "ja428:7.3": "Raṭṭhaṃ vilumpamānānaṃ,",
  "ja428:7.4": "tesampi hoti saṅgati;",
  "ja428:7.5": "Kasmā tumhāka no siyā.",
  "ja428:8.1": "Sace labhetha nipakaṃ sahāyaṃ,",
  "ja428:8.2": "Saddhiṃ caraṃ sādhuvihāridhīraṃ;",
  "ja428:8.3": "Abhibhuyya sabbāni parissayāni,",
  "ja428:8.4": "Careyya tenattamano satīmā.",
  "ja428:9.1": "No ce labhetha nipakaṃ sahāyaṃ,",
  "ja428:9.2": "Saddhiṃ caraṃ sādhuvihāridhīraṃ;",
  "ja428:9.3": "Rājāva raṭṭhaṃ vijitaṃ pahāya,",
  "ja428:9.4": "Eko care mātaṅgaraññeva nāgo.",
  "ja428:10.1": "Ekassa caritaṃ seyyo,",
  "ja428:10.2": "Natthi bāle sahāyatā;",
  "ja428:10.3": "Eko care na pāpāni kayirā,",
  "ja428:10.4": "Appossukko mātaṅgaraññeva nāgo”ti.",
  "ja428:11.1": "Kosambiyajātakaṃ dutiyaṃ."
}