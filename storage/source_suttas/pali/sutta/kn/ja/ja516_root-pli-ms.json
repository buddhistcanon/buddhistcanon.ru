{
  "ja516:0.1": "Jātaka",
  "ja516:0.2": "Tiṃsanipāta",
  "ja516:0.3": "Kiṃchandavagga",
  "ja516:0.4": "6. Mahākapijātaka",
  "ja516:1.1": "Bārāṇasyaṃ ahū rājā,",
  "ja516:1.2": "kāsīnaṃ raṭṭhavaḍḍhano;",
  "ja516:1.3": "Mittāmaccaparibyūḷho,",
  "ja516:1.4": "agamāsi migājinaṃ.",
  "ja516:2.1": "Tattha brāhmaṇamaddakkhi,",
  "ja516:2.2": "setaṃ citraṃ kilāsinaṃ;",
  "ja516:2.3": "Viddhastaṃ koviḷāraṃva,",
  "ja516:2.4": "kisaṃ dhamanisanthataṃ.",
  "ja516:3.1": "Paramakāruññataṃ pattaṃ,",
  "ja516:3.2": "disvā kicchagataṃ naraṃ;",
  "ja516:3.3": "Avaca byamhito rājā,",
  "ja516:3.4": "“yakkhānaṃ katamo nusi.",
  "ja516:4.1": "Hatthapādā ca te setā,",
  "ja516:4.2": "tato setataraṃ siro;",
  "ja516:4.3": "Gattaṃ kammāsavaṇṇaṃ te,",
  "ja516:4.4": "kilāsabahulo casi.",
  "ja516:5.1": "Vaṭṭanāvaḷi saṅkāsā,",
  "ja516:5.2": "piṭṭhi te ninnatunnatā;",
  "ja516:5.3": "Kāḷapabbāva te aṅgā,",
  "ja516:5.4": "nāññaṃ passāmi edisaṃ.",
  "ja516:6.1": "Ugghaṭṭapādo tasito,",
  "ja516:6.2": "kiso dhamanisanthato;",
  "ja516:6.3": "Chāto ātattarūposi,",
  "ja516:6.4": "kutosi kattha gacchasi.",
  "ja516:7.1": "Duddasī appakārosi,",
  "ja516:7.2": "dubbaṇṇo bhīmadassano;",
  "ja516:7.3": "Janetti yāpi te mātā,",
  "ja516:7.4": "na taṃ iccheyya passituṃ.",
  "ja516:8.1": "Kiṃ kammamakaraṃ pubbe,",
  "ja516:8.2": "Kaṃ avajjhaṃ aghātayi;",
  "ja516:8.3": "Kibbisaṃ yaṃ karitvāna,",
  "ja516:8.4": "Idaṃ dukkhaṃ upāgami”.",
  "ja516:9.1": "“Taggha te ahamakkhissaṃ,",
  "ja516:9.2": "yathāpi kusalo tathā;",
  "ja516:9.3": "Saccavādiñhi lokasmiṃ,",
  "ja516:9.4": "pasaṃsantīdha paṇḍitā.",
  "ja516:10.1": "Eko caraṃ gogaveso,",
  "ja516:10.2": "mūḷho accasariṃ vane;",
  "ja516:10.3": "Araññe irīṇe vivane,",
  "ja516:10.4": "nānākuñjarasevite.",
  "ja516:11.1": "Vāḷamigānucarite,",
  "ja516:11.2": "vippanaṭṭhosmi kānane;",
  "ja516:11.3": "Acariṃ tattha sattāhaṃ,",
  "ja516:11.4": "khuppipāsasamappito.",
  "ja516:12.1": "Tattha tindukamaddakkhiṃ,",
  "ja516:12.2": "visamaṭṭhaṃ bubhukkhito;",
  "ja516:12.3": "Papātamabhilambantaṃ,",
  "ja516:12.4": "sampannaphaladhārinaṃ.",
  "ja516:13.1": "Vātassitāni bhakkhesiṃ,",
  "ja516:13.2": "tāni rucciṃsu me bhusaṃ;",
  "ja516:13.3": "Atitto rukkhamārūhiṃ,",
  "ja516:13.4": "tattha hessāmi āsito.",
  "ja516:14.1": "Ekaṃ me bhakkhitaṃ āsi,",
  "ja516:14.2": "dutiyaṃ abhipatthitaṃ;",
  "ja516:14.3": "Tato sā bhañjatha sākhā,",
  "ja516:14.4": "chinnā pharasunā viya.",
  "ja516:15.1": "Sohaṃ sahāva sākhāhi,",
  "ja516:15.2": "uddhampādo avaṃsiro;",
  "ja516:15.3": "Appatiṭṭhe anālambe,",
  "ja516:15.4": "giriduggasmi pāpataṃ.",
  "ja516:16.1": "Yasmā ca vāri gambhīraṃ,",
  "ja516:16.2": "tasmā na samapajjisaṃ;",
  "ja516:16.3": "Tattha sesiṃ nirānando,",
  "ja516:16.4": "anūnā dasa rattiyo.",
  "ja516:17.1": "Athettha kapi māgañchi,",
  "ja516:17.2": "gonaṅgulo darīcaro;",
  "ja516:17.3": "Sākhāhi sākhaṃ vicaranto,",
  "ja516:17.4": "khādamāno dumapphalaṃ.",
  "ja516:18.1": "So maṃ disvā kisaṃ paṇḍuṃ,",
  "ja516:18.2": "kāruññamakaraṃ mayi;",
  "ja516:18.3": "Ambho ko nāma so ettha,",
  "ja516:18.4": "evaṃ dukkhena aṭṭito.",
  "ja516:19.1": "Manusso amanusso vā,",
  "ja516:19.2": "attānaṃ me pavedaya;",
  "ja516:19.3": "Tassañjaliṃ paṇāmetvā,",
  "ja516:19.4": "idaṃ vacanamabraviṃ.",
  "ja516:20.1": "Manussohaṃ byasampatto,",
  "ja516:20.2": "sā me natthi ito gati;",
  "ja516:20.3": "Taṃ vo vadāmi bhaddaṃ vo,",
  "ja516:20.4": "tvañca me saraṇaṃ bhava.",
  "ja516:21.1": "Garuṃ silaṃ gahetvāna,",
  "ja516:21.2": "vicarī pabbate kapi;",
  "ja516:21.3": "Silāya yoggaṃ katvāna,",
  "ja516:21.4": "nisabho etadabravi.",
  "ja516:22.1": "Ehi me piṭṭhimāruyha,",
  "ja516:22.2": "gīvaṃ gaṇhāhi bāhubhi;",
  "ja516:22.3": "Ahaṃ taṃ uddharissāmi,",
  "ja516:22.4": "giriduggata vegasā.",
  "ja516:23.1": "Tassa taṃ vacanaṃ sutvā,",
  "ja516:23.2": "vānarindassa sirīmato;",
  "ja516:23.3": "Piṭṭhimāruyha dhīrassa,",
  "ja516:23.4": "gīvaṃ bāhāhi aggahiṃ.",
  "ja516:24.1": "So maṃ tato samuṭṭhāsi,",
  "ja516:24.2": "tejassī balavā kapi;",
  "ja516:24.3": "Vihaññamāno kicchena,",
  "ja516:24.4": "giriduggata vegasā.",
  "ja516:25.1": "Uddharitvāna maṃ santo,",
  "ja516:25.2": "nisabho etadabravi;",
  "ja516:25.3": "Iṅgha maṃ samma rakkhassu,",
  "ja516:25.4": "pasupissaṃ muhuttakaṃ.",
  "ja516:26.1": "Sīhā byagghā ca dīpī ca,",
  "ja516:26.2": "acchakokataracchayo;",
  "ja516:26.3": "Te maṃ pamattaṃ hiṃseyyuṃ,",
  "ja516:26.4": "te tvaṃ disvā nivāraya.",
  "ja516:27.1": "Evaṃ me parittātūna,",
  "ja516:27.2": "pasupī so muhuttakaṃ;",
  "ja516:27.3": "Tadāhaṃ pāpikaṃ diṭṭhiṃ,",
  "ja516:27.4": "paṭilacchiṃ ayoniso.",
  "ja516:28.1": "Bhakkho ayaṃ manussānaṃ,",
  "ja516:28.2": "yathā caññe vane migā;",
  "ja516:28.3": "Yaṃ nūnimaṃ vadhitvāna,",
  "ja516:28.4": "chāto khādeyya vānaraṃ.",
  "ja516:29.1": "Asito ca gamissāmi,",
  "ja516:29.2": "maṃsamādāya sambalaṃ;",
  "ja516:29.3": "Kantāraṃ nittharissāmi,",
  "ja516:29.4": "pātheyyaṃ me bhavissati.",
  "ja516:30.1": "Tato silaṃ gahetvāna,",
  "ja516:30.2": "matthakaṃ sannitāḷayiṃ;",
  "ja516:30.3": "Mama gattakilantassa,",
  "ja516:30.4": "pahāro dubbalo ahu.",
  "ja516:31.1": "So ca vegenudappatto,",
  "ja516:31.2": "kapi ruhira makkhito;",
  "ja516:31.3": "Assupuṇṇehi nettehi,",
  "ja516:31.4": "rodanto maṃ udikkhati.",
  "ja516:32.1": "‘Māyyomaṃ kari bhaddante,",
  "ja516:32.2": "tvañca nāmedisaṃ kari;",
  "ja516:32.3": "Tvañca kho nāma dīghāvu,",
  "ja516:32.4": "aññe vāretumarahasi.",
  "ja516:33.1": "Aho vata re purisa,",
  "ja516:33.2": "tāvadukkarakāraka;",
  "ja516:33.3": "Edisā visamā duggā,",
  "ja516:33.4": "papātā uddhato mayā.",
  "ja516:34.1": "Ānīto paralokāva,",
  "ja516:34.2": "dubbheyyaṃ maṃ amaññatha;",
  "ja516:34.3": "Taṃ tena pāpadhammena,",
  "ja516:34.4": "pāpaṃ pāpena cintitaṃ.",
  "ja516:35.1": "Mā heva tvaṃ adhammaṭṭha,",
  "ja516:35.2": "vedanaṃ kaṭukaṃ phusi;",
  "ja516:35.3": "Mā heva pāpakammaṃ taṃ,",
  "ja516:35.4": "phalaṃ veḷuṃva taṃ vadhi.",
  "ja516:36.1": "Tayime natthi vissāso,",
  "ja516:36.2": "pāpadhamma asaññata;",
  "ja516:36.3": "Ehi me piṭṭhito gaccha,",
  "ja516:36.4": "dissamānova santike.",
  "ja516:37.1": "Muttosi hatthā vāḷānaṃ,",
  "ja516:37.2": "pattosi mānusiṃ padaṃ;",
  "ja516:37.3": "Esa maggo adhammaṭṭha,",
  "ja516:37.4": "tena gaccha yathāsukhaṃ’.",
  "ja516:38.1": "Idaṃ vatvā giricaro,",
  "ja516:38.2": "rahade pakkhalya matthakaṃ;",
  "ja516:38.3": "Assūni sampamajjitvā,",
  "ja516:38.4": "tato pabbatamāruhi.",
  "ja516:39.1": "Sohaṃ tenābhisattosmi,",
  "ja516:39.2": "pariḷāhena aṭṭito;",
  "ja516:39.3": "Ḍayhamānena gattena,",
  "ja516:39.4": "vāriṃ pātuṃ upāgamiṃ.",
  "ja516:40.1": "Agginā viya santatto,",
  "ja516:40.2": "rahado ruhiramakkhito;",
  "ja516:40.3": "Pubbalohitasaṅkāso,",
  "ja516:40.4": "sabbo me samapajjatha.",
  "ja516:41.1": "Yāvanto udabindūni,",
  "ja516:41.2": "kāyasmiṃ nipatiṃsu me;",
  "ja516:41.3": "Tāvanto gaṇḍa jāyetha,",
  "ja516:41.4": "addhabeluvasādisā.",
  "ja516:42.1": "Pabhinnā pagghariṃsu me,",
  "ja516:42.2": "kuṇapā pubbalohitā;",
  "ja516:42.3": "Yena yeneva gacchāmi,",
  "ja516:42.4": "gāmesu nigamesu ca.",
  "ja516:43.1": "Daṇḍahatthā nivārenti,",
  "ja516:43.2": "itthiyo purisā ca maṃ;",
  "ja516:43.3": "Okkitā pūtigandhena,",
  "ja516:43.4": "māssu orena āgamā.",
  "ja516:44.1": "Etādisaṃ idaṃ dukkhaṃ,",
  "ja516:44.2": "satta vassāni dāni me;",
  "ja516:44.3": "Anubhomi sakaṃ kammaṃ,",
  "ja516:44.4": "pubbe dukkaṭamattano.",
  "ja516:45.1": "Taṃ vo vadāmi bhaddante,",
  "ja516:45.2": "yāvantettha samāgatā;",
  "ja516:45.3": "Māssu mittāna dubbhittho,",
  "ja516:45.4": "mittadubbho hi pāpako.",
  "ja516:46.1": "Kuṭṭhī kilāsī bhavati,",
  "ja516:46.2": "yo mittānidha dubbhati;",
  "ja516:46.3": "Kāyassa bhedā mittaddu,",
  "ja516:46.4": "nirayaṃ sopapajjatī”ti.",
  "ja516:47.1": "Mahākapijātakaṃ chaṭṭhaṃ."
}