{
  "ja493:0.1": "Jātaka",
  "ja493:0.2": "Pakiṇṇakanipāta",
  "ja493:0.3": "Sālikedāravagga",
  "ja493:0.4": "10. Mahāvāṇijajātaka",
  "ja493:1.1": "Vāṇijā samitiṃ katvā,",
  "ja493:1.2": "nānāraṭṭhato āgatā;",
  "ja493:1.3": "Dhanāharā pakkamiṃsu,",
  "ja493:1.4": "ekaṃ katvāna gāmaṇiṃ.",
  "ja493:2.1": "Te taṃ kantāramāgamma,",
  "ja493:2.2": "appabhakkhaṃ anodakaṃ;",
  "ja493:2.3": "Mahānigrodhamaddakkhuṃ,",
  "ja493:2.4": "sītacchāyaṃ manoramaṃ.",
  "ja493:3.1": "Te ca tattha nisīditvā,",
  "ja493:3.2": "tassa rukkhassa chāyayā;",
  "ja493:3.3": "Vāṇijā samacintesuṃ,",
  "ja493:3.4": "bālā mohena pārutā.",
  "ja493:4.1": "Allāyate ayaṃ rukkho,",
  "ja493:4.2": "api vārīva sandati;",
  "ja493:4.3": "Iṅghassa purimaṃ sākhaṃ,",
  "ja493:4.4": "mayaṃ chindāma vāṇijā.",
  "ja493:5.1": "Sā ca chinnāva pagghari,",
  "ja493:5.2": "acchaṃ vāriṃ anāvilaṃ;",
  "ja493:5.3": "Te tattha nhatvā pivitvā,",
  "ja493:5.4": "yāvaticchiṃsu vāṇijā.",
  "ja493:6.1": "Dutiyaṃ samacintesuṃ,",
  "ja493:6.2": "bālā mohena pārutā;",
  "ja493:6.3": "Iṅghassa dakkhiṇaṃ sākhaṃ,",
  "ja493:6.4": "mayaṃ chindāma vāṇijā.",
  "ja493:7.1": "Sā ca chinnāva pagghari,",
  "ja493:7.2": "sālimaṃsodanaṃ bahuṃ;",
  "ja493:7.3": "Appodavaṇṇe kummāse,",
  "ja493:7.4": "siṅgiṃ vidalasūpiyo.",
  "ja493:8.1": "Te tattha bhutvā khāditvā,",
  "ja493:8.2": "yāvaticchiṃsu vāṇijā;",
  "ja493:8.3": "Tatiyaṃ samacintesuṃ,",
  "ja493:8.4": "bālā mohena pārutā;",
  "ja493:8.5": "Iṅghassa pacchimaṃ sākhaṃ,",
  "ja493:8.6": "mayaṃ chindāma vāṇijā.",
  "ja493:9.1": "Sā ca chinnāva pagghari,",
  "ja493:9.2": "nāriyo samalaṅkatā;",
  "ja493:9.3": "Vicitravatthābharaṇā,",
  "ja493:9.4": "āmuttamaṇikuṇḍalā.",
  "ja493:10.1": "Api su vāṇijā ekā,",
  "ja493:10.2": "nāriyo paṇṇavīsati;",
  "ja493:10.3": "Samantā parivāriṃsu,",
  "ja493:10.4": "tassa rukkhassa chāyayā.",
  "ja493:11.1": "Te tāhi paricāretvā,",
  "ja493:11.2": "yāvaticchiṃsu vāṇijā;",
  "ja493:11.3": "Catutthaṃ samacintesuṃ,",
  "ja493:11.4": "bālā mohena pārutā;",
  "ja493:11.5": "Iṅghassa uttaraṃ sākhaṃ,",
  "ja493:11.6": "mayaṃ chindāma vāṇijā.",
  "ja493:12.1": "Sā ca chinnāva pagghari,",
  "ja493:12.2": "muttā veḷuriyā bahū;",
  "ja493:12.3": "Rajataṃ jātarūpañca,",
  "ja493:12.4": "kuttiyo paṭiyāni ca.",
  "ja493:13.1": "Kāsikāni ca vatthāni,",
  "ja493:13.2": "uddiyāni ca kambalā;",
  "ja493:13.3": "Te tattha bhāre bandhitvā,",
  "ja493:13.4": "yāvaticchiṃsu vāṇijā.",
  "ja493:14.1": "Pañcamaṃ samacintesuṃ,",
  "ja493:14.2": "bālā mohena pārutā;",
  "ja493:14.3": "Iṅghassa mūlaṃ chindāma,",
  "ja493:14.4": "api bhiyyo labhāmase.",
  "ja493:15.1": "Athuṭṭhahi satthavāho,",
  "ja493:15.2": "yācamāno katañjalī;",
  "ja493:15.3": "Nigrodho kiṃ parajjhati,",
  "ja493:15.4": "vāṇijā bhaddamatthu te.",
  "ja493:16.1": "Vāridā purimā sākhā,",
  "ja493:16.2": "annapānañca dakkhiṇā;",
  "ja493:16.3": "Nāridā pacchimā sākhā,",
  "ja493:16.4": "sabbakāme ca uttarā;",
  "ja493:16.5": "Nigrodho kiṃ parajjhati,",
  "ja493:16.6": "vāṇijā bhaddamatthu te.",
  "ja493:17.1": "Yassa rukkhassa chāyāya,",
  "ja493:17.2": "nisīdeyya sayeyya vā;",
  "ja493:17.3": "Na tassa sākhaṃ bhañjeyya,",
  "ja493:17.4": "mittadubbho hi pāpako.",
  "ja493:18.1": "Te ca tassānādiyitvā,",
  "ja493:18.2": "ekassa vacanaṃ bahū;",
  "ja493:18.3": "Nisitāhi kuṭhārīhi,",
  "ja493:18.4": "mūlato naṃ upakkamuṃ.",
  "ja493:19.1": "Tato nāgā nikkhamiṃsu,",
  "ja493:19.2": "sannaddhā paṇṇavīsati;",
  "ja493:19.3": "Dhanuggahānaṃ tisatā,",
  "ja493:19.4": "chasahassā ca vammino.",
  "ja493:20.1": "“Ete hanatha bandhatha,",
  "ja493:20.2": "Mā vo muñcittha jīvitaṃ;",
  "ja493:20.3": "Ṭhapetvā satthavāhaṃva,",
  "ja493:20.4": "Sabbe bhasmaṃ karotha ne”.",
  "ja493:21.1": "“Tasmā hi paṇḍito poso,",
  "ja493:21.2": "sampassaṃ atthamattano;",
  "ja493:21.3": "Lobhassa na vasaṃ gacche,",
  "ja493:21.4": "haneyyārisakaṃ manaṃ.",
  "ja493:22.1": "Evamādīnavaṃ ñatvā,",
  "ja493:22.2": "taṇhā dukkhassa sambhavaṃ;",
  "ja493:22.3": "Vītataṇho anādāno,",
  "ja493:22.4": "sato bhikkhu paribbaje”ti.",
  "ja493:23.1": "Mahāvāṇijajātakaṃ dasamaṃ."
}