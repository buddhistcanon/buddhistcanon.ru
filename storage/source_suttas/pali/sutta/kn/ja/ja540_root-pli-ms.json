{
  "ja540:0.1": "Jātaka",
  "ja540:0.2": "Mahānipāta",
  "ja540:0.3": "Mūgapakkhavagga",
  "ja540:0.4": "3 Suvaṇṇasāmajātaka",
  "ja540:1.1": "“Ko nu maṃ usunā vijjhi,",
  "ja540:1.2": "pamattaṃ udahārakaṃ;",
  "ja540:1.3": "Khattiyo brāhmaṇo vesso,",
  "ja540:1.4": "ko maṃ viddhā nilīyasi.",
  "ja540:2.1": "Na me maṃsāni khajjāni,",
  "ja540:2.2": "Cammenattho na vijjati;",
  "ja540:2.3": "Atha kena nu vaṇṇena,",
  "ja540:2.4": "Viddheyyaṃ maṃ amaññatha.",
  "ja540:3.1": "Ko vā tvaṃ kassa vā putto,",
  "ja540:3.2": "kathaṃ jānemu taṃ mayaṃ;",
  "ja540:3.3": "Puṭṭho me samma akkhāhi,",
  "ja540:3.4": "kiṃ maṃ viddhā nilīyasi”.",
  "ja540:4.1": "“Rājāhamasmi kāsīnaṃ,",
  "ja540:4.2": "pīḷiyakkhoti maṃ vidū;",
  "ja540:4.3": "Lobhā raṭṭhaṃ pahitvāna,",
  "ja540:4.4": "migamesaṃ carāmahaṃ.",
  "ja540:5.1": "Issatthe casmi kusalo,",
  "ja540:5.2": "daḷhadhammoti vissuto;",
  "ja540:5.3": "Nāgopi me na mucceyya,",
  "ja540:5.4": "āgato usupātanaṃ.",
  "ja540:6.1": "Ko vā tvaṃ kassa vā putto,",
  "ja540:6.2": "kathaṃ jānemu taṃ mayaṃ;",
  "ja540:6.3": "Pituno attano cāpi,",
  "ja540:6.4": "nāmagottaṃ pavedaya”.",
  "ja540:7.1": "“Nesādaputto bhaddante,",
  "ja540:7.2": "sāmo iti maṃ ñātayo;",
  "ja540:7.3": "Āmantayiṃsu jīvantaṃ,",
  "ja540:7.4": "svajjevāhaṃ gato saye.",
  "ja540:8.1": "Viddhosmi puthusallena,",
  "ja540:8.2": "savisena yathā migo;",
  "ja540:8.3": "Sakamhi lohite rāja,",
  "ja540:8.4": "passa semi paripluto.",
  "ja540:9.1": "Paṭivāmagataṃ sallaṃ,",
  "ja540:9.2": "passa dhimhāmi lohitaṃ;",
  "ja540:9.3": "Āturo tyānupucchāmi,",
  "ja540:9.4": "kiṃ maṃ viddhā nilīyasi.",
  "ja540:10.1": "Ajinamhi haññate dīpi,",
  "ja540:10.2": "nāgo dantehi haññate;",
  "ja540:10.3": "Atha kena nu vaṇṇena,",
  "ja540:10.4": "viddheyyaṃ maṃ amaññatha”.",
  "ja540:11.1": "“Migo upaṭṭhito āsi,",
  "ja540:11.2": "āgato usupātanaṃ;",
  "ja540:11.3": "Taṃ disvā ubbijī sāma,",
  "ja540:11.4": "tena kodho mamāvisi”.",
  "ja540:12.1": "“Yato sarāmi attānaṃ,",
  "ja540:12.2": "yato pattosmi viññutaṃ;",
  "ja540:12.3": "Na maṃ migā uttasanti,",
  "ja540:12.4": "araññe sāpadānipi.",
  "ja540:13.1": "Yato nidhiṃ parihariṃ,",
  "ja540:13.2": "yato pattosmi yobbanaṃ;",
  "ja540:13.3": "Na maṃ migā uttasanti,",
  "ja540:13.4": "araññe sāpadānipi.",
  "ja540:14.1": "Bhīrū kimpurisā rāja,",
  "ja540:14.2": "pabbate gandhamādane;",
  "ja540:14.3": "Sammodamānā gacchāma,",
  "ja540:14.4": "pabbatāni vanāni ca.",
  "ja540:15.1": "Na maṃ migā uttasanti,",
  "ja540:15.2": "araññe sāpadānipi;",
  "ja540:15.3": "Atha kena nu vaṇṇena,",
  "ja540:15.4": "utrāsanti migā mamaṃ”.",
  "ja540:16.1": "“Na taṃ tasa migo sāma,",
  "ja540:16.2": "kiṃ tāhaṃ alikaṃ bhaṇe;",
  "ja540:16.3": "Kodhalobhābhibhūtāhaṃ,",
  "ja540:16.4": "usuṃ te taṃ avassajiṃ.",
  "ja540:17.1": "Kuto nu sāma āgamma,",
  "ja540:17.2": "kassa vā pahito tuvaṃ;",
  "ja540:17.3": "Udahāro nadiṃ gaccha,",
  "ja540:17.4": "āgato migasammataṃ”.",
  "ja540:18.1": "“Andhā mātāpitā mayhaṃ,",
  "ja540:18.2": "te bharāmi brahāvane;",
  "ja540:18.3": "Tesāhaṃ udakāhāro,",
  "ja540:18.4": "āgato migasammataṃ.",
  "ja540:19.1": "Atthi nesaṃ usāmattaṃ,",
  "ja540:19.2": "atha sāhassa jīvitaṃ;",
  "ja540:19.3": "Udakassa alābhena,",
  "ja540:19.4": "maññe andhā marissare.",
  "ja540:20.1": "Na me idaṃ tathā dukkhaṃ,",
  "ja540:20.2": "labbhā hi pumunā idaṃ;",
  "ja540:20.3": "Yañca ammaṃ na passāmi,",
  "ja540:20.4": "taṃ me dukkhataraṃ ito.",
  "ja540:21.1": "Na me idaṃ tathā dukkhaṃ,",
  "ja540:21.2": "labbhā hi pumunā idaṃ;",
  "ja540:21.3": "Yañca tātaṃ na passāmi,",
  "ja540:21.4": "taṃ me dukkhataraṃ ito.",
  "ja540:22.1": "Sā nūna kapaṇā ammā,",
  "ja540:22.2": "cirarattāya rucchati;",
  "ja540:22.3": "Aḍḍharatte va ratte vā,",
  "ja540:22.4": "nadīva avasucchati.",
  "ja540:23.1": "So nūna kapaṇo tāto,",
  "ja540:23.2": "cirarattāya rucchati;",
  "ja540:23.3": "Aḍḍharatte va ratte vā,",
  "ja540:23.4": "nadīva avasucchati.",
  "ja540:24.1": "Uṭṭhānapādacariyāya,",
  "ja540:24.2": "pādasambāhanassa ca;",
  "ja540:24.3": "Sāma tāta vilapantā,",
  "ja540:24.4": "hiṇḍissanti brahāvane.",
  "ja540:25.1": "Idampi dutiyaṃ sallaṃ,",
  "ja540:25.2": "kampeti hadayaṃ mamaṃ;",
  "ja540:25.3": "Yañca andhe na passāmi,",
  "ja540:25.4": "maññe hissāmi jīvitaṃ”.",
  "ja540:26.1": "“Mā bāḷhaṃ paridevesi,",
  "ja540:26.2": "sāma kalyāṇadassana;",
  "ja540:26.3": "Ahaṃ kammakaro hutvā,",
  "ja540:26.4": "bharissaṃ te brahāvane.",
  "ja540:27.1": "Issatthe casmi kusalo,",
  "ja540:27.2": "daḷhadhammoti vissuto;",
  "ja540:27.3": "Ahaṃ kammakaro hutvā,",
  "ja540:27.4": "bharissaṃ te brahāvane.",
  "ja540:28.1": "Migānaṃ vighāsamanvesaṃ,",
  "ja540:28.2": "Vanamūlaphalāni ca;",
  "ja540:28.3": "Ahaṃ kammakaro hutvā,",
  "ja540:28.4": "Bharissaṃ te brahāvane.",
  "ja540:29.1": "Katamaṃ taṃ vanaṃ sāma,",
  "ja540:29.2": "yattha mātāpitā tava;",
  "ja540:29.3": "Ahaṃ te tathā bharissaṃ,",
  "ja540:29.4": "yathā te abharī tuvaṃ”.",
  "ja540:30.1": "“Ayaṃ ekapadī rāja,",
  "ja540:30.2": "yoyaṃ ussīsake mama;",
  "ja540:30.3": "Ito gantvā aḍḍhakosaṃ,",
  "ja540:30.4": "tattha nesaṃ agārakaṃ;",
  "ja540:30.5": "Yattha mātāpitā mayhaṃ,",
  "ja540:30.6": "te bharassu ito gato.",
  "ja540:31.1": "Namo te kāsirājatthu,",
  "ja540:31.2": "namo te kāsivaḍḍhana;",
  "ja540:31.3": "Andhā mātāpitā mayhaṃ,",
  "ja540:31.4": "te bharassu brahāvane.",
  "ja540:32.1": "Añjaliṃ te paggaṇhāmi,",
  "ja540:32.2": "kāsirāja namatthu te;",
  "ja540:32.3": "Mātaraṃ pitaraṃ mayhaṃ,",
  "ja540:32.4": "vutto vajjāsi vandanaṃ”.",
  "ja540:33.1": "Idaṃ vatvāna so sāmo,",
  "ja540:33.2": "yuvā kalyāṇadassano;",
  "ja540:33.3": "Mucchito visavegena,",
  "ja540:33.4": "visaññī samapajjatha.",
  "ja540:34.1": "Sa rājā paridevesi,",
  "ja540:34.2": "bahuṃ kāruññasañhitaṃ;",
  "ja540:34.3": "“Ajarāmarohaṃ āsiṃ,",
  "ja540:34.4": "ajjetaṃ ñāmi no pure;",
  "ja540:34.5": "Sāmaṃ kālaṅkataṃ disvā,",
  "ja540:34.6": "natthi maccussa nāgamo.",
  "ja540:35.1": "Yassu maṃ paṭimanteti,",
  "ja540:35.2": "savisena samappito;",
  "ja540:35.3": "Svajja evaṃ gate kāle,",
  "ja540:35.4": "na kiñci mabhibhāsati.",
  "ja540:36.1": "Nirayaṃ nūna gacchāmi,",
  "ja540:36.2": "ettha me natthi saṃsayo;",
  "ja540:36.3": "Tadā hi pakataṃ pāpaṃ,",
  "ja540:36.4": "cirarattāya kibbisaṃ.",
  "ja540:37.1": "Bhavanti tassa vattāro,",
  "ja540:37.2": "gāme kibbisakārako;",
  "ja540:37.3": "Araññe nimmanussamhi,",
  "ja540:37.4": "ko maṃ vattumarahati.",
  "ja540:38.1": "Sārayanti hi kammāni,",
  "ja540:38.2": "gāme saṅgaccha māṇavā;",
  "ja540:38.3": "Araññe nimmanussamhi,",
  "ja540:38.4": "ko nu maṃ sārayissati”.",
  "ja540:39.1": "Sā devatā antarahitā,",
  "ja540:39.2": "pabbate gandhamādane;",
  "ja540:39.3": "Raññova anukampāya,",
  "ja540:39.4": "imā gāthā abhāsatha.",
  "ja540:40.1": "“Āguṃ kira mahārāja,",
  "ja540:40.2": "akari kamma dukkaṭaṃ;",
  "ja540:40.3": "Adūsakā pitāputtā,",
  "ja540:40.4": "tayo ekūsunā hatā.",
  "ja540:41.1": "Ehi taṃ anusikkhāmi,",
  "ja540:41.2": "yathā te sugatī siyā;",
  "ja540:41.3": "Dhammenandhe vane posa,",
  "ja540:41.4": "maññehaṃ sugatī tayā”.",
  "ja540:42.1": "Sa rājā paridevitvā,",
  "ja540:42.2": "bahuṃ kāruññasañhitaṃ;",
  "ja540:42.3": "Udakakumbhamādāya,",
  "ja540:42.4": "pakkāmi dakkhiṇāmukho.",
  "ja540:43.1": "“Kassa nu eso padasaddo,",
  "ja540:43.2": "manussasseva āgato;",
  "ja540:43.3": "Neso sāmassa nigghoso,",
  "ja540:43.4": "ko nu tvamasi mārisa.",
  "ja540:44.1": "Santañhi sāmo vajati,",
  "ja540:44.2": "santaṃ pādāni neyati;",
  "ja540:44.3": "Neso sāmassa nigghoso,",
  "ja540:44.4": "ko nu tvamasi mārisa”.",
  "ja540:45.1": "“Rājāhamasmi kāsīnaṃ,",
  "ja540:45.2": "pīḷiyakkhoti maṃ vidū;",
  "ja540:45.3": "Lobhā raṭṭhaṃ pahitvāna,",
  "ja540:45.4": "migamesaṃ carāmahaṃ.",
  "ja540:46.1": "Issatthe casmi kusalo,",
  "ja540:46.2": "daḷhadhammoti vissuto;",
  "ja540:46.3": "Nāgopi me na mucceyya,",
  "ja540:46.4": "āgato usupātanaṃ”.",
  "ja540:47.1": "“Svāgataṃ te mahārāja,",
  "ja540:47.2": "atho te adurāgataṃ;",
  "ja540:47.3": "Issarosi anuppatto,",
  "ja540:47.4": "yaṃ idhatthi pavedaya.",
  "ja540:48.1": "Tindukāni piyālāni,",
  "ja540:48.2": "madhuke kāsumāriyo;",
  "ja540:48.3": "Phalāni khuddakappāni,",
  "ja540:48.4": "bhuñja rāja varaṃ varaṃ.",
  "ja540:49.1": "Idampi pānīyaṃ sītaṃ,",
  "ja540:49.2": "ābhataṃ girigabbharā;",
  "ja540:49.3": "Tato piva mahārāja,",
  "ja540:49.4": "sace tvaṃ abhikaṅkhasi”.",
  "ja540:50.1": "“Nālaṃ andhā vane daṭṭhuṃ,",
  "ja540:50.2": "ko nu vo phalamāhari;",
  "ja540:50.3": "Anandhassevayaṃ sammā,",
  "ja540:50.4": "nivāpo mayha khāyati”.",
  "ja540:51.1": "“Daharo yuvā nātibrahā,",
  "ja540:51.2": "sāmo kalyāṇadassano;",
  "ja540:51.3": "Dīghassa kesā asitā,",
  "ja540:51.4": "atho sūnaggavellitā.",
  "ja540:52.1": "So have phalamāharitvā,",
  "ja540:52.2": "ito ādāya kamaṇḍaluṃ;",
  "ja540:52.3": "Nadiṃ gato udahāro,",
  "ja540:52.4": "maññe na dūramāgato”.",
  "ja540:53.1": "“Ahaṃ taṃ avadhiṃ sāmaṃ,",
  "ja540:53.2": "yo tuyhaṃ paricārako;",
  "ja540:53.3": "Yaṃ kumāraṃ pavedetha,",
  "ja540:53.4": "sāmaṃ kalyāṇadassanaṃ.",
  "ja540:54.1": "Dīghassa kesā asitā,",
  "ja540:54.2": "atho sūnaggavellitā;",
  "ja540:54.3": "Tesu lohitalittesu,",
  "ja540:54.4": "seti sāmo mayā hato”.",
  "ja540:55.1": "“Kena dukūla mantesi,",
  "ja540:55.2": "hato sāmoti vādinā;",
  "ja540:55.3": "Hato sāmoti sutvāna,",
  "ja540:55.4": "hadayaṃ me pavedhati.",
  "ja540:56.1": "Assatthasseva taruṇaṃ,",
  "ja540:56.2": "pavāḷaṃ māluteritaṃ;",
  "ja540:56.3": "Hato sāmoti sutvāna,",
  "ja540:56.4": "hadayaṃ me pavedhati”.",
  "ja540:57.1": "“Pārike kāsirājāyaṃ,",
  "ja540:57.2": "so sāmaṃ migasammate;",
  "ja540:57.3": "Kodhasā usunā vijjhi,",
  "ja540:57.4": "tassa mā pāpamicchimhā”.",
  "ja540:58.1": "“Kicchā laddho piyo putto,",
  "ja540:58.2": "yo andhe abharī vane;",
  "ja540:58.3": "Taṃ ekaputtaṃ ghātimhi,",
  "ja540:58.4": "kathaṃ cittaṃ na kopaye”.",
  "ja540:59.1": "“Kicchā laddho piyo putto,",
  "ja540:59.2": "yo andhe abharī vane;",
  "ja540:59.3": "Taṃ ekaputtaṃ ghātimhi,",
  "ja540:59.4": "akkodhaṃ āhu paṇḍitā”.",
  "ja540:60.1": "“Mā bāḷhaṃ paridevetha,",
  "ja540:60.2": "hato sāmoti vādinā;",
  "ja540:60.3": "Ahaṃ kammakaro hutvā,",
  "ja540:60.4": "bharissāmi brahāvane.",
  "ja540:61.1": "Issatthe casmi kusalo,",
  "ja540:61.2": "daḷhadhammoti vissuto;",
  "ja540:61.3": "Ahaṃ kammakaro hutvā,",
  "ja540:61.4": "bharissāmi brahāvane.",
  "ja540:62.1": "Migānaṃ vighāsamanvesaṃ,",
  "ja540:62.2": "vanamūlaphalāni ca;",
  "ja540:62.3": "Ahaṃ kammakaro hutvā,",
  "ja540:62.4": "bharissāmi brahāvane”.",
  "ja540:63.1": "“Nesa dhammo mahārāja,",
  "ja540:63.2": "netaṃ amhesu kappati;",
  "ja540:63.3": "Rājā tvamasi amhākaṃ,",
  "ja540:63.4": "pāde vandāma te mayaṃ”.",
  "ja540:64.1": "“Dhammaṃ nesādā bhaṇatha,",
  "ja540:64.2": "katā apacitī tayā;",
  "ja540:64.3": "Pitā tvamasi amhākaṃ,",
  "ja540:64.4": "mātā tvamasi pārike”.",
  "ja540:65.1": "“Namo te kāsirājatthu,",
  "ja540:65.2": "namo te kāsivaḍḍhana;",
  "ja540:65.3": "Añjaliṃ te paggaṇhāma,",
  "ja540:65.4": "yāva sāmānupāpaya.",
  "ja540:66.1": "Tassa pāde samajjantā,",
  "ja540:66.2": "mukhañca bhujadassanaṃ;",
  "ja540:66.3": "Saṃsumbhamānā attānaṃ,",
  "ja540:66.4": "kālamāgamayāmase”.",
  "ja540:67.1": "“Brahā vāḷamigākiṇṇaṃ,",
  "ja540:67.2": "ākāsantaṃva dissati;",
  "ja540:67.3": "Yattha sāmo hato seti,",
  "ja540:67.4": "candova patito chamā.",
  "ja540:68.1": "Brahā vāḷamigākiṇṇaṃ,",
  "ja540:68.2": "ākāsantaṃva dissati;",
  "ja540:68.3": "Yattha sāmo hato seti,",
  "ja540:68.4": "sūriyova patito chamā.",
  "ja540:69.1": "Brahā vāḷamigākiṇṇaṃ,",
  "ja540:69.2": "ākāsantaṃva dissati;",
  "ja540:69.3": "Yattha sāmo hato seti,",
  "ja540:69.4": "paṃsunā patikunthito.",
  "ja540:70.1": "Brahā vāḷamigākiṇṇaṃ,",
  "ja540:70.2": "ākāsantaṃva dissati;",
  "ja540:70.3": "Yattha sāmo hato seti,",
  "ja540:70.4": "idheva vasathassame”.",
  "ja540:71.1": "“Yadi tattha sahassāni,",
  "ja540:71.2": "satāni niyutāni ca;",
  "ja540:71.3": "Nevamhākaṃ bhayaṃ koci,",
  "ja540:71.4": "vane vāḷesu vijjati”.",
  "ja540:72.1": "Tato andhānamādāya,",
  "ja540:72.2": "kāsirājā brahāvane;",
  "ja540:72.3": "Hatthe gahetvā pakkāmi,",
  "ja540:72.4": "yattha sāmo hato ahu.",
  "ja540:73.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:73.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:73.3": "Apaviddhaṃ brahāraññe,",
  "ja540:73.4": "candaṃva patitaṃ chamā.",
  "ja540:74.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:74.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:74.3": "Apaviddhaṃ brahāraññe,",
  "ja540:74.4": "sūriyaṃva patitaṃ chamā.",
  "ja540:75.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:75.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:75.3": "Apaviddhaṃ brahāraññe,",
  "ja540:75.4": "kalūnaṃ paridevayuṃ.",
  "ja540:76.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:76.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:76.3": "Bāhā paggayha pakkanduṃ,",
  "ja540:76.4": "“adhammo kira bho iti.",
  "ja540:77.1": "Bāḷhaṃ kho tvaṃ pamattosi,",
  "ja540:77.2": "sāma kalyāṇadassana;",
  "ja540:77.3": "Yo ajjevaṃ gate kāle,",
  "ja540:77.4": "na kiñci mabhibhāsasi.",
  "ja540:78.1": "Bāḷhaṃ kho tvaṃ padittosi,",
  "ja540:78.2": "sāma kalyāṇadassana;",
  "ja540:78.3": "Yo ajjevaṃ gate kāle,",
  "ja540:78.4": "na kiñci mabhibhāsasi.",
  "ja540:79.1": "Bāḷhaṃ kho tvaṃ pakuddhosi,",
  "ja540:79.2": "sāma kalyāṇadassana;",
  "ja540:79.3": "Yo ajjevaṃ gate kāle,",
  "ja540:79.4": "na kiñci mabhibhāsasi.",
  "ja540:80.1": "Bāḷhaṃ kho tvaṃ pasuttosi,",
  "ja540:80.2": "sāma kalyāṇadassana;",
  "ja540:80.3": "Yo ajjevaṃ gate kāle,",
  "ja540:80.4": "na kiñci mabhibhāsasi.",
  "ja540:81.1": "Bāḷhaṃ kho tvaṃ vimanosi,",
  "ja540:81.2": "sāma kalyāṇadassana;",
  "ja540:81.3": "Yo ajjevaṃ gate kāle,",
  "ja540:81.4": "na kiñci mabhibhāsasi.",
  "ja540:82.1": "Jaṭaṃ valinaṃ paṃsugataṃ,",
  "ja540:82.2": "ko dāni saṇṭhapessati;",
  "ja540:82.3": "Sāmo ayaṃ kālaṅkato,",
  "ja540:82.4": "andhānaṃ paricārako.",
  "ja540:83.1": "Ko me sammajjamādāya,",
  "ja540:83.2": "sammajjissati assamaṃ;",
  "ja540:83.3": "Sāmo ayaṃ kālaṅkato,",
  "ja540:83.4": "andhānaṃ paricārako.",
  "ja540:84.1": "Ko dāni nhāpayissati,",
  "ja540:84.2": "sītenuṇhodakena ca;",
  "ja540:84.3": "Sāmo ayaṃ kālaṅkato,",
  "ja540:84.4": "andhānaṃ paricārako.",
  "ja540:85.1": "Ko dāni bhojayissati,",
  "ja540:85.2": "vanamūlaphalāni ca;",
  "ja540:85.3": "Sāmo ayaṃ kālaṅkato,",
  "ja540:85.4": "andhānaṃ paricārako”.",
  "ja540:86.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:86.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:86.3": "Aṭṭitā puttasokena,",
  "ja540:86.4": "mātā saccaṃ abhāsatha.",
  "ja540:87.1": "“Yena saccenayaṃ sāmo,",
  "ja540:87.2": "dhammacārī pure ahu;",
  "ja540:87.3": "Etena saccavajjena,",
  "ja540:87.4": "visaṃ sāmassa haññatu.",
  "ja540:88.1": "Yena saccenayaṃ sāmo,",
  "ja540:88.2": "brahmacārī pure ahu;",
  "ja540:88.3": "Etena saccavajjena,",
  "ja540:88.4": "visaṃ sāmassa haññatu.",
  "ja540:89.1": "Yena saccenayaṃ sāmo,",
  "ja540:89.2": "saccavādī pure ahu;",
  "ja540:89.3": "Etena saccavajjena,",
  "ja540:89.4": "visaṃ sāmassa haññatu.",
  "ja540:90.1": "Yena saccenayaṃ sāmo,",
  "ja540:90.2": "mātāpettibharo ahu;",
  "ja540:90.3": "Etena saccavajjena,",
  "ja540:90.4": "visaṃ sāmassa haññatu.",
  "ja540:91.1": "Yena saccenayaṃ sāmo,",
  "ja540:91.2": "kule jeṭṭhāpacāyiko;",
  "ja540:91.3": "Etena saccavajjena,",
  "ja540:91.4": "visaṃ sāmassa haññatu.",
  "ja540:92.1": "Yena saccenayaṃ sāmo,",
  "ja540:92.2": "pāṇā piyataro mama;",
  "ja540:92.3": "Etena saccavajjena,",
  "ja540:92.4": "visaṃ sāmassa haññatu.",
  "ja540:93.1": "Yaṃ kiñcitthi kataṃ puññaṃ,",
  "ja540:93.2": "Mayhañceva pitucca te;",
  "ja540:93.3": "Sabbena tena kusalena,",
  "ja540:93.4": "Visaṃ sāmassa haññatu”.",
  "ja540:94.1": "Disvāna patitaṃ sāmaṃ,",
  "ja540:94.2": "puttakaṃ paṃsukunthitaṃ;",
  "ja540:94.3": "Aṭṭito puttasokena,",
  "ja540:94.4": "pitā saccaṃ abhāsatha.",
  "ja540:95.1": "“Yena saccenayaṃ sāmo,",
  "ja540:95.2": "dhammacārī pure ahu;",
  "ja540:95.3": "Etena saccavajjena,",
  "ja540:95.4": "visaṃ sāmassa haññatu.",
  "ja540:96.1": "Yena saccenayaṃ sāmo,",
  "ja540:96.2": "brahmacārī pure ahu;",
  "ja540:96.3": "Etena saccavajjena,",
  "ja540:96.4": "visaṃ sāmassa haññatu.",
  "ja540:97.1": "Yena saccenayaṃ sāmo,",
  "ja540:97.2": "saccavādī pure ahu;",
  "ja540:97.3": "Etena saccavajjena,",
  "ja540:97.4": "visaṃ sāmassa haññatu.",
  "ja540:98.1": "Yena saccenayaṃ sāmo,",
  "ja540:98.2": "mātāpettibharo ahu;",
  "ja540:98.3": "Etena saccavajjena,",
  "ja540:98.4": "visaṃ sāmassa haññatu.",
  "ja540:99.1": "Yena saccenayaṃ sāmo,",
  "ja540:99.2": "kule jeṭṭhāpacāyiko;",
  "ja540:99.3": "Etena saccavajjena,",
  "ja540:99.4": "visaṃ sāmassa haññatu.",
  "ja540:100.1": "Yena saccenayaṃ sāmo,",
  "ja540:100.2": "pāṇā piyataro mama;",
  "ja540:100.3": "Etena saccavajjena,",
  "ja540:100.4": "visaṃ sāmassa haññatu.",
  "ja540:101.1": "Yaṃ kiñcitthi kataṃ puññaṃ,",
  "ja540:101.2": "Mayhañceva mātucca te;",
  "ja540:101.3": "Sabbena tena kusalena,",
  "ja540:101.4": "Visaṃ sāmassa haññatu.",
  "ja540:102.1": "Sā devatā antarahitā,",
  "ja540:102.2": "pabbate gandhamādane;",
  "ja540:102.3": "Sāmassa anukampāya,",
  "ja540:102.4": "imaṃ saccaṃ abhāsatha.",
  "ja540:103.1": "Pabbatyāhaṃ gandhamādane,",
  "ja540:103.2": "cirarattanivāsinī;",
  "ja540:103.3": "Na me piyataro koci,",
  "ja540:103.4": "añño sāmena vijjati;",
  "ja540:103.5": "Etena saccavajjena,",
  "ja540:103.6": "visaṃ sāmassa haññatu.",
  "ja540:104.1": "Sabbe vanā gandhamayā,",
  "ja540:104.2": "pabbate gandhamādane;",
  "ja540:104.3": "Etena saccavajjena,",
  "ja540:104.4": "visaṃ sāmassa haññatu”.",
  "ja540:105.1": "Tesaṃ lālappamānānaṃ,",
  "ja540:105.2": "bahuṃ kāruññasañhitaṃ;",
  "ja540:105.3": "Khippaṃ sāmo samuṭṭhāsi,",
  "ja540:105.4": "yuvā kalyāṇadassano.",
  "ja540:106.1": "“Sāmohamasmi bhaddaṃ vo,",
  "ja540:106.2": "Sotthināmhi samuṭṭhito;",
  "ja540:106.3": "Mā bāḷhaṃ paridevetha,",
  "ja540:106.4": "Mañjunābhivadetha maṃ”.",
  "ja540:107.1": "“Svāgataṃ te mahārāja,",
  "ja540:107.2": "atho te adurāgataṃ;",
  "ja540:107.3": "Issarosi anuppatto,",
  "ja540:107.4": "yaṃ idhatthi pavedaya.",
  "ja540:108.1": "Tindukāni piyālāni,",
  "ja540:108.2": "madhuke kāsumāriyo;",
  "ja540:108.3": "Phalāni khuddakappāni,",
  "ja540:108.4": "bhuñja rāja varaṃ varaṃ.",
  "ja540:109.1": "Atthi me pānīyaṃ sītaṃ,",
  "ja540:109.2": "ābhataṃ girigabbharā;",
  "ja540:109.3": "Tato piva mahārāja,",
  "ja540:109.4": "sace tvaṃ abhikaṅkhasi”.",
  "ja540:110.1": "“Sammuyhāmi pamuyhāmi,",
  "ja540:110.2": "sabbā muyhanti me disā;",
  "ja540:110.3": "Petaṃ taṃ sāma maddakkhiṃ,",
  "ja540:110.4": "ko nu tvaṃ sāma jīvasi”.",
  "ja540:111.1": "“Api jīvaṃ mahārāja,",
  "ja540:111.2": "purisaṃ gāḷhavedanaṃ;",
  "ja540:111.3": "Upanītamanasaṅkappaṃ,",
  "ja540:111.4": "jīvantaṃ maññate mataṃ.",
  "ja540:112.1": "Api jīvaṃ mahārāja,",
  "ja540:112.2": "purisaṃ gāḷhavedanaṃ;",
  "ja540:112.3": "Taṃ nirodhagataṃ santaṃ,",
  "ja540:112.4": "jīvantaṃ maññate mataṃ.",
  "ja540:113.1": "Yo mātaraṃ pitaraṃ vā,",
  "ja540:113.2": "macco dhammena posati;",
  "ja540:113.3": "Devāpi naṃ tikicchanti,",
  "ja540:113.4": "mātāpettibharaṃ naraṃ.",
  "ja540:114.1": "Yo mātaraṃ pitaraṃ vā,",
  "ja540:114.2": "macco dhammena posati;",
  "ja540:114.3": "Idheva naṃ pasaṃsanti,",
  "ja540:114.4": "pecca sagge pamodati”.",
  "ja540:115.1": "“Esa bhiyyo pamuyhāmi,",
  "ja540:115.2": "Sabbā muyhanti me disā;",
  "ja540:115.3": "Saraṇaṃ taṃ sāma gacchāmi,",
  "ja540:115.4": "Tvañca me saraṇaṃ bhava”.",
  "ja540:116.1": "“Dhammaṃ cara mahārāja,",
  "ja540:116.2": "mātāpitūsu khattiya;",
  "ja540:116.3": "Idha dhammaṃ caritvāna,",
  "ja540:116.4": "rāja saggaṃ gamissasi.",
  "ja540:117.1": "Dhammaṃ cara mahārāja,",
  "ja540:117.2": "puttadāresu khattiya;",
  "ja540:117.3": "Idha dhammaṃ caritvāna,",
  "ja540:117.4": "rāja saggaṃ gamissasi.",
  "ja540:118.1": "Dhammaṃ cara mahārāja,",
  "ja540:118.2": "mittāmaccesu khattiya;",
  "ja540:118.3": "Idha dhammaṃ caritvāna,",
  "ja540:118.4": "rāja saggaṃ gamissasi.",
  "ja540:119.1": "Dhammaṃ cara mahārāja,",
  "ja540:119.2": "vāhanesu balesu ca;",
  "ja540:119.3": "Idha dhammaṃ caritvāna,",
  "ja540:119.4": "rāja saggaṃ gamissasi.",
  "ja540:120.1": "Dhammaṃ cara mahārāja,",
  "ja540:120.2": "gāmesu nigamesu ca;",
  "ja540:120.3": "Idha dhammaṃ caritvāna,",
  "ja540:120.4": "rāja saggaṃ gamissasi.",
  "ja540:121.1": "Dhammaṃ cara mahārāja,",
  "ja540:121.2": "raṭṭhesu janapadesu ca;",
  "ja540:121.3": "Idha dhammaṃ caritvāna,",
  "ja540:121.4": "rāja saggaṃ gamissasi.",
  "ja540:122.1": "Dhammaṃ cara mahārāja,",
  "ja540:122.2": "samaṇabrāhmaṇesu ca;",
  "ja540:122.3": "Idha dhammaṃ caritvāna,",
  "ja540:122.4": "rāja saggaṃ gamissasi.",
  "ja540:123.1": "Dhammaṃ cara mahārāja,",
  "ja540:123.2": "migapakkhīsu khattiya;",
  "ja540:123.3": "Idha dhammaṃ caritvāna,",
  "ja540:123.4": "rāja saggaṃ gamissasi.",
  "ja540:124.1": "Dhammaṃ cara mahārāja,",
  "ja540:124.2": "dhammo ciṇṇo sukhāvaho;",
  "ja540:124.3": "Idha dhammaṃ caritvāna,",
  "ja540:124.4": "rāja saggaṃ gamissasi.",
  "ja540:125.1": "Dhammaṃ cara mahārāja,",
  "ja540:125.2": "saindā devā sabrahmakā;",
  "ja540:125.3": "Suciṇṇena divaṃ pattā,",
  "ja540:125.4": "mā dhammaṃ rāja pāmado”ti.",
  "ja540:126.1": "Suvaṇṇasāmajātakaṃ tatiyaṃ."
}