{
  "ja424:0.1": "Jātaka",
  "ja424:0.2": "Aṭṭhakanipāta",
  "ja424:0.3": "Kaccānivagga",
  "ja424:0.4": "8. Ādittajātaka",
  "ja424:1.1": "“Ādittasmiṃ agārasmiṃ,",
  "ja424:1.2": "yaṃ nīharati bhājanaṃ;",
  "ja424:1.3": "Taṃ tassa hoti atthāya,",
  "ja424:1.4": "no ca yaṃ tattha ḍayhati.",
  "ja424:2.1": "Evamādīpito loko,",
  "ja424:2.2": "jarāya maraṇena ca;",
  "ja424:2.3": "Nīharetheva dānena,",
  "ja424:2.4": "dinnaṃ hoti sunīhataṃ”.",
  "ja424:3.1": "“Yo dhammaladdhassa dadāti dānaṃ,",
  "ja424:3.2": "Uṭṭhānaviriyādhigatassa jantu;",
  "ja424:3.3": "Atikkamma so vetaraṇiṃ yamassa,",
  "ja424:3.4": "Dibbāni ṭhānāni upeti macco.",
  "ja424:4.1": "Dānañca yuddhañca samānamāhu,",
  "ja424:4.2": "Appāpi santā bahuke jinanti;",
  "ja424:4.3": "Appampi ce saddahāno dadāti,",
  "ja424:4.4": "Teneva so hoti sukhī parattha.",
  "ja424:5.1": "Viceyya dānaṃ sugatappasatthaṃ,",
  "ja424:5.2": "Ye dakkhiṇeyyā idha jīvaloke;",
  "ja424:5.3": "Etesu dinnāni mahapphalāni,",
  "ja424:5.4": "Bījāni vuttāni yathā sukhette.",
  "ja424:6.1": "Yo pāṇabhūtāni aheṭhayaṃ caraṃ,",
  "ja424:6.2": "Parūpavādā na karoti pāpaṃ;",
  "ja424:6.3": "Bhīruṃ pasaṃsanti na tattha sūraṃ,",
  "ja424:6.4": "Bhayā hi santo na karonti pāpaṃ.",
  "ja424:7.1": "Hīnena brahmacariyena,",
  "ja424:7.2": "khattiye upapajjati;",
  "ja424:7.3": "Majjhimena ca devattaṃ,",
  "ja424:7.4": "uttamena visujjhati.",
  "ja424:8.1": "Addhā hi dānaṃ bahudhā pasatthaṃ,",
  "ja424:8.2": "Dānā ca kho dhammapadaṃva seyyo;",
  "ja424:8.3": "Pubbeva hi pubbatareva santo,",
  "ja424:8.4": "Nibbānamevajjhagamuṃ sapaññā”ti.",
  "ja424:9.1": "Ādittajātakaṃ aṭṭhamaṃ."
}