{
  "ja387:0.1": "Jātaka",
  "ja387:0.2": "Chakkanipāta",
  "ja387:0.3": "Kharaputtavagga",
  "ja387:0.4": "2. Sūcijātaka",
  "ja387:1.1": "“Akakkasaṃ apharusaṃ,",
  "ja387:1.2": "kharadhotaṃ supāsiyaṃ;",
  "ja387:1.3": "Sukhumaṃ tikhiṇaggañca,",
  "ja387:1.4": "ko sūciṃ ketumicchati.",
  "ja387:2.1": "Sumajjañca supāsañca,",
  "ja387:2.2": "anupubbaṃ suvaṭṭitaṃ;",
  "ja387:2.3": "Ghanaghātimaṃ paṭithaddhaṃ,",
  "ja387:2.4": "ko sūciṃ ketumicchati”.",
  "ja387:3.1": "“Ito dāni patāyanti,",
  "ja387:3.2": "sūciyo baḷisāni ca;",
  "ja387:3.3": "Koyaṃ kammāragāmasmiṃ,",
  "ja387:3.4": "sūciṃ vikketumicchati.",
  "ja387:4.1": "Ito satthāni gacchanti,",
  "ja387:4.2": "Kammantā vividhā puthū;",
  "ja387:4.3": "Koyaṃ kammāragāmasmiṃ,",
  "ja387:4.4": "Sūciṃ vikketumicchati”.",
  "ja387:5.1": "“Sūciṃ kammāragāmasmiṃ,",
  "ja387:5.2": "vikketabbā pajānatā;",
  "ja387:5.3": "Ācariyāva jānanti,",
  "ja387:5.4": "kammaṃ sukatadukkaṭaṃ.",
  "ja387:6.1": "Imañce te pitā bhadde,",
  "ja387:6.2": "Sūciṃ jaññā mayā kataṃ;",
  "ja387:6.3": "Tayā ca maṃ nimanteyya,",
  "ja387:6.4": "Yañcatthaññaṃ ghare dhanan”ti.",
  "ja387:7.1": "Sūcijātakaṃ dutiyaṃ."
}