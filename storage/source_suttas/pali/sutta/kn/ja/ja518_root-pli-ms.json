{
  "ja518:0.1": "Jātaka",
  "ja518:0.2": "Tiṃsanipāta",
  "ja518:0.3": "Kiṃchandavagga",
  "ja518:0.4": "8. Paṇḍaranāgarājajātaka",
  "ja518:1.1": "“Vikiṇṇavācaṃ aniguyha mantaṃ,",
  "ja518:1.2": "Asaññataṃ aparicakkhitāraṃ;",
  "ja518:1.3": "Bhayaṃ tamanveti sayaṃ abodhaṃ,",
  "ja518:1.4": "Nāgaṃ yathā paṇḍarakaṃ supaṇṇo.",
  "ja518:2.1": "Yo guyhamantaṃ parirakkhaṇeyyaṃ,",
  "ja518:2.2": "Mohā naro saṃsati hāsamāno;",
  "ja518:2.3": "Taṃ bhinnamantaṃ bhayamanveti khippaṃ,",
  "ja518:2.4": "Nāgaṃ yathā paṇḍarakaṃ supaṇṇo.",
  "ja518:3.1": "Nānumitto garuṃ atthaṃ,",
  "ja518:3.2": "guyhaṃ veditumarahati;",
  "ja518:3.3": "Sumitto ca asambuddhaṃ,",
  "ja518:3.4": "sambuddhaṃ vā anatthavā.",
  "ja518:4.1": "Vissāsamāpajjimahaṃ acelaṃ,",
  "ja518:4.2": "Samaṇo ayaṃ sammato bhāvitatto;",
  "ja518:4.3": "Tassāhamakkhiṃ vivariṃ guyhamatthaṃ,",
  "ja518:4.4": "Atītamattho kapaṇaṃ rudāmi.",
  "ja518:5.1": "Tassāhaṃ paramaṃ brahme guyhaṃ,",
  "ja518:5.2": "Vācañhi maṃ nāsakkhiṃ saṃyametuṃ;",
  "ja518:5.3": "Tappakkhato hi bhayamāgataṃ mamaṃ,",
  "ja518:5.4": "Atītamattho kapaṇaṃ rudāmi.",
  "ja518:6.1": "Yo ve naro suhadaṃ maññamāno,",
  "ja518:6.2": "Guyhamatthaṃ saṃsati dukkulīne;",
  "ja518:6.3": "Dosā bhayā athavā rāgarattā,",
  "ja518:6.4": "Pallatthito bālo asaṃsayaṃ so.",
  "ja518:7.1": "Tirokkhavāco asataṃ paviṭṭho,",
  "ja518:7.2": "Yo saṅgatīsu mudīreti vākyaṃ;",
  "ja518:7.3": "Āsīviso dummukhotyāhu taṃ naraṃ,",
  "ja518:7.4": "Ārā ārā saṃyame tādisamhā.",
  "ja518:8.1": "Annaṃ pānaṃ kāsikacandanañca,",
  "ja518:8.2": "Manāpitthiyo mālamucchādanañca;",
  "ja518:8.3": "Ohāya gacchāmase sabbakāme,",
  "ja518:8.4": "Supaṇṇa pāṇūpagatāva tyamhā”.",
  "ja518:9.1": "“Ko nīdha tiṇṇaṃ garahaṃ upeti,",
  "ja518:9.2": "Asmiṃdhaloke pāṇabhū nāgarāja;",
  "ja518:9.3": "Samaṇo supaṇṇo athavā tvameva,",
  "ja518:9.4": "Kiṃ kāraṇā paṇḍarakaggahīto”.",
  "ja518:10.1": "“Samaṇoti me sammatatto ahosi,",
  "ja518:10.2": "Piyo ca me manasā bhāvitatto;",
  "ja518:10.3": "Tassāhamakkhiṃ vivariṃ guyhamatthaṃ,",
  "ja518:10.4": "Atītamattho kapaṇaṃ rudāmi”.",
  "ja518:11.1": "“Na catthi satto amaro pathabyā,",
  "ja518:11.2": "Paññāvidhā natthi na ninditabbā;",
  "ja518:11.3": "Saccena dhammena dhitiyā damena,",
  "ja518:11.4": "Alabbhamabyāharatī naro idha.",
  "ja518:12.1": "Mātāpitā paramā bandhavānaṃ,",
  "ja518:12.2": "Nāssa tatiyo anukampakatthi;",
  "ja518:12.3": "Tesampi guyhaṃ paramaṃ na saṃse,",
  "ja518:12.4": "Mantassa bhedaṃ parisaṅkamāno.",
  "ja518:13.1": "Mātāpitā bhaginī bhātaro ca,",
  "ja518:13.2": "Sahāyā vā yassa honti sapakkhā;",
  "ja518:13.3": "Tesampi guyhaṃ paramaṃ na saṃse,",
  "ja518:13.4": "Mantassa bhedaṃ parisaṅkamāno.",
  "ja518:14.1": "Bhariyā ce purisaṃ vajjā,",
  "ja518:14.2": "Komārī piyabhāṇinī;",
  "ja518:14.3": "Puttarūpayasūpetā,",
  "ja518:14.4": "Ñātisaṅghapurakkhatā;",
  "ja518:14.5": "Tassāpi guyhaṃ paramaṃ na saṃse,",
  "ja518:14.6": "Mantassa bhedaṃ parisaṅkamāno.",
  "ja518:15.1": "Na guyhamatthaṃ vivareyya,",
  "ja518:15.2": "Rakkheyya naṃ yathā nidhiṃ;",
  "ja518:15.3": "Na hi pātukato sādhu,",
  "ja518:15.4": "Guyho attho pajānatā.",
  "ja518:16.1": "Thiyā guyhaṃ na saṃseyya,",
  "ja518:16.2": "amittassa ca paṇḍito;",
  "ja518:16.3": "Yo cāmisena saṃhīro,",
  "ja518:16.4": "hadayattheno ca yo naro.",
  "ja518:17.1": "Guyhamatthaṃ asambuddhaṃ,",
  "ja518:17.2": "sambodhayati yo naro;",
  "ja518:17.3": "Mantabhedabhayā tassa,",
  "ja518:17.4": "dāsabhūto titikkhati.",
  "ja518:18.1": "Yāvanto purisassatthaṃ,",
  "ja518:18.2": "guyhaṃ jānanti mantinaṃ;",
  "ja518:18.3": "Tāvanto tassa ubbegā,",
  "ja518:18.4": "tasmā guyhaṃ na vissaje.",
  "ja518:19.1": "Vivicca bhāseyya divā rahassaṃ,",
  "ja518:19.2": "Rattiṃ giraṃ nātivelaṃ pamuñce;",
  "ja518:19.3": "Upassutikā hi suṇanti mantaṃ,",
  "ja518:19.4": "Tasmā manto khippamupeti bhedaṃ.",
  "ja518:20.1": "Yathāpi assa nagaraṃ mahantaṃ,",
  "ja518:20.2": "Advārakaṃ āyasaṃ bhaddasālaṃ;",
  "ja518:20.3": "Samantakhātāparikhāupetaṃ,",
  "ja518:20.4": "Evampi me te idha guyhamantā.",
  "ja518:21.1": "Ye guyhamantā avikiṇṇavācā,",
  "ja518:21.2": "Daḷhā sadatthesu narā dujivha;",
  "ja518:21.3": "Ārā amittā byavajanti tehi,",
  "ja518:21.4": "Āsīvisā vā riva sattusaṅghā”.",
  "ja518:22.1": "“Hitvā gharaṃ pabbajito acelo,",
  "ja518:22.2": "Naggo muṇḍo carati ghāsahetu;",
  "ja518:22.3": "Tamhi nu kho vivariṃ guyhamatthaṃ,",
  "ja518:22.4": "Atthā ca dhammā ca apaggatamhā.",
  "ja518:23.1": "Kathaṃkaro hoti supaṇṇarāja,",
  "ja518:23.2": "Kiṃsīlo kena vatena vattaṃ;",
  "ja518:23.3": "Samaṇo caraṃ hitvā mamāyitāni,",
  "ja518:23.4": "Kathaṃkaro saggamupeti ṭhānaṃ”.",
  "ja518:24.1": "“Hiriyā titikkhāya damenupeto,",
  "ja518:24.2": "Akkodhano pesuṇiyaṃ pahāya;",
  "ja518:24.3": "Samaṇo caraṃ hitvā mamāyitāni,",
  "ja518:24.4": "Evaṃkaro saggamupeti ṭhānaṃ”.",
  "ja518:25.1": "“Mātāva puttaṃ taruṇaṃ tanujjaṃ,",
  "ja518:25.2": "Samphassatā sabbagattaṃ phareti;",
  "ja518:25.3": "Evampi me tvaṃ pāturahu dijinda,",
  "ja518:25.4": "Mātāva puttaṃ anukampamāno”.",
  "ja518:26.1": "“Handajja tvaṃ muñca vadhā dujivha,",
  "ja518:26.2": "Tayo hi puttā na hi añño atthi;",
  "ja518:26.3": "Antevāsī dinnako atrajo ca,",
  "ja518:26.4": "Rajjassu puttaññataro me ahosi”.",
  "ja518:27.1": "Icceva vākyaṃ visajjī supaṇṇo,",
  "ja518:27.2": "Bhumyaṃ patiṭṭhāya dijo dujivhaṃ;",
  "ja518:27.3": "“Muttajja tvaṃ sabbabhayātivatto,",
  "ja518:27.4": "Thalūdake hohi mayābhigutto.",
  "ja518:28.1": "Ātaṅkinaṃ yathā kusalo bhisakko,",
  "ja518:28.2": "Pipāsitānaṃ rahadova sīto;",
  "ja518:28.3": "Vesmaṃ yathā himasītaṭṭitānaṃ,",
  "ja518:28.4": "Evampi te saraṇamahaṃ bhavāmi”.",
  "ja518:29.1": "“Sandhiṃ katvā amittena,",
  "ja518:29.2": "aṇḍajena jalābuja;",
  "ja518:29.3": "Vivariya dāṭhaṃ sesi,",
  "ja518:29.4": "kuto taṃ bhayamāgataṃ”.",
  "ja518:30.1": "“Saṅketheva amittasmiṃ,",
  "ja518:30.2": "mittasmimpi na vissase;",
  "ja518:30.3": "Abhayā bhayamuppannaṃ,",
  "ja518:30.4": "api mūlāni kantati.",
  "ja518:31.1": "Kathaṃ nu vissase tyamhi,",
  "ja518:31.2": "yenāsi kalaho kato;",
  "ja518:31.3": "Niccayattena ṭhātabbaṃ,",
  "ja518:31.4": "so disabbhi na rajjati.",
  "ja518:32.1": "Vissāsaye na ca taṃ vissayeyya,",
  "ja518:32.2": "Asaṅkito saṅkito ca bhaveyya;",
  "ja518:32.3": "Tathā tathā viññū parakkameyya,",
  "ja518:32.4": "Yathā yathā bhāvaṃ paro na jaññā”.",
  "ja518:33.1": "Te devavaṇṇā sukhumālarūpā,",
  "ja518:33.2": "Ubho samā sujayā puññakhandhā;",
  "ja518:33.3": "Upāgamuṃ karampiyaṃ acelaṃ,",
  "ja518:33.4": "Missībhūtā assavāhāva nāgā.",
  "ja518:34.1": "Tato have paṇḍarako acelaṃ,",
  "ja518:34.2": "Sayamevupāgamma idaṃ avoca;",
  "ja518:34.3": "“Muttajjahaṃ sabbabhayātivatto,",
  "ja518:34.4": "Na hi nūna tuyhaṃ manaso piyamhā”.",
  "ja518:35.1": "“Piyo hi me āsi supaṇṇarājā,",
  "ja518:35.2": "Asaṃsayaṃ paṇḍarakena saccaṃ;",
  "ja518:35.3": "So rāgarattova akāsimetaṃ,",
  "ja518:35.4": "Pāpakammaṃ sampajāno na mohā”.",
  "ja518:36.1": "“Na me piyaṃ appiyaṃ vāpi hoti,",
  "ja518:36.2": "Sampassato lokamimaṃ parañca;",
  "ja518:36.3": "Susaññatānañhi viyañjanena,",
  "ja518:36.4": "Asaññato lokamimaṃ carāsi.",
  "ja518:37.1": "Ariyāvakāsosi anariyovāsi,",
  "ja518:37.2": "Asaññato saññatasannikāso;",
  "ja518:37.3": "Kaṇhābhijātikosi anariyarūpo,",
  "ja518:37.4": "Pāpaṃ bahuṃ duccaritaṃ acāri.",
  "ja518:38.1": "Aduṭṭhassa tuvaṃ dubbhi,",
  "ja518:38.2": "dubbhī ca pisuṇo casi;",
  "ja518:38.3": "Etena saccavajjena,",
  "ja518:38.4": "muddhā te phalatu sattadhā”.",
  "ja518:39.1": "“Tasmā hi mittānaṃ na dubbhitabbaṃ,",
  "ja518:39.2": "Mittadubbhā pāpiyo natthi añño;",
  "ja518:39.3": "Āsittasatto nihato pathabyā,",
  "ja518:39.4": "Indassa vākyena hi saṃvaro hato”ti.",
  "ja518:40.1": "Paṇḍaranāgarājajātakaṃ aṭṭhamaṃ."
}