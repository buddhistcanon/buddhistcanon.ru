{
  "ja508:0.1": "Jātaka",
  "ja508:0.2": "Vīsatinipāta",
  "ja508:0.3": "Mātaṅgavagga",
  "ja508:0.4": "12. Pañcapaṇḍitajātaka",
  "ja508:1.1": "“Pañca paṇḍitā samāgatāttha,",
  "ja508:1.2": "Pañhā me paṭibhāti taṃ suṇātha;",
  "ja508:1.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:1.4": "Kassevāvikareyya guyhamatthaṃ”.",
  "ja508:2.1": "“Tvaṃ āvikarohi bhūmipāla,",
  "ja508:2.2": "Bhattā bhārasaho tuvaṃ vade taṃ;",
  "ja508:2.3": "Tava chandarucīni sammasitvā,",
  "ja508:2.4": "Atha vakkhanti janinda pañca dhīrā”.",
  "ja508:3.1": "“Yā sīlavatī anaññatheyyā,",
  "ja508:3.2": "Bhattucchandavasānugā manāpā;",
  "ja508:3.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:3.4": "Bhariyāyāvikareyya guyhamatthaṃ”.",
  "ja508:4.1": "“Yo kicchagatassa āturassa,",
  "ja508:4.2": "Saraṇaṃ hoti gatī parāyanañca;",
  "ja508:4.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:4.4": "Sakhino vāvikareyya guyhamatthaṃ”.",
  "ja508:5.1": "“Jeṭṭho atha majjhimo kaniṭṭho,",
  "ja508:5.2": "Yo ce sīlasamāhito ṭhitatto;",
  "ja508:5.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:5.4": "Bhātu vāvīkareyya guyhamatthaṃ”.",
  "ja508:6.1": "“Yo ve pituhadayassa paddhagū,",
  "ja508:6.2": "Anujāto pitaraṃ anomapañño;",
  "ja508:6.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:6.4": "Puttassāvikareyya guyhamatthaṃ”.",
  "ja508:7.1": "“Mātā dvipadājanindaseṭṭha,",
  "ja508:7.2": "Yā naṃ poseti chandasā piyena;",
  "ja508:7.3": "Nindiyamatthaṃ pasaṃsiyaṃ vā,",
  "ja508:7.4": "Mātuyāvīkareyya guyhamatthaṃ”.",
  "ja508:8.1": "“Guyhassa hi guyhameva sādhu,",
  "ja508:8.2": "Na hi guyhassa pasatthamāvikammaṃ;",
  "ja508:8.3": "Anipphannatā saheyya dhīro,",
  "ja508:8.4": "Nipphannova yathāsukhaṃ bhaṇeyya”.",
  "ja508:9.1": "“Kiṃ tvaṃ vimanosi rājaseṭṭha,",
  "ja508:9.2": "Dvipadajaninda vacanaṃ suṇoma metaṃ;",
  "ja508:9.3": "Kiṃ cintayamāno dummanosi,",
  "ja508:9.4": "Nūna deva aparādho atthi mayhaṃ”.",
  "ja508:10.1": "“‘Paṇhe vajjho mahosadho’ti,",
  "ja508:10.2": "Āṇatto me vadhāya bhūripañño;",
  "ja508:10.3": "Taṃ cintayamāno dummanosmi,",
  "ja508:10.4": "Na hi devī aparādho atthi tuyhaṃ”.",
  "ja508:11.1": "“Abhidosagato dāni ehisi,",
  "ja508:11.2": "Kiṃ sutvā kiṃ saṅkate mano te;",
  "ja508:11.3": "Ko te kimavoca bhūripañña,",
  "ja508:11.4": "Iṅgha vacanaṃ suṇoma brūhi metaṃ”.",
  "ja508:12.1": "“‘Paṇhe vajjho mahosadho’ti,",
  "ja508:12.2": "Yadi te mantayitaṃ janinda dosaṃ;",
  "ja508:12.3": "Bhariyāya rahogato asaṃsi,",
  "ja508:12.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ”.",
  "ja508:13.1": "“Yaṃ sālavanasmiṃ senako,",
  "ja508:13.2": "Pāpakammaṃ akāsi asabbhirūpaṃ;",
  "ja508:13.3": "Sakhinova rahogato asaṃsi,",
  "ja508:13.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
  "ja508:14.1": "Pukkusa purisassa te janinda,",
  "ja508:14.2": "Uppanno rogo arājayutto;",
  "ja508:14.3": "Bhātuñca rahogato asaṃsi,",
  "ja508:14.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
  "ja508:15.1": "Ābādhoyaṃ asabbhirūpo,",
  "ja508:15.2": "Kāmindo naradevena phuṭṭho;",
  "ja508:15.3": "Puttassa rahogato asaṃsi,",
  "ja508:15.4": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
  "ja508:16.1": "Aṭṭhavaṅkaṃ maṇiratanaṃ uḷāraṃ,",
  "ja508:16.2": "Sakko te adadā pitāmahassa;",
  "ja508:16.3": "Devindassa gataṃ tadajja hatthaṃ,",
  "ja508:16.4": "Mātuñca rahogato asaṃsi;",
  "ja508:16.5": "Guyhaṃ pātukataṃ sutaṃ mametaṃ.",
  "ja508:17.1": "Guyhassa hi guyhameva sādhu,",
  "ja508:17.2": "Na hi guyhassa pasatthamāvikammaṃ;",
  "ja508:17.3": "Anipphannatā saheyya dhīro,",
  "ja508:17.4": "Nipphannova yathāsukhaṃ bhaṇeyya.",
  "ja508:18.1": "Na guyhamatthaṃ vivareyya,",
  "ja508:18.2": "rakkheyya naṃ yathā nidhiṃ;",
  "ja508:18.3": "Na hi pātukato sādhu,",
  "ja508:18.4": "guyho attho pajānatā.",
  "ja508:19.1": "Thiyā guyhaṃ na saṃseyya,",
  "ja508:19.2": "amittassa ca paṇḍito;",
  "ja508:19.3": "Yo cāmisena saṃhīro,",
  "ja508:19.4": "hadayattheno ca yo naro.",
  "ja508:20.1": "Guyhamatthaṃ asambuddhaṃ,",
  "ja508:20.2": "sambodhayati yo naro;",
  "ja508:20.3": "Mantabhedabhayā tassa,",
  "ja508:20.4": "dāsabhūto titikkhati.",
  "ja508:21.1": "Yāvanto purisassatthaṃ,",
  "ja508:21.2": "guyhaṃ jānanti mantinaṃ;",
  "ja508:21.3": "Tāvanto tassa ubbegā,",
  "ja508:21.4": "tasmā guyhaṃ na vissaje.",
  "ja508:22.1": "Vivicca bhāseyya divā rahassaṃ,",
  "ja508:22.2": "Rattiṃ giraṃ nātivelaṃ pamuñce;",
  "ja508:22.3": "Upassutikā hi suṇanti mantaṃ,",
  "ja508:22.4": "Tasmā manto khippamupeti bhedan”ti.",
  "ja508:23.1": "Pañcapaṇḍitajātakaṃ dvādasamaṃ."
}