{
  "ja386:0.1": "Jātaka",
  "ja386:0.2": "Chakkanipāta",
  "ja386:0.3": "Kharaputtavagga",
  "ja386:0.4": "1. Kharaputtajātaka",
  "ja386:1.1": "“Saccaṃ kirevamāhaṃsu,",
  "ja386:1.2": "vastaṃ bāloti paṇḍitā;",
  "ja386:1.3": "Passa bālo rahokammaṃ,",
  "ja386:1.4": "āvikubbaṃ na bujjhati”.",
  "ja386:2.1": "“Tvaṃ khopi samma bālosi,",
  "ja386:2.2": "kharaputta vijānahi;",
  "ja386:2.3": "Rajjuyā hi parikkhitto,",
  "ja386:2.4": "vaṅkoṭṭho ohitomukho.",
  "ja386:3.1": "Aparampi samma te bālyaṃ,",
  "ja386:3.2": "yo mutto na palāyasi;",
  "ja386:3.3": "So ca bālataro samma,",
  "ja386:3.4": "yaṃ tvaṃ vahasi senakaṃ”.",
  "ja386:4.1": "“Yannu samma ahaṃ bālo,",
  "ja386:4.2": "ajarāja vijānahi;",
  "ja386:4.3": "Atha kena senako bālo,",
  "ja386:4.4": "taṃ me akkhāhi pucchito”.",
  "ja386:5.1": "“Uttamatthaṃ labhitvāna,",
  "ja386:5.2": "bhariyāya yo padassati;",
  "ja386:5.3": "Tena jahissatattānaṃ,",
  "ja386:5.4": "sā cevassa na hessati”.",
  "ja386:6.1": "“Na ve piyammeti janinda tādiso,",
  "ja386:6.2": "Attaṃ niraṃkatvā piyāni sevati;",
  "ja386:6.3": "Attāva seyyo paramā ca seyyo,",
  "ja386:6.4": "Labbhā piyā ocitatthena pacchā”ti.",
  "ja386:7.1": "Kharaputtajātakaṃ paṭhamaṃ."
}