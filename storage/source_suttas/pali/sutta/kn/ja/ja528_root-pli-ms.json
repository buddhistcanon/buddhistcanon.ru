{
  "ja528:0.1": "Jātaka",
  "ja528:0.2": "Paṇṇāsanipāta",
  "ja528:0.3": "Niḷinikāvagga",
  "ja528:0.4": "3. Mahābodhijātaka",
  "ja528:1.1": "“Kiṃ nu daṇḍaṃ kimajinaṃ,",
  "ja528:1.2": "kiṃ chattaṃ kimupāhanaṃ;",
  "ja528:1.3": "Kimaṅkusañca pattañca,",
  "ja528:1.4": "saṅghāṭiñcāpi brāhmaṇa;",
  "ja528:1.5": "Taramānarūpohāsi,",
  "ja528:1.6": "kiṃ nu patthayase disaṃ”.",
  "ja528:2.1": "“Dvādasetāni vassāni,",
  "ja528:2.2": "vusitāni tavantike;",
  "ja528:2.3": "Nābhijānāmi soṇena,",
  "ja528:2.4": "piṅgalenābhikūjitaṃ.",
  "ja528:3.1": "Svāyaṃ dittova nadati,",
  "ja528:3.2": "sukkadāṭhaṃ vidaṃsayaṃ;",
  "ja528:3.3": "Tava sutvā sabhariyassa,",
  "ja528:3.4": "vītasaddhassa maṃ pati”.",
  "ja528:4.1": "“Ahu esa kato doso,",
  "ja528:4.2": "yathā bhāsasi brāhmaṇa;",
  "ja528:4.3": "Esa bhiyyo pasīdāmi,",
  "ja528:4.4": "vasa brāhmaṇa māgamā”.",
  "ja528:5.1": "“Sabbaseto pure āsi,",
  "ja528:5.2": "tatopi sabalo ahu;",
  "ja528:5.3": "Sabbalohitako dāni,",
  "ja528:5.4": "kālo pakkamituṃ mama.",
  "ja528:6.1": "Abbhantaraṃ pure āsi,",
  "ja528:6.2": "tato majjhe tato bahi;",
  "ja528:6.3": "Purā niddhamanā hoti,",
  "ja528:6.4": "sayameva vajāmahaṃ.",
  "ja528:7.1": "Vītasaddhaṃ na seveyya,",
  "ja528:7.2": "udapānaṃvanodakaṃ;",
  "ja528:7.3": "Sacepi naṃ anukhaṇe,",
  "ja528:7.4": "vāri kaddamagandhikaṃ.",
  "ja528:8.1": "Pasannameva seveyya,",
  "ja528:8.2": "appasannaṃ vivajjaye;",
  "ja528:8.3": "Pasannaṃ payirupāseyya,",
  "ja528:8.4": "rahadaṃ vudakatthiko.",
  "ja528:9.1": "Bhaje bhajantaṃ purisaṃ,",
  "ja528:9.2": "abhajantaṃ na bhajjaye;",
  "ja528:9.3": "Asappurisadhammo so,",
  "ja528:9.4": "yo bhajantaṃ na bhajjati.",
  "ja528:10.1": "Yo bhajantaṃ na bhajati,",
  "ja528:10.2": "sevamānaṃ na sevati;",
  "ja528:10.3": "Sa ve manussapāpiṭṭho,",
  "ja528:10.4": "migo sākhassito yathā.",
  "ja528:11.1": "Accābhikkhaṇasaṃsaggā,",
  "ja528:11.2": "asamosaraṇena ca;",
  "ja528:11.3": "Etena mittā jīranti,",
  "ja528:11.4": "akāle yācanāya ca.",
  "ja528:12.1": "Tasmā nābhikkhaṇaṃ gacche,",
  "ja528:12.2": "na ca gacche cirāciraṃ;",
  "ja528:12.3": "Kālena yācaṃ yāceyya,",
  "ja528:12.4": "evaṃ mittā na jīyare.",
  "ja528:13.1": "Aticiraṃ nivāsena,",
  "ja528:13.2": "piyo bhavati appiyo;",
  "ja528:13.3": "Āmanta kho taṃ gacchāma,",
  "ja528:13.4": "purā te homa appiyā”.",
  "ja528:14.1": "“Evañce yācamānānaṃ,",
  "ja528:14.2": "Añjaliṃ nāvabujjhasi;",
  "ja528:14.3": "Paricārakānaṃ sataṃ,",
  "ja528:14.4": "Vacanaṃ na karosi no;",
  "ja528:14.5": "Evaṃ taṃ abhiyācāma,",
  "ja528:14.6": "Puna kayirāsi pariyāyaṃ”.",
  "ja528:15.1": "“Evañce no viharataṃ,",
  "ja528:15.2": "Antarāyo na hessati;",
  "ja528:15.3": "Tuyhaṃ vāpi mahārāja,",
  "ja528:15.4": "Mayhaṃ vā raṭṭhavaddhana;",
  "ja528:15.5": "Appeva nāma passema,",
  "ja528:15.6": "Ahorattānamaccaye.",
  "ja528:16.1": "Udīraṇā ce saṅgatyā,",
  "ja528:16.2": "bhāvāya manuvattati;",
  "ja528:16.3": "Akāmā akaraṇīyaṃ vā,",
  "ja528:16.4": "karaṇīyaṃ vāpi kubbati;",
  "ja528:16.5": "Akāmākaraṇīyamhi,",
  "ja528:16.6": "kvidha pāpena lippati.",
  "ja528:17.1": "So ce attho ca dhammo ca,",
  "ja528:17.2": "kalyāṇo na ca pāpako;",
  "ja528:17.3": "Bhoto ce vacanaṃ saccaṃ,",
  "ja528:17.4": "suhato vānaro mayā.",
  "ja528:18.1": "Attano ce hi vādassa,",
  "ja528:18.2": "aparādhaṃ vijāniyā;",
  "ja528:18.3": "Na maṃ tvaṃ garaheyyāsi,",
  "ja528:18.4": "bhoto vādo hi tādiso.",
  "ja528:19.1": "Issaro sabbalokassa,",
  "ja528:19.2": "sace kappeti jīvitaṃ;",
  "ja528:19.3": "Iddhiṃ byasanabhāvañca,",
  "ja528:19.4": "kammaṃ kalyāṇapāpakaṃ;",
  "ja528:19.5": "Niddesakārī puriso,",
  "ja528:19.6": "issaro tena lippati.",
  "ja528:20.1": "So ce attho ca dhammo ca,",
  "ja528:20.2": "kalyāṇo na ca pāpako;",
  "ja528:20.3": "Bhoto ce vacanaṃ saccaṃ,",
  "ja528:20.4": "suhato vānaro mayā.",
  "ja528:21.1": "Attano ce hi vādassa,",
  "ja528:21.2": "aparādhaṃ vijāniyā;",
  "ja528:21.3": "Na maṃ tvaṃ garaheyyāsi,",
  "ja528:21.4": "bhoto vādo hi tādiso.",
  "ja528:22.1": "Sace pubbekatahetu,",
  "ja528:22.2": "sukhadukkhaṃ nigacchati;",
  "ja528:22.3": "Porāṇakaṃ kataṃ pāpaṃ,",
  "ja528:22.4": "tameso muccate iṇaṃ;",
  "ja528:22.5": "Porāṇakaiṇamokkho,",
  "ja528:22.6": "kvidha pāpena lippati.",
  "ja528:23.1": "So ce attho ca dhammo ca,",
  "ja528:23.2": "kalyāṇo na ca pāpako;",
  "ja528:23.3": "Bhoto ce vacanaṃ saccaṃ,",
  "ja528:23.4": "suhato vānaro mayā.",
  "ja528:24.1": "Attano ce hi vādassa,",
  "ja528:24.2": "aparādhaṃ vijāniyā;",
  "ja528:24.3": "Na maṃ tvaṃ garaheyyāsi,",
  "ja528:24.4": "bhoto vādo hi tādiso.",
  "ja528:25.1": "Catunnaṃyevupādāya,",
  "ja528:25.2": "rūpaṃ sambhoti pāṇinaṃ;",
  "ja528:25.3": "Yato ca rūpaṃ sambhoti,",
  "ja528:25.4": "tatthevānupagacchati;",
  "ja528:25.5": "Idheva jīvati jīvo,",
  "ja528:25.6": "pecca pecca vinassati.",
  "ja528:26.1": "Ucchijjati ayaṃ loko,",
  "ja528:26.2": "ye bālā ye ca paṇḍitā;",
  "ja528:26.3": "Ucchijjamāne lokasmiṃ,",
  "ja528:26.4": "kvidha pāpena lippati.",
  "ja528:27.1": "So ce attho ca dhammo ca,",
  "ja528:27.2": "kalyāṇo na ca pāpako;",
  "ja528:27.3": "Bhoto ce vacanaṃ saccaṃ,",
  "ja528:27.4": "suhato vānaro mayā.",
  "ja528:28.1": "Attano ce hi vādassa,",
  "ja528:28.2": "aparādhaṃ vijāniyā;",
  "ja528:28.3": "Na maṃ tvaṃ garaheyyāsi,",
  "ja528:28.4": "bhoto vādo hi tādiso.",
  "ja528:29.1": "Āhu khattavidā loke,",
  "ja528:29.2": "bālā paṇḍitamānino;",
  "ja528:29.3": "‘Mātaraṃ pitaraṃ haññe,",
  "ja528:29.4": "atho jeṭṭhampi bhātaraṃ;",
  "ja528:29.5": "Haneyya puttadāre ca,",
  "ja528:29.6": "attho ce tādiso siyā’.",
  "ja528:30.1": "Yassa rukkhassa chāyāya,",
  "ja528:30.2": "nisīdeyya sayeyya vā;",
  "ja528:30.3": "Na tassa sākhaṃ bhañjeyya,",
  "ja528:30.4": "mittadubbho hi pāpako.",
  "ja528:31.1": "Atha atthe samuppanne,",
  "ja528:31.2": "samūlamapi abbahe;",
  "ja528:31.3": "Attho me sambalenāpi,",
  "ja528:31.4": "suhato vānaro mayā.",
  "ja528:32.1": "So ce attho ca dhammo ca,",
  "ja528:32.2": "kalyāṇo na ca pāpako;",
  "ja528:32.3": "Bhoto ce vacanaṃ saccaṃ,",
  "ja528:32.4": "suhato vānaro mayā.",
  "ja528:33.1": "Attano ce hi vādassa,",
  "ja528:33.2": "aparādhaṃ vijāniyā;",
  "ja528:33.3": "Na maṃ tvaṃ garaheyyāsi,",
  "ja528:33.4": "bhoto vādo hi tādiso.",
  "ja528:34.1": "Ahetuvādo puriso,",
  "ja528:34.2": "yo ca issarakuttiko;",
  "ja528:34.3": "Pubbekatī ca ucchedī,",
  "ja528:34.4": "yo ca khattavido naro.",
  "ja528:35.1": "Ete asappurisā loke,",
  "ja528:35.2": "bālā paṇḍitamānino;",
  "ja528:35.3": "Kareyya tādiso pāpaṃ,",
  "ja528:35.4": "atho aññampi kāraye;",
  "ja528:35.5": "Asappurisasaṃsaggo,",
  "ja528:35.6": "dukkhanto kaṭukudrayo.",
  "ja528:36.1": "Urabbharūpena vakassu pubbe,",
  "ja528:36.2": "Asaṃkito ajayūthaṃ upeti;",
  "ja528:36.3": "Hantvā uraṇiṃ ajikaṃ ajañca,",
  "ja528:36.4": "Utrāsayitvā yena kāmaṃ paleti.",
  "ja528:37.1": "Tathāvidheke samaṇabrāhmaṇāse,",
  "ja528:37.2": "Chadanaṃ katvā vañcayanti manusse;",
  "ja528:37.3": "Anāsakā thaṇḍilaseyyakā ca,",
  "ja528:37.4": "Rajojallaṃ ukkuṭikappadhānaṃ;",
  "ja528:37.5": "Pariyāyabhattañca apānakattā,",
  "ja528:37.6": "Pāpācārā arahanto vadānā.",
  "ja528:38.1": "Ete asappurisā loke,",
  "ja528:38.2": "bālā paṇḍitamānino;",
  "ja528:38.3": "Kareyya tādiso pāpaṃ,",
  "ja528:38.4": "atho aññampi kāraye;",
  "ja528:38.5": "Asappurisasaṃsaggo,",
  "ja528:38.6": "dukkhanto kaṭukudrayo.",
  "ja528:39.1": "Yamāhu natthi vīriyanti,",
  "ja528:39.2": "ahetuñca pavadanti ye;",
  "ja528:39.3": "Parakāraṃ attakārañca,",
  "ja528:39.4": "ye tucchaṃ samavaṇṇayuṃ.",
  "ja528:40.1": "Ete asappurisā loke,",
  "ja528:40.2": "bālā paṇḍitamānino;",
  "ja528:40.3": "Kareyya tādiso pāpaṃ,",
  "ja528:40.4": "atho aññampi kāraye;",
  "ja528:40.5": "Asappurisasaṃsaggo,",
  "ja528:40.6": "dukkhanto kaṭukudrayo.",
  "ja528:41.1": "Sace hi vīriyaṃ nāssa,",
  "ja528:41.2": "kammaṃ kalyāṇapāpakaṃ;",
  "ja528:41.3": "Na bhare vaḍḍhakiṃ rājā,",
  "ja528:41.4": "napi yantāni kāraye.",
  "ja528:42.1": "Yasmā ca vīriyaṃ atthi,",
  "ja528:42.2": "kammaṃ kalyāṇapāpakaṃ;",
  "ja528:42.3": "Tasmā yantāni kāreti,",
  "ja528:42.4": "rājā bharati vaḍḍhakiṃ.",
  "ja528:43.1": "Yadi vassasataṃ devo,",
  "ja528:43.2": "na vasse na himaṃ pate;",
  "ja528:43.3": "Ucchijjeyya ayaṃ loko,",
  "ja528:43.4": "vinasseyya ayaṃ pajā.",
  "ja528:44.1": "Yasmā ca vassatī devo,",
  "ja528:44.2": "himañcānuphusāyati;",
  "ja528:44.3": "Tasmā sassāni paccanti,",
  "ja528:44.4": "raṭṭhañca pālite ciraṃ.",
  "ja528:45.1": "Gavañce taramānānaṃ,",
  "ja528:45.2": "jimhaṃ gacchati puṅgavo;",
  "ja528:45.3": "Sabbā tā jimhaṃ gacchanti,",
  "ja528:45.4": "nette jimhaṃ gate sati.",
  "ja528:46.1": "Evameva manussesu,",
  "ja528:46.2": "yo hoti seṭṭhasammato;",
  "ja528:46.3": "So ce adhammaṃ carati,",
  "ja528:46.4": "pageva itarā pajā;",
  "ja528:46.5": "Sabbaṃ raṭṭhaṃ dukhaṃ seti,",
  "ja528:46.6": "rājā ce hoti adhammiko.",
  "ja528:47.1": "Gavañce taramānānaṃ,",
  "ja528:47.2": "ujuṃ gacchati puṅgavo;",
  "ja528:47.3": "Sabbā gāvī ujuṃ yanti,",
  "ja528:47.4": "nette ujuṃ gate sati.",
  "ja528:48.1": "Evameva manussesu,",
  "ja528:48.2": "yo hoti seṭṭhasammato;",
  "ja528:48.3": "So sace dhammaṃ carati,",
  "ja528:48.4": "pageva itarā pajā;",
  "ja528:48.5": "Sabbaṃ raṭṭhaṃ sukhaṃ seti,",
  "ja528:48.6": "rājā ce hoti dhammiko.",
  "ja528:49.1": "Mahārukkhassa phalino,",
  "ja528:49.2": "āmaṃ chindati yo phalaṃ;",
  "ja528:49.3": "Rasañcassa na jānāti,",
  "ja528:49.4": "bījañcassa vinassati.",
  "ja528:50.1": "Mahārukkhūpamaṃ raṭṭhaṃ,",
  "ja528:50.2": "adhammena pasāsati;",
  "ja528:50.3": "Rasañcassa na jānāti,",
  "ja528:50.4": "raṭṭhañcassa vinassati.",
  "ja528:51.1": "Mahārukkhassa phalino,",
  "ja528:51.2": "pakkaṃ chindati yo phalaṃ;",
  "ja528:51.3": "Rasañcassa vijānāti,",
  "ja528:51.4": "bījañcassa na nassati.",
  "ja528:52.1": "Mahārukkhūpamaṃ raṭṭhaṃ,",
  "ja528:52.2": "dhammena yo pasāsati;",
  "ja528:52.3": "Rasañcassa vijānāti,",
  "ja528:52.4": "raṭṭhañcassa na nassati.",
  "ja528:53.1": "Yo ca rājā janapadaṃ,",
  "ja528:53.2": "adhammena pasāsati;",
  "ja528:53.3": "Sabbosadhīhi so rājā,",
  "ja528:53.4": "viruddho hoti khattiyo.",
  "ja528:54.1": "Tatheva negame hiṃsaṃ,",
  "ja528:54.2": "ye yuttā kayavikkaye;",
  "ja528:54.3": "Ojadānabalīkāre,",
  "ja528:54.4": "sa kosena virujjhati.",
  "ja528:55.1": "Pahāravarakhettaññū,",
  "ja528:55.2": "saṅgāme katanissame;",
  "ja528:55.3": "Ussite hiṃsayaṃ rājā,",
  "ja528:55.4": "sa balena virujjhati.",
  "ja528:56.1": "Tatheva isayo hiṃsaṃ,",
  "ja528:56.2": "saññate brahmacārino;",
  "ja528:56.3": "Adhammacārī khattiyo,",
  "ja528:56.4": "so saggena virujjhati.",
  "ja528:57.1": "Yo ca rājā adhammaṭṭho,",
  "ja528:57.2": "bhariyaṃ hanti adūsikaṃ;",
  "ja528:57.3": "Luddaṃ pasavate ṭhānaṃ,",
  "ja528:57.4": "puttehi ca virujjhati.",
  "ja528:58.1": "Dhammaṃ care jānapade,",
  "ja528:58.2": "negamesu balesu ca;",
  "ja528:58.3": "Isayo ca na hiṃseyya,",
  "ja528:58.4": "puttadāre samaṃ care.",
  "ja528:59.1": "Sa tādiso bhūmipati,",
  "ja528:59.2": "Raṭṭhapālo akodhano;",
  "ja528:59.3": "Sapatte sampakampeti,",
  "ja528:59.4": "Indova asurādhipo”ti. (3401)",
  "ja528:60.1": "Mahābodhijātakaṃ tatiyaṃ.",
  "ja528:61.1": "Paṇṇāsanipātaṃ niṭṭhitaṃ.",
  "ja528:62.1": "Tassuddānaṃ",
  "ja528:63.1": "Saniḷīnikamavhayano paṭhamo,",
  "ja528:63.2": "Dutiyo pana saummadantivaro;",
  "ja528:63.3": "Tatiyo pana bodhisirīvhayano,",
  "ja528:63.4": "Kathitā pana tīṇi jinena subhāti."
}