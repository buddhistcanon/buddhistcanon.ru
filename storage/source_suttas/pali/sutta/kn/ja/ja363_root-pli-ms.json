{
  "ja363:0.1": "Jātaka",
  "ja363:0.2": "Pañcakanipāta",
  "ja363:0.3": "Vaṇṇārohavagga",
  "ja363:0.4": "3. Hirijātaka",
  "ja363:1.1": "“Hiriṃ tarantaṃ vijigucchamānaṃ,",
  "ja363:1.2": "Tavāhamasmī iti bhāsamānaṃ;",
  "ja363:1.3": "Seyyāni kammāni anādiyantaṃ,",
  "ja363:1.4": "Neso mamanti iti naṃ vijaññā.",
  "ja363:2.1": "Yañhi kayirā tañhi vade,",
  "ja363:2.2": "yaṃ na kayirā na taṃ vade;",
  "ja363:2.3": "Akarontaṃ bhāsamānaṃ,",
  "ja363:2.4": "parijānanti paṇḍitā.",
  "ja363:3.1": "Na so mitto yo sadā appamatto,",
  "ja363:3.2": "Bhedāsaṅkī randhamevānupassī;",
  "ja363:3.3": "Yasmiñca setī urasīva putto,",
  "ja363:3.4": "Sa ve mitto yo abhejjo parehi.",
  "ja363:4.1": "Pāmojjakaraṇaṃ ṭhānaṃ,",
  "ja363:4.2": "pasaṃsāvahanaṃ sukhaṃ;",
  "ja363:4.3": "Phalānisaṃso bhāveti,",
  "ja363:4.4": "vahanto porisaṃ dhuraṃ.",
  "ja363:5.1": "Pavivekarasaṃ pitvā,",
  "ja363:5.2": "rasaṃ upasamassa ca;",
  "ja363:5.3": "Niddaro hoti nippāpo,",
  "ja363:5.4": "dhammappītirasaṃ pivan”ti.",
  "ja363:6.1": "Hirijātakaṃ tatiyaṃ."
}