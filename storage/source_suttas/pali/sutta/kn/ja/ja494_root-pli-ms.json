{
  "ja494:0.1": "Jātaka",
  "ja494:0.2": "Pakiṇṇakanipāta",
  "ja494:0.3": "Sālikedāravagga",
  "ja494:0.4": "11. Sādhinajātaka",
  "ja494:1.1": "“Abbhuto vata lokasmiṃ,",
  "ja494:1.2": "uppajji lomahaṃsano;",
  "ja494:1.3": "Dibbo ratho pāturahu,",
  "ja494:1.4": "vedehassa yasassino”.",
  "ja494:2.1": "Devaputto mahiddhiko,",
  "ja494:2.2": "mātali devasārathi;",
  "ja494:2.3": "Nimantayittha rājānaṃ,",
  "ja494:2.4": "vedehaṃ mithilaggahaṃ.",
  "ja494:3.1": "“Ehimaṃ rathamāruyha,",
  "ja494:3.2": "rājaseṭṭha disampati;",
  "ja494:3.3": "Devā dassanakāmā te,",
  "ja494:3.4": "tāvatiṃsā saindakā;",
  "ja494:3.5": "Saramānā hi te devā,",
  "ja494:3.6": "sudhammāyaṃ samacchare”.",
  "ja494:4.1": "Tato ca rājā sādhino,",
  "ja494:4.2": "vedeho mithilaggaho;",
  "ja494:4.3": "Sahassayuttamāruyha,",
  "ja494:4.4": "agā devāna santike;",
  "ja494:4.5": "Taṃ devā paṭinandiṃsu,",
  "ja494:4.6": "disvā rājānamāgataṃ.",
  "ja494:5.1": "“Svāgataṃ te mahārāja,",
  "ja494:5.2": "atho te adurāgataṃ;",
  "ja494:5.3": "Nisīda dāni rājīsi,",
  "ja494:5.4": "devarājassa santike”.",
  "ja494:6.1": "Sakkopi paṭinandittha,",
  "ja494:6.2": "vedehaṃ mithilaggahaṃ;",
  "ja494:6.3": "Nimantayittha kāmehi,",
  "ja494:6.4": "āsanena ca vāsavo.",
  "ja494:7.1": "“Sādhu khosi anuppatto,",
  "ja494:7.2": "āvāsaṃ vasavattinaṃ;",
  "ja494:7.3": "Vasa devesu rājīsi,",
  "ja494:7.4": "sabbakāmasamiddhisu;",
  "ja494:7.5": "Tāvatiṃsesu devesu,",
  "ja494:7.6": "bhuñja kāme amānuse”.",
  "ja494:8.1": "“Ahaṃ pure saggagato ramāmi,",
  "ja494:8.2": "Naccehi gītehi ca vāditehi;",
  "ja494:8.3": "So dāni ajja na ramāmi sagge,",
  "ja494:8.4": "Āyuṃ nu khīṇo maraṇaṃ nu santike;",
  "ja494:8.5": "Udāhu mūḷhosmi janindaseṭṭha”.",
  "ja494:9.1": "“Na tāyu khīṇaṃ maraṇañca dūre,",
  "ja494:9.2": "Na cāpi mūḷho naravīraseṭṭha;",
  "ja494:9.3": "Tuyhañca puññāni parittakāni,",
  "ja494:9.4": "Yesaṃ vipākaṃ idha vedayittho.",
  "ja494:10.1": "Vasa devānubhāvena,",
  "ja494:10.2": "rājaseṭṭha disampati;",
  "ja494:10.3": "Tāvatiṃsesu devesu,",
  "ja494:10.4": "bhuñja kāme amānuse”.",
  "ja494:11.1": "“Yathā yācitakaṃ yānaṃ,",
  "ja494:11.2": "yathā yācitakaṃ dhanaṃ;",
  "ja494:11.3": "Evaṃsampadamevetaṃ,",
  "ja494:11.4": "yaṃ parato dānapaccayā.",
  "ja494:12.1": "Na cāhametamicchāmi,",
  "ja494:12.2": "yaṃ parato dānapaccayā;",
  "ja494:12.3": "Sayaṃkatāni puññāni,",
  "ja494:12.4": "taṃ me āveṇikaṃ dhanaṃ.",
  "ja494:13.1": "Sohaṃ gantvā manussesu,",
  "ja494:13.2": "kāhāmi kusalaṃ bahuṃ;",
  "ja494:13.3": "Dānena samacariyāya,",
  "ja494:13.4": "saṃyamena damena ca;",
  "ja494:13.5": "Yaṃ katvā sukhito hoti,",
  "ja494:13.6": "na ca pacchānutappati.",
  "ja494:14.1": "Imāni tāni khettāni,",
  "ja494:14.2": "imaṃ nikkhaṃ sukuṇḍalaṃ;",
  "ja494:14.3": "Imā tā haritānūpā,",
  "ja494:14.4": "imā najjo savantiyo.",
  "ja494:15.1": "Imā tā pokkharaṇī rammā,",
  "ja494:15.2": "cakkavākapakūjitā;",
  "ja494:15.3": "Mandālakehi sañchannā,",
  "ja494:15.4": "padumuppalakehi ca;",
  "ja494:15.5": "Yassimāni mamāyiṃsu,",
  "ja494:15.6": "kiṃ nu te disataṃ gatā.",
  "ja494:16.1": "Tānīdha khettāni so bhūmibhāgo,",
  "ja494:16.2": "Teyeva ārāmavanūpacārā;",
  "ja494:16.3": "Tameva mayhaṃ janataṃ apassato,",
  "ja494:16.4": "Suññaṃva me nārada khāyate disā”.",
  "ja494:17.1": "“Diṭṭhā mayā vimānāni,",
  "ja494:17.2": "obhāsentā catuddisā;",
  "ja494:17.3": "Sammukhā devarājassa,",
  "ja494:17.4": "tidasānañca sammukhā.",
  "ja494:18.1": "Vutthaṃ me bhavanaṃ dibyaṃ,",
  "ja494:18.2": "Bhuttā kāmā amānusā;",
  "ja494:18.3": "Tāvatiṃsesu devesu,",
  "ja494:18.4": "Sabbakāmasamiddhisu.",
  "ja494:19.1": "Sohaṃ etādisaṃ hitvā,",
  "ja494:19.2": "puññāyamhi idhāgato;",
  "ja494:19.3": "Dhammameva carissāmi,",
  "ja494:19.4": "nāhaṃ rajjena atthiko.",
  "ja494:20.1": "Adaṇḍāvacaraṃ maggaṃ,",
  "ja494:20.2": "sammāsambuddhadesitaṃ;",
  "ja494:20.3": "Taṃ maggaṃ paṭipajjissaṃ,",
  "ja494:20.4": "yena gacchanti subbatā”ti.",
  "ja494:21.1": "Sādhinajātakaṃ ekādasamaṃ."
}