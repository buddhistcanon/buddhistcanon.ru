{
  "ja471:0.1": "Jātaka",
  "ja471:0.2": "Dvādasakanipāta",
  "ja471:0.3": "Cūḷakuṇālavagga",
  "ja471:0.4": "8. Meṇḍakapañhajātaka",
  "ja471:1.1": "“Yesaṃ na kadāci bhūtapubbaṃ,",
  "ja471:1.2": "Sakhyaṃ sattapadampimasmi loke;",
  "ja471:1.3": "Jātā amittā duve sahāyā,",
  "ja471:1.4": "Paṭisandhāya caranti kissa hetu”.",
  "ja471:2.1": "“Yadi me ajja pātarāsakāle,",
  "ja471:2.2": "Pañhaṃ na sakkuṇeyyātha vattumetaṃ;",
  "ja471:2.3": "Raṭṭhā pabbājayissāmi vo sabbe,",
  "ja471:2.4": "Na hi mattho duppaññajātikehi”.",
  "ja471:3.1": "“Mahājanasamāgamamhi ghore,",
  "ja471:3.2": "Janakolāhalasaṅgamamhi jāte;",
  "ja471:3.3": "Vikkhittamanā anekacittā,",
  "ja471:3.4": "Pañhaṃ na sakkuṇoma vattumetaṃ.",
  "ja471:4.1": "Ekaggacittāva ekamekā,",
  "ja471:4.2": "Rahasi gatā atthaṃ nicintayitvā;",
  "ja471:4.3": "Paviveke sammasitvāna dhīrā,",
  "ja471:4.4": "Atha vakkhanti janinda etamatthaṃ”.",
  "ja471:5.1": "“Uggaputtarājaputtiyānaṃ,",
  "ja471:5.2": "Urabbhassa maṃsaṃ piyaṃ manāpaṃ;",
  "ja471:5.3": "Na sunakhassa te adenti maṃsaṃ,",
  "ja471:5.4": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:6.1": "“Cammaṃ vihananti eḷakassa,",
  "ja471:6.2": "Assapiṭṭhattharassukhassa hetu;",
  "ja471:6.3": "Na ca te sunakhassa attharanti,",
  "ja471:6.4": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:7.1": "“Āvellitasiṅgiko hi meṇḍo,",
  "ja471:7.2": "Na ca sunakhassa visāṇakāni atthi;",
  "ja471:7.3": "Tiṇabhakkho maṃsabhojano ca,",
  "ja471:7.4": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:8.1": "“Tiṇamāsi palāsamāsi meṇḍo,",
  "ja471:8.2": "Na ca sunakho tiṇamāsi no palāsaṃ;",
  "ja471:8.3": "Gaṇheyya suṇo sasaṃ biḷāraṃ,",
  "ja471:8.4": "Atha meṇḍassa suṇena sakhyamassa”.",
  "ja471:9.1": "“Aṭṭhaḍḍhapado catuppadassa,",
  "ja471:9.2": "Meṇḍo aṭṭhanakho adissamāno;",
  "ja471:9.3": "Chādiyamāharatī ayaṃ imassa,",
  "ja471:9.4": "Maṃsaṃ āharatī ayaṃ amussa.",
  "ja471:10.1": "Pāsādavaragato videhaseṭṭho,",
  "ja471:10.2": "Vitihāraṃ aññamaññabhojanānaṃ;",
  "ja471:10.3": "Addakkhi kira sakkhikaṃ janindo,",
  "ja471:10.4": "Bubhukkassa puṇṇaṃmukhassa cetaṃ”.",
  "ja471:11.1": "“Lābhā vata me anapparūpā,",
  "ja471:11.2": "Yassa medisā paṇḍitā kulamhi;",
  "ja471:11.3": "Pañhassa gambhīragataṃ nipuṇamatthaṃ,",
  "ja471:11.4": "Paṭivijjhanti subhāsitena dhīrā.",
  "ja471:12.1": "Assatarirathañca ekamekaṃ,",
  "ja471:12.2": "Phītaṃ gāmavarañca ekamekaṃ;",
  "ja471:12.3": "Sabbesaṃ vo dammi paṇḍitānaṃ,",
  "ja471:12.4": "Paramappatītamano subhāsitenā”ti.",
  "ja471:13.1": "Meṇḍakapañhajātakaṃ aṭṭhamaṃ."
}