{
  "ja451:0.1": "Jātaka",
  "ja451:0.2": "Dasakanipāta",
  "ja451:0.3": "Catudvāravagga",
  "ja451:0.4": "13. Cakkavākajātaka",
  "ja451:1.1": "“Vaṇṇavā abhirūposi,",
  "ja451:1.2": "ghano sañjātarohito;",
  "ja451:1.3": "Cakkavāka surūposi,",
  "ja451:1.4": "vippasannamukhindriyo.",
  "ja451:2.1": "Pāṭhīnaṃ pāvusaṃ macchaṃ,",
  "ja451:2.2": "balajaṃ muñjarohitaṃ;",
  "ja451:2.3": "Gaṅgāya tīre nisinno,",
  "ja451:2.4": "evaṃ bhuñjasi bhojanaṃ”.",
  "ja451:3.1": "“Na vāhametaṃ bhuñjāmi,",
  "ja451:3.2": "Jaṅgalānodakāni vā;",
  "ja451:3.3": "Aññatra sevālapaṇakā,",
  "ja451:3.4": "Etaṃ me samma bhojanaṃ”.",
  "ja451:4.1": "“Na vāhametaṃ saddahāmi,",
  "ja451:4.2": "cakkavākassa bhojanaṃ;",
  "ja451:4.3": "Ahampi samma bhuñjāmi,",
  "ja451:4.4": "gāme loṇiyateliyaṃ.",
  "ja451:5.1": "Manussesu kataṃ bhattaṃ,",
  "ja451:5.2": "suciṃ maṃsūpasecanaṃ;",
  "ja451:5.3": "Na ca me tādiso vaṇṇo,",
  "ja451:5.4": "cakkavāka yathā tuvaṃ”.",
  "ja451:6.1": "“Sampassaṃ attani veraṃ,",
  "ja451:6.2": "hiṃsayaṃ mānusiṃ pajaṃ;",
  "ja451:6.3": "Utrasto ghasasī bhīto,",
  "ja451:6.4": "tena vaṇṇo tavediso.",
  "ja451:7.1": "Sabbalokaviruddhosi,",
  "ja451:7.2": "dhaṅka pāpena kammunā;",
  "ja451:7.3": "Laddho piṇḍo na pīṇeti,",
  "ja451:7.4": "tena vaṇṇo tavediso.",
  "ja451:8.1": "Ahampi samma bhuñjāmi,",
  "ja451:8.2": "ahiṃsaṃ sabbapāṇinaṃ;",
  "ja451:8.3": "Appossukko nirāsaṅkī,",
  "ja451:8.4": "asoko akutobhayo.",
  "ja451:9.1": "So karassu ānubhāvaṃ,",
  "ja451:9.2": "vītivattassu sīliyaṃ;",
  "ja451:9.3": "Ahiṃsāya cara loke,",
  "ja451:9.4": "piyo hohisi maṃmiva.",
  "ja451:10.1": "Yo na hanti na ghāteti,",
  "ja451:10.2": "na jināti na jāpaye;",
  "ja451:10.3": "Mettaṃso sabbabhūtesu,",
  "ja451:10.4": "veraṃ tassa na kenacī”ti.",
  "ja451:11.1": "Cakkavākajātakaṃ terasamaṃ."
}