{
  "ja543:0.1": "Jātaka",
  "ja543:0.2": "Mahānipāta",
  "ja543:0.3": "Mūgapakkhavagga",
  "ja543:0.4": "6. Bhūridattajātaka",
  "ja543:1.1": "“Yaṃ kiñci ratanaṃ atthi,",
  "ja543:1.2": "dhataraṭṭhanivesane;",
  "ja543:1.3": "Sabbāni te upayantu,",
  "ja543:1.4": "dhītaraṃ dehi rājino”.",
  "ja543:2.1": "“Na no vivāho nāgehi,",
  "ja543:2.2": "katapubbo kudācanaṃ;",
  "ja543:2.3": "Taṃ vivāhaṃ asaṃyuttaṃ,",
  "ja543:2.4": "kathaṃ amhe karomase”.",
  "ja543:3.1": "“Jīvitaṃ nūna te cattaṃ,",
  "ja543:3.2": "raṭṭhaṃ vā manujādhipa;",
  "ja543:3.3": "Na hi nāge kupitamhi,",
  "ja543:3.4": "ciraṃ jīvanti tādisā.",
  "ja543:4.1": "Yo tvaṃ deva manussosi,",
  "ja543:4.2": "iddhimantaṃ aniddhimā;",
  "ja543:4.3": "Varuṇassa niyaṃputtaṃ,",
  "ja543:4.4": "yāmunaṃ atimaññasi”.",
  "ja543:5.1": "“Nātimaññāmi rājānaṃ,",
  "ja543:5.2": "dhataraṭṭhaṃ yasassinaṃ;",
  "ja543:5.3": "Dhataraṭṭho hi nāgānaṃ,",
  "ja543:5.4": "bahūnamapi issaro.",
  "ja543:6.1": "Ahi mahānubhāvopi,",
  "ja543:6.2": "na me dhītaramāraho;",
  "ja543:6.3": "Khattiyo ca videhānaṃ,",
  "ja543:6.4": "abhijātā samuddajā”.",
  "ja543:7.1": "“Kambalassatarā uṭṭhentu,",
  "ja543:7.2": "sabbe nāge nivedaya;",
  "ja543:7.3": "Bārāṇasiṃ pavajjantu,",
  "ja543:7.4": "mā ca kañci viheṭhayuṃ”.",
  "ja543:8.1": "“Nivesanesu sobbhesu,",
  "ja543:8.2": "rathiyā caccaresu ca;",
  "ja543:8.3": "Rukkhaggesu ca lambantu,",
  "ja543:8.4": "vitatā toraṇesu ca.",
  "ja543:9.1": "Ahampi sabbasetena,",
  "ja543:9.2": "mahatā sumahaṃ puraṃ;",
  "ja543:9.3": "Parikkhipissaṃ bhogehi,",
  "ja543:9.4": "kāsīnaṃ janayaṃ bhayaṃ”.",
  "ja543:10.1": "Tassa taṃ vacanaṃ sutvā,",
  "ja543:10.2": "uragānekavaṇṇino;",
  "ja543:10.3": "Bārāṇasiṃ pavajjiṃsu,",
  "ja543:10.4": "na ca kañci viheṭhayuṃ.",
  "ja543:11.1": "Nivesanesu sobbhesu,",
  "ja543:11.2": "rathiyā caccaresu ca;",
  "ja543:11.3": "Rukkhaggesu ca lambiṃsu,",
  "ja543:11.4": "vitatā toraṇesu ca.",
  "ja543:12.1": "Tesu disvāna lambante,",
  "ja543:12.2": "puthū kandiṃsu nāriyo;",
  "ja543:12.3": "Nāge soṇḍikate disvā,",
  "ja543:12.4": "passasante muhuṃ muhuṃ.",
  "ja543:13.1": "Bārāṇasī pabyathitā,",
  "ja543:13.2": "āturā samapajjatha;",
  "ja543:13.3": "Bāhā paggayha pakkanduṃ,",
  "ja543:13.4": "“dhītaraṃ dehi rājino”.",
  "ja543:14.1": "()",
  "ja543:15.1": "“Pupphābhihārassa vanassa majjhe,",
  "ja543:15.2": "Ko lohitakkho vitatantaraṃso;",
  "ja543:15.3": "Kā kambukāyūradharā suvatthā,",
  "ja543:15.4": "Tiṭṭhanti nāriyo dasa vandamānā.",
  "ja543:16.1": "Ko tvaṃ brahābāhu vanassa majjhe,",
  "ja543:16.2": "Virocasi ghatasittova aggi;",
  "ja543:16.3": "Mahesakkho aññatarosi yakkho,",
  "ja543:16.4": "Udāhu nāgosi mahānubhāvo”.",
  "ja543:17.1": "“Nāgohamasmi iddhimā,",
  "ja543:17.2": "tejassī duratikkamo;",
  "ja543:17.3": "Ḍaṃseyyaṃ tejasā kuddho,",
  "ja543:17.4": "phītaṃ janapadaṃ api.",
  "ja543:18.1": "Samuddajā hi me mātā,",
  "ja543:18.2": "dhataraṭṭho ca me pitā;",
  "ja543:18.3": "Sudassanakaniṭṭhosmi,",
  "ja543:18.4": "bhūridattoti maṃ vidū.",
  "ja543:19.1": "Yaṃ gambhīraṃ sadāvaṭṭaṃ,",
  "ja543:19.2": "rahadaṃ bhismaṃ pekkhasi;",
  "ja543:19.3": "Esa dibyo mamāvāso,",
  "ja543:19.4": "anekasataporiso.",
  "ja543:20.1": "Mayūrakoñcābhirudaṃ,",
  "ja543:20.2": "nīlodaṃ vanamajjhato;",
  "ja543:20.3": "Yamunaṃ pavisa mā bhīto,",
  "ja543:20.4": "khemaṃ vattavataṃ sivaṃ.",
  "ja543:21.1": "Tattha patto sānucaro,",
  "ja543:21.2": "saha puttena brāhmaṇa;",
  "ja543:21.3": "Pūjito mayhaṃ kāmehi,",
  "ja543:21.4": "sukhaṃ brāhmaṇa vacchasi”.",
  "ja543:22.1": "“Samā samantaparito,",
  "ja543:22.2": "pahūtatagarā mahī;",
  "ja543:22.3": "Indagopakasañchannā,",
  "ja543:22.4": "sobhati harituttamā.",
  "ja543:23.1": "Rammāni vanacetyāni,",
  "ja543:23.2": "rammā haṃsūpakūjitā;",
  "ja543:23.3": "Opupphāpadmā tiṭṭhanti,",
  "ja543:23.4": "pokkharañño sunimmitā.",
  "ja543:24.1": "Aṭṭhaṃsā sukatā thambhā,",
  "ja543:24.2": "sabbe veḷuriyāmayā;",
  "ja543:24.3": "Sahassathambhā pāsādā,",
  "ja543:24.4": "pūrā kaññāhi jotare.",
  "ja543:25.1": "Vimānaṃ upapannosi,",
  "ja543:25.2": "dibyaṃ puññehi attano;",
  "ja543:25.3": "Asambādhaṃ sivaṃ rammaṃ,",
  "ja543:25.4": "accantasukhasaṃhitaṃ.",
  "ja543:26.1": "Maññe sahassanettassa,",
  "ja543:26.2": "vimānaṃ nābhikaṅkhasi;",
  "ja543:26.3": "Iddhī hi tyāyaṃ vipulā,",
  "ja543:26.4": "sakkasseva jutīmato”.",
  "ja543:27.1": "“Manasāpi na pattabbo,",
  "ja543:27.2": "ānubhāvo jutīmato;",
  "ja543:27.3": "Paricārayamānānaṃ,",
  "ja543:27.4": "saindānaṃ vasavattinaṃ.",
  "ja543:28.1": "Taṃ vimānaṃ abhijjhāya,",
  "ja543:28.2": "amarānaṃ sukhesinaṃ;",
  "ja543:28.3": "Uposathaṃ upavasanto,",
  "ja543:28.4": "semi vammikamuddhani”.",
  "ja543:29.1": "“Ahañca migamesāno,",
  "ja543:29.2": "saputto pāvisiṃ vanaṃ;",
  "ja543:29.3": "Taṃ maṃ mataṃ vā jīvaṃ vā,",
  "ja543:29.4": "nābhivedenti ñātakā.",
  "ja543:30.1": "Āmantaye bhūridattaṃ,",
  "ja543:30.2": "kāsiputtaṃ yasassinaṃ;",
  "ja543:30.3": "Tayā no samanuññātā,",
  "ja543:30.4": "api passemu ñātake”.",
  "ja543:31.1": "“Eso hi vata me chando,",
  "ja543:31.2": "yaṃ vasesi mamantike;",
  "ja543:31.3": "Na hi etādisā kāmā,",
  "ja543:31.4": "sulabhā honti mānuse.",
  "ja543:32.1": "Sace tvaṃ nicchase vatthuṃ,",
  "ja543:32.2": "mama kāmehi pūjito;",
  "ja543:32.3": "Mayā tvaṃ samanuññāto,",
  "ja543:32.4": "sotthiṃ passāhi ñātake”.",
  "ja543:33.1": "“Dhārayimaṃ maṇiṃ dibyaṃ,",
  "ja543:33.2": "pasuṃ putte ca vindati;",
  "ja543:33.3": "Arogo sukhito hoti,",
  "ja543:33.4": "gacchevādāya brāhmaṇa”.",
  "ja543:34.1": "“Kusalaṃ paṭinandāmi,",
  "ja543:34.2": "bhūridatta vaco tava;",
  "ja543:34.3": "Pabbajissāmi jiṇṇosmi,",
  "ja543:34.4": "na kāme abhipatthaye”.",
  "ja543:35.1": "“Brahmacariyassa ce bhaṅgo,",
  "ja543:35.2": "hoti bhogehi kāriyaṃ;",
  "ja543:35.3": "Avikampamāno eyyāsi,",
  "ja543:35.4": "bahuṃ dassāmi te dhanaṃ”.",
  "ja543:36.1": "“Kusalaṃ paṭinandāmi,",
  "ja543:36.2": "bhūridatta vaco tava;",
  "ja543:36.3": "Punapi āgamissāmi,",
  "ja543:36.4": "sace attho bhavissati”.",
  "ja543:37.1": "Idaṃ vatvā bhūridatto,",
  "ja543:37.2": "Pesesi caturo jane;",
  "ja543:37.3": "“Etha gacchatha uṭṭhetha,",
  "ja543:37.4": "Khippaṃ pāpetha brāhmaṇaṃ”.",
  "ja543:38.1": "Tassa taṃ vacanaṃ sutvā,",
  "ja543:38.2": "uṭṭhāya caturo janā;",
  "ja543:38.3": "Pesitā bhūridattena,",
  "ja543:38.4": "khippaṃ pāpesu brāhmaṇaṃ.",
  "ja543:39.1": "()",
  "ja543:40.1": "“Maṇiṃ paggayha maṅgalyaṃ,",
  "ja543:40.2": "sādhuvittaṃ manoramaṃ;",
  "ja543:40.3": "Selaṃ byañjanasampannaṃ,",
  "ja543:40.4": "ko imaṃ maṇimajjhagā”.",
  "ja543:41.1": "“Lohitakkhasahassāhi,",
  "ja543:41.2": "samantā parivāritaṃ;",
  "ja543:41.3": "Ajja kālaṃ pathaṃ gacchaṃ,",
  "ja543:41.4": "ajjhagāhaṃ maṇiṃ imaṃ”.",
  "ja543:42.1": "“Sūpaciṇṇo ayaṃ selo,",
  "ja543:42.2": "accito mānito sadā;",
  "ja543:42.3": "Sudhārito sunikkhitto,",
  "ja543:42.4": "sabbatthamabhisādhaye.",
  "ja543:43.1": "Upacāravipannassa,",
  "ja543:43.2": "nikkhepe dhāraṇāya vā;",
  "ja543:43.3": "Ayaṃ selo vināsāya,",
  "ja543:43.4": "pariciṇṇo ayoniso.",
  "ja543:44.1": "Na imaṃ akusalo dibyaṃ,",
  "ja543:44.2": "maṇiṃ dhāretumāraho;",
  "ja543:44.3": "Paṭipajja sataṃ nikkhaṃ,",
  "ja543:44.4": "dehimaṃ ratanaṃ mama”.",
  "ja543:45.1": "“Na ca myāyaṃ maṇī keyyo,",
  "ja543:45.2": "gohi vā ratanehi vā;",
  "ja543:45.3": "Selo byañjanasampanno,",
  "ja543:45.4": "neva keyyo maṇī mama”.",
  "ja543:46.1": "“No ce tayā maṇī keyyo,",
  "ja543:46.2": "gohi vā ratanehi vā;",
  "ja543:46.3": "Atha kena maṇī keyyo,",
  "ja543:46.4": "taṃ me akkhāhi pucchito”.",
  "ja543:47.1": "“Yo me saṃse mahānāgaṃ,",
  "ja543:47.2": "tejassiṃ duratikkamaṃ;",
  "ja543:47.3": "Tassa dajjaṃ imaṃ selaṃ,",
  "ja543:47.4": "jalantamiva tejasā”.",
  "ja543:48.1": "“Ko nu brāhmaṇavaṇṇena,",
  "ja543:48.2": "supaṇṇo patataṃ varo;",
  "ja543:48.3": "Nāgaṃ jigīsamanvesi,",
  "ja543:48.4": "anvesaṃ bhakkhamattano”.",
  "ja543:49.1": "“Nāhaṃ dijādhipo homi,",
  "ja543:49.2": "na diṭṭho garuḷo mayā;",
  "ja543:49.3": "Āsīvisena vittoti,",
  "ja543:49.4": "vajjo brāhmaṇa maṃ vidū”.",
  "ja543:50.1": "“Kiṃ nu tuyhaṃ balaṃ atthi,",
  "ja543:50.2": "kiṃ sippaṃ vijjate tava;",
  "ja543:50.3": "Kismiṃ vā tvaṃ paratthaddho,",
  "ja543:50.4": "uragaṃ nāpacāyasi”.",
  "ja543:51.1": "“Āraññikassa isino,",
  "ja543:51.2": "cirarattaṃ tapassino;",
  "ja543:51.3": "Supaṇṇo kosiyassakkhā,",
  "ja543:51.4": "visavijjaṃ anuttaraṃ.",
  "ja543:52.1": "Taṃ bhāvitattaññataraṃ,",
  "ja543:52.2": "sammantaṃ pabbatantare;",
  "ja543:52.3": "Sakkaccaṃ taṃ upaṭṭhāsiṃ,",
  "ja543:52.4": "rattindivamatandito.",
  "ja543:53.1": "So tadā pariciṇṇo me,",
  "ja543:53.2": "vattavā brahmacariyavā;",
  "ja543:53.3": "Dibbaṃ pātukarī mantaṃ,",
  "ja543:53.4": "kāmasā bhagavā mama.",
  "ja543:54.1": "Tyāhaṃ mante paratthaddho,",
  "ja543:54.2": "nāhaṃ bhāyāmi bhoginaṃ;",
  "ja543:54.3": "Ācariyo visaghātānaṃ,",
  "ja543:54.4": "alampānoti maṃ vidū”.",
  "ja543:55.1": "“Gaṇhāmase maṇiṃ tāta,",
  "ja543:55.2": "somadatta vijānahi;",
  "ja543:55.3": "Mā daṇḍena siriṃ pattaṃ,",
  "ja543:55.4": "kāmasā pajahimhase”.",
  "ja543:56.1": "“Sakaṃ nivesanaṃ pattaṃ,",
  "ja543:56.2": "yo taṃ brāhmaṇa pūjayi;",
  "ja543:56.3": "Evaṃ kalyāṇakārissa,",
  "ja543:56.4": "kiṃ mohā dubbhimicchasi.",
  "ja543:57.1": "Sace tvaṃ dhanakāmosi,",
  "ja543:57.2": "bhūridatto padassati;",
  "ja543:57.3": "Tameva gantvā yācassu,",
  "ja543:57.4": "bahuṃ dassati te dhanaṃ”.",
  "ja543:58.1": "“Hatthagataṃ pattagataṃ,",
  "ja543:58.2": "nikiṇṇaṃ khādituṃ varaṃ;",
  "ja543:58.3": "Mā no sandiṭṭhiko attho,",
  "ja543:58.4": "somadatta upaccagā”.",
  "ja543:59.1": "“Paccati niraye ghore,",
  "ja543:59.2": "mahissamapi vivarati;",
  "ja543:59.3": "Mittadubbhī hitaccāgī,",
  "ja543:59.4": "jīvarevāpi sussati.",
  "ja543:60.1": "Sace tvaṃ dhanakāmosi,",
  "ja543:60.2": "bhūridatto padassati;",
  "ja543:60.3": "Maññe attakataṃ veraṃ,",
  "ja543:60.4": "naciraṃ vedayissasi”.",
  "ja543:61.1": "“Mahāyaññaṃ yajitvāna,",
  "ja543:61.2": "evaṃ sujjhanti brāhmaṇā;",
  "ja543:61.3": "Mahāyaññaṃ yajissāma,",
  "ja543:61.4": "evaṃ mokkhāma pāpakā”.",
  "ja543:62.1": "“Handa dāni apāyāmi,",
  "ja543:62.2": "nāhaṃ ajja tayā saha;",
  "ja543:62.3": "Padampekaṃ na gaccheyyaṃ,",
  "ja543:62.4": "evaṃ kibbisakārinā”.",
  "ja543:63.1": "Idaṃ vatvāna pitaraṃ,",
  "ja543:63.2": "somadatto bahussuto;",
  "ja543:63.3": "Ujjhāpetvāna bhūtāni,",
  "ja543:63.4": "tamhā ṭhānā apakkami.",
  "ja543:64.1": "“Gaṇhāhetaṃ mahānāgaṃ,",
  "ja543:64.2": "āharetaṃ maṇiṃ mama;",
  "ja543:64.3": "Indagopakavaṇṇābho,",
  "ja543:64.4": "yassa lohitako siro.",
  "ja543:65.1": "Kappāsapicurāsīva,",
  "ja543:65.2": "eso kāyo padissati;",
  "ja543:65.3": "Vammikaggagato seti,",
  "ja543:65.4": "taṃ tvaṃ gaṇhāhi brāhmaṇa”.",
  "ja543:66.1": "Athosadhehi dibbehi,",
  "ja543:66.2": "jappaṃ mantapadāni ca;",
  "ja543:66.3": "Evaṃ taṃ asakkhi satthuṃ,",
  "ja543:66.4": "katvā parittamattano.",
  "ja543:67.1": "()",
  "ja543:68.1": "“Mamaṃ disvāna āyantaṃ,",
  "ja543:68.2": "sabbakāmasamiddhinaṃ;",
  "ja543:68.3": "Indriyāni ahaṭṭhāni,",
  "ja543:68.4": "sāvaṃ jātaṃ mukhaṃ tava.",
  "ja543:69.1": "Padmaṃ yathā hatthagataṃ,",
  "ja543:69.2": "Pāṇinā parimadditaṃ;",
  "ja543:69.3": "Sāvaṃ jātaṃ mukhaṃ tuyhaṃ,",
  "ja543:69.4": "Mamaṃ disvāna edisaṃ.",
  "ja543:70.1": "Kacci nu te nābhisasi,",
  "ja543:70.2": "kacci te atthi vedanā;",
  "ja543:70.3": "Yena sāvaṃ mukhaṃ tuyhaṃ,",
  "ja543:70.4": "mamaṃ disvāna āgataṃ”.",
  "ja543:71.1": "“Supinaṃ tāta addakkhiṃ,",
  "ja543:71.2": "ito māsaṃ adhogataṃ;",
  "ja543:71.3": "Dakkhiṇaṃ viya me bāhuṃ,",
  "ja543:71.4": "chetvā ruhiramakkhitaṃ;",
  "ja543:71.5": "Puriso ādāya pakkāmi,",
  "ja543:71.6": "mama rodantiyā sati.",
  "ja543:72.1": "Yatohaṃ supinamaddakkhiṃ,",
  "ja543:72.2": "sudassana vijānahi;",
  "ja543:72.3": "Tato divā vā rattiṃ vā,",
  "ja543:72.4": "sukhaṃ me nopalabbhati”.",
  "ja543:73.1": "“Yaṃ pubbe parivāriṃsu,",
  "ja543:73.2": "kaññā ruciraviggahā;",
  "ja543:73.3": "Hemajālapaṭicchannā,",
  "ja543:73.4": "bhūridatto na dissati.",
  "ja543:74.1": "Yaṃ pubbe parivāriṃsu,",
  "ja543:74.2": "nettiṃsavaradhārino;",
  "ja543:74.3": "Kaṇikārāva samphullā,",
  "ja543:74.4": "bhūridatto na dissati.",
  "ja543:75.1": "Handa dāni gamissāma,",
  "ja543:75.2": "bhūridattanivesanaṃ;",
  "ja543:75.3": "Dhammaṭṭhaṃ sīlasampannaṃ,",
  "ja543:75.4": "passāma tava bhātaraṃ”.",
  "ja543:76.1": "Tañca disvāna āyantiṃ,",
  "ja543:76.2": "bhūridattassa mātaraṃ;",
  "ja543:76.3": "Bāhā paggayha pakkanduṃ,",
  "ja543:76.4": "bhūridattassa nāriyo.",
  "ja543:77.1": "“Puttaṃ teyye na jānāma,",
  "ja543:77.2": "ito māsaṃ adhogataṃ;",
  "ja543:77.3": "Mataṃ vā yadi vā jīvaṃ,",
  "ja543:77.4": "bhūridattaṃ yasassinaṃ.",
  "ja543:78.1": "Sakuṇī hataputtāva,",
  "ja543:78.2": "suññaṃ disvā kulāvakaṃ;",
  "ja543:78.3": "Ciraṃ dukkhena jhāyissaṃ,",
  "ja543:78.4": "bhūridattaṃ apassatī.",
  "ja543:79.1": "Kurarī hatachāpāva,",
  "ja543:79.2": "suññaṃ disvā kulāvakaṃ;",
  "ja543:79.3": "Ciraṃ dukkhena jhāyissaṃ,",
  "ja543:79.4": "bhūridattaṃ apassatī.",
  "ja543:80.1": "Sā nūna cakkavākīva,",
  "ja543:80.2": "pallalasmiṃ anodake;",
  "ja543:80.3": "Ciraṃ dukkhena jhāyissaṃ,",
  "ja543:80.4": "bhūridattaṃ apassatī.",
  "ja543:81.1": "Kammārānaṃ yathā ukkā,",
  "ja543:81.2": "anto jhāyati no bahi;",
  "ja543:81.3": "Evaṃ jhāyāmi sokena,",
  "ja543:81.4": "bhūridattaṃ apassatī”.",
  "ja543:82.1": "Sālāva sampamathitā,",
  "ja543:82.2": "mālutena pamadditā;",
  "ja543:82.3": "Senti puttā ca dārā ca,",
  "ja543:82.4": "bhūridattanivesane.",
  "ja543:83.1": "Idaṃ sutvāna nigghosaṃ,",
  "ja543:83.2": "bhūridattanivesane;",
  "ja543:83.3": "Ariṭṭho ca subhogo ca,",
  "ja543:83.4": "padhāviṃsu anantarā.",
  "ja543:84.1": "“Amma assāsa mā soci,",
  "ja543:84.2": "evaṃdhammā hi pāṇino;",
  "ja543:84.3": "Cavanti upapajjanti,",
  "ja543:84.4": "esassa pariṇāmitā”.",
  "ja543:85.1": "“Ahampi tāta jānāmi,",
  "ja543:85.2": "evaṃdhammā hi pāṇino;",
  "ja543:85.3": "Sokena ca paretasmi,",
  "ja543:85.4": "bhūridattaṃ apassatī.",
  "ja543:86.1": "Ajja ce me imaṃ rattiṃ,",
  "ja543:86.2": "sudassana vijānahi;",
  "ja543:86.3": "Bhūridattaṃ apassantī,",
  "ja543:86.4": "maññe hissāmi jīvitaṃ”.",
  "ja543:87.1": "“Amma assāsa mā soci,",
  "ja543:87.2": "ānayissāma bhātaraṃ;",
  "ja543:87.3": "Disodisaṃ gamissāma,",
  "ja543:87.4": "bhātupariyesanaṃ caraṃ.",
  "ja543:88.1": "Pabbate giriduggesu,",
  "ja543:88.2": "gāmesu nigamesu ca;",
  "ja543:88.3": "Orena sattarattassa,",
  "ja543:88.4": "bhātaraṃ passa āgataṃ”.",
  "ja543:89.1": "“Hatthā pamutto urago,",
  "ja543:89.2": "pāde te nipatī bhusaṃ;",
  "ja543:89.3": "Kacci nu taṃ ḍaṃsī tāta,",
  "ja543:89.4": "mā bhāyi sukhito bhava”.",
  "ja543:90.1": "“Neva mayhaṃ ayaṃ nāgo,",
  "ja543:90.2": "alaṃ dukkhāya kāyaci;",
  "ja543:90.3": "Yāvatatthi ahiggāho,",
  "ja543:90.4": "mayā bhiyyo na vijjati”.",
  "ja543:91.1": "“Ko nu brāhmaṇavaṇṇena,",
  "ja543:91.2": "ditto parisamāgato;",
  "ja543:91.3": "Avhāyantu suyuddhena,",
  "ja543:91.4": "suṇantu parisā mama”.",
  "ja543:92.1": "“Tvaṃ maṃ nāgena ālampa,",
  "ja543:92.2": "ahaṃ maṇḍūkachāpiyā;",
  "ja543:92.3": "Hotu no abbhutaṃ tattha,",
  "ja543:92.4": "ā sahassehi pañcahi”.",
  "ja543:93.1": "“Ahañhi vasumā aḍḍho,",
  "ja543:93.2": "tvaṃ daliddosi māṇava;",
  "ja543:93.3": "Ko nu te pāṭibhogatthi,",
  "ja543:93.4": "upajūtañca kiṃ siyā.",
  "ja543:94.1": "Upajūtañca me assa,",
  "ja543:94.2": "pāṭibhogo ca tādiso;",
  "ja543:94.3": "Hotu no abbhutaṃ tattha,",
  "ja543:94.4": "ā sahassehi pañcahi”.",
  "ja543:95.1": "“Suṇohi me mahārāja,",
  "ja543:95.2": "vacanaṃ bhaddamatthu te;",
  "ja543:95.3": "Pañcannaṃ me sahassānaṃ,",
  "ja543:95.4": "pāṭibhogo hi kittima”.",
  "ja543:96.1": "“Pettikaṃ vā iṇaṃ hoti,",
  "ja543:96.2": "Yaṃ vā hoti sayaṃkataṃ;",
  "ja543:96.3": "Kiṃ tvaṃ evaṃ bahuṃ mayhaṃ,",
  "ja543:96.4": "Dhanaṃ yācasi brāhmaṇa”.",
  "ja543:97.1": "“Alampāno hi nāgena,",
  "ja543:97.2": "mamaṃ abhijigīsati;",
  "ja543:97.3": "Ahaṃ maṇḍūkachāpiyā,",
  "ja543:97.4": "ḍaṃsayissāmi brāhmaṇaṃ.",
  "ja543:98.1": "Taṃ tvaṃ daṭṭhuṃ mahārāja,",
  "ja543:98.2": "ajja raṭṭhābhivaḍḍhana;",
  "ja543:98.3": "Khattasaṃghaparibyūḷho,",
  "ja543:98.4": "niyyāhi ahidassanaṃ”.",
  "ja543:99.1": "“Neva taṃ atimaññāmi,",
  "ja543:99.2": "sippavādena māṇava;",
  "ja543:99.3": "Atimattosi sippena,",
  "ja543:99.4": "uragaṃ nāpacāyasi”.",
  "ja543:100.1": "“Ahampi nātimaññāmi,",
  "ja543:100.2": "sippavādena brāhmaṇa;",
  "ja543:100.3": "Avisena ca nāgena,",
  "ja543:100.4": "bhusaṃ vañcayase janaṃ.",
  "ja543:101.1": "Evañcetaṃ jano jaññā,",
  "ja543:101.2": "Yathā jānāmi taṃ ahaṃ;",
  "ja543:101.3": "Na tvaṃ labhasi ālampa,",
  "ja543:101.4": "Bhusamuṭṭhiṃ kuto dhanaṃ”.",
  "ja543:102.1": "“Kharājino jaṭī dummī,",
  "ja543:102.2": "ditto parisamāgato;",
  "ja543:102.3": "Yo tvaṃ evaṃ gataṃ nāgaṃ,",
  "ja543:102.4": "aviso atimaññasi.",
  "ja543:103.1": "Āsajja kho naṃ jaññāsi,",
  "ja543:103.2": "puṇṇaṃ uggassa tejaso;",
  "ja543:103.3": "Maññe taṃ bhasmarāsiṃva,",
  "ja543:103.4": "khippameso karissati”.",
  "ja543:104.1": "“Siyā visaṃ siluttassa,",
  "ja543:104.2": "deḍḍubhassa silābhuno;",
  "ja543:104.3": "Neva lohitasīsassa,",
  "ja543:104.4": "visaṃ nāgassa vijjati”.",
  "ja543:105.1": "“Sutametaṃ arahataṃ,",
  "ja543:105.2": "saññatānaṃ tapassinaṃ;",
  "ja543:105.3": "Idha dānāni datvāna,",
  "ja543:105.4": "saggaṃ gacchanti dāyakā;",
  "ja543:105.5": "Jīvanto dehi dānāni,",
  "ja543:105.6": "yadi te atthi dātave.",
  "ja543:106.1": "Ayaṃ nāgo mahiddhiko,",
  "ja543:106.2": "tejassī duratikkamo;",
  "ja543:106.3": "Tena taṃ ḍaṃsayissāmi,",
  "ja543:106.4": "so taṃ bhasmaṃ karissati”.",
  "ja543:107.1": "“Mayāpetaṃ sutaṃ samma,",
  "ja543:107.2": "saññatānaṃ tapassinaṃ;",
  "ja543:107.3": "Idha dānāni datvāna,",
  "ja543:107.4": "saggaṃ gacchanti dāyakā;",
  "ja543:107.5": "Tvameva dehi jīvanto,",
  "ja543:107.6": "yadi te atthi dātave.",
  "ja543:108.1": "Ayaṃ ajamukhī nāma,",
  "ja543:108.2": "puṇṇā uggassa tejaso;",
  "ja543:108.3": "Tāya taṃ ḍaṃsayissāmi,",
  "ja543:108.4": "sā taṃ bhasmaṃ karissati.",
  "ja543:109.1": "Yā dhītā dhataraṭṭhassa,",
  "ja543:109.2": "vemātā bhaginī mama;",
  "ja543:109.3": "Sā taṃ ḍaṃsatvajamukhī,",
  "ja543:109.4": "puṇṇā uggassa tejaso.",
  "ja543:110.1": "Chamāyañce nisiñcissaṃ,",
  "ja543:110.2": "brahmadatta vijānahi;",
  "ja543:110.3": "Tiṇalatāni osadhyo,",
  "ja543:110.4": "ussusseyyuṃ asaṃsayaṃ.",
  "ja543:111.1": "Uddhañce pātayissāmi,",
  "ja543:111.2": "brahmadatta vijānahi;",
  "ja543:111.3": "Satta vassāniyaṃ devo,",
  "ja543:111.4": "na vasse na himaṃ pate.",
  "ja543:112.1": "Udake ce nisiñcissaṃ,",
  "ja543:112.2": "brahmadatta vijānahi;",
  "ja543:112.3": "Yāvantodakajā pāṇā,",
  "ja543:112.4": "mareyyuṃ macchakacchapā”.",
  "ja543:113.1": "()",
  "ja543:114.1": "“Lokyaṃ sajantaṃ udakaṃ,",
  "ja543:114.2": "payāgasmiṃ patiṭṭhitaṃ;",
  "ja543:114.3": "Komaṃ ajjhoharī bhūto,",
  "ja543:114.4": "ogāḷhaṃ yamunaṃ nadiṃ”.",
  "ja543:115.1": "“Yadesa lokādhipatī yasassī,",
  "ja543:115.2": "Bārāṇasiṃ pakriya samantato;",
  "ja543:115.3": "Tassāha putto uragūsabhassa,",
  "ja543:115.4": "Subhogoti maṃ brāhmaṇa vedayanti”.",
  "ja543:116.1": "“Sace hi putto uragūsabhassa,",
  "ja543:116.2": "Kāsissa rañño amarādhipassa;",
  "ja543:116.3": "Mahesakkho aññataro pitā te,",
  "ja543:116.4": "Maccesu mātā pana te atulyā;",
  "ja543:116.5": "Na tādiso arahati brāhmaṇassa,",
  "ja543:116.6": "Dāsampi ohārituṃ mahānubhāvo”.",
  "ja543:117.1": "“Rukkhaṃ nissāya vijjhittho,",
  "ja543:117.2": "eṇeyyaṃ pātumāgataṃ;",
  "ja543:117.3": "So viddho dūramacari,",
  "ja543:117.4": "saravegena sīghavā.",
  "ja543:118.1": "Taṃ tvaṃ patitamaddakkhi,",
  "ja543:118.2": "araññasmiṃ brahāvane;",
  "ja543:118.3": "Sa maṃsakājamādāya,",
  "ja543:118.4": "sāyaṃ nigrodhupāgami.",
  "ja543:119.1": "Sukasāḷikasaṅghuṭṭhaṃ,",
  "ja543:119.2": "piṅgalaṃ santhatāyutaṃ;",
  "ja543:119.3": "Kokilābhirudaṃ rammaṃ,",
  "ja543:119.4": "dhuvaṃ haritasaddalaṃ.",
  "ja543:120.1": "Tattha te so pāturahu,",
  "ja543:120.2": "iddhiyā yasasā jalaṃ;",
  "ja543:120.3": "Mahānubhāvo bhātā me,",
  "ja543:120.4": "kaññāhi parivārito.",
  "ja543:121.1": "So tena pariciṇṇo tvaṃ,",
  "ja543:121.2": "sabbakāmehi tappito;",
  "ja543:121.3": "Aduṭṭhassa tuvaṃ dubbhi,",
  "ja543:121.4": "taṃ te veraṃ idhāgataṃ.",
  "ja543:122.1": "Khippaṃ gīvaṃ pasārehi,",
  "ja543:122.2": "na te dassāmi jīvitaṃ;",
  "ja543:122.3": "Bhātu parisaraṃ veraṃ,",
  "ja543:122.4": "chedayissāmi te siraṃ”.",
  "ja543:123.1": "“Ajjhāyako yācayogī,",
  "ja543:123.2": "āhutaggi ca brāhmaṇo;",
  "ja543:123.3": "Etehi tīhi ṭhānehi,",
  "ja543:123.4": "avajjho hoti brāhmaṇo”.",
  "ja543:124.1": "“Yaṃ pūraṃ dhataraṭṭhassa,",
  "ja543:124.2": "ogāḷhaṃ yamunaṃ nadiṃ;",
  "ja543:124.3": "Jotate sabbasovaṇṇaṃ,",
  "ja543:124.4": "girimāhacca yāmunaṃ.",
  "ja543:125.1": "Tattha te purisabyagghā,",
  "ja543:125.2": "sodariyā mama bhātaro;",
  "ja543:125.3": "Yathā te tattha vakkhanti,",
  "ja543:125.4": "tathā hessasi brāhmaṇa”.",
  "ja543:126.1": "()",
  "ja543:127.1": "“Anittarā ittarasampayuttā,",
  "ja543:127.2": "Yaññā ca vedā ca subhoga loke;",
  "ja543:127.3": "Tadaggarayhañhi vinindamāno,",
  "ja543:127.4": "Jahāti vittañca satañca dhammaṃ.",
  "ja543:128.1": "Ajjhenamariyā pathaviṃ janindā,",
  "ja543:128.2": "Vessā kasiṃ pāricariyañca suddā;",
  "ja543:128.3": "Upāgu paccekaṃ yathāpadesaṃ,",
  "ja543:128.4": "Katāhu ete vasināti āhu.",
  "ja543:129.1": "Dhātā vidhātā varuṇo kuvero,",
  "ja543:129.2": "Somo yamo candimā vāyu sūriyo;",
  "ja543:129.3": "Etepi yaññaṃ puthuso yajitvā,",
  "ja543:129.4": "Ajjhāyakānaṃ atho sabbakāme.",
  "ja543:130.1": "Vikāsitā cāpasatāni pañca,",
  "ja543:130.2": "Yo ajjuno balavā bhīmaseno;",
  "ja543:130.3": "Sahassabāhu asamo pathabyā,",
  "ja543:130.4": "Sopi tadā mādahi jātavedaṃ.",
  "ja543:131.1": "Yo brāhmaṇe bhojayi dīgharattaṃ,",
  "ja543:131.2": "Annena pānena yathānubhāvaṃ;",
  "ja543:131.3": "Pasannacitto anumodamāno,",
  "ja543:131.4": "Subhoga devaññataro ahosi.",
  "ja543:132.1": "Mahāsanaṃ devamanomavaṇṇaṃ,",
  "ja543:132.2": "Yo sappinā asakkhi bhojetumaggiṃ;",
  "ja543:132.3": "Sa yaññatantaṃ varato yajitvā,",
  "ja543:132.4": "Dibbaṃ gatiṃ mucalindajjhagacchi.",
  "ja543:133.1": "Mahānubhāvo vassasahassajīvī,",
  "ja543:133.2": "Yo pabbajī dassaneyyo uḷāro;",
  "ja543:133.3": "Hitvā apariyanta raṭṭhaṃ sasenaṃ,",
  "ja543:133.4": "Rājā dudīpopi jagāma saggaṃ.",
  "ja543:134.1": "Yo sāgarantaṃ sāgaro vijitvā,",
  "ja543:134.2": "Yūpaṃ subhaṃ soṇṇamayaṃ uḷāraṃ;",
  "ja543:134.3": "Ussesi vessānaramādahāno,",
  "ja543:134.4": "Subhoga devaññataro ahosi.",
  "ja543:135.1": "Yassānubhāvena subhoga gaṅgā,",
  "ja543:135.2": "Pavattatha dadhisannisinnaṃ samuddaṃ;",
  "ja543:135.3": "Salomapādo paricariya maggiṃ,",
  "ja543:135.4": "Aṅgo sahassakkhapurajjhagacchi.",
  "ja543:136.1": "Mahiddhiko devavaro yasassī,",
  "ja543:136.2": "Senāpati tidive vāsavassa;",
  "ja543:136.3": "So somayāgena malaṃ vihantvā,",
  "ja543:136.4": "Subhoga devaññataro ahosi.",
  "ja543:137.1": "Akārayi lokamimaṃ parañca,",
  "ja543:137.2": "Bhāgīrathiṃ himavantañca gijjhaṃ;",
  "ja543:137.3": "Yo iddhimā devavaro yasassī,",
  "ja543:137.4": "Sopi tadā ādahi jātavedaṃ.",
  "ja543:138.1": "Mālāgirī himavā yo ca gijjho,",
  "ja543:138.2": "Sudassano nisabho kuveru;",
  "ja543:138.3": "Ete ca aññe ca nagā mahantā,",
  "ja543:138.4": "Cityā katā yaññakarehi māhu.",
  "ja543:139.1": "Ajjhāyakaṃ mantaguṇūpapannaṃ,",
  "ja543:139.2": "Tapassinaṃ yācayogotidhāhu;",
  "ja543:139.3": "Tīre samuddassudakaṃ sajantaṃ,",
  "ja543:139.4": "Taṃ sāgarojjhohari tenapeyyo.",
  "ja543:140.1": "Āyāgavatthūni puthū pathabyā,",
  "ja543:140.2": "Saṃvijjanti brāhmaṇā vāsavassa;",
  "ja543:140.3": "Purimaṃ disaṃ pacchimaṃ dakkhiṇuttaraṃ,",
  "ja543:140.4": "Saṃvijjamānā janayanti vedaṃ”.",
  "ja543:141.1": "“Kalī hi dhīrāna kaṭaṃ magānaṃ,",
  "ja543:141.2": "Bhavanti vedajjhagatānariṭṭha;",
  "ja543:141.3": "Marīcidhammaṃ asamekkhitattā,",
  "ja543:141.4": "Māyāguṇā nātivahanti paññaṃ.",
  "ja543:142.1": "Vedā na tāṇāya bhavanti dassa,",
  "ja543:142.2": "Mittadduno bhūnahuno narassa;",
  "ja543:142.3": "Na tāyate pariciṇṇo ca aggi,",
  "ja543:142.4": "Dosantaraṃ maccamanariyakammaṃ.",
  "ja543:143.1": "Sabbañca maccā sadhanaṃ sabhogaṃ,",
  "ja543:143.2": "Ādīpitaṃ dāru tiṇena missaṃ;",
  "ja543:143.3": "Dahaṃ na tappe asamatthatejo,",
  "ja543:143.4": "Ko taṃ subhikkhaṃ dvirasaññu kayirā.",
  "ja543:144.1": "Yathāpi khīraṃ vipariṇāmadhammaṃ,",
  "ja543:144.2": "Dadhi bhavitvā navanītampi hoti;",
  "ja543:144.3": "Evampi aggi vipariṇāmadhammo,",
  "ja543:144.4": "Tejo samorohatī yogayutto.",
  "ja543:145.1": "Na dissatī aggimanuppaviṭṭho,",
  "ja543:145.2": "Sukkhesu kaṭṭhesu navesu cāpi;",
  "ja543:145.3": "Nāmatthamāno araṇīnarena,",
  "ja543:145.4": "Nākammunā jāyati jātavedo.",
  "ja543:146.1": "Sace hi aggi antarato vaseyya,",
  "ja543:146.2": "Sukkhesu kaṭṭhesu navesu cāpi;",
  "ja543:146.3": "Sabbāni susseyyu vanāni loke,",
  "ja543:146.4": "Sukkhāni kaṭṭhāni ca pajjaleyyuṃ.",
  "ja543:147.1": "Karoti ce dārutiṇena puññaṃ,",
  "ja543:147.2": "Bhojaṃ naro dhūmasikhiṃ patāpavaṃ;",
  "ja543:147.3": "Aṅgārikā loṇakarā ca sūdā,",
  "ja543:147.4": "Sarīradāhāpi kareyyu puññaṃ.",
  "ja543:148.1": "Atha ce hi ete na karonti puññaṃ,",
  "ja543:148.2": "Ajjhenamaggiṃ idha tappayitvā;",
  "ja543:148.3": "Na koci lokasmiṃ karoti puññaṃ,",
  "ja543:148.4": "Bhojaṃ naro dhūmasikhiṃ patāpavaṃ.",
  "ja543:149.1": "Kathañhi lokāpacito samāno,",
  "ja543:149.2": "Amanuññagandhaṃ bahūnaṃ akantaṃ;",
  "ja543:149.3": "Yadeva maccā parivajjayanti,",
  "ja543:149.4": "Tadappasatthaṃ dvirasaññu bhuñje.",
  "ja543:150.1": "Sikhimpi devesu vadanti heke,",
  "ja543:150.2": "Āpaṃ milakkhū pana devamāhu;",
  "ja543:150.3": "Sabbeva ete vitathaṃ bhaṇanti,",
  "ja543:150.4": "Aggī na devaññataro na cāpo.",
  "ja543:151.1": "Anindriyabaddhamasaññakāyaṃ,",
  "ja543:151.2": "Vessānaraṃ kammakaraṃ pajānaṃ;",
  "ja543:151.3": "Paricariya maggiṃ sugatiṃ kathaṃ vaje,",
  "ja543:151.4": "Pāpāni kammāni pakubbamāno.",
  "ja543:152.1": "Sabbābhibhū tāhudha jīvikatthā,",
  "ja543:152.2": "Aggissa brahmā paricārakoti;",
  "ja543:152.3": "Sabbānubhāvī ca vasī kimatthaṃ,",
  "ja543:152.4": "Animmito nimmitaṃ vanditassa.",
  "ja543:153.1": "Hassaṃ anijjhānakhamaṃ atacchaṃ,",
  "ja543:153.2": "Sakkārahetu pakiriṃsu pubbe;",
  "ja543:153.3": "Te lābhasakkāre apātubhonte,",
  "ja543:153.4": "Sandhāpitā jantubhi santidhammaṃ.",
  "ja543:154.1": "Ajjhenamariyā pathaviṃ janindā,",
  "ja543:154.2": "Vessā kasiṃ pāricariyañca suddā;",
  "ja543:154.3": "Upāgu paccekaṃ yathāpadesaṃ,",
  "ja543:154.4": "Katāhu ete vasināti āhu.",
  "ja543:155.1": "Etañca saccaṃ vacanaṃ bhaveyya,",
  "ja543:155.2": "Yathā idaṃ bhāsitaṃ brāhmaṇehi;",
  "ja543:155.3": "Nākhattiyo jātu labhetha rajjaṃ,",
  "ja543:155.4": "Nābrāhmaṇo mantapadāni sikkhe;",
  "ja543:155.5": "Nāññatra vessehi kasiṃ kareyya,",
  "ja543:155.6": "Suddo na mucce parapesanāya.",
  "ja543:156.1": "Yasmā ca etaṃ vacanaṃ abhūtaṃ,",
  "ja543:156.2": "Musāvime odariyā bhaṇanti;",
  "ja543:156.3": "Tadappapaññā abhisaddahanti,",
  "ja543:156.4": "Passanti taṃ paṇḍitā attanāva.",
  "ja543:157.1": "Khatyā hi vessānaṃ baliṃ haranti,",
  "ja543:157.2": "Ādāya satthāni caranti brāhmaṇā;",
  "ja543:157.3": "Taṃ tādisaṃ saṅkhubhitaṃ pabhinnaṃ,",
  "ja543:157.4": "Kasmā brahmā nujju karoti lokaṃ.",
  "ja543:158.1": "Sace hi so issaro sabbaloke,",
  "ja543:158.2": "Brahmā bahūbhūtapatī pajānaṃ;",
  "ja543:158.3": "Kiṃ sabbalokaṃ vidahī alakkhiṃ,",
  "ja543:158.4": "Kiṃ sabbalokaṃ na sukhiṃ akāsi.",
  "ja543:159.1": "Sace hi so issaro sabbaloke,",
  "ja543:159.2": "Brahmā bahūbhūtapatī pajānaṃ;",
  "ja543:159.3": "Māyā musāvajjamadena cāpi,",
  "ja543:159.4": "Lokaṃ adhammena kimatthamakāri.",
  "ja543:160.1": "Sace hi so issaro sabbaloke,",
  "ja543:160.2": "Brahmā bahūbhūtapatī pajānaṃ;",
  "ja543:160.3": "Adhammiko bhūtapatī ariṭṭha,",
  "ja543:160.4": "Dhamme sati yo vidahī adhammaṃ.",
  "ja543:161.1": "Kīṭā paṭaṅgā uragā ca bhekā,",
  "ja543:161.2": "Hantvā kimī sujjhati makkhikā ca;",
  "ja543:161.3": "Etepi dhammā anariyarūpā,",
  "ja543:161.4": "Kambojakānaṃ vitathā bahūnaṃ.",
  "ja543:162.1": "Sace hi so sujjhati yo hanāti,",
  "ja543:162.2": "Hatopi so saggamupeti ṭhānaṃ;",
  "ja543:162.3": "Bhovādi bhovādina mārayeyyuṃ,",
  "ja543:162.4": "Ye cāpi tesaṃ abhisaddaheyyuṃ.",
  "ja543:163.1": "Neva migā na pasū nopi gāvo,",
  "ja543:163.2": "Āyācanti attavadhāya keci;",
  "ja543:163.3": "Vipphandamāne idha jīvikatthā,",
  "ja543:163.4": "Yaññesu pāṇe pasumārabhanti.",
  "ja543:164.1": "Yūpussane pasubandhe ca bālā,",
  "ja543:164.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
  "ja543:164.3": "Ayaṃ te yūpo kāmaduho parattha,",
  "ja543:164.4": "Bhavissati sassato samparāye.",
  "ja543:165.1": "Sace ca yūpe maṇisaṅkhamuttaṃ,",
  "ja543:165.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
  "ja543:165.3": "Sukkhesu kaṭṭhesu navesu cāpi,",
  "ja543:165.4": "Sace duhe tidive sabbakāme;",
  "ja543:165.5": "Tevijjasaṅghāva puthū yajeyyuṃ,",
  "ja543:165.6": "Abrāhmaṇaṃ kañci na yājayeyyuṃ.",
  "ja543:166.1": "Kuto ca yūpe maṇisaṅkhamuttaṃ,",
  "ja543:166.2": "Dhaññaṃ dhanaṃ rajataṃ jātarūpaṃ;",
  "ja543:166.3": "Sukkhesu kaṭṭhesu navesu cāpi,",
  "ja543:166.4": "Kuto duhe tidive sabbakāme.",
  "ja543:167.1": "Saṭhā ca luddā ca paluddhabālā,",
  "ja543:167.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
  "ja543:167.3": "Ādāya aggiṃ mama dehi vittaṃ,",
  "ja543:167.4": "Tato sukhī hohisi sabbakāme.",
  "ja543:168.1": "Tamaggihuttaṃ saraṇaṃ pavissa,",
  "ja543:168.2": "Cittehi vaṇṇehi mukhaṃ nayanti;",
  "ja543:168.3": "Oropayitvā kesamassuṃ nakhañca,",
  "ja543:168.4": "Vedehi vittaṃ atigāḷhayanti.",
  "ja543:169.1": "Kākā ulūkaṃva raho labhitvā,",
  "ja543:169.2": "Ekaṃ samānaṃ bahukā samecca;",
  "ja543:169.3": "Annāni bhutvā kuhakā kuhitvā,",
  "ja543:169.4": "Muṇḍaṃ karitvā yaññapathossajanti.",
  "ja543:170.1": "Evañhi so vañcito brāhmaṇehi,",
  "ja543:170.2": "Eko samāno bahukā samecca;",
  "ja543:170.3": "Te yogayogena vilumpamānā,",
  "ja543:170.4": "Diṭṭhaṃ adiṭṭhena dhanaṃ haranti.",
  "ja543:171.1": "Akāsiyā rājūhivānusiṭṭhā,",
  "ja543:171.2": "Tadassa ādāya dhanaṃ haranti;",
  "ja543:171.3": "Te tādisā corasamā asantā,",
  "ja543:171.4": "Vajjhā na haññanti ariṭṭha loke.",
  "ja543:172.1": "Indassa bāhārasi dakkhiṇāti,",
  "ja543:172.2": "Yaññesu chindanti palāsayaṭṭhiṃ;",
  "ja543:172.3": "Tañcepi saccaṃ maghavā chinnabāhu,",
  "ja543:172.4": "Kenassa indo asure jināti.",
  "ja543:173.1": "Tañceva tucchaṃ maghavā samaṅgī,",
  "ja543:173.2": "Hantā avajjho paramo sa devo;",
  "ja543:173.3": "Mantā ime brāhmaṇā tuccharūpā,",
  "ja543:173.4": "Sandiṭṭhikā vañcanā esa loke.",
  "ja543:174.1": "Mālāgiri himavā yo ca gijjho,",
  "ja543:174.2": "Sudassano nisabho kuveru;",
  "ja543:174.3": "Ete ca aññe ca nagā mahantā,",
  "ja543:174.4": "Cityā katā yaññakarehi māhu.",
  "ja543:175.1": "Yathāpakārāni hi iṭṭhakāni,",
  "ja543:175.2": "Cityā katā yaññakarehi māhu;",
  "ja543:175.3": "Na pabbatā honti tathāpakārā,",
  "ja543:175.4": "Aññā disā acalā tiṭṭhaselā.",
  "ja543:176.1": "Na iṭṭhakā honti silā cirena,",
  "ja543:176.2": "Na tattha sañjāyati ayo na lohaṃ;",
  "ja543:176.3": "Yaññañca etaṃ parivaṇṇayantā,",
  "ja543:176.4": "Cityā katā yaññakarehi māhu.",
  "ja543:177.1": "Ajjhāyakaṃ mantaguṇūpapannaṃ,",
  "ja543:177.2": "Tapassinaṃ yācayogotidhāhu;",
  "ja543:177.3": "Tīre samuddassudakaṃ sajantaṃ,",
  "ja543:177.4": "Taṃ sāgarojjhohari tenapeyyo.",
  "ja543:178.1": "Parosahassampi samantavede,",
  "ja543:178.2": "Mantūpapanne nadiyo vahanti;",
  "ja543:178.3": "Na tena byāpannarasūdakā na,",
  "ja543:178.4": "Kasmā samuddo atulo apeyyo.",
  "ja543:179.1": "Ye keci kūpā idha jīvaloke,",
  "ja543:179.2": "Loṇūdakā kūpakhaṇehi khātā;",
  "ja543:179.3": "Na brāhmaṇajjhoharaṇena tesu,",
  "ja543:179.4": "Āpo apeyyo dvirasaññu māhu.",
  "ja543:180.1": "Pure puratthā kā kassa bhariyā,",
  "ja543:180.2": "Mano manussaṃ ajanesi pubbe;",
  "ja543:180.3": "Tenāpi dhammena na koci hīno,",
  "ja543:180.4": "Evampi vosaggavibhaṅgamāhu.",
  "ja543:181.1": "Caṇḍālaputtopi adhicca vede,",
  "ja543:181.2": "Bhāseyya mante kusalo matīmā;",
  "ja543:181.3": "Na tassa muddhāpi phaleyya sattadhā,",
  "ja543:181.4": "Mantā ime attavadhāya katā.",
  "ja543:182.1": "Vācākatā giddhikatā gahītā,",
  "ja543:182.2": "Dummocayā kabyapathānupannā;",
  "ja543:182.3": "Bālāna cittaṃ visame niviṭṭhaṃ,",
  "ja543:182.4": "Tadappapaññā abhisaddahanti.",
  "ja543:183.1": "Sīhassa byagghassa ca dīpino ca,",
  "ja543:183.2": "Na vijjatī porisiyaṃ balena;",
  "ja543:183.3": "Manussabhāvo ca gavaṃva pekkho,",
  "ja543:183.4": "Jātī hi tesaṃ asamā samānā.",
  "ja543:184.1": "Sace ca rājā pathaviṃ vijitvā,",
  "ja543:184.2": "Sajīvavā assavapārisajjo;",
  "ja543:184.3": "Sayameva so sattusaṅghaṃ vijeyya,",
  "ja543:184.4": "Tassappajā niccasukhī bhaveyya.",
  "ja543:185.1": "Khattiyamantā ca tayo ca vedā,",
  "ja543:185.2": "Atthena ete samakā bhavanti;",
  "ja543:185.3": "Tesañca atthaṃ avinicchinitvā,",
  "ja543:185.4": "Na bujjhatī oghapathaṃva channaṃ.",
  "ja543:186.1": "Khattiyamantā ca tayo ca vedā,",
  "ja543:186.2": "Atthena ete samakā bhavanti;",
  "ja543:186.3": "Lābho alābho ayaso yaso ca,",
  "ja543:186.4": "Sabbeva tesaṃ catunnañca dhammā.",
  "ja543:187.1": "Yathāpi ibbhā dhanadhaññahetu,",
  "ja543:187.2": "Kammāni karonti puthū pathabyā;",
  "ja543:187.3": "Tevijjasaṅghā ca tatheva ajja,",
  "ja543:187.4": "Kammāni karonti puthū pathabyā.",
  "ja543:188.1": "Ibbhehi ye te samakā bhavanti,",
  "ja543:188.2": "Niccussukā kāmaguṇesu yuttā;",
  "ja543:188.3": "Kammāni karonti puthū pathabyā,",
  "ja543:188.4": "Tadappapaññā dvirasaññurā te”.",
  "ja543:189.1": "()",
  "ja543:190.1": "“Kassa bherī mudiṅgā ca,",
  "ja543:190.2": "saṅkhāpaṇavadindimā;",
  "ja543:190.3": "Purato paṭipannāni,",
  "ja543:190.4": "hāsayantā rathesabhaṃ.",
  "ja543:191.1": "Kassa kañcanapaṭṭena,",
  "ja543:191.2": "puthunā vijjuvaṇṇinā;",
  "ja543:191.3": "Yuvā kalāpasannaddho,",
  "ja543:191.4": "ko eti siriyā jalaṃ.",
  "ja543:192.1": "Ukkāmukhapahaṭṭhaṃva,",
  "ja543:192.2": "khadiraṅgārasannibhaṃ;",
  "ja543:192.3": "Mukhañca rucirā bhāti,",
  "ja543:192.4": "ko eti siriyā jalaṃ.",
  "ja543:193.1": "Kassa jambonadaṃ chattaṃ,",
  "ja543:193.2": "sasalākaṃ manoramaṃ;",
  "ja543:193.3": "Ādiccaraṃsāvaraṇaṃ,",
  "ja543:193.4": "ko eti siriyā jalaṃ.",
  "ja543:194.1": "Kassa aṅgaṃ pariggayha,",
  "ja543:194.2": "vālabījanimuttamaṃ;",
  "ja543:194.3": "Ubhato varapuññassa,",
  "ja543:194.4": "muddhani uparūpari.",
  "ja543:195.1": "Kassa pekhuṇahatthāni,",
  "ja543:195.2": "citrāni ca mudūni ca;",
  "ja543:195.3": "Kañcanamaṇidaṇḍāni,",
  "ja543:195.4": "caranti dubhato mukhaṃ.",
  "ja543:196.1": "Khadiraṅgāravaṇṇābhā,",
  "ja543:196.2": "ukkāmukhapahaṃsitā;",
  "ja543:196.3": "Kassete kuṇḍalā vaggū,",
  "ja543:196.4": "sobhanti dubhato mukhaṃ.",
  "ja543:197.1": "Kassa vātena chupitā,",
  "ja543:197.2": "niddhantā mudukāḷakā;",
  "ja543:197.3": "Sobhayanti nalāṭantaṃ,",
  "ja543:197.4": "nabhā vijjurivuggatā.",
  "ja543:198.1": "Kassa etāni akkhīni,",
  "ja543:198.2": "āyatāni puthūni ca;",
  "ja543:198.3": "Ko sobhati visālakkho,",
  "ja543:198.4": "kassetaṃ uṇṇajaṃ mukhaṃ.",
  "ja543:199.1": "Kassete lapanajātā,",
  "ja543:199.2": "suddhā saṅkhavarūpamā;",
  "ja543:199.3": "Bhāsamānassa sobhanti,",
  "ja543:199.4": "dantā kuppilasādisā.",
  "ja543:200.1": "Kassa lākhārasasamā,",
  "ja543:200.2": "hatthapādā sukhedhitā;",
  "ja543:200.3": "Ko so bimboṭṭhasampanno,",
  "ja543:200.4": "divā sūriyova bhāsati.",
  "ja543:201.1": "Himaccaye himavati,",
  "ja543:201.2": "mahāsālova pupphito;",
  "ja543:201.3": "Ko so odātapāvāro,",
  "ja543:201.4": "jayaṃ indova sobhati.",
  "ja543:202.1": "Suvaṇṇapīḷakākiṇṇaṃ,",
  "ja543:202.2": "maṇidaṇḍavicittakaṃ;",
  "ja543:202.3": "Ko so parisamogayha,",
  "ja543:202.4": "īsaṃ khaggaṃ pamuñcati.",
  "ja543:203.1": "Suvaṇṇavikatā cittā,",
  "ja543:203.2": "sukatā cittasibbanā;",
  "ja543:203.3": "Ko so omuñcate pādā,",
  "ja543:203.4": "namo katvā mahesino”.",
  "ja543:204.1": "“Dhataraṭṭhā hi te nāgā,",
  "ja543:204.2": "iddhimanto yasassino;",
  "ja543:204.3": "Samuddajāya uppannā,",
  "ja543:204.4": "nāgā ete mahiddhikā”ti.",
  "ja543:205.1": "Bhūridattajātakaṃ chaṭṭhaṃ."
}