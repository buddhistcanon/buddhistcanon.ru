{
  "ja470:0.1": "Jātaka",
  "ja470:0.2": "Dvādasakanipāta",
  "ja470:0.3": "Cūḷakuṇālavagga",
  "ja470:0.4": "7. Kosiyajātaka",
  "ja470:1.1": "“Neva kiṇāmi napi vikkiṇāmi,",
  "ja470:1.2": "Na cāpi me sannicayo ca atthi;",
  "ja470:1.3": "Sukiccharūpaṃ vatidaṃ parittaṃ,",
  "ja470:1.4": "Patthodano nālamayaṃ duvinnaṃ”.",
  "ja470:2.1": "“Appamhā appakaṃ dajjā,",
  "ja470:2.2": "anumajjhato majjhakaṃ;",
  "ja470:2.3": "Bahumhā bahukaṃ dajjā,",
  "ja470:2.4": "adānaṃ nupapajjati.",
  "ja470:3.1": "Taṃ taṃ vadāmi kosiya,",
  "ja470:3.2": "dehi dānāni bhuñja ca”.",
  "ja470:3.3": "Ariyamaggaṃ samārūha,",
  "ja470:3.4": "nekāsī labhate sukhaṃ.",
  "ja470:4.1": "“Moghañcassa hutaṃ hoti,",
  "ja470:4.2": "moghañcāpi samīhitaṃ;",
  "ja470:4.3": "Atithismiṃ yo nisinnasmiṃ,",
  "ja470:4.4": "eko bhuñjati bhojanaṃ.",
  "ja470:5.1": "Taṃ taṃ vadāmi kosiya,",
  "ja470:5.2": "dehi dānāni bhuñja ca;",
  "ja470:5.3": "Ariyamaggaṃ samārūha,",
  "ja470:5.4": "nekāsī labhate sukhaṃ”.",
  "ja470:6.1": "“Saccañcassa hutaṃ hoti,",
  "ja470:6.2": "saccañcāpi samīhitaṃ;",
  "ja470:6.3": "Atithismiṃ yo nisinnasmiṃ,",
  "ja470:6.4": "neko bhuñjati bhojanaṃ.",
  "ja470:7.1": "Taṃ taṃ vadāmi kosiya,",
  "ja470:7.2": "dehi dānāni bhuñja ca;",
  "ja470:7.3": "Ariyamaggaṃ samārūha,",
  "ja470:7.4": "nekāsī labhate sukhaṃ”.",
  "ja470:8.1": "“Sarañca juhati poso,",
  "ja470:8.2": "bahukāya gayāya ca;",
  "ja470:8.3": "Doṇe timbarutitthasmiṃ,",
  "ja470:8.4": "sīghasote mahāvahe.",
  "ja470:9.1": "Atra cassa hutaṃ hoti,",
  "ja470:9.2": "atra cassa samīhitaṃ;",
  "ja470:9.3": "Atithismiṃ yo nisinnasmiṃ,",
  "ja470:9.4": "neko bhuñjati bhojanaṃ.",
  "ja470:10.1": "Taṃ taṃ vadāmi kosiya,",
  "ja470:10.2": "dehi dānāni bhuñja ca;",
  "ja470:10.3": "Ariyamaggaṃ samārūha,",
  "ja470:10.4": "nekāsī labhate sukhaṃ”.",
  "ja470:11.1": "“Baḷisañhi so nigilati,",
  "ja470:11.2": "dīghasuttaṃ sabandhanaṃ;",
  "ja470:11.3": "Atithismiṃ yo nisinnasmiṃ,",
  "ja470:11.4": "eko bhuñjati bhojanaṃ.",
  "ja470:12.1": "Taṃ taṃ vadāmi kosiya,",
  "ja470:12.2": "dehi dānāni bhuñja ca;",
  "ja470:12.3": "Ariyamaggaṃ samārūha,",
  "ja470:12.4": "nekāsī labhate sukhaṃ”.",
  "ja470:13.1": "“Uḷāravaṇṇā vata brāhmaṇā ime,",
  "ja470:13.2": "Ayañca vo sunakho kissa hetu;",
  "ja470:13.3": "Uccāvacaṃ vaṇṇanibhaṃ vikubbati,",
  "ja470:13.4": "Akkhātha no brāhmaṇā ke nu tumhe”.",
  "ja470:14.1": "“Cando ca suriyo ca ubho idhāgatā,",
  "ja470:14.2": "Ayaṃ pana mātali devasārathi;",
  "ja470:14.3": "Sakkohamasmi tidasānamindo,",
  "ja470:14.4": "Eso ca kho pañcasikhoti vuccati”.",
  "ja470:15.1": "“Pāṇissarā mudiṅgā ca,",
  "ja470:15.2": "murajālambarāni ca;",
  "ja470:15.3": "Suttamenaṃ pabodhenti,",
  "ja470:15.4": "paṭibuddho ca nandati”.",
  "ja470:16.1": "“Ye kecime maccharino kadariyā,",
  "ja470:16.2": "Paribhāsakā samaṇabrāhmaṇānaṃ;",
  "ja470:16.3": "Idheva nikkhippa sarīradehaṃ,",
  "ja470:16.4": "Kāyassa bhedā nirayaṃ vajanti”.",
  "ja470:17.1": "“Ye kecime suggatimāsamānā,",
  "ja470:17.2": "Dhamme ṭhitā saṃyame saṃvibhāge;",
  "ja470:17.3": "Idheva nikkhippa sarīradehaṃ,",
  "ja470:17.4": "Kāyassa bhedā sugatiṃ vajanti.",
  "ja470:18.1": "Tvaṃ nosi ñāti purimāsu jātisu,",
  "ja470:18.2": "So maccharī rosako pāpadhammo;",
  "ja470:18.3": "Taveva atthāya idhāgatamhā,",
  "ja470:18.4": "Mā pāpadhammo nirayaṃ gamittha”.",
  "ja470:19.1": "“Addhā hi maṃ vo hitakāmā,",
  "ja470:19.2": "yaṃ maṃ samanusāsatha;",
  "ja470:19.3": "Sohaṃ tathā karissāmi,",
  "ja470:19.4": "sabbaṃ vuttaṃ hitesibhi.",
  "ja470:20.1": "Esāhamajjeva upāramāmi,",
  "ja470:20.2": "Na cāpihaṃ kiñci kareyya pāpaṃ;",
  "ja470:20.3": "Na cāpi me kiñci adeyyamatthi,",
  "ja470:20.4": "Na cāpidatvā udakaṃ pivāmi.",
  "ja470:21.1": "Evañca me dadato sabbakālaṃ,",
  "ja470:21.2": "Bhogā ime vāsava khīyissanti;",
  "ja470:21.3": "Tato ahaṃ pabbajissāmi sakka,",
  "ja470:21.4": "Hitvāna kāmāni yathodhikānī”ti.",
  "ja470:22.1": "Kosiyajātakaṃ sattamaṃ."
}