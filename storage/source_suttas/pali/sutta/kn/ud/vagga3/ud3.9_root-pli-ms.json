{
  "ud3.9:0.1": "Udāna 3.9",
  "ud3.9:0.2": "Sippasutta",
  "ud3.9:1.1": "Evaṃ me sutaṃ—",
  "ud3.9:1.2": " ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "ud3.9:1.3": "Tena kho pana samayena sambahulānaṃ bhikkhūnaṃ pacchābhattaṃ piṇḍapātapaṭikkantānaṃ maṇḍalamāḷe sannisinnānaṃ sannipatitānaṃ ayamantarākathā udapādi:",
  "ud3.9:1.4": "“ko nu kho, āvuso, sippaṃ jānāti?",
  "ud3.9:1.5": "Ko kiṃ sippaṃ sikkhi?",
  "ud3.9:1.6": "Kataraṃ sippaṃ sippānaṃ aggan”ti?",
  "ud3.9:2.1": "Tatthekacce evamāhaṃsu:",
  "ud3.9:2.2": "“hatthisippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.3": "Ekacce evamāhaṃsu:",
  "ud3.9:2.4": "“assasippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.5": "Ekacce evamāhaṃsu:",
  "ud3.9:2.6": "“rathasippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.7": "Ekacce evamāhaṃsu:",
  "ud3.9:2.8": "“dhanusippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.9": "Ekacce evamāhaṃsu:",
  "ud3.9:2.10": "“tharusippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.11": "Ekacce evamāhaṃsu:",
  "ud3.9:2.12": "“muddāsippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.13": "Ekacce evamāhaṃsu:",
  "ud3.9:2.14": "“gaṇanāsippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.15": "Ekacce evamāhaṃsu:",
  "ud3.9:2.16": "“saṅkhānasippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.17": "Ekacce evamāhaṃsu:",
  "ud3.9:2.18": "“lekhāsippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.19": "Ekacce evamāhaṃsu:",
  "ud3.9:2.20": "“kāveyyasippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.21": "Ekacce evamāhaṃsu:",
  "ud3.9:2.22": "“lokāyatasippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.23": "Ekacce evamāhaṃsu:",
  "ud3.9:2.24": "“khattavijjāsippaṃ sippānaṃ aggan”ti.",
  "ud3.9:2.25": "Ayañcarahi tesaṃ bhikkhūnaṃ antarākathā hoti vippakatā.",
  "ud3.9:3.1": "Atha kho bhagavā sāyanhasamayaṃ paṭisallānā vuṭṭhito yena maṇḍalamāḷo tenupasaṅkami; upasaṅkamitvā paññatte āsane nisīdi.",
  "ud3.9:3.2": "Nisajja kho bhagavā bhikkhū āmantesi:",
  "ud3.9:3.3": "“kāya nuttha, bhikkhave, etarahi kathāya sannisinnā, kā ca pana vo antarākathā vippakatā”ti?",
  "ud3.9:4.1": "“Idha, bhante, amhākaṃ pacchābhattaṃ piṇḍapātapaṭikkantānaṃ maṇḍalamāḷe sannisinnānaṃ ayamantarākathā udapādi:",
  "ud3.9:4.2": "‘ko nu kho, āvuso, sippaṃ jānāti?",
  "ud3.9:4.3": "Ko kiṃ sippaṃ sikkhi?",
  "ud3.9:4.4": "Kataraṃ sippaṃ sippānaṃ aggan’ti?",
  "ud3.9:5.1": "Tatthekacce evamāhaṃsu:",
  "ud3.9:5.2": "‘hatthisippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.3": "Ekacce evamāhaṃsu:",
  "ud3.9:5.4": "‘assasippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.5": "Ekacce evamāhaṃsu:",
  "ud3.9:5.6": "‘rathasippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.7": "Ekacce evamāhaṃsu:",
  "ud3.9:5.8": "‘dhanusippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.9": "Ekacce evamāhaṃsu:",
  "ud3.9:5.10": "‘tharusippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.11": "Ekacce evamāhaṃsu:",
  "ud3.9:5.12": "‘muddāsippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.13": "Ekacce evamāhaṃsu:",
  "ud3.9:5.14": "‘gaṇanāsippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.15": "Ekacce evamāhaṃsu:",
  "ud3.9:5.16": "‘saṅkhānasippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.17": "Ekacce evamāhaṃsu:",
  "ud3.9:5.18": "‘lekhāsippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.19": "Ekacce evamāhaṃsu:",
  "ud3.9:5.20": "‘kāveyyasippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.21": "Ekacce evamāhaṃsu:",
  "ud3.9:5.22": "‘lokāyatasippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.23": "Ekacce evamāhaṃsu:",
  "ud3.9:5.24": "‘khattavijjāsippaṃ sippānaṃ aggan’ti.",
  "ud3.9:5.25": "Ayaṃ kho no, bhante, antarākathā hoti vippakatā, atha bhagavā anuppatto”ti.",
  "ud3.9:6.1": "“Na khvetaṃ, bhikkhave, tumhākaṃ patirūpaṃ kulaputtānaṃ saddhā agārasmā anagāriyaṃ pabbajitānaṃ yaṃ tumhe evarūpiṃ kathaṃ katheyyātha.",
  "ud3.9:6.2": "Sannipatitānaṃ vo, bhikkhave, dvayaṃ karaṇīyaṃ—",
  "ud3.9:6.3": "dhammī vā kathā ariyo vā tuṇhībhāvo”ti.",
  "ud3.9:7.1": "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi:",
  "ud3.9:8.1": "“Asippajīvī lahu atthakāmo,",
  "ud3.9:8.2": "Yatindriyo sabbadhi vippamutto;",
  "ud3.9:8.3": "Anokasārī amamo nirāso,",
  "ud3.9:8.4": "Hitvā mānaṃ ekacaro sa bhikkhū”ti.",
  "ud3.9:8.5": "Navamaṃ."
}