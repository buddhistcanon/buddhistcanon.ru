{
  "ud1.2:0.1": "Udāna 1.2",
  "ud1.2:0.2": "Dutiyabodhisutta",
  "ud1.2:1.1": "Evaṃ me sutaṃ—",
  "ud1.2:1.2": " ekaṃ samayaṃ bhagavā uruvelāyaṃ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
  "ud1.2:1.3": "Tena kho pana samayena bhagavā sattāhaṃ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṃvedī.",
  "ud1.2:1.4": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā majjhimaṃ yāmaṃ paṭiccasamuppādaṃ paṭilomaṃ sādhukaṃ manasākāsi:",
  "ud1.2:2.1": "“Iti imasmiṃ asati idaṃ na hoti,",
  "ud1.2:2.2": "imassa nirodhā idaṃ nirujjhati, yadidaṃ—",
  "ud1.2:2.3": "avijjānirodhā saṅkhāranirodho,",
  "ud1.2:2.4": "saṅkhāranirodhā viññāṇanirodho,",
  "ud1.2:2.5": "viññāṇanirodhā nāmarūpanirodho,",
  "ud1.2:2.6": "nāmarūpanirodhā saḷāyatananirodho,",
  "ud1.2:2.7": "saḷāyatananirodhā phassanirodho,",
  "ud1.2:2.8": "phassanirodhā vedanānirodho,",
  "ud1.2:2.9": "vedanānirodhā taṇhānirodho,",
  "ud1.2:2.10": "taṇhānirodhā upādānanirodho,",
  "ud1.2:2.11": "upādānanirodhā bhavanirodho,",
  "ud1.2:2.12": "bhavanirodhā jātinirodho,",
  "ud1.2:2.13": "jātinirodhā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
  "ud1.2:2.14": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
  "ud1.2:3.1": "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi:",
  "ud1.2:4.1": "“Yadā have pātubhavanti dhammā,",
  "ud1.2:4.2": "Ātāpino jhāyato brāhmaṇassa;",
  "ud1.2:4.3": "Athassa kaṅkhā vapayanti sabbā,",
  "ud1.2:4.4": "Yato khayaṃ paccayānaṃ avedī”ti.",
  "ud1.2:4.5": "Dutiyaṃ."
}