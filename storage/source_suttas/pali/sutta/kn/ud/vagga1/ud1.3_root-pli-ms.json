{
  "ud1.3:0.1": "Udāna 1.3",
  "ud1.3:0.2": "Tatiyabodhisutta",
  "ud1.3:1.1": "Evaṃ me sutaṃ—",
  "ud1.3:1.2": " ekaṃ samayaṃ bhagavā uruvelāyaṃ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho.",
  "ud1.3:1.3": "Tena kho pana samayena bhagavā sattāhaṃ ekapallaṅkena nisinno hoti vimuttisukhapaṭisaṃvedī.",
  "ud1.3:1.4": "Atha kho bhagavā tassa sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rattiyā pacchimaṃ yāmaṃ paṭiccasamuppādaṃ anulomapaṭilomaṃ sādhukaṃ manasākāsi:",
  "ud1.3:2.1": "“Iti imasmiṃ sati idaṃ hoti,",
  "ud1.3:2.2": "imassuppādā idaṃ uppajjati,",
  "ud1.3:2.3": "imasmiṃ asati idaṃ na hoti,",
  "ud1.3:2.4": "imassa nirodhā idaṃ nirujjhati;",
  "ud1.3:2.5": "yadidaṃ—",
  "ud1.3:2.6": "avijjāpaccayā saṅkhārā,",
  "ud1.3:2.7": "saṅkhārapaccayā viññāṇaṃ,",
  "ud1.3:2.8": "viññāṇapaccayā nāmarūpaṃ,",
  "ud1.3:2.9": "nāmarūpapaccayā saḷāyatanaṃ,",
  "ud1.3:2.10": "saḷāyatanapaccayā phasso,",
  "ud1.3:2.11": "phassapaccayā vedanā,",
  "ud1.3:2.12": "vedanāpaccayā taṇhā,",
  "ud1.3:2.13": "taṇhāpaccayā upādānaṃ,",
  "ud1.3:2.14": "upādānapaccayā bhavo,",
  "ud1.3:2.15": "bhavapaccayā jāti,",
  "ud1.3:2.16": "jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti.",
  "ud1.3:2.17": "Evametassa kevalassa dukkhakkhandhassa samudayo hoti.",
  "ud1.3:3.1": "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho,",
  "ud1.3:3.2": "saṅkhāranirodhā viññāṇanirodho,",
  "ud1.3:3.3": "viññāṇanirodhā nāmarūpanirodho,",
  "ud1.3:3.4": "nāmarūpanirodhā saḷāyatananirodho,",
  "ud1.3:3.5": "saḷāyatananirodhā phassanirodho,",
  "ud1.3:3.6": "phassanirodhā vedanānirodho,",
  "ud1.3:3.7": "vedanānirodhā taṇhānirodho,",
  "ud1.3:3.8": "taṇhānirodhā upādānanirodho,",
  "ud1.3:3.9": "upādānanirodhā bhavanirodho,",
  "ud1.3:3.10": "bhavanirodhā jātinirodho,",
  "ud1.3:3.11": "jātinirodhā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā nirujjhanti.",
  "ud1.3:3.12": "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti.",
  "ud1.3:4.1": "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi:",
  "ud1.3:5.1": "“Yadā have pātubhavanti dhammā,",
  "ud1.3:5.2": "Ātāpino jhāyato brāhmaṇassa;",
  "ud1.3:5.3": "Vidhūpayaṃ tiṭṭhati mārasenaṃ,",
  "ud1.3:5.4": "Sūriyova obhāsayamantalikkhan”ti.",
  "ud1.3:5.5": "Tatiyaṃ."
}