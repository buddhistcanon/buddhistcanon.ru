{
  "vv41:0.1": "Vimānavatthu",
  "vv41:0.2": "Itthivimāna",
  "vv41:0.3": "Mañjiṭṭhakavagga",
  "vv41:0.4": "3. Nāgavimānavatthu",
  "vv41:1.1": "“Alaṅkatā maṇikañcanācitaṃ,",
  "vv41:1.2": "Sovaṇṇajālacitaṃ mahantaṃ;",
  "vv41:1.3": "Abhiruyha gajavaraṃ sukappitaṃ,",
  "vv41:1.4": "Idhāgamā vehāyasaṃ antalikkhe.",
  "vv41:2.1": "Nāgassa dantesu duvesu nimmitā,",
  "vv41:2.2": "Acchodakā paduminiyo suphullā;",
  "vv41:2.3": "Padumesu ca tūriyagaṇā pabhijjare,",
  "vv41:2.4": "Imā ca naccanti manoharāyo.",
  "vv41:3.1": "Deviddhipattāsi mahānubhāve,",
  "vv41:3.2": "Manussabhūtā kimakāsi puññaṃ;",
  "vv41:3.3": "Kenāsi evaṃ jalitānubhāvā,",
  "vv41:3.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv41:4.1": "“Bārāṇasiyaṃ upasaṅkamitvā,",
  "vv41:4.2": "Buddhassahaṃ vatthayugaṃ adāsiṃ;",
  "vv41:4.3": "Pādāni vanditvā chamā nisīdiṃ,",
  "vv41:4.4": "Vittā cahaṃ añjalikaṃ akāsiṃ.",
  "vv41:5.1": "Buddho ca me kañcanasannibhattaco,",
  "vv41:5.2": "Adesayi samudayadukkhaniccataṃ;",
  "vv41:5.3": "Asaṅkhataṃ dukkhanirodhasassataṃ,",
  "vv41:5.4": "Maggaṃ adesayi yato vijānisaṃ.",
  "vv41:6.1": "Appāyukī kālakatā tato cutā,",
  "vv41:6.2": "Upapannā tidasagaṇaṃ yasassinī;",
  "vv41:6.3": "Sakkassahaṃ aññatarā pajāpati,",
  "vv41:6.4": "Yasuttarā nāma disāsu vissutā”ti.",
  "vv41:7.1": "Nāgavimānaṃ tatiyaṃ."
}