{
  "vv21:0.1": "Vimānavatthu",
  "vv21:0.2": "Itthivimāna",
  "vv21:0.3": "Cittalatāvagga",
  "vv21:0.4": "4. Caṇḍālivimānavatthu",
  "vv21:1.1": "“Caṇḍāli vanda pādāni,",
  "vv21:1.2": "gotamassa yasassino;",
  "vv21:1.3": "Tameva anukampāya,",
  "vv21:1.4": "aṭṭhāsi isisattamo.",
  "vv21:2.1": "Abhippasādehi manaṃ,",
  "vv21:2.2": "arahantamhi tādini;",
  "vv21:2.3": "Khippaṃ pañjalikā vanda,",
  "vv21:2.4": "parittaṃ tava jīvitan”ti.",
  "vv21:3.1": "Coditā bhāvitattena,",
  "vv21:3.2": "sarīrantimadhārinā;",
  "vv21:3.3": "Caṇḍālī vandi pādāni,",
  "vv21:3.4": "gotamassa yasassino.",
  "vv21:4.1": "Tamenaṃ avadhī gāvī,",
  "vv21:4.2": "caṇḍāliṃ pañjaliṃ ṭhitaṃ;",
  "vv21:4.3": "Namassamānaṃ sambuddhaṃ,",
  "vv21:4.4": "andhakāre pabhaṅkaranti.",
  "vv21:5.1": "“Khīṇāsavaṃ vigatarajaṃ anejaṃ,",
  "vv21:5.2": "Ekaṃ araññamhi raho nisinnaṃ;",
  "vv21:5.3": "Deviddhipattā upasaṅkamitvā,",
  "vv21:5.4": "Vandāmi taṃ vīra mahānubhāvan”ti.",
  "vv21:6.1": "“Suvaṇṇavaṇṇā jalitā mahāyasā,",
  "vv21:6.2": "Vimānamoruyha anekacittā;",
  "vv21:6.3": "Parivāritā accharāsaṅgaṇena,",
  "vv21:6.4": "Kā tvaṃ subhe devate vandase maman”ti.",
  "vv21:7.1": "“Ahaṃ bhaddante caṇḍālī,",
  "vv21:7.2": "tayā vīrena pesitā;",
  "vv21:7.3": "Vandiṃ arahato pāde,",
  "vv21:7.4": "gotamassa yasassino.",
  "vv21:8.1": "Sāhaṃ vanditvā pādāni,",
  "vv21:8.2": "cutā caṇḍālayoniyā;",
  "vv21:8.3": "Vimānaṃ sabbato bhaddaṃ,",
  "vv21:8.4": "upapannamhi nandane.",
  "vv21:9.1": "Accharānaṃ satasahassaṃ,",
  "vv21:9.2": "purakkhatvāna tiṭṭhati;",
  "vv21:9.3": "Tāsāhaṃ pavarā seṭṭhā,",
  "vv21:9.4": "vaṇṇena yasasāyunā.",
  "vv21:10.1": "Pahūtakatakalyāṇā,",
  "vv21:10.2": "Sampajānā paṭissatā;",
  "vv21:10.3": "Muniṃ kāruṇikaṃ loke,",
  "vv21:10.4": "Taṃ bhante vanditumāgatā”ti.",
  "vv21:11.1": "Idaṃ vatvāna caṇḍālī,",
  "vv21:11.2": "kataññū katavedinī;",
  "vv21:11.3": "Vanditvā arahato pāde,",
  "vv21:11.4": "tatthevantaradhāyathāti.",
  "vv21:12.1": "Caṇḍālivimānaṃ catutthaṃ."
}