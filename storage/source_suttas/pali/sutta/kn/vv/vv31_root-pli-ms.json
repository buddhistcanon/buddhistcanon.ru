{
  "vv31:0.1": "Vimānavatthu",
  "vv31:0.2": "Itthivimāna",
  "vv31:0.3": "Pāricchattakavagga",
  "vv31:0.4": "3. Pallaṅkavimānavatthu",
  "vv31:1.1": "“Pallaṅkaseṭṭhe maṇisoṇṇacitte,",
  "vv31:1.2": "Pupphābhikiṇṇe sayane uḷāre;",
  "vv31:1.3": "Tatthacchasi devi mahānubhāve,",
  "vv31:1.4": "Uccāvacā iddhi vikubbamānā.",
  "vv31:2.1": "Imā ca te accharāyo samantato,",
  "vv31:2.2": "Naccanti gāyanti pamodayanti;",
  "vv31:2.3": "Deviddhipattāsi mahānubhāve,",
  "vv31:2.4": "Manussabhūtā kimakāsi puññaṃ;",
  "vv31:2.5": "Kenāsi evaṃ jalitānubhāvā,",
  "vv31:2.6": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv31:3.1": "“Ahaṃ manussesu manussabhūtā,",
  "vv31:3.2": "Aḍḍhe kule suṇisā ahosiṃ;",
  "vv31:3.3": "Akkodhanā bhattuvasānuvattinī,",
  "vv31:3.4": "Uposathe appamattā ahosiṃ.",
  "vv31:4.1": "Manussabhūtā daharā apāpikā,",
  "vv31:4.2": "Pasannacittā patimābhirādhayiṃ;",
  "vv31:4.3": "Divā ca ratto ca manāpacārinī,",
  "vv31:4.4": "Ahaṃ pure sīlavatī ahosiṃ.",
  "vv31:5.1": "Pāṇātipātā viratā acorikā,",
  "vv31:5.2": "Saṃsuddhakāyā sucibrahmacārinī;",
  "vv31:5.3": "Amajjapā no ca musā abhāṇiṃ,",
  "vv31:5.4": "Sikkhāpadesu paripūrakārinī.",
  "vv31:6.1": "Cātuddasiṃ pañcadasiṃ,",
  "vv31:6.2": "yā ca pakkhassa aṭṭhamī;",
  "vv31:6.3": "Pāṭihāriyapakkhañca,",
  "vv31:6.4": "pasannamānasā ahaṃ.",
  "vv31:7.1": "Aṭṭhaṅgupetaṃ anudhammacārinī,",
  "vv31:7.2": "Uposathaṃ pītimanā upāvasiṃ;",
  "vv31:7.3": "Imañca ariyaṃ aṭṭhaṅgavarehupetaṃ,",
  "vv31:7.4": "Samādiyitvā kusalaṃ sukhudrayaṃ;",
  "vv31:7.5": "Patimhi kalyāṇī vasānuvattinī,",
  "vv31:7.6": "Ahosiṃ pubbe sugatassa sāvikā.",
  "vv31:8.1": "Etādisaṃ kusalaṃ jīvaloke,",
  "vv31:8.2": "Kammaṃ karitvāna visesabhāginī;",
  "vv31:8.3": "Kāyassa bhedā abhisamparāyaṃ,",
  "vv31:8.4": "Deviddhipattā sugatimhi āgatā.",
  "vv31:9.1": "Vimānapāsādavare manorame,",
  "vv31:9.2": "Parivāritā accharāsaṅgaṇena;",
  "vv31:9.3": "Sayaṃpabhā devagaṇā ramenti maṃ,",
  "vv31:9.4": "Dīghāyukiṃ devavimānamāgatan”ti.",
  "vv31:10.1": "Pallaṅkavimānaṃ tatiyaṃ."
}