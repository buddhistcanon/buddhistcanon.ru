{
  "vv82:0.1": "Vimānavatthu",
  "vv82:0.2": "Purisavimāna",
  "vv82:0.3": "Sunikkhittavagga",
  "vv82:0.4": "8. Anekavaṇṇavimānavatthu",
  "vv82:1.1": "“Anekavaṇṇaṃ darasokanāsanaṃ,",
  "vv82:1.2": "Vimānamāruyha anekacittaṃ;",
  "vv82:1.3": "Parivārito accharāsaṅgaṇena,",
  "vv82:1.4": "Sunimmito bhūtapatīva modasi.",
  "vv82:2.1": "Samassamo natthi kuto panuttaro,",
  "vv82:2.2": "Yasena puññena ca iddhiyā ca;",
  "vv82:2.3": "Sabbe ca devā tidasagaṇā samecca,",
  "vv82:2.4": "Taṃ taṃ namassanti sasiṃva devā;",
  "vv82:2.5": "Imā ca te accharāyo samantato,",
  "vv82:2.6": "Naccanti gāyanti pamodayanti.",
  "vv82:3.1": "Deviddhipattosi mahānubhāvo,",
  "vv82:3.2": "Manussabhūto kimakāsi puññaṃ;",
  "vv82:3.3": "Kenāsi evaṃ jalitānubhāvo,",
  "vv82:3.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv82:4.1": "So devaputto attamano,",
  "vv82:4.2": "…pe…",
  "vv82:4.3": "yassa kammassidaṃ phalaṃ.",
  "vv82:5.1": "“Ahaṃ bhadante ahuvāsi pubbe,",
  "vv82:5.2": "Sumedhanāmassa jinassa sāvako;",
  "vv82:5.3": "Puthujjano ananubodhohamasmi,",
  "vv82:5.4": "So satta vassāni paribbajissahaṃ.",
  "vv82:6.1": "Sohaṃ sumedhassa jinassa satthuno,",
  "vv82:6.2": "Parinibbutassoghatiṇṇassa tādino;",
  "vv82:6.3": "Ratanuccayaṃ hemajālena channaṃ,",
  "vv82:6.4": "Vanditvā thūpasmiṃ manaṃ pasādayiṃ.",
  "vv82:7.1": "Na māsi dānaṃ na ca matthi dātuṃ,",
  "vv82:7.2": "Pare ca kho tattha samādapesiṃ;",
  "vv82:7.3": "Pūjetha naṃ pūjanīyassa dhātuṃ,",
  "vv82:7.4": "Evaṃ kira saggamito gamissatha.",
  "vv82:8.1": "Tadeva kammaṃ kusalaṃ kataṃ mayā,",
  "vv82:8.2": "Sukhañca dibbaṃ anubhomi attanā;",
  "vv82:8.3": "Modāmahaṃ tidasagaṇassa majjhe,",
  "vv82:8.4": "Na tassa puññassa khayampi ajjhagan”ti.",
  "vv82:9.1": "Anekavaṇṇavimānaṃ aṭṭhamaṃ."
}