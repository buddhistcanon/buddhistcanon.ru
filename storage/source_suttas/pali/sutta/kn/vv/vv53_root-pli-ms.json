{
  "vv53:0.1": "Vimānavatthu",
  "vv53:0.2": "Purisavimāna",
  "vv53:0.3": "Mahārathavagga",
  "vv53:0.4": "3. Chattamāṇavakavimānavatthu",
  "vv53:1.1": "“Yo vadataṃ pavaro manujesu,",
  "vv53:1.2": "Sakyamunī bhagavā katakicco;",
  "vv53:1.3": "Pāragato balaviriyasamaṅgī,",
  "vv53:1.4": "Taṃ sugataṃ saraṇatthamupehi.",
  "vv53:2.1": "Rāgavirāgamanejamasokaṃ,",
  "vv53:2.2": "Dhammamasaṅkhatamappaṭikūlaṃ;",
  "vv53:2.3": "Madhuramimaṃ paguṇaṃ suvibhattaṃ,",
  "vv53:2.4": "Dhammamimaṃ saraṇatthamupehi.",
  "vv53:3.1": "Yattha ca dinna mahapphalamāhu,",
  "vv53:3.2": "Catūsu sucīsu purisayugesu;",
  "vv53:3.3": "Aṭṭha ca puggaladhammadasā te,",
  "vv53:3.4": "Saṃghamimaṃ saraṇatthamupehi.",
  "vv53:4.1": "Na tathā tapati nabhe sūriyo,",
  "vv53:4.2": "Cando ca na bhāsati na phusso;",
  "vv53:4.3": "Yathā atulamidaṃ mahappabhāsaṃ,",
  "vv53:4.4": "Ko nu tvaṃ tidivā mahiṃ upāgā.",
  "vv53:5.1": "Chindati raṃsī pabhaṅkarassa,",
  "vv53:5.2": "Sādhikavīsatiyojanāni ābhā;",
  "vv53:5.3": "Rattimapi yathā divaṃ karoti,",
  "vv53:5.4": "Parisuddhaṃ vimalaṃ subhaṃ vimānaṃ.",
  "vv53:6.1": "Bahupadumavicitrapuṇḍarīkaṃ,",
  "vv53:6.2": "Vokiṇṇaṃ kusumehi nekacittaṃ;",
  "vv53:6.3": "Arajavirajahemajālachannaṃ,",
  "vv53:6.4": "Ākāse tapati yathāpi sūriyo.",
  "vv53:7.1": "Rattambarapītavāsasāhi,",
  "vv53:7.2": "Agarupiyaṅgucandanussadāhi;",
  "vv53:7.3": "Kañcanatanusannibhattacāhi,",
  "vv53:7.4": "Paripūraṃ gaganaṃva tārakāhi.",
  "vv53:8.1": "Naranāriyo bahuketthanekavaṇṇā,",
  "vv53:8.2": "Kusumavibhūsitābharaṇettha sumanā;",
  "vv53:8.3": "Anilapamuñcitā pavanti surabhiṃ,",
  "vv53:8.4": "Tapaniyavitatā suvaṇṇachannā.",
  "vv53:9.1": "Kissa saṃyamassa ayaṃ vipāko,",
  "vv53:9.2": "Kenāsi kammaphalenidhūpapanno;",
  "vv53:9.3": "Yathā ca te adhigatamidaṃ vimānaṃ,",
  "vv53:9.4": "Tadanupadaṃ avacāsi iṅgha puṭṭho”ti.",
  "vv53:10.1": "“Sayamidha pathe samecca māṇavena,",
  "vv53:10.2": "Satthānusāsi anukampamāno;",
  "vv53:10.3": "Tava ratanavarassa dhammaṃ sutvā,",
  "vv53:10.4": "Karissāmīti ca bravittha chatto.",
  "vv53:11.1": "Jinavarapavaraṃ upehi saraṇaṃ,",
  "vv53:11.2": "Dhammañcāpi tatheva bhikkhusaṃghaṃ;",
  "vv53:11.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:11.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:12.1": "Mā ca pāṇavadhaṃ vividhaṃ carassu asuciṃ,",
  "vv53:12.2": "Na hi pāṇesu asaññataṃ avaṇṇayiṃsu sappaññā;",
  "vv53:12.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:12.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:13.1": "Mā ca parajanassa rakkhitampi,",
  "vv53:13.2": "Ādātabbamamaññitho adinnaṃ;",
  "vv53:13.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:13.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:14.1": "Mā ca parajanassa rakkhitāyo,",
  "vv53:14.2": "Parabhariyā agamā anariyametaṃ;",
  "vv53:14.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:14.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:15.1": "Mā ca vitathaṃ aññathā abhāṇi,",
  "vv53:15.2": "Na hi musāvādaṃ avaṇṇayiṃsu sappaññā;",
  "vv53:15.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:15.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:16.1": "Yena ca purisassa apeti saññā,",
  "vv53:16.2": "Taṃ majjaṃ parivajjayassu sabbaṃ;",
  "vv53:16.3": "Noti paṭhamaṃ avocahaṃ bhante,",
  "vv53:16.4": "Pacchā te vacanaṃ tathevakāsiṃ.",
  "vv53:17.1": "Svāhaṃ idha pañca sikkhā karitvā,",
  "vv53:17.2": "Paṭipajjitvā tathāgatassa dhamme;",
  "vv53:17.3": "Dvepathamagamāsiṃ coramajjhe,",
  "vv53:17.4": "Te maṃ tattha vadhiṃsu bhogahetu.",
  "vv53:18.1": "Ettakamidaṃ anussarāmi kusalaṃ,",
  "vv53:18.2": "Tato paraṃ na me vijjati aññaṃ;",
  "vv53:18.3": "Tena sucaritena kammunāhaṃ,",
  "vv53:18.4": "Uppanno tidivesu kāmakāmī.",
  "vv53:19.1": "Passa khaṇamuhuttasaññamassa,",
  "vv53:19.2": "Anudhammappaṭipattiyā vipākaṃ;",
  "vv53:19.3": "Jalamiva yasasā samekkhamānā,",
  "vv53:19.4": "Bahukā maṃ pihayanti hīnakammā.",
  "vv53:20.1": "Passa katipayāya desanāya,",
  "vv53:20.2": "Sugatiñcamhi gato sukhañca patto;",
  "vv53:20.3": "Ye ca te satataṃ suṇanti dhammaṃ,",
  "vv53:20.4": "Maññe te amataṃ phusanti khemaṃ.",
  "vv53:21.1": "Appampi kataṃ mahāvipākaṃ,",
  "vv53:21.2": "Vipulaṃ hoti tathāgatassa dhamme;",
  "vv53:21.3": "Passa katapuññatāya chatto,",
  "vv53:21.4": "Obhāseti pathaviṃ yathāpi sūriyo.",
  "vv53:22.1": "Kimidaṃ kusalaṃ kimācarema,",
  "vv53:22.2": "Icceke hi samecca mantayanti;",
  "vv53:22.3": "Te mayaṃ punareva laddha mānusattaṃ,",
  "vv53:22.4": "Paṭipannā viharemu sīlavanto.",
  "vv53:23.1": "Bahukāro anukampako ca satthā,",
  "vv53:23.2": "Iti me sati agamā divā divassa;",
  "vv53:23.3": "Svāhaṃ upagatomhi saccanāmaṃ,",
  "vv53:23.4": "Anukampassu punapi suṇemu dhammaṃ.",
  "vv53:24.1": "Ye cidha pajahanti kāmarāgaṃ,",
  "vv53:24.2": "Bhavarāgānusayañca pahāya mohaṃ;",
  "vv53:24.3": "Na ca te punamupenti gabbhaseyyaṃ,",
  "vv53:24.4": "Parinibbānagatā hi sītibhūtā”ti.",
  "vv53:25.1": "Chattamāṇavakavimānaṃ tatiyaṃ."
}