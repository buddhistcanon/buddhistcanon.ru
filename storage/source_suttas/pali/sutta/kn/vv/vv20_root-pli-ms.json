{
  "vv20:0.1": "Vimānavatthu",
  "vv20:0.2": "Itthivimāna",
  "vv20:0.3": "Cittalatāvagga",
  "vv20:0.4": "3. Ācāmadāyikāvimānavatthu",
  "vv20:1.1": "“Piṇḍāya te carantassa,",
  "vv20:1.2": "tuṇhībhūtassa tiṭṭhato;",
  "vv20:1.3": "Daliddā kapaṇā nārī,",
  "vv20:1.4": "parāgāraṃ apassitā.",
  "vv20:2.1": "Yā te adāsi ācāmaṃ,",
  "vv20:2.2": "pasannā sehi pāṇibhi;",
  "vv20:2.3": "Sā hitvā mānusaṃ dehaṃ,",
  "vv20:2.4": "kaṃ nu sā disataṃ gatā”ti.",
  "vv20:3.1": "“Piṇḍāya me carantassa,",
  "vv20:3.2": "tuṇhībhūtassa tiṭṭhato;",
  "vv20:3.3": "Daliddā kapaṇā nārī,",
  "vv20:3.4": "parāgāraṃ apassitā.",
  "vv20:4.1": "Yā me adāsi ācāmaṃ,",
  "vv20:4.2": "pasannā sehi pāṇibhi;",
  "vv20:4.3": "Sā hitvā mānusaṃ dehaṃ,",
  "vv20:4.4": "vippamuttā ito cutā.",
  "vv20:5.1": "Nimmānaratino nāma,",
  "vv20:5.2": "santi devā mahiddhikā;",
  "vv20:5.3": "Tattha sā sukhitā nārī,",
  "vv20:5.4": "modatācāmadāyikā”ti.",
  "vv20:6.1": "“Aho dānaṃ varākiyā,",
  "vv20:6.2": "kassape suppatiṭṭhitaṃ;",
  "vv20:6.3": "Parābhatena dānena,",
  "vv20:6.4": "ijjhittha vata dakkhiṇā.",
  "vv20:7.1": "Yā mahesittaṃ kāreyya,",
  "vv20:7.2": "cakkavattissa rājino;",
  "vv20:7.3": "Nārī sabbaṅgakalyāṇī,",
  "vv20:7.4": "bhattu cānomadassikā;",
  "vv20:7.5": "Etassācāmadānassa,",
  "vv20:7.6": "kalaṃ nāgghati soḷasiṃ.",
  "vv20:8.1": "Sataṃ nikkhā sataṃ assā,",
  "vv20:8.2": "sataṃ assatarīrathā;",
  "vv20:8.3": "Sataṃ kaññāsahassāni,",
  "vv20:8.4": "āmuttamaṇikuṇḍalā;",
  "vv20:8.5": "Etassācāmadānassa,",
  "vv20:8.6": "kalaṃ nāgghanti soḷasiṃ.",
  "vv20:9.1": "Sataṃ hemavatā nāgā,",
  "vv20:9.2": "īsādantā urūḷhavā;",
  "vv20:9.3": "Suvaṇṇakacchā mātaṅgā,",
  "vv20:9.4": "hemakappanavāsasā;",
  "vv20:9.5": "Etassācāmadānassa,",
  "vv20:9.6": "kalaṃ nāgghati soḷasiṃ.",
  "vv20:10.1": "Catunnamapi dīpānaṃ,",
  "vv20:10.2": "issaraṃ yodha kāraye;",
  "vv20:10.3": "Etassācāmadānassa,",
  "vv20:10.4": "kalaṃ nāgghati soḷasin”ti.",
  "vv20:11.1": "Ācāmadāyikāvimānaṃ tatiyaṃ."
}