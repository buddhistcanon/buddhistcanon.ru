{
  "vv17:0.1": "Vimānavatthu",
  "vv17:0.2": "Itthivimāna",
  "vv17:0.3": "Pīṭhavagga",
  "vv17:0.4": "17. Kesakārīvimānavatthu",
  "vv17:1.1": "“Idaṃ vimānaṃ ruciraṃ pabhassaraṃ,",
  "vv17:1.2": "Veḷuriyathambhaṃ satataṃ sunimmitaṃ;",
  "vv17:1.3": "Suvaṇṇarukkhehi samantamotthataṃ,",
  "vv17:1.4": "Ṭhānaṃ mamaṃ kammavipākasambhavaṃ.",
  "vv17:2.1": "Tatrūpapannā purimaccharā imā,",
  "vv17:2.2": "Sataṃ sahassāni sakena kammunā;",
  "vv17:2.3": "Tuvaṃsi ajjhupagatā yasassinī,",
  "vv17:2.4": "Obhāsayaṃ tiṭṭhasi pubbadevatā.",
  "vv17:3.1": "Sasī adhiggayha yathā virocati,",
  "vv17:3.2": "Nakkhattarājāriva tārakāgaṇaṃ;",
  "vv17:3.3": "Tatheva tvaṃ accharāsaṅgaṇaṃ imaṃ,",
  "vv17:3.4": "Daddallamānā yasasā virocasi.",
  "vv17:4.1": "Kuto nu āgamma anomadassane,",
  "vv17:4.2": "Upapannā tvaṃ bhavanaṃ mamaṃ idaṃ;",
  "vv17:4.3": "Brahmaṃva devā tidasā sahindakā,",
  "vv17:4.4": "Sabbe na tappāmase dassanena tan”ti.",
  "vv17:5.1": "“Yametaṃ sakka anupucchase mamaṃ,",
  "vv17:5.2": "‘Kuto cutā tvaṃ idha āgatā’ti;",
  "vv17:5.3": "Bārāṇasī nāma puratthi kāsinaṃ,",
  "vv17:5.4": "Tattha ahosiṃ pure kesakārikā.",
  "vv17:6.1": "Buddhe ca dhamme ca pasannamānasā,",
  "vv17:6.2": "Saṃghe ca ekantagatā asaṃsayā;",
  "vv17:6.3": "Akhaṇḍasikkhāpadā āgatapphalā,",
  "vv17:6.4": "Sambodhidhamme niyatā anāmayā”ti.",
  "vv17:7.1": "“Tantyābhinandāmase svāgatañca te,",
  "vv17:7.2": "Dhammena ca tvaṃ yasasā virocasi;",
  "vv17:7.3": "Buddhe ca dhamme ca pasannamānase,",
  "vv17:7.4": "Saṃghe ca ekantagate asaṃsaye;",
  "vv17:7.5": "Akhaṇḍasikkhāpade āgatapphale,",
  "vv17:7.6": "Sambodhidhamme niyate anāmaye”ti.",
  "vv17:8.1": "Kesakārīvimānaṃ sattarasamaṃ.",
  "vv17:9.1": "Tassuddānaṃ",
  "vv17:10.1": "Pañca pīṭhā tayo nāvā,",
  "vv17:10.2": "dīpatiladakkhiṇā dve;",
  "vv17:10.3": "Pati dve suṇisā uttarā,",
  "vv17:10.4": "sirimā kesakārikā;",
  "vv17:10.5": "Vaggo tena pavuccatīti.",
  "vv17:11.1": "Itthivimāne paṭhamo vaggo."
}