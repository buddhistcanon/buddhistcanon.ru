{
  "vv1:0.1": "Vimānavatthu",
  "vv1:0.2": "Itthivimāna",
  "vv1:0.3": "Pīṭhavagga",
  "vv1:0.4": "1. Paṭhamapīṭhavimānavatthu",
  "vv1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "vv1:2.1": "“Pīṭhaṃ te sovaṇṇamayaṃ uḷāraṃ,",
  "vv1:2.2": "Manojavaṃ gacchati yenakāmaṃ;",
  "vv1:2.3": "Alaṅkate malyadhare suvatthe,",
  "vv1:2.4": "Obhāsasi vijjurivabbhakūṭaṃ.",
  "vv1:3.1": "Kena tetādiso vaṇṇo,",
  "vv1:3.2": "kena te idha mijjhati;",
  "vv1:3.3": "Uppajjanti ca te bhogā,",
  "vv1:3.4": "ye keci manaso piyā.",
  "vv1:4.1": "Pucchāmi taṃ devi mahānubhāve,",
  "vv1:4.2": "Manussabhūtā kimakāsi puññaṃ;",
  "vv1:4.3": "Kenāsi evaṃ jalitānubhāvā,",
  "vv1:4.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "vv1:5.1": "Sā devatā attamanā,",
  "vv1:5.2": "moggallānena pucchitā;",
  "vv1:5.3": "Pañhaṃ puṭṭhā viyākāsi,",
  "vv1:5.4": "yassa kammassidaṃ phalaṃ.",
  "vv1:6.1": "“Ahaṃ manussesu manussabhūtā,",
  "vv1:6.2": "Abbhāgatānāsanakaṃ adāsiṃ;",
  "vv1:6.3": "Abhivādayiṃ añjalikaṃ akāsiṃ,",
  "vv1:6.4": "Yathānubhāvañca adāsi dānaṃ.",
  "vv1:7.1": "Tena metādiso vaṇṇo,",
  "vv1:7.2": "tena me idha mijjhati;",
  "vv1:7.3": "Uppajjanti ca me bhogā,",
  "vv1:7.4": "ye keci manaso piyā.",
  "vv1:8.1": "Akkhāmi te bhikkhu mahānubhāva,",
  "vv1:8.2": "Manussabhūtā yamakāsi puññaṃ;",
  "vv1:8.3": "Tenamhi evaṃ jalitānubhāvā,",
  "vv1:8.4": "Vaṇṇo ca me sabbadisā pabhāsatī”ti.",
  "vv1:9.1": "Paṭhamapīṭhavimānaṃ paṭhamaṃ."
}