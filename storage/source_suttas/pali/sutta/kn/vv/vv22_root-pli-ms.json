{
  "vv22:0.1": "Vimānavatthu",
  "vv22:0.2": "Itthivimāna",
  "vv22:0.3": "Cittalatāvagga",
  "vv22:0.4": "5. Bhadditthivimānavatthu",
  "vv22:1.1": "“Nīlā pītā ca kāḷā ca,",
  "vv22:1.2": "mañjiṭṭhā atha lohitā;",
  "vv22:1.3": "Uccāvacānaṃ vaṇṇānaṃ,",
  "vv22:1.4": "kiñjakkhaparivāritā.",
  "vv22:2.1": "Mandāravānaṃ pupphānaṃ,",
  "vv22:2.2": "mālaṃ dhāresi muddhani;",
  "vv22:2.3": "Nayime aññesu kāyesu,",
  "vv22:2.4": "rukkhā santi sumedhase.",
  "vv22:3.1": "Kena kāyaṃ upapannā,",
  "vv22:3.2": "tāvatiṃsaṃ yasassinī;",
  "vv22:3.3": "Devate pucchitācikkha,",
  "vv22:3.4": "kissa kammassidaṃ phalan”ti.",
  "vv22:4.1": "“Bhadditthikāti maṃ aññaṃsu,",
  "vv22:4.2": "Kimilāyaṃ upāsikā;",
  "vv22:4.3": "Saddhā sīlena sampannā,",
  "vv22:4.4": "Saṃvibhāgaratā sadā.",
  "vv22:5.1": "Acchādanañca bhattañca,",
  "vv22:5.2": "senāsanaṃ padīpiyaṃ;",
  "vv22:5.3": "Adāsiṃ ujubhūtesu,",
  "vv22:5.4": "vippasannena cetasā.",
  "vv22:6.1": "Cātuddasiṃ pañcadasiṃ,",
  "vv22:6.2": "yā ca pakkhassa aṭṭhamī;",
  "vv22:6.3": "Pāṭihāriyapakkhañca,",
  "vv22:6.4": "aṭṭhaṅgasusamāgataṃ.",
  "vv22:7.1": "Uposathaṃ upavasissaṃ,",
  "vv22:7.2": "sadā sīlesu saṃvutā;",
  "vv22:7.3": "Saññamā saṃvibhāgā ca,",
  "vv22:7.4": "vimānaṃ āvasāmahaṃ.",
  "vv22:8.1": "Pāṇātipātā viratā,",
  "vv22:8.2": "musāvādā ca saññatā;",
  "vv22:8.3": "Theyyā ca aticārā ca,",
  "vv22:8.4": "majjapānā ca ārakā.",
  "vv22:9.1": "Pañcasikkhāpade ratā,",
  "vv22:9.2": "Ariyasaccāna kovidā;",
  "vv22:9.3": "Upāsikā cakkhumato,",
  "vv22:9.4": "Appamādavihārinī;",
  "vv22:9.5": "Katāvāsā katakusalā tato cutā,",
  "vv22:9.6": "Sayaṃpabhā anuvicarāmi nandanaṃ.",
  "vv22:10.1": "Bhikkhū cāhaṃ paramahitānukampake,",
  "vv22:10.2": "Abhojayiṃ tapassiyugaṃ mahāmuniṃ;",
  "vv22:10.3": "Katāvāsā katakusalā tato cutā,",
  "vv22:10.4": "Sayaṃpabhā anuvicarāmi nandanaṃ.",
  "vv22:11.1": "Aṭṭhaṅgikaṃ aparimitaṃ sukhāvahaṃ,",
  "vv22:11.2": "Uposathaṃ satatamupāvasiṃ ahaṃ;",
  "vv22:11.3": "Katāvāsā katakusalā tato cutā,",
  "vv22:11.4": "Sayaṃpabhā anuvicarāmi nandanan”ti.",
  "vv22:12.1": "Bhadditthivimānaṃ pañcamaṃ."
}