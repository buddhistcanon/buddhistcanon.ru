{
  "vv52:0.1": "Vimānavatthu",
  "vv52:0.2": "Purisavimāna",
  "vv52:0.3": "Mahārathavagga",
  "vv52:0.4": "2. Revatīvimānavatthu",
  "vv52:1.1": "“Cirappavāsiṃ purisaṃ,",
  "vv52:1.2": "dūrato sotthimāgataṃ;",
  "vv52:1.3": "Ñātimittā suhajjā ca,",
  "vv52:1.4": "abhinandanti āgataṃ.",
  "vv52:2.1": "Tatheva katapuññampi,",
  "vv52:2.2": "asmā lokā paraṃ gataṃ;",
  "vv52:2.3": "Puññāni paṭigaṇhanti,",
  "vv52:2.4": "piyaṃ ñātīva āgataṃ”.",
  "vv52:3.1": "“Uṭṭhehi revate supāpadhamme,",
  "vv52:3.2": "Apārutadvāre adānasīle;",
  "vv52:3.3": "Nessāma taṃ yattha thunanti duggatā,",
  "vv52:3.4": "Samappitā nerayikā dukkhenā”ti.",
  "vv52:4.1": "Icceva vatvāna yamassa dūtā,",
  "vv52:4.2": "Te dve yakkhā lohitakkhā brahantā;",
  "vv52:4.3": "Paccekabāhāsu gahetvā revataṃ,",
  "vv52:4.4": "Pakkāmayuṃ devagaṇassa santike.",
  "vv52:5.1": "“Ādiccavaṇṇaṃ ruciraṃ pabhassaraṃ,",
  "vv52:5.2": "Byamhaṃ subhaṃ kañcanajālachannaṃ;",
  "vv52:5.3": "Kassetamākiṇṇajanaṃ vimānaṃ,",
  "vv52:5.4": "Suriyassa raṃsīriva jotamānaṃ.",
  "vv52:6.1": "Nārīgaṇā candanasāralittā,",
  "vv52:6.2": "Ubhato vimānaṃ upasobhayanti;",
  "vv52:6.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
  "vv52:6.4": "Ko modati saggapatto vimāne”ti.",
  "vv52:7.1": "“Bārāṇasiyaṃ nandiyo nāmāsi,",
  "vv52:7.2": "Upāsako amaccharī dānapati vadaññū;",
  "vv52:7.3": "Tassetamākiṇṇajanaṃ vimānaṃ,",
  "vv52:7.4": "Suriyassa raṃsīriva jotamānaṃ.",
  "vv52:8.1": "Nārīgaṇā candanasāralittā,",
  "vv52:8.2": "Ubhato vimānaṃ upasobhayanti;",
  "vv52:8.3": "Taṃ dissati suriyasamānavaṇṇaṃ,",
  "vv52:8.4": "So modati saggapatto vimāne”ti.",
  "vv52:9.1": "“Nandiyassāhaṃ bhariyā,",
  "vv52:9.2": "Agārinī sabbakulassa issarā;",
  "vv52:9.3": "Bhattu vimāne ramissāmi dānahaṃ,",
  "vv52:9.4": "Na patthaye nirayaṃ dassanāyā”ti.",
  "vv52:10.1": "“Eso te nirayo supāpadhamme,",
  "vv52:10.2": "Puññaṃ tayā akataṃ jīvaloke;",
  "vv52:10.3": "Na hi maccharī rosako pāpadhammo,",
  "vv52:10.4": "Saggūpagānaṃ labhati sahabyatan”ti.",
  "vv52:11.1": "“Kiṃ nu gūthañca muttañca,",
  "vv52:11.2": "asucī paṭidissati;",
  "vv52:11.3": "Duggandhaṃ kimidaṃ mīḷhaṃ,",
  "vv52:11.4": "kimetaṃ upavāyatī”ti.",
  "vv52:12.1": "“Esa saṃsavako nāma,",
  "vv52:12.2": "gambhīro sataporiso;",
  "vv52:12.3": "Yattha vassasahassāni,",
  "vv52:12.4": "tuvaṃ paccasi revate”ti.",
  "vv52:13.1": "“Kiṃ nu kāyena vācāya,",
  "vv52:13.2": "manasā dukkaṭaṃ kataṃ;",
  "vv52:13.3": "Kena saṃsavako laddho,",
  "vv52:13.4": "gambhīro sataporiso”ti.",
  "vv52:14.1": "“Samaṇe brāhmaṇe cāpi,",
  "vv52:14.2": "aññe vāpi vanibbake;",
  "vv52:14.3": "Musāvādena vañcesi,",
  "vv52:14.4": "taṃ pāpaṃ pakataṃ tayā.",
  "vv52:15.1": "Tena saṃsavako laddho,",
  "vv52:15.2": "gambhīro sataporiso;",
  "vv52:15.3": "Tattha vassasahassāni,",
  "vv52:15.4": "tuvaṃ paccasi revate.",
  "vv52:16.1": "Hatthepi chindanti athopi pāde,",
  "vv52:16.2": "Kaṇṇepi chindanti athopi nāsaṃ;",
  "vv52:16.3": "Athopi kākoḷagaṇā samecca,",
  "vv52:16.4": "Saṅgamma khādanti viphandamānan”ti.",
  "vv52:17.1": "“Sādhu kho maṃ paṭinetha,",
  "vv52:17.2": "kāhāmi kusalaṃ bahuṃ;",
  "vv52:17.3": "Dānena samacariyāya,",
  "vv52:17.4": "saṃyamena damena ca;",
  "vv52:17.5": "Yaṃ katvā sukhitā honti,",
  "vv52:17.6": "na ca pacchānutappare”ti.",
  "vv52:18.1": "“Pure tuvaṃ pamajjitvā,",
  "vv52:18.2": "idāni paridevasi;",
  "vv52:18.3": "Sayaṃ katānaṃ kammānaṃ,",
  "vv52:18.4": "vipākaṃ anubhossasī”ti.",
  "vv52:19.1": "“Ko devalokato manussalokaṃ,",
  "vv52:19.2": "Gantvāna puṭṭho me evaṃ vadeyya;",
  "vv52:19.3": "‘Nikkhittadaṇḍesu dadātha dānaṃ,",
  "vv52:19.4": "Acchādanaṃ seyyamathannapānaṃ;",
  "vv52:19.5": "Na hi maccharī rosako pāpadhammo,",
  "vv52:19.6": "Saggūpagānaṃ labhati sahabyataṃ’.",
  "vv52:20.1": "Sāhaṃ nūna ito gantvā,",
  "vv52:20.2": "yoniṃ laddhāna mānusiṃ;",
  "vv52:20.3": "Vadaññū sīlasampannā,",
  "vv52:20.4": "kāhāmi kusalaṃ bahuṃ;",
  "vv52:20.5": "Dānena samacariyāya,",
  "vv52:20.6": "saṃyamena damena ca.",
  "vv52:21.1": "Ārāmāni ca ropissaṃ,",
  "vv52:21.2": "dugge saṅkamanāni ca;",
  "vv52:21.3": "Papañca udapānañca,",
  "vv52:21.4": "vippasannena cetasā.",
  "vv52:22.1": "Cātuddasiṃ pañcadasiṃ,",
  "vv52:22.2": "yā ca pakkhassa aṭṭhamī;",
  "vv52:22.3": "Pāṭihāriyapakkhañca,",
  "vv52:22.4": "aṭṭhaṅgasusamāgataṃ.",
  "vv52:23.1": "Uposathaṃ upavasissaṃ,",
  "vv52:23.2": "sadā sīlesu saṃvutā;",
  "vv52:23.3": "Na ca dāne pamajjissaṃ,",
  "vv52:23.4": "sāmaṃ diṭṭhamidaṃ mayā”ti.",
  "vv52:24.1": "Iccevaṃ vippalapantiṃ,",
  "vv52:24.2": "phandamānaṃ tato tato;",
  "vv52:24.3": "Khipiṃsu niraye ghore,",
  "vv52:24.4": "uddhampādaṃ avaṃsiraṃ.",
  "vv52:25.1": "“Ahaṃ pure maccharinī ahosiṃ,",
  "vv52:25.2": "Paribhāsikā samaṇabrāhmaṇānaṃ;",
  "vv52:25.3": "Vitathena ca sāmikaṃ vañcayitvā,",
  "vv52:25.4": "Paccāmahaṃ niraye ghorarūpe”ti.",
  "vv52:26.1": "Revatīvimānaṃ dutiyaṃ."
}