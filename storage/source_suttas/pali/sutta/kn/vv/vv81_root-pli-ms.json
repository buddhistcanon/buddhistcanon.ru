{
  "vv81:0.1": "Vimānavatthu",
  "vv81:0.2": "Purisavimāna",
  "vv81:0.3": "Sunikkhittavagga",
  "vv81:0.4": "7. Kaṇḍakavimānavatthu",
  "vv81:1.1": "“Puṇṇamāse yathā cando,",
  "vv81:1.2": "nakkhattaparivārito;",
  "vv81:1.3": "Samantā anupariyāti,",
  "vv81:1.4": "tārakādhipatī sasī.",
  "vv81:2.1": "Tathūpamaṃ idaṃ byamhaṃ,",
  "vv81:2.2": "dibbaṃ devapuramhi ca;",
  "vv81:2.3": "Atirocati vaṇṇena,",
  "vv81:2.4": "udayantova raṃsimā.",
  "vv81:3.1": "Veḷuriyasuvaṇṇassa,",
  "vv81:3.2": "phalikā rūpiyassa ca;",
  "vv81:3.3": "Masāragallamuttāhi,",
  "vv81:3.4": "lohitaṅgamaṇīhi ca.",
  "vv81:4.1": "Citrā manoramā bhūmi,",
  "vv81:4.2": "veḷūriyassa santhatā;",
  "vv81:4.3": "Kūṭāgārā subhā rammā,",
  "vv81:4.4": "pāsādo te sumāpito.",
  "vv81:5.1": "Rammā ca te pokkharaṇī,",
  "vv81:5.2": "puthulomanisevitā;",
  "vv81:5.3": "Acchodakā vippasannā,",
  "vv81:5.4": "sovaṇṇavālukasanthatā.",
  "vv81:6.1": "Nānāpadumasañchannā,",
  "vv81:6.2": "puṇḍarīkasamotatā;",
  "vv81:6.3": "Surabhiṃ sampavāyanti,",
  "vv81:6.4": "manuññā māluteritā.",
  "vv81:7.1": "Tassā te ubhato passe,",
  "vv81:7.2": "vanagumbā sumāpitā;",
  "vv81:7.3": "Upetā puppharukkhehi,",
  "vv81:7.4": "phalarukkhehi cūbhayaṃ.",
  "vv81:8.1": "Sovaṇṇapāde pallaṅke,",
  "vv81:8.2": "muduke gonakatthate;",
  "vv81:8.3": "Nisinnaṃ devarājaṃva,",
  "vv81:8.4": "upatiṭṭhanti accharā.",
  "vv81:9.1": "Sabbābharaṇasañchannā,",
  "vv81:9.2": "nānāmālāvibhūsitā;",
  "vv81:9.3": "Ramenti taṃ mahiddhikaṃ,",
  "vv81:9.4": "vasavattīva modasi.",
  "vv81:10.1": "Bherisaṅkhamudiṅgāhi,",
  "vv81:10.2": "vīṇāhi paṇavehi ca;",
  "vv81:10.3": "Ramasi ratisampanno,",
  "vv81:10.4": "naccagīte suvādite.",
  "vv81:11.1": "Dibbā te vividhā rūpā,",
  "vv81:11.2": "dibbā saddā atho rasā;",
  "vv81:11.3": "Gandhā ca te adhippetā,",
  "vv81:11.4": "phoṭṭhabbā ca manoramā.",
  "vv81:12.1": "Tasmiṃ vimāne pavare,",
  "vv81:12.2": "devaputta mahappabho;",
  "vv81:12.3": "Atirocasi vaṇṇena,",
  "vv81:12.4": "udayantova bhāṇumā.",
  "vv81:13.1": "Dānassa te idaṃ phalaṃ,",
  "vv81:13.2": "atho sīlassa vā pana;",
  "vv81:13.3": "Atho añjalikammassa,",
  "vv81:13.4": "taṃ me akkhāhi pucchito”.",
  "vv81:14.1": "So devaputto attamano,",
  "vv81:14.2": "…pe…",
  "vv81:14.3": "yassa kammassidaṃ phalaṃ.",
  "vv81:15.1": "“Ahaṃ kapilavatthusmiṃ,",
  "vv81:15.2": "sākiyānaṃ puruttame;",
  "vv81:15.3": "Suddhodanassa puttassa,",
  "vv81:15.4": "kaṇḍako sahajo ahaṃ.",
  "vv81:16.1": "Yadā so aḍḍharattāyaṃ,",
  "vv81:16.2": "bodhāya mabhinikkhami;",
  "vv81:16.3": "So maṃ mudūhi pāṇīhi,",
  "vv81:16.4": "jāli tambanakhehi ca.",
  "vv81:17.1": "Satthiṃ ākoṭayitvāna,",
  "vv81:17.2": "vaha sammāti cabravi;",
  "vv81:17.3": "Ahaṃ lokaṃ tārayissaṃ,",
  "vv81:17.4": "patto sambodhimuttamaṃ.",
  "vv81:18.1": "Taṃ me giraṃ suṇantassa,",
  "vv81:18.2": "hāso me vipulo ahu;",
  "vv81:18.3": "Udaggacitto sumano,",
  "vv81:18.4": "abhisīsiṃ tadā ahaṃ.",
  "vv81:19.1": "Abhirūḷhañca maṃ ñatvā,",
  "vv81:19.2": "sakyaputtaṃ mahāyasaṃ;",
  "vv81:19.3": "Udaggacitto mudito,",
  "vv81:19.4": "vahissaṃ purisuttamaṃ.",
  "vv81:20.1": "Paresaṃ vijitaṃ gantvā,",
  "vv81:20.2": "uggatasmiṃ divākare;",
  "vv81:20.3": "Mamaṃ channañca ohāya,",
  "vv81:20.4": "anapekkho so apakkami.",
  "vv81:21.1": "Tassa tambanakhe pāde,",
  "vv81:21.2": "jivhāya parilehisaṃ;",
  "vv81:21.3": "Gacchantañca mahāvīraṃ,",
  "vv81:21.4": "rudamāno udikkhisaṃ.",
  "vv81:22.1": "Adassanenahaṃ tassa,",
  "vv81:22.2": "sakyaputtassa sirīmato;",
  "vv81:22.3": "Alatthaṃ garukābādhaṃ,",
  "vv81:22.4": "khippaṃ me maraṇaṃ ahu.",
  "vv81:23.1": "Tasseva ānubhāvena,",
  "vv81:23.2": "vimānaṃ āvasāmidaṃ;",
  "vv81:23.3": "Sabbakāmaguṇopetaṃ,",
  "vv81:23.4": "dibbaṃ devapuramhi ca.",
  "vv81:24.1": "Yañca me ahuvā hāso,",
  "vv81:24.2": "saddaṃ sutvāna bodhiyā;",
  "vv81:24.3": "Teneva kusalamūlena,",
  "vv81:24.4": "phusissaṃ āsavakkhayaṃ.",
  "vv81:25.1": "Sace hi bhante gaccheyyāsi,",
  "vv81:25.2": "satthu buddhassa santike;",
  "vv81:25.3": "Mamāpi naṃ vacanena,",
  "vv81:25.4": "sirasā vajjāsi vandanaṃ.",
  "vv81:26.1": "Ahampi daṭṭhuṃ gacchissaṃ,",
  "vv81:26.2": "jinaṃ appaṭipuggalaṃ;",
  "vv81:26.3": "Dullabhaṃ dassanaṃ hoti,",
  "vv81:26.4": "lokanāthāna tādinan”ti.",
  "vv81:27.1": "So kataññū katavedī,",
  "vv81:27.2": "satthāraṃ upasaṅkami;",
  "vv81:27.3": "Sutvā giraṃ cakkhumato,",
  "vv81:27.4": "dhammacakkhuṃ visodhayi.",
  "vv81:28.1": "Visodhetvā diṭṭhigataṃ,",
  "vv81:28.2": "vicikicchaṃ vatāni ca;",
  "vv81:28.3": "Vanditvā satthuno pāde,",
  "vv81:28.4": "tatthevantaradhāyathāti.",
  "vv81:29.1": "Kaṇḍakavimānaṃ sattamaṃ."
}