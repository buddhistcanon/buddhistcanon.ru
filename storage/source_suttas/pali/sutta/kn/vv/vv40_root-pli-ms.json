{
  "vv40:0.1": "Vimānavatthu",
  "vv40:0.2": "Itthivimāna",
  "vv40:0.3": "Mañjiṭṭhakavagga",
  "vv40:0.4": "2. Pabhassaravimānavatthu",
  "vv40:1.1": "“Pabhassaravaravaṇṇanibhe,",
  "vv40:1.2": "Surattavatthavasane;",
  "vv40:1.3": "Mahiddhike candanaruciragatte,",
  "vv40:1.4": "Kā tvaṃ subhe devate vandase mamaṃ.",
  "vv40:2.1": "Pallaṅko ca te mahaggho,",
  "vv40:2.2": "Nānāratanacittito ruciro;",
  "vv40:2.3": "Yattha tvaṃ nisinnā virocasi,",
  "vv40:2.4": "Devarājāriva nandane vane.",
  "vv40:3.1": "Kiṃ tvaṃ pure sucaritamācarī bhadde,",
  "vv40:3.2": "Kissa kammassa vipākaṃ;",
  "vv40:3.3": "Anubhosi devalokasmiṃ,",
  "vv40:3.4": "Devate pucchitācikkha;",
  "vv40:3.5": "Kissa kammassidaṃ phalan”ti.",
  "vv40:4.1": "“Piṇḍāya te carantassa,",
  "vv40:4.2": "Mālaṃ phāṇitañca adadaṃ bhante;",
  "vv40:4.3": "Tassa kammassidaṃ vipākaṃ,",
  "vv40:4.4": "Anubhomi devalokasmiṃ.",
  "vv40:5.1": "Hoti ca me anutāpo,",
  "vv40:5.2": "Aparaddhaṃ dukkhitañca me bhante;",
  "vv40:5.3": "Sāhaṃ dhammaṃ nāssosiṃ,",
  "vv40:5.4": "Sudesitaṃ dhammarājena.",
  "vv40:6.1": "Taṃ taṃ vadāmi bhaddante,",
  "vv40:6.2": "‘Yassa me anukampiyo koci;",
  "vv40:6.3": "Dhammesu taṃ samādapetha’,",
  "vv40:6.4": "Sudesitaṃ dhammarājena.",
  "vv40:7.1": "Yesaṃ atthi saddhā buddhe,",
  "vv40:7.2": "dhamme ca saṃgharatane;",
  "vv40:7.3": "Te maṃ ativirocanti,",
  "vv40:7.4": "āyunā yasasā siriyā.",
  "vv40:8.1": "Patāpena vaṇṇena uttaritarā,",
  "vv40:8.2": "Aññe mahiddhikatarā mayā devā”ti.",
  "vv40:9.1": "Pabhassaravimānaṃ dutiyaṃ."
}