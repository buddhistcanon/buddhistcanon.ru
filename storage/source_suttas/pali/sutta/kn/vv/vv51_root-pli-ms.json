{
  "vv51:0.1": "Vimānavatthu",
  "vv51:0.2": "Purisavimāna",
  "vv51:0.3": "Mahārathavagga",
  "vv51:0.4": "1. Maṇḍūkadevaputtavimānavatthu",
  "vv51:1.1": "“Ko me vandati pādāni,",
  "vv51:1.2": "iddhiyā yasasā jalaṃ;",
  "vv51:1.3": "Abhikkantena vaṇṇena,",
  "vv51:1.4": "sabbā obhāsayaṃ disā”ti.",
  "vv51:2.1": "“Maṇḍūkohaṃ pure āsiṃ,",
  "vv51:2.2": "udake vārigocaro;",
  "vv51:2.3": "Tava dhammaṃ suṇantassa,",
  "vv51:2.4": "avadhī vacchapālako.",
  "vv51:3.1": "Muhuttaṃ cittapasādassa,",
  "vv51:3.2": "iddhiṃ passa yasañca me;",
  "vv51:3.3": "Ānubhāvañca me passa,",
  "vv51:3.4": "vaṇṇaṃ passa jutiñca me.",
  "vv51:4.1": "Ye ca te dīghamaddhānaṃ,",
  "vv51:4.2": "dhammaṃ assosuṃ gotama;",
  "vv51:4.3": "Pattā te acalaṭṭhānaṃ,",
  "vv51:4.4": "yattha gantvā na socare”ti.",
  "vv51:5.1": "Maṇḍūkadevaputtavimānaṃ paṭhamaṃ."
}