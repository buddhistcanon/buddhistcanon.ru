{
  "pv51:0.1": "Petavatthu",
  "pv51:0.2": "Mahāvagga",
  "pv51:0.3": "16. Saṭṭhikūṭapetavatthu",
  "pv51:1.1": "“Kiṃ nu ummattarūpova,",
  "pv51:1.2": "Migo bhantova dhāvasi;",
  "pv51:1.3": "Nissaṃsayaṃ pāpakammanto,",
  "pv51:1.4": "Kiṃ nu saddāyase tuvan”ti.",
  "pv51:2.1": "“Ahaṃ bhadante petomhi,",
  "pv51:2.2": "duggato yamalokiko;",
  "pv51:2.3": "Pāpakammaṃ karitvāna,",
  "pv51:2.4": "petalokaṃ ito gato.",
  "pv51:3.1": "Saṭṭhi kūṭasahassāni,",
  "pv51:3.2": "paripuṇṇāni sabbaso;",
  "pv51:3.3": "Sīse mayhaṃ nipatanti,",
  "pv51:3.4": "te bhindanti ca matthakan”ti.",
  "pv51:4.1": "“Kiṃ nu kāyena vācāya,",
  "pv51:4.2": "manasā dukkaṭaṃ kataṃ;",
  "pv51:4.3": "Kissa kammavipākena,",
  "pv51:4.4": "idaṃ dukkhaṃ nigacchasi.",
  "pv51:5.1": "Saṭṭhi kūṭasahassāni,",
  "pv51:5.2": "paripuṇṇāni sabbaso;",
  "pv51:5.3": "Sīse tuyhaṃ nipatanti,",
  "pv51:5.4": "te bhindanti ca matthakan”ti.",
  "pv51:6.1": "“Athaddasāsiṃ sambuddhaṃ,",
  "pv51:6.2": "sunettaṃ bhāvitindriyaṃ;",
  "pv51:6.3": "Nisinnaṃ rukkhamūlasmiṃ,",
  "pv51:6.4": "jhāyantaṃ akutobhayaṃ.",
  "pv51:7.1": "Sālittakappahārena,",
  "pv51:7.2": "bhindissaṃ tassa matthakaṃ;",
  "pv51:7.3": "Tassa kammavipākena,",
  "pv51:7.4": "idaṃ dukkhaṃ nigacchisaṃ.",
  "pv51:8.1": "Saṭṭhi kūṭasahassāni,",
  "pv51:8.2": "Paripuṇṇāni sabbaso;",
  "pv51:8.3": "Sīse mayhaṃ nipatanti,",
  "pv51:8.4": "Te bhindanti ca matthakan”ti.",
  "pv51:9.1": "“Dhammena te kāpurisa,",
  "pv51:9.2": "saṭṭhikūṭasahassāni;",
  "pv51:9.3": "Paripuṇṇāni sabbaso,",
  "pv51:9.4": "sīse tuyhaṃ nipatanti;",
  "pv51:9.5": "Te bhindanti ca matthakan”ti.",
  "pv51:10.1": "Saṭṭhikūṭapetavatthu soḷasamaṃ.",
  "pv51:11.1": "Mahāvaggo catuttho.",
  "pv51:12.1": "Tassuddānaṃ",
  "pv51:13.1": "Ambasakkaro serīsako,",
  "pv51:13.2": "piṅgalo revati ucchu;",
  "pv51:13.3": "Dve kumārā duve gūthā,",
  "pv51:13.4": "gaṇapāṭaliambavanaṃ.",
  "pv51:14.1": "Akkharukkhabhogasaṃharā,",
  "pv51:14.2": "seṭṭhiputtasaṭṭhikūṭā;",
  "pv51:14.3": "Iti soḷasavatthūni,",
  "pv51:14.4": "vaggo tena pavuccati.",
  "pv51:15.1": "Atha vagguddānaṃ",
  "pv51:16.1": "Urago uparivaggo,",
  "pv51:16.2": "cūḷamahāti catudhā;",
  "pv51:16.3": "Vatthūni ekapaññāsaṃ,",
  "pv51:16.4": "catudhā bhāṇavārato.",
  "pv51:17.1": "Petavatthupāḷi niṭṭhitā."
}