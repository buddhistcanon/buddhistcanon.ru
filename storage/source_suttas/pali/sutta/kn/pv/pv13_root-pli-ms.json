{
  "pv13:0.1": "Petavatthu",
  "pv13:0.2": "Ubbarivagga",
  "pv13:0.3": "1. Saṃsāramocakapetivatthu",
  "pv13:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv13:1.2": "kisā dhamanisanthatā;",
  "pv13:1.3": "Upphāsulike kisike,",
  "pv13:1.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
  "pv13:2.1": "“Ahaṃ bhadante petīmhi,",
  "pv13:2.2": "duggatā yamalokikā;",
  "pv13:2.3": "Pāpakammaṃ karitvāna,",
  "pv13:2.4": "petalokaṃ ito gatā”ti.",
  "pv13:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv13:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv13:3.3": "Kissa kammavipākena,",
  "pv13:3.4": "petalokaṃ ito gatā”ti.",
  "pv13:4.1": "“Anukampakā mayhaṃ nāhesuṃ bhante,",
  "pv13:4.2": "Pitā ca mātā athavāpi ñātakā;",
  "pv13:4.3": "Ye maṃ niyojeyyuṃ dadāhi dānaṃ,",
  "pv13:4.4": "Pasannacittā samaṇabrāhmaṇānaṃ.",
  "pv13:5.1": "Ito ahaṃ vassasatāni pañca,",
  "pv13:5.2": "Yaṃ evarūpā vicarāmi naggā;",
  "pv13:5.3": "Khudāya taṇhāya ca khajjamānā,",
  "pv13:5.4": "Pāpassa kammassa phalaṃ mamedaṃ.",
  "pv13:6.1": "Vandāmi taṃ ayya pasannacittā,",
  "pv13:6.2": "Anukampa maṃ vīra mahānubhāva;",
  "pv13:6.3": "Datvā ca me ādisa yaṃ hi kiñci,",
  "pv13:6.4": "Mocehi maṃ duggatiyā bhadante”ti.",
  "pv13:7.1": "Sādhūti so paṭissutvā,",
  "pv13:7.2": "sāriputtonukampako;",
  "pv13:7.3": "Bhikkhūnaṃ ālopaṃ datvā,",
  "pv13:7.4": "pāṇimattañca coḷakaṃ;",
  "pv13:7.5": "Thālakassa ca pānīyaṃ,",
  "pv13:7.6": "tassā dakkhiṇamādisi.",
  "pv13:8.1": "Samanantarānuddiṭṭhe,",
  "pv13:8.2": "vipāko udapajjatha;",
  "pv13:8.3": "Bhojanacchādanapānīyaṃ,",
  "pv13:8.4": "dakkhiṇāya idaṃ phalaṃ.",
  "pv13:9.1": "Tato suddhā sucivasanā,",
  "pv13:9.2": "kāsikuttamadhārinī;",
  "pv13:9.3": "Vicittavatthābharaṇā,",
  "pv13:9.4": "sāriputtaṃ upasaṅkami.",
  "pv13:10.1": "“Abhikkantena vaṇṇena,",
  "pv13:10.2": "yā tvaṃ tiṭṭhasi devate;",
  "pv13:10.3": "Obhāsentī disā sabbā,",
  "pv13:10.4": "osadhī viya tārakā.",
  "pv13:11.1": "Kena te tādiso vaṇṇo,",
  "pv13:11.2": "kena te idha mijjhati;",
  "pv13:11.3": "Uppajjanti ca te bhogā,",
  "pv13:11.4": "ye keci manaso piyā.",
  "pv13:12.1": "Pucchāmi taṃ devi mahānubhāve,",
  "pv13:12.2": "Manussabhūtā kimakāsi puññaṃ;",
  "pv13:12.3": "Kenāsi evaṃ jalitānubhāvā,",
  "pv13:12.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv13:13.1": "“Uppaṇḍukiṃ kisaṃ chātaṃ,",
  "pv13:13.2": "naggaṃ sampatitacchaviṃ;",
  "pv13:13.3": "Muni kāruṇiko loke,",
  "pv13:13.4": "taṃ maṃ addakkhi duggataṃ.",
  "pv13:14.1": "Bhikkhūnaṃ ālopaṃ datvā,",
  "pv13:14.2": "pāṇimattañca coḷakaṃ;",
  "pv13:14.3": "Thālakassa ca pānīyaṃ,",
  "pv13:14.4": "mama dakkhiṇamādisi.",
  "pv13:15.1": "Ālopassa phalaṃ passa,",
  "pv13:15.2": "bhattaṃ vassasataṃ dasa;",
  "pv13:15.3": "Bhuñjāmi kāmakāminī,",
  "pv13:15.4": "anekarasabyañjanaṃ.",
  "pv13:16.1": "Pāṇimattassa coḷassa,",
  "pv13:16.2": "vipākaṃ passa yādisaṃ;",
  "pv13:16.3": "Yāvatā nandarājassa,",
  "pv13:16.4": "vijitasmiṃ paṭicchadā.",
  "pv13:17.1": "Tato bahutarā bhante,",
  "pv13:17.2": "vatthānacchādanāni me;",
  "pv13:17.3": "Koseyyakambalīyāni,",
  "pv13:17.4": "khomakappāsikāni ca.",
  "pv13:18.1": "Vipulā ca mahagghā ca,",
  "pv13:18.2": "tepākāsevalambare;",
  "pv13:18.3": "Sāhaṃ taṃ paridahāmi,",
  "pv13:18.4": "yaṃ yaṃ hi manaso piyaṃ.",
  "pv13:19.1": "Thālakassa ca pānīyaṃ,",
  "pv13:19.2": "vipākaṃ passa yādisaṃ;",
  "pv13:19.3": "Gambhīrā caturassā ca,",
  "pv13:19.4": "pokkharañño sunimmitā.",
  "pv13:20.1": "Setodakā suppatitthā,",
  "pv13:20.2": "sītā appaṭigandhiyā;",
  "pv13:20.3": "Padumuppalasañchannā,",
  "pv13:20.4": "vārikiñjakkhapūritā.",
  "pv13:21.1": "Sāhaṃ ramāmi kīḷāmi,",
  "pv13:21.2": "modāmi akutobhayā;",
  "pv13:21.3": "Muniṃ kāruṇikaṃ loke,",
  "pv13:21.4": "bhante vanditumāgatā”ti.",
  "pv13:22.1": "Saṃsāramocakapetivatthu paṭhamaṃ."
}