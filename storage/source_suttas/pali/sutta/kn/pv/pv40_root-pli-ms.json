{
  "pv40:0.1": "Petavatthu",
  "pv40:0.2": "Mahāvagga",
  "pv40:0.3": "5. Ucchupetavatthu",
  "pv40:1.1": "“Idaṃ mama ucchuvanaṃ mahantaṃ,",
  "pv40:1.2": "Nibbattati puññaphalaṃ anappakaṃ;",
  "pv40:1.3": "Taṃ dāni me na paribhogameti,",
  "pv40:1.4": "Ācikkha bhante kissa ayaṃ vipāko.",
  "pv40:2.1": "Haññāmi khajjāmi ca vāyamāmi,",
  "pv40:2.2": "Parisakkāmi paribhuñjituṃ kiñci;",
  "pv40:2.3": "Svāhaṃ chinnathāmo kapaṇo lālapāmi,",
  "pv40:2.4": "Kissa kammassa ayaṃ vipāko.",
  "pv40:3.1": "Vighāto cāhaṃ paripatāmi chamāyaṃ,",
  "pv40:3.2": "Parivattāmi vāricarova ghamme;",
  "pv40:3.3": "Rudato ca me assukā niggalanti,",
  "pv40:3.4": "Ācikkha bhante kissa ayaṃ vipāko.",
  "pv40:4.1": "Chāto kilanto ca pipāsito ca,",
  "pv40:4.2": "Santassito sātasukhaṃ na vinde;",
  "pv40:4.3": "Pucchāmi taṃ etamatthaṃ bhadante,",
  "pv40:4.4": "Kathaṃ nu ucchuparibhogaṃ labheyyan”ti.",
  "pv40:5.1": "“Pure tuvaṃ kammamakāsi attanā,",
  "pv40:5.2": "Manussabhūto purimāya jātiyā;",
  "pv40:5.3": "Ahañca taṃ etamatthaṃ vadāmi,",
  "pv40:5.4": "Sutvāna tvaṃ etamatthaṃ vijāna.",
  "pv40:6.1": "Ucchuṃ tuvaṃ khādamāno payāto,",
  "pv40:6.2": "Puriso ca te piṭṭhito anvagacchi;",
  "pv40:6.3": "So ca taṃ paccāsanto kathesi,",
  "pv40:6.4": "Tassa tuvaṃ na kiñci ālapittha.",
  "pv40:7.1": "So ca taṃ abhaṇantaṃ ayāci,",
  "pv40:7.2": "‘Dehayya ucchun’ti ca taṃ avoca;",
  "pv40:7.3": "Tassa tuvaṃ piṭṭhito ucchuṃ adāsi,",
  "pv40:7.4": "Tassetaṃ kammassa ayaṃ vipāko.",
  "pv40:8.1": "Iṅgha tvaṃ gantvāna piṭṭhito gaṇheyyāsi,",
  "pv40:8.2": "Gahetvāna taṃ khādassu yāvadatthaṃ;",
  "pv40:8.3": "Teneva tvaṃ attamano bhavissasi,",
  "pv40:8.4": "Haṭṭho cudaggo ca pamodito cā”ti.",
  "pv40:9.1": "Gantvāna so piṭṭhito aggahesi,",
  "pv40:9.2": "Gahetvāna taṃ khādi yāvadatthaṃ;",
  "pv40:9.3": "Teneva so attamano ahosi,",
  "pv40:9.4": "Haṭṭho cudaggo ca pamodito cāti.",
  "pv40:10.1": "Ucchupetavatthu pañcamaṃ."
}