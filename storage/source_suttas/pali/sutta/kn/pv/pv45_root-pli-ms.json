{
  "pv45:0.1": "Petavatthu",
  "pv45:0.2": "Mahāvagga",
  "pv45:0.3": "10. Gaṇapetavatthu",
  "pv45:1.1": "“Naggā dubbaṇṇarūpāttha,",
  "pv45:1.2": "kisā dhamanisanthatā;",
  "pv45:1.3": "Upphāsulikā kisikā,",
  "pv45:1.4": "ke nu tumhettha mārisā”ti.",
  "pv45:2.1": "“Mayaṃ bhadante petāmhā,",
  "pv45:2.2": "duggatā yamalokikā;",
  "pv45:2.3": "Pāpakammaṃ karitvāna,",
  "pv45:2.4": "petalokaṃ ito gatā”ti.",
  "pv45:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv45:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv45:3.3": "Kissa kammavipākena,",
  "pv45:3.4": "petalokaṃ ito gatā”ti.",
  "pv45:4.1": "“Anāvaṭesu titthesu,",
  "pv45:4.2": "vicinimhaddhamāsakaṃ;",
  "pv45:4.3": "Santesu deyyadhammesu,",
  "pv45:4.4": "dīpaṃ nākamha attano.",
  "pv45:5.1": "Nadiṃ upema tasitā,",
  "pv45:5.2": "rittakā parivattati;",
  "pv45:5.3": "Chāyaṃ upema uṇhesu,",
  "pv45:5.4": "ātapo parivattati.",
  "pv45:6.1": "Aggivaṇṇo ca no vāto,",
  "pv45:6.2": "ḍahanto upavāyati;",
  "pv45:6.3": "Etañca bhante arahāma,",
  "pv45:6.4": "aññañca pāpakaṃ tato.",
  "pv45:7.1": "Api yojanāni gacchāma,",
  "pv45:7.2": "chātā āhāragedhino;",
  "pv45:7.3": "Aladdhāva nivattāma,",
  "pv45:7.4": "aho no appapuññatā.",
  "pv45:8.1": "Chātā pamucchitā bhantā,",
  "pv45:8.2": "bhūmiyaṃ paṭisumbhitā;",
  "pv45:8.3": "Uttānā paṭikirāma,",
  "pv45:8.4": "avakujjā patāmase.",
  "pv45:9.1": "Te ca tattheva patitā,",
  "pv45:9.2": "bhūmiyaṃ paṭisumbhitā;",
  "pv45:9.3": "Uraṃ sīsañca ghaṭṭema,",
  "pv45:9.4": "aho no appapuññatā.",
  "pv45:10.1": "Etañca bhante arahāma,",
  "pv45:10.2": "aññañca pāpakaṃ tato;",
  "pv45:10.3": "Santesu deyyadhammesu,",
  "pv45:10.4": "dīpaṃ nākamha attano.",
  "pv45:11.1": "Te hi nūna ito gantvā,",
  "pv45:11.2": "yoniṃ laddhāna mānusiṃ;",
  "pv45:11.3": "Vadaññū sīlasampannā,",
  "pv45:11.4": "kāhāma kusalaṃ bahun”ti.",
  "pv45:12.1": "Gaṇapetavatthu dasamaṃ."
}