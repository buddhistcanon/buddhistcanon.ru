{
  "pv32:0.1": "Petavatthu",
  "pv32:0.2": "Cūḷavagga",
  "pv32:0.3": "7. Migaluddakapetavatthu",
  "pv32:1.1": "“Naranāripurakkhato yuvā,",
  "pv32:1.2": "Rajanīyehi kāmaguṇehi sobhasi;",
  "pv32:1.3": "Divasaṃ anubhosi kāraṇaṃ,",
  "pv32:1.4": "Kimakāsi purimāya jātiyā”ti.",
  "pv32:2.1": "“Ahaṃ rājagahe ramme,",
  "pv32:2.2": "ramaṇīye giribbaje;",
  "pv32:2.3": "Migaluddo pure āsiṃ,",
  "pv32:2.4": "lohitapāṇi dāruṇo.",
  "pv32:3.1": "Avirodhakaresu pāṇisu,",
  "pv32:3.2": "Puthusattesu paduṭṭhamānaso;",
  "pv32:3.3": "Vicariṃ atidāruṇo sadā,",
  "pv32:3.4": "Parahiṃsāya rato asaññato.",
  "pv32:4.1": "Tassa me sahāyo suhadayo,",
  "pv32:4.2": "Saddho āsi upāsako;",
  "pv32:4.3": "Sopi maṃ anukampanto,",
  "pv32:4.4": "Nivāresi punappunaṃ.",
  "pv32:5.1": "‘Mākāsi pāpakaṃ kammaṃ,",
  "pv32:5.2": "Mā tāta duggatiṃ agā;",
  "pv32:5.3": "Sace icchasi pecca sukhaṃ,",
  "pv32:5.4": "Virama pāṇavadhā asaṃyamā’.",
  "pv32:6.1": "Tassāhaṃ vacanaṃ sutvā,",
  "pv32:6.2": "Sukhakāmassa hitānukampino;",
  "pv32:6.3": "Nākāsiṃ sakalānusāsaniṃ,",
  "pv32:6.4": "Cirapāpābhirato abuddhimā.",
  "pv32:7.1": "So maṃ puna bhūrisumedhaso,",
  "pv32:7.2": "Anukampāya saṃyame nivesayi;",
  "pv32:7.3": "‘Sace divā hanasi pāṇino,",
  "pv32:7.4": "Atha te rattiṃ bhavatu saṃyamo’.",
  "pv32:8.1": "Svāhaṃ divā hanitvā pāṇino,",
  "pv32:8.2": "Virato rattimahosi saññato;",
  "pv32:8.3": "Rattāhaṃ paricāremi,",
  "pv32:8.4": "Divā khajjāmi duggato.",
  "pv32:9.1": "Tassa kammassa kusalassa,",
  "pv32:9.2": "Anubhomi rattiṃ amānusiṃ;",
  "pv32:9.3": "Divā paṭihatāva kukkurā,",
  "pv32:9.4": "Upadhāvanti samantā khādituṃ.",
  "pv32:10.1": "Ye ca te satatānuyogino,",
  "pv32:10.2": "Dhuvaṃ payuttā sugatassa sāsane;",
  "pv32:10.3": "Maññāmi te amatameva kevalaṃ,",
  "pv32:10.4": "Adhigacchanti padaṃ asaṅkhatan”ti.",
  "pv32:11.1": "Migaluddakapetavatthu sattamaṃ."
}