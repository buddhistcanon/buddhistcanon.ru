{
  "pv4:0.1": "Petavatthu",
  "pv4:0.2": "Uragavagga",
  "pv4:0.3": "4. Piṭṭhadhītalikapetavatthu",
  "pv4:1.1": "“Yaṃ kiñcārammaṇaṃ katvā,",
  "pv4:1.2": "dajjā dānaṃ amaccharī;",
  "pv4:1.3": "Pubbapete ca ārabbha,",
  "pv4:1.4": "atha vā vatthudevatā.",
  "pv4:2.1": "Cattāro ca mahārāje,",
  "pv4:2.2": "lokapāle yasassine;",
  "pv4:2.3": "Kuveraṃ dhataraṭṭhañca,",
  "pv4:2.4": "virūpakkhaṃ virūḷhakaṃ;",
  "pv4:2.5": "Te ceva pūjitā honti,",
  "pv4:2.6": "dāyakā ca anipphalā.",
  "pv4:3.1": "Na hi ruṇṇaṃ vā soko vā,",
  "pv4:3.2": "yā caññā paridevanā;",
  "pv4:3.3": "Na taṃ petassa atthāya,",
  "pv4:3.4": "evaṃ tiṭṭhanti ñātayo.",
  "pv4:4.1": "Ayañca kho dakkhiṇā dinnā,",
  "pv4:4.2": "saṃghamhi suppatiṭṭhitā;",
  "pv4:4.3": "Dīgharattaṃ hitāyassa,",
  "pv4:4.4": "ṭhānaso upakappatī”ti.",
  "pv4:5.1": "Piṭṭhadhītalikapetavatthu catutthaṃ."
}