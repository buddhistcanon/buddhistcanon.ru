{
  "pv3:0.1": "Petavatthu",
  "pv3:0.2": "Uragavagga",
  "pv3:0.3": "3. Pūtimukhapetavatthu",
  "pv3:1.1": "“Dibbaṃ subhaṃ dhāresi vaṇṇadhātuṃ,",
  "pv3:1.2": "Vehāyasaṃ tiṭṭhasi antalikkhe;",
  "pv3:1.3": "Mukhañca te kimayo pūtigandhaṃ,",
  "pv3:1.4": "Khādanti kiṃ kammamakāsi pubbe”.",
  "pv3:2.1": "“Samaṇo ahaṃ pāpotiduṭṭhavāco,",
  "pv3:2.2": "Tapassirūpo mukhasā asaññato;",
  "pv3:2.3": "Laddhā ca me tapasā vaṇṇadhātu,",
  "pv3:2.4": "Mukhañca me pesuṇiyena pūti.",
  "pv3:3.1": "Tayidaṃ tayā nārada sāmaṃ diṭṭhaṃ,",
  "pv3:3.2": "Anukampakā ye kusalā vadeyyuṃ;",
  "pv3:3.3": "‘Mā pesuṇaṃ mā ca musā abhāṇi,",
  "pv3:3.4": "Yakkho tuvaṃ hohisi kāmakāmī’”ti.",
  "pv3:4.1": "Pūtimukhapetavatthu tatiyaṃ."
}