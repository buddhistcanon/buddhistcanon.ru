{
  "pv12:0.1": "Petavatthu",
  "pv12:0.2": "Uragavagga",
  "pv12:0.3": "12. Uragapetavatthu",
  "pv12:1.1": "“Uragova tacaṃ jiṇṇaṃ,",
  "pv12:1.2": "hitvā gacchati saṃ tanuṃ;",
  "pv12:1.3": "Evaṃ sarīre nibbhoge,",
  "pv12:1.4": "pete kālaṅkate sati.",
  "pv12:2.1": "Ḍayhamāno na jānāti,",
  "pv12:2.2": "ñātīnaṃ paridevitaṃ;",
  "pv12:2.3": "Tasmā etaṃ na rodāmi,",
  "pv12:2.4": "gato so tassa yā gati”.",
  "pv12:3.1": "“Anabbhito tato āgā,",
  "pv12:3.2": "nānuññāto ito gato;",
  "pv12:3.3": "Yathāgato tathā gato,",
  "pv12:3.4": "tattha kā paridevanā.",
  "pv12:4.1": "Ḍayhamāno na jānāti,",
  "pv12:4.2": "ñātīnaṃ paridevitaṃ;",
  "pv12:4.3": "Tasmā etaṃ na rodāmi,",
  "pv12:4.4": "gato so tassa yā gati”.",
  "pv12:5.1": "“Sace rode kisā assaṃ,",
  "pv12:5.2": "tattha me kiṃ phalaṃ siyā;",
  "pv12:5.3": "Ñātimittasuhajjānaṃ,",
  "pv12:5.4": "bhiyyo no aratī siyā.",
  "pv12:6.1": "Ḍayhamāno na jānāti,",
  "pv12:6.2": "ñātīnaṃ paridevitaṃ;",
  "pv12:6.3": "Tasmā etaṃ na rodāmi,",
  "pv12:6.4": "gato so tassa yā gati”.",
  "pv12:7.1": "“Yathāpi dārako candaṃ,",
  "pv12:7.2": "gacchantamanurodati;",
  "pv12:7.3": "Evaṃ sampadamevetaṃ,",
  "pv12:7.4": "yo petamanusocati.",
  "pv12:8.1": "Ḍayhamāno na jānāti,",
  "pv12:8.2": "ñātīnaṃ paridevitaṃ;",
  "pv12:8.3": "Tasmā etaṃ na rodāmi,",
  "pv12:8.4": "gato so tassa yā gati”.",
  "pv12:9.1": "“Yathāpi brahme udakumbho,",
  "pv12:9.2": "bhinno appaṭisandhiyo;",
  "pv12:9.3": "Evaṃ sampadamevetaṃ,",
  "pv12:9.4": "yo petamanusocati.",
  "pv12:10.1": "Ḍayhamāno na jānāti,",
  "pv12:10.2": "ñātīnaṃ paridevitaṃ;",
  "pv12:10.3": "Tasmā etaṃ na rodāmi,",
  "pv12:10.4": "gato so tassa yā gatī”ti.",
  "pv12:11.1": "Uragapetavatthu dvādasamaṃ.",
  "pv12:12.1": "Uragavaggo paṭhamo.",
  "pv12:13.1": "Tassuddānaṃ",
  "pv12:14.1": "Khettañca sūkaraṃ pūti,",
  "pv12:14.2": "piṭṭhaṃ cāpi tirokuṭṭaṃ;",
  "pv12:14.3": "Pañcāpi sattaputtañca,",
  "pv12:14.4": "goṇaṃ pesakārakañca;",
  "pv12:14.5": "Tathā khallāṭiyaṃ nāgaṃ,",
  "pv12:14.6": "dvādasaṃ uragañcevāti."
}