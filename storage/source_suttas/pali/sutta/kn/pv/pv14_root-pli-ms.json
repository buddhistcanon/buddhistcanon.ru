{
  "pv14:0.1": "Petavatthu",
  "pv14:0.2": "Ubbarivagga",
  "pv14:0.3": "2. Sāriputtattheramātupetivatthu",
  "pv14:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv14:1.2": "kisā dhamanisanthatā;",
  "pv14:1.3": "Upphāsulike kisike,",
  "pv14:1.4": "kā nu tvaṃ idha tiṭṭhasi”.",
  "pv14:2.1": "“Ahaṃ te sakiyā mātā,",
  "pv14:2.2": "pubbe aññāsu jātīsu;",
  "pv14:2.3": "Upapannā pettivisayaṃ,",
  "pv14:2.4": "khuppipāsasamappitā.",
  "pv14:3.1": "Chaḍḍitaṃ khipitaṃ kheḷaṃ,",
  "pv14:3.2": "siṅghāṇikaṃ silesumaṃ;",
  "pv14:3.3": "Vasañca ḍayhamānānaṃ,",
  "pv14:3.4": "vijātānañca lohitaṃ.",
  "pv14:4.1": "Vaṇikānañca yaṃ ghāna-",
  "pv14:4.2": "sīsacchinnāna lohitaṃ;",
  "pv14:4.3": "Khudāparetā bhuñjāmi,",
  "pv14:4.4": "itthipurisanissitaṃ.",
  "pv14:5.1": "Pubbalohitaṃ bhakkhāmi,",
  "pv14:5.2": "pasūnaṃ mānusāna ca;",
  "pv14:5.3": "Aleṇā anagārā ca,",
  "pv14:5.4": "nīlamañcaparāyaṇā.",
  "pv14:6.1": "Dehi puttaka me dānaṃ,",
  "pv14:6.2": "datvā anvādisāhi me;",
  "pv14:6.3": "Appeva nāma mucceyyaṃ,",
  "pv14:6.4": "pubbalohitabhojanā”ti.",
  "pv14:7.1": "Mātuyā vacanaṃ sutvā,",
  "pv14:7.2": "upatissonukampako;",
  "pv14:7.3": "Āmantayi moggallānaṃ,",
  "pv14:7.4": "anuruddhañca kappinaṃ.",
  "pv14:8.1": "Catasso kuṭiyo katvā,",
  "pv14:8.2": "saṃghe cātuddise adā;",
  "pv14:8.3": "Kuṭiyo annapānañca,",
  "pv14:8.4": "mātu dakkhiṇamādisī.",
  "pv14:9.1": "Samanantarānuddiṭṭhe,",
  "pv14:9.2": "vipāko udapajjatha;",
  "pv14:9.3": "Bhojanaṃ pānīyaṃ vatthaṃ,",
  "pv14:9.4": "dakkhiṇāya idaṃ phalaṃ.",
  "pv14:10.1": "Tato suddhā sucivasanā,",
  "pv14:10.2": "kāsikuttamadhārinī;",
  "pv14:10.3": "Vicittavatthābharaṇā,",
  "pv14:10.4": "kolitaṃ upasaṅkami.",
  "pv14:11.1": "“Abhikkantena vaṇṇena,",
  "pv14:11.2": "yā tvaṃ tiṭṭhasi devate;",
  "pv14:11.3": "Obhāsentī disā sabbā,",
  "pv14:11.4": "osadhī viya tārakā.",
  "pv14:12.1": "Kena tetādiso vaṇṇo,",
  "pv14:12.2": "kena te idha mijjhati;",
  "pv14:12.3": "Uppajjanti ca te bhogā,",
  "pv14:12.4": "ye keci manaso piyā.",
  "pv14:13.1": "Pucchāmi taṃ devi mahānubhāve,",
  "pv14:13.2": "Manussabhūtā kimakāsi puññaṃ;",
  "pv14:13.3": "Kenāsi evaṃ jalitānubhāvā,",
  "pv14:13.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv14:14.1": "“Sāriputtassāhaṃ mātā,",
  "pv14:14.2": "pubbe aññāsu jātīsu;",
  "pv14:14.3": "Upapannā pettivisayaṃ,",
  "pv14:14.4": "khuppipāsasamappitā.",
  "pv14:15.1": "Chaḍḍitaṃ khipitaṃ kheḷaṃ,",
  "pv14:15.2": "siṅghāṇikaṃ silesumaṃ;",
  "pv14:15.3": "Vasañca ḍayhamānānaṃ,",
  "pv14:15.4": "vijātānañca lohitaṃ.",
  "pv14:16.1": "Vaṇikānañca yaṃ ghāna-",
  "pv14:16.2": "sīsacchinnāna lohitaṃ;",
  "pv14:16.3": "Khudāparetā bhuñjāmi,",
  "pv14:16.4": "itthipurisanissitaṃ.",
  "pv14:17.1": "Pubbalohitaṃ bhakkhissaṃ,",
  "pv14:17.2": "pasūnaṃ mānusāna ca;",
  "pv14:17.3": "Aleṇā anagārā ca,",
  "pv14:17.4": "nīlamañcaparāyaṇā.",
  "pv14:18.1": "Sāriputtassa dānena,",
  "pv14:18.2": "modāmi akutobhayā;",
  "pv14:18.3": "Muniṃ kāruṇikaṃ loke,",
  "pv14:18.4": "bhante vanditumāgatā”ti.",
  "pv14:19.1": "Sāriputtattherassa mātupetivatthu dutiyaṃ."
}