{
  "pv16:0.1": "Petavatthu",
  "pv16:0.2": "Ubbarivagga",
  "pv16:0.3": "4. Nandāpetivatthu",
  "pv16:1.1": "“Kāḷī dubbaṇṇarūpāsi,",
  "pv16:1.2": "pharusā bhīrudassanā;",
  "pv16:1.3": "Piṅgalāsi kaḷārāsi,",
  "pv16:1.4": "na taṃ maññāmi mānusin”ti.",
  "pv16:2.1": "“Ahaṃ nandā nandisena,",
  "pv16:2.2": "bhariyā te pure ahuṃ;",
  "pv16:2.3": "Pāpakammaṃ karitvāna,",
  "pv16:2.4": "petalokaṃ ito gatā”ti.",
  "pv16:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv16:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv16:3.3": "Kissa kammavipākena,",
  "pv16:3.4": "petalokaṃ ito gatā”ti.",
  "pv16:4.1": "“Caṇḍī ca pharusā cāsiṃ,",
  "pv16:4.2": "tayi cāpi agāravā;",
  "pv16:4.3": "Tāhaṃ duruttaṃ vatvāna,",
  "pv16:4.4": "petalokaṃ ito gatā”ti.",
  "pv16:5.1": "“Handuttarīyaṃ dadāmi te,",
  "pv16:5.2": "imaṃ dussaṃ nivāsaya;",
  "pv16:5.3": "Imaṃ dussaṃ nivāsetvā,",
  "pv16:5.4": "ehi nessāmi taṃ gharaṃ.",
  "pv16:6.1": "Vatthañca annapānañca,",
  "pv16:6.2": "lacchasi tvaṃ gharaṃ gatā;",
  "pv16:6.3": "Putte ca te passissasi,",
  "pv16:6.4": "suṇisāyo ca dakkhasī”ti.",
  "pv16:7.1": "“Hatthena hatthe te dinnaṃ,",
  "pv16:7.2": "na mayhaṃ upakappati;",
  "pv16:7.3": "Bhikkhū ca sīlasampanne,",
  "pv16:7.4": "vītarāge bahussute.",
  "pv16:8.1": "Tappehi annapānena,",
  "pv16:8.2": "mama dakkhiṇamādisa;",
  "pv16:8.3": "Tadāhaṃ sukhitā hessaṃ,",
  "pv16:8.4": "sabbakāmasamiddhinī”ti.",
  "pv16:9.1": "Sādhūti so paṭissutvā,",
  "pv16:9.2": "dānaṃ vipulamākiri;",
  "pv16:9.3": "Annaṃ pānaṃ khādanīyaṃ,",
  "pv16:9.4": "vatthasenāsanāni ca;",
  "pv16:9.5": "Chattaṃ gandhañca mālañca,",
  "pv16:9.6": "vividhā ca upāhanā.",
  "pv16:10.1": "Bhikkhū ca sīlasampanne,",
  "pv16:10.2": "vītarāge bahussute;",
  "pv16:10.3": "Tappetvā annapānena,",
  "pv16:10.4": "tassā dakkhiṇamādisī.",
  "pv16:11.1": "Samanantarānuddiṭṭhe,",
  "pv16:11.2": "vipāko udapajjatha;",
  "pv16:11.3": "Bhojanacchādanapānīyaṃ,",
  "pv16:11.4": "dakkhiṇāya idaṃ phalaṃ.",
  "pv16:12.1": "Tato suddhā sucivasanā,",
  "pv16:12.2": "kāsikuttamadhārinī;",
  "pv16:12.3": "Vicittavatthābharaṇā,",
  "pv16:12.4": "sāmikaṃ upasaṅkami.",
  "pv16:13.1": "“Abhikkantena vaṇṇena,",
  "pv16:13.2": "yā tvaṃ tiṭṭhasi devate;",
  "pv16:13.3": "Obhāsentī disā sabbā,",
  "pv16:13.4": "osadhī viya tārakā.",
  "pv16:14.1": "Kena tetādiso vaṇṇo,",
  "pv16:14.2": "kena te idha mijjhati;",
  "pv16:14.3": "Uppajjanti ca te bhogā,",
  "pv16:14.4": "ye keci manaso piyā.",
  "pv16:15.1": "Pucchāmi taṃ devi mahānubhāve,",
  "pv16:15.2": "Manussabhūtā kimakāsi puññaṃ;",
  "pv16:15.3": "Kenāsi evaṃ jalitānubhāvā,",
  "pv16:15.4": "Vaṇṇo ca te sabbadisā pabhāsatī”ti.",
  "pv16:16.1": "“Ahaṃ nandā nandisena,",
  "pv16:16.2": "bhariyā te pure ahuṃ;",
  "pv16:16.3": "Pāpakammaṃ karitvāna,",
  "pv16:16.4": "petalokaṃ ito gatā.",
  "pv16:17.1": "Tava dinnena dānena,",
  "pv16:17.2": "modāmi akutobhayā;",
  "pv16:17.3": "Ciraṃ jīva gahapati,",
  "pv16:17.4": "saha sabbehi ñātibhi;",
  "pv16:17.5": "Asokaṃ virajaṃ khemaṃ,",
  "pv16:17.6": "āvāsaṃ vasavattinaṃ.",
  "pv16:18.1": "Idha dhammaṃ caritvāna,",
  "pv16:18.2": "Dānaṃ datvā gahapati;",
  "pv16:18.3": "Vineyya maccheramalaṃ samūlaṃ,",
  "pv16:18.4": "Anindito saggamupehi ṭhānan”ti.",
  "pv16:19.1": "Nandāpetivatthu catutthaṃ."
}