{
  "pv50:0.1": "Petavatthu",
  "pv50:0.2": "Mahāvagga",
  "pv50:0.3": "15. Seṭṭhiputtapetavatthu",
  "pv50:1.1": "“Saṭṭhivassasahassāni,",
  "pv50:1.2": "paripuṇṇāni sabbaso;",
  "pv50:1.3": "Niraye paccamānānaṃ,",
  "pv50:1.4": "kadā anto bhavissati.",
  "pv50:2.1": "Natthi anto kuto anto,",
  "pv50:2.2": "na anto paṭidissati;",
  "pv50:2.3": "Tathā hi pakataṃ pāpaṃ,",
  "pv50:2.4": "tuyhaṃ mayhañca mārisā.",
  "pv50:3.1": "Dujjīvitamajīvamha,",
  "pv50:3.2": "ye sante na dadamhase;",
  "pv50:3.3": "Santesu deyyadhammesu,",
  "pv50:3.4": "dīpaṃ nākamha attano.",
  "pv50:4.1": "Sohaṃ nūna ito gantvā,",
  "pv50:4.2": "yoniṃ laddhāna mānusiṃ;",
  "pv50:4.3": "Vadaññū sīlasampanno,",
  "pv50:4.4": "kāhāmi kusalaṃ bahun”ti.",
  "pv50:5.1": "Seṭṭhiputtapetavatthu pannarasamaṃ."
}