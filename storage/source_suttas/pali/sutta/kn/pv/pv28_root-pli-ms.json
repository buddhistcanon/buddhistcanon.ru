{
  "pv28:0.1": "Petavatthu",
  "pv28:0.2": "Cūḷavagga",
  "pv28:0.3": "3. Rathakārapetivatthu",
  "pv28:1.1": "“Veḷuriyathambhaṃ ruciraṃ pabhassaraṃ,",
  "pv28:1.2": "Vimānamāruyha anekacittaṃ;",
  "pv28:1.3": "Tatthacchasi devi mahānubhāve,",
  "pv28:1.4": "Pathaddhani pannaraseva cando.",
  "pv28:2.1": "Vaṇṇo ca te kanakassa sannibho,",
  "pv28:2.2": "Uttattarūpo bhusa dassaneyyo;",
  "pv28:2.3": "Pallaṅkaseṭṭhe atule nisinnā,",
  "pv28:2.4": "Ekā tuvaṃ natthi ca tuyha sāmiko.",
  "pv28:3.1": "Imā ca te pokkharaṇī samantā,",
  "pv28:3.2": "Pahūtamalyā bahupuṇḍarīkā;",
  "pv28:3.3": "Suvaṇṇacuṇṇehi samantamotthatā,",
  "pv28:3.4": "Na tattha paṅko paṇako ca vijjati.",
  "pv28:4.1": "Haṃsā cime dassanīyā manoramā,",
  "pv28:4.2": "Udakasmimanupariyanti sabbadā;",
  "pv28:4.3": "Samayya vaggūpanadanti sabbe,",
  "pv28:4.4": "Bindussarā dundubhīnaṃva ghoso.",
  "pv28:5.1": "Daddallamānā yasasā yasassinī,",
  "pv28:5.2": "Nāvāya ca tvaṃ avalamba tiṭṭhasi;",
  "pv28:5.3": "Āḷārapamhe hasite piyaṃvade,",
  "pv28:5.4": "Sabbaṅgakalyāṇi bhusaṃ virocasi.",
  "pv28:6.1": "Idaṃ vimānaṃ virajaṃ same ṭhitaṃ,",
  "pv28:6.2": "Uyyānavantaṃ ratinandivaḍḍhanaṃ;",
  "pv28:6.3": "Icchāmahaṃ nāri anomadassane,",
  "pv28:6.4": "Tayā saha nandane idha moditun”ti.",
  "pv28:7.1": "“Karohi kammaṃ idha vedanīyaṃ,",
  "pv28:7.2": "Cittañca te idha nihitaṃ bhavatu;",
  "pv28:7.3": "Katvāna kammaṃ idha vedanīyaṃ,",
  "pv28:7.4": "Evaṃ mamaṃ lacchasi kāmakāminin”ti.",
  "pv28:8.1": "“Sādhū”ti so tassā paṭissuṇitvā,",
  "pv28:8.2": "Akāsi kammaṃ tahiṃ vedanīyaṃ;",
  "pv28:8.3": "Katvāna kammaṃ tahiṃ vedanīyaṃ,",
  "pv28:8.4": "Upapajji so māṇavo tassā sahabyatanti.",
  "pv28:9.1": "Rathakārapetivatthu tatiyaṃ.",
  "pv28:9.2": "Bhāṇavāraṃ dutiyaṃ."
}