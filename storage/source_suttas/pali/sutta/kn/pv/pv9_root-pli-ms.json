{
  "pv9:0.1": "Petavatthu",
  "pv9:0.2": "Uragavagga",
  "pv9:0.3": "9. Mahāpesakārapetivatthu",
  "pv9:1.1": "“Gūthañca muttaṃ ruhirañca pubbaṃ,",
  "pv9:1.2": "Paribhuñjati kissa ayaṃ vipāko;",
  "pv9:1.3": "Ayaṃ nu kiṃ kammamakāsi nārī,",
  "pv9:1.4": "Yā sabbadā lohitapubbabhakkhā.",
  "pv9:2.1": "Navāni vatthāni subhāni ceva,",
  "pv9:2.2": "Mudūni suddhāni ca lomasāni;",
  "pv9:2.3": "Dinnānimissā kitakā bhavanti,",
  "pv9:2.4": "Ayaṃ nu kiṃ kammamakāsi nārī”ti.",
  "pv9:3.1": "“Bhariyā mamesā ahū bhadante,",
  "pv9:3.2": "Adāyikā maccharinī kadariyā;",
  "pv9:3.3": "Sā maṃ dadantaṃ samaṇabrāhmaṇānaṃ,",
  "pv9:3.4": "Akkosati ca paribhāsati ca.",
  "pv9:4.1": "‘Gūthañca muttaṃ ruhirañca pubbaṃ,",
  "pv9:4.2": "Paribhuñja tvaṃ asuciṃ sabbakālaṃ;",
  "pv9:4.3": "Etaṃ te paralokasmiṃ hotu,",
  "pv9:4.4": "Vatthā ca te kitakasamā bhavantu’;",
  "pv9:4.5": "Etādisaṃ duccaritaṃ caritvā,",
  "pv9:4.6": "Idhāgatā cirarattāya khādatī”ti.",
  "pv9:5.1": "Mahāpesakārapetivatthu navamaṃ."
}