{
  "pv33:0.1": "Petavatthu",
  "pv33:0.2": "Cūḷavagga",
  "pv33:0.3": "8. Dutiyamigaluddakapetavatthu",
  "pv33:1.1": "“Kūṭāgāre ca pāsāde,",
  "pv33:1.2": "pallaṅke gonakatthate;",
  "pv33:1.3": "Pañcaṅgikena turiyena,",
  "pv33:1.4": "ramasi suppavādite.",
  "pv33:2.1": "Tato ratyā vivasāne,",
  "pv33:2.2": "sūriyuggamanaṃ pati;",
  "pv33:2.3": "Apaviddho susānasmiṃ,",
  "pv33:2.4": "bahudukkhaṃ nigacchasi.",
  "pv33:3.1": "Kiṃ nu kāyena vācāya,",
  "pv33:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv33:3.3": "Kissa kammavipākena,",
  "pv33:3.4": "idaṃ dukkhaṃ nigacchasi”.",
  "pv33:4.1": "“Ahaṃ rājagahe ramme,",
  "pv33:4.2": "ramaṇīye giribbaje;",
  "pv33:4.3": "Migaluddo pure āsiṃ,",
  "pv33:4.4": "luddo cāsimasaññato.",
  "pv33:5.1": "Tassa me sahāyo suhadayo,",
  "pv33:5.2": "Saddho āsi upāsako;",
  "pv33:5.3": "Tassa kulupako bhikkhu,",
  "pv33:5.4": "Āsi gotamasāvako;",
  "pv33:5.5": "Sopi maṃ anukampanto,",
  "pv33:5.6": "Nivāresi punappunaṃ.",
  "pv33:6.1": "‘Mākāsi pāpakaṃ kammaṃ,",
  "pv33:6.2": "Mā tāta duggatiṃ agā;",
  "pv33:6.3": "Sace icchasi pecca sukhaṃ,",
  "pv33:6.4": "Virama pāṇavadhā asaṃyamā’.",
  "pv33:7.1": "Tassāhaṃ vacanaṃ sutvā,",
  "pv33:7.2": "Sukhakāmassa hitānukampino;",
  "pv33:7.3": "Nākāsiṃ sakalānusāsaniṃ,",
  "pv33:7.4": "Cirapāpābhirato abuddhimā.",
  "pv33:8.1": "So maṃ puna bhūrisumedhaso,",
  "pv33:8.2": "Anukampāya saṃyame nivesayi;",
  "pv33:8.3": "‘Sace divā hanasi pāṇino,",
  "pv33:8.4": "Atha te rattiṃ bhavatu saṃyamo’.",
  "pv33:9.1": "Svāhaṃ divā hanitvā pāṇino,",
  "pv33:9.2": "Virato rattimahosi saññato;",
  "pv33:9.3": "Rattāhaṃ paricāremi,",
  "pv33:9.4": "Divā khajjāmi duggato.",
  "pv33:10.1": "Tassa kammassa kusalassa,",
  "pv33:10.2": "Anubhomi rattiṃ amānusiṃ;",
  "pv33:10.3": "Divā paṭihatāva kukkurā,",
  "pv33:10.4": "Upadhāvanti samantā khādituṃ.",
  "pv33:11.1": "Ye ca te satatānuyogino,",
  "pv33:11.2": "Dhuvaṃ payuttā sugatassa sāsane;",
  "pv33:11.3": "Maññāmi te amatameva kevalaṃ,",
  "pv33:11.4": "Adhigacchanti padaṃ asaṅkhatan”ti.",
  "pv33:12.1": "Dutiyamigaluddakapetavatthu aṭṭhamaṃ."
}