{
  "pv38:0.1": "Petavatthu",
  "pv38:0.2": "Mahāvagga",
  "pv38:0.3": "3. Nandakapetavatthu",
  "pv38:1.1": "Rājā piṅgalako nāma,",
  "pv38:1.2": "Suraṭṭhānaṃ adhipati ahu;",
  "pv38:1.3": "Moriyānaṃ upaṭṭhānaṃ gantvā,",
  "pv38:1.4": "Suraṭṭhaṃ punarāgamā.",
  "pv38:2.1": "Uṇhe majjhanhike kāle,",
  "pv38:2.2": "Rājā paṅkaṃ upāgami;",
  "pv38:2.3": "Addasa maggaṃ ramaṇīyaṃ,",
  "pv38:2.4": "Petānaṃ taṃ vaṇṇupathaṃ.",
  "pv38:3.1": "Sārathiṃ āmantayī rājā—",
  "pv38:4.1": "“Ayaṃ maggo ramaṇīyo,",
  "pv38:4.2": "khemo sovatthiko sivo;",
  "pv38:4.3": "Iminā sārathi yāma,",
  "pv38:4.4": "suraṭṭhānaṃ santike ito”.",
  "pv38:5.1": "Tena pāyāsi soraṭṭho,",
  "pv38:5.2": "senāya caturaṅginiyā;",
  "pv38:5.3": "Ubbiggarūpo puriso,",
  "pv38:5.4": "soraṭṭhaṃ etadabravi.",
  "pv38:6.1": "“Kummaggaṃ paṭipannamhā,",
  "pv38:6.2": "bhiṃsanaṃ lomahaṃsanaṃ;",
  "pv38:6.3": "Purato dissati maggo,",
  "pv38:6.4": "pacchato ca na dissati.",
  "pv38:7.1": "Kummaggaṃ paṭipannamhā,",
  "pv38:7.2": "yamapurisāna santike;",
  "pv38:7.3": "Amānuso vāyati gandho,",
  "pv38:7.4": "ghoso suyyati dāruṇo”.",
  "pv38:8.1": "Saṃviggo rājā soraṭṭho,",
  "pv38:8.2": "sārathiṃ etadabravi;",
  "pv38:8.3": "“Kummaggaṃ paṭipannamhā,",
  "pv38:8.4": "bhiṃsanaṃ lomahaṃsanaṃ;",
  "pv38:8.5": "Purato dissati maggo,",
  "pv38:8.6": "pacchato ca na dissati.",
  "pv38:9.1": "Kummaggaṃ paṭipannamhā,",
  "pv38:9.2": "yamapurisāna santike;",
  "pv38:9.3": "Amānuso vāyati gandho,",
  "pv38:9.4": "ghoso suyyati dāruṇo”.",
  "pv38:10.1": "Hatthikkhandhaṃ samāruyha,",
  "pv38:10.2": "Olokento catuddisaṃ;",
  "pv38:10.3": "Addasa nigrodhaṃ ramaṇīyaṃ,",
  "pv38:10.4": "Pādapaṃ chāyāsampannaṃ;",
  "pv38:10.5": "Nīlabbhavaṇṇasadisaṃ,",
  "pv38:10.6": "Meghavaṇṇasirīnibhaṃ.",
  "pv38:11.1": "Sārathiṃ āmantayī rājā,",
  "pv38:11.2": "“kiṃ eso dissati brahā;",
  "pv38:11.3": "Nīlabbhavaṇṇasadiso,",
  "pv38:11.4": "meghavaṇṇasirīnibho”.",
  "pv38:12.1": "“Nigrodho so mahārāja,",
  "pv38:12.2": "pādapo chāyāsampanno;",
  "pv38:12.3": "Nīlabbhavaṇṇasadiso,",
  "pv38:12.4": "meghavaṇṇasirīnibho”.",
  "pv38:13.1": "Tena pāyāsi soraṭṭho,",
  "pv38:13.2": "yena so dissate brahā;",
  "pv38:13.3": "Nīlabbhavaṇṇasadiso,",
  "pv38:13.4": "meghavaṇṇasirīnibho.",
  "pv38:14.1": "Hatthikkhandhato oruyha,",
  "pv38:14.2": "rājā rukkhaṃ upāgami;",
  "pv38:14.3": "Nisīdi rukkhamūlasmiṃ,",
  "pv38:14.4": "sāmacco saparijjano;",
  "pv38:14.5": "Pūraṃ pānīyasarakaṃ,",
  "pv38:14.6": "pūve vitte ca addasa.",
  "pv38:15.1": "Puriso ca devavaṇṇī,",
  "pv38:15.2": "sabbābharaṇabhūsito;",
  "pv38:15.3": "Upasaṅkamitvā rājānaṃ,",
  "pv38:15.4": "soraṭṭhaṃ etadabravi.",
  "pv38:16.1": "“Svāgataṃ te mahārāja,",
  "pv38:16.2": "atho te adurāgataṃ;",
  "pv38:16.3": "Pivatu devo pānīyaṃ,",
  "pv38:16.4": "pūve khāda arindama”.",
  "pv38:17.1": "Pivitvā rājā pānīyaṃ,",
  "pv38:17.2": "sāmacco saparijjano;",
  "pv38:17.3": "Pūve khāditvā pitvā ca,",
  "pv38:17.4": "soraṭṭho etadabravi.",
  "pv38:18.1": "“Devatā nusi gandhabbo,",
  "pv38:18.2": "adu sakko purindado;",
  "pv38:18.3": "Ajānantā taṃ pucchāma,",
  "pv38:18.4": "kathaṃ jānemu taṃ mayan”ti.",
  "pv38:19.1": "“Nāmhi devo na gandhabbo,",
  "pv38:19.2": "nāpi sakko purindado;",
  "pv38:19.3": "Peto ahaṃ mahārāja,",
  "pv38:19.4": "suraṭṭhā idha māgato”ti.",
  "pv38:20.1": "“Kiṃsīlo kiṃsamācāro,",
  "pv38:20.2": "suraṭṭhasmiṃ pure tuvaṃ;",
  "pv38:20.3": "Kena te brahmacariyena,",
  "pv38:20.4": "ānubhāvo ayaṃ tavā”ti.",
  "pv38:21.1": "“Taṃ suṇohi mahārāja,",
  "pv38:21.2": "arindama raṭṭhavaḍḍhana;",
  "pv38:21.3": "Amaccā pārisajjā ca,",
  "pv38:21.4": "brāhmaṇo ca purohito.",
  "pv38:22.1": "Suraṭṭhasmiṃ ahaṃ deva,",
  "pv38:22.2": "puriso pāpacetaso;",
  "pv38:22.3": "Micchādiṭṭhi ca dussīlo,",
  "pv38:22.4": "kadariyo paribhāsako.",
  "pv38:23.1": "Dadantānaṃ karontānaṃ,",
  "pv38:23.2": "vārayissaṃ bahujjanaṃ;",
  "pv38:23.3": "Aññesaṃ dadamānānaṃ,",
  "pv38:23.4": "antarāyakaro ahaṃ.",
  "pv38:24.1": "Vipāko natthi dānassa,",
  "pv38:24.2": "saṃyamassa kuto phalaṃ;",
  "pv38:24.3": "Natthi ācariyo nāma,",
  "pv38:24.4": "adantaṃ ko damessati.",
  "pv38:25.1": "Samatulyāni bhūtāni,",
  "pv38:25.2": "kuto jeṭṭhāpacāyiko;",
  "pv38:25.3": "Natthi balaṃ vīriyaṃ vā,",
  "pv38:25.4": "kuto uṭṭhānaporisaṃ.",
  "pv38:26.1": "Natthi dānaphalaṃ nāma,",
  "pv38:26.2": "na visodheti verinaṃ;",
  "pv38:26.3": "Laddheyyaṃ labhate macco,",
  "pv38:26.4": "niyatipariṇāmajaṃ.",
  "pv38:27.1": "Natthi mātā pitā bhātā,",
  "pv38:27.2": "loko natthi ito paraṃ;",
  "pv38:27.3": "Natthi dinnaṃ natthi hutaṃ,",
  "pv38:27.4": "sunihitaṃ na vijjati.",
  "pv38:28.1": "Yopi haneyya purisaṃ,",
  "pv38:28.2": "parassa chindate siraṃ;",
  "pv38:28.3": "Na koci kañci hanati,",
  "pv38:28.4": "sattannaṃ vivaramantare.",
  "pv38:29.1": "Acchejjābhejjo hi jīvo,",
  "pv38:29.2": "Aṭṭhaṃso guḷaparimaṇḍalo;",
  "pv38:29.3": "Yojanānaṃ sataṃ pañca,",
  "pv38:29.4": "Ko jīvaṃ chettumarahati.",
  "pv38:30.1": "Yathā suttaguḷe khitte,",
  "pv38:30.2": "nibbeṭhentaṃ palāyati;",
  "pv38:30.3": "Evamevaṃ ca so jīvo,",
  "pv38:30.4": "nibbeṭhento palāyati.",
  "pv38:31.1": "Yathā gāmato nikkhamma,",
  "pv38:31.2": "aññaṃ gāmaṃ pavīsati;",
  "pv38:31.3": "Evamevaṃ ca so jīvo,",
  "pv38:31.4": "aññaṃ bondiṃ pavīsati.",
  "pv38:32.1": "Yathā gehato nikkhamma,",
  "pv38:32.2": "aññaṃ gehaṃ pavīsati;",
  "pv38:32.3": "Evamevaṃ ca so jīvo,",
  "pv38:32.4": "aññaṃ bondiṃ pavīsati.",
  "pv38:33.1": "Cullāsīti mahākappino,",
  "pv38:33.2": "satasahassāni hi;",
  "pv38:33.3": "Ye bālā ye ca paṇḍitā,",
  "pv38:33.4": "saṃsāraṃ khepayitvāna;",
  "pv38:33.5": "Dukkhassantaṃ karissare.",
  "pv38:34.1": "Mitāni sukhadukkhāni,",
  "pv38:34.2": "doṇehi piṭakehi ca;",
  "pv38:34.3": "Jino sabbaṃ pajānāti,",
  "pv38:34.4": "sammūḷhā itarā pajā.",
  "pv38:35.1": "Evaṃdiṭṭhi pure āsiṃ,",
  "pv38:35.2": "sammūḷho mohapāruto;",
  "pv38:35.3": "Micchādiṭṭhi ca dussīlo,",
  "pv38:35.4": "kadariyo paribhāsako.",
  "pv38:36.1": "Oraṃ me chahi māsehi,",
  "pv38:36.2": "kālakiriyā bhavissati;",
  "pv38:36.3": "Ekantakaṭukaṃ ghoraṃ,",
  "pv38:36.4": "nirayaṃ papatissahaṃ.",
  "pv38:37.1": "Catukkaṇṇaṃ catudvāraṃ,",
  "pv38:37.2": "vibhattaṃ bhāgaso mitaṃ;",
  "pv38:37.3": "Ayopākārapariyantaṃ,",
  "pv38:37.4": "ayasā paṭikujjitaṃ.",
  "pv38:38.1": "Tassa ayomayā bhūmi,",
  "pv38:38.2": "jalitā tejasā yutā;",
  "pv38:38.3": "Samantā yojanasataṃ,",
  "pv38:38.4": "pharitvā tiṭṭhati sabbadā.",
  "pv38:39.1": "Vassāni satasahassāni,",
  "pv38:39.2": "ghoso suyyati tāvade;",
  "pv38:39.3": "Lakkho eso mahārāja,",
  "pv38:39.4": "satabhāgavassakoṭiyo.",
  "pv38:40.1": "Koṭisatasahassāni,",
  "pv38:40.2": "niraye paccare janā;",
  "pv38:40.3": "Micchādiṭṭhī ca dussīlā,",
  "pv38:40.4": "ye ca ariyūpavādino.",
  "pv38:41.1": "Tatthāhaṃ dīghamaddhānaṃ,",
  "pv38:41.2": "dukkhaṃ vedissa vedanaṃ;",
  "pv38:41.3": "Phalaṃ pāpassa kammassa,",
  "pv38:41.4": "tasmā socāmahaṃ bhusaṃ.",
  "pv38:42.1": "Taṃ suṇohi mahārāja,",
  "pv38:42.2": "arindama raṭṭhavaḍḍhana;",
  "pv38:42.3": "Dhītā mayhaṃ mahārāja,",
  "pv38:42.4": "uttarā bhaddamatthu te.",
  "pv38:43.1": "Karoti bhaddakaṃ kammaṃ,",
  "pv38:43.2": "sīlesuposathe ratā;",
  "pv38:43.3": "Saññatā saṃvibhāgī ca,",
  "pv38:43.4": "vadaññū vītamaccharā.",
  "pv38:44.1": "Akhaṇḍakārī sikkhāya,",
  "pv38:44.2": "suṇhā parakulesu ca;",
  "pv38:44.3": "Upāsikā sakyamunino,",
  "pv38:44.4": "sambuddhassa sirīmato.",
  "pv38:45.1": "Bhikkhu ca sīlasampanno,",
  "pv38:45.2": "gāmaṃ piṇḍāya pāvisi;",
  "pv38:45.3": "Okkhittacakkhu satimā,",
  "pv38:45.4": "guttadvāro susaṃvuto.",
  "pv38:46.1": "Sapadānaṃ caramāno,",
  "pv38:46.2": "agamā taṃ nivesanaṃ;",
  "pv38:46.3": "‘Tamaddasa mahārāja,",
  "pv38:46.4": "uttarā bhaddamatthu te’.",
  "pv38:47.1": "Pūraṃ pānīyasarakaṃ,",
  "pv38:47.2": "pūve vitte ca sā adā;",
  "pv38:47.3": "‘Pitā me kālakato bhante,",
  "pv38:47.4": "tassetaṃ upakappatu’.",
  "pv38:48.1": "Samanantarānuddiṭṭhe,",
  "pv38:48.2": "vipāko udapajjatha;",
  "pv38:48.3": "Bhuñjāmi kāmakāmīhaṃ,",
  "pv38:48.4": "rājā vessavaṇo yathā.",
  "pv38:49.1": "Taṃ suṇohi mahārāja,",
  "pv38:49.2": "arindama raṭṭhavaḍḍhana;",
  "pv38:49.3": "Sadevakassa lokassa,",
  "pv38:49.4": "buddho aggo pavuccati;",
  "pv38:49.5": "Taṃ buddhaṃ saraṇaṃ gaccha,",
  "pv38:49.6": "saputtadāro arindama.",
  "pv38:50.1": "Aṭṭhaṅgikena maggena,",
  "pv38:50.2": "phusanti amataṃ padaṃ;",
  "pv38:50.3": "Taṃ dhammaṃ saraṇaṃ gaccha,",
  "pv38:50.4": "saputtadāro arindama.",
  "pv38:51.1": "Cattāro ca paṭipannā,",
  "pv38:51.2": "cattāro ca phale ṭhitā;",
  "pv38:51.3": "Esa saṃgho ujubhūto,",
  "pv38:51.4": "paññāsīlasamāhito;",
  "pv38:51.5": "Taṃ saṃghaṃ saraṇaṃ gaccha,",
  "pv38:51.6": "saputtadāro arindama.",
  "pv38:52.1": "Pāṇātipātā viramassu khippaṃ,",
  "pv38:52.2": "Loke adinnaṃ parivajjayassu;",
  "pv38:52.3": "Amajjapo mā ca musā abhāṇi,",
  "pv38:52.4": "Sakena dārena ca hohi tuṭṭho”ti.",
  "pv38:53.1": "“Atthakāmosi me yakkha,",
  "pv38:53.2": "hitakāmosi devate;",
  "pv38:53.3": "Karomi tuyhaṃ vacanaṃ,",
  "pv38:53.4": "tvaṃsi ācariyo mama.",
  "pv38:54.1": "Upemi saraṇaṃ buddhaṃ,",
  "pv38:54.2": "dhammañcāpi anuttaraṃ;",
  "pv38:54.3": "Saṃghañca naradevassa,",
  "pv38:54.4": "gacchāmi saraṇaṃ ahaṃ.",
  "pv38:55.1": "Pāṇātipātā viramāmi khippaṃ,",
  "pv38:55.2": "Loke adinnaṃ parivajjayāmi;",
  "pv38:55.3": "Amajjapo no ca musā bhaṇāmi,",
  "pv38:55.4": "Sakena dārena ca homi tuṭṭho.",
  "pv38:56.1": "Ophuṇāmi mahāvāte,",
  "pv38:56.2": "nadiyā sīghagāmiyā;",
  "pv38:56.3": "Vamāmi pāpikaṃ diṭṭhiṃ,",
  "pv38:56.4": "buddhānaṃ sāsane rato”.",
  "pv38:57.1": "Idaṃ vatvāna soraṭṭho,",
  "pv38:57.2": "viramitvā pāpadassanā;",
  "pv38:57.3": "Namo bhagavato katvā,",
  "pv38:57.4": "pāmokkho rathamāruhīti.",
  "pv38:58.1": "Nandakapetavatthu tatiyaṃ."
}