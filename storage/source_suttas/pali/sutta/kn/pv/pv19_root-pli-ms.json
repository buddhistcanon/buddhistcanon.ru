{
  "pv19:0.1": "Petavatthu",
  "pv19:0.2": "Ubbarivagga",
  "pv19:0.3": "7. Dhanapālaseṭṭhipetavatthu",
  "pv19:1.1": "“Naggo dubbaṇṇarūposi,",
  "pv19:1.2": "kiso dhamanisanthato;",
  "pv19:1.3": "Upphāsuliko kisiko,",
  "pv19:1.4": "ko nu tvamasi mārisa”.",
  "pv19:2.1": "“Ahaṃ bhadante petomhi,",
  "pv19:2.2": "duggato yamalokiko;",
  "pv19:2.3": "Pāpakammaṃ karitvāna,",
  "pv19:2.4": "petalokaṃ ito gato”.",
  "pv19:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv19:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv19:3.3": "Kissa kammavipākena,",
  "pv19:3.4": "petalokaṃ ito gato”.",
  "pv19:4.1": "“Nagaraṃ atthi paṇṇānaṃ,",
  "pv19:4.2": "erakacchanti vissutaṃ;",
  "pv19:4.3": "Tattha seṭṭhi pure āsiṃ,",
  "pv19:4.4": "dhanapāloti maṃ vidū.",
  "pv19:5.1": "Asīti sakaṭavāhānaṃ,",
  "pv19:5.2": "hiraññassa ahosi me;",
  "pv19:5.3": "Pahūtaṃ me jātarūpaṃ,",
  "pv19:5.4": "muttā veḷuriyā bahū.",
  "pv19:6.1": "Tāva mahaddhanassāpi,",
  "pv19:6.2": "na me dātuṃ piyaṃ ahu;",
  "pv19:6.3": "Pidahitvā dvāraṃ bhuñjiṃ,",
  "pv19:6.4": "mā maṃ yācanakāddasuṃ.",
  "pv19:7.1": "Assaddho maccharī cāsiṃ,",
  "pv19:7.2": "kadariyo paribhāsako;",
  "pv19:7.3": "Dadantānaṃ karontānaṃ,",
  "pv19:7.4": "vārayissaṃ bahū jane.",
  "pv19:8.1": "Vipāko natthi dānassa,",
  "pv19:8.2": "saṃyamassa kuto phalaṃ;",
  "pv19:8.3": "Pokkharaññodapānāni,",
  "pv19:8.4": "ārāmāni ca ropite;",
  "pv19:8.5": "Papāyo ca vināsesiṃ,",
  "pv19:8.6": "dugge saṅkamanāni ca.",
  "pv19:9.1": "Svāhaṃ akatakalyāṇo,",
  "pv19:9.2": "katapāpo tato cuto;",
  "pv19:9.3": "Upapanno pettivisayaṃ,",
  "pv19:9.4": "khuppipāsasamappito.",
  "pv19:10.1": "Pañcapaṇṇāsavassāni,",
  "pv19:10.2": "yato kālaṅkato ahaṃ;",
  "pv19:10.3": "Nābhijānāmi bhuttaṃ vā,",
  "pv19:10.4": "pītaṃ vā pana pāniyaṃ.",
  "pv19:11.1": "Yo saṃyamo so vināso,",
  "pv19:11.2": "yo vināso so saṃyamo;",
  "pv19:11.3": "Petā hi kira jānanti,",
  "pv19:11.4": "yo saṃyamo so vināso.",
  "pv19:12.1": "Ahaṃ pure saṃyamissaṃ,",
  "pv19:12.2": "nādāsiṃ bahuke dhane;",
  "pv19:12.3": "Santesu deyyadhammesu,",
  "pv19:12.4": "dīpaṃ nākāsimattano;",
  "pv19:12.5": "Svāhaṃ pacchānutappāmi,",
  "pv19:12.6": "attakammaphalūpago.",
  "pv19:13.1": "Uddhaṃ catūhi māsehi,",
  "pv19:13.2": "kālaṃkiriyā bhavissati;",
  "pv19:13.3": "Ekantakaṭukaṃ ghoraṃ,",
  "pv19:13.4": "nirayaṃ papatissahaṃ.",
  "pv19:14.1": "Catukkaṇṇaṃ catudvāraṃ,",
  "pv19:14.2": "vibhattaṃ bhāgaso mitaṃ;",
  "pv19:14.3": "Ayopākārapariyantaṃ,",
  "pv19:14.4": "ayasā paṭikujjitaṃ.",
  "pv19:15.1": "Tassa ayomayā bhūmi,",
  "pv19:15.2": "jalitā tejasā yutā;",
  "pv19:15.3": "Samantā yojanasataṃ,",
  "pv19:15.4": "pharitvā tiṭṭhati sabbadā.",
  "pv19:16.1": "Tatthāhaṃ dīghamaddhānaṃ,",
  "pv19:16.2": "Dukkhaṃ vedissa vedanaṃ;",
  "pv19:16.3": "Phalaṃ pāpassa kammassa,",
  "pv19:16.4": "Tasmā socāmahaṃ bhusaṃ.",
  "pv19:17.1": "Taṃ vo vadāmi bhaddaṃ vo,",
  "pv19:17.2": "yāvantettha samāgatā;",
  "pv19:17.3": "Mākattha pāpakaṃ kammaṃ,",
  "pv19:17.4": "āvi vā yadi vā raho.",
  "pv19:18.1": "Sace taṃ pāpakaṃ kammaṃ,",
  "pv19:18.2": "karissatha karotha vā;",
  "pv19:18.3": "Na vo dukkhā pamutyatthi,",
  "pv19:18.4": "uppaccāpi palāyataṃ.",
  "pv19:19.1": "Matteyyā hotha petteyyā,",
  "pv19:19.2": "kule jeṭṭhāpacāyikā;",
  "pv19:19.3": "Sāmaññā hotha brahmaññā,",
  "pv19:19.4": "evaṃ saggaṃ gamissathā”ti.",
  "pv19:20.1": "Dhanapālaseṭṭhipetavatthu sattamaṃ."
}