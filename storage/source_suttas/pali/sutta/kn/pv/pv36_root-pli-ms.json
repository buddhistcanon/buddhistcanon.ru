{
  "pv36:0.1": "Petavatthu",
  "pv36:0.2": "Mahāvagga",
  "pv36:0.3": "1. Ambasakkarapetavatthu",
  "pv36:1.1": "Vesālī nāma nagaratthi vajjīnaṃ,",
  "pv36:1.2": "Tattha ahu licchavi ambasakkaro;",
  "pv36:1.3": "Disvāna petaṃ nagarassa bāhiraṃ,",
  "pv36:1.4": "Tattheva pucchittha taṃ kāraṇatthiko.",
  "pv36:2.1": "“Seyyā nisajjā nayimassa atthi,",
  "pv36:2.2": "Abhikkamo natthi paṭikkamo ca;",
  "pv36:2.3": "Asitapītakhāyitavatthabhogā,",
  "pv36:2.4": "Paricārikā sāpi imassa natthi.",
  "pv36:3.1": "Ye ñātakā diṭṭhasutā suhajjā,",
  "pv36:3.2": "Anukampakā yassa ahesuṃ pubbe;",
  "pv36:3.3": "Daṭṭhumpi te dāni na taṃ labhanti,",
  "pv36:3.4": "Virājitatto hi janena tena.",
  "pv36:4.1": "Na oggatattassa bhavanti mittā,",
  "pv36:4.2": "Jahanti mittā vikalaṃ viditvā;",
  "pv36:4.3": "Atthañca disvā parivārayanti,",
  "pv36:4.4": "Bahū mittā uggatattassa honti.",
  "pv36:5.1": "Nihīnatto sabbabhogehi kiccho,",
  "pv36:5.2": "Sammakkhito samparibhinnagatto;",
  "pv36:5.3": "Ussāvabindūva palimpamāno,",
  "pv36:5.4": "Ajja suve jīvitassūparodho.",
  "pv36:6.1": "Etādisaṃ uttamakicchappattaṃ,",
  "pv36:6.2": "Uttāsitaṃ pucimandassa sūle;",
  "pv36:6.3": "‘Atha tvaṃ kena vaṇṇena vadesi yakkha,",
  "pv36:6.4": "Jīva bho jīvitameva seyyo’”ti.",
  "pv36:7.1": "“Sālohito esa ahosi mayhaṃ,",
  "pv36:7.2": "Ahaṃ sarāmi purimāya jātiyā;",
  "pv36:7.3": "Disvā ca me kāruññamahosi rāja,",
  "pv36:7.4": "Mā pāpadhammo nirayaṃ patāyaṃ.",
  "pv36:8.1": "Ito cuto licchavi esa poso,",
  "pv36:8.2": "Sattussadaṃ nirayaṃ ghorarūpaṃ;",
  "pv36:8.3": "Upapajjati dukkaṭakammakārī,",
  "pv36:8.4": "Mahābhitāpaṃ kaṭukaṃ bhayānakaṃ.",
  "pv36:9.1": "Anekabhāgena guṇena seyyo,",
  "pv36:9.2": "Ayameva sūlo nirayena tena;",
  "pv36:9.3": "Ekantadukkhaṃ kaṭukaṃ bhayānakaṃ,",
  "pv36:9.4": "Ekantatibbaṃ nirayaṃ patāyaṃ.",
  "pv36:10.1": "Idañca sutvā vacanaṃ mameso,",
  "pv36:10.2": "Dukkhūpanīto vijaheyya pāṇaṃ;",
  "pv36:10.3": "Tasmā ahaṃ santike na bhaṇāmi,",
  "pv36:10.4": "Mā me kato jīvitassūparodho”.",
  "pv36:11.1": "“Aññāto eso purisassa attho,",
  "pv36:11.2": "Aññampi icchāmase pucchituṃ tuvaṃ;",
  "pv36:11.3": "Okāsakammaṃ sace no karosi,",
  "pv36:11.4": "Pucchāma taṃ no na ca kujjhitabban”ti.",
  "pv36:12.1": "“Addhā paṭiññā me tadā ahu,",
  "pv36:12.2": "Nācikkhanā appasannassa hoti;",
  "pv36:12.3": "Akāmā saddheyyavacoti katvā,",
  "pv36:12.4": "Pucchassu maṃ kāmaṃ yathā visayhan”ti.",
  "pv36:13.1": "“Yaṃ kiñcahaṃ cakkhunā passissāmi,",
  "pv36:13.2": "Sabbampi tāhaṃ abhisaddaheyyaṃ;",
  "pv36:13.3": "Disvāva taṃ nopi ce saddaheyyaṃ,",
  "pv36:13.4": "Kareyyāsi me yakkha niyassakamman”ti.",
  "pv36:14.1": "“Saccappaṭiññā tava mesā hotu,",
  "pv36:14.2": "Sutvāna dhammaṃ labha suppasādaṃ;",
  "pv36:14.3": "Aññatthiko no ca paduṭṭhacitto,",
  "pv36:14.4": "Yaṃ te sutaṃ asutañcāpi dhammaṃ;",
  "pv36:14.5": "Sabbampi akkhissaṃ yathā pajānanti”.",
  "pv36:15.1": "“Setena assena alaṅkatena,",
  "pv36:15.2": "Upayāsi sūlāvutakassa santike;",
  "pv36:15.3": "Yānaṃ idaṃ abbhutaṃ dassaneyyaṃ,",
  "pv36:15.4": "Kissetaṃ kammassa ayaṃ vipāko”ti.",
  "pv36:16.1": "“Vesāliyā nagarassa majjhe,",
  "pv36:16.2": "Cikkhallamagge narakaṃ ahosi;",
  "pv36:16.3": "Gosīsamekāhaṃ pasannacitto,",
  "pv36:16.4": "Setaṃ gahetvā narakasmiṃ nikkhipiṃ.",
  "pv36:17.1": "Etasmiṃ pādāni patiṭṭhapetvā,",
  "pv36:17.2": "Mayañca aññe ca atikkamimhā;",
  "pv36:17.3": "Yānaṃ idaṃ abbhutaṃ dassaneyyaṃ,",
  "pv36:17.4": "Tasseva kammassa ayaṃ vipāko”ti.",
  "pv36:18.1": "“Vaṇṇo ca te sabbadisā pabhāsati,",
  "pv36:18.2": "Gandho ca te sabbadisā pavāyati;",
  "pv36:18.3": "Yakkhiddhipattosi mahānubhāvo,",
  "pv36:18.4": "Naggo cāsi kissa ayaṃ vipāko”ti.",
  "pv36:19.1": "“Akkodhano niccapasannacitto,",
  "pv36:19.2": "Saṇhāhi vācāhi janaṃ upemi;",
  "pv36:19.3": "Tasseva kammassa ayaṃ vipāko,",
  "pv36:19.4": "Dibbo me vaṇṇo satataṃ pabhāsati.",
  "pv36:20.1": "Yasañca kittiñca dhamme ṭhitānaṃ,",
  "pv36:20.2": "Disvāna mantemi pasannacitto;",
  "pv36:20.3": "Tasseva kammassa ayaṃ vipāko,",
  "pv36:20.4": "Dibbo me gandho satataṃ pavāyati.",
  "pv36:21.1": "Sahāyānaṃ titthasmiṃ nhāyantānaṃ,",
  "pv36:21.2": "Thale gahetvā nidahissa dussaṃ;",
  "pv36:21.3": "Khiḍḍatthiko no ca paduṭṭhacitto,",
  "pv36:21.4": "Tenamhi naggo kasirā ca vuttī”ti.",
  "pv36:22.1": "“Yo kīḷamāno pakaroti pāpaṃ,",
  "pv36:22.2": "Tassedisaṃ kammavipākamāhu;",
  "pv36:22.3": "Akīḷamāno pana yo karoti,",
  "pv36:22.4": "Kiṃ tassa kammassa vipākamāhū”ti.",
  "pv36:23.1": "“Ye duṭṭhasaṅkappamanā manussā,",
  "pv36:23.2": "Kāyena vācāya ca saṃkiliṭṭhā;",
  "pv36:23.3": "Kāyassa bhedā abhisamparāyaṃ,",
  "pv36:23.4": "Asaṃsayaṃ te nirayaṃ upenti.",
  "pv36:24.1": "Apare pana sugatimāsamānā,",
  "pv36:24.2": "Dāne ratā saṅgahitattabhāvā;",
  "pv36:24.3": "Kāyassa bhedā abhisamparāyaṃ,",
  "pv36:24.4": "Asaṃsayaṃ te sugatiṃ upentī”ti.",
  "pv36:25.1": "“Taṃ kinti jāneyyamahaṃ avecca,",
  "pv36:25.2": "Kalyāṇapāpassa ayaṃ vipāko;",
  "pv36:25.3": "Kiṃ vāhaṃ disvā abhisaddaheyyaṃ,",
  "pv36:25.4": "Ko vāpi maṃ saddahāpeyya etan”ti.",
  "pv36:26.1": "“Disvā ca sutvā abhisaddahassu,",
  "pv36:26.2": "Kalyāṇapāpassa ayaṃ vipāko;",
  "pv36:26.3": "Kalyāṇapāpe ubhaye asante,",
  "pv36:26.4": "Siyā nu sattā sugatā duggatā vā.",
  "pv36:27.1": "No cettha kammāni kareyyuṃ maccā,",
  "pv36:27.2": "Kalyāṇapāpāni manussaloke;",
  "pv36:27.3": "Nāhesuṃ sattā sugatā duggatā vā,",
  "pv36:27.4": "Hīnā paṇītā ca manussaloke.",
  "pv36:28.1": "Yasmā ca kammāni karonti maccā,",
  "pv36:28.2": "Kalyāṇapāpāni manussaloke;",
  "pv36:28.3": "Tasmā hi sattā sugatā duggatā vā,",
  "pv36:28.4": "Hīnā paṇītā ca manussaloke.",
  "pv36:29.1": "Dvayajja kammānaṃ vipākamāhu,",
  "pv36:29.2": "Sukhassa dukkhassa ca vedanīyaṃ;",
  "pv36:29.3": "Tā devatāyo paricārayanti,",
  "pv36:29.4": "Paccanti bālā dvayataṃ apassino.",
  "pv36:30.1": "Na matthi kammāni sayaṃkatāni,",
  "pv36:30.2": "Datvāpi me natthi yo ādiseyya;",
  "pv36:30.3": "Acchādanaṃ sayanamathannapānaṃ,",
  "pv36:30.4": "Tenamhi naggo kasirā ca vuttī”ti.",
  "pv36:31.1": "“Siyā nu kho kāraṇaṃ kiñci yakkha,",
  "pv36:31.2": "Acchādanaṃ yena tuvaṃ labhetha;",
  "pv36:31.3": "Ācikkha me tvaṃ yadatthi hetu,",
  "pv36:31.4": "Saddhāyikaṃ hetuvaco suṇomā”ti.",
  "pv36:32.1": "“Kappitako nāma idhatthi bhikkhu,",
  "pv36:32.2": "Jhāyī susīlo arahā vimutto;",
  "pv36:32.3": "Guttindriyo saṃvutapātimokkho,",
  "pv36:32.4": "Sītibhūto uttamadiṭṭhipatto.",
  "pv36:33.1": "Sakhilo vadaññū suvaco sumukho,",
  "pv36:33.2": "Svāgamo suppaṭimuttako ca;",
  "pv36:33.3": "Puññassa khettaṃ araṇavihārī,",
  "pv36:33.4": "Devamanussānañca dakkhiṇeyyo.",
  "pv36:34.1": "Santo vidhūmo anīgho nirāso,",
  "pv36:34.2": "Mutto visallo amamo avaṅko;",
  "pv36:34.3": "Nirūpadhī sabbapapañcakhīṇo,",
  "pv36:34.4": "Tisso vijjā anuppatto jutimā.",
  "pv36:35.1": "Appaññāto disvāpi na ca sujāno,",
  "pv36:35.2": "Munīti naṃ vajjisu voharanti;",
  "pv36:35.3": "Jānanti taṃ yakkhabhūtā anejaṃ,",
  "pv36:35.4": "Kalyāṇadhammaṃ vicarantaṃ loke.",
  "pv36:36.1": "Tassa tuvaṃ ekayugaṃ duve vā,",
  "pv36:36.2": "Mamuddisitvāna sace dadetha;",
  "pv36:36.3": "Paṭiggahītāni ca tāni assu,",
  "pv36:36.4": "Mamañca passetha sannaddhadussan”ti.",
  "pv36:37.1": "“Kasmiṃ padese samaṇaṃ vasantaṃ,",
  "pv36:37.2": "Gantvāna passemu mayaṃ idāni;",
  "pv36:37.3": "Yo majja kaṅkhaṃ vicikicchitañca,",
  "pv36:37.4": "Diṭṭhīvisūkāni vinodayeyyā”ti.",
  "pv36:38.1": "“Eso nisinno kapinaccanāyaṃ,",
  "pv36:38.2": "Parivārito devatāhi bahūhi;",
  "pv36:38.3": "Dhammiṃ kathaṃ bhāsati saccanāmo,",
  "pv36:38.4": "Sakasmimācerake appamatto”ti.",
  "pv36:39.1": "“Tathāhaṃ kassāmi gantvā idāni,",
  "pv36:39.2": "Acchādayissaṃ samaṇaṃ yugena;",
  "pv36:39.3": "Paṭiggahitāni ca tāni assu,",
  "pv36:39.4": "Tuvañca passemu sannaddhadussan”ti.",
  "pv36:40.1": "“Mā akkhaṇe pabbajitaṃ upāgami,",
  "pv36:40.2": "Sādhu vo licchavi nesa dhammo;",
  "pv36:40.3": "Tato ca kāle upasaṅkamitvā,",
  "pv36:40.4": "Tattheva passāhi raho nisinnan”ti.",
  "pv36:41.1": "Tathāti vatvā agamāsi tattha,",
  "pv36:41.2": "Parivārito dāsagaṇena licchavi;",
  "pv36:41.3": "So taṃ nagaraṃ upasaṅkamitvā,",
  "pv36:41.4": "Vāsūpagacchittha sake nivesane.",
  "pv36:42.1": "Tato ca kāle gihikiccāni katvā,",
  "pv36:42.2": "Nhatvā pivitvā ca khaṇaṃ labhitvā;",
  "pv36:42.3": "Viceyya peḷāto ca yugāni aṭṭha,",
  "pv36:42.4": "Gāhāpayī dāsagaṇena licchavi.",
  "pv36:43.1": "So taṃ padesaṃ upasaṅkamitvā,",
  "pv36:43.2": "Taṃ addasa samaṇaṃ santacittaṃ;",
  "pv36:43.3": "Paṭikkantaṃ gocarato nivattaṃ,",
  "pv36:43.4": "Sītibhūtaṃ rukkhamūle nisinnaṃ.",
  "pv36:44.1": "Tamenamavoca upasaṅkamitvā,",
  "pv36:44.2": "Appābādhaṃ phāsuvihārañca pucchi;",
  "pv36:44.3": "“Vesāliyaṃ licchavihaṃ bhadante,",
  "pv36:44.4": "Jānanti maṃ licchavi ambasakkaro.",
  "pv36:45.1": "Imāni me aṭṭha yugā subhāni,",
  "pv36:45.2": "Paṭigaṇha bhante padadāmi tuyhaṃ;",
  "pv36:45.3": "Teneva atthena idhāgatosmi,",
  "pv36:45.4": "Yathā ahaṃ attamano bhaveyyan”ti.",
  "pv36:46.1": "“Dūratova samaṇabrāhmaṇā ca,",
  "pv36:46.2": "Nivesanaṃ te parivajjayanti;",
  "pv36:46.3": "Pattāni bhijjanti ca te nivesane,",
  "pv36:46.4": "Saṅghāṭiyo cāpi vidālayanti.",
  "pv36:47.1": "Athāpare pādakuṭhārikāhi,",
  "pv36:47.2": "Avaṃsirā samaṇā pātayanti;",
  "pv36:47.3": "Etādisaṃ pabbajitā vihesaṃ,",
  "pv36:47.4": "Tayā kataṃ samaṇā pāpuṇanti.",
  "pv36:48.1": "Tiṇena telampi na tvaṃ adāsi,",
  "pv36:48.2": "Muḷhassa maggampi na pāvadāsi;",
  "pv36:48.3": "Andhassa daṇḍaṃ sayamādiyāsi,",
  "pv36:48.4": "Etādiso kadariyo asaṃvuto tuvaṃ;",
  "pv36:48.5": "Atha tvaṃ kena vaṇṇena kimeva disvā,",
  "pv36:48.6": "Amhehi saha saṃvibhāgaṃ karosī”ti.",
  "pv36:49.1": "“Paccemi bhante yaṃ tvaṃ vadesi,",
  "pv36:49.2": "Vihesayiṃ samaṇe brāhmaṇe ca;",
  "pv36:49.3": "Khiḍḍatthiko no ca paduṭṭhacitto,",
  "pv36:49.4": "Etampi me dukkaṭameva bhante.",
  "pv36:50.1": "Khiḍḍāya yakkho pasavitvā pāpaṃ,",
  "pv36:50.2": "Vedeti dukkhaṃ asamattabhogī;",
  "pv36:50.3": "Daharo yuvā nagganiyassa bhāgī,",
  "pv36:50.4": "Kiṃ su tato dukkhatarassa hoti.",
  "pv36:51.1": "Taṃ disvā saṃvegamalatthaṃ bhante,",
  "pv36:51.2": "Tappaccayā vāpi dadāmi dānaṃ;",
  "pv36:51.3": "Paṭigaṇha bhante vatthayugāni aṭṭha,",
  "pv36:51.4": "Yakkhassimā gacchantu dakkhiṇāyo”ti.",
  "pv36:52.1": "“Addhā hi dānaṃ bahudhā pasatthaṃ,",
  "pv36:52.2": "Dadato ca te akkhayadhammamatthu;",
  "pv36:52.3": "Paṭigaṇhāmi te vatthayugāni aṭṭha,",
  "pv36:52.4": "Yakkhassimā gacchantu dakkhiṇāyo”ti.",
  "pv36:53.1": "Tato hi so ācamayitvā licchavi,",
  "pv36:53.2": "Therassa datvāna yugāni aṭṭha;",
  "pv36:53.3": "Paṭiggahitāni ca tāni assu,",
  "pv36:53.4": "Yakkhañca passetha sannaddhadussaṃ.",
  "pv36:54.1": "Tamaddasā candanasāralittaṃ,",
  "pv36:54.2": "Ājaññamārūḷhamuḷāravaṇṇaṃ;",
  "pv36:54.3": "Alaṅkataṃ sādhunivatthadussaṃ,",
  "pv36:54.4": "Parivāritaṃ yakkhamahiddhipattaṃ.",
  "pv36:55.1": "So taṃ disvā attamano udaggo,",
  "pv36:55.2": "Pahaṭṭhacitto ca subhaggarūpo;",
  "pv36:55.3": "Kammañca disvāna mahāvipākaṃ,",
  "pv36:55.4": "Sandiṭṭhikaṃ cakkhunā sacchikatvā.",
  "pv36:56.1": "Tamenamavoca upasaṅkamitvā,",
  "pv36:56.2": "“Dassāmi dānaṃ samaṇabrāhmaṇānaṃ;",
  "pv36:56.3": "Na cāpi me kiñci adeyyamatthi,",
  "pv36:56.4": "Tuvañca me yakkha bahūpakāro”ti.",
  "pv36:57.1": "“Tuvañca me licchavi ekadesaṃ,",
  "pv36:57.2": "Adāsi dānāni amoghametaṃ;",
  "pv36:57.3": "Svāhaṃ karissāmi tayāva sakkhiṃ,",
  "pv36:57.4": "Amānuso mānusakena saddhin”ti.",
  "pv36:58.1": "“Gatī ca bandhū ca parāyaṇañca,",
  "pv36:58.2": "Mitto mamāsi atha devatā me;",
  "pv36:58.3": "Yācāmi taṃ pañjaliko bhavitvā,",
  "pv36:58.4": "Icchāmi taṃ yakkha punāpi daṭṭhun”ti.",
  "pv36:59.1": "“Sace tuvaṃ assaddho bhavissasi,",
  "pv36:59.2": "Kadariyarūpo vippaṭipannacitto;",
  "pv36:59.3": "Tvaṃ neva maṃ lacchasi dassanāya,",
  "pv36:59.4": "Disvā ca taṃ nopi ca ālapissaṃ.",
  "pv36:60.1": "Sace pana tvaṃ bhavissasi dhammagāravo,",
  "pv36:60.2": "Dāne rato saṅgahitattabhāvo;",
  "pv36:60.3": "Opānabhūto samaṇabrāhmaṇānaṃ,",
  "pv36:60.4": "Evaṃ mamaṃ lacchasi dassanāya.",
  "pv36:61.1": "Disvā ca taṃ ālapissaṃ bhadante,",
  "pv36:61.2": "Imañca sūlato lahuṃ pamuñca;",
  "pv36:61.3": "Yatonidānaṃ akarimha sakkhiṃ,",
  "pv36:61.4": "Maññāmi sūlāvutakassa kāraṇā.",
  "pv36:62.1": "Te aññamaññaṃ akarimha sakkhiṃ,",
  "pv36:62.2": "Ayañca sūlato lahuṃ pamutto;",
  "pv36:62.3": "Sakkacca dhammāni samācaranto,",
  "pv36:62.4": "Mucceyya so nirayā ca tamhā;",
  "pv36:62.5": "Kammaṃ siyā aññatra vedanīyaṃ.",
  "pv36:63.1": "Kappitakañca upasaṅkamitvā,",
  "pv36:63.2": "Teneva saha saṃvibhajitvā kāle;",
  "pv36:63.3": "Sayaṃ mukhenūpanisajja puccha,",
  "pv36:63.4": "So te akkhissati etamatthaṃ.",
  "pv36:64.1": "Tameva bhikkhuṃ upasaṅkamitvā,",
  "pv36:64.2": "Pucchassu aññatthiko no ca paduṭṭhacitto;",
  "pv36:64.3": "So te sutaṃ asutañcāpi dhammaṃ,",
  "pv36:64.4": "Sabbampi akkhissati yathā pajānan”ti.",
  "pv36:65.1": "So tattha rahassaṃ samullapitvā,",
  "pv36:65.2": "Sakkhiṃ karitvāna amānusena;",
  "pv36:65.3": "Pakkāmi so licchavīnaṃ sakāsaṃ,",
  "pv36:65.4": "Atha bravi parisaṃ sannisinnaṃ.",
  "pv36:66.1": "“Suṇantu bhonto mama ekavākyaṃ,",
  "pv36:66.2": "Varaṃ varissaṃ labhissāmi atthaṃ;",
  "pv36:66.3": "Sūlāvuto puriso luddakammo,",
  "pv36:66.4": "Paṇihitadaṇḍo anusattarūpo.",
  "pv36:67.1": "Ettāvatā vīsatirattimattā,",
  "pv36:67.2": "Yato āvuto neva jīvati na mato;",
  "pv36:67.3": "Tāhaṃ mocayissāmi dāni,",
  "pv36:67.4": "Yathāmatiṃ anujānātu saṃgho”ti.",
  "pv36:68.1": "“Etañca aññañca lahuṃ pamuñca,",
  "pv36:68.2": "Ko taṃ vadetha tathā karontaṃ;",
  "pv36:68.3": "Yathā pajānāsi tathā karohi,",
  "pv36:68.4": "Yathāmatiṃ anujānāti saṃgho”ti.",
  "pv36:69.1": "So taṃ padesaṃ upasaṅkamitvā,",
  "pv36:69.2": "Sūlāvutaṃ mocayi khippameva;",
  "pv36:69.3": "“Mā bhāyi sammā”ti ca taṃ avoca,",
  "pv36:69.4": "Tikicchakānañca upaṭṭhapesi.",
  "pv36:70.1": "“Kappitakañca upasaṅkamitvā,",
  "pv36:70.2": "Teneva saha saṃvibhajitvā kāle;",
  "pv36:70.3": "Sayaṃ mukhenūpanisajja licchavi,",
  "pv36:70.4": "Tatheva pucchittha naṃ kāraṇatthiko.",
  "pv36:71.1": "Sūlāvuto puriso luddakammo,",
  "pv36:71.2": "Paṇihitadaṇḍo anusattarūpo;",
  "pv36:71.3": "Ettāvatā vīsatirattimattā,",
  "pv36:71.4": "Yato āvuto neva jīvati na mato.",
  "pv36:72.1": "So mocito gantvā mayā idāni,",
  "pv36:72.2": "Etassa yakkhassa vaco hi bhante;",
  "pv36:72.3": "Siyā nu kho kāraṇaṃ kiñcideva,",
  "pv36:72.4": "Yena so nirayaṃ no vajeyya.",
  "pv36:73.1": "Ācikkha bhante yadi atthi hetu,",
  "pv36:73.2": "Saddhāyikaṃ hetuvaco suṇoma;",
  "pv36:73.3": "Na tesaṃ kammānaṃ vināsamatthi,",
  "pv36:73.4": "Avedayitvā idha byantibhāvo”ti.",
  "pv36:74.1": "“Sace sa dhammāni samācareyya,",
  "pv36:74.2": "Sakkacca rattindivamappamatto;",
  "pv36:74.3": "Mucceyya so nirayā ca tamhā,",
  "pv36:74.4": "Kammaṃ siyā aññatra vedanīyan”ti.",
  "pv36:75.1": "“Aññāto eso purisassa attho,",
  "pv36:75.2": "Mamampi dāni anukampa bhante;",
  "pv36:75.3": "Anusāsa maṃ ovada bhūripañña,",
  "pv36:75.4": "Yathā ahaṃ no nirayaṃ vajeyyan”ti.",
  "pv36:76.1": "“Ajjeva buddhaṃ saraṇaṃ upehi,",
  "pv36:76.2": "Dhammañca saṃghañca pasannacitto;",
  "pv36:76.3": "Tatheva sikkhāya padāni pañca,",
  "pv36:76.4": "Akhaṇḍaphullāni samādiyassu.",
  "pv36:77.1": "Pāṇātipātā viramassu khippaṃ,",
  "pv36:77.2": "Loke adinnaṃ parivajjayassu;",
  "pv36:77.3": "Amajjapo mā ca musā abhāṇī,",
  "pv36:77.4": "Sakena dārena ca hohi tuṭṭho;",
  "pv36:77.5": "Imañca ariyaṃ aṭṭhaṅgavarenupetaṃ,",
  "pv36:77.6": "Samādiyāhi kusalaṃ sukhudrayaṃ.",
  "pv36:78.1": "Cīvaraṃ piṇḍapātañca,",
  "pv36:78.2": "paccayaṃ sayanāsanaṃ;",
  "pv36:78.3": "Annaṃ pānaṃ khādanīyaṃ,",
  "pv36:78.4": "vatthasenāsanāni ca;",
  "pv36:78.5": "Dadāhi ujubhūtesu,",
  "pv36:78.6": "vippasannena cetasā.",
  "pv36:79.1": "Bhikkhūpi sīlasampanne,",
  "pv36:79.2": "vītarāge bahussute;",
  "pv36:79.3": "Tappehi annapānena,",
  "pv36:79.4": "sadā puññaṃ pavaḍḍhati.",
  "pv36:80.1": "Evañca dhammāni samācaranto,",
  "pv36:80.2": "Sakkacca rattindivamappamatto;",
  "pv36:80.3": "Muñca tuvaṃ nirayā ca tamhā,",
  "pv36:80.4": "Kammaṃ siyā aññatra vedanīyan”ti.",
  "pv36:81.1": "“Ajjeva buddhaṃ saraṇaṃ upemi,",
  "pv36:81.2": "Dhammañca saṃghañca pasannacitto;",
  "pv36:81.3": "Tatheva sikkhāya padāni pañca,",
  "pv36:81.4": "Akhaṇḍaphullāni samādiyāmi.",
  "pv36:82.1": "Pāṇātipātā viramāmi khippaṃ,",
  "pv36:82.2": "Loke adinnaṃ parivajjayāmi;",
  "pv36:82.3": "Amajjapo no ca musā bhaṇāmi,",
  "pv36:82.4": "Sakena dārena ca homi tuṭṭho;",
  "pv36:82.5": "Imañca ariyaṃ aṭṭhaṅgavarenupetaṃ,",
  "pv36:82.6": "Samādiyāmi kusalaṃ sukhudrayaṃ.",
  "pv36:83.1": "Cīvaraṃ piṇḍapātañca,",
  "pv36:83.2": "paccayaṃ sayanāsanaṃ;",
  "pv36:83.3": "Annaṃ pānaṃ khādanīyaṃ,",
  "pv36:83.4": "vatthasenāsanāni ca.",
  "pv36:84.1": "Bhikkhū ca sīlasampanne,",
  "pv36:84.2": "vītarāge bahussute;",
  "pv36:84.3": "Dadāmi na vikampāmi,",
  "pv36:84.4": "buddhānaṃ sāsane rato”ti.",
  "pv36:85.1": "Etādiso licchavi ambasakkaro,",
  "pv36:85.2": "Vesāliyaṃ aññataro upāsako;",
  "pv36:85.3": "Saddho mudū kārakaro ca bhikkhu,",
  "pv36:85.4": "Saṃghañca sakkacca tadā upaṭṭhahi.",
  "pv36:86.1": "Sūlāvuto ca arogo hutvā,",
  "pv36:86.2": "Serī sukhī pabbajjaṃ upāgami;",
  "pv36:86.3": "Bhikkhuñca āgamma kappitakuttamaṃ,",
  "pv36:86.4": "Ubhopi sāmaññaphalāni ajjhaguṃ.",
  "pv36:87.1": "Etādisā sappurisāna sevanā,",
  "pv36:87.2": "Mahapphalā hoti sataṃ vijānataṃ;",
  "pv36:87.3": "Sūlāvuto aggaphalaṃ aphassayi,",
  "pv36:87.4": "Phalaṃ kaniṭṭhaṃ pana ambasakkaroti.",
  "pv36:88.1": "Ambasakkarapetavatthu paṭhamaṃ."
}