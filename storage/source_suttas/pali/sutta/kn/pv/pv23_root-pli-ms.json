{
  "pv23:0.1": "Petavatthu",
  "pv23:0.2": "Ubbarivagga",
  "pv23:0.3": "11. Suttapetavatthu",
  "pv23:1.1": "“Ahaṃ pure pabbajitassa bhikkhuno,",
  "pv23:1.2": "Suttaṃ adāsiṃ upasaṅkamma yācitā;",
  "pv23:1.3": "Tassa vipāko vipulaphalūpalabbhati,",
  "pv23:1.4": "Bahukā ca me uppajjare vatthakoṭiyo.",
  "pv23:2.1": "Pupphābhikiṇṇaṃ ramitaṃ vimānaṃ,",
  "pv23:2.2": "Anekacittaṃ naranārisevitaṃ;",
  "pv23:2.3": "Sāhaṃ bhuñjāmi ca pārupāmi ca,",
  "pv23:2.4": "Pahūtavittā na ca tāva khīyati.",
  "pv23:3.1": "Tasseva kammassa vipākamanvayā,",
  "pv23:3.2": "Sukhañca sātañca idhūpalabbhati;",
  "pv23:3.3": "Sāhaṃ gantvā punadeva mānusaṃ,",
  "pv23:3.4": "Kāhāmi puññāni nayayyaputta man”ti.",
  "pv23:4.1": "“Satta tuvaṃ vassasatā idhāgatā,",
  "pv23:4.2": "Jiṇṇā ca vuḍḍhā ca tahiṃ bhavissasi;",
  "pv23:4.3": "Sabbeva te kālakatā ca ñātakā,",
  "pv23:4.4": "Kiṃ tattha gantvāna ito karissasī”ti.",
  "pv23:5.1": "“Satteva vassāni idhāgatāya me,",
  "pv23:5.2": "Dibbañca sukhañca samappitāya;",
  "pv23:5.3": "Sāhaṃ gantvāna punadeva mānusaṃ,",
  "pv23:5.4": "Kāhāmi puññāni nayayyaputta man”ti.",
  "pv23:6.1": "So taṃ gahetvāna pasayha bāhāyaṃ,",
  "pv23:6.2": "Paccānayitvāna theriṃ sudubbalaṃ;",
  "pv23:6.3": "“Vajjesi aññampi janaṃ idhāgataṃ,",
  "pv23:6.4": "‘Karotha puññāni sukhūpalabbhati’.",
  "pv23:7.1": "Diṭṭhā mayā akatena sādhunā,",
  "pv23:7.2": "Petā vihaññanti tatheva manussā;",
  "pv23:7.3": "Kammañca katvā sukhavedanīyaṃ,",
  "pv23:7.4": "Devā manussā ca sukhe ṭhitā pajā”ti.",
  "pv23:8.1": "Suttapetavatthu ekādasamaṃ."
}