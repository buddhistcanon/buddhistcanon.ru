{
  "pv22:0.1": "Petavatthu",
  "pv22:0.2": "Ubbarivagga",
  "pv22:0.3": "10. Uttaramātupetivatthu",
  "pv22:1.1": "Divāvihāragataṃ bhikkhuṃ,",
  "pv22:1.2": "gaṅgātīre nisinnakaṃ;",
  "pv22:1.3": "Taṃ petī upasaṅkamma,",
  "pv22:1.4": "dubbaṇṇā bhīrudassanā.",
  "pv22:2.1": "Kesā cassā atidīghā,",
  "pv22:2.2": "yāvabhūmāvalambare;",
  "pv22:2.3": "Kesehi sā paṭicchannā,",
  "pv22:2.4": "samaṇaṃ etadabravi.",
  "pv22:3.1": "“Pañcapaṇṇāsavassāni,",
  "pv22:3.2": "yato kālaṅkatā ahaṃ;",
  "pv22:3.3": "Nābhijānāmi bhuttaṃ vā,",
  "pv22:3.4": "pītaṃ vā pana pāniyaṃ;",
  "pv22:3.5": "Dehi tvaṃ pāniyaṃ bhante,",
  "pv22:3.6": "tasitā pāniyāya me”ti.",
  "pv22:4.1": "“Ayaṃ sītodikā gaṅgā,",
  "pv22:4.2": "himavantato sandati;",
  "pv22:4.3": "Piva etto gahetvāna,",
  "pv22:4.4": "kiṃ maṃ yācasi pāniyan”ti.",
  "pv22:5.1": "“Sacāhaṃ bhante gaṅgāya,",
  "pv22:5.2": "sayaṃ gaṇhāmi pāniyaṃ;",
  "pv22:5.3": "Lohitaṃ me parivattati,",
  "pv22:5.4": "tasmā yācāmi pāniyan”ti.",
  "pv22:6.1": "“Kiṃ nu kāyena vācāya,",
  "pv22:6.2": "manasā dukkaṭaṃ kataṃ;",
  "pv22:6.3": "Kissa kammavipākena,",
  "pv22:6.4": "gaṅgā te hoti lohitan”ti.",
  "pv22:7.1": "“Putto me uttaro nāma,",
  "pv22:7.2": "saddho āsi upāsako;",
  "pv22:7.3": "So ca mayhaṃ akāmāya,",
  "pv22:7.4": "samaṇānaṃ pavecchati.",
  "pv22:8.1": "Cīvaraṃ piṇḍapātañca,",
  "pv22:8.2": "paccayaṃ sayanāsanaṃ;",
  "pv22:8.3": "Tamahaṃ paribhāsāmi,",
  "pv22:8.4": "maccherena upaddutā.",
  "pv22:9.1": "Yaṃ tvaṃ mayhaṃ akāmāya,",
  "pv22:9.2": "samaṇānaṃ pavecchasi;",
  "pv22:9.3": "Cīvaraṃ piṇḍapātañca,",
  "pv22:9.4": "paccayaṃ sayanāsanaṃ.",
  "pv22:10.1": "Etaṃ te paralokasmiṃ,",
  "pv22:10.2": "lohitaṃ hotu uttara;",
  "pv22:10.3": "Tassa kammassa vipākena,",
  "pv22:10.4": "gaṅgā me hoti lohitan”ti.",
  "pv22:11.1": "Uttaramātupetivatthu dasamaṃ."
}