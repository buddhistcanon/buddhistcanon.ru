{
  "pv8:0.1": "Petavatthu",
  "pv8:0.2": "Uragavagga",
  "pv8:0.3": "8. Goṇapetavatthu",
  "pv8:1.1": "“Kiṃ nu ummattarūpova,",
  "pv8:1.2": "lāyitvā haritaṃ tiṇaṃ;",
  "pv8:1.3": "Khāda khādāti lapasi,",
  "pv8:1.4": "gatasattaṃ jaraggavaṃ.",
  "pv8:2.1": "Na hi annena pānena,",
  "pv8:2.2": "mato goṇo samuṭṭhahe;",
  "pv8:2.3": "Tvaṃsi bālo ca dummedho,",
  "pv8:2.4": "yathā taññova dummatī”ti.",
  "pv8:3.1": "“Ime pādā idaṃ sīsaṃ,",
  "pv8:3.2": "ayaṃ kāyo savāladhi;",
  "pv8:3.3": "Nettā tatheva tiṭṭhanti,",
  "pv8:3.4": "ayaṃ goṇo samuṭṭhahe.",
  "pv8:4.1": "Nāyyakassa hatthapādā,",
  "pv8:4.2": "kāyo sīsañca dissati;",
  "pv8:4.3": "Rudaṃ mattikathūpasmiṃ,",
  "pv8:4.4": "nanu tvaññeva dummatī”ti.",
  "pv8:5.1": "“Ādittaṃ vata maṃ santaṃ,",
  "pv8:5.2": "ghatasittaṃva pāvakaṃ;",
  "pv8:5.3": "Vārinā viya osiñcaṃ,",
  "pv8:5.4": "sabbaṃ nibbāpaye daraṃ.",
  "pv8:6.1": "Abbahī vata me sallaṃ,",
  "pv8:6.2": "sokaṃ hadayanissitaṃ;",
  "pv8:6.3": "Yo me sokaparetassa,",
  "pv8:6.4": "pitusokaṃ apānudi.",
  "pv8:7.1": "Svāhaṃ abbūḷhasallosmi,",
  "pv8:7.2": "sītibhūtosmi nibbuto;",
  "pv8:7.3": "Na socāmi na rodāmi,",
  "pv8:7.4": "tava sutvāna māṇava”.",
  "pv8:8.1": "Evaṃ karonti sappaññā,",
  "pv8:8.2": "ye honti anukampakā;",
  "pv8:8.3": "Vinivattayanti sokamhā,",
  "pv8:8.4": "sujāto pitaraṃ yathāti.",
  "pv8:9.1": "Goṇapetavatthu aṭṭhamaṃ."
}