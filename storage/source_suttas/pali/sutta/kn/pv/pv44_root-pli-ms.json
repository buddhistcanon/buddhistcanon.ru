{
  "pv44:0.1": "Petavatthu",
  "pv44:0.2": "Mahāvagga",
  "pv44:0.3": "9. Gūthakhādakapetivatthu",
  "pv44:1.1": "“Gūthakūpato uggantvā,",
  "pv44:1.2": "kā nu dīnā patiṭṭhasi;",
  "pv44:1.3": "Nissaṃsayaṃ pāpakammantā,",
  "pv44:1.4": "kiṃ nu saddahase tuvan”ti.",
  "pv44:2.1": "“Ahaṃ bhadante petīmhi,",
  "pv44:2.2": "duggatā yamalokikā;",
  "pv44:2.3": "Pāpakammaṃ karitvāna,",
  "pv44:2.4": "petalokaṃ ito gatā”ti.",
  "pv44:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv44:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv44:3.3": "Kissa kammavipākena,",
  "pv44:3.4": "idaṃ dukkhaṃ nigacchasī”ti.",
  "pv44:4.1": "“Ahu āvāsiko mayhaṃ,",
  "pv44:4.2": "issukī kulamaccharī;",
  "pv44:4.3": "Ajjhāsito mayhaṃ ghare,",
  "pv44:4.4": "kadariyo paribhāsako.",
  "pv44:5.1": "Tassāhaṃ vacanaṃ sutvā,",
  "pv44:5.2": "bhikkhavo paribhāsisaṃ;",
  "pv44:5.3": "Tassa kammavipākena,",
  "pv44:5.4": "petalokaṃ ito gatā”ti.",
  "pv44:6.1": "“Amitto mittavaṇṇena,",
  "pv44:6.2": "yo te āsi kulūpako;",
  "pv44:6.3": "Kāyassa bhedā duppañño,",
  "pv44:6.4": "kiṃ nu pecca gatiṃ gato”ti.",
  "pv44:7.1": "“Tassevāhaṃ pāpakammassa,",
  "pv44:7.2": "sīse tiṭṭhāmi matthake;",
  "pv44:7.3": "So ca paravisayaṃ patto,",
  "pv44:7.4": "mameva paricārako.",
  "pv44:8.1": "Yaṃ bhadante hadantaññe,",
  "pv44:8.2": "etaṃ me hoti bhojanaṃ;",
  "pv44:8.3": "Ahañca kho yaṃ hadāmi,",
  "pv44:8.4": "etaṃ so upajīvatī”ti.",
  "pv44:9.1": "Gūthakhādakapetivatthu navamaṃ."
}