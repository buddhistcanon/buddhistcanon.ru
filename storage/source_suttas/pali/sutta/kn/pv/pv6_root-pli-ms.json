{
  "pv6:0.1": "Petavatthu",
  "pv6:0.2": "Uragavagga",
  "pv6:0.3": "6. Pañcaputtakhādapetivatthu",
  "pv6:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv6:1.2": "duggandhā pūti vāyasi;",
  "pv6:1.3": "Makkhikāhi parikiṇṇā,",
  "pv6:1.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
  "pv6:2.1": "“Ahaṃ bhadante petīmhi,",
  "pv6:2.2": "duggatā yamalokikā;",
  "pv6:2.3": "Pāpakammaṃ karitvāna,",
  "pv6:2.4": "petalokaṃ ito gatā.",
  "pv6:3.1": "Kālena pañca puttāni,",
  "pv6:3.2": "sāyaṃ pañca punāpare;",
  "pv6:3.3": "Vijāyitvāna khādāmi,",
  "pv6:3.4": "tepi nā honti me alaṃ.",
  "pv6:4.1": "Pariḍayhati dhūmāyati,",
  "pv6:4.2": "khudāya hadayaṃ mama;",
  "pv6:4.3": "Pānīyaṃ na labhe pātuṃ,",
  "pv6:4.4": "passa maṃ byasanaṃ gatan”ti.",
  "pv6:5.1": "“Kiṃ nu kāyena vācāya,",
  "pv6:5.2": "manasā dukkaṭaṃ kataṃ;",
  "pv6:5.3": "Kissa kammavipākena,",
  "pv6:5.4": "puttamaṃsāni khādasī”ti.",
  "pv6:6.1": "“Sapatī me gabbhinī āsi,",
  "pv6:6.2": "tassā pāpaṃ acetayiṃ;",
  "pv6:6.3": "Sāhaṃ paduṭṭhamanasā,",
  "pv6:6.4": "akariṃ gabbhapātanaṃ.",
  "pv6:7.1": "Tassā dvemāsiko gabbho,",
  "pv6:7.2": "lohitaññeva pagghari;",
  "pv6:7.3": "Tadassā mātā kupitā,",
  "pv6:7.4": "mayhaṃ ñātī samānayi;",
  "pv6:7.5": "Sapathañca maṃ kāresi,",
  "pv6:7.6": "paribhāsāpayī ca maṃ.",
  "pv6:8.1": "Sāhaṃ ghorañca sapathaṃ,",
  "pv6:8.2": "musāvādaṃ abhāsisaṃ;",
  "pv6:8.3": "Puttamaṃsāni khādāmi,",
  "pv6:8.4": "sace taṃ pakataṃ mayā.",
  "pv6:9.1": "Tassa kammassa vipākena,",
  "pv6:9.2": "musāvādassa cūbhayaṃ;",
  "pv6:9.3": "Puttamaṃsāni khādāmi,",
  "pv6:9.4": "pubbalohitamakkhitā”ti.",
  "pv6:10.1": "Pañcaputtakhādapetivatthu chaṭṭhaṃ."
}