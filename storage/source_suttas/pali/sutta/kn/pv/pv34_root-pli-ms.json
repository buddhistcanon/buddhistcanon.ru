{
  "pv34:0.1": "Petavatthu",
  "pv34:0.2": "Cūḷavagga",
  "pv34:0.3": "9. Kūṭavinicchayikapetavatthu",
  "pv34:1.1": "“Mālī kiriṭī kāyūrī,",
  "pv34:1.2": "gattā te candanussadā;",
  "pv34:1.3": "Pasannamukhavaṇṇosi,",
  "pv34:1.4": "sūriyavaṇṇova sobhasi.",
  "pv34:2.1": "Amānusā pārisajjā,",
  "pv34:2.2": "ye teme paricārakā;",
  "pv34:2.3": "Dasa kaññāsahassāni,",
  "pv34:2.4": "yā temā paricārikā;",
  "pv34:2.5": "Tā kambukāyūradharā,",
  "pv34:2.6": "kañcanāveḷabhūsitā.",
  "pv34:3.1": "Mahānubhāvosi tuvaṃ,",
  "pv34:3.2": "lomahaṃsanarūpavā;",
  "pv34:3.3": "Piṭṭhimaṃsāni attano,",
  "pv34:3.4": "sāmaṃ ukkacca khādasi.",
  "pv34:4.1": "Kiṃ nu kāyena vācāya,",
  "pv34:4.2": "manasā dukkuṭaṃ kataṃ;",
  "pv34:4.3": "Kissa kammavipākena,",
  "pv34:4.4": "piṭṭhimaṃsāni attano;",
  "pv34:4.5": "Sāmaṃ ukkacca khādasī”ti.",
  "pv34:5.1": "“Attanohaṃ anatthāya,",
  "pv34:5.2": "jīvaloke acārisaṃ;",
  "pv34:5.3": "Pesuññamusāvādena,",
  "pv34:5.4": "nikativañcanāya ca.",
  "pv34:6.1": "Tatthāhaṃ parisaṃ gantvā,",
  "pv34:6.2": "Saccakāle upaṭṭhite;",
  "pv34:6.3": "Atthaṃ dhammaṃ nirākatvā,",
  "pv34:6.4": "Adhammamanuvattisaṃ.",
  "pv34:7.1": "Evaṃ so khādatattānaṃ,",
  "pv34:7.2": "yo hoti piṭṭhimaṃsiko;",
  "pv34:7.3": "Yathāhaṃ ajja khādāmi,",
  "pv34:7.4": "piṭṭhimaṃsāni attano.",
  "pv34:8.1": "Tayidaṃ tayā nārada sāmaṃ diṭṭhaṃ,",
  "pv34:8.2": "Anukampakā ye kusalā vadeyyuṃ;",
  "pv34:8.3": "Mā pesuṇaṃ mā ca musā abhāṇi,",
  "pv34:8.4": "Mā khosi piṭṭhimaṃsiko tuvan”ti.",
  "pv34:9.1": "Kūṭavinicchayikapetavatthu navamaṃ."
}