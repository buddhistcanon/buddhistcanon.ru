{
  "pv7:0.1": "Petavatthu",
  "pv7:0.2": "Uragavagga",
  "pv7:0.3": "7. Sattaputtakhādapetivatthu",
  "pv7:1.1": "“Naggā dubbaṇṇarūpāsi,",
  "pv7:1.2": "duggandhā pūti vāyasi;",
  "pv7:1.3": "Makkhikāhi parikiṇṇā,",
  "pv7:1.4": "kā nu tvaṃ idha tiṭṭhasī”ti.",
  "pv7:2.1": "“Ahaṃ bhadante petīmhi,",
  "pv7:2.2": "duggatā yamalokikā;",
  "pv7:2.3": "Pāpakammaṃ karitvāna,",
  "pv7:2.4": "petalokaṃ ito gatā.",
  "pv7:3.1": "Kālena satta puttāni,",
  "pv7:3.2": "sāyaṃ satta punāpare;",
  "pv7:3.3": "Vijāyitvāna khādāmi,",
  "pv7:3.4": "tepi nā honti me alaṃ.",
  "pv7:4.1": "Pariḍayhati dhūmāyati,",
  "pv7:4.2": "khudāya hadayaṃ mama;",
  "pv7:4.3": "Nibbutiṃ nādhigacchāmi,",
  "pv7:4.4": "aggidaḍḍhāva ātape”ti.",
  "pv7:5.1": "“Kiṃ nu kāyena vācāya,",
  "pv7:5.2": "manasā dukkaṭaṃ kataṃ;",
  "pv7:5.3": "Kissa kammavipākena,",
  "pv7:5.4": "puttamaṃsāni khādasī”ti.",
  "pv7:6.1": "“Ahū mayhaṃ duve puttā,",
  "pv7:6.2": "ubho sampattayobbanā;",
  "pv7:6.3": "Sāhaṃ puttabalūpetā,",
  "pv7:6.4": "sāmikaṃ atimaññisaṃ.",
  "pv7:7.1": "Tato me sāmiko kuddho,",
  "pv7:7.2": "sapatiṃ mayhamānayi;",
  "pv7:7.3": "Sā ca gabbhaṃ alabhittha,",
  "pv7:7.4": "tassā pāpaṃ acetayiṃ.",
  "pv7:8.1": "Sāhaṃ paduṭṭhamanasā,",
  "pv7:8.2": "akariṃ gabbhapātanaṃ;",
  "pv7:8.3": "Tassā temāsiko gabbho,",
  "pv7:8.4": "pūtilohitako pati.",
  "pv7:9.1": "Tadassā mātā kupitā,",
  "pv7:9.2": "mayhaṃ ñātī samānayi;",
  "pv7:9.3": "Sapathañca maṃ kāresi,",
  "pv7:9.4": "paribhāsāpayī ca maṃ.",
  "pv7:10.1": "Sāhaṃ ghorañca sapathaṃ,",
  "pv7:10.2": "musāvādaṃ abhāsisaṃ;",
  "pv7:10.3": "‘Puttamaṃsāni khādāmi,",
  "pv7:10.4": "sace taṃ pakataṃ mayā’.",
  "pv7:11.1": "Tassa kammassa vipākena,",
  "pv7:11.2": "musāvādassa cūbhayaṃ;",
  "pv7:11.3": "Puttamaṃsāni khādāmi,",
  "pv7:11.4": "pubbalohitamakkhitā”ti.",
  "pv7:12.1": "Sattaputtakhādapetivatthu sattamaṃ."
}