{
  "pv43:0.1": "Petavatthu",
  "pv43:0.2": "Mahāvagga",
  "pv43:0.3": "8. Gūthakhādakapetavatthu",
  "pv43:1.1": "“Gūthakūpato uggantvā,",
  "pv43:1.2": "ko nu dīno patiṭṭhasi;",
  "pv43:1.3": "Nissaṃsayaṃ pāpakammanto,",
  "pv43:1.4": "kiṃ nu saddahase tuvan”ti.",
  "pv43:2.1": "“Ahaṃ bhadante petomhi,",
  "pv43:2.2": "duggato yamalokiko;",
  "pv43:2.3": "Pāpakammaṃ karitvāna,",
  "pv43:2.4": "petalokaṃ ito gato”.",
  "pv43:3.1": "“Kiṃ nu kāyena vācāya,",
  "pv43:3.2": "manasā dukkaṭaṃ kataṃ;",
  "pv43:3.3": "Kissa kammavipākena,",
  "pv43:3.4": "idaṃ dukkhaṃ nigacchasī”ti.",
  "pv43:4.1": "“Ahu āvāsiko mayhaṃ,",
  "pv43:4.2": "issukī kulamaccharī;",
  "pv43:4.3": "Ajjhāsito mayhaṃ ghare,",
  "pv43:4.4": "kadariyo paribhāsako.",
  "pv43:5.1": "Tassāhaṃ vacanaṃ sutvā,",
  "pv43:5.2": "bhikkhavo paribhāsisaṃ;",
  "pv43:5.3": "Tassa kammavipākena,",
  "pv43:5.4": "petalokaṃ ito gato”ti.",
  "pv43:6.1": "“Amitto mittavaṇṇena,",
  "pv43:6.2": "yo te āsi kulūpako;",
  "pv43:6.3": "Kāyassa bhedā duppañño,",
  "pv43:6.4": "kiṃ nu pecca gatiṃ gato”ti.",
  "pv43:7.1": "“Tassevāhaṃ pāpakammassa,",
  "pv43:7.2": "sīse tiṭṭhāmi matthake;",
  "pv43:7.3": "So ca paravisayaṃ patto,",
  "pv43:7.4": "mameva paricārako.",
  "pv43:8.1": "Yaṃ bhadante hadantaññe,",
  "pv43:8.2": "etaṃ me hoti bhojanaṃ;",
  "pv43:8.3": "Ahañca kho yaṃ hadāmi,",
  "pv43:8.4": "etaṃ so upajīvatī”ti.",
  "pv43:9.1": "Gūthakhādakapetavatthu aṭṭhamaṃ."
}