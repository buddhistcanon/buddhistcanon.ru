{
  "pv1:0.1": "Petavatthu",
  "pv1:0.2": "Uragavagga",
  "pv1:0.3": "1. Khettūpamapetavatthu",
  "pv1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "pv1:2.1": "“Khettūpamā arahanto,",
  "pv1:2.2": "dāyakā kassakūpamā;",
  "pv1:2.3": "Bījūpamaṃ deyyadhammaṃ,",
  "pv1:2.4": "etto nibbattate phalaṃ.",
  "pv1:3.1": "Etaṃ bījaṃ kasi khettaṃ,",
  "pv1:3.2": "petānaṃ dāyakassa ca;",
  "pv1:3.3": "Taṃ petā paribhuñjanti,",
  "pv1:3.4": "dātā puññena vaḍḍhati.",
  "pv1:4.1": "Idheva kusalaṃ katvā,",
  "pv1:4.2": "Pete ca paṭipūjiya;",
  "pv1:4.3": "Saggañca kamatiṭṭhānaṃ,",
  "pv1:4.4": "Kammaṃ katvāna bhaddakan”ti.",
  "pv1:5.1": "Khettūpamapetavatthu paṭhamaṃ."
}