{
  "pv47:0.1": "Petavatthu",
  "pv47:0.2": "Mahāvagga",
  "pv47:0.3": "12. Ambavanapetavatthu",
  "pv47:1.1": "“Ayañca te pokkharaṇī surammā,",
  "pv47:1.2": "Samā sutitthā ca mahodakā ca;",
  "pv47:1.3": "Supupphitā bhamaragaṇānukiṇṇā,",
  "pv47:1.4": "Kathaṃ tayā laddhā ayaṃ manuññā.",
  "pv47:2.1": "Idañca te ambavanaṃ surammaṃ,",
  "pv47:2.2": "Sabbotukaṃ dhārayate phalāni;",
  "pv47:2.3": "Supupphitaṃ bhamaragaṇānukiṇṇaṃ,",
  "pv47:2.4": "Kathaṃ tayā laddhamidaṃ vimānaṃ”.",
  "pv47:3.1": "“Ambapakkaṃ dakaṃ yāgu,",
  "pv47:3.2": "sītacchāyā manoramā;",
  "pv47:3.3": "Dhītāya dinnadānena,",
  "pv47:3.4": "tena me idha labbhati”.",
  "pv47:4.1": "“Sandiṭṭhikaṃ kammaṃ evaṃ passatha,",
  "pv47:4.2": "Dānassa damassa saṃyamassa vipākaṃ;",
  "pv47:4.3": "Dāsī ahaṃ ayyakulesu hutvā,",
  "pv47:4.4": "Suṇisā homi agārassa issarā”ti.",
  "pv47:5.1": "Ambavanapetavatthu dvādasamaṃ."
}