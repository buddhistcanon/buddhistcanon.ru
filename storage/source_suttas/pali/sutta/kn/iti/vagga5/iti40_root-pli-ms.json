{
  "iti40:0.1": "Itivuttaka 40",
  "iti40:0.2": "Dukanipāta",
  "iti40:0.3": "Dutiyavagga",
  "iti40:0.4": "Vijjāsutta",
  "iti40:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti40:2.1": "“Avijjā, bhikkhave, pubbaṅgamā akusalānaṃ dhammānaṃ samāpattiyā anvadeva ahirikaṃ anottappaṃ;",
  "iti40:2.2": "vijjā ca kho, bhikkhave, pubbaṅgamā kusalānaṃ dhammānaṃ samāpattiyā anvadeva hirottappan”ti.",
  "iti40:2.3": "Etamatthaṃ bhagavā avoca.",
  "iti40:2.4": "Tatthetaṃ iti vuccati:",
  "iti40:3.1": "“Yā kācimā duggatiyo,",
  "iti40:3.2": "asmiṃ loke paramhi ca;",
  "iti40:3.3": "Avijjāmūlikā sabbā,",
  "iti40:3.4": "icchālobhasamussayā.",
  "iti40:4.1": "Yato ca hoti pāpiccho,",
  "iti40:4.2": "ahirīko anādaro;",
  "iti40:4.3": "Tato pāpaṃ pasavati,",
  "iti40:4.4": "apāyaṃ tena gacchati.",
  "iti40:5.1": "Tasmā chandañca lobhañca,",
  "iti40:5.2": "avijjañca virājayaṃ;",
  "iti40:5.3": "Vijjaṃ uppādayaṃ bhikkhu,",
  "iti40:5.4": "sabbā duggatiyo jahe”ti.",
  "iti40:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti40:6.2": "Tatiyaṃ.",
  "iti40:6.3": "Paṭhamabhāṇavāro."
}