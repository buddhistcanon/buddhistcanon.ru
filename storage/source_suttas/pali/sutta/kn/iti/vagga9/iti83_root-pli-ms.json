{
  "iti83:0.1": "Itivuttaka 83",
  "iti83:0.2": "Tikanipāta",
  "iti83:0.3": "Catutthavagga",
  "iti83:0.4": "Pañcapubbanimittasutta",
  "iti83:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti83:2.1": "“Yadā, bhikkhave, devo devakāyā cavanadhammo hoti, pañcassa pubbanimittāni pātubhavanti—",
  "iti83:2.2": "mālā milāyanti, vatthāni kilissanti, kacchehi sedā muccanti, kāye dubbaṇṇiyaṃ okkamati, sake devo devāsane nābhiramatīti.",
  "iti83:2.3": "Tamenaṃ, bhikkhave, devā ‘cavanadhammo ayaṃ devaputto’ti iti viditvā tīhi vācāhi anumodenti:",
  "iti83:2.4": "‘ito, bho, sugatiṃ gaccha.",
  "iti83:3.1": "Sugatiṃ gantvā suladdhalābhaṃ labha.",
  "iti83:4.1": "Suladdhalābhaṃ labhitvā suppatiṭṭhito bhavāhī’”ti.",
  "iti83:5.1": "Evaṃ vutte, aññataro bhikkhu bhagavantaṃ etadavoca:",
  "iti83:5.2": "“kiṃ nu kho, bhante, devānaṃ sugatigamanasaṅkhātaṃ.",
  "iti83:6.1": "Kiñca, bhante, devānaṃ suladdhalābhasaṅkhātaṃ.",
  "iti83:7.1": "Kiṃ pana, bhante, devānaṃ suppatiṭṭhitasaṅkhātan”ti?",
  "iti83:8.1": "“Manussattaṃ kho, bhikkhu, devānaṃ sugatigamanasaṅkhātaṃ.",
  "iti83:9.1": "Yaṃ manussabhūto samāno tathāgatappavedite dhammavinaye saddhaṃ paṭilabhati;",
  "iti83:9.2": "idaṃ kho, bhikkhu, devānaṃ suladdhalābhasaṅkhātaṃ.",
  "iti83:10.1": "Sā kho panassa saddhā niviṭṭhā hoti mūlajātā patiṭṭhitā daḷhā asaṃhāriyā samaṇena vā brāhmaṇena vā devena vā mārena vā brahmunā vā kenaci vā lokasmiṃ;",
  "iti83:10.2": "idaṃ kho, bhikkhu, devānaṃ suppatiṭṭhitasaṅkhātan”ti.",
  "iti83:11.1": "Etamatthaṃ bhagavā avoca.",
  "iti83:11.2": "Tatthetaṃ iti vuccati:",
  "iti83:12.1": "“Yadā devo devakāyā,",
  "iti83:12.2": "cavati āyusaṅkhayā;",
  "iti83:12.3": "Tayo saddā niccharanti,",
  "iti83:12.4": "devānaṃ anumodataṃ.",
  "iti83:13.1": "‘Ito bho sugatiṃ gaccha,",
  "iti83:13.2": "manussānaṃ sahabyataṃ;",
  "iti83:13.3": "Manussabhūto saddhamme,",
  "iti83:13.4": "labha saddhaṃ anuttaraṃ.",
  "iti83:14.1": "Sā te saddhā niviṭṭhassa,",
  "iti83:14.2": "mūlajātā patiṭṭhitā;",
  "iti83:14.3": "Yāvajīvaṃ asaṃhīrā,",
  "iti83:14.4": "saddhamme suppavedite.",
  "iti83:15.1": "Kāyaduccaritaṃ hitvā,",
  "iti83:15.2": "vacīduccaritāni ca;",
  "iti83:15.3": "Manoduccaritaṃ hitvā,",
  "iti83:15.4": "yañcaññaṃ dosasañhitaṃ.",
  "iti83:16.1": "Kāyena kusalaṃ katvā,",
  "iti83:16.2": "vācāya kusalaṃ bahuṃ;",
  "iti83:16.3": "Manasā kusalaṃ katvā,",
  "iti83:16.4": "appamāṇaṃ nirūpadhiṃ.",
  "iti83:17.1": "Tato opadhikaṃ puññaṃ,",
  "iti83:17.2": "katvā dānena taṃ bahuṃ;",
  "iti83:17.3": "Aññepi macce saddhamme,",
  "iti83:17.4": "brahmacariye nivesaya’.",
  "iti83:18.1": "Imāya anukampāya,",
  "iti83:18.2": "devā devaṃ yadā vidū;",
  "iti83:18.3": "Cavantaṃ anumodenti,",
  "iti83:18.4": "ehi deva punappunan”ti.",
  "iti83:19.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti83:19.2": "Catutthaṃ."
}