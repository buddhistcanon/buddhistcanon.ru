{
  "iti24:0.1": "Itivuttaka 24",
  "iti24:0.2": "Ekakanipāta",
  "iti24:0.3": "Tatiyavagga",
  "iti24:0.4": "Aṭṭhipuñjasutta",
  "iti24:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti24:2.1": "“Ekapuggalassa, bhikkhave, kappaṃ sandhāvato saṃsarato siyā evaṃ mahā aṭṭhikaṅkalo aṭṭhipuñjo aṭṭhirāsi yathāyaṃ vepullo pabbato, sace saṃhārako assa, sambhatañca na vinasseyyā”ti.",
  "iti24:2.2": "Etamatthaṃ bhagavā avoca.",
  "iti24:2.3": "Tatthetaṃ iti vuccati:",
  "iti24:3.1": "“Ekassekena kappena,",
  "iti24:3.2": "puggalassaṭṭhisañcayo;",
  "iti24:3.3": "Siyā pabbatasamo rāsi,",
  "iti24:3.4": "iti vuttaṃ mahesinā.",
  "iti24:4.1": "So kho panāyaṃ akkhāto,",
  "iti24:4.2": "vepullo pabbato mahā;",
  "iti24:4.3": "Uttaro gijjhakūṭassa,",
  "iti24:4.4": "magadhānaṃ giribbaje.",
  "iti24:5.1": "Yato ca ariyasaccāni,",
  "iti24:5.2": "sammappaññāya passati;",
  "iti24:5.3": "Dukkhaṃ dukkhasamuppādaṃ,",
  "iti24:5.4": "dukkhassa ca atikkamaṃ;",
  "iti24:5.5": "Ariyañcaṭṭhaṅgikaṃ maggaṃ,",
  "iti24:5.6": "dukkhūpasamagāminaṃ.",
  "iti24:6.1": "Sa sattakkhattuṃ paramaṃ,",
  "iti24:6.2": "sandhāvitvāna puggalo;",
  "iti24:6.3": "Dukkhassantakaro hoti,",
  "iti24:6.4": "sabbasaṃyojanakkhayā”ti.",
  "iti24:7.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti24:7.2": "Catutthaṃ."
}