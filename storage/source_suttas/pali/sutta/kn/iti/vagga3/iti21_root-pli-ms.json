{
  "iti21:0.1": "Itivuttaka 21",
  "iti21:0.2": "Ekakanipāta",
  "iti21:0.3": "Tatiyavagga",
  "iti21:0.4": "Pasannacittasutta",
  "iti21:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti21:2.1": "“Idhāhaṃ, bhikkhave, ekaccaṃ puggalaṃ pasannacittaṃ evaṃ cetasā ceto paricca pajānāmi:",
  "iti21:2.2": "‘imamhi cāyaṃ samaye puggalo kālaṃ kareyya yathābhataṃ nikkhitto evaṃ sagge’.",
  "iti21:2.3": "Taṃ kissa hetu?",
  "iti21:2.4": "Cittaṃ hissa, bhikkhave, pasannaṃ.",
  "iti21:2.5": "Cetopasādahetu kho pana, bhikkhave, evamidhekacce sattā kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjantī”ti.",
  "iti21:2.6": "Etamatthaṃ bhagavā avoca.",
  "iti21:2.7": "Tatthetaṃ iti vuccati:",
  "iti21:3.1": "“Pasannacittaṃ ñatvāna,",
  "iti21:3.2": "ekaccaṃ idha puggalaṃ;",
  "iti21:3.3": "Etamatthañca byākāsi,",
  "iti21:3.4": "buddho bhikkhūna santike.",
  "iti21:4.1": "Imamhi cāyaṃ samaye,",
  "iti21:4.2": "kālaṃ kayirātha puggalo;",
  "iti21:4.3": "Sugatiṃ upapajjeyya,",
  "iti21:4.4": "cittaṃ hissa pasāditaṃ.",
  "iti21:5.1": "Yathā haritvā nikkhipeyya,",
  "iti21:5.2": "evamevaṃ tathāvidho;",
  "iti21:5.3": "Cetopasādahetu hi,",
  "iti21:5.4": "sattā gacchanti suggatin”ti.",
  "iti21:6.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti21:6.2": "Paṭhamaṃ."
}