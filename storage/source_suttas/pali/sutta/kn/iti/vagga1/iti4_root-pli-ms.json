{
  "iti4:0.1": "Itivuttaka 4",
  "iti4:0.2": "Ekakanipāta",
  "iti4:0.3": "Paṭhamavagga",
  "iti4:0.4": "Kodhasutta",
  "iti4:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti4:2.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
  "iti4:2.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
  "iti4:2.3": "Katamaṃ ekadhammaṃ?",
  "iti4:2.4": "Kodhaṃ, bhikkhave, ekadhammaṃ pajahatha;",
  "iti4:2.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
  "iti4:2.6": "Etamatthaṃ bhagavā avoca.",
  "iti4:2.7": "Tatthetaṃ iti vuccati:",
  "iti4:3.1": "“Yena kodhena kuddhāse,",
  "iti4:3.2": "sattā gacchanti duggatiṃ;",
  "iti4:3.3": "Taṃ kodhaṃ sammadaññāya,",
  "iti4:3.4": "pajahanti vipassino;",
  "iti4:3.5": "Pahāya na punāyanti,",
  "iti4:3.6": "imaṃ lokaṃ kudācanan”ti.",
  "iti4:4.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti4:4.2": "Catutthaṃ."
}