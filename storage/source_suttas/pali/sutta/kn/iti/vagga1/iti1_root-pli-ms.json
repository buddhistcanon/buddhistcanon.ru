{
  "iti1:0.1": "Itivuttaka 1",
  "iti1:0.2": "Ekakanipāta",
  "iti1:0.3": "Paṭhamavagga",
  "iti1:0.4": "Lobhasutta",
  "iti1:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti1:2.1": "“Ekadhammaṃ, bhikkhave, pajahatha;",
  "iti1:2.2": "ahaṃ vo pāṭibhogo anāgāmitāya.",
  "iti1:2.3": "Katamaṃ ekadhammaṃ?",
  "iti1:2.4": "Lobhaṃ, bhikkhave, ekadhammaṃ pajahatha;",
  "iti1:2.5": "ahaṃ vo pāṭibhogo anāgāmitāyā”ti.",
  "iti1:2.6": "Etamatthaṃ bhagavā avoca.",
  "iti1:2.7": "Tatthetaṃ iti vuccati:",
  "iti1:3.1": "“Yena lobhena luddhāse,",
  "iti1:3.2": "sattā gacchanti duggatiṃ;",
  "iti1:3.3": "Taṃ lobhaṃ sammadaññāya,",
  "iti1:3.4": "pajahanti vipassino;",
  "iti1:3.5": "Pahāya na punāyanti,",
  "iti1:3.6": "imaṃ lokaṃ kudācanan”ti.",
  "iti1:4.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti1:4.2": "Paṭhamaṃ."
}