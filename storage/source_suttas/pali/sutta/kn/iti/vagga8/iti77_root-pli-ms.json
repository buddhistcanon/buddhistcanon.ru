{
  "iti77:0.1": "Itivuttaka 77",
  "iti77:0.2": "Tikanipāta",
  "iti77:0.3": "Tatiyavagga",
  "iti77:0.4": "Bhidurasutta",
  "iti77:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti77:2.1": "“Bhidurāyaṃ, bhikkhave, kāyo, viññāṇaṃ virāgadhammaṃ, sabbe upadhī aniccā dukkhā vipariṇāmadhammā”ti.",
  "iti77:2.2": "Etamatthaṃ bhagavā avoca.",
  "iti77:2.3": "Tatthetaṃ iti vuccati:",
  "iti77:3.1": "“Kāyañca bhiduraṃ ñatvā,",
  "iti77:3.2": "Viññāṇañca virāgunaṃ;",
  "iti77:3.3": "Upadhīsu bhayaṃ disvā,",
  "iti77:3.4": "Jātimaraṇamaccagā;",
  "iti77:3.5": "Sampatvā paramaṃ santiṃ,",
  "iti77:3.6": "Kālaṃ kaṅkhati bhāvitatto”ti.",
  "iti77:4.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti77:4.2": "Aṭṭhamaṃ."
}