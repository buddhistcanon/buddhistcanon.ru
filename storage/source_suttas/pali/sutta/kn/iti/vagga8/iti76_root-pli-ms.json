{
  "iti76:0.1": "Itivuttaka 76",
  "iti76:0.2": "Tikanipāta",
  "iti76:0.3": "Tatiyavagga",
  "iti76:0.4": "Sukhapatthanāsutta",
  "iti76:1.1": "Vuttañhetaṃ bhagavatā vuttamarahatāti me sutaṃ:",
  "iti76:2.1": "“Tīṇimāni, bhikkhave, sukhāni patthayamāno sīlaṃ rakkheyya paṇḍito.",
  "iti76:2.2": "Katamāni tīṇi?",
  "iti76:2.3": "Pasaṃsā me āgacchatūti sīlaṃ rakkheyya paṇḍito, bhogā me uppajjantūti sīlaṃ rakkheyya paṇḍito, kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjissāmīti sīlaṃ rakkheyya paṇḍito.",
  "iti76:2.4": "Imāni kho, bhikkhave, tīṇi sukhāni patthayamāno sīlaṃ rakkheyya paṇḍito”ti.",
  "iti76:2.5": "Etamatthaṃ bhagavā avoca.",
  "iti76:2.6": "Tatthetaṃ iti vuccati:",
  "iti76:3.1": "“Sīlaṃ rakkheyya medhāvī,",
  "iti76:3.2": "patthayāno tayo sukhe;",
  "iti76:3.3": "Pasaṃsaṃ vittalābhañca,",
  "iti76:3.4": "pecca sagge pamodanaṃ.",
  "iti76:4.1": "Akarontopi ce pāpaṃ,",
  "iti76:4.2": "karontamupasevati;",
  "iti76:4.3": "Saṅkiyo hoti pāpasmiṃ,",
  "iti76:4.4": "avaṇṇo cassa rūhati.",
  "iti76:5.1": "Yādisaṃ kurute mittaṃ,",
  "iti76:5.2": "yādisaṃ cūpasevati;",
  "iti76:5.3": "Sa ve tādisako hoti,",
  "iti76:5.4": "sahavāso hi tādiso.",
  "iti76:6.1": "Sevamāno sevamānaṃ,",
  "iti76:6.2": "samphuṭṭho samphusaṃ paraṃ;",
  "iti76:6.3": "Saro diddho kalāpaṃva,",
  "iti76:6.4": "alittamupalimpati;",
  "iti76:6.5": "Upalepabhayā dhīro,",
  "iti76:6.6": "neva pāpasakhā siyā.",
  "iti76:7.1": "Pūtimacchaṃ kusaggena,",
  "iti76:7.2": "yo naro upanayhati;",
  "iti76:7.3": "Kusāpi pūti vāyanti,",
  "iti76:7.4": "evaṃ bālūpasevanā.",
  "iti76:8.1": "Tagarañca palāsena,",
  "iti76:8.2": "yo naro upanayhati;",
  "iti76:8.3": "Pattāpi surabhi vāyanti,",
  "iti76:8.4": "evaṃ dhīrūpasevanā.",
  "iti76:9.1": "Tasmā pattapuṭasseva,",
  "iti76:9.2": "ñatvā sampākamattano;",
  "iti76:9.3": "Asante nupaseveyya,",
  "iti76:9.4": "sante seveyya paṇḍito;",
  "iti76:9.5": "Asanto nirayaṃ nenti,",
  "iti76:9.6": "santo pāpenti suggatin”ti.",
  "iti76:10.1": "Ayampi attho vutto bhagavatā, iti me sutanti.",
  "iti76:10.2": "Sattamaṃ."
}