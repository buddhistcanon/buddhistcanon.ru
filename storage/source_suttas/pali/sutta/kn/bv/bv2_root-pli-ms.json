{
  "bv2:0.1": "Buddhavaṃsa",
  "bv2:0.2": "2 Sumedhapatthanākathā",
  "bv2:1.1": "“Kappe ca satasahasse,",
  "bv2:1.2": "caturo ca asaṅkhiye;",
  "bv2:1.3": "Amaraṃ nāma nagaraṃ,",
  "bv2:1.4": "dassaneyyaṃ manoramaṃ.",
  "bv2:2.1": "Dasahi saddehi avivittaṃ,",
  "bv2:2.2": "Annapānasamāyutaṃ;",
  "bv2:2.3": "Hatthisaddaṃ assasaddaṃ,",
  "bv2:2.4": "Bherisaṅkharathāni ca;",
  "bv2:2.5": "Khādatha pivatha ceva,",
  "bv2:2.6": "Annapānena ghositaṃ.",
  "bv2:3.1": "Nagaraṃ sabbaṅgasampannaṃ,",
  "bv2:3.2": "sabbakammamupāgataṃ;",
  "bv2:3.3": "Sattaratanasampannaṃ,",
  "bv2:3.4": "nānājanasamākulaṃ;",
  "bv2:3.5": "Samiddhaṃ devanagaraṃva,",
  "bv2:3.6": "āvāsaṃ puññakamminaṃ.",
  "bv2:4.1": "Nagare amaravatiyā,",
  "bv2:4.2": "sumedho nāma brāhmaṇo;",
  "bv2:4.3": "Anekakoṭisannicayo,",
  "bv2:4.4": "pahūtadhanadhaññavā.",
  "bv2:5.1": "Ajjhāyako mantadharo,",
  "bv2:5.2": "tiṇṇaṃ vedāna pāragū;",
  "bv2:5.3": "Lakkhaṇe itihāse ca,",
  "bv2:5.4": "sadhamme pāramiṃ gato.",
  "bv2:6.1": "Rahogato nisīditvā,",
  "bv2:6.2": "evaṃ cintesahaṃ tadā;",
  "bv2:6.3": "‘Dukkho punabbhavo nāma,",
  "bv2:6.4": "sarīrassa ca bhedanaṃ.",
  "bv2:7.1": "Jātidhammo jarādhammo,",
  "bv2:7.2": "Byādhidhammo sahaṃ tadā;",
  "bv2:7.3": "Ajaraṃ amataṃ khemaṃ,",
  "bv2:7.4": "Pariyesissāmi nibbutiṃ.",
  "bv2:8.1": "Yaṃnūnimaṃ pūtikāyaṃ,",
  "bv2:8.2": "nānākuṇapapūritaṃ;",
  "bv2:8.3": "Chaḍḍayitvāna gaccheyyaṃ,",
  "bv2:8.4": "anapekkho anatthiko.",
  "bv2:9.1": "Atthi hehiti so maggo,",
  "bv2:9.2": "na so sakkā na hetuye;",
  "bv2:9.3": "Pariyesissāmi taṃ maggaṃ,",
  "bv2:9.4": "bhavato parimuttiyā.",
  "bv2:10.1": "Yathāpi dukkhe vijjante,",
  "bv2:10.2": "sukhaṃ nāmapi vijjati;",
  "bv2:10.3": "Evaṃ bhave vijjamāne,",
  "bv2:10.4": "vibhavopi icchitabbako.",
  "bv2:11.1": "Yathāpi uṇhe vijjante,",
  "bv2:11.2": "aparaṃ vijjati sītalaṃ;",
  "bv2:11.3": "Evaṃ tividhaggi vijjante,",
  "bv2:11.4": "nibbānaṃ icchitabbakaṃ.",
  "bv2:12.1": "Yathāpi pāpe vijjante,",
  "bv2:12.2": "kalyāṇamapi vijjati;",
  "bv2:12.3": "Evamevaṃ jāti vijjante,",
  "bv2:12.4": "ajātipicchitabbakaṃ.",
  "bv2:13.1": "Yathā gūthagato puriso,",
  "bv2:13.2": "taḷākaṃ disvāna pūritaṃ;",
  "bv2:13.3": "Na gavesati taṃ taḷākaṃ,",
  "bv2:13.4": "na doso taḷākassa so.",
  "bv2:14.1": "Evaṃ kilesamaladhovaṃ,",
  "bv2:14.2": "vijjante amatantaḷe;",
  "bv2:14.3": "Na gavesati taṃ taḷākaṃ,",
  "bv2:14.4": "na doso amatantaḷe.",
  "bv2:15.1": "Yathā arīhi pariruddho,",
  "bv2:15.2": "vijjante gamanampathe;",
  "bv2:15.3": "Na palāyati so puriso,",
  "bv2:15.4": "na doso añjasassa so.",
  "bv2:16.1": "Evaṃ kilesapariruddho,",
  "bv2:16.2": "vijjamāne sive pathe;",
  "bv2:16.3": "Na gavesati taṃ maggaṃ,",
  "bv2:16.4": "na doso sivamañjase.",
  "bv2:17.1": "Yathāpi byādhito puriso,",
  "bv2:17.2": "vijjamāne tikicchake;",
  "bv2:17.3": "Na tikicchāpeti taṃ byādhiṃ,",
  "bv2:17.4": "na doso so tikicchake.",
  "bv2:18.1": "Evaṃ kilesabyādhīhi,",
  "bv2:18.2": "Dukkhito paripīḷito;",
  "bv2:18.3": "Na gavesati taṃ ācariyaṃ,",
  "bv2:18.4": "Na doso so vināyake.",
  "bv2:19.1": "Yathāpi kuṇapaṃ puriso,",
  "bv2:19.2": "kaṇṭhe baddhaṃ jigucchiya;",
  "bv2:19.3": "Mocayitvāna gaccheyya,",
  "bv2:19.4": "sukhī serī sayaṃvasī.",
  "bv2:20.1": "Tathevimaṃ pūtikāyaṃ,",
  "bv2:20.2": "nānākuṇapasañcayaṃ;",
  "bv2:20.3": "Chaḍḍayitvāna gaccheyyaṃ,",
  "bv2:20.4": "anapekkho anatthiko.",
  "bv2:21.1": "Yathā uccāraṭṭhānamhi,",
  "bv2:21.2": "karīsaṃ naranāriyo;",
  "bv2:21.3": "Chaḍḍayitvāna gacchanti,",
  "bv2:21.4": "anapekkhā anatthikā.",
  "bv2:22.1": "Evamevāhaṃ imaṃ kāyaṃ,",
  "bv2:22.2": "nānākuṇapapūritaṃ;",
  "bv2:22.3": "Chaḍḍayitvāna gacchissaṃ,",
  "bv2:22.4": "vaccaṃ katvā yathā kuṭiṃ.",
  "bv2:23.1": "Yathāpi jajjaraṃ nāvaṃ,",
  "bv2:23.2": "paluggaṃ udagāhiniṃ;",
  "bv2:23.3": "Sāmī chaḍḍetvā gacchanti,",
  "bv2:23.4": "anapekkhā anatthikā.",
  "bv2:24.1": "Evamevāhaṃ imaṃ kāyaṃ,",
  "bv2:24.2": "navacchiddaṃ dhuvassavaṃ;",
  "bv2:24.3": "Chaḍḍayitvāna gacchissaṃ,",
  "bv2:24.4": "jiṇṇanāvaṃva sāmikā.",
  "bv2:25.1": "Yathāpi puriso corehi,",
  "bv2:25.2": "gacchanto bhaṇḍamādiya;",
  "bv2:25.3": "Bhaṇḍacchedabhayaṃ disvā,",
  "bv2:25.4": "chaḍḍayitvāna gacchati.",
  "bv2:26.1": "Evamevaṃ ayaṃ kāyo,",
  "bv2:26.2": "mahācorasamo viya;",
  "bv2:26.3": "Pahāyimaṃ gamissāmi,",
  "bv2:26.4": "kusalacchedanā bhayā’.",
  "bv2:27.1": "Evāhaṃ cintayitvāna,",
  "bv2:27.2": "nekakoṭisataṃ dhanaṃ;",
  "bv2:27.3": "Nāthānāthānaṃ datvāna,",
  "bv2:27.4": "himavantamupāgamiṃ.",
  "bv2:28.1": "Himavantassāvidūre,",
  "bv2:28.2": "dhammiko nāma pabbato;",
  "bv2:28.3": "Assamo sukato mayhaṃ,",
  "bv2:28.4": "paṇṇasālā sumāpitā.",
  "bv2:29.1": "Caṅkamaṃ tattha māpesiṃ,",
  "bv2:29.2": "pañcadosavivajjitaṃ;",
  "bv2:29.3": "Aṭṭhaguṇasamupetaṃ,",
  "bv2:29.4": "abhiññābalamāhariṃ.",
  "bv2:30.1": "Sāṭakaṃ pajahiṃ tattha,",
  "bv2:30.2": "navadosamupāgataṃ;",
  "bv2:30.3": "Vākacīraṃ nivāsesiṃ,",
  "bv2:30.4": "dvādasaguṇamupāgataṃ.",
  "bv2:31.1": "Aṭṭhadosasamākiṇṇaṃ,",
  "bv2:31.2": "pajahiṃ paṇṇasālakaṃ;",
  "bv2:31.3": "Upāgamiṃ rukkhamūlaṃ,",
  "bv2:31.4": "guṇe dasahupāgataṃ.",
  "bv2:32.1": "Vāpitaṃ ropitaṃ dhaññaṃ,",
  "bv2:32.2": "pajahiṃ niravasesato;",
  "bv2:32.3": "Anekaguṇasampannaṃ,",
  "bv2:32.4": "pavattaphalamādiyiṃ.",
  "bv2:33.1": "Tatthappadhānaṃ padahiṃ,",
  "bv2:33.2": "nisajjaṭṭhānacaṅkame;",
  "bv2:33.3": "Abbhantaramhi sattāhe,",
  "bv2:33.4": "abhiññābalapāpuṇiṃ.",
  "bv2:34.1": "Evaṃ me siddhippattassa,",
  "bv2:34.2": "vasībhūtassa sāsane;",
  "bv2:34.3": "Dīpaṅkaro nāma jino,",
  "bv2:34.4": "uppajji lokanāyako.",
  "bv2:35.1": "Uppajjante ca jāyante,",
  "bv2:35.2": "bujjhante dhammadesane;",
  "bv2:35.3": "Caturo nimitte nāddasaṃ,",
  "bv2:35.4": "jhānaratisamappito.",
  "bv2:36.1": "Paccantadesavisaye,",
  "bv2:36.2": "nimantetvā tathāgataṃ;",
  "bv2:36.3": "Tassa āgamanaṃ maggaṃ,",
  "bv2:36.4": "sodhenti tuṭṭhamānasā.",
  "bv2:37.1": "Ahaṃ tena samayena,",
  "bv2:37.2": "nikkhamitvā sakassamā;",
  "bv2:37.3": "Dhunanto vākacīrāni,",
  "bv2:37.4": "gacchāmi ambare tadā.",
  "bv2:38.1": "Vedajātaṃ janaṃ disvā,",
  "bv2:38.2": "tuṭṭhahaṭṭhaṃ pamoditaṃ;",
  "bv2:38.3": "Orohitvāna gaganā,",
  "bv2:38.4": "manusse pucchi tāvade.",
  "bv2:39.1": "‘Tuṭṭhahaṭṭho pamudito,",
  "bv2:39.2": "vedajāto mahājano;",
  "bv2:39.3": "Kassa sodhīyati maggo,",
  "bv2:39.4": "añjasaṃ vaṭumāyanaṃ’.",
  "bv2:40.1": "Te me puṭṭhā viyākaṃsu,",
  "bv2:40.2": "‘buddho loke anuttaro;",
  "bv2:40.3": "Dīpaṅkaro nāma jino,",
  "bv2:40.4": "uppajji lokanāyako;",
  "bv2:40.5": "Tassa sodhīyati maggo,",
  "bv2:40.6": "añjasaṃ vaṭumāyanaṃ’.",
  "bv2:41.1": "Buddhotivacanaṃ sutvāna,",
  "bv2:41.2": "pīti uppajji tāvade;",
  "bv2:41.3": "Buddho buddhoti kathayanto,",
  "bv2:41.4": "somanassaṃ pavedayiṃ.",
  "bv2:42.1": "Tattha ṭhatvā vicintesiṃ,",
  "bv2:42.2": "tuṭṭho saṃviggamānaso;",
  "bv2:42.3": "‘Idha bījāni ropissaṃ,",
  "bv2:42.4": "khaṇo ve mā upaccagā’.",
  "bv2:43.1": "‘Yadi buddhassa sodhetha,",
  "bv2:43.2": "ekokāsaṃ dadātha me;",
  "bv2:43.3": "Ahampi sodhayissāmi,",
  "bv2:43.4": "añjasaṃ vaṭumāyanaṃ’.",
  "bv2:44.1": "Adaṃsu te mamokāsaṃ,",
  "bv2:44.2": "sodhetuṃ añjasaṃ tadā;",
  "bv2:44.3": "Buddho buddhoti cintento,",
  "bv2:44.4": "maggaṃ sodhemahaṃ tadā.",
  "bv2:45.1": "Aniṭṭhite mamokāse,",
  "bv2:45.2": "dīpaṅkaro mahāmuni;",
  "bv2:45.3": "Catūhi satasahassehi,",
  "bv2:45.4": "chaḷabhiññehi tādihi;",
  "bv2:45.5": "Khīṇāsavehi vimalehi,",
  "bv2:45.6": "paṭipajji añjasaṃ jino.",
  "bv2:46.1": "Paccuggamanā vattanti,",
  "bv2:46.2": "vajjanti bheriyo bahū;",
  "bv2:46.3": "Āmoditā naramarū,",
  "bv2:46.4": "sādhukāraṃ pavattayuṃ.",
  "bv2:47.1": "Devā manusse passanti,",
  "bv2:47.2": "manussāpi ca devatā;",
  "bv2:47.3": "Ubhopi te pañjalikā,",
  "bv2:47.4": "anuyanti tathāgataṃ.",
  "bv2:48.1": "Devā dibbehi turiyehi,",
  "bv2:48.2": "manussā mānusehi ca;",
  "bv2:48.3": "Ubhopi te vajjayantā,",
  "bv2:48.4": "anuyanti tathāgataṃ.",
  "bv2:49.1": "Dibbaṃ mandāravaṃ pupphaṃ,",
  "bv2:49.2": "padumaṃ pārichattakaṃ;",
  "bv2:49.3": "Disodisaṃ okiranti,",
  "bv2:49.4": "ākāsanabhagatā marū.",
  "bv2:50.1": "Dibbaṃ candanacuṇṇañca,",
  "bv2:50.2": "varagandhañca kevalaṃ;",
  "bv2:50.3": "Disodisaṃ okiranti,",
  "bv2:50.4": "ākāsanabhagatā marū.",
  "bv2:51.1": "Campakaṃ saralaṃ nīpaṃ,",
  "bv2:51.2": "nāgapunnāgaketakaṃ;",
  "bv2:51.3": "Disodisaṃ ukkhipanti,",
  "bv2:51.4": "bhūmitalagatā narā.",
  "bv2:52.1": "Kese muñcitvāhaṃ tattha,",
  "bv2:52.2": "vākacīrañca cammakaṃ;",
  "bv2:52.3": "Kalale pattharitvāna,",
  "bv2:52.4": "avakujjo nipajjahaṃ.",
  "bv2:53.1": "‘Akkamitvāna maṃ buddho,",
  "bv2:53.2": "saha sissehi gacchatu;",
  "bv2:53.3": "Mā naṃ kalale akkamittha,",
  "bv2:53.4": "hitāya me bhavissati’.",
  "bv2:54.1": "Pathaviyaṃ nipannassa,",
  "bv2:54.2": "evaṃ me āsi cetaso;",
  "bv2:54.3": "‘Icchamāno ahaṃ ajja,",
  "bv2:54.4": "kilese jhāpaye mama.",
  "bv2:55.1": "Kiṃ me aññātavesena,",
  "bv2:55.2": "dhammaṃ sacchikatenidha;",
  "bv2:55.3": "Sabbaññutaṃ pāpuṇitvā,",
  "bv2:55.4": "buddho hessaṃ sadevake.",
  "bv2:56.1": "Kiṃ me ekena tiṇṇena,",
  "bv2:56.2": "purisena thāmadassinā;",
  "bv2:56.3": "Sabbaññutaṃ pāpuṇitvā,",
  "bv2:56.4": "santāressaṃ sadevakaṃ.",
  "bv2:57.1": "Iminā me adhikārena,",
  "bv2:57.2": "katena purisuttame;",
  "bv2:57.3": "Sabbaññutaṃ pāpuṇitvā,",
  "bv2:57.4": "tāremi janataṃ bahuṃ.",
  "bv2:58.1": "Saṃsārasotaṃ chinditvā,",
  "bv2:58.2": "viddhaṃsetvā tayo bhave;",
  "bv2:58.3": "Dhammanāvaṃ samāruyha,",
  "bv2:58.4": "santāressaṃ sadevakaṃ.",
  "bv2:59.1": "Manussattaṃ liṅgasampatti,",
  "bv2:59.2": "hetu satthāradassanaṃ;",
  "bv2:59.3": "Pabbajjā guṇasampatti,",
  "bv2:59.4": "adhikāro ca chandatā;",
  "bv2:59.5": "Aṭṭhadhammasamodhānā,",
  "bv2:59.6": "abhinīhāro samijjhati’.",
  "bv2:60.1": "Dīpaṅkaro lokavidū,",
  "bv2:60.2": "āhutīnaṃ paṭiggaho;",
  "bv2:60.3": "Ussīsake maṃ ṭhatvāna,",
  "bv2:60.4": "idaṃ vacanamabravi.",
  "bv2:61.1": "‘Passatha imaṃ tāpasaṃ,",
  "bv2:61.2": "jaṭilaṃ uggatāpanaṃ;",
  "bv2:61.3": "Aparimeyyito kappe,",
  "bv2:61.4": "buddho loke bhavissati.",
  "bv2:62.1": "Ahu kapilavhayā rammā,",
  "bv2:62.2": "nikkhamitvā tathāgato;",
  "bv2:62.3": "Padhānaṃ padahitvāna,",
  "bv2:62.4": "katvā dukkarakārikaṃ.",
  "bv2:63.1": "Ajapālarukkhamūlasmiṃ,",
  "bv2:63.2": "nisīditvā tathāgato;",
  "bv2:63.3": "Tattha pāyāsaṃ paggayha,",
  "bv2:63.4": "nerañjaramupehiti.",
  "bv2:64.1": "Nerañjarāya tīramhi,",
  "bv2:64.2": "pāyāsaṃ ada so jino;",
  "bv2:64.3": "Paṭiyattavaramaggena,",
  "bv2:64.4": "bodhimūlamupehiti.",
  "bv2:65.1": "Tato padakkhiṇaṃ katvā,",
  "bv2:65.2": "bodhimaṇḍaṃ anuttaro;",
  "bv2:65.3": "Assattharukkhamūlamhi,",
  "bv2:65.4": "bujjhissati mahāyaso.",
  "bv2:66.1": "Imassa janikā mātā,",
  "bv2:66.2": "māyā nāma bhavissati;",
  "bv2:66.3": "Pitā suddhodano nāma,",
  "bv2:66.4": "ayaṃ hessati gotamo.",
  "bv2:67.1": "Anāsavā vītarāgā,",
  "bv2:67.2": "santacittā samāhitā;",
  "bv2:67.3": "Kolito upatisso ca,",
  "bv2:67.4": "aggā hessanti sāvakā;",
  "bv2:67.5": "Ānando nāmupaṭṭhāko,",
  "bv2:67.6": "upaṭṭhissatimaṃ jinaṃ.",
  "bv2:68.1": "Khemā uppalavaṇṇā ca,",
  "bv2:68.2": "aggā hessanti sāvikā;",
  "bv2:68.3": "Anāsavā vītarāgā,",
  "bv2:68.4": "santacittā samāhitā;",
  "bv2:68.5": "Bodhi tassa bhagavato,",
  "bv2:68.6": "assatthoti pavuccati.",
  "bv2:69.1": "Citto ca hatthāḷavako,",
  "bv2:69.2": "aggā hessantupaṭṭhakā;",
  "bv2:69.3": "Uttarā nandamātā ca,",
  "bv2:69.4": "aggā hessantupaṭṭhikā’.",
  "bv2:70.1": "Idaṃ sutvāna vacanaṃ,",
  "bv2:70.2": "asamassa mahesino;",
  "bv2:70.3": "Āmoditā naramarū,",
  "bv2:70.4": "buddhabījaṃ kira ayaṃ.",
  "bv2:71.1": "Ukkuṭṭhisaddā vattanti,",
  "bv2:71.2": "apphoṭenti hasanti ca;",
  "bv2:71.3": "Katañjalī namassanti,",
  "bv2:71.4": "dasasahassī sadevakā.",
  "bv2:72.1": "‘Yadimassa lokanāthassa,",
  "bv2:72.2": "virajjhissāma sāsanaṃ;",
  "bv2:72.3": "Anāgatamhi addhāne,",
  "bv2:72.4": "hessāma sammukhā imaṃ.",
  "bv2:73.1": "Yathā manussā nadiṃ tarantā,",
  "bv2:73.2": "Paṭititthaṃ virajjhiya;",
  "bv2:73.3": "Heṭṭhātitthe gahetvāna,",
  "bv2:73.4": "Uttaranti mahānadiṃ.",
  "bv2:74.1": "Evamevaṃ mayaṃ sabbe,",
  "bv2:74.2": "yadi muñcāmimaṃ jinaṃ;",
  "bv2:74.3": "Anāgatamhi addhāne,",
  "bv2:74.4": "hessāma sammukhā imaṃ’.",
  "bv2:75.1": "Dīpaṅkaro lokavidū,",
  "bv2:75.2": "āhutīnaṃ paṭiggaho;",
  "bv2:75.3": "Mama kammaṃ pakittetvā,",
  "bv2:75.4": "dakkhiṇaṃ pādamuddhari.",
  "bv2:76.1": "Ye tatthāsuṃ jinaputtā,",
  "bv2:76.2": "Padakkhiṇamakaṃsu maṃ;",
  "bv2:76.3": "Devā manussā asurā ca,",
  "bv2:76.4": "Abhivādetvāna pakkamuṃ.",
  "bv2:77.1": "Dassanaṃ me atikkante,",
  "bv2:77.2": "sasaṃghe lokanāyake;",
  "bv2:77.3": "Sayanā vuṭṭhahitvāna,",
  "bv2:77.4": "pallaṅkaṃ ābhujiṃ tadā.",
  "bv2:78.1": "Sukhena sukhito homi,",
  "bv2:78.2": "pāmojjena pamodito;",
  "bv2:78.3": "Pītiyā ca abhissanno,",
  "bv2:78.4": "pallaṅkaṃ ābhujiṃ tadā.",
  "bv2:79.1": "Pallaṅkena nisīditvā,",
  "bv2:79.2": "evaṃ cintesahaṃ tadā;",
  "bv2:79.3": "‘Vasībhūto ahaṃ jhāne,",
  "bv2:79.4": "abhiññāsu pāramiṅgato.",
  "bv2:80.1": "Sahassiyamhi lokamhi,",
  "bv2:80.2": "isayo natthi me samā;",
  "bv2:80.3": "Asamo iddhidhammesu,",
  "bv2:80.4": "alabhiṃ īdisaṃ sukhaṃ’.",
  "bv2:81.1": "Pallaṅkābhujane mayhaṃ,",
  "bv2:81.2": "dasasahassādhivāsino;",
  "bv2:81.3": "Mahānādaṃ pavattesuṃ,",
  "bv2:81.4": "‘dhuvaṃ buddho bhavissasi.",
  "bv2:82.1": "Yā pubbe bodhisattānaṃ,",
  "bv2:82.2": "pallaṅkavaramābhuje;",
  "bv2:82.3": "Nimittāni padissanti,",
  "bv2:82.4": "tāni ajja padissare.",
  "bv2:83.1": "Sītaṃ byapagataṃ hoti,",
  "bv2:83.2": "uṇhañca upasammati;",
  "bv2:83.3": "Tāni ajja padissanti,",
  "bv2:83.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:84.1": "Dasasahassī lokadhātū,",
  "bv2:84.2": "nissaddā honti nirākulā;",
  "bv2:84.3": "Tāni ajja padissanti,",
  "bv2:84.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:85.1": "Mahāvātā na vāyanti,",
  "bv2:85.2": "na sandanti savantiyo;",
  "bv2:85.3": "Tāni ajja padissanti,",
  "bv2:85.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:86.1": "Thalajā dakajā pupphā,",
  "bv2:86.2": "sabbe pupphanti tāvade;",
  "bv2:86.3": "Tepajja pupphitā sabbe,",
  "bv2:86.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:87.1": "Latā vā yadi vā rukkhā,",
  "bv2:87.2": "phalabhārā honti tāvade;",
  "bv2:87.3": "Tepajja phalitā sabbe,",
  "bv2:87.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:88.1": "Ākāsaṭṭhā ca bhūmaṭṭhā,",
  "bv2:88.2": "ratanā jotanti tāvade;",
  "bv2:88.3": "Tepajja ratanā jotanti,",
  "bv2:88.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:89.1": "Mānussakā ca dibbā ca,",
  "bv2:89.2": "turiyā vajjanti tāvade;",
  "bv2:89.3": "Tepajjubho abhiravanti,",
  "bv2:89.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:90.1": "Vicitrapupphā gaganā,",
  "bv2:90.2": "abhivassanti tāvade;",
  "bv2:90.3": "Tepi ajja pavassanti,",
  "bv2:90.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:91.1": "Mahāsamuddo ābhujati,",
  "bv2:91.2": "dasasahassī pakampati;",
  "bv2:91.3": "Tepajjubho abhiravanti,",
  "bv2:91.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:92.1": "Nirayepi dasasahasse,",
  "bv2:92.2": "aggī nibbanti tāvade;",
  "bv2:92.3": "Tepajja nibbutā aggī,",
  "bv2:92.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:93.1": "Vimalo hoti sūriyo,",
  "bv2:93.2": "sabbā dissanti tārakā;",
  "bv2:93.3": "Tepi ajja padissanti,",
  "bv2:93.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:94.1": "Anovaṭṭhena udakaṃ,",
  "bv2:94.2": "mahiyā ubbhijji tāvade;",
  "bv2:94.3": "Tampajjubbhijjate mahiyā,",
  "bv2:94.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:95.1": "Tārāgaṇā virocanti,",
  "bv2:95.2": "nakkhattā gaganamaṇḍale;",
  "bv2:95.3": "Visākhā candimāyuttā,",
  "bv2:95.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:96.1": "Bilāsayā darīsayā,",
  "bv2:96.2": "nikkhamanti sakāsayā;",
  "bv2:96.3": "Tepajja āsayā chuddhā,",
  "bv2:96.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:97.1": "Na honti aratī sattānaṃ,",
  "bv2:97.2": "santuṭṭhā honti tāvade;",
  "bv2:97.3": "Tepajja sabbe santuṭṭhā,",
  "bv2:97.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:98.1": "Rogā tadupasammanti,",
  "bv2:98.2": "jighacchā ca vinassati;",
  "bv2:98.3": "Tāni ajja padissanti,",
  "bv2:98.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:99.1": "Rāgo tadā tanu hoti,",
  "bv2:99.2": "doso moho vinassati;",
  "bv2:99.3": "Tepajja vigatā sabbe,",
  "bv2:99.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:100.1": "Bhayaṃ tadā na bhavati,",
  "bv2:100.2": "ajjapetaṃ padissati;",
  "bv2:100.3": "Tena liṅgena jānāma,",
  "bv2:100.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:101.1": "Rajonuddhaṃsati uddhaṃ,",
  "bv2:101.2": "ajjapetaṃ padissati;",
  "bv2:101.3": "Tena liṅgena jānāma,",
  "bv2:101.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:102.1": "Aniṭṭhagandho pakkamati,",
  "bv2:102.2": "dibbagandho pavāyati;",
  "bv2:102.3": "Sopajja vāyati gandho,",
  "bv2:102.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:103.1": "Sabbe devā padissanti,",
  "bv2:103.2": "ṭhapayitvā arūpino;",
  "bv2:103.3": "Tepajja sabbe dissanti,",
  "bv2:103.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:104.1": "Yāvatā nirayā nāma,",
  "bv2:104.2": "sabbe dissanti tāvade;",
  "bv2:104.3": "Tepajja sabbe dissanti,",
  "bv2:104.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:105.1": "Kuṭṭā kavāṭā selā ca,",
  "bv2:105.2": "na hontāvaraṇā tadā;",
  "bv2:105.3": "Ākāsabhūtā tepajja,",
  "bv2:105.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:106.1": "Cutī ca upapatti ca,",
  "bv2:106.2": "khaṇe tasmiṃ na vijjati;",
  "bv2:106.3": "Tānipajja padissanti,",
  "bv2:106.4": "dhuvaṃ buddho bhavissasi.",
  "bv2:107.1": "Daḷhaṃ paggaṇha vīriyaṃ,",
  "bv2:107.2": "mā nivatta abhikkama;",
  "bv2:107.3": "Mayampetaṃ vijānāma,",
  "bv2:107.4": "dhuvaṃ buddho bhavissasi’.",
  "bv2:108.1": "Buddhassa vacanaṃ sutvā,",
  "bv2:108.2": "dasasahassīna cūbhayaṃ;",
  "bv2:108.3": "Tuṭṭhahaṭṭho pamodito,",
  "bv2:108.4": "evaṃ cintesahaṃ tadā.",
  "bv2:109.1": "‘Advejjhavacanā buddhā,",
  "bv2:109.2": "Amoghavacanā jinā;",
  "bv2:109.3": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:109.4": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:110.1": "Yathā khittaṃ nabhe leḍḍu,",
  "bv2:110.2": "Dhuvaṃ patati bhūmiyaṃ;",
  "bv2:110.3": "Tatheva buddhaseṭṭhānaṃ,",
  "bv2:110.4": "Vacanaṃ dhuvasassataṃ;",
  "bv2:110.5": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:110.6": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:111.1": "Yathāpi sabbasattānaṃ,",
  "bv2:111.2": "Maraṇaṃ dhuvasassataṃ;",
  "bv2:111.3": "Tatheva buddhaseṭṭhānaṃ,",
  "bv2:111.4": "Vacanaṃ dhuvasassataṃ;",
  "bv2:111.5": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:111.6": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:112.1": "Yathā rattikkhaye patte,",
  "bv2:112.2": "Sūriyuggamanaṃ dhuvaṃ;",
  "bv2:112.3": "Tatheva buddhaseṭṭhānaṃ,",
  "bv2:112.4": "Vacanaṃ dhuvasassataṃ;",
  "bv2:112.5": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:112.6": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:113.1": "Yathā nikkhantasayanassa,",
  "bv2:113.2": "Sīhassa nadanaṃ dhuvaṃ;",
  "bv2:113.3": "Tatheva buddhaseṭṭhānaṃ,",
  "bv2:113.4": "Vacanaṃ dhuvasassataṃ;",
  "bv2:113.5": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:113.6": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:114.1": "Yathā āpannasattānaṃ,",
  "bv2:114.2": "Bhāramoropanaṃ dhuvaṃ;",
  "bv2:114.3": "Tatheva buddhaseṭṭhānaṃ,",
  "bv2:114.4": "Vacanaṃ dhuvasassataṃ;",
  "bv2:114.5": "Vitathaṃ natthi buddhānaṃ,",
  "bv2:114.6": "Dhuvaṃ buddho bhavāmahaṃ.",
  "bv2:115.1": "Handa buddhakare dhamme,",
  "bv2:115.2": "vicināmi ito cito;",
  "bv2:115.3": "Uddhaṃ adho dasa disā,",
  "bv2:115.4": "yāvatā dhammadhātuyā’.",
  "bv2:116.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:116.2": "paṭhamaṃ **dānapāramiṃ**;",
  "bv2:116.3": "Pubbakehi mahesīhi,",
  "bv2:116.4": "anuciṇṇaṃ mahāpathaṃ.",
  "bv2:117.1": "‘Imaṃ tvaṃ paṭhamaṃ tāva,",
  "bv2:117.2": "daḷhaṃ katvā samādiya;",
  "bv2:117.3": "Dānapāramitaṃ gaccha,",
  "bv2:117.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:118.1": "Yathāpi kumbho sampuṇṇo,",
  "bv2:118.2": "yassa kassaci adhokato;",
  "bv2:118.3": "Vamatevudakaṃ nissesaṃ,",
  "bv2:118.4": "na tattha parirakkhati.",
  "bv2:119.1": "Tatheva yācake disvā,",
  "bv2:119.2": "hīnamukkaṭṭhamajjhime;",
  "bv2:119.3": "Dadāhi dānaṃ nissesaṃ,",
  "bv2:119.4": "kumbho viya adhokato.",
  "bv2:120.1": "Na hete ettakāyeva,",
  "bv2:120.2": "buddhadhammā bhavissare;",
  "bv2:120.3": "Aññepi vicinissāmi,",
  "bv2:120.4": "ye dhammā bodhipācanā’.",
  "bv2:121.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:121.2": "dutiyaṃ **sīlapāramiṃ**;",
  "bv2:121.3": "Pubbakehi mahesīhi,",
  "bv2:121.4": "āsevitanisevitaṃ.",
  "bv2:122.1": "‘Imaṃ tvaṃ dutiyaṃ tāva,",
  "bv2:122.2": "daḷhaṃ katvā samādiya;",
  "bv2:122.3": "Sīlapāramitaṃ gaccha,",
  "bv2:122.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:123.1": "Yathāpi camarī vālaṃ,",
  "bv2:123.2": "kismiñci paṭilaggitaṃ;",
  "bv2:123.3": "Upeti maraṇaṃ tattha,",
  "bv2:123.4": "na vikopeti vāladhiṃ.",
  "bv2:124.1": "Tatheva tvaṃ catūsu bhūmīsu,",
  "bv2:124.2": "Sīlāni paripūraya;",
  "bv2:124.3": "Parirakkha sabbadā sīlaṃ,",
  "bv2:124.4": "Camarī viya vāladhiṃ.",
  "bv2:125.1": "Na hete ettakāyeva,",
  "bv2:125.2": "buddhadhammā bhavissare;",
  "bv2:125.3": "Aññepi vicinissāmi,",
  "bv2:125.4": "ye dhammā bodhipācanā’.",
  "bv2:126.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:126.2": "tatiyaṃ **nekkhammapāramiṃ**;",
  "bv2:126.3": "Pubbakehi mahesīhi,",
  "bv2:126.4": "āsevitanisevitaṃ.",
  "bv2:127.1": "‘Imaṃ tvaṃ tatiyaṃ tāva,",
  "bv2:127.2": "daḷhaṃ katvā samādiya;",
  "bv2:127.3": "Nekkhammapāramitaṃ gaccha,",
  "bv2:127.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:128.1": "Yathā andughare puriso,",
  "bv2:128.2": "ciravuttho dukhaṭṭito;",
  "bv2:128.3": "Na tattha rāgaṃ janesi,",
  "bv2:128.4": "muttiṃyeva gavesati.",
  "bv2:129.1": "Tatheva tvaṃ sabbabhave,",
  "bv2:129.2": "passa andughare viya;",
  "bv2:129.3": "Nekkhammābhimukho hohi,",
  "bv2:129.4": "bhavato parimuttiyā.",
  "bv2:130.1": "Na hete ettakāyeva,",
  "bv2:130.2": "buddhadhammā bhavissare;",
  "bv2:130.3": "Aññepi vicinissāmi,",
  "bv2:130.4": "ye dhammā bodhipācanā’.",
  "bv2:131.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:131.2": "catutthaṃ **paññāpāramiṃ**;",
  "bv2:131.3": "Pubbakehi mahesīhi,",
  "bv2:131.4": "āsevitanisevitaṃ.",
  "bv2:132.1": "‘Imaṃ tvaṃ catutthaṃ tāva,",
  "bv2:132.2": "daḷhaṃ katvā samādiya;",
  "bv2:132.3": "Paññāpāramitaṃ gaccha,",
  "bv2:132.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:133.1": "Yathāpi bhikkhu bhikkhanto,",
  "bv2:133.2": "hīnamukkaṭṭhamajjhime;",
  "bv2:133.3": "Kulāni na vivajjento,",
  "bv2:133.4": "evaṃ labhati yāpanaṃ.",
  "bv2:134.1": "Tatheva tvaṃ sabbakālaṃ,",
  "bv2:134.2": "paripucchaṃ budhaṃ janaṃ;",
  "bv2:134.3": "Paññāpāramitaṃ gantvā,",
  "bv2:134.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:135.1": "Na hete ettakāyeva,",
  "bv2:135.2": "buddhadhammā bhavissare;",
  "bv2:135.3": "Aññepi vicinissāmi,",
  "bv2:135.4": "ye dhammā bodhipācanā’.",
  "bv2:136.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:136.2": "pañcamaṃ **vīriyapāramiṃ**;",
  "bv2:136.3": "Pubbakehi mahesīhi,",
  "bv2:136.4": "āsevitanisevitaṃ.",
  "bv2:137.1": "‘Imaṃ tvaṃ pañcamaṃ tāva,",
  "bv2:137.2": "daḷhaṃ katvā samādiya;",
  "bv2:137.3": "Vīriyapāramitaṃ gaccha,",
  "bv2:137.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:138.1": "Yathāpi sīho migarājā,",
  "bv2:138.2": "nisajjaṭṭhānacaṅkame;",
  "bv2:138.3": "Alīnavīriyo hoti,",
  "bv2:138.4": "paggahitamano sadā.",
  "bv2:139.1": "Tatheva tvaṃ sabbabhave,",
  "bv2:139.2": "paggaṇha vīriyaṃ daḷhaṃ;",
  "bv2:139.3": "Vīriyapāramitaṃ gantvā,",
  "bv2:139.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:140.1": "Na hete ettakāyeva,",
  "bv2:140.2": "buddhadhammā bhavissare;",
  "bv2:140.3": "Aññepi vicinissāmi,",
  "bv2:140.4": "ye dhammā bodhipācanā’.",
  "bv2:141.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:141.2": "chaṭṭhamaṃ **khantipāramiṃ**;",
  "bv2:141.3": "Pubbakehi mahesīhi,",
  "bv2:141.4": "āsevitanisevitaṃ.",
  "bv2:142.1": "‘Imaṃ tvaṃ chaṭṭhamaṃ tāva,",
  "bv2:142.2": "daḷhaṃ katvā samādiya;",
  "bv2:142.3": "Tattha advejjhamānaso,",
  "bv2:142.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:143.1": "Yathāpi pathavī nāma,",
  "bv2:143.2": "sucimpi asucimpi ca;",
  "bv2:143.3": "Sabbaṃ sahati nikkhepaṃ,",
  "bv2:143.4": "na karoti paṭighaṃ tayā.",
  "bv2:144.1": "Tatheva tvampi sabbesaṃ,",
  "bv2:144.2": "sammānāvamānakkhamo;",
  "bv2:144.3": "Khantipāramitaṃ gantvā,",
  "bv2:144.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:145.1": "Na hete ettakāyeva,",
  "bv2:145.2": "buddhadhammā bhavissare;",
  "bv2:145.3": "Aññepi vicinissāmi,",
  "bv2:145.4": "ye dhammā bodhipācanā’.",
  "bv2:146.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:146.2": "sattamaṃ **saccapāramiṃ**;",
  "bv2:146.3": "Pubbakehi mahesīhi,",
  "bv2:146.4": "āsevitanisevitaṃ.",
  "bv2:147.1": "‘Imaṃ tvaṃ sattamaṃ tāva,",
  "bv2:147.2": "daḷhaṃ katvā samādiya;",
  "bv2:147.3": "Tattha advejjhavacano,",
  "bv2:147.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:148.1": "Yathāpi osadhī nāma,",
  "bv2:148.2": "tulābhūtā sadevake;",
  "bv2:148.3": "Samaye utuvasse vā,",
  "bv2:148.4": "na vokkamati vīthito.",
  "bv2:149.1": "Tatheva tvampi saccesu,",
  "bv2:149.2": "mā vokkama hi vīthito;",
  "bv2:149.3": "Saccapāramitaṃ gantvā,",
  "bv2:149.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:150.1": "Na hete ettakāyeva,",
  "bv2:150.2": "buddhadhammā bhavissare;",
  "bv2:150.3": "Aññepi vicinissāmi,",
  "bv2:150.4": "ye dhammā bodhipācanā’.",
  "bv2:151.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:151.2": "Aṭṭhamaṃ **adhiṭṭhānapāramiṃ**;",
  "bv2:151.3": "Pubbakehi mahesīhi,",
  "bv2:151.4": "Āsevitanisevitaṃ.",
  "bv2:152.1": "‘Imaṃ tvaṃ aṭṭhamaṃ tāva,",
  "bv2:152.2": "daḷhaṃ katvā samādiya;",
  "bv2:152.3": "Tattha tvaṃ acalo hutvā,",
  "bv2:152.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:153.1": "Yathāpi pabbato selo,",
  "bv2:153.2": "acalo suppatiṭṭhito;",
  "bv2:153.3": "Na kampati bhusavātehi,",
  "bv2:153.4": "sakaṭṭhāneva tiṭṭhati.",
  "bv2:154.1": "Tatheva tvampi adhiṭṭhāne,",
  "bv2:154.2": "Sabbadā acalo bhava;",
  "bv2:154.3": "Adhiṭṭhānapāramitaṃ gantvā,",
  "bv2:154.4": "Sambodhiṃ pāpuṇissasi.",
  "bv2:155.1": "Na hete ettakāyeva,",
  "bv2:155.2": "buddhadhammā bhavissare;",
  "bv2:155.3": "Aññepi vicinissāmi,",
  "bv2:155.4": "ye dhammā bodhipācanā’.",
  "bv2:156.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:156.2": "navamaṃ **mettāpāramiṃ**;",
  "bv2:156.3": "Pubbakehi mahesīhi,",
  "bv2:156.4": "āsevitanisevitaṃ.",
  "bv2:157.1": "‘Imaṃ tvaṃ navamaṃ tāva,",
  "bv2:157.2": "daḷhaṃ katvā samādiya;",
  "bv2:157.3": "Mettāya asamo hohi,",
  "bv2:157.4": "yadi bodhiṃ pattumicchasi.",
  "bv2:158.1": "Yathāpi udakaṃ nāma,",
  "bv2:158.2": "kalyāṇe pāpake jane;",
  "bv2:158.3": "Samaṃ pharati sītena,",
  "bv2:158.4": "pavāheti rajomalaṃ.",
  "bv2:159.1": "Tatheva tvaṃ hitāhite,",
  "bv2:159.2": "samaṃ mettāya bhāvaya;",
  "bv2:159.3": "Mettāpāramitaṃ gantvā,",
  "bv2:159.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:160.1": "Na hete ettakāyeva,",
  "bv2:160.2": "buddhadhammā bhavissare;",
  "bv2:160.3": "Aññepi vicinissāmi,",
  "bv2:160.4": "ye dhammā bodhipācanā’.",
  "bv2:161.1": "Vicinanto tadā dakkhiṃ,",
  "bv2:161.2": "dasamaṃ **upekkhāpāramiṃ**;",
  "bv2:161.3": "Pubbakehi mahesīhi,",
  "bv2:161.4": "āsevitanisevitaṃ.",
  "bv2:162.1": "‘Imaṃ tvaṃ dasamaṃ tāva,",
  "bv2:162.2": "daḷhaṃ katvā samādiya;",
  "bv2:162.3": "Tulābhūto daḷho hutvā,",
  "bv2:162.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:163.1": "Yathāpi pathavī nāma,",
  "bv2:163.2": "nikkhittaṃ asuciṃ suciṃ;",
  "bv2:163.3": "Upekkhati ubhopete,",
  "bv2:163.4": "kopānunayavajjitā.",
  "bv2:164.1": "Tatheva tvaṃ sukhadukkhe,",
  "bv2:164.2": "tulābhūto sadā bhava;",
  "bv2:164.3": "Upekkhāpāramitaṃ gantvā,",
  "bv2:164.4": "sambodhiṃ pāpuṇissasi.",
  "bv2:165.1": "Ettakāyeva te loke,",
  "bv2:165.2": "ye dhammā bodhipācanā;",
  "bv2:165.3": "Tatuddhaṃ natthi aññatra,",
  "bv2:165.4": "daḷhaṃ tattha patiṭṭhaha’.",
  "bv2:166.1": "Ime dhamme sammasato,",
  "bv2:166.2": "sabhāvasarasalakkhaṇe;",
  "bv2:166.3": "Dhammatejena vasudhā,",
  "bv2:166.4": "dasasahassī pakampatha.",
  "bv2:167.1": "Calatī ravatī pathavī,",
  "bv2:167.2": "ucchuyantaṃva pīḷitaṃ;",
  "bv2:167.3": "Telayante yathā cakkaṃ,",
  "bv2:167.4": "evaṃ kampati medanī.",
  "bv2:168.1": "Yāvatā parisā āsi,",
  "bv2:168.2": "buddhassa parivesane;",
  "bv2:168.3": "Pavedhamānā sā tattha,",
  "bv2:168.4": "mucchitā seti bhūmiyaṃ.",
  "bv2:169.1": "Ghaṭānekasahassāni,",
  "bv2:169.2": "kumbhīnañca satā bahū;",
  "bv2:169.3": "Sañcuṇṇamathitā tattha,",
  "bv2:169.4": "aññamaññaṃ paghaṭṭitā.",
  "bv2:170.1": "Ubbiggā tasitā bhītā,",
  "bv2:170.2": "bhantā byathitamānasā;",
  "bv2:170.3": "Mahājanā samāgamma,",
  "bv2:170.4": "dīpaṅkaramupāgamuṃ.",
  "bv2:171.1": "‘Kiṃ bhavissati lokassa,",
  "bv2:171.2": "kalyāṇamatha pāpakaṃ;",
  "bv2:171.3": "Sabbo upadduto loko,",
  "bv2:171.4": "taṃ vinodehi cakkhuma’.",
  "bv2:172.1": "Tesaṃ tadā saññapesi,",
  "bv2:172.2": "dīpaṅkaro mahāmuni;",
  "bv2:172.3": "‘Visaṭṭhā hotha mā bhetha,",
  "bv2:172.4": "imasmiṃ pathavikampane.",
  "bv2:173.1": "Yamahaṃ ajja byākāsiṃ,",
  "bv2:173.2": "buddho loke bhavissati;",
  "bv2:173.3": "Eso sammasati dhammaṃ,",
  "bv2:173.4": "pubbakaṃ jinasevitaṃ.",
  "bv2:174.1": "Tassa sammasato dhammaṃ,",
  "bv2:174.2": "buddhabhūmiṃ asesato;",
  "bv2:174.3": "Tenāyaṃ kampitā pathavī,",
  "bv2:174.4": "dasasahassī sadevake’.",
  "bv2:175.1": "Buddhassa vacanaṃ sutvā,",
  "bv2:175.2": "mano nibbāyi tāvade;",
  "bv2:175.3": "Sabbe maṃ upasaṅkamma,",
  "bv2:175.4": "punāpi abhivandisuṃ.",
  "bv2:176.1": "Samādiyitvā buddhaguṇaṃ,",
  "bv2:176.2": "daḷhaṃ katvāna mānasaṃ;",
  "bv2:176.3": "Dīpaṅkaraṃ namassitvā,",
  "bv2:176.4": "āsanā vuṭṭhahiṃ tadā.",
  "bv2:177.1": "Dibbaṃ mānusakaṃ pupphaṃ,",
  "bv2:177.2": "devā mānusakā ubho;",
  "bv2:177.3": "Samokiranti pupphehi,",
  "bv2:177.4": "vuṭṭhahantassa āsanā.",
  "bv2:178.1": "Vedayanti ca te sotthiṃ,",
  "bv2:178.2": "devā mānusakā ubho;",
  "bv2:178.3": "‘Mahantaṃ patthitaṃ tuyhaṃ,",
  "bv2:178.4": "taṃ labhassu yathicchitaṃ.",
  "bv2:179.1": "Sabbītiyo vivajjantu,",
  "bv2:179.2": "Soko rogo vinassatu;",
  "bv2:179.3": "Mā te bhavantvantarāyā,",
  "bv2:179.4": "Phusa khippaṃ bodhimuttamaṃ.",
  "bv2:180.1": "Yathāpi samaye patte,",
  "bv2:180.2": "pupphanti pupphino dumā;",
  "bv2:180.3": "Tatheva tvaṃ mahāvīra,",
  "bv2:180.4": "buddhañāṇena pupphasi.",
  "bv2:181.1": "Yathā ye keci sambuddhā,",
  "bv2:181.2": "pūrayuṃ dasa pāramī;",
  "bv2:181.3": "Tatheva tvaṃ mahāvīra,",
  "bv2:181.4": "pūraya dasa pāramī.",
  "bv2:182.1": "Yathā ye keci sambuddhā,",
  "bv2:182.2": "bodhimaṇḍamhi bujjhare;",
  "bv2:182.3": "Tatheva tvaṃ mahāvīra,",
  "bv2:182.4": "bujjhassu jinabodhiyaṃ.",
  "bv2:183.1": "Yathā ye keci sambuddhā,",
  "bv2:183.2": "dhammacakkaṃ pavattayuṃ;",
  "bv2:183.3": "Tatheva tvaṃ mahāvīra,",
  "bv2:183.4": "dhammacakkaṃ pavattaya.",
  "bv2:184.1": "Puṇṇamāye yathā cando,",
  "bv2:184.2": "parisuddho virocati;",
  "bv2:184.3": "Tatheva tvaṃ puṇṇamano,",
  "bv2:184.4": "viroca dasasahassiyaṃ.",
  "bv2:185.1": "Rāhumutto yathā sūriyo,",
  "bv2:185.2": "tāpena atirocati;",
  "bv2:185.3": "Tatheva lokā muñcitvā,",
  "bv2:185.4": "viroca siriyā tuvaṃ.",
  "bv2:186.1": "Yathā yā kāci nadiyo,",
  "bv2:186.2": "osaranti mahodadhiṃ;",
  "bv2:186.3": "Evaṃ sadevakā lokā,",
  "bv2:186.4": "osarantu tavantike’.",
  "bv2:187.1": "Tehi thutappasattho so,",
  "bv2:187.2": "Dasa dhamme samādiya;",
  "bv2:187.3": "Te dhamme paripūrento,",
  "bv2:187.4": "Pavanaṃ pāvisī tadā”ti. (268)",
  "bv2:188.1": "Sumedhapatthanākathā niṭṭhitā."
}