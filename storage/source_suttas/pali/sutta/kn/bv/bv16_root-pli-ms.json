{
  "bv16:0.1": "Buddhavaṃsa",
  "bv16:0.2": "16 Atthadassībuddhavaṃsa",
  "bv16:1.1": "“Tattheva maṇḍakappamhi,",
  "bv16:1.2": "atthadassī mahāyaso;",
  "bv16:1.3": "Mahātamaṃ nihantvāna,",
  "bv16:1.4": "patto sambodhimuttamaṃ.",
  "bv16:2.1": "Brahmunā yācito santo,",
  "bv16:2.2": "dhammacakkaṃ pavattayi;",
  "bv16:2.3": "Amatena tappayī lokaṃ,",
  "bv16:2.4": "dasasahassisadevakaṃ.",
  "bv16:3.1": "Tassāpi lokanāthassa,",
  "bv16:3.2": "Ahesuṃ abhisamayā tayo;",
  "bv16:3.3": "Koṭisatasahassānaṃ,",
  "bv16:3.4": "Paṭhamābhisamayo ahu.",
  "bv16:4.1": "Yadā buddho atthadassī,",
  "bv16:4.2": "carate devacārikaṃ;",
  "bv16:4.3": "Koṭisatasahassānaṃ,",
  "bv16:4.4": "dutiyābhisamayo ahu.",
  "bv16:5.1": "Punāparaṃ yadā buddho,",
  "bv16:5.2": "desesi pitusantike;",
  "bv16:5.3": "Koṭisatasahassānaṃ,",
  "bv16:5.4": "tatiyābhisamayo ahu.",
  "bv16:6.1": "Sannipātā tayo āsuṃ,",
  "bv16:6.2": "tassāpi ca mahesino;",
  "bv16:6.3": "Khīṇāsavānaṃ vimalānaṃ,",
  "bv16:6.4": "santacittāna tādinaṃ.",
  "bv16:7.1": "Aṭṭhanavutisahassānaṃ,",
  "bv16:7.2": "paṭhamo āsi samāgamo;",
  "bv16:7.3": "Aṭṭhāsītisahassānaṃ,",
  "bv16:7.4": "dutiyo āsi samāgamo.",
  "bv16:8.1": "Aṭṭhasattatisatasahassānaṃ,",
  "bv16:8.2": "Tatiyo āsi samāgamo;",
  "bv16:8.3": "Anupādā vimuttānaṃ,",
  "bv16:8.4": "Vimalānaṃ mahesinaṃ.",
  "bv16:9.1": "Ahaṃ tena samayena,",
  "bv16:9.2": "jaṭilo uggatāpano;",
  "bv16:9.3": "Susīmo nāma nāmena,",
  "bv16:9.4": "mahiyā seṭṭhasammato.",
  "bv16:10.1": "Dibbaṃ mandāravaṃ pupphaṃ,",
  "bv16:10.2": "padumaṃ pārichattakaṃ;",
  "bv16:10.3": "Devalokāharitvāna,",
  "bv16:10.4": "sambuddhamabhipūjayiṃ.",
  "bv16:11.1": "Sopi maṃ buddho byākāsi,",
  "bv16:11.2": "atthadassī mahāmuni;",
  "bv16:11.3": "‘Aṭṭhārase kappasate,",
  "bv16:11.4": "ayaṃ buddho bhavissati.",
  "bv16:12.1": "Padhānaṃ padahitvāna,",
  "bv16:12.2": "…pe…",
  "bv16:12.3": "hessāma sammukhā imaṃ’.",
  "bv16:13.1": "Tassāpi vacanaṃ sutvā,",
  "bv16:13.2": "haṭṭho saṃviggamānaso;",
  "bv16:13.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
  "bv16:13.4": "dasapāramipūriyā.",
  "bv16:14.1": "Sobhanaṃ nāma nagaraṃ,",
  "bv16:14.2": "sāgaro nāma khattiyo;",
  "bv16:14.3": "Sudassanā nāma janikā,",
  "bv16:14.4": "atthadassissa satthuno.",
  "bv16:15.1": "Dasavassasahassāni,",
  "bv16:15.2": "Agāraṃ ajjha so vasi;",
  "bv16:15.3": "Amaragiri sugiri vāhanā,",
  "bv16:15.4": "Tayo pāsādamuttamā.",
  "bv16:16.1": "Tettiṃsañca sahassāni,",
  "bv16:16.2": "nāriyo samalaṅkatā;",
  "bv16:16.3": "Visākhā nāma nārī ca,",
  "bv16:16.4": "selo nāmāsi atrajo.",
  "bv16:17.1": "Nimitte caturo disvā,",
  "bv16:17.2": "assayānena nikkhami;",
  "bv16:17.3": "Anūnaaṭṭhamāsāni,",
  "bv16:17.4": "padhānaṃ padahī jino.",
  "bv16:18.1": "Brahmunā yācito santo,",
  "bv16:18.2": "atthadassī mahāyaso;",
  "bv16:18.3": "Vatti cakkaṃ mahāvīro,",
  "bv16:18.4": "anomuyyāne narāsabho.",
  "bv16:19.1": "Santo ca upasanto ca,",
  "bv16:19.2": "ahesuṃ aggasāvakā;",
  "bv16:19.3": "Abhayo nāmupaṭṭhāko,",
  "bv16:19.4": "atthadassissa satthuno.",
  "bv16:20.1": "Dhammā ceva sudhammā ca,",
  "bv16:20.2": "ahesuṃ aggasāvikā;",
  "bv16:20.3": "Bodhi tassa bhagavato,",
  "bv16:20.4": "campakoti pavuccati.",
  "bv16:21.1": "Nakulo ca nisabho ca,",
  "bv16:21.2": "ahesuṃ aggupaṭṭhakā;",
  "bv16:21.3": "Makilā ca sunandā ca,",
  "bv16:21.4": "ahesuṃ aggupaṭṭhikā.",
  "bv16:22.1": "Sopi buddho asamasamo,",
  "bv16:22.2": "asītihatthamuggato;",
  "bv16:22.3": "Sobhate sālarājāva,",
  "bv16:22.4": "uḷurājāva pūrito.",
  "bv16:23.1": "Tassa pākatikā raṃsī,",
  "bv16:23.2": "anekasatakoṭiyo;",
  "bv16:23.3": "Uddhaṃ adho dasa disā,",
  "bv16:23.4": "pharanti yojanaṃ sadā.",
  "bv16:24.1": "Sopi buddho narāsabho,",
  "bv16:24.2": "sabbasattuttamo muni;",
  "bv16:24.3": "Vassasatasahassāni,",
  "bv16:24.4": "loke aṭṭhāsi cakkhumā.",
  "bv16:25.1": "Atulaṃ dassetvā obhāsaṃ,",
  "bv16:25.2": "virocetvā sadevake;",
  "bv16:25.3": "Sopi aniccataṃ patto,",
  "bv16:25.4": "yathaggupādānasaṅkhayā.",
  "bv16:26.1": "Atthadassī jinavaro,",
  "bv16:26.2": "Anomārāmamhi nibbuto;",
  "bv16:26.3": "Dhātuvitthārikaṃ āsi,",
  "bv16:26.4": "Tesu tesu padesato”ti. (704)",
  "bv16:27.1": "Atthadassissa bhagavato vaṃso cuddasamo."
}