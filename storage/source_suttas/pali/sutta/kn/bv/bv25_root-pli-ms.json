{
  "bv25:0.1": "Buddhavaṃsa",
  "bv25:0.2": "25. Koṇāgamanabuddhavaṃsa",
  "bv25:1.1": "“Kakusandhassa aparena,",
  "bv25:1.2": "sambuddho dvipaduttamo;",
  "bv25:1.3": "Koṇāgamano nāma jino,",
  "bv25:1.4": "lokajeṭṭho narāsabho.",
  "bv25:2.1": "Dasa dhamme pūrayitvāna,",
  "bv25:2.2": "kantāraṃ samatikkami;",
  "bv25:2.3": "Pavāhiya malaṃ sabbaṃ,",
  "bv25:2.4": "patto sambodhimuttamaṃ.",
  "bv25:3.1": "Dhammacakkaṃ pavattente,",
  "bv25:3.2": "koṇāgamananāyake;",
  "bv25:3.3": "Tiṃsakoṭisahassānaṃ,",
  "bv25:3.4": "paṭhamābhisamayo ahu.",
  "bv25:4.1": "Pāṭihīraṃ karonte ca,",
  "bv25:4.2": "paravādappamaddane;",
  "bv25:4.3": "Vīsatikoṭisahassānaṃ,",
  "bv25:4.4": "dutiyābhisamayo ahu.",
  "bv25:5.1": "Tato vikubbanaṃ katvā,",
  "bv25:5.2": "jino devapuraṃ gato;",
  "bv25:5.3": "Vasate tattha sambuddho,",
  "bv25:5.4": "silāya paṇḍukambale.",
  "bv25:6.1": "Pakaraṇe satta desento,",
  "bv25:6.2": "vassaṃ vasati so muni;",
  "bv25:6.3": "Dasakoṭisahassānaṃ,",
  "bv25:6.4": "tatiyābhisamayo ahu.",
  "bv25:7.1": "Tassāpi devadevassa,",
  "bv25:7.2": "eko āsi samāgamo;",
  "bv25:7.3": "Khīṇāsavānaṃ vimalānaṃ,",
  "bv25:7.4": "santacittāna tādinaṃ.",
  "bv25:8.1": "Tiṃsabhikkhusahassānaṃ,",
  "bv25:8.2": "tadā āsi samāgamo;",
  "bv25:8.3": "Oghānamatikkantānaṃ,",
  "bv25:8.4": "bhijjitānañca maccuyā.",
  "bv25:9.1": "Ahaṃ tena samayena,",
  "bv25:9.2": "pabbato nāma khattiyo;",
  "bv25:9.3": "Mittāmaccehi sampanno,",
  "bv25:9.4": "anantabalavāhano.",
  "bv25:10.1": "Sambuddhadassanaṃ gantvā,",
  "bv25:10.2": "sutvā dhammamanuttaraṃ;",
  "bv25:10.3": "Nimantetvā sajinasaṃghaṃ,",
  "bv25:10.4": "dānaṃ datvā yadicchakaṃ.",
  "bv25:11.1": "Pattuṇṇaṃ cīnapaṭṭañca,",
  "bv25:11.2": "koseyyaṃ kambalampi ca;",
  "bv25:11.3": "Sovaṇṇapādukañceva,",
  "bv25:11.4": "adāsiṃ satthusāvake.",
  "bv25:12.1": "Sopi maṃ buddho byākāsi,",
  "bv25:12.2": "saṃghamajjhe nisīdiya;",
  "bv25:12.3": "‘Imamhi bhaddake kappe,",
  "bv25:12.4": "ayaṃ buddho bhavissati.",
  "bv25:13.1": "Ahu kapilavhayā rammā,",
  "bv25:13.2": "…pe…",
  "bv25:13.3": "hessāma sammukhā imaṃ’.",
  "bv25:14.1": "Tassāpi vacanaṃ sutvā,",
  "bv25:14.2": "bhiyyo cittaṃ pasādayiṃ;",
  "bv25:14.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
  "bv25:14.4": "dasapāramipūriyā.",
  "bv25:15.1": "Sabbaññutaṃ gavesanto,",
  "bv25:15.2": "dānaṃ datvā naruttame;",
  "bv25:15.3": "Ohāyāhaṃ mahārajjaṃ,",
  "bv25:15.4": "pabbajiṃ jinasantike.",
  "bv25:16.1": "Nagaraṃ sobhavatī nāma,",
  "bv25:16.2": "sobho nāmāsi khattiyo;",
  "bv25:16.3": "Vasate tattha nagare,",
  "bv25:16.4": "sambuddhassa mahākulaṃ.",
  "bv25:17.1": "Brāhmaṇo yaññadatto ca,",
  "bv25:17.2": "āsi buddhassa so pitā;",
  "bv25:17.3": "Uttarā nāma janikā,",
  "bv25:17.4": "koṇāgamanassa satthuno.",
  "bv25:18.1": "Tīṇi vassasahassāni,",
  "bv25:18.2": "Agāraṃ ajjha so vasi;",
  "bv25:18.3": "Tusitasantusitasantuṭṭhā,",
  "bv25:18.4": "Tayo pāsādamuttamā.",
  "bv25:19.1": "Anūnasoḷasasahassāni,",
  "bv25:19.2": "Nāriyo samalaṅkatā;",
  "bv25:19.3": "Rucigattā nāma nārī,",
  "bv25:19.4": "Satthavāho nāma atrajo.",
  "bv25:20.1": "Nimitte caturo disvā,",
  "bv25:20.2": "hatthiyānena nikkhami;",
  "bv25:20.3": "Chamāsaṃ padhānacāraṃ,",
  "bv25:20.4": "acarī purisuttamo.",
  "bv25:21.1": "Brahmunā yācito santo,",
  "bv25:21.2": "koṇāgamananāyako;",
  "bv25:21.3": "Vatti cakkaṃ mahāvīro,",
  "bv25:21.4": "migadāye naruttamo.",
  "bv25:22.1": "Bhiyyaso uttaro nāma,",
  "bv25:22.2": "ahesuṃ aggasāvakā;",
  "bv25:22.3": "Sotthijo nāmupaṭṭhāko,",
  "bv25:22.4": "koṇāgamanassa satthuno.",
  "bv25:23.1": "Samuddā uttarā ceva,",
  "bv25:23.2": "ahesuṃ aggasāvikā;",
  "bv25:23.3": "Bodhi tassa bhagavato,",
  "bv25:23.4": "udumbaroti pavuccati.",
  "bv25:24.1": "Uggo ca somadevo ca,",
  "bv25:24.2": "ahesuṃ aggupaṭṭhakā;",
  "bv25:24.3": "Sīvalā ceva sāmā ca,",
  "bv25:24.4": "ahesuṃ aggupaṭṭhikā.",
  "bv25:25.1": "Uccattanena so buddho,",
  "bv25:25.2": "tiṃsahatthasamuggato;",
  "bv25:25.3": "Ukkāmukhe yathā kambu,",
  "bv25:25.4": "evaṃ raṃsīhi maṇḍito.",
  "bv25:26.1": "Tiṃsavassasahassāni,",
  "bv25:26.2": "āyu buddhassa tāvade;",
  "bv25:26.3": "Tāvatā tiṭṭhamāno so,",
  "bv25:26.4": "tāresi janataṃ bahuṃ.",
  "bv25:27.1": "Dhammacetiṃ samussetvā,",
  "bv25:27.2": "dhammadussavibhūsitaṃ;",
  "bv25:27.3": "Dhammapupphaguḷaṃ katvā,",
  "bv25:27.4": "nibbuto so sasāvako.",
  "bv25:28.1": "Mahāvilāso tassa jano,",
  "bv25:28.2": "siridhammappakāsano;",
  "bv25:28.3": "Sabbaṃ tamantarahitaṃ,",
  "bv25:28.4": "nanu rittā sabbasaṅkhārā.",
  "bv25:29.1": "Koṇāgamano sambuddho,",
  "bv25:29.2": "Pabbatārāmamhi nibbuto;",
  "bv25:29.3": "Dhātuvitthārikaṃ āsi,",
  "bv25:29.4": "Tesu tesu padesato”ti. (957)",
  "bv25:30.1": "Koṇāgamanassa bhagavato vaṃso tevīsatimo."
}