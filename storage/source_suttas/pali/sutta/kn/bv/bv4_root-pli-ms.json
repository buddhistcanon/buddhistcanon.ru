{
  "bv4:0.1": "Buddhavaṃsa",
  "bv4:0.2": "4. Koṇḍaññabuddhavaṃsa",
  "bv4:1.1": "“Dīpaṅkarassa aparena,",
  "bv4:1.2": "Koṇḍañño nāma nāyako;",
  "bv4:1.3": "Anantatejo amitayaso,",
  "bv4:1.4": "Appameyyo durāsado.",
  "bv4:2.1": "Dharaṇūpamo khamanena,",
  "bv4:2.2": "sīlena sāgarūpamo;",
  "bv4:2.3": "Samādhinā merūpamo,",
  "bv4:2.4": "ñāṇena gaganūpamo.",
  "bv4:3.1": "Indriyabalabojjhaṅga-",
  "bv4:3.2": "maggasaccappakāsanaṃ;",
  "bv4:3.3": "Pakāsesi sadā buddho,",
  "bv4:3.4": "hitāya sabbapāṇinaṃ.",
  "bv4:4.1": "Dhammacakkaṃ pavattente,",
  "bv4:4.2": "koṇḍaññe lokanāyake;",
  "bv4:4.3": "Koṭisatasahassānaṃ,",
  "bv4:4.4": "paṭhamābhisamayo ahu.",
  "bv4:5.1": "Tato parampi desente,",
  "bv4:5.2": "naramarūnaṃ samāgame;",
  "bv4:5.3": "Navutikoṭisahassānaṃ,",
  "bv4:5.4": "dutiyābhisamayo ahu.",
  "bv4:6.1": "Titthiye abhimaddanto,",
  "bv4:6.2": "yadā dhammamadesayi;",
  "bv4:6.3": "Asītikoṭisahassānaṃ,",
  "bv4:6.4": "tatiyābhisamayo ahu.",
  "bv4:7.1": "Sannipātā tayo āsuṃ,",
  "bv4:7.2": "koṇḍaññassa mahesino;",
  "bv4:7.3": "Khīṇāsavānaṃ vimalānaṃ,",
  "bv4:7.4": "santacittāna tādinaṃ.",
  "bv4:8.1": "Koṭisatasahassānaṃ,",
  "bv4:8.2": "paṭhamo āsi samāgamo;",
  "bv4:8.3": "Dutiyo koṭisahassānaṃ,",
  "bv4:8.4": "tatiyo navutikoṭinaṃ.",
  "bv4:9.1": "Ahaṃ tena samayena,",
  "bv4:9.2": "vijitāvī nāma khattiyo;",
  "bv4:9.3": "Samuddaṃ antamantena,",
  "bv4:9.4": "issariyaṃ vattayāmahaṃ.",
  "bv4:10.1": "Koṭisatasahassānaṃ,",
  "bv4:10.2": "vimalānaṃ mahesinaṃ;",
  "bv4:10.3": "Saha lokagganāthena,",
  "bv4:10.4": "paramannena tappayiṃ.",
  "bv4:11.1": "Sopi maṃ buddho byākāsi,",
  "bv4:11.2": "koṇḍañño lokanāyako;",
  "bv4:11.3": "‘Aparimeyyito kappe,",
  "bv4:11.4": "buddho loke bhavissati.",
  "bv4:12.1": "Padhānaṃ padahitvāna,",
  "bv4:12.2": "katvā dukkarakārikaṃ;",
  "bv4:12.3": "Assatthamūle sambuddho,",
  "bv4:12.4": "bujjhissati mahāyaso.",
  "bv4:13.1": "Imassa janikā mātā,",
  "bv4:13.2": "māyā nāma bhavissati;",
  "bv4:13.3": "Pitā suddhodano nāma,",
  "bv4:13.4": "ayaṃ hessati gotamo.",
  "bv4:14.1": "Kolito upatisso ca,",
  "bv4:14.2": "aggā hessanti sāvakā;",
  "bv4:14.3": "Ānando nāmupaṭṭhāko,",
  "bv4:14.4": "upaṭṭhissatimaṃ jinaṃ.",
  "bv4:15.1": "Khemā uppalavaṇṇā ca,",
  "bv4:15.2": "aggā hessanti sāvikā;",
  "bv4:15.3": "Bodhi tassa bhagavato,",
  "bv4:15.4": "assatthoti pavuccati.",
  "bv4:16.1": "Citto ca hatthāḷavako,",
  "bv4:16.2": "aggā hessantupaṭṭhakā;",
  "bv4:16.3": "Nandamātā ca uttarā,",
  "bv4:16.4": "aggā hessantupaṭṭhikā;",
  "bv4:16.5": "Āyu vassasataṃ tassa,",
  "bv4:16.6": "gotamassa yasassino’.",
  "bv4:17.1": "Idaṃ sutvāna vacanaṃ,",
  "bv4:17.2": "asamassa mahesino;",
  "bv4:17.3": "Āmoditā naramarū,",
  "bv4:17.4": "‘buddhabījaṃ kira ayaṃ’.",
  "bv4:18.1": "Ukkuṭṭhisaddā vattanti,",
  "bv4:18.2": "apphoṭenti hasanti ca;",
  "bv4:18.3": "Katañjalī namassanti,",
  "bv4:18.4": "dasasahassidevatā.",
  "bv4:19.1": "‘Yadimassa lokanāthassa,",
  "bv4:19.2": "virajjhissāma sāsanaṃ;",
  "bv4:19.3": "Anāgatamhi addhāne,",
  "bv4:19.4": "hessāma sammukhā imaṃ.",
  "bv4:20.1": "Yathā manussā nadiṃ tarantā,",
  "bv4:20.2": "Paṭititthaṃ virajjhiya;",
  "bv4:20.3": "Heṭṭhātitthe gahetvāna,",
  "bv4:20.4": "Uttaranti mahānadiṃ.",
  "bv4:21.1": "Evamevaṃ mayaṃ sabbe,",
  "bv4:21.2": "yadi muñcāmimaṃ jinaṃ;",
  "bv4:21.3": "Anāgatamhi addhāne,",
  "bv4:21.4": "hessāma sammukhā imaṃ’.",
  "bv4:22.1": "Tassāhaṃ vacanaṃ sutvā,",
  "bv4:22.2": "bhiyyo cittaṃ pasādayiṃ;",
  "bv4:22.3": "Tameva atthaṃ sādhento,",
  "bv4:22.4": "mahārajjaṃ jine adaṃ;",
  "bv4:22.5": "Mahārajjaṃ daditvāna,",
  "bv4:22.6": "pabbajiṃ tassa santike.",
  "bv4:23.1": "Suttantaṃ vinayañcāpi,",
  "bv4:23.2": "navaṅgaṃ satthusāsanaṃ;",
  "bv4:23.3": "Sabbaṃ pariyāpuṇitvāna,",
  "bv4:23.4": "sobhayiṃ jinasāsanaṃ.",
  "bv4:24.1": "Tatthappamatto viharanto,",
  "bv4:24.2": "nisajjaṭṭhānacaṅkame;",
  "bv4:24.3": "Abhiññāpāramiṃ gantvā,",
  "bv4:24.4": "brahmalokamagañchahaṃ.",
  "bv4:25.1": "Nagaraṃ rammavatī nāma,",
  "bv4:25.2": "sunando nāma khattiyo;",
  "bv4:25.3": "Sujātā nāma janikā,",
  "bv4:25.4": "koṇḍaññassa mahesino.",
  "bv4:26.1": "Dasavassasahassāni,",
  "bv4:26.2": "agāraṃ ajjha so vasi;",
  "bv4:26.3": "Suci suruci subho ca,",
  "bv4:26.4": "tayo pāsādamuttamā.",
  "bv4:27.1": "Tīṇi satasahassāni,",
  "bv4:27.2": "nāriyo samalaṅkatā;",
  "bv4:27.3": "Rucidevī nāma nārī,",
  "bv4:27.4": "vijitaseno atrajo.",
  "bv4:28.1": "Nimitte caturo disvā,",
  "bv4:28.2": "rathayānena nikkhami;",
  "bv4:28.3": "Anūnadasamāsāni,",
  "bv4:28.4": "padhānaṃ padahī jino.",
  "bv4:29.1": "Brahmunā yācito santo,",
  "bv4:29.2": "koṇḍañño dvipaduttamo;",
  "bv4:29.3": "Vatti cakkaṃ mahāvīro,",
  "bv4:29.4": "devānaṃ nagaruttame.",
  "bv4:30.1": "Bhaddo ceva subhaddo ca,",
  "bv4:30.2": "ahesuṃ aggasāvakā;",
  "bv4:30.3": "Anuruddho nāmupaṭṭhāko,",
  "bv4:30.4": "koṇḍaññassa mahesino.",
  "bv4:31.1": "Tissā ca upatissā ca,",
  "bv4:31.2": "ahesuṃ aggasāvikā;",
  "bv4:31.3": "Sālakalyāṇiko bodhi,",
  "bv4:31.4": "koṇḍaññassa mahesino.",
  "bv4:32.1": "Soṇo ca upasoṇo ca,",
  "bv4:32.2": "ahesuṃ aggupaṭṭhakā;",
  "bv4:32.3": "Nandā ceva sirīmā ca,",
  "bv4:32.4": "ahesuṃ aggupaṭṭhikā.",
  "bv4:33.1": "So aṭṭhāsīti hatthāni,",
  "bv4:33.2": "accuggato mahāmuni;",
  "bv4:33.3": "Sobhate uḷurājāva,",
  "bv4:33.4": "sūriyo majjhanhike yathā.",
  "bv4:34.1": "Vassasatasahassāni,",
  "bv4:34.2": "āyu vijjati tāvade;",
  "bv4:34.3": "Tāvatā tiṭṭhamāno so,",
  "bv4:34.4": "tāresi janataṃ bahuṃ.",
  "bv4:35.1": "Khīṇāsavehi vimalehi,",
  "bv4:35.2": "vicittā āsi medanī;",
  "bv4:35.3": "Yathā gaganamuḷūhi,",
  "bv4:35.4": "evaṃ so upasobhatha.",
  "bv4:36.1": "Tepi nāgā appameyyā,",
  "bv4:36.2": "asaṅkhobbhā durāsadā;",
  "bv4:36.3": "Vijjupātaṃva dassetvā,",
  "bv4:36.4": "nibbutā te mahāyasā.",
  "bv4:37.1": "Sā ca atuliyā jinassa iddhi,",
  "bv4:37.2": "Ñāṇaparibhāvito ca samādhi;",
  "bv4:37.3": "Sabbaṃ tamantarahitaṃ,",
  "bv4:37.4": "Nanu rittā sabbasaṅkhārā.",
  "bv4:38.1": "Koṇḍañño pavaro buddho,",
  "bv4:38.2": "Candārāmamhi nibbuto;",
  "bv4:38.3": "Tattheva cetiyo citto,",
  "bv4:38.4": "Satta yojanamussito”ti. (337)",
  "bv4:39.1": "Koṇḍaññassa bhagavato vaṃso dutiyo."
}