{
  "bv13:0.1": "Buddhavaṃsa",
  "bv13:0.2": "13. Sumedhabuddhavaṃsa",
  "bv13:1.1": "“Padumuttarassa aparena,",
  "bv13:1.2": "Sumedho nāma nāyako;",
  "bv13:1.3": "Durāsado uggatejo,",
  "bv13:1.4": "Sabbalokuttamo muni.",
  "bv13:2.1": "Pasannanetto sumukho,",
  "bv13:2.2": "brahā uju patāpavā;",
  "bv13:2.3": "Hitesī sabbasattānaṃ,",
  "bv13:2.4": "bahū mocesi bandhanā.",
  "bv13:3.1": "Yadā buddho pāpuṇitvā,",
  "bv13:3.2": "kevalaṃ bodhimuttamaṃ;",
  "bv13:3.3": "Sudassanamhi nagare,",
  "bv13:3.4": "dhammacakkaṃ pavattayi.",
  "bv13:4.1": "Tassāpi abhisamayā tīṇi,",
  "bv13:4.2": "Ahesuṃ dhammadesane;",
  "bv13:4.3": "Koṭisatasahassānaṃ,",
  "bv13:4.4": "Paṭhamābhisamayo ahu.",
  "bv13:5.1": "Punāparaṃ kumbhakaṇṇaṃ,",
  "bv13:5.2": "yakkhaṃ so damayī jino;",
  "bv13:5.3": "Navutikoṭisahassānaṃ,",
  "bv13:5.4": "dutiyābhisamayo ahu.",
  "bv13:6.1": "Punāparaṃ amitayaso,",
  "bv13:6.2": "catusaccaṃ pakāsayi;",
  "bv13:6.3": "Asītikoṭisahassānaṃ,",
  "bv13:6.4": "tatiyābhisamayo ahu.",
  "bv13:7.1": "Sannipātā tayo āsuṃ,",
  "bv13:7.2": "sumedhassa mahesino;",
  "bv13:7.3": "Khīṇāsavānaṃ vimalānaṃ,",
  "bv13:7.4": "santacittāna tādinaṃ.",
  "bv13:8.1": "Sudassanaṃ nāma nagaraṃ,",
  "bv13:8.2": "upagañchi jino yadā;",
  "bv13:8.3": "Tadā khīṇāsavā bhikkhū,",
  "bv13:8.4": "samiṃsu satakoṭiyo.",
  "bv13:9.1": "Punāparaṃ devakūṭe,",
  "bv13:9.2": "bhikkhūnaṃ kathinatthate;",
  "bv13:9.3": "Tadā navutikoṭīnaṃ,",
  "bv13:9.4": "dutiyo āsi samāgamo.",
  "bv13:10.1": "Punāparaṃ dasabalo,",
  "bv13:10.2": "yadā carati cārikaṃ;",
  "bv13:10.3": "Tadā asītikoṭīnaṃ,",
  "bv13:10.4": "tatiyo āsi samāgamo.",
  "bv13:11.1": "Ahaṃ tena samayena,",
  "bv13:11.2": "uttaro nāma māṇavo;",
  "bv13:11.3": "Asītikoṭiyo mayhaṃ,",
  "bv13:11.4": "ghare sannicitaṃ dhanaṃ.",
  "bv13:12.1": "Kevalaṃ sabbaṃ datvāna,",
  "bv13:12.2": "sasaṃghe lokanāyake;",
  "bv13:12.3": "Saraṇaṃ tassupagañchiṃ,",
  "bv13:12.4": "pabbajjañcābhirocayiṃ.",
  "bv13:13.1": "Sopi maṃ buddho byākāsi,",
  "bv13:13.2": "karonto anumodanaṃ;",
  "bv13:13.3": "‘Tiṃsakappasahassamhi,",
  "bv13:13.4": "ayaṃ buddho bhavissati.",
  "bv13:14.1": "Padhānaṃ padahitvāna,",
  "bv13:14.2": "…pe…",
  "bv13:14.3": "hessāma sammukhā imaṃ’.",
  "bv13:15.1": "Tassāpi vacanaṃ sutvā,",
  "bv13:15.2": "bhiyyo cittaṃ pasādayiṃ;",
  "bv13:15.3": "Uttariṃ vatamadhiṭṭhāsiṃ,",
  "bv13:15.4": "dasapāramipūriyā.",
  "bv13:16.1": "Suttantaṃ vinayañcāpi,",
  "bv13:16.2": "navaṅgaṃ satthusāsanaṃ;",
  "bv13:16.3": "Sabbaṃ pariyāpuṇitvāna,",
  "bv13:16.4": "sobhayiṃ jinasāsanaṃ.",
  "bv13:17.1": "Tatthappamatto viharanto,",
  "bv13:17.2": "Nisajjaṭṭhānacaṅkame;",
  "bv13:17.3": "Abhiññāsu pāramiṃ gantvā,",
  "bv13:17.4": "Brahmalokamagañchahaṃ.",
  "bv13:18.1": "Sudassanaṃ nāma nagaraṃ,",
  "bv13:18.2": "sudatto nāma khattiyo;",
  "bv13:18.3": "Sudattā nāma janikā,",
  "bv13:18.4": "sumedhassa mahesino.",
  "bv13:19.1": "Navavassasahassāni,",
  "bv13:19.2": "Agāraṃ ajjha so vasi;",
  "bv13:19.3": "Sucandakañcanasirivaḍḍhā,",
  "bv13:19.4": "Tayo pāsādamuttamā.",
  "bv13:20.1": "Tisoḷasasahassāni,",
  "bv13:20.2": "nāriyo samalaṅkatā;",
  "bv13:20.3": "Sumanā nāma sā nārī,",
  "bv13:20.4": "punabbasu nāma atrajo.",
  "bv13:21.1": "Nimitte caturo disvā,",
  "bv13:21.2": "hatthiyānena nikkhami;",
  "bv13:21.3": "Anūnakaṃ aḍḍhamāsaṃ,",
  "bv13:21.4": "padhānaṃ padahī jino.",
  "bv13:22.1": "Brahmunā yācito santo,",
  "bv13:22.2": "sumedho lokanāyako;",
  "bv13:22.3": "Vatti cakkaṃ mahāvīro,",
  "bv13:22.4": "sudassanuyyānamuttame.",
  "bv13:23.1": "Saraṇo sabbakāmo ca,",
  "bv13:23.2": "ahesuṃ aggasāvakā;",
  "bv13:23.3": "Sāgaro nāmupaṭṭhāko,",
  "bv13:23.4": "sumedhassa mahesino.",
  "bv13:24.1": "Rāmā ceva surāmā ca,",
  "bv13:24.2": "ahesuṃ aggasāvikā;",
  "bv13:24.3": "Bodhi tassa bhagavato,",
  "bv13:24.4": "mahānīpoti vuccati.",
  "bv13:25.1": "Uruvelā yasavā ca,",
  "bv13:25.2": "ahesuṃ aggupaṭṭhakā;",
  "bv13:25.3": "Yasodharā sirimā ca,",
  "bv13:25.4": "ahesuṃ aggupaṭṭhikā.",
  "bv13:26.1": "Aṭṭhāsītiratanāni,",
  "bv13:26.2": "accuggato mahāmuni;",
  "bv13:26.3": "Obhāseti disā sabbā,",
  "bv13:26.4": "cando tāragaṇe yathā.",
  "bv13:27.1": "Cakkavattimaṇī nāma,",
  "bv13:27.2": "yathā tapati yojanaṃ;",
  "bv13:27.3": "Tatheva tassa ratanaṃ,",
  "bv13:27.4": "samantā pharati yojanaṃ.",
  "bv13:28.1": "Navutivassasahassāni,",
  "bv13:28.2": "āyu vijjati tāvade;",
  "bv13:28.3": "Tāvatā tiṭṭhamāno so,",
  "bv13:28.4": "tāresi janataṃ bahuṃ.",
  "bv13:29.1": "Tevijjachaḷabhiññehi,",
  "bv13:29.2": "balappattehi tādihi;",
  "bv13:29.3": "Samākulamidaṃ āsi,",
  "bv13:29.4": "arahantehi sādhuhi.",
  "bv13:30.1": "Tepi sabbe amitayasā,",
  "bv13:30.2": "vippamuttā nirūpadhī;",
  "bv13:30.3": "Ñāṇālokaṃ dassayitvā,",
  "bv13:30.4": "nibbutā te mahāyasā.",
  "bv13:31.1": "Sumedho jinavaro buddho,",
  "bv13:31.2": "Medhārāmamhi nibbuto;",
  "bv13:31.3": "Dhātuvitthārikaṃ āsi,",
  "bv13:31.4": "Tesu tesu padesato”ti. (615)",
  "bv13:32.1": "Sumedhassa bhagavato vaṃso ekādasamo."
}