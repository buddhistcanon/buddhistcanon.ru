{
  "bv29:0.1": "Buddhavaṃsa",
  "bv29:0.2": "29. Dhātubhājanīyakathā",
  "bv29:1.1": "Mahāgotamo jinavaro,",
  "bv29:1.2": "kusināramhi nibbuto;",
  "bv29:1.3": "Dhātuvitthārikaṃ āsi,",
  "bv29:1.4": "tesu tesu padesato.",
  "bv29:2.1": "Eko ajātasattussa,",
  "bv29:2.2": "eko vesāliyā pure;",
  "bv29:2.3": "Eko kapilavatthusmiṃ,",
  "bv29:2.4": "eko ca allakappake.",
  "bv29:3.1": "Eko ca rāmagāmamhi,",
  "bv29:3.2": "eko ca veṭhadīpake;",
  "bv29:3.3": "Eko pāveyyake malle,",
  "bv29:3.4": "eko ca kosinārake.",
  "bv29:4.1": "Kumbhassa thūpaṃ kāresi,",
  "bv29:4.2": "brāhmaṇo doṇasavhayo;",
  "bv29:4.3": "Aṅgārathūpaṃ kāresuṃ,",
  "bv29:4.4": "moriyā tuṭṭhamānasā.",
  "bv29:5.1": "Aṭṭha sārīrikā thūpā,",
  "bv29:5.2": "navamo kumbhacetiyo;",
  "bv29:5.3": "Aṅgārathūpo dasamo,",
  "bv29:5.4": "tadāyeva patiṭṭhito.",
  "bv29:6.1": "Uṇhīsaṃ catasso dāṭhā,",
  "bv29:6.2": "akkhakā dve ca dhātuyo;",
  "bv29:6.3": "Asambhinnā imā satta,",
  "bv29:6.4": "sesā bhinnāva dhātuyo.",
  "bv29:7.1": "Mahantā muggamattā ca,",
  "bv29:7.2": "majjhimā bhinnataṇḍulā;",
  "bv29:7.3": "Khuddakā sāsapamattā ca,",
  "bv29:7.4": "nānāvaṇṇā ca dhātuyo.",
  "bv29:8.1": "Mahantā suvaṇṇavaṇṇā ca,",
  "bv29:8.2": "muttavaṇṇā ca majjhimā;",
  "bv29:8.3": "Khuddakā makulavaṇṇā ca,",
  "bv29:8.4": "soḷasadoṇamattikā.",
  "bv29:9.1": "Mahantā pañca nāḷiyo,",
  "bv29:9.2": "nāḷiyo pañca majjhimā;",
  "bv29:9.3": "Khuddakā cha nāḷī ceva,",
  "bv29:9.4": "etā sabbāpi dhātuyo.",
  "bv29:10.1": "Uṇhīsaṃ sīhaḷe dīpe,",
  "bv29:10.2": "brahmaloke ca vāmakaṃ;",
  "bv29:10.3": "Sīhaḷe dakkhiṇakkhañca,",
  "bv29:10.4": "sabbāpetā patiṭṭhitā.",
  "bv29:11.1": "Ekā dāṭhā tidasapure,",
  "bv29:11.2": "ekā nāgapure ahu;",
  "bv29:11.3": "Ekā gandhāravisaye,",
  "bv29:11.4": "ekā kaliṅgarājino.",
  "bv29:12.1": "Cattālīsasamā dantā,",
  "bv29:12.2": "kesā lomā ca sabbaso;",
  "bv29:12.3": "Devā hariṃsu ekekaṃ,",
  "bv29:12.4": "cakkavāḷaparamparā.",
  "bv29:13.1": "Vajirāyaṃ bhagavato,",
  "bv29:13.2": "Patto daṇḍañca cīvaraṃ;",
  "bv29:13.3": "Nivāsanaṃ kulaghare,",
  "bv29:13.4": "Paccattharaṇaṃ kapilavhaye.",
  "bv29:14.1": "Pāṭaliputtapuramhi,",
  "bv29:14.2": "karaṇaṃ kāyabandhanaṃ;",
  "bv29:14.3": "Campāyudakasāṭiyaṃ,",
  "bv29:14.4": "uṇṇalomañca kosale.",
  "bv29:15.1": "Kāsāvaṃ brahmaloke ca,",
  "bv29:15.2": "veṭhanaṃ tidase pure;",
  "bv29:15.3": "Nisīdanaṃ avantīsu,",
  "bv29:15.4": "raṭṭhe attharaṇaṃ tadā.",
  "bv29:16.1": "Araṇī ca mithilāyaṃ,",
  "bv29:16.2": "videhe parisāvanaṃ;",
  "bv29:16.3": "Vāsi sūcigharañcāpi,",
  "bv29:16.4": "indapatthapure tadā.",
  "bv29:17.1": "Parikkhārā avasesā,",
  "bv29:17.2": "janapade aparantake;",
  "bv29:17.3": "Paribhuttāni muninā,",
  "bv29:17.4": "akaṃsu manujā tadā.",
  "bv29:18.1": "Dhātuvitthārikaṃ āsi,",
  "bv29:18.2": "Gotamassa mahesino;",
  "bv29:18.3": "Pāṇīnaṃ anukampāya,",
  "bv29:18.4": "Ahu porāṇikaṃ tadāti. (1070)"
}