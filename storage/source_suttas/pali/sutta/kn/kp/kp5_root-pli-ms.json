{
  "kp5:0.1": "Khuddakapāṭha",
  "kp5:0.2": "5. Maṅgalasutta",
  "kp5:1.1": "Evaṃ me sutaṃ—",
  "kp5:1.2": "ekaṃ samayaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "kp5:1.3": "Atha kho aññatarā devatā abhikkantāya rattiyā abhikkantavaṇṇā kevalakappaṃ jetavanaṃ obhāsetvā yena bhagavā tenupasaṅkami; upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi.",
  "kp5:1.4": "Ekamantaṃ ṭhitā kho sā devatā bhagavantaṃ gāthāya ajjhabhāsi—",
  "kp5:2.1": "“Bahū devā manussā ca,",
  "kp5:2.2": "maṅgalāni acintayuṃ;",
  "kp5:2.3": "Ākaṅkhamānā sotthānaṃ,",
  "kp5:2.4": "brūhi maṅgalamuttamaṃ”.",
  "kp5:3.1": "“Asevanā ca bālānaṃ,",
  "kp5:3.2": "paṇḍitānañca sevanā;",
  "kp5:3.3": "Pūjā ca pūjaneyyānaṃ,",
  "kp5:3.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:4.1": "Patirūpadesavāso ca,",
  "kp5:4.2": "pubbe ca katapuññatā;",
  "kp5:4.3": "Attasammāpaṇidhi ca,",
  "kp5:4.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:5.1": "Bāhusaccañca sippañca,",
  "kp5:5.2": "vinayo ca susikkhito;",
  "kp5:5.3": "Subhāsitā ca yā vācā,",
  "kp5:5.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:6.1": "Mātāpituupaṭṭhānaṃ,",
  "kp5:6.2": "puttadārassa saṅgaho;",
  "kp5:6.3": "Anākulā ca kammantā,",
  "kp5:6.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:7.1": "Dānañca dhammacariyā ca,",
  "kp5:7.2": "ñātakānañca saṅgaho;",
  "kp5:7.3": "Anavajjāni kammāni,",
  "kp5:7.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:8.1": "Āratī viratī pāpā,",
  "kp5:8.2": "majjapānā ca saṃyamo;",
  "kp5:8.3": "Appamādo ca dhammesu,",
  "kp5:8.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:9.1": "Gāravo ca nivāto ca,",
  "kp5:9.2": "santuṭṭhi ca kataññutā;",
  "kp5:9.3": "Kālena dhammassavanaṃ,",
  "kp5:9.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:10.1": "Khantī ca sovacassatā,",
  "kp5:10.2": "samaṇānañca dassanaṃ;",
  "kp5:10.3": "Kālena dhammasākacchā,",
  "kp5:10.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:11.1": "Tapo ca brahmacariyañca,",
  "kp5:11.2": "ariyasaccāna dassanaṃ;",
  "kp5:11.3": "Nibbānasacchikiriyā ca,",
  "kp5:11.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:12.1": "Phuṭṭhassa lokadhammehi,",
  "kp5:12.2": "cittaṃ yassa na kampati;",
  "kp5:12.3": "Asokaṃ virajaṃ khemaṃ,",
  "kp5:12.4": "etaṃ maṅgalamuttamaṃ.",
  "kp5:13.1": "Etādisāni katvāna,",
  "kp5:13.2": "Sabbattha maparājitā;",
  "kp5:13.3": "Sabbattha sotthiṃ gacchanti,",
  "kp5:13.4": "Taṃ tesaṃ maṅgalamuttaman”ti.",
  "kp5:14.1": "Maṅgalasuttaṃ."
}