{
  "kp7:0.1": "Khuddakapāṭha",
  "kp7:0.2": "7. Tirokuṭṭasutta",
  "kp7:1.1": "Tirokuṭṭesu tiṭṭhanti,",
  "kp7:1.2": "sandhisiṅghāṭakesu ca;",
  "kp7:1.3": "Dvārabāhāsu tiṭṭhanti,",
  "kp7:1.4": "āgantvāna sakaṃ gharaṃ.",
  "kp7:2.1": "Pahūte annapānamhi,",
  "kp7:2.2": "khajjabhojje upaṭṭhite;",
  "kp7:2.3": "Na tesaṃ koci sarati,",
  "kp7:2.4": "sattānaṃ kammapaccayā.",
  "kp7:3.1": "Evaṃ dadanti ñātīnaṃ,",
  "kp7:3.2": "ye honti anukampakā;",
  "kp7:3.3": "Suciṃ paṇītaṃ kālena,",
  "kp7:3.4": "kappiyaṃ pānabhojanaṃ.",
  "kp7:4.1": "Idaṃ vo ñātīnaṃ hotu,",
  "kp7:4.2": "sukhitā hontu ñātayo;",
  "kp7:4.3": "Te ca tattha samāgantvā,",
  "kp7:4.4": "ñātipetā samāgatā.",
  "kp7:5.1": "Pahūte annapānamhi,",
  "kp7:5.2": "sakkaccaṃ anumodare;",
  "kp7:5.3": "Ciraṃ jīvantu no ñātī,",
  "kp7:5.4": "yesaṃ hetu labhāmase.",
  "kp7:6.1": "Amhākañca katā pūjā,",
  "kp7:6.2": "dāyakā ca anipphalā;",
  "kp7:6.3": "Na hi tattha kasī atthi,",
  "kp7:6.4": "gorakkhettha na vijjati.",
  "kp7:7.1": "Vaṇijjā tādisī natthi,",
  "kp7:7.2": "hiraññena kayākayaṃ;",
  "kp7:7.3": "Ito dinnena yāpenti,",
  "kp7:7.4": "petā kālagatā tahiṃ.",
  "kp7:8.1": "Unname udakaṃ vuṭṭhaṃ,",
  "kp7:8.2": "yathā ninnaṃ pavattati;",
  "kp7:8.3": "Evamevaṃ ito dinnaṃ,",
  "kp7:8.4": "petānaṃ upakappati.",
  "kp7:9.1": "Yathā vārivahā pūrā,",
  "kp7:9.2": "paripūrenti sāgaraṃ;",
  "kp7:9.3": "Evamevaṃ ito dinnaṃ,",
  "kp7:9.4": "petānaṃ upakappati.",
  "kp7:10.1": "Adāsi me akāsi me,",
  "kp7:10.2": "ñāti mittā sakhā ca me;",
  "kp7:10.3": "Petānaṃ dakkhiṇaṃ dajjā,",
  "kp7:10.4": "pubbe katamanussaraṃ.",
  "kp7:11.1": "Na hi ruṇṇaṃ vā soko vā,",
  "kp7:11.2": "yā caññā paridevanā;",
  "kp7:11.3": "Na taṃ petānamatthāya,",
  "kp7:11.4": "evaṃ tiṭṭhanti ñātayo.",
  "kp7:12.1": "Ayañca kho dakkhiṇā dinnā,",
  "kp7:12.2": "saṃghamhi suppatiṭṭhitā;",
  "kp7:12.3": "Dīgharattaṃ hitāyassa,",
  "kp7:12.4": "ṭhānaso upakappati.",
  "kp7:13.1": "So ñātidhammo ca ayaṃ nidassito,",
  "kp7:13.2": "Petāna pūjā ca katā uḷārā;",
  "kp7:13.3": "Balañca bhikkhūnamanuppadinnaṃ,",
  "kp7:13.4": "Tumhehi puññaṃ pasutaṃ anappakanti.",
  "kp7:14.1": "Tirokuṭṭasuttaṃ."
}