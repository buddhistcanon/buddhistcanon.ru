{
  "cp17:0.1": "Cariyāpiṭaka",
  "cp17:0.2": "Hatthināgavagga",
  "cp17:0.3": "Sīlapāramī 7",
  "cp17:0.4": "Mātaṅgacariya",
  "cp17:1.1": "“Punāparaṃ yadā homi,",
  "cp17:1.2": "jaṭilo uggatāpano;",
  "cp17:1.3": "Mātaṅgo nāma nāmena,",
  "cp17:1.4": "sīlavā susamāhito.",
  "cp17:2.1": "Ahañca brāhmaṇo eko,",
  "cp17:2.2": "gaṅgākūle vasāmubho;",
  "cp17:2.3": "Ahaṃ vasāmi upari,",
  "cp17:2.4": "heṭṭhā vasati brāhmaṇo.",
  "cp17:3.1": "Vicaranto anukūlamhi,",
  "cp17:3.2": "uddhaṃ me assamaddasa;",
  "cp17:3.3": "Tattha maṃ paribhāsetvā,",
  "cp17:3.4": "abhisapi muddhaphālanaṃ.",
  "cp17:4.1": "Yadihaṃ tassa pakuppeyyaṃ,",
  "cp17:4.2": "yadi sīlaṃ na gopaye;",
  "cp17:4.3": "Oloketvānahaṃ tassa,",
  "cp17:4.4": "kareyyaṃ chārikaṃ viya.",
  "cp17:5.1": "Yaṃ so tadā maṃ abhisapi,",
  "cp17:5.2": "kupito duṭṭhamānaso;",
  "cp17:5.3": "Tasseva matthake nipati,",
  "cp17:5.4": "yogena taṃ pamocayiṃ.",
  "cp17:6.1": "Anurakkhiṃ mama sīlaṃ,",
  "cp17:6.2": "nārakkhiṃ mama jīvitaṃ;",
  "cp17:6.3": "Sīlavā hi tadā āsiṃ,",
  "cp17:6.4": "bodhiyāyeva kāraṇā”ti.",
  "cp17:7.1": "Mātaṅgacariyaṃ sattamaṃ."
}