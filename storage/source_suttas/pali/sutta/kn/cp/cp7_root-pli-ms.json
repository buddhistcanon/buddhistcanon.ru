{
  "cp7:0.1": "Cariyāpiṭaka",
  "cp7:0.2": "Akittivagga",
  "cp7:0.3": "Dānapāramī 7",
  "cp7:0.4": "Candakumāracariya",
  "cp7:1.1": "“Punāparaṃ yadā homi,",
  "cp7:1.2": "ekarājassa atrajo;",
  "cp7:1.3": "Nagare pupphavatiyā,",
  "cp7:1.4": "kumāro candasavhayo.",
  "cp7:2.1": "Tadāhaṃ yajanā mutto,",
  "cp7:2.2": "nikkhanto yaññavāṭato;",
  "cp7:2.3": "Saṃvegaṃ janayitvāna,",
  "cp7:2.4": "mahādānaṃ pavattayiṃ.",
  "cp7:3.1": "Nāhaṃ pivāmi khādāmi,",
  "cp7:3.2": "napi bhuñjāmi bhojanaṃ;",
  "cp7:3.3": "Dakkhiṇeyye adatvāna,",
  "cp7:3.4": "api chappañcarattiyo.",
  "cp7:4.1": "Yathāpi vāṇijo nāma,",
  "cp7:4.2": "Katvāna bhaṇḍasañcayaṃ;",
  "cp7:4.3": "Yattha lābho mahā hoti,",
  "cp7:4.4": "Tattha taṃ harati bhaṇḍakaṃ.",
  "cp7:5.1": "Tatheva sakabhuttāpi,",
  "cp7:5.2": "pare dinnaṃ mahapphalaṃ;",
  "cp7:5.3": "Tasmā parassa dātabbaṃ,",
  "cp7:5.4": "satabhāgo bhavissati.",
  "cp7:6.1": "Etamatthavasaṃ ñatvā,",
  "cp7:6.2": "demi dānaṃ bhavābhave;",
  "cp7:6.3": "Na paṭikkamāmi dānato,",
  "cp7:6.4": "sambodhimanupattiyā”ti.",
  "cp7:7.1": "Candakumāracariyaṃ sattamaṃ."
}