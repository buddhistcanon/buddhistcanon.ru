{
  "cp19:0.1": "Cariyāpiṭaka",
  "cp19:0.2": "Hatthināgavagga",
  "cp19:0.3": "Sīlapāramī 9",
  "cp19:0.4": "Alīnasattucariya",
  "cp19:1.1": "“Pañcālaraṭṭhe nagaravare,",
  "cp19:1.2": "Kapilāyaṃ puruttame;",
  "cp19:1.3": "Rājā jayaddiso nāma,",
  "cp19:1.4": "Sīlaguṇamupāgato.",
  "cp19:2.1": "Tassa rañño ahaṃ putto,",
  "cp19:2.2": "Sutadhammo susīlavā;",
  "cp19:2.3": "Alīnasatto guṇavā,",
  "cp19:2.4": "Anurakkhaparijano sadā.",
  "cp19:3.1": "Pitā me migavaṃ gantvā,",
  "cp19:3.2": "porisādaṃ upāgami;",
  "cp19:3.3": "So me pitumaggahesi,",
  "cp19:3.4": "‘bhakkhosi mama mā cali’.",
  "cp19:4.1": "Tassa taṃ vacanaṃ sutvā,",
  "cp19:4.2": "bhīto tasitavedhito;",
  "cp19:4.3": "Ūrukkhambho ahu tassa,",
  "cp19:4.4": "disvāna porisādakaṃ.",
  "cp19:5.1": "Migavaṃ gahetvā muñcassu,",
  "cp19:5.2": "katvā āgamanaṃ puna;",
  "cp19:5.3": "Brāhmaṇassa dhanaṃ datvā,",
  "cp19:5.4": "pitā āmantayī mamaṃ.",
  "cp19:6.1": "‘Rajjaṃ putta paṭipajja,",
  "cp19:6.2": "mā pamajji puraṃ idaṃ;",
  "cp19:6.3": "Kataṃ me porisādena,",
  "cp19:6.4": "mama āgamanaṃ puna’.",
  "cp19:7.1": "Mātāpitū ca vanditvā,",
  "cp19:7.2": "nimminitvāna attanā;",
  "cp19:7.3": "Nikkhipitvā dhanuṃ khaggaṃ,",
  "cp19:7.4": "porisādaṃ upāgamiṃ.",
  "cp19:8.1": "Sasatthahatthūpagataṃ,",
  "cp19:8.2": "kadāci so tasissati;",
  "cp19:8.3": "Tena bhijjissati sīlaṃ,",
  "cp19:8.4": "parittāsaṃ kate mayi.",
  "cp19:9.1": "Sīlakhaṇḍabhayā mayhaṃ,",
  "cp19:9.2": "tassa dessaṃ na byāhariṃ;",
  "cp19:9.3": "Mettacitto hitavādī,",
  "cp19:9.4": "idaṃ vacanamabraviṃ.",
  "cp19:10.1": "‘Ujjālehi mahāaggiṃ,",
  "cp19:10.2": "papatissāmi rukkhato;",
  "cp19:10.3": "Tvaṃ pakkakālamaññāya,",
  "cp19:10.4": "bhakkhaya maṃ pitāmaha’.",
  "cp19:11.1": "Iti sīlavataṃ hetu,",
  "cp19:11.2": "nārakkhiṃ mama jīvitaṃ;",
  "cp19:11.3": "Pabbājesiṃ cahaṃ tassa,",
  "cp19:11.4": "sadā pāṇātipātikan”ti.",
  "cp19:12.1": "Alīnasattucariyaṃ navamaṃ."
}