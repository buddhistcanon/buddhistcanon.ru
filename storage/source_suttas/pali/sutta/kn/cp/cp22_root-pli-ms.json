{
  "cp22:0.1": "Cariyāpiṭaka",
  "cp22:0.2": "Yudhañjayavagga",
  "cp22:0.3": "Nekkhammapāramī 2",
  "cp22:0.4": "Somanassacariya",
  "cp22:1.1": "“Punāparaṃ yadā homi,",
  "cp22:1.2": "indapatthe puruttame;",
  "cp22:1.3": "Kāmito dayito putto,",
  "cp22:1.4": "somanassoti vissuto.",
  "cp22:2.1": "Sīlavā guṇasampanno,",
  "cp22:2.2": "kalyāṇapaṭibhānavā;",
  "cp22:2.3": "Vuḍḍhāpacāyī hirīmā,",
  "cp22:2.4": "saṅgahesu ca kovido.",
  "cp22:3.1": "Tassa rañño patikaro,",
  "cp22:3.2": "ahosi kuhakatāpaso;",
  "cp22:3.3": "Ārāmaṃ mālāvacchañca,",
  "cp22:3.4": "ropayitvāna jīvati.",
  "cp22:4.1": "Tamahaṃ disvāna kuhakaṃ,",
  "cp22:4.2": "thusarāsiṃva ataṇḍulaṃ;",
  "cp22:4.3": "Dumaṃva anto susiraṃ,",
  "cp22:4.4": "kadaliṃva asārakaṃ.",
  "cp22:5.1": "Natthimassa sataṃ dhammo,",
  "cp22:5.2": "sāmaññāpagato ayaṃ;",
  "cp22:5.3": "Hirīsukkadhammajahito,",
  "cp22:5.4": "jīvitavuttikāraṇā.",
  "cp22:6.1": "Kupito ahu paccanto,",
  "cp22:6.2": "aṭavīhi parantihi;",
  "cp22:6.3": "Taṃ nisedhetuṃ gacchanto,",
  "cp22:6.4": "anusāsi pitā mamaṃ.",
  "cp22:7.1": "‘Mā pamajji tuvaṃ tāta,",
  "cp22:7.2": "jaṭilaṃ uggatāpanaṃ;",
  "cp22:7.3": "Yadicchakaṃ pavattehi,",
  "cp22:7.4": "sabbakāmadado hi so’.",
  "cp22:8.1": "Tamahaṃ gantvānupaṭṭhānaṃ,",
  "cp22:8.2": "Idaṃ vacanamabraviṃ;",
  "cp22:8.3": "‘Kacci te gahapati kusalaṃ,",
  "cp22:8.4": "Kiṃ vā te āharīyatu’.",
  "cp22:9.1": "Tena so kupito āsi,",
  "cp22:9.2": "kuhako mānanissito;",
  "cp22:9.3": "‘Ghātāpemi tuvaṃ ajja,",
  "cp22:9.4": "raṭṭhā pabbājayāmi vā’.",
  "cp22:10.1": "Nisedhayitvā paccantaṃ,",
  "cp22:10.2": "rājā kuhakamabravi;",
  "cp22:10.3": "‘Kacci te bhante khamanīyaṃ,",
  "cp22:10.4": "sammāno te pavattito’.",
  "cp22:11.1": "Tassa ācikkhatī pāpo,",
  "cp22:11.2": "kumāro yathā nāsiyo;",
  "cp22:11.3": "Tassa taṃ vacanaṃ sutvā,",
  "cp22:11.4": "āṇāpesi mahīpati.",
  "cp22:12.1": "‘Sīsaṃ tattheva chinditvā,",
  "cp22:12.2": "katvāna catukhaṇḍikaṃ;",
  "cp22:12.3": "Rathiyā rathiyaṃ dassetha,",
  "cp22:12.4": "sā gati jaṭilahīḷitā’.",
  "cp22:13.1": "Tattha kāraṇikā gantvā,",
  "cp22:13.2": "caṇḍā luddā akāruṇā;",
  "cp22:13.3": "Mātu aṅke nisinnassa,",
  "cp22:13.4": "ākaḍḍhitvā nayanti maṃ.",
  "cp22:14.1": "Tesāhaṃ evamavacaṃ,",
  "cp22:14.2": "bandhataṃ gāḷhabandhanaṃ;",
  "cp22:14.3": "‘Rañño dassetha maṃ khippaṃ,",
  "cp22:14.4": "rājakiriyāni atthi me’.",
  "cp22:15.1": "Te maṃ rañño dassayiṃsu,",
  "cp22:15.2": "pāpassa pāpasevino;",
  "cp22:15.3": "Disvāna taṃ saññāpesiṃ,",
  "cp22:15.4": "mamañca vasamānayiṃ.",
  "cp22:16.1": "So maṃ tattha khamāpesi,",
  "cp22:16.2": "mahārajjamadāsi me;",
  "cp22:16.3": "Sohaṃ tamaṃ dālayitvā,",
  "cp22:16.4": "pabbajiṃ anagāriyaṃ.",
  "cp22:17.1": "Na me dessaṃ mahārajjaṃ,",
  "cp22:17.2": "kāmabhogo na dessiyo;",
  "cp22:17.3": "Sabbaññutaṃ piyaṃ mayhaṃ,",
  "cp22:17.4": "tasmā rajjaṃ pariccajin”ti.",
  "cp22:18.1": "Somanassacariyaṃ dutiyaṃ."
}