{
  "cp16:0.1": "Cariyāpiṭaka",
  "cp16:0.2": "Hatthināgavagga",
  "cp16:0.3": "Sīlapāramī 6",
  "cp16:0.4": "Rurumigarājacariya",
  "cp16:1.1": "“Punāparaṃ yadā homi,",
  "cp16:1.2": "sutattakanakasannibho;",
  "cp16:1.3": "Migarājā ruru nāma,",
  "cp16:1.4": "paramasīlasamāhito.",
  "cp16:2.1": "Ramme padese ramaṇīye,",
  "cp16:2.2": "vivitte amanussake;",
  "cp16:2.3": "Tattha vāsaṃ upagañchiṃ,",
  "cp16:2.4": "gaṅgākūle manorame.",
  "cp16:3.1": "Atha upari gaṅgāya,",
  "cp16:3.2": "dhanikehi paripīḷito;",
  "cp16:3.3": "Puriso gaṅgāya papati,",
  "cp16:3.4": "‘jīvāmi vā marāmi vā’.",
  "cp16:4.1": "Rattindivaṃ so gaṅgāya,",
  "cp16:4.2": "vuyhamāno mahodake;",
  "cp16:4.3": "Ravanto karuṇaṃ ravaṃ,",
  "cp16:4.4": "majjhe gaṅgāya gacchati.",
  "cp16:5.1": "Tassāhaṃ saddaṃ sutvāna,",
  "cp16:5.2": "karuṇaṃ paridevato;",
  "cp16:5.3": "Gaṅgāya tīre ṭhatvāna,",
  "cp16:5.4": "apucchiṃ ‘kosi tvaṃ naro’.",
  "cp16:6.1": "So me puṭṭho ca byākāsi,",
  "cp16:6.2": "attano karaṇaṃ tadā;",
  "cp16:6.3": "‘Dhanikehi bhīto tasito,",
  "cp16:6.4": "pakkhandohaṃ mahānadiṃ’.",
  "cp16:7.1": "Tassa katvāna kāruññaṃ,",
  "cp16:7.2": "cajitvā mama jīvitaṃ;",
  "cp16:7.3": "Pavisitvā nīhariṃ tassa,",
  "cp16:7.4": "andhakāramhi rattiyā.",
  "cp16:8.1": "Assatthakālamaññāya,",
  "cp16:8.2": "tassāhaṃ idamabraviṃ;",
  "cp16:8.3": "‘Ekaṃ taṃ varaṃ yācāmi,",
  "cp16:8.4": "mā maṃ kassaci pāvada’.",
  "cp16:9.1": "Nagaraṃ gantvāna ācikkhi,",
  "cp16:9.2": "pucchito dhanahetuko;",
  "cp16:9.3": "Rājānaṃ so gahetvāna,",
  "cp16:9.4": "upagañchi mamantikaṃ.",
  "cp16:10.1": "Yāvatā karaṇaṃ sabbaṃ,",
  "cp16:10.2": "rañño ārocitaṃ mayā;",
  "cp16:10.3": "Rājā sutvāna vacanaṃ,",
  "cp16:10.4": "usuṃ tassa pakappayi;",
  "cp16:10.5": "‘Idheva ghātayissāmi,",
  "cp16:10.6": "mittadubbhiṃ anāriyaṃ’.",
  "cp16:11.1": "Tamahaṃ anurakkhanto,",
  "cp16:11.2": "nimminiṃ mama attanā;",
  "cp16:11.3": "‘Tiṭṭhateso mahārāja,",
  "cp16:11.4": "kāmakāro bhavāmi te’.",
  "cp16:12.1": "Anurakkhiṃ mama sīlaṃ,",
  "cp16:12.2": "nārakkhiṃ mama jīvitaṃ;",
  "cp16:12.3": "Sīlavā hi tadā āsiṃ,",
  "cp16:12.4": "bodhiyāyeva kāraṇā”ti.",
  "cp16:13.1": "Rurumigarājacariyaṃ chaṭṭhaṃ."
}