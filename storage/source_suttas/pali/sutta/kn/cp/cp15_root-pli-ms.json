{
  "cp15:0.1": "Cariyāpiṭaka",
  "cp15:0.2": "Hatthināgavagga",
  "cp15:0.3": "Sīlapāramī 5",
  "cp15:0.4": "Mahiṃsarājacariya",
  "cp15:1.1": "“Punāparaṃ yadā homi,",
  "cp15:1.2": "mahiṃso pavanacārako;",
  "cp15:1.3": "Pavaḍḍhakāyo balavā,",
  "cp15:1.4": "mahanto bhīmadassano.",
  "cp15:2.1": "Pabbhāre giridugge ca,",
  "cp15:2.2": "rukkhamūle dakāsaye;",
  "cp15:2.3": "Hotettha ṭhānaṃ mahiṃsānaṃ,",
  "cp15:2.4": "koci koci tahiṃ tahiṃ.",
  "cp15:3.1": "Vicaranto brahāraññe,",
  "cp15:3.2": "ṭhānaṃ addasa bhaddakaṃ;",
  "cp15:3.3": "Taṃ ṭhānaṃ upagantvāna,",
  "cp15:3.4": "tiṭṭhāmi ca sayāmi ca.",
  "cp15:4.1": "Athettha kapimāgantvā,",
  "cp15:4.2": "pāpo anariyo lahu;",
  "cp15:4.3": "Khandhe nalāṭe bhamuke,",
  "cp15:4.4": "mutteti ohadeti taṃ.",
  "cp15:5.1": "Sakimpi divasaṃ dutiyaṃ,",
  "cp15:5.2": "tatiyaṃ catutthampi ca;",
  "cp15:5.3": "Dūseti maṃ sabbakālaṃ,",
  "cp15:5.4": "tena homi upadduto.",
  "cp15:6.1": "Mamaṃ upaddutaṃ disvā,",
  "cp15:6.2": "yakkho maṃ idamabravi;",
  "cp15:6.3": "‘Nāsehetaṃ chavaṃ pāpaṃ,",
  "cp15:6.4": "siṅgehi ca khurehi ca’.",
  "cp15:7.1": "Evaṃ vutte, tadā yakkhe,",
  "cp15:7.2": "ahaṃ taṃ idamabraviṃ;",
  "cp15:7.3": "‘Kiṃ tvaṃ makkhesi kuṇapena,",
  "cp15:7.4": "pāpena anariyena maṃ.",
  "cp15:8.1": "Yadihaṃ tassa pakuppeyyaṃ,",
  "cp15:8.2": "tato hīnataro bhave;",
  "cp15:8.3": "Sīlañca me pabhijjeyya,",
  "cp15:8.4": "viññū ca garaheyyu maṃ.",
  "cp15:9.1": "Hīḷitā jīvitā vāpi,",
  "cp15:9.2": "parisuddhena mataṃ varaṃ;",
  "cp15:9.3": "Kyāhaṃ jīvitahetūpi,",
  "cp15:9.4": "kāhāmi paraheṭhanaṃ’.",
  "cp15:10.1": "Mamevāyaṃ maññamāno,",
  "cp15:10.2": "aññepevaṃ karissati;",
  "cp15:10.3": "Teva tassa vadhissanti,",
  "cp15:10.4": "sā me mutti bhavissati.",
  "cp15:11.1": "Hīnamajjhimaukkaṭṭhe,",
  "cp15:11.2": "sahanto avamānitaṃ;",
  "cp15:11.3": "Evaṃ labhati sappañño,",
  "cp15:11.4": "manasā yathāpatthitan”ti.",
  "cp15:12.1": "Mahiṃsarājacariyaṃ pañcamaṃ."
}