{
  "cp11:0.1": "Cariyāpiṭaka",
  "cp11:0.2": "Hatthināgavagga",
  "cp11:0.3": "Sīlapāramī 1",
  "cp11:0.4": "Mātuposakacariya",
  "cp11:1.1": "“Yadā ahosiṃ pavane,",
  "cp11:1.2": "kuñjaro mātuposako;",
  "cp11:1.3": "Na tadā atthi mahiyā,",
  "cp11:1.4": "guṇena mama sādiso.",
  "cp11:2.1": "Pavane disvā vanacaro,",
  "cp11:2.2": "rañño maṃ paṭivedayi;",
  "cp11:2.3": "‘Tavānucchavo mahārāja,",
  "cp11:2.4": "gajo vasati kānane.",
  "cp11:3.1": "Na tassa parikkhāyattho,",
  "cp11:3.2": "napi āḷakakāsuyā;",
  "cp11:3.3": "Saha gahite soṇḍāya,",
  "cp11:3.4": "sayameva idhehi’ti.",
  "cp11:4.1": "Tassa taṃ vacanaṃ sutvā,",
  "cp11:4.2": "rājāpi tuṭṭhamānaso;",
  "cp11:4.3": "Pesesi hatthidamakaṃ,",
  "cp11:4.4": "chekācariyaṃ susikkhitaṃ.",
  "cp11:5.1": "Gantvā so hatthidamako,",
  "cp11:5.2": "addasa padumassare;",
  "cp11:5.3": "Bhisamuḷālaṃ uddharantaṃ,",
  "cp11:5.4": "yāpanatthāya mātuyā.",
  "cp11:6.1": "Viññāya me sīlaguṇaṃ,",
  "cp11:6.2": "lakkhaṇaṃ upadhārayi;",
  "cp11:6.3": "‘Ehi puttā’ti vatvāna,",
  "cp11:6.4": "mama soṇḍāya aggahi.",
  "cp11:7.1": "Yaṃ me tadā pākatikaṃ,",
  "cp11:7.2": "sarīrānugataṃ balaṃ;",
  "cp11:7.3": "Ajja nāgasahassānaṃ,",
  "cp11:7.4": "balena samasādisaṃ.",
  "cp11:8.1": "Yadihaṃ tesaṃ pakuppeyyaṃ,",
  "cp11:8.2": "upetānaṃ gahaṇāya maṃ;",
  "cp11:8.3": "Paṭibalo bhave tesaṃ,",
  "cp11:8.4": "yāva rajjampi mānusaṃ.",
  "cp11:9.1": "Api cāhaṃ sīlarakkhāya,",
  "cp11:9.2": "Sīlapāramipūriyā;",
  "cp11:9.3": "Na karomi citte aññathattaṃ,",
  "cp11:9.4": "Pakkhipantaṃ mamāḷake.",
  "cp11:10.1": "Yadi te maṃ tattha koṭṭeyyuṃ,",
  "cp11:10.2": "pharasūhi tomarehi ca;",
  "cp11:10.3": "Neva tesaṃ pakuppeyyaṃ,",
  "cp11:10.4": "sīlakhaṇḍabhayā mamā”ti.",
  "cp11:11.1": "Mātuposakacariyaṃ paṭhamaṃ."
}