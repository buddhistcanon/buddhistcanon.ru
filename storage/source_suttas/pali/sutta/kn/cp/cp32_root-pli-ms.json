{
  "cp32:0.1": "Cariyāpiṭaka",
  "cp32:0.2": "Yudhañjayavagga",
  "cp32:0.3": "Saccapāramī 6",
  "cp32:0.4": "Sutasomacariya",
  "cp32:1.1": "“Punāparaṃ yadā homi,",
  "cp32:1.2": "sutasomo mahīpati;",
  "cp32:1.3": "Gahito porisādena,",
  "cp32:1.4": "brāhmaṇe saṅgaraṃ sariṃ.",
  "cp32:2.1": "Khattiyānaṃ ekasataṃ,",
  "cp32:2.2": "āvuṇitvā karattale;",
  "cp32:2.3": "Etesaṃ pamilāpetvā,",
  "cp32:2.4": "yaññatthe upanayī mamaṃ.",
  "cp32:3.1": "Apucchi maṃ porisādo,",
  "cp32:3.2": "‘kiṃ tvaṃ icchasi nissajaṃ;",
  "cp32:3.3": "Yathāmati te kāhāmi,",
  "cp32:3.4": "yadi me tvaṃ punehisi’.",
  "cp32:4.1": "Tassa paṭissuṇitvāna,",
  "cp32:4.2": "paṇhe āgamanaṃ mama;",
  "cp32:4.3": "Upagantvā puraṃ rammaṃ,",
  "cp32:4.4": "rajjaṃ niyyādayiṃ tadā.",
  "cp32:5.1": "Anussaritvā sataṃ dhammaṃ,",
  "cp32:5.2": "pubbakaṃ jinasevitaṃ;",
  "cp32:5.3": "Brāhmaṇassa dhanaṃ datvā,",
  "cp32:5.4": "porisādaṃ upāgamiṃ.",
  "cp32:6.1": "Natthi me saṃsayo tattha,",
  "cp32:6.2": "Ghātayissati vā na vā;",
  "cp32:6.3": "Saccavācānurakkhanto,",
  "cp32:6.4": "Jīvitaṃ cajitumupāgamiṃ;",
  "cp32:6.5": "Saccena me samo natthi,",
  "cp32:6.6": "Esā me saccapāramī”ti.",
  "cp32:7.1": "Sutasomacariyaṃ dvādasamaṃ."
}