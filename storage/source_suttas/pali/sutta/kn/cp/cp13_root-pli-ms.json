{
  "cp13:0.1": "Cariyāpiṭaka",
  "cp13:0.2": "Hatthināgavagga",
  "cp13:0.3": "Sīlapāramī 3",
  "cp13:0.4": "Campeyyanāgacariya",
  "cp13:1.1": "“Punāparaṃ yadā homi,",
  "cp13:1.2": "campeyyako mahiddhiko;",
  "cp13:1.3": "Tadāpi dhammiko āsiṃ,",
  "cp13:1.4": "sīlabbatasamappito.",
  "cp13:2.1": "Tadāpi maṃ dhammacāriṃ,",
  "cp13:2.2": "upavutthaṃ uposathaṃ;",
  "cp13:2.3": "Ahituṇḍiko gahetvāna,",
  "cp13:2.4": "rājadvāramhi kīḷati.",
  "cp13:3.1": "Yaṃ yaṃ so vaṇṇaṃ cintayi,",
  "cp13:3.2": "nīlaṃva pītalohitaṃ;",
  "cp13:3.3": "Tassa cittānuvattanto,",
  "cp13:3.4": "homi cintitasannibho.",
  "cp13:4.1": "Thalaṃ kareyyamudakaṃ,",
  "cp13:4.2": "udakampi thalaṃ kare;",
  "cp13:4.3": "Yadihaṃ tassa pakuppeyyaṃ,",
  "cp13:4.4": "khaṇena chārikaṃ kare.",
  "cp13:5.1": "Yadi cittavasī hessaṃ,",
  "cp13:5.2": "parihāyissāmi sīlato;",
  "cp13:5.3": "Sīlena parihīnassa,",
  "cp13:5.4": "uttamattho na sijjhati.",
  "cp13:6.1": "Kāmaṃ bhijjatuyaṃ kāyo,",
  "cp13:6.2": "idheva vikirīyatu;",
  "cp13:6.3": "Neva sīlaṃ pabhindeyyaṃ,",
  "cp13:6.4": "vikirante bhusaṃ viyā”ti.",
  "cp13:7.1": "Campeyyanāgacariyaṃ tatiyaṃ."
}