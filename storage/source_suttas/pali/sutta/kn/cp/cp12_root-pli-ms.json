{
  "cp12:0.1": "Cariyāpiṭaka",
  "cp12:0.2": "Hatthināgavagga",
  "cp12:0.3": "Sīlapāramī 2",
  "cp12:0.4": "Bhūridattacariya",
  "cp12:1.1": "“Punāparaṃ yadā homi,",
  "cp12:1.2": "bhūridatto mahiddhiko;",
  "cp12:1.3": "Virūpakkhena mahāraññā,",
  "cp12:1.4": "devalokamagañchahaṃ.",
  "cp12:2.1": "Tattha passitvāhaṃ deve,",
  "cp12:2.2": "ekantaṃ sukhasamappite;",
  "cp12:2.3": "Taṃ saggagamanatthāya,",
  "cp12:2.4": "sīlabbataṃ samādiyiṃ.",
  "cp12:3.1": "Sarīrakiccaṃ katvāna,",
  "cp12:3.2": "bhutvā yāpanamattakaṃ;",
  "cp12:3.3": "Caturo aṅge adhiṭṭhāya,",
  "cp12:3.4": "semi vammikamuddhani.",
  "cp12:4.1": "‘Chaviyā cammena maṃsena,",
  "cp12:4.2": "Nahāruaṭṭhikehi vā;",
  "cp12:4.3": "Yassa etena karaṇīyaṃ,",
  "cp12:4.4": "Dinnaṃyeva harātu so’.",
  "cp12:5.1": "Saṃsito akataññunā,",
  "cp12:5.2": "ālampāyano mamaggahi;",
  "cp12:5.3": "Peḷāya pakkhipitvāna,",
  "cp12:5.4": "kīḷeti maṃ tahiṃ tahiṃ.",
  "cp12:6.1": "Peḷāya pakkhipantepi,",
  "cp12:6.2": "sammaddantepi pāṇinā;",
  "cp12:6.3": "Ālampāyane na kuppāmi,",
  "cp12:6.4": "sīlakhaṇḍabhayā mama.",
  "cp12:7.1": "Sakajīvitapariccāgo,",
  "cp12:7.2": "tiṇato lahuko mama;",
  "cp12:7.3": "Sīlavītikkamo mayhaṃ,",
  "cp12:7.4": "pathavīuppatanaṃ viya.",
  "cp12:8.1": "Nirantaraṃ jātisataṃ,",
  "cp12:8.2": "cajeyyaṃ mama jīvitaṃ;",
  "cp12:8.3": "Neva sīlaṃ pabhindeyyaṃ,",
  "cp12:8.4": "catuddīpāna hetupi.",
  "cp12:9.1": "Api cāhaṃ sīlarakkhāya,",
  "cp12:9.2": "Sīlapāramipūriyā;",
  "cp12:9.3": "Na karomi citte aññathattaṃ,",
  "cp12:9.4": "Pakkhipantampi peḷake”ti.",
  "cp12:10.1": "Bhūridattacariyaṃ dutiyaṃ."
}