{
  "cp24:0.1": "Cariyāpiṭaka",
  "cp24:0.2": "Yudhañjayavagga",
  "cp24:0.3": "Nekkhammapāramī 4",
  "cp24:0.4": "Bhisacariya",
  "cp24:1.1": "“Punāparaṃ yadā homi,",
  "cp24:1.2": "kāsīnaṃ puravaruttame;",
  "cp24:1.3": "Bhaginī ca bhātaro satta,",
  "cp24:1.4": "nibbattā sotthiye kule.",
  "cp24:2.1": "Etesaṃ pubbajo āsiṃ,",
  "cp24:2.2": "hirīsukkamupāgato;",
  "cp24:2.3": "Bhavaṃ disvāna bhayato,",
  "cp24:2.4": "nekkhammābhirato ahaṃ.",
  "cp24:3.1": "Mātāpitūhi pahitā,",
  "cp24:3.2": "sahāyā ekamānasā;",
  "cp24:3.3": "Kāmehi maṃ nimantenti,",
  "cp24:3.4": "‘kulavaṃsaṃ dharehi’ti.",
  "cp24:4.1": "Yaṃ tesaṃ vacanaṃ vuttaṃ,",
  "cp24:4.2": "gihīdhamme sukhāvahaṃ;",
  "cp24:4.3": "Taṃ me ahosi kaṭhinaṃ,",
  "cp24:4.4": "tattaphālasamaṃ viya.",
  "cp24:5.1": "Te maṃ tadā ukkhipantaṃ,",
  "cp24:5.2": "pucchiṃsu patthitaṃ mama;",
  "cp24:5.3": "‘Kiṃ tvaṃ patthayase samma,",
  "cp24:5.4": "yadi kāme na bhuñjasi’.",
  "cp24:6.1": "Tesāhaṃ evamavacaṃ,",
  "cp24:6.2": "atthakāmo hitesinaṃ;",
  "cp24:6.3": "‘Nāhaṃ patthemi gihībhāvaṃ,",
  "cp24:6.4": "nekkhammābhirato ahaṃ’.",
  "cp24:7.1": "Te mayhaṃ vacanaṃ sutvā,",
  "cp24:7.2": "pitu mātu ca sāvayuṃ;",
  "cp24:7.3": "Mātāpitā evamāhu,",
  "cp24:7.4": "‘sabbeva pabbajāma bho’.",
  "cp24:8.1": "Ubho mātāpitā mayhaṃ,",
  "cp24:8.2": "bhaginī ca satta bhātaro;",
  "cp24:8.3": "Amitadhanaṃ chaḍḍayitvā,",
  "cp24:8.4": "pāvisimhā mahāvanan”ti.",
  "cp24:9.1": "Bhisacariyaṃ catutthaṃ."
}