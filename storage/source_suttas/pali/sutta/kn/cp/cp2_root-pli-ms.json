{
  "cp2:0.1": "Cariyāpiṭaka",
  "cp2:0.2": "Akittivagga",
  "cp2:0.3": "Dānapāramī 2",
  "cp2:0.4": "Saṅkhacariya",
  "cp2:1.1": "“Punāparaṃ yadā homi,",
  "cp2:1.2": "Brāhmaṇo saṅkhasavhayo;",
  "cp2:1.3": "Mahāsamuddaṃ taritukāmo,",
  "cp2:1.4": "Upagacchāmi paṭṭanaṃ.",
  "cp2:2.1": "Tatthaddasaṃ paṭipathe,",
  "cp2:2.2": "Sayambhuṃ aparājitaṃ;",
  "cp2:2.3": "Kantāraddhānaṃ paṭipannaṃ,",
  "cp2:2.4": "Tattāya kaṭhinabhūmiyā.",
  "cp2:3.1": "Tamahaṃ paṭipathe disvā,",
  "cp2:3.2": "imamatthaṃ vicintayiṃ;",
  "cp2:3.3": "‘Idaṃ khettaṃ anuppattaṃ,",
  "cp2:3.4": "puññakāmassa jantuno.",
  "cp2:4.1": "Yathā kassako puriso,",
  "cp2:4.2": "khettaṃ disvā mahāgamaṃ;",
  "cp2:4.3": "Tattha bījaṃ na ropeti,",
  "cp2:4.4": "na so dhaññena atthiko.",
  "cp2:5.1": "Evamevāhaṃ puññakāmo,",
  "cp2:5.2": "Disvā khettavaruttamaṃ;",
  "cp2:5.3": "Yadi tattha kāraṃ na karomi,",
  "cp2:5.4": "Nāhaṃ puññena atthiko.",
  "cp2:6.1": "Yathā amacco muddikāmo,",
  "cp2:6.2": "rañño antepure jane;",
  "cp2:6.3": "Na deti tesaṃ dhanadhaññaṃ,",
  "cp2:6.4": "muddito parihāyati.",
  "cp2:7.1": "Evamevāhaṃ puññakāmo,",
  "cp2:7.2": "Vipulaṃ disvāna dakkhiṇaṃ;",
  "cp2:7.3": "Yadi tassa dānaṃ na dadāmi,",
  "cp2:7.4": "Parihāyissāmi puññato’.",
  "cp2:8.1": "Evāhaṃ cintayitvāna,",
  "cp2:8.2": "orohitvā upāhanā;",
  "cp2:8.3": "Tassa pādāni vanditvā,",
  "cp2:8.4": "adāsiṃ chattupāhanaṃ.",
  "cp2:9.1": "Tenevāhaṃ sataguṇato,",
  "cp2:9.2": "Sukhumālo sukhedhito;",
  "cp2:9.3": "Api ca dānaṃ paripūrento,",
  "cp2:9.4": "Evaṃ tassa adāsahan”ti.",
  "cp2:10.1": "Saṅkhacariyaṃ dutiyaṃ."
}