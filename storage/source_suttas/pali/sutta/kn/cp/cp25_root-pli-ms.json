{
  "cp25:0.1": "Cariyāpiṭaka",
  "cp25:0.2": "Yudhañjayavagga",
  "cp25:0.3": "Nekkhammapāramī 5",
  "cp25:0.4": "Soṇapaṇḍitacariya",
  "cp25:1.1": "“Punāparaṃ yadā homi,",
  "cp25:1.2": "nagare brahmavaḍḍhane;",
  "cp25:1.3": "Tattha kulavare seṭṭhe,",
  "cp25:1.4": "mahāsāle ajāyahaṃ.",
  "cp25:2.1": "Tadāpi lokaṃ disvāna,",
  "cp25:2.2": "Andhībhūtaṃ tamotthaṭaṃ;",
  "cp25:2.3": "Cittaṃ bhavato patikuṭati,",
  "cp25:2.4": "Tuttavegahataṃ viya.",
  "cp25:3.1": "Disvāna vividhaṃ pāpaṃ,",
  "cp25:3.2": "evaṃ cintesahaṃ tadā;",
  "cp25:3.3": "‘Kadāhaṃ gehā nikkhamma,",
  "cp25:3.4": "pavisissāmi kānanaṃ’.",
  "cp25:4.1": "Tadāpi maṃ nimantesuṃ,",
  "cp25:4.2": "kāmabhogehi ñātayo;",
  "cp25:4.3": "Tesampi chandamācikkhiṃ,",
  "cp25:4.4": "‘mā nimantetha tehi maṃ’.",
  "cp25:5.1": "Yo me kaniṭṭhako bhātā,",
  "cp25:5.2": "nando nāmāsi paṇḍito;",
  "cp25:5.3": "Sopi maṃ anusikkhanto,",
  "cp25:5.4": "pabbajjaṃ samarocayi.",
  "cp25:6.1": "Ahaṃ soṇo ca nando ca,",
  "cp25:6.2": "ubho mātāpitā mama;",
  "cp25:6.3": "Tadāpi bhoge chaḍḍetvā,",
  "cp25:6.4": "pāvisimhā mahāvanan”ti.",
  "cp25:7.1": "Soṇapaṇḍitacariyaṃ pañcamaṃ."
}