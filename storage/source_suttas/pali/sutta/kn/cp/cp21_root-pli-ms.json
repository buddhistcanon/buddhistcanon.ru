{
  "cp21:0.1": "Cariyāpiṭaka",
  "cp21:0.2": "Yudhañjayavagga",
  "cp21:0.3": "Nekkhammapāramī 1",
  "cp21:0.4": "Yudhañjayacariya",
  "cp21:1.1": "“Yadāhaṃ amitayaso,",
  "cp21:1.2": "Rājaputto yudhañjayo;",
  "cp21:1.3": "Ussāvabinduṃ sūriyātape,",
  "cp21:1.4": "Patitaṃ disvāna saṃvijiṃ.",
  "cp21:2.1": "Taññevādhipatiṃ katvā,",
  "cp21:2.2": "saṃvegamanubrūhayiṃ;",
  "cp21:2.3": "Mātāpitū ca vanditvā,",
  "cp21:2.4": "pabbajjamanuyācahaṃ.",
  "cp21:3.1": "Yācanti maṃ pañjalikā,",
  "cp21:3.2": "sanegamā saraṭṭhakā;",
  "cp21:3.3": "‘Ajjeva putta paṭipajja,",
  "cp21:3.4": "iddhaṃ phītaṃ mahāmahiṃ’.",
  "cp21:4.1": "Sarājake sahorodhe,",
  "cp21:4.2": "sanegame saraṭṭhake;",
  "cp21:4.3": "Karuṇaṃ paridevante,",
  "cp21:4.4": "anapekkhova pariccajiṃ.",
  "cp21:5.1": "Kevalaṃ pathaviṃ rajjaṃ,",
  "cp21:5.2": "ñātiparijanaṃ yasaṃ;",
  "cp21:5.3": "Cajamāno na cintesiṃ,",
  "cp21:5.4": "bodhiyāyeva kāraṇā.",
  "cp21:6.1": "Mātāpitā na me dessā,",
  "cp21:6.2": "napi me dessaṃ mahāyasaṃ;",
  "cp21:6.3": "Sabbaññutaṃ piyaṃ mayhaṃ,",
  "cp21:6.4": "tasmā rajjaṃ pariccajin”ti.",
  "cp21:7.1": "Yudhañjayacariyaṃ paṭhamaṃ."
}