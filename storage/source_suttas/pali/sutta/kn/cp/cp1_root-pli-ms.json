{
  "cp1:0.1": "Cariyāpiṭaka",
  "cp1:0.2": "Akittivagga",
  "cp1:0.3": "Dānapāramī 1",
  "cp1:0.4": "Akitticariya",
  "cp1:1.1": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
  "cp1:2.1": "“Kappe ca satasahasse,",
  "cp1:2.2": "caturo ca asaṅkhiye;",
  "cp1:2.3": "Etthantare yaṃ caritaṃ,",
  "cp1:2.4": "sabbaṃ taṃ bodhipācanaṃ.",
  "cp1:3.1": "Atītakappe caritaṃ,",
  "cp1:3.2": "ṭhapayitvā bhavābhave;",
  "cp1:3.3": "Imamhi kappe caritaṃ,",
  "cp1:3.4": "pavakkhissaṃ suṇohi me.",
  "cp1:4.1": "Yadā ahaṃ brahāraññe,",
  "cp1:4.2": "suññe vipinakānane;",
  "cp1:4.3": "Ajjhogāhetvā viharāmi,",
  "cp1:4.4": "akitti nāma tāpaso.",
  "cp1:5.1": "Tadā maṃ tapatejena,",
  "cp1:5.2": "santatto tidivābhibhū;",
  "cp1:5.3": "Dhārento brāhmaṇavaṇṇaṃ,",
  "cp1:5.4": "bhikkhāya maṃ upāgami.",
  "cp1:6.1": "Pavanā ābhataṃ paṇṇaṃ,",
  "cp1:6.2": "atelañca aloṇikaṃ;",
  "cp1:6.3": "Mama dvāre ṭhitaṃ disvā,",
  "cp1:6.4": "sakaṭāhena ākiriṃ.",
  "cp1:7.1": "Tassa datvānahaṃ paṇṇaṃ,",
  "cp1:7.2": "nikkujjitvāna bhājanaṃ;",
  "cp1:7.3": "Punesanaṃ jahitvāna,",
  "cp1:7.4": "pāvisiṃ paṇṇasālakaṃ.",
  "cp1:8.1": "Dutiyampi tatiyampi,",
  "cp1:8.2": "upagañchi mamantikaṃ;",
  "cp1:8.3": "Akampito anolaggo,",
  "cp1:8.4": "evamevamadāsahaṃ.",
  "cp1:9.1": "Na me tappaccayā atthi,",
  "cp1:9.2": "sarīrasmiṃ vivaṇṇiyaṃ;",
  "cp1:9.3": "Pītisukhena ratiyā,",
  "cp1:9.4": "vītināmemi taṃ divaṃ.",
  "cp1:10.1": "Yadi māsampi dvemāsaṃ,",
  "cp1:10.2": "dakkhiṇeyyaṃ varaṃ labhe;",
  "cp1:10.3": "Akampito anolīno,",
  "cp1:10.4": "dadeyyaṃ dānamuttamaṃ.",
  "cp1:11.1": "Na tassa dānaṃ dadamāno,",
  "cp1:11.2": "yasaṃ lābhañca patthayiṃ;",
  "cp1:11.3": "Sabbaññutaṃ patthayāno,",
  "cp1:11.4": "tāni kammāni ācarin”ti.",
  "cp1:12.1": "Akitticariyaṃ paṭhamaṃ."
}