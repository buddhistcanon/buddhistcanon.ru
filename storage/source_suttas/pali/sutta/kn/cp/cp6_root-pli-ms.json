{
  "cp6:0.1": "Cariyāpiṭaka",
  "cp6:0.2": "Akittivagga",
  "cp6:0.3": "Dānapāramī 6",
  "cp6:0.4": "Nimirājacariya",
  "cp6:1.1": "“Punāparaṃ yadā homi,",
  "cp6:1.2": "mithilāyaṃ puruttame;",
  "cp6:1.3": "Nimi nāma mahārājā,",
  "cp6:1.4": "paṇḍito kusalatthiko.",
  "cp6:2.1": "Tadāhaṃ māpayitvāna,",
  "cp6:2.2": "catussālaṃ catummukhaṃ;",
  "cp6:2.3": "Tattha dānaṃ pavattesiṃ,",
  "cp6:2.4": "migapakkhinarādinaṃ.",
  "cp6:3.1": "Acchādanañca sayanaṃ,",
  "cp6:3.2": "annaṃ pānañca bhojanaṃ;",
  "cp6:3.3": "Abbocchinnaṃ karitvāna,",
  "cp6:3.4": "mahādānaṃ pavattayiṃ.",
  "cp6:4.1": "Yathāpi sevako sāmiṃ,",
  "cp6:4.2": "dhanahetumupāgato;",
  "cp6:4.3": "Kāyena vācā manasā,",
  "cp6:4.4": "ārādhanīyamesati.",
  "cp6:5.1": "Tathevāhaṃ sabbabhave,",
  "cp6:5.2": "pariyesissāmi bodhijaṃ;",
  "cp6:5.3": "Dānena satte tappetvā,",
  "cp6:5.4": "icchāmi bodhimuttaman”ti.",
  "cp6:6.1": "Nimirājacariyaṃ chaṭṭhaṃ."
}