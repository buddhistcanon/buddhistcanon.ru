{
  "thag3.14:0.1": "Theragāthā",
  "thag3.14:0.2": "Tikanipāta",
  "thag3.14:0.3": "Paṭhamavagga",
  "thag3.14:0.4": "3.14. Gotamattheragāthā",
  "thag3.14:1.1": "“Saṃsaraṃ hi nirayaṃ agacchissaṃ,",
  "thag3.14:1.2": "Petalokamagamaṃ punappunaṃ;",
  "thag3.14:1.3": "Dukkhamamhipi tiracchānayoniyaṃ,",
  "thag3.14:1.4": "Nekadhā hi vusitaṃ ciraṃ mayā.",
  "thag3.14:2.1": "Mānusopi ca bhavobhirādhito,",
  "thag3.14:2.2": "Saggakāyamagamaṃ sakiṃ sakiṃ;",
  "thag3.14:2.3": "Rūpadhātusu arūpadhātusu,",
  "thag3.14:2.4": "Nevasaññisu asaññisuṭṭhitaṃ.",
  "thag3.14:3.1": "Sambhavā suviditā asārakā,",
  "thag3.14:3.2": "Saṅkhatā pacalitā saderitā;",
  "thag3.14:3.3": "Taṃ viditvā mahamattasambhavaṃ,",
  "thag3.14:3.4": "Santimeva satimā samajjhagan”ti.",
  "thag3.14:3.5": "…",
  "thag3.14:3.6": "Gotamo thero …."
}