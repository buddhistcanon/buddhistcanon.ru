{
  "thag2.28:0.1": "Theragāthā",
  "thag2.28:0.2": "Dukanipāta",
  "thag2.28:0.3": "Tatiyavagga",
  "thag2.28:0.4": "2.28. Bharatattheragāthā",
  "thag2.28:1.1": "“Ehi nandaka gacchāma,",
  "thag2.28:1.2": "upajjhāyassa santikaṃ;",
  "thag2.28:1.3": "Sīhanādaṃ nadissāma,",
  "thag2.28:1.4": "buddhaseṭṭhassa sammukhā.",
  "thag2.28:2.1": "Yāya no anukampāya,",
  "thag2.28:2.2": "amhe pabbājayī muni;",
  "thag2.28:2.3": "So no attho anuppatto,",
  "thag2.28:2.4": "sabbasaṃyojanakkhayo”ti.",
  "thag2.28:2.5": "…",
  "thag2.28:2.6": "Bharato thero …."
}