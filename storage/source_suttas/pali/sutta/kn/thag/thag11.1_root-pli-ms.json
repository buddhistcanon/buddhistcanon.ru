{
  "thag11.1:0.1": "Theragāthā",
  "thag11.1:0.2": "Ekādasakanipāta",
  "thag11.1:0.3": "Paṭhamavagga",
  "thag11.1:0.4": "11.1. Saṅkiccattheragāthā",
  "thag11.1:1.1": "“Kiṃ tavattho vane tāta,",
  "thag11.1:1.2": "ujjuhānova pāvuse;",
  "thag11.1:1.3": "Verambhā ramaṇīyā te,",
  "thag11.1:1.4": "paviveko hi jhāyinaṃ”.",
  "thag11.1:2.1": "“Yathā abbhāni verambho,",
  "thag11.1:2.2": "vāto nudati pāvuse;",
  "thag11.1:2.3": "Saññā me abhikiranti,",
  "thag11.1:2.4": "vivekapaṭisaññutā.",
  "thag11.1:3.1": "Apaṇḍaro aṇḍasambhavo,",
  "thag11.1:3.2": "Sīvathikāya niketacāriko;",
  "thag11.1:3.3": "Uppādayateva me satiṃ,",
  "thag11.1:3.4": "Sandehasmiṃ virāganissitaṃ.",
  "thag11.1:4.1": "Yañca aññe na rakkhanti,",
  "thag11.1:4.2": "yo ca aññe na rakkhati;",
  "thag11.1:4.3": "Sa ve bhikkhu sukhaṃ seti,",
  "thag11.1:4.4": "kāmesu anapekkhavā.",
  "thag11.1:5.1": "Acchodikā puthusilā,",
  "thag11.1:5.2": "gonaṅgulamigāyutā;",
  "thag11.1:5.3": "Ambusevālasañchannā,",
  "thag11.1:5.4": "te selā ramayanti maṃ.",
  "thag11.1:6.1": "Vasitaṃ me araññesu,",
  "thag11.1:6.2": "kandarāsu guhāsu ca;",
  "thag11.1:6.3": "Senāsanesu pantesu,",
  "thag11.1:6.4": "vāḷamiganisevite.",
  "thag11.1:7.1": "‘Ime haññantu vajjhantu,",
  "thag11.1:7.2": "dukkhaṃ pappontu pāṇino’;",
  "thag11.1:7.3": "Saṅkappaṃ nābhijānāmi,",
  "thag11.1:7.4": "anariyaṃ dosasaṃhitaṃ.",
  "thag11.1:8.1": "Pariciṇṇo mayā satthā,",
  "thag11.1:8.2": "kataṃ buddhassa sāsanaṃ;",
  "thag11.1:8.3": "Ohito garuko bhāro,",
  "thag11.1:8.4": "bhavanetti samūhatā.",
  "thag11.1:9.1": "Yassa catthāya pabbajito,",
  "thag11.1:9.2": "agārasmānagāriyaṃ;",
  "thag11.1:9.3": "So me attho anuppatto,",
  "thag11.1:9.4": "sabbasaṃyojanakkhayo.",
  "thag11.1:10.1": "Nābhinandāmi maraṇaṃ,",
  "thag11.1:10.2": "nābhinandāmi jīvitaṃ;",
  "thag11.1:10.3": "Kālañca paṭikaṅkhāmi,",
  "thag11.1:10.4": "nibbisaṃ bhatako yathā.",
  "thag11.1:11.1": "Nābhinandāmi maraṇaṃ,",
  "thag11.1:11.2": "nābhinandāmi jīvitaṃ;",
  "thag11.1:11.3": "Kālañca paṭikaṅkhāmi,",
  "thag11.1:11.4": "sampajāno patissato”ti.",
  "thag11.1:11.5": "…",
  "thag11.1:11.6": "Saṅkicco thero ….",
  "thag11.1:11.7": "Ekādasakanipāto niṭṭhito.",
  "thag11.1:12.0": "Tatruddānaṃ",
  "thag11.1:12.1": "Saṅkiccathero ekova,",
  "thag11.1:12.2": "katakicco anāsavo;",
  "thag11.1:12.3": "Ekādasanipātamhi,",
  "thag11.1:12.4": "gāthā ekādaseva cāti."
}