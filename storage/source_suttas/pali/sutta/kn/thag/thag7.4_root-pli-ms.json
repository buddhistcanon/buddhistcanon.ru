{
  "thag7.4:0.1": "Theragāthā",
  "thag7.4:0.2": "Sattakanipāta",
  "thag7.4:0.3": "Paṭhamavagga",
  "thag7.4:0.4": "7.4. Sopākattheragāthā",
  "thag7.4:1.1": "“Disvā pāsādachāyāyaṃ,",
  "thag7.4:1.2": "caṅkamantaṃ naruttamaṃ;",
  "thag7.4:1.3": "Tattha naṃ upasaṅkamma,",
  "thag7.4:1.4": "vandissaṃ purisuttamaṃ.",
  "thag7.4:2.1": "Ekaṃsaṃ cīvaraṃ katvā,",
  "thag7.4:2.2": "saṃharitvāna pāṇayo;",
  "thag7.4:2.3": "Anucaṅkamissaṃ virajaṃ,",
  "thag7.4:2.4": "sabbasattānamuttamaṃ.",
  "thag7.4:3.1": "Tato pañhe apucchi maṃ,",
  "thag7.4:3.2": "pañhānaṃ kovido vidū;",
  "thag7.4:3.3": "Acchambhī ca abhīto ca,",
  "thag7.4:3.4": "byākāsiṃ satthuno ahaṃ.",
  "thag7.4:4.1": "Vissajjitesu pañhesu,",
  "thag7.4:4.2": "anumodi tathāgato;",
  "thag7.4:4.3": "Bhikkhusaṃghaṃ viloketvā,",
  "thag7.4:4.4": "imamatthaṃ abhāsatha.",
  "thag7.4:5.1": "‘Lābhā aṅgānaṃ magadhānaṃ,",
  "thag7.4:5.2": "Yesāyaṃ paribhuñjati;",
  "thag7.4:5.3": "Cīvaraṃ piṇḍapātañca,",
  "thag7.4:5.4": "Paccayaṃ sayanāsanaṃ;",
  "thag7.4:5.5": "Paccuṭṭhānañca sāmīciṃ,",
  "thag7.4:5.6": "Tesaṃ lābhāti cābravi.",
  "thag7.4:6.1": "Ajjatagge maṃ sopāka,",
  "thag7.4:6.2": "dassanāyopasaṅkama;",
  "thag7.4:6.3": "Esā ceva te sopāka,",
  "thag7.4:6.4": "bhavatu upasampadā’.",
  "thag7.4:7.1": "Jātiyā sattavassohaṃ,",
  "thag7.4:7.2": "laddhāna upasampadaṃ;",
  "thag7.4:7.3": "Dhāremi antimaṃ dehaṃ,",
  "thag7.4:7.4": "aho dhammasudhammatā”ti.",
  "thag7.4:7.5": "…",
  "thag7.4:7.6": "Sopāko thero …."
}