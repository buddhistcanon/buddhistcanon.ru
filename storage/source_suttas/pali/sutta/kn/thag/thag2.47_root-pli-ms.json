{
  "thag2.47:0.1": "Theragāthā",
  "thag2.47:0.2": "Dukanipāta",
  "thag2.47:0.3": "Pañcamavagga",
  "thag2.47:0.4": "2.47. Anūpamattheragāthā",
  "thag2.47:1.1": "“Nandamānāgataṃ cittaṃ,",
  "thag2.47:1.2": "sūlamāropamānakaṃ;",
  "thag2.47:1.3": "Tena teneva vajasi,",
  "thag2.47:1.4": "yena sūlaṃ kaliṅgaraṃ.",
  "thag2.47:2.1": "Tāhaṃ cittakaliṃ brūmi,",
  "thag2.47:2.2": "taṃ brūmi cittadubbhakaṃ;",
  "thag2.47:2.3": "Satthā te dullabho laddho,",
  "thag2.47:2.4": "mānatthe maṃ niyojayī”ti.",
  "thag2.47:2.5": "…",
  "thag2.47:2.6": "Anūpamo thero …."
}