{
  "thag2.3:0.1": "Theragāthā",
  "thag2.3:0.2": "Dukanipāta",
  "thag2.3:0.3": "Paṭhamavagga",
  "thag2.3:0.4": "2.3. Valliyattheragāthā",
  "thag2.3:1.1": "“Makkaṭo pañcadvārāyaṃ,",
  "thag2.3:1.2": "kuṭikāyaṃ pasakkiya;",
  "thag2.3:1.3": "Dvārena anupariyeti,",
  "thag2.3:1.4": "ghaṭṭayanto muhuṃ muhuṃ.",
  "thag2.3:2.1": "Tiṭṭha makkaṭa mā dhāvi,",
  "thag2.3:2.2": "na hi te taṃ yathā pure;",
  "thag2.3:2.3": "Niggahītosi paññāya,",
  "thag2.3:2.4": "neva dūraṃ gamissatī”ti.",
  "thag2.3:2.5": "…",
  "thag2.3:2.6": "Valliyo thero …."
}