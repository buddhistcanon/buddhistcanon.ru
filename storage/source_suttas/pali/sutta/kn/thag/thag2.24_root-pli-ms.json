{
  "thag2.24:0.1": "Theragāthā",
  "thag2.24:0.2": "Dukanipāta",
  "thag2.24:0.3": "Tatiyavagga",
  "thag2.24:0.4": "2.24. Valliyattheragāthā",
  "thag2.24:1.1": "“Yaṃ kiccaṃ daḷhavīriyena,",
  "thag2.24:1.2": "yaṃ kiccaṃ boddhumicchatā;",
  "thag2.24:1.3": "Karissaṃ nāvarajjhissaṃ,",
  "thag2.24:1.4": "passa vīriyaṃ parakkamaṃ.",
  "thag2.24:2.1": "Tvañca me maggamakkhāhi,",
  "thag2.24:2.2": "añjasaṃ amatogadhaṃ;",
  "thag2.24:2.3": "Ahaṃ monena monissaṃ,",
  "thag2.24:2.4": "gaṅgāsotova sāgaran”ti.",
  "thag2.24:2.5": "…",
  "thag2.24:2.6": "Valliyo thero …."
}