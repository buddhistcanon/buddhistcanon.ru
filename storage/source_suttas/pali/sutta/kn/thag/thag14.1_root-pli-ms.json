{
  "thag14.1:0.1": "Theragāthā",
  "thag14.1:0.2": "Cuddasakanipāta",
  "thag14.1:0.3": "Paṭhamavagga",
  "thag14.1:0.4": "14.1. Khadiravaniyarevatattheragāthā",
  "thag14.1:1.1": "“Yadā ahaṃ pabbajito,",
  "thag14.1:1.2": "agārasmānagāriyaṃ;",
  "thag14.1:1.3": "Nābhijānāmi saṅkappaṃ,",
  "thag14.1:1.4": "anariyaṃ dosasaṃhitaṃ.",
  "thag14.1:2.1": "‘Ime haññantu vajjhantu,",
  "thag14.1:2.2": "dukkhaṃ pappontu pāṇino’;",
  "thag14.1:2.3": "Saṅkappaṃ nābhijānāmi,",
  "thag14.1:2.4": "imasmiṃ dīghamantare.",
  "thag14.1:3.1": "Mettañca abhijānāmi,",
  "thag14.1:3.2": "appamāṇaṃ subhāvitaṃ;",
  "thag14.1:3.3": "Anupubbaṃ paricitaṃ,",
  "thag14.1:3.4": "yathā buddhena desitaṃ.",
  "thag14.1:4.1": "Sabbamitto sabbasakho,",
  "thag14.1:4.2": "sabbabhūtānukampako;",
  "thag14.1:4.3": "Mettacittañca bhāvemi,",
  "thag14.1:4.4": "abyāpajjarato sadā.",
  "thag14.1:5.1": "Asaṃhīraṃ asaṃkuppaṃ,",
  "thag14.1:5.2": "cittaṃ āmodayāmahaṃ;",
  "thag14.1:5.3": "Brahmavihāraṃ bhāvemi,",
  "thag14.1:5.4": "akāpurisasevitaṃ.",
  "thag14.1:6.1": "Avitakkaṃ samāpanno,",
  "thag14.1:6.2": "sammāsambuddhasāvako;",
  "thag14.1:6.3": "Ariyena tuṇhībhāvena,",
  "thag14.1:6.4": "upeto hoti tāvade.",
  "thag14.1:7.1": "Yathāpi pabbato selo,",
  "thag14.1:7.2": "acalo suppatiṭṭhito;",
  "thag14.1:7.3": "Evaṃ mohakkhayā bhikkhu,",
  "thag14.1:7.4": "pabbatova na vedhati.",
  "thag14.1:8.1": "Anaṅgaṇassa posassa,",
  "thag14.1:8.2": "niccaṃ sucigavesino;",
  "thag14.1:8.3": "Vālaggamattaṃ pāpassa,",
  "thag14.1:8.4": "abbhamattaṃva khāyati.",
  "thag14.1:9.1": "Nagaraṃ yathā paccantaṃ,",
  "thag14.1:9.2": "guttaṃ santarabāhiraṃ;",
  "thag14.1:9.3": "Evaṃ gopetha attānaṃ,",
  "thag14.1:9.4": "khaṇo vo mā upaccagā.",
  "thag14.1:10.1": "Nābhinandāmi maraṇaṃ,",
  "thag14.1:10.2": "nābhinandāmi jīvitaṃ;",
  "thag14.1:10.3": "Kālañca paṭikaṅkhāmi,",
  "thag14.1:10.4": "nibbisaṃ bhatako yathā.",
  "thag14.1:11.1": "Nābhinandāmi maraṇaṃ,",
  "thag14.1:11.2": "…",
  "thag14.1:11.3": "pe…",
  "thag14.1:11.4": "sampajāno patissato.",
  "thag14.1:12.1": "Pariciṇṇo mayā satthā,",
  "thag14.1:12.2": "kataṃ buddhassa sāsanaṃ;",
  "thag14.1:12.3": "Ohito garuko bhāro,",
  "thag14.1:12.4": "bhavanetti samūhatā.",
  "thag14.1:13.1": "Yassa catthāya pabbajito,",
  "thag14.1:13.2": "agārasmānagāriyaṃ;",
  "thag14.1:13.3": "So me attho anuppatto,",
  "thag14.1:13.4": "sabbasaṃyojanakkhayo.",
  "thag14.1:14.1": "Sampādethappamādena,",
  "thag14.1:14.2": "esā me anusāsanī;",
  "thag14.1:14.3": "Handāhaṃ parinibbissaṃ,",
  "thag14.1:14.4": "vippamuttomhi sabbadhī”ti.",
  "thag14.1:14.5": "…",
  "thag14.1:14.6": "Khadiravaniyarevato thero …."
}