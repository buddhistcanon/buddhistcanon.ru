{
  "thag2.36:0.1": "Theragāthā",
  "thag2.36:0.2": "Dukanipāta",
  "thag2.36:0.3": "Catutthavagga",
  "thag2.36:0.4": "2.36 Nitakattheragāthā",
  "thag2.36:1.1": "“Kassa selūpamaṃ cittaṃ,",
  "thag2.36:1.2": "ṭhitaṃ nānupakampati;",
  "thag2.36:1.3": "Virattaṃ rajanīyesu,",
  "thag2.36:1.4": "kuppanīye na kuppati;",
  "thag2.36:1.5": "Yassevaṃ bhāvitaṃ cittaṃ,",
  "thag2.36:1.6": "kuto taṃ dukkhamessati.",
  "thag2.36:2.1": "Mama selūpamaṃ cittaṃ,",
  "thag2.36:2.2": "ṭhitaṃ nānupakampati;",
  "thag2.36:2.3": "Virattaṃ rajanīyesu,",
  "thag2.36:2.4": "kuppanīye na kuppati;",
  "thag2.36:2.5": "Mamevaṃ bhāvitaṃ cittaṃ,",
  "thag2.36:2.6": "kuto maṃ dukkhamessatī”ti.",
  "thag2.36:2.7": "…",
  "thag2.36:2.8": "Nitako thero …."
}