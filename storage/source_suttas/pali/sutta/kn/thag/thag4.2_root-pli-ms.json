{
  "thag4.2:0.1": "Theragāthā",
  "thag4.2:0.2": "Catukkanipāta",
  "thag4.2:0.3": "Paṭhamavagga",
  "thag4.2:0.4": "4.2. Bhaguttheragāthā",
  "thag4.2:1.1": "“Ahaṃ middhena pakato,",
  "thag4.2:1.2": "vihārā upanikkhamiṃ;",
  "thag4.2:1.3": "Caṅkamaṃ abhiruhanto,",
  "thag4.2:1.4": "tattheva papatiṃ chamā.",
  "thag4.2:2.1": "Gattāni parimajjitvā,",
  "thag4.2:2.2": "punapāruyha caṅkamaṃ;",
  "thag4.2:2.3": "Caṅkame caṅkamiṃ sohaṃ,",
  "thag4.2:2.4": "ajjhattaṃ susamāhito.",
  "thag4.2:3.1": "Tato me manasīkāro,",
  "thag4.2:3.2": "yoniso udapajjatha;",
  "thag4.2:3.3": "Ādīnavo pāturahu,",
  "thag4.2:3.4": "nibbidā samatiṭṭhatha.",
  "thag4.2:4.1": "Tato cittaṃ vimucci me,",
  "thag4.2:4.2": "passa dhammasudhammataṃ;",
  "thag4.2:4.3": "Tisso vijjā anuppattā,",
  "thag4.2:4.4": "kataṃ buddhassa sāsanan”ti.",
  "thag4.2:4.5": "…",
  "thag4.2:4.6": "Bhagutthero …."
}