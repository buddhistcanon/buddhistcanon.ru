{
  "thag3.3:0.1": "Theragāthā",
  "thag3.3:0.2": "Tikanipāta",
  "thag3.3:0.3": "Paṭhamavagga",
  "thag3.3:0.4": "3.3 Bākulattheragāthā",
  "thag3.3:1.1": "“Yo pubbe karaṇīyāni,",
  "thag3.3:1.2": "pacchā so kātumicchati;",
  "thag3.3:1.3": "Sukhā so dhaṃsate ṭhānā,",
  "thag3.3:1.4": "pacchā ca manutappati.",
  "thag3.3:2.1": "Yañhi kayirā tañhi vade,",
  "thag3.3:2.2": "yaṃ na kayirā na taṃ vade;",
  "thag3.3:2.3": "Akarontaṃ bhāsamānaṃ,",
  "thag3.3:2.4": "parijānanti paṇḍitā.",
  "thag3.3:3.1": "Susukhaṃ vata nibbānaṃ,",
  "thag3.3:3.2": "sammāsambuddhadesitaṃ;",
  "thag3.3:3.3": "Asokaṃ virajaṃ khemaṃ,",
  "thag3.3:3.4": "yattha dukkhaṃ nirujjhatī”ti.",
  "thag3.3:3.5": "…",
  "thag3.3:3.6": "Bākulo thero …."
}