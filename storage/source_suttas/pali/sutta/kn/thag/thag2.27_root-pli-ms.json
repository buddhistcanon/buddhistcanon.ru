{
  "thag2.27:0.1": "Theragāthā",
  "thag2.27:0.2": "Dukanipāta",
  "thag2.27:0.3": "Tatiyavagga",
  "thag2.27:0.4": "2.27. Nandakattheragāthā",
  "thag2.27:1.1": "“Yathāpi bhaddo ājañño,",
  "thag2.27:1.2": "khalitvā patitiṭṭhati;",
  "thag2.27:1.3": "Bhiyyo laddhāna saṃvegaṃ,",
  "thag2.27:1.4": "adīno vahate dhuraṃ.",
  "thag2.27:2.1": "Evaṃ dassanasampannaṃ,",
  "thag2.27:2.2": "sammāsambuddhasāvakaṃ;",
  "thag2.27:2.3": "Ājānīyaṃ maṃ dhāretha,",
  "thag2.27:2.4": "puttaṃ buddhassa orasan”ti.",
  "thag2.27:2.5": "…",
  "thag2.27:2.6": "Nandako thero …."
}