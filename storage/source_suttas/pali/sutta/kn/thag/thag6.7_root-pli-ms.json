{
  "thag6.7:0.1": "Theragāthā",
  "thag6.7:0.2": "Chakkanipāta",
  "thag6.7:0.3": "Paṭhamavagga",
  "thag6.7:0.4": "6.7. Kātiyānattheragāthā",
  "thag6.7:1.1": "“Uṭṭhehi nisīda kātiyāna,",
  "thag6.7:1.2": "Mā niddābahulo ahu jāgarassu;",
  "thag6.7:1.3": "Mā taṃ alasaṃ pamattabandhu,",
  "thag6.7:1.4": "Kūṭeneva jinātu maccurājā.",
  "thag6.7:2.1": "Seyyathāpi mahāsamuddavego,",
  "thag6.7:2.2": "Evaṃ jātijarātivattate taṃ;",
  "thag6.7:2.3": "So karohi sudīpamattano tvaṃ,",
  "thag6.7:2.4": "Na hi tāṇaṃ tava vijjateva aññaṃ.",
  "thag6.7:3.1": "Satthā hi vijesi maggametaṃ,",
  "thag6.7:3.2": "Saṅgā jātijarābhayā atītaṃ;",
  "thag6.7:3.3": "Pubbāpararattamappamatto,",
  "thag6.7:3.4": "Anuyuñjassu daḷhaṃ karohi yogaṃ.",
  "thag6.7:4.1": "Purimāni pamuñca bandhanāni,",
  "thag6.7:4.2": "Saṅghāṭikhuramuṇḍabhikkhabhojī;",
  "thag6.7:4.3": "Mā khiḍḍāratiñca mā niddaṃ,",
  "thag6.7:4.4": "Anuyuñjittha jhāya kātiyāna.",
  "thag6.7:5.1": "Jhāyāhi jināhi kātiyāna,",
  "thag6.7:5.2": "Yogakkhemapathesu kovidosi;",
  "thag6.7:5.3": "Pappuyya anuttaraṃ visuddhiṃ,",
  "thag6.7:5.4": "Parinibbāhisi vārināva joti.",
  "thag6.7:6.1": "Pajjotakaro parittaraṃso,",
  "thag6.7:6.2": "Vātena vinamyate latāva;",
  "thag6.7:6.3": "Evampi tuvaṃ anādiyāno,",
  "thag6.7:6.4": "Māraṃ indasagotta niddhunāhi;",
  "thag6.7:6.5": "So vedayitāsu vītarāgo,",
  "thag6.7:6.6": "Kālaṃ kaṅkha idheva sītibhūto”ti.",
  "thag6.7:6.7": "…",
  "thag6.7:6.8": "Kātiyāno thero …."
}