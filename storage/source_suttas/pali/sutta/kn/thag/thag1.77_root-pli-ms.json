{
  "thag1.77:0.1": "Theragāthā",
  "thag1.77:0.2": "Ekakanipāta",
  "thag1.77:0.3": "Aṭṭhamavagga",
  "thag1.77:0.4": "1.77. Hatthārohaputtattheragāthā",
  "thag1.77:1.1": "“Idaṃ pure cittamacāri cārikaṃ,",
  "thag1.77:1.2": "Yenicchakaṃ yatthakāmaṃ yathāsukhaṃ;",
  "thag1.77:1.3": "Tadajjahaṃ niggahessāmi yoniso,",
  "thag1.77:1.4": "Hatthippabhinnaṃ viya aṅkusaggaho”ti.",
  "thag1.77:1.5": "…",
  "thag1.77:1.6": "Hatthārohaputto thero …."
}