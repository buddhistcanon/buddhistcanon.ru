{
  "thag3.12:0.1": "Theragāthā",
  "thag3.12:0.2": "Tikanipāta",
  "thag3.12:0.3": "Paṭhamavagga",
  "thag3.12:0.4": "3.12. Uttarapālattheragāthā",
  "thag3.12:1.1": "“Paṇḍitaṃ vata maṃ santaṃ,",
  "thag3.12:1.2": "alamatthavicintakaṃ;",
  "thag3.12:1.3": "Pañca kāmaguṇā loke,",
  "thag3.12:1.4": "sammohā pātayiṃsu maṃ.",
  "thag3.12:2.1": "Pakkhando māravisaye,",
  "thag3.12:2.2": "daḷhasallasamappito;",
  "thag3.12:2.3": "Asakkhiṃ maccurājassa,",
  "thag3.12:2.4": "ahaṃ pāsā pamuccituṃ.",
  "thag3.12:3.1": "Sabbe kāmā pahīnā me,",
  "thag3.12:3.2": "bhavā sabbe padālitā;",
  "thag3.12:3.3": "Vikkhīṇo jātisaṃsāro,",
  "thag3.12:3.4": "natthi dāni punabbhavo”ti.",
  "thag3.12:3.5": "…",
  "thag3.12:3.6": "Uttarapālo thero …."
}