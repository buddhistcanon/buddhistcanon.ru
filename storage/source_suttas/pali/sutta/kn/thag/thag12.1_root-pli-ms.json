{
  "thag12.1:0.1": "Theragāthā",
  "thag12.1:0.2": "Dvādasakanipāta",
  "thag12.1:0.3": "Paṭhamavagga",
  "thag12.1:0.4": "12.1. Sīlavattheragāthā",
  "thag12.1:1.1": "“Sīlamevidha sikkhetha,",
  "thag12.1:1.2": "asmiṃ loke susikkhitaṃ;",
  "thag12.1:1.3": "Sīlañhi sabbasampattiṃ,",
  "thag12.1:1.4": "upanāmeti sevitaṃ.",
  "thag12.1:2.1": "Sīlaṃ rakkheyya medhāvī,",
  "thag12.1:2.2": "patthayāno tayo sukhe;",
  "thag12.1:2.3": "Pasaṃsaṃ vittilābhañca,",
  "thag12.1:2.4": "pecca sagge pamodanaṃ.",
  "thag12.1:3.1": "Sīlavā hi bahū mitte,",
  "thag12.1:3.2": "saññamenādhigacchati;",
  "thag12.1:3.3": "Dussīlo pana mittehi,",
  "thag12.1:3.4": "dhaṃsate pāpamācaraṃ.",
  "thag12.1:4.1": "Avaṇṇañca akittiñca,",
  "thag12.1:4.2": "dussīlo labhate naro;",
  "thag12.1:4.3": "Vaṇṇaṃ kittiṃ pasaṃsañca,",
  "thag12.1:4.4": "sadā labhati sīlavā.",
  "thag12.1:5.1": "Ādi sīlaṃ patiṭṭhā ca,",
  "thag12.1:5.2": "kalyāṇānañca mātukaṃ;",
  "thag12.1:5.3": "Pamukhaṃ sabbadhammānaṃ,",
  "thag12.1:5.4": "tasmā sīlaṃ visodhaye.",
  "thag12.1:6.1": "Velā ca saṃvaraṃ sīlaṃ,",
  "thag12.1:6.2": "cittassa abhihāsanaṃ;",
  "thag12.1:6.3": "Titthañca sabbabuddhānaṃ,",
  "thag12.1:6.4": "tasmā sīlaṃ visodhaye.",
  "thag12.1:7.1": "Sīlaṃ balaṃ appaṭimaṃ,",
  "thag12.1:7.2": "sīlaṃ āvudhamuttamaṃ;",
  "thag12.1:7.3": "Sīlamābharaṇaṃ seṭṭhaṃ,",
  "thag12.1:7.4": "sīlaṃ kavacamabbhutaṃ.",
  "thag12.1:8.1": "Sīlaṃ setu mahesakkho,",
  "thag12.1:8.2": "sīlaṃ gandho anuttaro;",
  "thag12.1:8.3": "Sīlaṃ vilepanaṃ seṭṭhaṃ,",
  "thag12.1:8.4": "yena vāti disodisaṃ.",
  "thag12.1:9.1": "Sīlaṃ sambalamevaggaṃ,",
  "thag12.1:9.2": "sīlaṃ pātheyyamuttamaṃ;",
  "thag12.1:9.3": "Sīlaṃ seṭṭho ativāho,",
  "thag12.1:9.4": "yena yāti disodisaṃ.",
  "thag12.1:10.1": "Idheva nindaṃ labhati,",
  "thag12.1:10.2": "peccāpāye ca dummano;",
  "thag12.1:10.3": "Sabbattha dummano bālo,",
  "thag12.1:10.4": "sīlesu asamāhito.",
  "thag12.1:11.1": "Idheva kittiṃ labhati,",
  "thag12.1:11.2": "pecca sagge ca summano;",
  "thag12.1:11.3": "Sabbattha sumano dhīro,",
  "thag12.1:11.4": "sīlesu susamāhito.",
  "thag12.1:12.1": "Sīlameva idha aggaṃ,",
  "thag12.1:12.2": "paññavā pana uttamo;",
  "thag12.1:12.3": "Manussesu ca devesu,",
  "thag12.1:12.4": "sīlapaññāṇato jayan”ti.",
  "thag12.1:12.5": "…",
  "thag12.1:12.6": "Sīlavo thero …."
}