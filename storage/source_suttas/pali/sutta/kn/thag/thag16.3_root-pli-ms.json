{
  "thag16.3:0.1": "Theragāthā",
  "thag16.3:0.2": "Vīsatinipāta",
  "thag16.3:0.3": "Paṭhamavagga",
  "thag16.3:0.4": "16.3. Telakānittheragāthā",
  "thag16.3:1.1": "“Cirarattaṃ vatātāpī,",
  "thag16.3:1.2": "dhammaṃ anuvicintayaṃ;",
  "thag16.3:1.3": "Samaṃ cittassa nālatthaṃ,",
  "thag16.3:1.4": "pucchaṃ samaṇabrāhmaṇe.",
  "thag16.3:2.1": "‘Ko so pāraṅgato loke,",
  "thag16.3:2.2": "ko patto amatogadhaṃ;",
  "thag16.3:2.3": "Kassa dhammaṃ paṭicchāmi,",
  "thag16.3:2.4": "paramatthavijānanaṃ’.",
  "thag16.3:3.1": "Antovaṅkagato āsi,",
  "thag16.3:3.2": "macchova ghasamāmisaṃ;",
  "thag16.3:3.3": "Baddho mahindapāsena,",
  "thag16.3:3.4": "vepacityasuro yathā.",
  "thag16.3:4.1": "Añchāmi naṃ na muñcāmi,",
  "thag16.3:4.2": "asmā sokapariddavā;",
  "thag16.3:4.3": "Ko me bandhaṃ muñcaṃ loke,",
  "thag16.3:4.4": "sambodhiṃ vedayissati.",
  "thag16.3:5.1": "Samaṇaṃ brāhmaṇaṃ vā kaṃ,",
  "thag16.3:5.2": "ādisantaṃ pabhaṅgunaṃ;",
  "thag16.3:5.3": "Kassa dhammaṃ paṭicchāmi,",
  "thag16.3:5.4": "jarāmaccupavāhanaṃ.",
  "thag16.3:6.1": "Vicikicchākaṅkhāganthitaṃ,",
  "thag16.3:6.2": "sārambhabalasaññutaṃ;",
  "thag16.3:6.3": "Kodhappattamanatthaddhaṃ,",
  "thag16.3:6.4": "abhijappappadāraṇaṃ.",
  "thag16.3:7.1": "Taṇhādhanusamuṭṭhānaṃ,",
  "thag16.3:7.2": "dve ca pannarasāyutaṃ;",
  "thag16.3:7.3": "Passa orasikaṃ bāḷhaṃ,",
  "thag16.3:7.4": "bhetvāna yadi tiṭṭhati.",
  "thag16.3:8.1": "Anudiṭṭhīnaṃ appahānaṃ,",
  "thag16.3:8.2": "saṅkappaparatejitaṃ;",
  "thag16.3:8.3": "Tena viddho pavedhāmi,",
  "thag16.3:8.4": "pattaṃva māluteritaṃ.",
  "thag16.3:9.1": "Ajjhattaṃ me samuṭṭhāya,",
  "thag16.3:9.2": "khippaṃ paccati māmakaṃ;",
  "thag16.3:9.3": "Chaphassāyatanī kāyo,",
  "thag16.3:9.4": "yattha sarati sabbadā.",
  "thag16.3:10.1": "Taṃ na passāmi tekicchaṃ,",
  "thag16.3:10.2": "yo metaṃ sallamuddhare;",
  "thag16.3:10.3": "Nānārajjena satthena,",
  "thag16.3:10.4": "nāññena vicikicchitaṃ.",
  "thag16.3:11.1": "Ko me asattho avaṇo,",
  "thag16.3:11.2": "Sallamabbhantarapassayaṃ;",
  "thag16.3:11.3": "Ahiṃsaṃ sabbagattāni,",
  "thag16.3:11.4": "Sallaṃ me uddharissati.",
  "thag16.3:12.1": "Dhammappati hi so seṭṭho,",
  "thag16.3:12.2": "visadosappavāhako;",
  "thag16.3:12.3": "Gambhīre patitassa me,",
  "thag16.3:12.4": "thalaṃ pāṇiñca dassaye.",
  "thag16.3:13.1": "Rahadehamasmi ogāḷho,",
  "thag16.3:13.2": "ahāriyarajamattike;",
  "thag16.3:13.3": "Māyāusūyasārambha,",
  "thag16.3:13.4": "thinamiddhamapatthaṭe.",
  "thag16.3:14.1": "Uddhaccameghathanitaṃ,",
  "thag16.3:14.2": "saṃyojanavalāhakaṃ;",
  "thag16.3:14.3": "Vāhā vahanti kuddiṭṭhiṃ,",
  "thag16.3:14.4": "saṅkappā rāganissitā.",
  "thag16.3:15.1": "Savanti sabbadhi sotā,",
  "thag16.3:15.2": "latā ubbhijja tiṭṭhati;",
  "thag16.3:15.3": "Te sote ko nivāreyya,",
  "thag16.3:15.4": "taṃ lataṃ ko hi checchati.",
  "thag16.3:16.1": "Velaṃ karotha bhaddante,",
  "thag16.3:16.2": "sotānaṃ sannivāraṇaṃ;",
  "thag16.3:16.3": "Mā te manomayo soto,",
  "thag16.3:16.4": "rukkhaṃva sahasā luve.",
  "thag16.3:17.1": "Evaṃ me bhayajātassa,",
  "thag16.3:17.2": "apārā pāramesato;",
  "thag16.3:17.3": "Tāṇo paññāvudho satthā,",
  "thag16.3:17.4": "isisaṃghanisevito.",
  "thag16.3:18.1": "Sopāṇaṃ sugataṃ suddhaṃ,",
  "thag16.3:18.2": "dhammasāramayaṃ daḷhaṃ;",
  "thag16.3:18.3": "Pādāsi vuyhamānassa,",
  "thag16.3:18.4": "‘mā bhāyī’ti ca mabravi.",
  "thag16.3:19.1": "Satipaṭṭhānapāsādaṃ,",
  "thag16.3:19.2": "āruyha paccavekkhisaṃ;",
  "thag16.3:19.3": "Yaṃ taṃ pubbe amaññissaṃ,",
  "thag16.3:19.4": "sakkāyābhirataṃ pajaṃ.",
  "thag16.3:20.1": "Yadā ca maggamaddakkhiṃ,",
  "thag16.3:20.2": "nāvāya abhirūhanaṃ;",
  "thag16.3:20.3": "Anadhiṭṭhāya attānaṃ,",
  "thag16.3:20.4": "titthamaddakkhimuttamaṃ.",
  "thag16.3:21.1": "Sallaṃ attasamuṭṭhānaṃ,",
  "thag16.3:21.2": "bhavanettippabhāvitaṃ;",
  "thag16.3:21.3": "Etesaṃ appavattāya,",
  "thag16.3:21.4": "desesi maggamuttamaṃ.",
  "thag16.3:22.1": "Dīgharattānusayitaṃ,",
  "thag16.3:22.2": "cirarattamadhiṭṭhitaṃ;",
  "thag16.3:22.3": "Buddho mepānudī ganthaṃ,",
  "thag16.3:22.4": "visadosappavāhano”ti.",
  "thag16.3:22.5": "…",
  "thag16.3:22.6": "Telakāni thero …."
}