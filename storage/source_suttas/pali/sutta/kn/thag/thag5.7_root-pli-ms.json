{
  "thag5.7:0.1": "Theragāthā",
  "thag5.7:0.2": "Pañcakanipāta",
  "thag5.7:0.3": "Paṭhamavagga",
  "thag5.7:0.4": "5.7. Gayākassapattheragāthā",
  "thag5.7:1.1": "“Pāto majjhanhikaṃ sāyaṃ,",
  "thag5.7:1.2": "tikkhattuṃ divasassahaṃ;",
  "thag5.7:1.3": "Otariṃ udakaṃ sohaṃ,",
  "thag5.7:1.4": "gayāya gayaphagguyā.",
  "thag5.7:2.1": "‘Yaṃ mayā pakataṃ pāpaṃ,",
  "thag5.7:2.2": "pubbe aññāsu jātisu;",
  "thag5.7:2.3": "Taṃ dānīdha pavāhemi’,",
  "thag5.7:2.4": "evaṃdiṭṭhi pure ahuṃ.",
  "thag5.7:3.1": "Sutvā subhāsitaṃ vācaṃ,",
  "thag5.7:3.2": "dhammatthasahitaṃ padaṃ;",
  "thag5.7:3.3": "Tathaṃ yāthāvakaṃ atthaṃ,",
  "thag5.7:3.4": "yoniso paccavekkhisaṃ.",
  "thag5.7:4.1": "Ninhātasabbapāpomhi,",
  "thag5.7:4.2": "nimmalo payato suci;",
  "thag5.7:4.3": "Suddho suddhassa dāyādo,",
  "thag5.7:4.4": "putto buddhassa oraso.",
  "thag5.7:5.1": "Ogayhaṭṭhaṅgikaṃ sotaṃ,",
  "thag5.7:5.2": "sabbapāpaṃ pavāhayiṃ;",
  "thag5.7:5.3": "Tisso vijjā ajjhagamiṃ,",
  "thag5.7:5.4": "kataṃ buddhassa sāsanan”ti.",
  "thag5.7:5.5": "…",
  "thag5.7:5.6": "Gayākassapo thero …."
}