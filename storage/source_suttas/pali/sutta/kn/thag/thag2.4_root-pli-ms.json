{
  "thag2.4:0.1": "Theragāthā",
  "thag2.4:0.2": "Dukanipāta",
  "thag2.4:0.3": "Paṭhamavagga",
  "thag2.4:0.4": "2.4. Gaṅgātīriyattheragāthā",
  "thag2.4:1.1": "“Tiṇṇaṃ me tālapattānaṃ,",
  "thag2.4:1.2": "gaṅgātīre kuṭī katā;",
  "thag2.4:1.3": "Chavasittova me patto,",
  "thag2.4:1.4": "paṃsukūlañca cīvaraṃ.",
  "thag2.4:2.1": "Dvinnaṃ antaravassānaṃ,",
  "thag2.4:2.2": "ekā vācā me bhāsitā;",
  "thag2.4:2.3": "Tatiye antaravassamhi,",
  "thag2.4:2.4": "tamokhandho padālito”ti.",
  "thag2.4:2.5": "…",
  "thag2.4:2.6": "Gaṅgātīriyo thero …."
}