{
  "thag2.14:0.1": "Theragāthā",
  "thag2.14:0.2": "Dukanipāta",
  "thag2.14:0.3": "Dutiyavagga",
  "thag2.14:0.4": "2.14 Somamittattheragāthā",
  "thag2.14:1.1": "“Parittaṃ dārumāruyha,",
  "thag2.14:1.2": "yathā sīde mahaṇṇave;",
  "thag2.14:1.3": "Evaṃ kusītamāgamma,",
  "thag2.14:1.4": "sādhujīvīpi sīdati;",
  "thag2.14:1.5": "Tasmā taṃ parivajjeyya,",
  "thag2.14:1.6": "kusītaṃ hīnavīriyaṃ.",
  "thag2.14:2.1": "Pavivittehi ariyehi,",
  "thag2.14:2.2": "pahitattehi jhāyibhi;",
  "thag2.14:2.3": "Niccaṃ āraddhavīriyehi,",
  "thag2.14:2.4": "paṇḍitehi sahāvase”ti.",
  "thag2.14:2.5": "…",
  "thag2.14:2.6": "Somamitto thero …."
}