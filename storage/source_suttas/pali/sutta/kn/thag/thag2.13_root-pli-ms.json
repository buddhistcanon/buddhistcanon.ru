{
  "thag2.13:0.1": "Theragāthā",
  "thag2.13:0.2": "Dukanipāta",
  "thag2.13:0.3": "Dutiyavagga",
  "thag2.13:0.4": "2.13. Heraññakānittheragāthā",
  "thag2.13:1.1": "“Accayanti ahorattā,",
  "thag2.13:1.2": "jīvitaṃ uparujjhati;",
  "thag2.13:1.3": "Āyu khīyati maccānaṃ,",
  "thag2.13:1.4": "kunnadīnaṃva odakaṃ.",
  "thag2.13:2.1": "Atha pāpāni kammāni,",
  "thag2.13:2.2": "karaṃ bālo na bujjhati;",
  "thag2.13:2.3": "Pacchāssa kaṭukaṃ hoti,",
  "thag2.13:2.4": "vipāko hissa pāpako”ti.",
  "thag2.13:2.5": "…",
  "thag2.13:2.6": "Heraññakānitthero …."
}