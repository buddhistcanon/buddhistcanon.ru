{
  "thag2.42:0.1": "Theragāthā",
  "thag2.42:0.2": "Dukanipāta",
  "thag2.42:0.3": "Pañcamavagga",
  "thag2.42:0.4": "2.42. Dhammapālattheragāthā",
  "thag2.42:1.1": "“Yo have daharo bhikkhu,",
  "thag2.42:1.2": "yuñjati buddhasāsane;",
  "thag2.42:1.3": "Jāgaro sa hi suttesu,",
  "thag2.42:1.4": "amoghaṃ tassa jīvitaṃ.",
  "thag2.42:2.1": "Tasmā saddhañca sīlañca,",
  "thag2.42:2.2": "pasādaṃ dhammadassanaṃ;",
  "thag2.42:2.3": "Anuyuñjetha medhāvī,",
  "thag2.42:2.4": "saraṃ buddhāna sāsanan”ti.",
  "thag2.42:2.5": "…",
  "thag2.42:2.6": "Dhammapālo thero …."
}