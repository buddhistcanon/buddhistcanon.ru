{
  "thag3.15:0.1": "Theragāthā",
  "thag3.15:0.2": "Tikanipāta",
  "thag3.15:0.3": "Paṭhamavagga",
  "thag3.15:0.4": "3.15. Hāritattheragāthā",
  "thag3.15:1.1": "“Yo pubbe karaṇīyāni,",
  "thag3.15:1.2": "pacchā so kātumicchati;",
  "thag3.15:1.3": "Sukhā so dhaṃsate ṭhānā,",
  "thag3.15:1.4": "pacchā ca manutappati.",
  "thag3.15:2.1": "Yañhi kayirā tañhi vade,",
  "thag3.15:2.2": "yaṃ na kayirā na taṃ vade;",
  "thag3.15:2.3": "Akarontaṃ bhāsamānaṃ,",
  "thag3.15:2.4": "parijānanti paṇḍitā.",
  "thag3.15:3.1": "Susukhaṃ vata nibbānaṃ,",
  "thag3.15:3.2": "sammāsambuddhadesitaṃ;",
  "thag3.15:3.3": "Asokaṃ virajaṃ khemaṃ,",
  "thag3.15:3.4": "yattha dukkhaṃ nirujjhatī”ti.",
  "thag3.15:3.5": "…",
  "thag3.15:3.6": "Hārito thero …."
}