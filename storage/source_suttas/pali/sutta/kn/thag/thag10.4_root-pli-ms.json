{
  "thag10.4:0.1": "Theragāthā",
  "thag10.4:0.2": "Dasakanipāta",
  "thag10.4:0.3": "Paṭhamavagga",
  "thag10.4:0.4": "10.4. Cūḷapanthakattheragāthā",
  "thag10.4:1.1": "“Dandhā mayhaṃ gatī āsi,",
  "thag10.4:1.2": "paribhūto pure ahaṃ;",
  "thag10.4:1.3": "Bhātā ca maṃ paṇāmesi,",
  "thag10.4:1.4": "‘gaccha dāni tuvaṃ gharaṃ’.",
  "thag10.4:2.1": "Sohaṃ paṇāmito santo,",
  "thag10.4:2.2": "saṃghārāmassa koṭṭhake;",
  "thag10.4:2.3": "Dummano tattha aṭṭhāsiṃ,",
  "thag10.4:2.4": "sāsanasmiṃ apekkhavā.",
  "thag10.4:3.1": "Bhagavā tattha āgacchi,",
  "thag10.4:3.2": "sīsaṃ mayhaṃ parāmasi;",
  "thag10.4:3.3": "Bāhāya maṃ gahetvāna,",
  "thag10.4:3.4": "saṃghārāmaṃ pavesayi.",
  "thag10.4:4.1": "Anukampāya me satthā,",
  "thag10.4:4.2": "pādāsi pādapuñchaniṃ;",
  "thag10.4:4.3": "‘Etaṃ suddhaṃ adhiṭṭhehi,",
  "thag10.4:4.4": "ekamantaṃ svadhiṭṭhitaṃ’.",
  "thag10.4:5.1": "Tassāhaṃ vacanaṃ sutvā,",
  "thag10.4:5.2": "vihāsiṃ sāsane rato;",
  "thag10.4:5.3": "Samādhiṃ paṭipādesiṃ,",
  "thag10.4:5.4": "uttamatthassa pattiyā.",
  "thag10.4:6.1": "Pubbenivāsaṃ jānāmi,",
  "thag10.4:6.2": "dibbacakkhu visodhitaṃ;",
  "thag10.4:6.3": "Tisso vijjā anuppattā,",
  "thag10.4:6.4": "kataṃ buddhassa sāsanaṃ.",
  "thag10.4:7.1": "Sahassakkhattumattānaṃ,",
  "thag10.4:7.2": "nimminitvāna panthako;",
  "thag10.4:7.3": "Nisīdambavane ramme,",
  "thag10.4:7.4": "yāva kālappavedanā.",
  "thag10.4:8.1": "Tato me satthā pāhesi,",
  "thag10.4:8.2": "dūtaṃ kālappavedakaṃ;",
  "thag10.4:8.3": "Paveditamhi kālamhi,",
  "thag10.4:8.4": "vehāsādupasaṅkamiṃ.",
  "thag10.4:9.1": "Vanditvā satthuno pāde,",
  "thag10.4:9.2": "ekamantaṃ nisīdahaṃ;",
  "thag10.4:9.3": "Nisinnaṃ maṃ viditvāna,",
  "thag10.4:9.4": "atha satthā paṭiggahi.",
  "thag10.4:10.1": "Āyāgo sabbalokassa,",
  "thag10.4:10.2": "āhutīnaṃ paṭiggaho;",
  "thag10.4:10.3": "Puññakkhettaṃ manussānaṃ,",
  "thag10.4:10.4": "paṭiggaṇhittha dakkhiṇan”ti.",
  "thag10.4:10.5": "…",
  "thag10.4:10.6": "Cūḷapanthako thero …."
}