{
  "thag5.9:0.1": "Theragāthā",
  "thag5.9:0.2": "Pañcakanipāta",
  "thag5.9:0.3": "Paṭhamavagga",
  "thag5.9:0.4": "5.9. Vijitasenattheragāthā",
  "thag5.9:1.1": "“Olaggessāmi te citta,",
  "thag5.9:1.2": "āṇidvāreva hatthinaṃ;",
  "thag5.9:1.3": "Na taṃ pāpe niyojessaṃ,",
  "thag5.9:1.4": "kāmajāla sarīraja.",
  "thag5.9:2.1": "Tvaṃ olaggo na gacchasi,",
  "thag5.9:2.2": "Dvāravivaraṃ gajova alabhanto;",
  "thag5.9:2.3": "Na ca cittakali punappunaṃ,",
  "thag5.9:2.4": "Pasakka pāparato carissasi.",
  "thag5.9:3.1": "Yathā kuñjaraṃ adantaṃ,",
  "thag5.9:3.2": "Navaggahamaṅkusaggaho;",
  "thag5.9:3.3": "Balavā āvatteti akāmaṃ,",
  "thag5.9:3.4": "Evaṃ āvattayissaṃ taṃ.",
  "thag5.9:4.1": "Yathā varahayadamakusalo,",
  "thag5.9:4.2": "Sārathi pavaro dameti ājaññaṃ;",
  "thag5.9:4.3": "Evaṃ damayissaṃ taṃ,",
  "thag5.9:4.4": "Patiṭṭhito pañcasu balesu.",
  "thag5.9:5.1": "Satiyā taṃ nibandhissaṃ,",
  "thag5.9:5.2": "Payutto te damessāmi;",
  "thag5.9:5.3": "Vīriyadhuraniggahito,",
  "thag5.9:5.4": "Na yito dūraṃ gamissase cittā”ti.",
  "thag5.9:5.5": "…",
  "thag5.9:5.6": "Vijitaseno thero …."
}