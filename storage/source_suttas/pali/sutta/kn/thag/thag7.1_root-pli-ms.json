{
  "thag7.1:0.1": "Theragāthā",
  "thag7.1:0.2": "Sattakanipāta",
  "thag7.1:0.3": "Paṭhamavagga",
  "thag7.1:0.4": "7.1. Sundarasamuddattheragāthā",
  "thag7.1:1.1": "“Alaṅkatā suvasanā,",
  "thag7.1:1.2": "māladhārī vibhūsitā;",
  "thag7.1:1.3": "Alattakakatāpādā,",
  "thag7.1:1.4": "pādukāruyha vesikā.",
  "thag7.1:2.1": "Pādukā oruhitvāna,",
  "thag7.1:2.2": "purato pañjalīkatā;",
  "thag7.1:2.3": "Sā maṃ saṇhena mudunā,",
  "thag7.1:2.4": "mhitapubbaṃ abhāsatha.",
  "thag7.1:3.1": "Yuvāsi tvaṃ pabbajito,",
  "thag7.1:3.2": "tiṭṭhāhi mama sāsane;",
  "thag7.1:3.3": "Bhuñja mānusake kāme,",
  "thag7.1:3.4": "ahaṃ vittaṃ dadāmi te;",
  "thag7.1:3.5": "Saccaṃ te paṭijānāmi,",
  "thag7.1:3.6": "aggiṃ vā te harāmahaṃ.",
  "thag7.1:4.1": "Yadā jiṇṇā bhavissāma,",
  "thag7.1:4.2": "ubho daṇḍaparāyanā;",
  "thag7.1:4.3": "Ubhopi pabbajissāma,",
  "thag7.1:4.4": "ubhayattha kaṭaggaho.",
  "thag7.1:5.1": "Tañca disvāna yācantiṃ,",
  "thag7.1:5.2": "vesikaṃ pañjalīkataṃ;",
  "thag7.1:5.3": "Alaṅkataṃ suvasanaṃ,",
  "thag7.1:5.4": "maccupāsaṃva oḍḍitaṃ.",
  "thag7.1:6.1": "Tato me manasīkāro,",
  "thag7.1:6.2": "…",
  "thag7.1:6.3": "pe…",
  "thag7.1:6.4": "nibbidā samatiṭṭhatha.",
  "thag7.1:7.1": "Tato cittaṃ vimucci me,",
  "thag7.1:7.2": "…",
  "thag7.1:7.3": "pe…",
  "thag7.1:7.4": "kataṃ buddhassa sāsanan”ti.",
  "thag7.1:7.5": "…",
  "thag7.1:7.6": "Sundarasamuddo thero …."
}