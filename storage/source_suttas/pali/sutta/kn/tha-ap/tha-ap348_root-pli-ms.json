{
  "tha-ap348:0.1": "Therāpadāna",
  "tha-ap348:0.2": "Ekapadumiyavagga",
  "tha-ap348:0.3": "6. Campakapupphiyattheraapadāna",
  "tha-ap348:1.1": "“Himavantassāvidūre,",
  "tha-ap348:1.2": "jāpalo nāma pabbato;",
  "tha-ap348:1.3": "Buddho sudassano nāma,",
  "tha-ap348:1.4": "vihāsi pabbatantare.",
  "tha-ap348:2.1": "Pupphaṃ hemavantaṃ gayha,",
  "tha-ap348:2.2": "Gacchaṃ vehāyasenahaṃ;",
  "tha-ap348:2.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap348:2.4": "Oghatiṇṇamanāsavaṃ.",
  "tha-ap348:3.1": "Satta campakapupphāni,",
  "tha-ap348:3.2": "sīse katvānahaṃ tadā;",
  "tha-ap348:3.3": "Buddhassa abhiropesiṃ,",
  "tha-ap348:3.4": "sayambhussa mahesino.",
  "tha-ap348:4.1": "Ekattiṃse ito kappe,",
  "tha-ap348:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap348:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap348:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap348:5.1": "Paṭisambhidā catasso,",
  "tha-ap348:5.2": "…pe…",
  "tha-ap348:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap348:6.1": "Itthaṃ sudaṃ āyasmā campakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap348:7.1": "Campakapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}