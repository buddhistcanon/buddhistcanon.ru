{
  "tha-ap402:0.1": "Therāpadāna",
  "tha-ap402:0.2": "Pilindavacchavagga",
  "tha-ap402:0.3": "10. Ajitattheraapadāna",
  "tha-ap402:1.1": "“Padumuttaro nāma jino,",
  "tha-ap402:1.2": "sabbadhammāna pāragū;",
  "tha-ap402:1.3": "Ajjhogāhetvā himavantaṃ,",
  "tha-ap402:1.4": "nisīdi lokanāyako.",
  "tha-ap402:2.1": "Nāhaṃ addakkhiṃ sambuddhaṃ,",
  "tha-ap402:2.2": "Napi saddaṃ suṇomahaṃ;",
  "tha-ap402:2.3": "Mama bhakkhaṃ gavesanto,",
  "tha-ap402:2.4": "Āhiṇḍāmi vane ahaṃ.",
  "tha-ap402:3.1": "Tatthaddassāsiṃ sambuddhaṃ,",
  "tha-ap402:3.2": "dvattiṃsavaralakkhaṇaṃ;",
  "tha-ap402:3.3": "Disvāna vittimāpajjiṃ,",
  "tha-ap402:3.4": "satto ko nāmayaṃ bhave.",
  "tha-ap402:4.1": "Lakkhaṇāni viloketvā,",
  "tha-ap402:4.2": "mama vijjaṃ anussariṃ;",
  "tha-ap402:4.3": "Sutañhi metaṃ vuḍḍhānaṃ,",
  "tha-ap402:4.4": "paṇḍitānaṃ subhāsitaṃ.",
  "tha-ap402:5.1": "Tesaṃ yathā taṃ vacanaṃ,",
  "tha-ap402:5.2": "ayaṃ buddho bhavissati;",
  "tha-ap402:5.3": "Yannūnāhaṃ sakkareyyaṃ,",
  "tha-ap402:5.4": "gatiṃ me sodhayissati.",
  "tha-ap402:6.1": "Khippaṃ assamamāgantvā,",
  "tha-ap402:6.2": "madhutelaṃ gahiṃ ahaṃ;",
  "tha-ap402:6.3": "Kolambakaṃ gahetvāna,",
  "tha-ap402:6.4": "upagacchiṃ vināyakaṃ.",
  "tha-ap402:7.1": "Tidaṇḍake gahetvāna,",
  "tha-ap402:7.2": "abbhokāse ṭhapesahaṃ;",
  "tha-ap402:7.3": "Padīpaṃ pajjalitvāna,",
  "tha-ap402:7.4": "aṭṭhakkhattuṃ avandahaṃ.",
  "tha-ap402:8.1": "Sattarattindivaṃ buddho,",
  "tha-ap402:8.2": "nisīdi purisuttamo;",
  "tha-ap402:8.3": "Tato ratyā vivasāne,",
  "tha-ap402:8.4": "vuṭṭhāsi lokanāyako.",
  "tha-ap402:9.1": "Pasannacitto sumano,",
  "tha-ap402:9.2": "sabbarattindivaṃ ahaṃ;",
  "tha-ap402:9.3": "Dīpaṃ buddhassa pādāsiṃ,",
  "tha-ap402:9.4": "pasanno sehi pāṇibhi.",
  "tha-ap402:10.1": "Sabbe vanā gandhamayā,",
  "tha-ap402:10.2": "Pabbate gandhamādane;",
  "tha-ap402:10.3": "Buddhassa ānubhāvena,",
  "tha-ap402:10.4": "Āgacchuṃ buddhasantikaṃ.",
  "tha-ap402:11.1": "Ye keci pupphagandhāse,",
  "tha-ap402:11.2": "pupphitā dharaṇīruhā;",
  "tha-ap402:11.3": "Buddhassa ānubhāvena,",
  "tha-ap402:11.4": "sabbe sannipatuṃ tadā.",
  "tha-ap402:12.1": "Yāvatā himavantamhi,",
  "tha-ap402:12.2": "nāgā ca garuḷā ubho;",
  "tha-ap402:12.3": "Dhammañca sotukāmā te,",
  "tha-ap402:12.4": "āgacchuṃ buddhasantikaṃ.",
  "tha-ap402:13.1": "Devalo nāma samaṇo,",
  "tha-ap402:13.2": "buddhassa aggasāvako;",
  "tha-ap402:13.3": "Vasīsatasahassehi,",
  "tha-ap402:13.4": "buddhasantikupāgami.",
  "tha-ap402:14.1": "Padumuttaro lokavidū,",
  "tha-ap402:14.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap402:14.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap402:14.4": "imā gāthā abhāsatha.",
  "tha-ap402:15.1": "‘Yo me dīpaṃ padīpesi,",
  "tha-ap402:15.2": "pasanno sehi pāṇibhi;",
  "tha-ap402:15.3": "Tamahaṃ kittayissāmi,",
  "tha-ap402:15.4": "suṇātha mama bhāsato.",
  "tha-ap402:16.1": "Saṭṭhi kappasahassāni,",
  "tha-ap402:16.2": "devaloke ramissati;",
  "tha-ap402:16.3": "Sahassakkhattuṃ rājā ca,",
  "tha-ap402:16.4": "cakkavattī bhavissati.",
  "tha-ap402:17.1": "Soḷasamaṃ bhāṇavāraṃ.",
  "tha-ap402:18.1": "Chattiṃsakkhattuṃ devindo,",
  "tha-ap402:18.2": "devarajjaṃ karissati;",
  "tha-ap402:18.3": "Pathaviyaṃ sattasataṃ,",
  "tha-ap402:18.4": "vipulaṃ rajjaṃ karissati.",
  "tha-ap402:19.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap402:19.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap402:19.3": "Iminā dīpadānena,",
  "tha-ap402:19.4": "dibbacakkhu bhavissati.",
  "tha-ap402:20.1": "Samantato aṭṭhakosaṃ,",
  "tha-ap402:20.2": "passissati ayaṃ sadā;",
  "tha-ap402:20.3": "Devalokā cavantassa,",
  "tha-ap402:20.4": "nibbattantassa jantuno.",
  "tha-ap402:21.1": "Divā vā yadi vā rattiṃ,",
  "tha-ap402:21.2": "padīpaṃ dhārayissati;",
  "tha-ap402:21.3": "Jāyamānassa sattassa,",
  "tha-ap402:21.4": "puññakammasamaṅgino.",
  "tha-ap402:22.1": "Yāvatā nagaraṃ āsi,",
  "tha-ap402:22.2": "tāvatā jotayissati;",
  "tha-ap402:22.3": "Upapajjati yaṃ yoniṃ,",
  "tha-ap402:22.4": "devattaṃ atha mānusaṃ.",
  "tha-ap402:23.1": "Asseva dīpadānassa,",
  "tha-ap402:23.2": "aṭṭhadīpaphalena hi;",
  "tha-ap402:23.3": "Na jayissantimaṃ jantū,",
  "tha-ap402:23.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap402:24.1": "Kappasatasahassamhi,",
  "tha-ap402:24.2": "okkākakulasambhavo;",
  "tha-ap402:24.3": "Gotamo nāma gottena,",
  "tha-ap402:24.4": "satthā loke bhavissati.",
  "tha-ap402:25.1": "Tassa dhammesu dāyādo,",
  "tha-ap402:25.2": "oraso dhammanimmito;",
  "tha-ap402:25.3": "Sabbāsave pariññāya,",
  "tha-ap402:25.4": "nibbāyissatināsavo.",
  "tha-ap402:26.1": "Tosayitvāna sambuddhaṃ,",
  "tha-ap402:26.2": "gotamaṃ sakyapuṅgavaṃ;",
  "tha-ap402:26.3": "Ajito nāma nāmena,",
  "tha-ap402:26.4": "hessati satthu sāvako’.",
  "tha-ap402:27.1": "Saṭṭhi kappasahassāni,",
  "tha-ap402:27.2": "devaloke ramiṃ ahaṃ;",
  "tha-ap402:27.3": "Tatrāpi me dīpasataṃ,",
  "tha-ap402:27.4": "jotate niccakālikaṃ.",
  "tha-ap402:28.1": "Devaloke manusse vā,",
  "tha-ap402:28.2": "niddhāvanti pabhā mama;",
  "tha-ap402:28.3": "Buddhaseṭṭhaṃ saritvāna,",
  "tha-ap402:28.4": "bhiyyo hāsaṃ janesahaṃ.",
  "tha-ap402:29.1": "Tusitāhaṃ cavitvāna,",
  "tha-ap402:29.2": "okkamiṃ mātukucchiyaṃ;",
  "tha-ap402:29.3": "Jāyamānassa santassa,",
  "tha-ap402:29.4": "āloko vipulo ahu.",
  "tha-ap402:30.1": "Agārā abhinikkhamma,",
  "tha-ap402:30.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap402:30.3": "Bāvariṃ upasaṅkamma,",
  "tha-ap402:30.4": "sissattaṃ ajjhupāgamiṃ.",
  "tha-ap402:31.1": "Himavante vasantohaṃ,",
  "tha-ap402:31.2": "assosiṃ lokanāyakaṃ;",
  "tha-ap402:31.3": "Uttamatthaṃ gavesanto,",
  "tha-ap402:31.4": "upagacchiṃ vināyakaṃ.",
  "tha-ap402:32.1": "Danto buddho dametāvī,",
  "tha-ap402:32.2": "oghatiṇṇo nirūpadhi;",
  "tha-ap402:32.3": "Nibbānaṃ kathayī buddho,",
  "tha-ap402:32.4": "sabbadukkhappamocanaṃ.",
  "tha-ap402:33.1": "Taṃ me āgamanaṃ siddhaṃ,",
  "tha-ap402:33.2": "tositohaṃ mahāmuniṃ;",
  "tha-ap402:33.3": "Tisso vijjā anuppattā,",
  "tha-ap402:33.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap402:34.1": "Satasahassito kappe,",
  "tha-ap402:34.2": "yaṃ dīpamadadiṃ tadā;",
  "tha-ap402:34.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap402:34.4": "dīpadānassidaṃ phalaṃ.",
  "tha-ap402:35.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap402:35.2": "…pe…",
  "tha-ap402:35.3": "viharāmi anāsavo.",
  "tha-ap402:36.1": "Svāgataṃ vata me āsi,",
  "tha-ap402:36.2": "…pe…",
  "tha-ap402:36.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap402:37.1": "Paṭisambhidā catasso,",
  "tha-ap402:37.2": "…pe…",
  "tha-ap402:37.3": "kataṃ buddhassa sāsanaṃ”. (3886)",
  "tha-ap402:38.1": "Itthaṃ sudaṃ āyasmā ajito thero imā gāthāyo abhāsitthāti.",
  "tha-ap402:39.1": "Ajitattherassāpadānaṃ dasamaṃ.",
  "tha-ap402:39.2": "Pilindavacchavaggo cattālīsamo.",
  "tha-ap402:40.1": "Tassuddānaṃ",
  "tha-ap402:41.1": "Pilindavaccho selo ca,",
  "tha-ap402:41.2": "sabbakittī madhundado;",
  "tha-ap402:41.3": "Kūṭāgārī bākulo ca,",
  "tha-ap402:41.4": "giri saḷalasavhayo.",
  "tha-ap402:42.1": "Sabbado ajito ceva,",
  "tha-ap402:42.2": "gāthāyo gaṇitā iha;",
  "tha-ap402:42.3": "Satāni pañca gāthānaṃ,",
  "tha-ap402:42.4": "vīsati ca taduttarīti.",
  "tha-ap402:43.1": "Atha vagguddānaṃ",
  "tha-ap402:44.1": "Padumārakkhado ceva,",
  "tha-ap402:44.2": "umā gandhodakena ca;",
  "tha-ap402:44.3": "Ekapadma saddasaññī,",
  "tha-ap402:44.4": "mandāraṃ bodhivandako.",
  "tha-ap402:45.1": "Avaṭañca pilindi ca,",
  "tha-ap402:45.2": "gāthāyo gaṇitā iha;",
  "tha-ap402:45.3": "Catusattati gāthāyo,",
  "tha-ap402:45.4": "ekādasa satāni ca.",
  "tha-ap402:46.1": "Padumavaggadasakaṃ.",
  "tha-ap402:47.1": "Catutthasatakaṃ samattaṃ."
}