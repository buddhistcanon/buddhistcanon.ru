{
  "tha-ap417:0.1": "Therāpadāna",
  "tha-ap417:0.2": "Bhaddālivagga",
  "tha-ap417:0.3": "5 Nāgapallavattheraapadāna",
  "tha-ap417:1.1": "“Nagare bandhumatiyā,",
  "tha-ap417:1.2": "rājuyyāne vasāmahaṃ;",
  "tha-ap417:1.3": "Mama assamasāmantā,",
  "tha-ap417:1.4": "nisīdi lokanāyako.",
  "tha-ap417:2.1": "Nāgapallavamādāya,",
  "tha-ap417:2.2": "buddhassa abhiropayiṃ;",
  "tha-ap417:2.3": "Pasannacitto sumano,",
  "tha-ap417:2.4": "sugataṃ abhivādayiṃ.",
  "tha-ap417:3.1": "Ekanavutito kappe,",
  "tha-ap417:3.2": "yaṃ pallavamapūjayiṃ;",
  "tha-ap417:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap417:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap417:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap417:4.2": "…pe…",
  "tha-ap417:4.3": "viharāmi anāsavo.",
  "tha-ap417:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap417:5.2": "…pe…",
  "tha-ap417:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap417:6.1": "Paṭisambhidā catasso,",
  "tha-ap417:6.2": "…pe…",
  "tha-ap417:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap417:7.1": "Itthaṃ sudaṃ āyasmā nāgapallavo thero imā gāthāyo abhāsitthāti.",
  "tha-ap417:8.1": "Nāgapallavattherassāpadānaṃ pañcamaṃ."
}