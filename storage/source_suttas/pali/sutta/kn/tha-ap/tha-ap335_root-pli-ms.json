{
  "tha-ap335:0.1": "Therāpadāna",
  "tha-ap335:0.2": "Gandhodakavagga",
  "tha-ap335:0.3": "3. Punnāgapupphiyattheraapadāna",
  "tha-ap335:1.1": "“Kānanaṃ vanamogayha,",
  "tha-ap335:1.2": "vasāmi luddako ahaṃ;",
  "tha-ap335:1.3": "Punnāgaṃ pupphitaṃ disvā,",
  "tha-ap335:1.4": "buddhaseṭṭhaṃ anussariṃ.",
  "tha-ap335:2.1": "Taṃ pupphaṃ ocinitvāna,",
  "tha-ap335:2.2": "sugandhaṃ gandhitaṃ subhaṃ;",
  "tha-ap335:2.3": "Thūpaṃ katvāna puline,",
  "tha-ap335:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap335:3.1": "Dvenavute ito kappe,",
  "tha-ap335:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap335:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap335:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap335:4.1": "Ekamhi navute kappe,",
  "tha-ap335:4.2": "eko āsiṃ tamonudo;",
  "tha-ap335:4.3": "Sattaratanasampanno,",
  "tha-ap335:4.4": "cakkavattī mahabbalo.",
  "tha-ap335:5.1": "Paṭisambhidā catasso,",
  "tha-ap335:5.2": "…pe…",
  "tha-ap335:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap335:6.1": "Itthaṃ sudaṃ āyasmā punnāgapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap335:7.1": "Punnāgapupphiyattherassāpadānaṃ tatiyaṃ."
}