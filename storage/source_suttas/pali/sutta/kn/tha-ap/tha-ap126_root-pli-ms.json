{
  "tha-ap126:0.1": "Therāpadāna",
  "tha-ap126:0.2": "Sereyyavagga",
  "tha-ap126:0.3": "4. Gandhodakiyattheraapadāna",
  "tha-ap126:1.1": "“Nisajja pāsādavare,",
  "tha-ap126:1.2": "vipassiṃ addasaṃ jinaṃ;",
  "tha-ap126:1.3": "Kakudhaṃ vilasantaṃva,",
  "tha-ap126:1.4": "sabbaññuṃ tamanāsakaṃ.",
  "tha-ap126:2.1": "Pāsādassāvidūre ca,",
  "tha-ap126:2.2": "gacchati lokanāyako;",
  "tha-ap126:2.3": "Pabhā niddhāvate tassa,",
  "tha-ap126:2.4": "yathā ca sataraṃsino.",
  "tha-ap126:3.1": "Gandhodakañca paggayha,",
  "tha-ap126:3.2": "buddhaseṭṭhaṃ samokiriṃ;",
  "tha-ap126:3.3": "Tena cittappasādena,",
  "tha-ap126:3.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap126:4.1": "Ekanavutito kappe,",
  "tha-ap126:4.2": "yaṃ gandhodakamākiriṃ;",
  "tha-ap126:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap126:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap126:5.1": "Ekattiṃse ito kappe,",
  "tha-ap126:5.2": "sugandho nāma khattiyo;",
  "tha-ap126:5.3": "Sattaratanasampanno,",
  "tha-ap126:5.4": "cakkavattī mahabbalo.",
  "tha-ap126:6.1": "Paṭisambhidā catasso,",
  "tha-ap126:6.2": "…pe…",
  "tha-ap126:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap126:7.1": "Itthaṃ sudaṃ āyasmā gandhodakiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap126:8.1": "Gandhodakiyattherassāpadānaṃ catutthaṃ."
}