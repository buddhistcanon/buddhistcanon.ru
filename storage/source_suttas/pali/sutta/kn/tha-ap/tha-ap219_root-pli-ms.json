{
  "tha-ap219:0.1": "Therāpadāna",
  "tha-ap219:0.2": "Hatthivagga",
  "tha-ap219:0.3": "7. Tālavaṇṭadāyakattheraapadāna",
  "tha-ap219:1.1": "“Tālavaṇṭaṃ mayā dinnaṃ,",
  "tha-ap219:1.2": "tissassādiccabandhuno;",
  "tha-ap219:1.3": "Gimhanibbāpanatthāya,",
  "tha-ap219:1.4": "pariḷāhopasantiyā.",
  "tha-ap219:2.1": "Sannibbāpemi rāgaggiṃ,",
  "tha-ap219:2.2": "dosaggiñca taduttariṃ;",
  "tha-ap219:2.3": "Nibbāpemi ca mohaggiṃ,",
  "tha-ap219:2.4": "tālavaṇṭassidaṃ phalaṃ.",
  "tha-ap219:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap219:3.2": "bhavā sabbe samūhatā;",
  "tha-ap219:3.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap219:3.4": "sammāsambuddhasāsane.",
  "tha-ap219:4.1": "Dvenavute ito kappe,",
  "tha-ap219:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap219:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap219:4.4": "tālavaṇṭassidaṃ phalaṃ.",
  "tha-ap219:5.1": "Tesaṭṭhimhi ito kappe,",
  "tha-ap219:5.2": "mahānāmasanāmako;",
  "tha-ap219:5.3": "Sattaratanasampanno,",
  "tha-ap219:5.4": "cakkavattī mahabbalo.",
  "tha-ap219:6.1": "Paṭisambhidā catasso,",
  "tha-ap219:6.2": "…pe…",
  "tha-ap219:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap219:7.1": "Itthaṃ sudaṃ āyasmā tālavaṇṭadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap219:8.1": "Tālavaṇṭadāyakattherassāpadānaṃ sattamaṃ."
}