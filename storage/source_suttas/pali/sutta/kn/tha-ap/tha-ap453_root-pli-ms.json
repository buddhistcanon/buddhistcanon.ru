{
  "tha-ap453:0.1": "Therāpadāna",
  "tha-ap453:0.2": "Jagatidāyakavagga",
  "tha-ap453:0.3": "1. Jagatidāyakattheraapadāna",
  "tha-ap453:1.1": "“Dhammadassissa munino,",
  "tha-ap453:1.2": "bodhiyā pādaputtame;",
  "tha-ap453:1.3": "Pasannacitto sumano,",
  "tha-ap453:1.4": "jagatiṃ kārayiṃ ahaṃ.",
  "tha-ap453:2.1": "Darito pabbatato vā,",
  "tha-ap453:2.2": "rukkhato patito ahaṃ;",
  "tha-ap453:2.3": "Cuto patiṭṭhaṃ vindāmi,",
  "tha-ap453:2.4": "jagatiyā idaṃ phalaṃ.",
  "tha-ap453:3.1": "Na me corā vihesanti,",
  "tha-ap453:3.2": "nātimaññanti khattiyā;",
  "tha-ap453:3.3": "Sabbāmittetikkamāmi,",
  "tha-ap453:3.4": "jagatiyā idaṃ phalaṃ.",
  "tha-ap453:4.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap453:4.2": "devattaṃ atha mānusaṃ;",
  "tha-ap453:4.3": "Sabbattha pūjito homi,",
  "tha-ap453:4.4": "jagatiyā idaṃ phalaṃ.",
  "tha-ap453:5.1": "Aṭṭhārase kappasate,",
  "tha-ap453:5.2": "jagatiṃ kārayiṃ ahaṃ;",
  "tha-ap453:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap453:5.4": "jagatidānassidaṃ phalaṃ.",
  "tha-ap453:6.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap453:6.2": "bhavā sabbe samūhatā;",
  "tha-ap453:6.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap453:6.4": "viharāmi anāsavo.",
  "tha-ap453:7.1": "Svāgataṃ vata me āsi,",
  "tha-ap453:7.2": "mama buddhassa santike;",
  "tha-ap453:7.3": "Tisso vijjā anuppattā,",
  "tha-ap453:7.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap453:8.1": "Paṭisambhidā catasso,",
  "tha-ap453:8.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap453:8.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap453:8.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap453:9.1": "Itthaṃ sudaṃ āyasmā jagatidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap453:10.1": "Jagatidāyakattherassāpadānaṃ paṭhamaṃ."
}