{
  "tha-ap370:0.1": "Therāpadāna",
  "tha-ap370:0.2": "Mandāravapupphiyavagga",
  "tha-ap370:0.3": "8. Ekacampakapupphiyattheraapadāna",
  "tha-ap370:1.1": "“Upasanto ca sambuddho,",
  "tha-ap370:1.2": "vasatī pabbatantare;",
  "tha-ap370:1.3": "Ekacampakamādāya,",
  "tha-ap370:1.4": "upagacchiṃ naruttamaṃ.",
  "tha-ap370:2.1": "Pasannacitto sumano,",
  "tha-ap370:2.2": "paccekamunimuttamaṃ;",
  "tha-ap370:2.3": "Ubhohatthehi paggayha,",
  "tha-ap370:2.4": "pūjayiṃ aparājitaṃ.",
  "tha-ap370:3.1": "Pañcasaṭṭhimhito kappe,",
  "tha-ap370:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap370:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap370:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap370:4.1": "Paṭisambhidā catasso,",
  "tha-ap370:4.2": "…pe…",
  "tha-ap370:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap370:5.1": "Itthaṃ sudaṃ āyasmā ekacampakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap370:6.1": "Ekacampakapupphiyattherassāpadānaṃ aṭṭhamaṃ."
}