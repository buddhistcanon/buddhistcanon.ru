{
  "tha-ap373:0.1": "Therāpadāna",
  "tha-ap373:0.2": "Bodhivandanavagga",
  "tha-ap373:0.3": "1. Bodhivandakattheraapadāna",
  "tha-ap373:1.1": "“Pāṭaliṃ haritaṃ disvā,",
  "tha-ap373:1.2": "pādapaṃ dharaṇīruhaṃ;",
  "tha-ap373:1.3": "Ekaṃsaṃ añjaliṃ katvā,",
  "tha-ap373:1.4": "avandiṃ pāṭaliṃ ahaṃ.",
  "tha-ap373:2.1": "Añjaliṃ paggahetvāna,",
  "tha-ap373:2.2": "garuṃ katvāna mānasaṃ;",
  "tha-ap373:2.3": "Antosuddhaṃ bahisuddhaṃ,",
  "tha-ap373:2.4": "suvimuttamanāsavaṃ.",
  "tha-ap373:3.1": "Vipassiṃ lokamahitaṃ,",
  "tha-ap373:3.2": "karuṇāñāṇasāgaraṃ;",
  "tha-ap373:3.3": "Sammukhā viya sambuddhaṃ,",
  "tha-ap373:3.4": "avandiṃ pāṭaliṃ ahaṃ.",
  "tha-ap373:4.1": "Ekanavutito kappe,",
  "tha-ap373:4.2": "yaṃ bodhimabhivandahaṃ;",
  "tha-ap373:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap373:4.4": "vandanāya idaṃ phalaṃ.",
  "tha-ap373:5.1": "Paṭisambhidā catasso,",
  "tha-ap373:5.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap373:5.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap373:5.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap373:6.1": "Itthaṃ sudaṃ āyasmā bodhivandako thero imā gāthāyo abhāsitthāti.",
  "tha-ap373:7.1": "Bodhivandakattherassāpadānaṃ paṭhamaṃ."
}