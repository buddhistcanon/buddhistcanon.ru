{
  "tha-ap153:0.1": "Therāpadāna",
  "tha-ap153:0.2": "Bandhujīvakavagga",
  "tha-ap153:0.3": "1. Bandhujīvakattheraapadāna",
  "tha-ap153:1.1": "“Candaṃva vimalaṃ suddhaṃ,",
  "tha-ap153:1.2": "vippasannamanāvilaṃ;",
  "tha-ap153:1.3": "Nandībhavaparikkhīṇaṃ,",
  "tha-ap153:1.4": "tiṇṇaṃ loke visattikaṃ.",
  "tha-ap153:2.1": "Nibbāpayantaṃ janataṃ,",
  "tha-ap153:2.2": "Tiṇṇaṃ tārayataṃ varaṃ;",
  "tha-ap153:2.3": "Muniṃ vanamhi jhāyantaṃ,",
  "tha-ap153:2.4": "Ekaggaṃ susamāhitaṃ.",
  "tha-ap153:3.1": "Bandhujīvakapupphāni,",
  "tha-ap153:3.2": "lagetvā suttakenahaṃ;",
  "tha-ap153:3.3": "Buddhassa abhiropayiṃ,",
  "tha-ap153:3.4": "sikhino lokabandhuno.",
  "tha-ap153:4.1": "Ekattiṃse ito kappe,",
  "tha-ap153:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap153:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap153:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap153:5.1": "Ito sattamake kappe,",
  "tha-ap153:5.2": "manujindo mahāyaso;",
  "tha-ap153:5.3": "Samantacakkhu nāmāsi,",
  "tha-ap153:5.4": "cakkavattī mahabbalo.",
  "tha-ap153:6.1": "Paṭisambhidā catasso,",
  "tha-ap153:6.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap153:6.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap153:6.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap153:7.1": "Itthaṃ sudaṃ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap153:8.1": "Bandhujīvakattherassāpadānaṃ paṭhamaṃ."
}