{
  "tha-ap419:0.1": "Therāpadāna",
  "tha-ap419:0.2": "Bhaddālivagga",
  "tha-ap419:0.3": "7. Ucchaṅgapupphiyattheraapadāna",
  "tha-ap419:1.1": "“Nagare bandhumatiyā,",
  "tha-ap419:1.2": "ahosiṃ māliko tadā;",
  "tha-ap419:1.3": "Ucchaṅgaṃ pūrayitvāna,",
  "tha-ap419:1.4": "agamaṃ antarāpaṇaṃ.",
  "tha-ap419:2.1": "Bhagavā tamhi samaye,",
  "tha-ap419:2.2": "bhikkhusaṃghapurakkhato;",
  "tha-ap419:2.3": "Mahatā ānubhāvena,",
  "tha-ap419:2.4": "niyyāti lokanāyako.",
  "tha-ap419:3.1": "Disvāna lokapajjotaṃ,",
  "tha-ap419:3.2": "vipassiṃ lokatāraṇaṃ;",
  "tha-ap419:3.3": "Pupphaṃ paggayha ucchaṅgā,",
  "tha-ap419:3.4": "buddhaseṭṭhaṃ apūjayiṃ.",
  "tha-ap419:4.1": "Ekanavutito kappe,",
  "tha-ap419:4.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap419:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap419:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap419:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap419:5.2": "…pe…",
  "tha-ap419:5.3": "viharāmi anāsavo.",
  "tha-ap419:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap419:6.2": "…pe…",
  "tha-ap419:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap419:7.1": "Paṭisambhidā catasso,",
  "tha-ap419:7.2": "…pe…",
  "tha-ap419:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap419:8.1": "Itthaṃ sudaṃ āyasmā ucchaṅgapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap419:9.1": "Ucchaṅgapupphiyattherassāpadānaṃ sattamaṃ."
}