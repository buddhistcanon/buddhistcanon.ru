{
  "tha-ap363:0.1": "Therāpadāna",
  "tha-ap363:0.2": "Mandāravapupphiyavagga",
  "tha-ap363:0.3": "1 Mandāravapupphiyattheraapadāna",
  "tha-ap363:1.1": "“Tāvatiṃsā idhāgantvā,",
  "tha-ap363:1.2": "maṅgalo nāma māṇavo;",
  "tha-ap363:1.3": "Mandāravaṃ gahetvāna,",
  "tha-ap363:1.4": "vipassissa mahesino.",
  "tha-ap363:2.1": "Samādhinā nisinnassa,",
  "tha-ap363:2.2": "matthake dhārayiṃ ahaṃ;",
  "tha-ap363:2.3": "Sattāhaṃ dhārayitvāna,",
  "tha-ap363:2.4": "devalokaṃ punāgamiṃ.",
  "tha-ap363:3.1": "Ekanavutito kappe,",
  "tha-ap363:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap363:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap363:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap363:4.1": "Paṭisambhidā catasso,",
  "tha-ap363:4.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap363:4.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap363:4.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap363:5.1": "Itthaṃ sudaṃ āyasmā mandāravapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap363:6.1": "Mandāravapupphiyattherassāpadānaṃ paṭhamaṃ."
}