{
  "tha-ap322:0.1": "Therāpadāna",
  "tha-ap322:0.2": "Ārakkhadāyakavagga",
  "tha-ap322:0.3": "10. Kumudamāliyattheraapadāna",
  "tha-ap322:1.1": "“Usabhaṃ pavaraṃ vīraṃ,",
  "tha-ap322:1.2": "mahesiṃ vijitāvinaṃ;",
  "tha-ap322:1.3": "Vipassinaṃ mahāvīraṃ,",
  "tha-ap322:1.4": "abhijātaṃva kesariṃ.",
  "tha-ap322:2.1": "Rathiyaṃ paṭipajjantaṃ,",
  "tha-ap322:2.2": "āhutīnaṃ paṭiggahaṃ;",
  "tha-ap322:2.3": "Gahetvā kumudaṃ mālaṃ,",
  "tha-ap322:2.4": "buddhaseṭṭhaṃ samokiriṃ.",
  "tha-ap322:3.1": "Ekanavutito kappe,",
  "tha-ap322:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap322:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap322:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap322:4.1": "Paṭisambhidā catasso,",
  "tha-ap322:4.2": "…pe…",
  "tha-ap322:4.3": "kataṃ buddhassa sāsanaṃ”. (2820)",
  "tha-ap322:5.1": "Itthaṃ sudaṃ āyasmā kumudamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap322:6.1": "Kumudamāliyattherassāpadānaṃ dasamaṃ.",
  "tha-ap322:7.1": "Ārakkhadāyakavaggo bāttiṃsatimo.",
  "tha-ap322:8.1": "Tassuddānaṃ",
  "tha-ap322:9.1": "Ārakkhado bhojanado,",
  "tha-ap322:9.2": "gatasaññī padumiyo;",
  "tha-ap322:9.3": "Pupphāsanī santhaviko,",
  "tha-ap322:9.4": "saddasaññī tiraṃsiyo;",
  "tha-ap322:9.5": "Kandaliko kumudī ca,",
  "tha-ap322:9.6": "sattapaññāsa gāthakāti."
}