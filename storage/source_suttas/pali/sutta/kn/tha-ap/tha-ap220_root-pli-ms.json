{
  "tha-ap220:0.1": "Therāpadāna",
  "tha-ap220:0.2": "Hatthivagga",
  "tha-ap220:0.3": "8. Akkantasaññakattheraapadāna",
  "tha-ap220:1.1": "“Kusāṭakaṃ gahetvāna,",
  "tha-ap220:1.2": "upajjhāyassahaṃ pure;",
  "tha-ap220:1.3": "Mantañca anusikkhāmi,",
  "tha-ap220:1.4": "ganthādosassa pattiyā.",
  "tha-ap220:2.1": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap220:2.2": "Āhutīnaṃ paṭiggahaṃ;",
  "tha-ap220:2.3": "Usabhaṃ pavaraṃ aggaṃ,",
  "tha-ap220:2.4": "Tissaṃ buddhaṃ gaṇuttamaṃ.",
  "tha-ap220:3.1": "Kusāṭakaṃ pattharitaṃ,",
  "tha-ap220:3.2": "akkamantaṃ naruttamaṃ;",
  "tha-ap220:3.3": "Samuggataṃ mahāvīraṃ,",
  "tha-ap220:3.4": "lokajeṭṭhaṃ narāsabhaṃ.",
  "tha-ap220:4.1": "Disvā taṃ lokapajjotaṃ,",
  "tha-ap220:4.2": "vimalaṃ candasannibhaṃ;",
  "tha-ap220:4.3": "Avandiṃ satthuno pāde,",
  "tha-ap220:4.4": "vippasannena cetasā.",
  "tha-ap220:5.1": "Catunnavutito kappe,",
  "tha-ap220:5.2": "yaṃ adāsiṃ kusāṭakaṃ;",
  "tha-ap220:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap220:5.4": "kusāṭakassidaṃ phalaṃ.",
  "tha-ap220:6.1": "Sattatiṃse ito kappe,",
  "tha-ap220:6.2": "eko āsiṃ janādhipo;",
  "tha-ap220:6.3": "Sunando nāma nāmena,",
  "tha-ap220:6.4": "cakkavattī mahabbalo.",
  "tha-ap220:7.1": "Paṭisambhidā catasso,",
  "tha-ap220:7.2": "…pe…",
  "tha-ap220:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap220:8.1": "Itthaṃ sudaṃ āyasmā akkantasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap220:9.1": "Akkantasaññakattherassāpadānaṃ aṭṭhamaṃ."
}