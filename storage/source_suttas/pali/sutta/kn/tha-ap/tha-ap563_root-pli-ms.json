{
  "tha-ap563:0.1": "Therāpadāna",
  "tha-ap563:0.2": "Yasavagga",
  "tha-ap563:0.3": "11. Raṭṭhapālattheraapadāna",
  "tha-ap563:1.1": "“Padumuttarassa bhagavato,",
  "tha-ap563:1.2": "Lokajeṭṭhassa tādino;",
  "tha-ap563:1.3": "Varanāgo mayā dinno,",
  "tha-ap563:1.4": "Īsādanto urūḷhavā.",
  "tha-ap563:2.1": "Setacchattopasobhito,",
  "tha-ap563:2.2": "sakappano sahatthipo;",
  "tha-ap563:2.3": "Agghāpetvāna taṃ sabbaṃ,",
  "tha-ap563:2.4": "saṃghārāmaṃ akārayiṃ.",
  "tha-ap563:3.1": "Catupaññāsasahassāni,",
  "tha-ap563:3.2": "pāsāde kārayiṃ ahaṃ;",
  "tha-ap563:3.3": "Mahoghadānaṃ karitvāna,",
  "tha-ap563:3.4": "niyyādesiṃ mahesino.",
  "tha-ap563:4.1": "Anumodi mahāvīro,",
  "tha-ap563:4.2": "sayambhū aggapuggalo;",
  "tha-ap563:4.3": "Sabbe jane hāsayanto,",
  "tha-ap563:4.4": "desesi amataṃ padaṃ.",
  "tha-ap563:5.1": "Taṃ me buddho viyākāsi,",
  "tha-ap563:5.2": "jalajuttamanāmako;",
  "tha-ap563:5.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap563:5.4": "imā gāthā abhāsatha.",
  "tha-ap563:6.1": "‘Catupaññāsasahassāni,",
  "tha-ap563:6.2": "pāsāde kārayī ayaṃ;",
  "tha-ap563:6.3": "Kathayissāmi vipākaṃ,",
  "tha-ap563:6.4": "suṇātha mama bhāsato.",
  "tha-ap563:7.1": "Aṭṭhārasasahassāni,",
  "tha-ap563:7.2": "kūṭāgārā bhavissare;",
  "tha-ap563:7.3": "Byamhuttamamhi nibbattā,",
  "tha-ap563:7.4": "sabbasoṇṇamayā ca te.",
  "tha-ap563:8.1": "Paññāsakkhattuṃ devindo,",
  "tha-ap563:8.2": "devarajjaṃ karissati;",
  "tha-ap563:8.3": "Aṭṭhapaññāsakkhattuñca,",
  "tha-ap563:8.4": "cakkavattī bhavissati.",
  "tha-ap563:9.1": "Kappasatasahassamhi,",
  "tha-ap563:9.2": "okkākakulasambhavo;",
  "tha-ap563:9.3": "Gotamo nāma gottena,",
  "tha-ap563:9.4": "satthā loke bhavissati.",
  "tha-ap563:10.1": "Devalokā cavitvāna,",
  "tha-ap563:10.2": "sukkamūlena codito;",
  "tha-ap563:10.3": "Aḍḍhe kule mahābhoge,",
  "tha-ap563:10.4": "nibbattissati tāvade.",
  "tha-ap563:11.1": "So pacchā pabbajitvāna,",
  "tha-ap563:11.2": "sukkamūlena codito;",
  "tha-ap563:11.3": "Raṭṭhapāloti nāmena,",
  "tha-ap563:11.4": "hessati satthu sāvako.",
  "tha-ap563:12.1": "Padhānapahitatto so,",
  "tha-ap563:12.2": "upasanto nirūpadhi;",
  "tha-ap563:12.3": "Sabbāsave pariññāya,",
  "tha-ap563:12.4": "nibbāyissatināsavo’.",
  "tha-ap563:13.1": "Uṭṭhāya abhinikkhamma,",
  "tha-ap563:13.2": "jahitā bhogasampadā;",
  "tha-ap563:13.3": "Kheḷapiṇḍeva bhogamhi,",
  "tha-ap563:13.4": "pemaṃ mayhaṃ na vijjati.",
  "tha-ap563:14.1": "Vīriyaṃ me dhuradhorayhaṃ,",
  "tha-ap563:14.2": "yogakkhemādhivāhanaṃ;",
  "tha-ap563:14.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap563:14.4": "sammāsambuddhasāsane.",
  "tha-ap563:15.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap563:15.2": "…pe…",
  "tha-ap563:15.3": "viharāmi anāsavo.",
  "tha-ap563:16.1": "Svāgataṃ vata me āsi,",
  "tha-ap563:16.2": "…pe…",
  "tha-ap563:16.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap563:17.1": "Paṭisambhidā catasso,",
  "tha-ap563:17.2": "…pe…",
  "tha-ap563:17.3": "kataṃ buddhassa sāsanaṃ”. (6440)",
  "tha-ap563:18.1": "Itthaṃ sudaṃ āyasmā raṭṭhapālo thero imā gāthāyo abhāsitthāti.",
  "tha-ap563:19.1": "Raṭṭhapālattherassāpadānaṃ ekādasamaṃ.",
  "tha-ap563:20.1": "Yasavaggo chapaññāsamo.",
  "tha-ap563:21.1": "Tassuddānaṃ",
  "tha-ap563:22.1": "Yaso nadīkassapo ca,",
  "tha-ap563:22.2": "gayākimilavajjino;",
  "tha-ap563:22.3": "Duve uttarā bhaddajī,",
  "tha-ap563:22.4": "sivako upavāhano;",
  "tha-ap563:22.5": "Raṭṭhapālo ekasataṃ,",
  "tha-ap563:22.6": "gāthānaṃ pañcanavuti.",
  "tha-ap563:23.1": "Therāpadānaṃ samattaṃ."
}