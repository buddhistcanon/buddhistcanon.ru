{
  "tha-ap57:0.1": "Therāpadāna",
  "tha-ap57:0.2": "Bījanivagga",
  "tha-ap57:0.3": "5 Opavayhattheraapadāna",
  "tha-ap57:1.1": "“Padumuttarabuddhassa,",
  "tha-ap57:1.2": "ājānīyamadāsahaṃ;",
  "tha-ap57:1.3": "Niyyādetvāna sambuddhe,",
  "tha-ap57:1.4": "agamāsiṃ sakaṃ gharaṃ.",
  "tha-ap57:2.1": "Devalo nāma nāmena,",
  "tha-ap57:2.2": "satthuno aggasāvako;",
  "tha-ap57:2.3": "Varadhammassa dāyādo,",
  "tha-ap57:2.4": "āgacchi mama santikaṃ.",
  "tha-ap57:3.1": "Sapattabhāro bhagavā,",
  "tha-ap57:3.2": "ājāneyyo na kappati;",
  "tha-ap57:3.3": "Tava saṅkappamaññāya,",
  "tha-ap57:3.4": "adhivāsesi cakkhumā.",
  "tha-ap57:4.1": "Agghāpetvā vātajavaṃ,",
  "tha-ap57:4.2": "sindhavaṃ sīghavāhanaṃ;",
  "tha-ap57:4.3": "Padumuttarabuddhassa,",
  "tha-ap57:4.4": "khamanīyamadāsahaṃ.",
  "tha-ap57:5.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap57:5.2": "devattaṃ atha mānusaṃ;",
  "tha-ap57:5.3": "Khamanīyaṃ vātajavaṃ,",
  "tha-ap57:5.4": "cittaṃ nibbattate mama.",
  "tha-ap57:6.1": "Lābhaṃ tesaṃ suladdhaṃva,",
  "tha-ap57:6.2": "ye labhantupasampadaṃ;",
  "tha-ap57:6.3": "Punapi payirupāseyyaṃ,",
  "tha-ap57:6.4": "buddho loke sace bhave.",
  "tha-ap57:7.1": "Aṭṭhavīsatikkhattuṃhaṃ,",
  "tha-ap57:7.2": "rājā āsiṃ mahabbalo;",
  "tha-ap57:7.3": "Cāturanto vijitāvī,",
  "tha-ap57:7.4": "jambusaṇḍassa issaro.",
  "tha-ap57:8.1": "Idaṃ pacchimakaṃ mayhaṃ,",
  "tha-ap57:8.2": "carimo vattate bhavo;",
  "tha-ap57:8.3": "Pattosmi acalaṃ ṭhānaṃ,",
  "tha-ap57:8.4": "hitvā jayaparājayaṃ.",
  "tha-ap57:9.1": "Catutiṃsasahassamhi,",
  "tha-ap57:9.2": "mahātejosi khattiyo;",
  "tha-ap57:9.3": "Sattaratanasampanno,",
  "tha-ap57:9.4": "cakkavattī mahabbalo.",
  "tha-ap57:10.1": "Paṭisambhidā catasso,",
  "tha-ap57:10.2": "…pe…",
  "tha-ap57:10.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap57:11.1": "Itthaṃ sudaṃ āyasmā opavayho thero imā gāthāyo abhāsitthāti.",
  "tha-ap57:12.1": "Opavayhattherassāpadānaṃ pañcamaṃ."
}