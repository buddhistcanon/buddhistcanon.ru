{
  "tha-ap480:0.1": "Therāpadāna",
  "tha-ap480:0.2": "Naḷamālivagga",
  "tha-ap480:0.3": "8. Vallikāraphaladāyakattheraapadāna",
  "tha-ap480:1.1": "“Sumano nāma sambuddho,",
  "tha-ap480:1.2": "takkarāyaṃ vasī tadā;",
  "tha-ap480:1.3": "Vallikāraphalaṃ gayha,",
  "tha-ap480:1.4": "sayambhussa adāsahaṃ.",
  "tha-ap480:2.1": "Ekatiṃse ito kappe,",
  "tha-ap480:2.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap480:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap480:2.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap480:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap480:3.2": "…pe…",
  "tha-ap480:3.3": "viharāmi anāsavo.",
  "tha-ap480:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap480:4.2": "…pe…",
  "tha-ap480:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap480:5.1": "Paṭisambhidā catasso,",
  "tha-ap480:5.2": "…pe…",
  "tha-ap480:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap480:6.1": "Itthaṃ sudaṃ āyasmā vallikāraphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap480:7.1": "Vallikāraphaladāyakattherassāpadānaṃ aṭṭhamaṃ."
}