{
  "tha-ap452:0.1": "Therāpadāna",
  "tha-ap452:0.2": "Vibhītakavagga",
  "tha-ap452:0.3": "10 Bodhigharadāyakattheraapadāna",
  "tha-ap452:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap452:1.2": "dvipadindassa tādino;",
  "tha-ap452:1.3": "Pasannacitto sumano,",
  "tha-ap452:1.4": "bodhigharamakārayiṃ.",
  "tha-ap452:2.1": "Tusitaṃ upapannomhi,",
  "tha-ap452:2.2": "vasāmi ratane ghare;",
  "tha-ap452:2.3": "Na me sītaṃ vā uṇhaṃ vā,",
  "tha-ap452:2.4": "vāto gatte na samphuse.",
  "tha-ap452:3.1": "Pañcasaṭṭhimhito kappe,",
  "tha-ap452:3.2": "cakkavattī ahosahaṃ;",
  "tha-ap452:3.3": "Kāsikaṃ nāma nagaraṃ,",
  "tha-ap452:3.4": "vissakammena māpitaṃ.",
  "tha-ap452:4.1": "Dasayojanaāyāmaṃ,",
  "tha-ap452:4.2": "aṭṭhayojanavitthataṃ;",
  "tha-ap452:4.3": "Na tamhi nagare atthi,",
  "tha-ap452:4.4": "kaṭṭhaṃ vallī ca mattikā.",
  "tha-ap452:5.1": "Tiriyaṃ yojanaṃ āsi,",
  "tha-ap452:5.2": "addhayojanavitthataṃ;",
  "tha-ap452:5.3": "Maṅgalo nāma pāsādo,",
  "tha-ap452:5.4": "vissakammena māpito.",
  "tha-ap452:6.1": "Cullāsītisahassāni,",
  "tha-ap452:6.2": "thambhā soṇṇamayā ahuṃ;",
  "tha-ap452:6.3": "Maṇimayā ca niyyūhā,",
  "tha-ap452:6.4": "chadanaṃ rūpiyaṃ ahu.",
  "tha-ap452:7.1": "Sabbasoṇṇamayaṃ gharaṃ,",
  "tha-ap452:7.2": "vissakammena māpitaṃ;",
  "tha-ap452:7.3": "Ajjhāvutthaṃ mayā etaṃ,",
  "tha-ap452:7.4": "gharadānassidaṃ phalaṃ.",
  "tha-ap452:8.1": "Te sabbe anubhotvāna,",
  "tha-ap452:8.2": "devamānusake bhave;",
  "tha-ap452:8.3": "Ajjhapattomhi nibbānaṃ,",
  "tha-ap452:8.4": "santipadamanuttaraṃ.",
  "tha-ap452:9.1": "Tiṃsakappasahassamhi,",
  "tha-ap452:9.2": "bodhigharamakārayiṃ;",
  "tha-ap452:9.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap452:9.4": "gharadānassidaṃ phalaṃ.",
  "tha-ap452:10.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap452:10.2": "…pe…",
  "tha-ap452:10.3": "viharāmi anāsavo.",
  "tha-ap452:11.1": "Svāgataṃ vata me āsi,",
  "tha-ap452:11.2": "…pe…",
  "tha-ap452:11.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap452:12.1": "Paṭisambhidā catasso,",
  "tha-ap452:12.2": "…pe…",
  "tha-ap452:12.3": "kataṃ buddhassa sāsanaṃ”. (4704)",
  "tha-ap452:13.1": "Itthaṃ sudaṃ āyasmā bodhigharadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap452:14.1": "Bodhigharadāyakattherassāpadānaṃ dasamaṃ.",
  "tha-ap452:15.1": "Vibhītakavaggo pañcacattālīsamo.",
  "tha-ap452:16.1": "Tassuddānaṃ",
  "tha-ap452:17.1": "Vibhītakī kolaphalī,",
  "tha-ap452:17.2": "billabhallātakappado;",
  "tha-ap452:17.3": "Uttalambaṭakī ceva,",
  "tha-ap452:17.4": "āsanī pādapīṭhako.",
  "tha-ap452:18.1": "Vediko bodhighariko,",
  "tha-ap452:18.2": "gāthāyo gaṇitāpi ca;",
  "tha-ap452:18.3": "Ekūnāsītikā sabbā,",
  "tha-ap452:18.4": "asmiṃ vagge pakittitā."
}