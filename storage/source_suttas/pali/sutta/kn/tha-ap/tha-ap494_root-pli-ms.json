{
  "tha-ap494:0.1": "Therāpadāna",
  "tha-ap494:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap494:0.3": "2. Paṃsukūlapūjakattheraapadāna",
  "tha-ap494:1.1": "“Himavantassāvidūre,",
  "tha-ap494:1.2": "udaṅgaṇo nāma pabbato;",
  "tha-ap494:1.3": "Tatthaddasaṃ paṃsukūlaṃ,",
  "tha-ap494:1.4": "dumaggamhi vilambitaṃ.",
  "tha-ap494:2.1": "Tīṇi kiṅkaṇipupphāni,",
  "tha-ap494:2.2": "ocinitvānahaṃ tadā;",
  "tha-ap494:2.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap494:2.4": "paṃsukūlamapūjayiṃ.",
  "tha-ap494:3.1": "Tena kammena sukatena,",
  "tha-ap494:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap494:3.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap494:3.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap494:4.1": "Ekanavutito kappe,",
  "tha-ap494:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap494:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap494:4.4": "pūjitvā arahaddhajaṃ.",
  "tha-ap494:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap494:5.2": "…pe…",
  "tha-ap494:5.3": "viharāmi anāsavo.",
  "tha-ap494:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap494:6.2": "…pe…",
  "tha-ap494:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap494:7.1": "Paṭisambhidā catasso,",
  "tha-ap494:7.2": "…pe…",
  "tha-ap494:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap494:8.1": "Itthaṃ sudaṃ āyasmā paṃsukūlapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap494:9.1": "Paṃsukūlapūjakattherassāpadānaṃ dutiyaṃ."
}