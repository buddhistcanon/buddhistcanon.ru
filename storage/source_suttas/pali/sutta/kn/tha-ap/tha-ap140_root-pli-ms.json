{
  "tha-ap140:0.1": "Therāpadāna",
  "tha-ap140:0.2": "Sobhitavagga",
  "tha-ap140:0.3": "8 Ekapasādaniyattheraapadāna",
  "tha-ap140:1.1": "“Nārado iti me nāmaṃ,",
  "tha-ap140:1.2": "kesavo iti maṃ vidū;",
  "tha-ap140:1.3": "Kusalākusalaṃ esaṃ,",
  "tha-ap140:1.4": "agamaṃ buddhasantikaṃ.",
  "tha-ap140:2.1": "Mettacitto kāruṇiko,",
  "tha-ap140:2.2": "atthadassī mahāmuni;",
  "tha-ap140:2.3": "Assāsayanto satte so,",
  "tha-ap140:2.4": "dhammaṃ deseti cakkhumā.",
  "tha-ap140:3.1": "Sakaṃ cittaṃ pasādetvā,",
  "tha-ap140:3.2": "sire katvāna añjaliṃ;",
  "tha-ap140:3.3": "Satthāraṃ abhivādetvā,",
  "tha-ap140:3.4": "pakkāmiṃ pācināmukho.",
  "tha-ap140:4.1": "Sattarase kappasate,",
  "tha-ap140:4.2": "rājā āsi mahīpati;",
  "tha-ap140:4.3": "Amittatāpano nāma,",
  "tha-ap140:4.4": "cakkavattī mahabbalo.",
  "tha-ap140:5.1": "Paṭisambhidā catasso,",
  "tha-ap140:5.2": "…pe…",
  "tha-ap140:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap140:6.1": "Itthaṃ sudaṃ āyasmā ekapasādaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap140:7.1": "Ekapasādaniyattherassāpadānaṃ aṭṭhamaṃ."
}