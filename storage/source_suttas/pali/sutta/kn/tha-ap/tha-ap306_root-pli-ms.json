{
  "tha-ap306:0.1": "Therāpadāna",
  "tha-ap306:0.2": "Padumakesaravagga",
  "tha-ap306:0.3": "4. Dhammasaññakattheraapadāna",
  "tha-ap306:1.1": "“Vipassino bhagavato,",
  "tha-ap306:1.2": "Mahābodhimaho ahu;",
  "tha-ap306:1.3": "Rukkhaṭṭhasseva sambuddho,",
  "tha-ap306:1.4": "Lokajeṭṭho narāsabho.",
  "tha-ap306:2.1": "Bhagavā tamhi samaye,",
  "tha-ap306:2.2": "bhikkhusaṃghapurakkhato;",
  "tha-ap306:2.3": "Catusaccaṃ pakāseti,",
  "tha-ap306:2.4": "vācāsabhimudīrayaṃ.",
  "tha-ap306:3.1": "Saṃkhittena ca desento,",
  "tha-ap306:3.2": "vitthārena ca desayaṃ;",
  "tha-ap306:3.3": "Vivaṭṭacchado sambuddho,",
  "tha-ap306:3.4": "nibbāpesi mahājanaṃ.",
  "tha-ap306:4.1": "Tassāhaṃ dhammaṃ sutvāna,",
  "tha-ap306:4.2": "lokajeṭṭhassa tādino;",
  "tha-ap306:4.3": "Vanditvā satthuno pāde,",
  "tha-ap306:4.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap306:5.1": "Ekanavutito kappe,",
  "tha-ap306:5.2": "yaṃ dhammamasuṇiṃ tadā;",
  "tha-ap306:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap306:5.4": "dhammasavassidaṃ phalaṃ.",
  "tha-ap306:6.1": "Tettiṃsamhi ito kappe,",
  "tha-ap306:6.2": "eko āsiṃ mahīpati;",
  "tha-ap306:6.3": "Sutavā nāma nāmena,",
  "tha-ap306:6.4": "cakkavattī mahabbalo.",
  "tha-ap306:7.1": "Paṭisambhidā catasso,",
  "tha-ap306:7.2": "…pe…",
  "tha-ap306:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap306:8.1": "Itthaṃ sudaṃ āyasmā dhammasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap306:9.1": "Dhammasaññakattherassāpadānaṃ catutthaṃ."
}