{
  "tha-ap47:0.1": "Therāpadāna",
  "tha-ap47:0.2": "Upālivagga",
  "tha-ap47:0.3": "5. Pañcahatthiyattheraapadāna",
  "tha-ap47:1.1": "“Sumedho nāma sambuddho,",
  "tha-ap47:1.2": "gacchate antarāpaṇe;",
  "tha-ap47:1.3": "Okkhittacakkhu mitabhāṇī,",
  "tha-ap47:1.4": "satimā saṃvutindriyo.",
  "tha-ap47:2.1": "Pañca uppalahatthāni,",
  "tha-ap47:2.2": "āveḷatthaṃ ahaṃsu me;",
  "tha-ap47:2.3": "Tena buddhaṃ apūjesiṃ,",
  "tha-ap47:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap47:3.1": "Āropitā ca te pupphā,",
  "tha-ap47:3.2": "chadanaṃ assu satthuno;",
  "tha-ap47:3.3": "Samādhiṃsu mahānāgaṃ,",
  "tha-ap47:3.4": "sissā ācariyaṃ yathā.",
  "tha-ap47:4.1": "Tiṃsakappasahassamhi,",
  "tha-ap47:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap47:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap47:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap47:5.1": "Ito vīsakappasate,",
  "tha-ap47:5.2": "ahesuṃ pañca khattiyā;",
  "tha-ap47:5.3": "Hatthiyā nāma nāmena,",
  "tha-ap47:5.4": "cakkavattī mahabbalā.",
  "tha-ap47:6.1": "Paṭisambhidā catasso,",
  "tha-ap47:6.2": "…pe…",
  "tha-ap47:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap47:7.1": "Itthaṃ sudaṃ āyasmā pañcahatthiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap47:8.1": "Pañcahatthiyattherassāpadānaṃ pañcamaṃ."
}