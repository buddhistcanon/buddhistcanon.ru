{
  "tha-ap161:0.1": "Therāpadāna",
  "tha-ap161:0.2": "Bandhujīvakavagga",
  "tha-ap161:0.3": "9. Punnāgapupphiyattheraapadāna",
  "tha-ap161:1.1": "“Kānanaṃ vanamogayha,",
  "tha-ap161:1.2": "vasāmi luddako ahaṃ;",
  "tha-ap161:1.3": "Punnāgaṃ pupphitaṃ disvā,",
  "tha-ap161:1.4": "buddhaseṭṭhaṃ anussariṃ.",
  "tha-ap161:2.1": "Taṃ pupphaṃ ocinitvāna,",
  "tha-ap161:2.2": "sugandhaṃ gandhitaṃ subhaṃ;",
  "tha-ap161:2.3": "Thūpaṃ karitvā puline,",
  "tha-ap161:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap161:3.1": "Dvenavute ito kappe,",
  "tha-ap161:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap161:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap161:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap161:4.1": "Ekamhi navute kappe,",
  "tha-ap161:4.2": "eko āsiṃ tamonudo;",
  "tha-ap161:4.3": "Sattaratanasampanno,",
  "tha-ap161:4.4": "cakkavattī mahabbalo.",
  "tha-ap161:5.1": "Paṭisambhidā catasso,",
  "tha-ap161:5.2": "…pe…",
  "tha-ap161:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap161:6.1": "Itthaṃ sudaṃ āyasmā punnāgapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap161:7.1": "Punnāgapupphiyattherassāpadānaṃ navamaṃ."
}