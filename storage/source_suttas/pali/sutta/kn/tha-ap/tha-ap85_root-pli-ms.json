{
  "tha-ap85:0.1": "Therāpadāna",
  "tha-ap85:0.2": "Timiravagga",
  "tha-ap85:0.3": "3 Nipannañjalikattheraapadāna",
  "tha-ap85:1.1": "“Rukkhamūle nisinnohaṃ,",
  "tha-ap85:1.2": "byādhito paramena ca;",
  "tha-ap85:1.3": "Paramakāruññapattomhi,",
  "tha-ap85:1.4": "araññe kānane ahaṃ.",
  "tha-ap85:2.1": "Anukampaṃ upādāya,",
  "tha-ap85:2.2": "tisso satthā upesi maṃ;",
  "tha-ap85:2.3": "Sohaṃ nipannako santo,",
  "tha-ap85:2.4": "sire katvāna añjaliṃ.",
  "tha-ap85:3.1": "Pasannacitto sumano,",
  "tha-ap85:3.2": "sabbasattānamuttamaṃ;",
  "tha-ap85:3.3": "Sambuddhaṃ abhivādetvā,",
  "tha-ap85:3.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap85:4.1": "Dvenavute ito kappe,",
  "tha-ap85:4.2": "yaṃ vandiṃ purisuttamaṃ;",
  "tha-ap85:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap85:4.4": "vandanāya idaṃ phalaṃ.",
  "tha-ap85:5.1": "Ito pañcamake kappe,",
  "tha-ap85:5.2": "pañcevāsuṃ mahāsikhā;",
  "tha-ap85:5.3": "Sattaratanasampannā,",
  "tha-ap85:5.4": "cakkavattī mahabbalā.",
  "tha-ap85:6.1": "Paṭisambhidā catasso,",
  "tha-ap85:6.2": "…pe…",
  "tha-ap85:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap85:7.1": "Itthaṃ sudaṃ āyasmā nipannañjaliko thero imā gāthāyo abhāsitthāti.",
  "tha-ap85:8.1": "Nipannañjalikattherassāpadānaṃ tatiyaṃ."
}