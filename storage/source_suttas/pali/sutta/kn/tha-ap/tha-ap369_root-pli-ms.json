{
  "tha-ap369:0.1": "Therāpadāna",
  "tha-ap369:0.2": "Mandāravapupphiyavagga",
  "tha-ap369:0.3": "7. Uddālakapupphiyattheraapadāna",
  "tha-ap369:1.1": "“Anomo nāma sambuddho,",
  "tha-ap369:1.2": "gaṅgākūle vasī tadā;",
  "tha-ap369:1.3": "Uddālakaṃ gahetvāna,",
  "tha-ap369:1.4": "pūjayiṃ aparājitaṃ.",
  "tha-ap369:2.1": "Ekattiṃse ito kappe,",
  "tha-ap369:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap369:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap369:2.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap369:3.1": "Paṭisambhidā catasso,",
  "tha-ap369:3.2": "…pe…",
  "tha-ap369:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap369:4.1": "Itthaṃ sudaṃ āyasmā uddālakapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap369:5.1": "Uddālakapupphiyattherassāpadānaṃ sattamaṃ."
}