{
  "tha-ap499:0.1": "Therāpadāna",
  "tha-ap499:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap499:0.3": "7. Udakadāyakattheraapadāna",
  "tha-ap499:1.1": "“Padumuttarabuddhassa,",
  "tha-ap499:1.2": "bhikkhusaṃghe anuttare;",
  "tha-ap499:1.3": "Pasannacitto sumano,",
  "tha-ap499:1.4": "pānīghaṭamapūrayiṃ.",
  "tha-ap499:2.1": "Pabbatagge dumagge vā,",
  "tha-ap499:2.2": "ākāse vātha bhūmiyaṃ;",
  "tha-ap499:2.3": "Yadā pānīyamicchāmi,",
  "tha-ap499:2.4": "khippaṃ nibbattate mama.",
  "tha-ap499:3.1": "Satasahassito kappe,",
  "tha-ap499:3.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap499:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap499:3.4": "dakadānassidaṃ phalaṃ.",
  "tha-ap499:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap499:4.2": "…pe…",
  "tha-ap499:4.3": "viharāmi anāsavo.",
  "tha-ap499:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap499:5.2": "…pe…",
  "tha-ap499:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap499:6.1": "Paṭisambhidā catasso,",
  "tha-ap499:6.2": "…pe…",
  "tha-ap499:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap499:7.1": "Itthaṃ sudaṃ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap499:8.1": "Udakadāyakattherassāpadānaṃ sattamaṃ."
}