{
  "tha-ap240:0.1": "Therāpadāna",
  "tha-ap240:0.2": "Udakāsanavagga",
  "tha-ap240:0.3": "8. Ambayāgadāyakattheraapadāna",
  "tha-ap240:1.1": "“Sake sippe apatthaddho,",
  "tha-ap240:1.2": "agamaṃ kānanaṃ ahaṃ;",
  "tha-ap240:1.3": "Sambuddhaṃ yantaṃ disvāna,",
  "tha-ap240:1.4": "ambayāgaṃ adāsahaṃ.",
  "tha-ap240:2.1": "Ekanavutito kappe,",
  "tha-ap240:2.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap240:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap240:2.4": "ambayāgassidaṃ phalaṃ.",
  "tha-ap240:3.1": "Paṭisambhidā catasso,",
  "tha-ap240:3.2": "…pe…",
  "tha-ap240:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap240:4.1": "Itthaṃ sudaṃ āyasmā ambayāgadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap240:5.1": "Ambayāgadāyakattherassāpadānaṃ aṭṭhamaṃ."
}