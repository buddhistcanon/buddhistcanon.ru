{
  "tha-ap505:0.1": "Therāpadāna",
  "tha-ap505:0.2": "Kaṇikāravagga",
  "tha-ap505:0.3": "3 Kāsumāraphaliyattheraapadāna",
  "tha-ap505:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap505:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap505:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap505:1.4": "lokajeṭṭhaṃ narāsabhaṃ.",
  "tha-ap505:2.1": "Pasannacitto sumano,",
  "tha-ap505:2.2": "sire katvāna añjaliṃ;",
  "tha-ap505:2.3": "Kāsumārikamādāya,",
  "tha-ap505:2.4": "buddhaseṭṭhassadāsahaṃ.",
  "tha-ap505:3.1": "Ekatiṃse ito kappe,",
  "tha-ap505:3.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap505:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap505:3.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap505:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap505:4.2": "…pe…",
  "tha-ap505:4.3": "viharāmi anāsavo.",
  "tha-ap505:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap505:5.2": "…pe…",
  "tha-ap505:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap505:6.1": "Paṭisambhidā catasso,",
  "tha-ap505:6.2": "…pe…",
  "tha-ap505:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap505:7.1": "Itthaṃ sudaṃ āyasmā kāsumāraphaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap505:8.1": "Kāsumāraphaliyattherassāpadānaṃ tatiyaṃ."
}