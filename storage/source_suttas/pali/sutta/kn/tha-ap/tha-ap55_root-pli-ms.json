{
  "tha-ap55:0.1": "Therāpadāna",
  "tha-ap55:0.2": "Bījanivagga",
  "tha-ap55:0.3": "3. Sayanadāyakattheraapadāna",
  "tha-ap55:1.1": "“Padumuttarabuddhassa,",
  "tha-ap55:1.2": "sabbalokānukampino;",
  "tha-ap55:1.3": "Sayanaṃ tassa pādāsiṃ,",
  "tha-ap55:1.4": "vippasannena cetasā.",
  "tha-ap55:2.1": "Tena sayanadānena,",
  "tha-ap55:2.2": "sukhette bījasampadā;",
  "tha-ap55:2.3": "Bhogā nibbattare tassa,",
  "tha-ap55:2.4": "sayanassa idaṃ phalaṃ.",
  "tha-ap55:3.1": "Ākāse seyyaṃ kappemi,",
  "tha-ap55:3.2": "dhāremi pathaviṃ imaṃ;",
  "tha-ap55:3.3": "Pāṇesu me issariyaṃ,",
  "tha-ap55:3.4": "sayanassa idaṃ phalaṃ.",
  "tha-ap55:4.1": "Pañcakappasahassamhi,",
  "tha-ap55:4.2": "aṭṭha āsuṃ mahātejā;",
  "tha-ap55:4.3": "Catuttiṃse kappasate,",
  "tha-ap55:4.4": "caturo ca mahabbalā.",
  "tha-ap55:5.1": "Paṭisambhidā catasso,",
  "tha-ap55:5.2": "…pe…",
  "tha-ap55:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap55:6.1": "Itthaṃ sudaṃ āyasmā sayanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap55:7.1": "Sayanadāyakattherassāpadānaṃ tatiyaṃ."
}