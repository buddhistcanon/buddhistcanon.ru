{
  "tha-ap400:0.1": "Therāpadāna",
  "tha-ap400:0.2": "Pilindavacchavagga",
  "tha-ap400:0.3": "8 Saḷalamaṇḍapiyattheraapadāna",
  "tha-ap400:1.1": "“Nibbute kakusandhamhi,",
  "tha-ap400:1.2": "brāhmaṇamhi vusīmati;",
  "tha-ap400:1.3": "Gahetvā saḷalaṃ mālaṃ,",
  "tha-ap400:1.4": "maṇḍapaṃ kārayiṃ ahaṃ.",
  "tha-ap400:2.1": "Tāvatiṃsagato santo,",
  "tha-ap400:2.2": "labhāmi byamhamuttamaṃ;",
  "tha-ap400:2.3": "Aññe devetirocāmi,",
  "tha-ap400:2.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap400:3.1": "Divā vā yadi vā rattiṃ,",
  "tha-ap400:3.2": "caṅkamanto ṭhito cahaṃ;",
  "tha-ap400:3.3": "Channo saḷalapupphehi,",
  "tha-ap400:3.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap400:4.1": "Imasmiṃyeva kappamhi,",
  "tha-ap400:4.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap400:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap400:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap400:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap400:5.2": "…pe…",
  "tha-ap400:5.3": "viharāmi anāsavo.",
  "tha-ap400:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap400:6.2": "…pe…",
  "tha-ap400:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap400:7.1": "Paṭisambhidā catasso,",
  "tha-ap400:7.2": "…pe…",
  "tha-ap400:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap400:8.1": "Itthaṃ sudaṃ āyasmā saḷalamaṇḍapiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap400:9.1": "Saḷalamaṇḍapiyattherassāpadānaṃ aṭṭhamaṃ."
}