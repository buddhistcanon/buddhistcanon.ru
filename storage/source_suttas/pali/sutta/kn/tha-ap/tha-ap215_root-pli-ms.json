{
  "tha-ap215:0.1": "Therāpadāna",
  "tha-ap215:0.2": "Hatthivagga",
  "tha-ap215:0.3": "3. Saccasaññakattheraapadāna",
  "tha-ap215:1.1": "“Vessabhū tamhi samaye,",
  "tha-ap215:1.2": "bhikkhusaṃghapurakkhato;",
  "tha-ap215:1.3": "Deseti ariyasaccāni,",
  "tha-ap215:1.4": "nibbāpento mahājanaṃ.",
  "tha-ap215:2.1": "Paramakāruññapattomhi,",
  "tha-ap215:2.2": "samitiṃ agamāsahaṃ;",
  "tha-ap215:2.3": "Sohaṃ nisinnako santo,",
  "tha-ap215:2.4": "dhammamassosi satthuno.",
  "tha-ap215:3.1": "Tassāhaṃ dhammaṃ sutvāna,",
  "tha-ap215:3.2": "devalokaṃ agacchahaṃ;",
  "tha-ap215:3.3": "Tiṃsakappāni devesu,",
  "tha-ap215:3.4": "avasiṃ tatthahaṃ pure.",
  "tha-ap215:4.1": "Ekattiṃse ito kappe,",
  "tha-ap215:4.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap215:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap215:4.4": "saccasaññāyidaṃ phalaṃ.",
  "tha-ap215:5.1": "Chabbīsamhi ito kappe,",
  "tha-ap215:5.2": "eko āsiṃ janādhipo;",
  "tha-ap215:5.3": "Ekaphusitanāmena,",
  "tha-ap215:5.4": "cakkavattī mahabbalo.",
  "tha-ap215:6.1": "Paṭisambhidā catasso,",
  "tha-ap215:6.2": "…pe…",
  "tha-ap215:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap215:7.1": "Itthaṃ sudaṃ āyasmā saccasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap215:8.1": "Saccasaññakattherassāpadānaṃ tatiyaṃ."
}