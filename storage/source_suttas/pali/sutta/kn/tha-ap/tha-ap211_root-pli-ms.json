{
  "tha-ap211:0.1": "Therāpadāna",
  "tha-ap211:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap211:0.3": "9. Ādhāradāyakattheraapadāna",
  "tha-ap211:1.1": "“Ādhārakaṃ mayā dinnaṃ,",
  "tha-ap211:1.2": "sikhino lokabandhuno;",
  "tha-ap211:1.3": "Dhāremi pathaviṃ sabbaṃ,",
  "tha-ap211:1.4": "kevalaṃ vasudhaṃ imaṃ.",
  "tha-ap211:2.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap211:2.2": "bhavā sabbe samūhatā;",
  "tha-ap211:2.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap211:2.4": "sammāsambuddhasāsane.",
  "tha-ap211:3.1": "Sattavīse ito kappe,",
  "tha-ap211:3.2": "ahesuṃ caturo janā;",
  "tha-ap211:3.3": "Samantavaraṇā nāma,",
  "tha-ap211:3.4": "cakkavattī mahabbalā.",
  "tha-ap211:4.1": "Paṭisambhidā catasso,",
  "tha-ap211:4.2": "…pe…",
  "tha-ap211:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap211:5.1": "Itthaṃ sudaṃ āyasmā ādhāradāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap211:6.1": "Ādhāradāyakattherassāpadānaṃ navamaṃ."
}