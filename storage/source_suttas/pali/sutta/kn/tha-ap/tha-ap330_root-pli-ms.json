{
  "tha-ap330:0.1": "Therāpadāna",
  "tha-ap330:0.2": "Umāpupphiyavagga",
  "tha-ap330:0.3": "8 Sumanāveḷiyattheraapadāna",
  "tha-ap330:1.1": "“Vessabhussa bhagavato,",
  "tha-ap330:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap330:1.3": "Sabbe janā samāgamma,",
  "tha-ap330:1.4": "mahāpūjaṃ karonti te.",
  "tha-ap330:2.1": "Sudhāya piṇḍaṃ katvāna,",
  "tha-ap330:2.2": "āveḷaṃ sumanāyahaṃ;",
  "tha-ap330:2.3": "Sīhāsanassa purato,",
  "tha-ap330:2.4": "abhiropesahaṃ tadā.",
  "tha-ap330:3.1": "Sabbe janā samāgamma,",
  "tha-ap330:3.2": "pekkhanti pupphamuttamaṃ;",
  "tha-ap330:3.3": "Kenidaṃ pūjitaṃ pupphaṃ,",
  "tha-ap330:3.4": "buddhaseṭṭhassa tādino.",
  "tha-ap330:4.1": "Tena cittappasādena,",
  "tha-ap330:4.2": "nimmānaṃ upapajjahaṃ;",
  "tha-ap330:4.3": "Anubhomi sakaṃ kammaṃ,",
  "tha-ap330:4.4": "pubbe sukatamattano.",
  "tha-ap330:5.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap330:5.2": "devattaṃ atha mānusaṃ;",
  "tha-ap330:5.3": "Sabbesānaṃ piyo homi,",
  "tha-ap330:5.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap330:6.1": "Nābhijānāmi kāyena,",
  "tha-ap330:6.2": "vācāya uda cetasā;",
  "tha-ap330:6.3": "Saṃyatānaṃ tapassīnaṃ,",
  "tha-ap330:6.4": "kataṃ akkositaṃ mayā.",
  "tha-ap330:7.1": "Tena sucaritenāhaṃ,",
  "tha-ap330:7.2": "cittassa paṇidhīhi ca;",
  "tha-ap330:7.3": "Sabbesaṃ pūjito homi,",
  "tha-ap330:7.4": "anakkosassidaṃ phalaṃ.",
  "tha-ap330:8.1": "Ito ekādase kappe,",
  "tha-ap330:8.2": "sahassārosi khattiyo;",
  "tha-ap330:8.3": "Sattaratanasampanno,",
  "tha-ap330:8.4": "cakkavattī mahabbalo.",
  "tha-ap330:9.1": "Paṭisambhidā catasso,",
  "tha-ap330:9.2": "…pe…",
  "tha-ap330:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap330:10.1": "Itthaṃ sudaṃ āyasmā sumanāveḷiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap330:11.1": "Sumanāveḷiyattherassāpadānaṃ aṭṭhamaṃ."
}