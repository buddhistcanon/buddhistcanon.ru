{
  "tha-ap418:0.1": "Therāpadāna",
  "tha-ap418:0.2": "Bhaddālivagga",
  "tha-ap418:0.3": "6. Ekadīpiyattheraapadāna",
  "tha-ap418:1.1": "“Parinibbute sugate,",
  "tha-ap418:1.2": "siddhatthe lokanāyake;",
  "tha-ap418:1.3": "Sadevamānusā sabbe,",
  "tha-ap418:1.4": "pūjenti dvipaduttamaṃ.",
  "tha-ap418:2.1": "Āropite ca citake,",
  "tha-ap418:2.2": "siddhatthe lokanāyake;",
  "tha-ap418:2.3": "Yathāsakena thāmena,",
  "tha-ap418:2.4": "citaṃ pūjenti satthuno.",
  "tha-ap418:3.1": "Avidūre citakassa,",
  "tha-ap418:3.2": "dīpaṃ ujjālayiṃ ahaṃ;",
  "tha-ap418:3.3": "Yāva udeti sūriyo,",
  "tha-ap418:3.4": "dīpaṃ me tāva ujjali.",
  "tha-ap418:4.1": "Tena kammena sukatena,",
  "tha-ap418:4.2": "cetanāpaṇidhīhi ca;",
  "tha-ap418:4.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap418:4.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap418:5.1": "Tattha me sukataṃ byamhaṃ,",
  "tha-ap418:5.2": "ekadīpīti ñāyati;",
  "tha-ap418:5.3": "Dīpasatasahassāni,",
  "tha-ap418:5.4": "byamhe pajjalare mama.",
  "tha-ap418:6.1": "Udayantova sūriyo,",
  "tha-ap418:6.2": "deho me jotate sadā;",
  "tha-ap418:6.3": "Sappabhāhi sarīrassa,",
  "tha-ap418:6.4": "āloko hoti me sadā.",
  "tha-ap418:7.1": "Tirokuṭṭaṃ tiroselaṃ,",
  "tha-ap418:7.2": "samatiggayha pabbataṃ;",
  "tha-ap418:7.3": "Samantā yojanasataṃ,",
  "tha-ap418:7.4": "passāmi cakkhunā ahaṃ.",
  "tha-ap418:8.1": "Sattasattatikkhattuñca,",
  "tha-ap418:8.2": "devaloke ramiṃ ahaṃ;",
  "tha-ap418:8.3": "Ekatiṃsatikkhattuñca,",
  "tha-ap418:8.4": "devarajjamakārayiṃ.",
  "tha-ap418:9.1": "Aṭṭhavīsatikkhattuñca,",
  "tha-ap418:9.2": "cakkavattī ahosahaṃ;",
  "tha-ap418:9.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap418:9.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap418:10.1": "Devalokā cavitvāna,",
  "tha-ap418:10.2": "nibbattiṃ mātukucchiyaṃ;",
  "tha-ap418:10.3": "Mātukucchigatassāpi,",
  "tha-ap418:10.4": "akkhi me na nimīlati.",
  "tha-ap418:11.1": "Jātiyā catuvassohaṃ,",
  "tha-ap418:11.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap418:11.3": "Aḍḍhamāse asampatte,",
  "tha-ap418:11.4": "arahattamapāpuṇiṃ.",
  "tha-ap418:12.1": "Dibbacakkhuṃ visodhesiṃ,",
  "tha-ap418:12.2": "bhavā sabbe samūhatā;",
  "tha-ap418:12.3": "Sabbe kilesā sañchinnā,",
  "tha-ap418:12.4": "ekadīpassidaṃ phalaṃ.",
  "tha-ap418:13.1": "Tirokuṭṭaṃ tiroselaṃ,",
  "tha-ap418:13.2": "pabbatañcāpi kevalaṃ;",
  "tha-ap418:13.3": "Samatikkamma passāmi,",
  "tha-ap418:13.4": "ekadīpassidaṃ phalaṃ.",
  "tha-ap418:14.1": "Visamā me samā honti,",
  "tha-ap418:14.2": "andhakāro na vijjati;",
  "tha-ap418:14.3": "Nāhaṃ passāmi timiraṃ,",
  "tha-ap418:14.4": "ekadīpassidaṃ phalaṃ.",
  "tha-ap418:15.1": "Catunnavutito kappe,",
  "tha-ap418:15.2": "yaṃ dīpamadadiṃ tadā;",
  "tha-ap418:15.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap418:15.4": "ekadīpassidaṃ phalaṃ.",
  "tha-ap418:16.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap418:16.2": "…pe…",
  "tha-ap418:16.3": "viharāmi anāsavo.",
  "tha-ap418:17.1": "Svāgataṃ vata me āsi,",
  "tha-ap418:17.2": "…pe…",
  "tha-ap418:17.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap418:18.1": "Paṭisambhidā catasso,",
  "tha-ap418:18.2": "…pe…",
  "tha-ap418:18.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap418:19.1": "Itthaṃ sudaṃ āyasmā ekadīpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap418:20.1": "Ekadīpiyattherassāpadānaṃ chaṭṭhaṃ."
}