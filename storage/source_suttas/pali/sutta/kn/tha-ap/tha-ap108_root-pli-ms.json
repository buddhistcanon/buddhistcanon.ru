{
  "tha-ap108:0.1": "Therāpadāna",
  "tha-ap108:0.2": "Bhikkhadāyivagga",
  "tha-ap108:0.3": "6. Udakapūjakattheraapadāna",
  "tha-ap108:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap108:1.2": "Gacchantaṃ anilañjase;",
  "tha-ap108:1.3": "Ghatāsanaṃva jalitaṃ,",
  "tha-ap108:1.4": "Ādittaṃva hutāsanaṃ.",
  "tha-ap108:2.1": "Pāṇinā udakaṃ gayha,",
  "tha-ap108:2.2": "ākāse ukkhipiṃ ahaṃ;",
  "tha-ap108:2.3": "Sampaṭicchi mahāvīro,",
  "tha-ap108:2.4": "buddho kāruṇiko isi.",
  "tha-ap108:3.1": "Antalikkhe ṭhito satthā,",
  "tha-ap108:3.2": "padumuttaranāmako;",
  "tha-ap108:3.3": "Mama saṅkappamaññāya,",
  "tha-ap108:3.4": "imaṃ gāthaṃ abhāsatha.",
  "tha-ap108:4.1": "‘Iminā dakadānena,",
  "tha-ap108:4.2": "pītiuppādanena ca;",
  "tha-ap108:4.3": "Kappasatasahassampi,",
  "tha-ap108:4.4": "duggatiṃ nupapajjati’.",
  "tha-ap108:5.1": "Tena kammena dvipadinda,",
  "tha-ap108:5.2": "lokajeṭṭha narāsabha;",
  "tha-ap108:5.3": "Pattomhi acalaṃ ṭhānaṃ,",
  "tha-ap108:5.4": "hitvā jayaparājayaṃ.",
  "tha-ap108:6.1": "Sahassarājanāmena,",
  "tha-ap108:6.2": "tayo te cakkavattino;",
  "tha-ap108:6.3": "Pañcasaṭṭhikappasate,",
  "tha-ap108:6.4": "cāturantā janādhipā.",
  "tha-ap108:7.1": "Paṭisambhidā catasso,",
  "tha-ap108:7.2": "…pe…",
  "tha-ap108:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap108:8.1": "Itthaṃ sudaṃ āyasmā udakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap108:9.1": "Udakapūjakattherassāpadānaṃ chaṭṭhaṃ."
}