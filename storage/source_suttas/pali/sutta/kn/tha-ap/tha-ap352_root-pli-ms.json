{
  "tha-ap352:0.1": "Therāpadāna",
  "tha-ap352:0.2": "Ekapadumiyavagga",
  "tha-ap352:0.3": "10. Ekañjaliyattheraapadāna",
  "tha-ap352:1.1": "“Romaso nāma sambuddho,",
  "tha-ap352:1.2": "nadīkūle vasī tadā;",
  "tha-ap352:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap352:1.4": "pītaraṃsiṃva bhāṇumaṃ.",
  "tha-ap352:2.1": "Ukkāmukhapahaṭṭhaṃva,",
  "tha-ap352:2.2": "khadiraṅgārasannibhaṃ;",
  "tha-ap352:2.3": "Osadhiṃva virocantaṃ,",
  "tha-ap352:2.4": "ekañjalimakāsahaṃ.",
  "tha-ap352:3.1": "Catunnavutito kappe,",
  "tha-ap352:3.2": "yaṃ añjalimakāsahaṃ;",
  "tha-ap352:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap352:3.4": "añjaliyā idaṃ phalaṃ.",
  "tha-ap352:4.1": "Paṭisambhidā catasso,",
  "tha-ap352:4.2": "…pe…",
  "tha-ap352:4.3": "kataṃ buddhassa sāsanaṃ”. (3133)",
  "tha-ap352:5.1": "Itthaṃ sudaṃ āyasmā ekañjaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap352:6.1": "Ekañjaliyattherassāpadānaṃ dasamaṃ.",
  "tha-ap352:7.1": "Ekapadumiyavaggo pañcatiṃsatimo.",
  "tha-ap352:8.1": "Tassuddānaṃ",
  "tha-ap352:9.1": "Padumī uppalamālī,",
  "tha-ap352:9.2": "dhajo kiṅkaṇikaṃ naḷaṃ;",
  "tha-ap352:9.3": "Campako padumo muṭṭhi,",
  "tha-ap352:9.4": "tindukekañjalī tathā;",
  "tha-ap352:9.5": "Cha ca saṭṭhi ca gāthāyo,",
  "tha-ap352:9.6": "gaṇitāyo vibhāvibhi."
}