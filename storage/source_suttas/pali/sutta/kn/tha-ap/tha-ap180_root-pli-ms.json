{
  "tha-ap180:0.1": "Therāpadāna",
  "tha-ap180:0.2": "Kumudavagga",
  "tha-ap180:0.3": "8. Maṇipūjakattheraapadāna",
  "tha-ap180:1.1": "“Orena himavantassa,",
  "tha-ap180:1.2": "nadikā sampavattatha;",
  "tha-ap180:1.3": "Tassā cānupakhettamhi,",
  "tha-ap180:1.4": "sayambhū vasate tadā.",
  "tha-ap180:2.1": "Maṇiṃ paggayha pallaṅkaṃ,",
  "tha-ap180:2.2": "sādhucittaṃ manoramaṃ;",
  "tha-ap180:2.3": "Pasannacitto sumano,",
  "tha-ap180:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap180:3.1": "Catunnavutito kappe,",
  "tha-ap180:3.2": "yaṃ maṇiṃ abhiropayiṃ;",
  "tha-ap180:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap180:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap180:4.1": "Ito ca dvādase kappe,",
  "tha-ap180:4.2": "sataraṃsīsanāmakā;",
  "tha-ap180:4.3": "Aṭṭha te āsuṃ rājāno,",
  "tha-ap180:4.4": "cakkavattī mahabbalā.",
  "tha-ap180:5.1": "Paṭisambhidā catasso,",
  "tha-ap180:5.2": "…pe…",
  "tha-ap180:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap180:6.1": "Itthaṃ sudaṃ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap180:7.1": "Maṇipūjakattherassāpadānaṃ aṭṭhamaṃ."
}