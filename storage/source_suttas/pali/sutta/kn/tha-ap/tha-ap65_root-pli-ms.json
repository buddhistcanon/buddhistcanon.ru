{
  "tha-ap65:0.1": "Therāpadāna",
  "tha-ap65:0.2": "Sakacintaniyavagga",
  "tha-ap65:0.3": "3. Paccāgamaniyattheraapadāna",
  "tha-ap65:1.1": "“Sindhuyā nadiyā tīre,",
  "tha-ap65:1.2": "cakkavāko ahaṃ tadā;",
  "tha-ap65:1.3": "Suddhasevālabhakkhohaṃ,",
  "tha-ap65:1.4": "pāpesu ca susaññato.",
  "tha-ap65:2.1": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap65:2.2": "gacchantaṃ anilañjase;",
  "tha-ap65:2.3": "Tuṇḍena sālaṃ paggayha,",
  "tha-ap65:2.4": "vipassissābhiropayiṃ.",
  "tha-ap65:3.1": "Yassa saddhā tathāgate,",
  "tha-ap65:3.2": "acalā supatiṭṭhitā;",
  "tha-ap65:3.3": "Tena cittappasādena,",
  "tha-ap65:3.4": "duggatiṃ so na gacchati.",
  "tha-ap65:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap65:4.2": "buddhaseṭṭhassa santike;",
  "tha-ap65:4.3": "Vihaṅgamena santena,",
  "tha-ap65:4.4": "subījaṃ ropitaṃ mayā.",
  "tha-ap65:5.1": "Ekanavutito kappe,",
  "tha-ap65:5.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap65:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap65:5.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap65:6.1": "Sucārudassanā nāma,",
  "tha-ap65:6.2": "aṭṭhete ekanāmakā;",
  "tha-ap65:6.3": "Kappe sattarase āsuṃ,",
  "tha-ap65:6.4": "cakkavattī mahabbalā.",
  "tha-ap65:7.1": "Paṭisambhidā catasso,",
  "tha-ap65:7.2": "…pe…",
  "tha-ap65:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap65:8.1": "Itthaṃ sudaṃ āyasmā paccāgamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap65:9.1": "Paccāgamaniyattherassāpadānaṃ tatiyaṃ."
}