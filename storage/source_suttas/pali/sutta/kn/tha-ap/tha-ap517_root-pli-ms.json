{
  "tha-ap517:0.1": "Therāpadāna",
  "tha-ap517:0.2": "Phaladāyakavagga",
  "tha-ap517:0.3": "5. Nāgapupphiyattheraapadāna",
  "tha-ap517:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap517:1.2": "Āhutīnaṃ paṭiggahaṃ;",
  "tha-ap517:1.3": "Rathiyaṃ paṭipajjantaṃ,",
  "tha-ap517:1.4": "Nāgapupphaṃ apūjayiṃ.",
  "tha-ap517:2.1": "Ekanavutito kappe,",
  "tha-ap517:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap517:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap517:2.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap517:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap517:3.2": "…pe…",
  "tha-ap517:3.3": "viharāmi anāsavo.",
  "tha-ap517:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap517:4.2": "…pe…",
  "tha-ap517:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap517:5.1": "Paṭisambhidā catasso,",
  "tha-ap517:5.2": "…pe…",
  "tha-ap517:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap517:6.1": "Itthaṃ sudaṃ āyasmā nāgapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap517:7.1": "Nāgapupphiyattherassāpadānaṃ pañcamaṃ."
}