{
  "tha-ap13:0.1": "Therāpadāna",
  "tha-ap13:0.2": "Sīhāsaniyavagga",
  "tha-ap13:0.3": "1. Sīhāsanadāyakattheraapadāna",
  "tha-ap13:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap13:1.2": "siddhatthe dvipaduttame;",
  "tha-ap13:1.3": "Vitthārike pāvacane,",
  "tha-ap13:1.4": "bāhujaññamhi sāsane.",
  "tha-ap13:2.1": "Pasannacitto sumano,",
  "tha-ap13:2.2": "sīhāsanamakāsahaṃ;",
  "tha-ap13:2.3": "Sīhāsanaṃ karitvāna,",
  "tha-ap13:2.4": "pādapīṭhamakāsahaṃ.",
  "tha-ap13:3.1": "Sīhāsane ca vassante,",
  "tha-ap13:3.2": "gharaṃ tattha akāsahaṃ;",
  "tha-ap13:3.3": "Tena cittappasādena,",
  "tha-ap13:3.4": "tusitaṃ upapajjahaṃ.",
  "tha-ap13:4.1": "Āyāmena catubbīsa-",
  "tha-ap13:4.2": "yojanaṃ āsi tāvade;",
  "tha-ap13:4.3": "Vimānaṃ sukataṃ mayhaṃ,",
  "tha-ap13:4.4": "vitthārena catuddasa.",
  "tha-ap13:5.1": "Sataṃ kaññāsahassāni,",
  "tha-ap13:5.2": "parivārenti maṃ sadā;",
  "tha-ap13:5.3": "Soṇṇamayañca pallaṅkaṃ,",
  "tha-ap13:5.4": "byamhe āsi sunimmitaṃ.",
  "tha-ap13:6.1": "Hatthiyānaṃ assayānaṃ,",
  "tha-ap13:6.2": "dibbayānaṃ upaṭṭhitaṃ;",
  "tha-ap13:6.3": "Pāsādā sivikā ceva,",
  "tha-ap13:6.4": "nibbattanti yadicchakaṃ.",
  "tha-ap13:7.1": "Maṇimayā ca pallaṅkā,",
  "tha-ap13:7.2": "aññe sāramayā bahū;",
  "tha-ap13:7.3": "Nibbattanti mamaṃ sabbe,",
  "tha-ap13:7.4": "sīhāsanassidaṃ phalaṃ.",
  "tha-ap13:8.1": "Soṇṇamayā rūpimayā,",
  "tha-ap13:8.2": "phalikāveḷuriyāmayā;",
  "tha-ap13:8.3": "Pādukā abhirūhāmi,",
  "tha-ap13:8.4": "pādapīṭhassidaṃ phalaṃ.",
  "tha-ap13:9.1": "Catunnavutito kappe,",
  "tha-ap13:9.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap13:9.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap13:9.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap13:10.1": "Tesattatimhito kappe,",
  "tha-ap13:10.2": "indanāmā tayo janā;",
  "tha-ap13:10.3": "Dvesattatimhito kappe,",
  "tha-ap13:10.4": "tayo sumananāmakā.",
  "tha-ap13:11.1": "Samasattatito kappe,",
  "tha-ap13:11.2": "tayo varuṇanāmakā;",
  "tha-ap13:11.3": "Sattaratanasampannā,",
  "tha-ap13:11.4": "catudīpamhi issarā.",
  "tha-ap13:12.1": "Paṭisambhidā catasso,",
  "tha-ap13:12.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap13:12.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap13:12.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap13:13.1": "Itthaṃ sudaṃ āyasmā sīhāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap13:14.1": "Sīhāsanadāyakattherassāpadānaṃ paṭhamaṃ."
}