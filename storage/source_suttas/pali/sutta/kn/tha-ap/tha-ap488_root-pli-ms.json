{
  "tha-ap488:0.1": "Therāpadāna",
  "tha-ap488:0.2": "Paṃsukūlavagga",
  "tha-ap488:0.3": "6. Dhātupūjakattheraapadāna",
  "tha-ap488:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap488:1.2": "siddhatthe lokanāyake;",
  "tha-ap488:1.3": "Mama ñātī samānetvā,",
  "tha-ap488:1.4": "dhātupūjaṃ akāsahaṃ.",
  "tha-ap488:2.1": "Catunnavutito kappe,",
  "tha-ap488:2.2": "yaṃ dhātumabhipūjayiṃ;",
  "tha-ap488:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap488:2.4": "dhātupūjāyidaṃ phalaṃ.",
  "tha-ap488:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap488:3.2": "…pe…",
  "tha-ap488:3.3": "viharāmi anāsavo.",
  "tha-ap488:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap488:4.2": "…pe…",
  "tha-ap488:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap488:5.1": "Paṭisambhidā catasso,",
  "tha-ap488:5.2": "…pe…",
  "tha-ap488:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap488:6.1": "Itthaṃ sudaṃ āyasmā dhātupūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap488:7.1": "Dhātupūjakattherassāpadānaṃ chaṭṭhaṃ."
}