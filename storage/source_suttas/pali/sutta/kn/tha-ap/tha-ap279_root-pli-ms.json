{
  "tha-ap279:0.1": "Therāpadāna",
  "tha-ap279:0.2": "Suvaṇṇabibbohanavagga",
  "tha-ap279:0.3": "7. Citakapūjakattheraapadāna",
  "tha-ap279:1.1": "“Candabhāgānadītīre,",
  "tha-ap279:1.2": "anusotaṃ vajāmahaṃ;",
  "tha-ap279:1.3": "Satta māluvapupphāni,",
  "tha-ap279:1.4": "citamāropayiṃ ahaṃ.",
  "tha-ap279:2.1": "Catunnavutito kappe,",
  "tha-ap279:2.2": "citakaṃ yamapūjayiṃ;",
  "tha-ap279:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap279:2.4": "citapūjāyidaṃ phalaṃ.",
  "tha-ap279:3.1": "Sattasaṭṭhimhito kappe,",
  "tha-ap279:3.2": "paṭijaggasanāmakā;",
  "tha-ap279:3.3": "Sattaratanasampannā,",
  "tha-ap279:3.4": "sattāsuṃ cakkavattino.",
  "tha-ap279:4.1": "Paṭisambhidā catasso,",
  "tha-ap279:4.2": "…pe…",
  "tha-ap279:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap279:5.1": "Itthaṃ sudaṃ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap279:6.1": "Citakapūjakattherassāpadānaṃ sattamaṃ."
}