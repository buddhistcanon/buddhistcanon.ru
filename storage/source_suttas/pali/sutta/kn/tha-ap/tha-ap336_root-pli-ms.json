{
  "tha-ap336:0.1": "Therāpadāna",
  "tha-ap336:0.2": "Gandhodakavagga",
  "tha-ap336:0.3": "4. Ekadussadāyakattheraapadāna",
  "tha-ap336:1.1": "“Nagare haṃsavatiyā,",
  "tha-ap336:1.2": "ahosiṃ tiṇahārako;",
  "tha-ap336:1.3": "Tiṇahārena jīvāmi,",
  "tha-ap336:1.4": "tena posemi dārake.",
  "tha-ap336:2.1": "Padumuttaro nāma jino,",
  "tha-ap336:2.2": "sabbadhammāna pāragū;",
  "tha-ap336:2.3": "Tamandhakāraṃ nāsetvā,",
  "tha-ap336:2.4": "uppajji lokanāyako.",
  "tha-ap336:3.1": "Sake ghare nisīditvā,",
  "tha-ap336:3.2": "evaṃ cintesahaṃ tadā;",
  "tha-ap336:3.3": "‘Buddho loke samuppanno,",
  "tha-ap336:3.4": "deyyadhammo ca natthi me.",
  "tha-ap336:4.1": "Idaṃ me sāṭakaṃ ekaṃ,",
  "tha-ap336:4.2": "natthi me koci dāyako;",
  "tha-ap336:4.3": "Dukkho nirayasamphasso,",
  "tha-ap336:4.4": "ropayissāmi dakkhiṇaṃ’.",
  "tha-ap336:5.1": "Evāhaṃ cintayitvāna,",
  "tha-ap336:5.2": "sakaṃ cittaṃ pasādayiṃ;",
  "tha-ap336:5.3": "Ekaṃ dussaṃ gahetvāna,",
  "tha-ap336:5.4": "buddhaseṭṭhassadāsahaṃ.",
  "tha-ap336:6.1": "Ekaṃ dussaṃ daditvāna,",
  "tha-ap336:6.2": "ukkuṭṭhiṃ sampavattayiṃ;",
  "tha-ap336:6.3": "Yadi buddho tuvaṃ vīra,",
  "tha-ap336:6.4": "tārehi maṃ mahāmuni.",
  "tha-ap336:7.1": "Padumuttaro lokavidū,",
  "tha-ap336:7.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap336:7.3": "Mama dānaṃ pakittento,",
  "tha-ap336:7.4": "akā me anumodanaṃ.",
  "tha-ap336:8.1": "‘Iminā ekadussena,",
  "tha-ap336:8.2": "cetanāpaṇidhīhi ca;",
  "tha-ap336:8.3": "Kappasatasahassāni,",
  "tha-ap336:8.4": "vinipātaṃ na gacchati.",
  "tha-ap336:9.1": "Chattiṃsakkhattuṃ devindo,",
  "tha-ap336:9.2": "devarajjaṃ karissati;",
  "tha-ap336:9.3": "Tettiṃsakkhattuṃ rājā ca,",
  "tha-ap336:9.4": "cakkavattī bhavissati;",
  "tha-ap336:9.5": "Padesarajjaṃ vipulaṃ,",
  "tha-ap336:9.6": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap336:10.1": "Devaloke manusse vā,",
  "tha-ap336:10.2": "saṃsaranto tuvaṃ bhave;",
  "tha-ap336:10.3": "Rūpavā guṇasampanno,",
  "tha-ap336:10.4": "anavakkantadehavā;",
  "tha-ap336:10.5": "Akkhobhaṃ amitaṃ dussaṃ,",
  "tha-ap336:10.6": "labhissati yadicchakaṃ’.",
  "tha-ap336:11.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap336:11.2": "jalajuttamanāmako;",
  "tha-ap336:11.3": "Nabhaṃ abbhuggamī dhīro,",
  "tha-ap336:11.4": "haṃsarājāva ambare.",
  "tha-ap336:12.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap336:12.2": "devattaṃ atha mānusaṃ;",
  "tha-ap336:12.3": "Bhoge me ūnatā natthi,",
  "tha-ap336:12.4": "ekadussassidaṃ phalaṃ.",
  "tha-ap336:13.1": "Paduddhāre paduddhāre,",
  "tha-ap336:13.2": "dussaṃ nibbattate mamaṃ;",
  "tha-ap336:13.3": "Heṭṭhā dussamhi tiṭṭhāmi,",
  "tha-ap336:13.4": "upari chadanaṃ mama.",
  "tha-ap336:14.1": "Cakkavāḷamupādāya,",
  "tha-ap336:14.2": "sakānanaṃ sapabbataṃ;",
  "tha-ap336:14.3": "Icchamāno cahaṃ ajja,",
  "tha-ap336:14.4": "dussehi chādayeyyahaṃ.",
  "tha-ap336:15.1": "Teneva ekadussena,",
  "tha-ap336:15.2": "saṃsaranto bhavābhave;",
  "tha-ap336:15.3": "Suvaṇṇavaṇṇo hutvāna,",
  "tha-ap336:15.4": "saṃsarāmi bhavābhave.",
  "tha-ap336:16.1": "Vipākaṃ ekadussassa,",
  "tha-ap336:16.2": "najjhagaṃ katthacikkhayaṃ;",
  "tha-ap336:16.3": "Ayaṃ me antimā jāti,",
  "tha-ap336:16.4": "vipaccati idhāpi me.",
  "tha-ap336:17.1": "Satasahassito kappe,",
  "tha-ap336:17.2": "yaṃ dussamadadiṃ tadā;",
  "tha-ap336:17.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap336:17.4": "ekadussassidaṃ phalaṃ.",
  "tha-ap336:18.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap336:18.2": "bhavā sabbe samūhatā;",
  "tha-ap336:18.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap336:18.4": "viharāmi anāsavo.",
  "tha-ap336:19.1": "Paṭisambhidā catasso,",
  "tha-ap336:19.2": "…pe…",
  "tha-ap336:19.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap336:20.1": "Itthaṃ sudaṃ āyasmā ekadussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap336:21.1": "Ekadussadāyakattherassāpadānaṃ catutthaṃ."
}