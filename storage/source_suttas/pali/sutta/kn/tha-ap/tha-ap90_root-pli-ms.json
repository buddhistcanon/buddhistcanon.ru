{
  "tha-ap90:0.1": "Therāpadāna",
  "tha-ap90:0.2": "Timiravagga",
  "tha-ap90:0.3": "8. Saddasaññakattheraapadāna",
  "tha-ap90:1.1": "“Pabbate himavantamhi,",
  "tha-ap90:1.2": "vasāmi paṇṇasanthare;",
  "tha-ap90:1.3": "Phussassa dhammaṃ bhaṇato,",
  "tha-ap90:1.4": "sadde cittaṃ pasādayiṃ.",
  "tha-ap90:2.1": "Dvenavute ito kappe,",
  "tha-ap90:2.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap90:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap90:2.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap90:3.1": "Paṭisambhidā catasso,",
  "tha-ap90:3.2": "…pe…",
  "tha-ap90:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap90:4.1": "Itthaṃ sudaṃ āyasmā saddasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap90:5.1": "Saddasaññakattherassāpadānaṃ aṭṭhamaṃ."
}