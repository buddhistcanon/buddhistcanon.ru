{
  "tha-ap228:0.1": "Therāpadāna",
  "tha-ap228:0.2": "Ālambaṇadāyakavagga",
  "tha-ap228:0.3": "6 Aṅkolapupphiyattheraapadāna",
  "tha-ap228:1.1": "“Nārado iti me nāmaṃ,",
  "tha-ap228:1.2": "kassapo iti maṃ vidū;",
  "tha-ap228:1.3": "Addasaṃ samaṇānaggaṃ,",
  "tha-ap228:1.4": "vipassiṃ devasakkataṃ.",
  "tha-ap228:2.1": "Anubyañjanadharaṃ buddhaṃ,",
  "tha-ap228:2.2": "āhutīnaṃ paṭiggahaṃ;",
  "tha-ap228:2.3": "Aṅkolapupphaṃ paggayha,",
  "tha-ap228:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap228:3.1": "Ekanavutito kappe,",
  "tha-ap228:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap228:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap228:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap228:4.1": "Catusattatito kappe,",
  "tha-ap228:4.2": "romaso nāma khattiyo;",
  "tha-ap228:4.3": "Āmukkamālābharaṇo,",
  "tha-ap228:4.4": "sayoggabalavāhano.",
  "tha-ap228:5.1": "Paṭisambhidā catasso,",
  "tha-ap228:5.2": "…pe…",
  "tha-ap228:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap228:6.1": "Itthaṃ sudaṃ āyasmā aṅkolapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap228:7.1": "Aṅkolapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}