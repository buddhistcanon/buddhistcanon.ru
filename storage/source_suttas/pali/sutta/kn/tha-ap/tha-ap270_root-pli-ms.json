{
  "tha-ap270:0.1": "Therāpadāna",
  "tha-ap270:0.2": "Padumukkhipavagga",
  "tha-ap270:0.3": "8 Saḷalapupphiyattheraapadāna",
  "tha-ap270:1.1": "“Candabhāgānadītīre,",
  "tha-ap270:1.2": "ahosiṃ kinnaro tadā;",
  "tha-ap270:1.3": "Vipassiṃ addasaṃ buddhaṃ,",
  "tha-ap270:1.4": "raṃsijālasamākulaṃ.",
  "tha-ap270:2.1": "Pasannacitto sumano,",
  "tha-ap270:2.2": "paramāya ca pītiyā;",
  "tha-ap270:2.3": "Paggayha saḷalaṃ pupphaṃ,",
  "tha-ap270:2.4": "vipassiṃ okiriṃ ahaṃ.",
  "tha-ap270:3.1": "Ekanavutito kappe,",
  "tha-ap270:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap270:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap270:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap270:4.1": "Paṭisambhidā catasso,",
  "tha-ap270:4.2": "…pe…",
  "tha-ap270:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap270:5.1": "Itthaṃ sudaṃ āyasmā saḷalapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap270:6.1": "Saḷalapupphiyattherassāpadānaṃ aṭṭhamaṃ."
}