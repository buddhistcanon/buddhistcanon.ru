{
  "tha-ap393:0.1": "Therāpadāna",
  "tha-ap393:0.2": "Pilindavacchavagga",
  "tha-ap393:0.3": "1. Pilindavacchattheraapadāna",
  "tha-ap393:1.1": "“Nagare haṃsavatiyā,",
  "tha-ap393:1.2": "āsiṃ dovāriko ahaṃ;",
  "tha-ap393:1.3": "Akkhobhaṃ amitaṃ bhogaṃ,",
  "tha-ap393:1.4": "ghare sannicitaṃ mama.",
  "tha-ap393:2.1": "Rahogato nisīditvā,",
  "tha-ap393:2.2": "pahaṃsitvāna mānasaṃ;",
  "tha-ap393:2.3": "Nisajja pāsādavare,",
  "tha-ap393:2.4": "evaṃ cintesahaṃ tadā.",
  "tha-ap393:3.0": "1.1. Cintanākāra",
  "tha-ap393:3.1": "‘Bahū medhigatā bhogā,",
  "tha-ap393:3.2": "phītaṃ antepuraṃ mama;",
  "tha-ap393:3.3": "Rājāpi sannimantesi,",
  "tha-ap393:3.4": "ānando pathavissaro.",
  "tha-ap393:4.1": "Ayañca buddho uppanno,",
  "tha-ap393:4.2": "adhiccuppattiko muni;",
  "tha-ap393:4.3": "Saṃvijjanti ca me bhogā,",
  "tha-ap393:4.4": "dānaṃ dassāmi satthuno.",
  "tha-ap393:5.1": "Padumena rājaputtena,",
  "tha-ap393:5.2": "dinnaṃ dānavaraṃ jine;",
  "tha-ap393:5.3": "Hatthināge ca pallaṅke,",
  "tha-ap393:5.4": "apassenañcanappakaṃ.",
  "tha-ap393:6.1": "Ahampi dānaṃ dassāmi,",
  "tha-ap393:6.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:6.3": "Adinnapubbamaññesaṃ,",
  "tha-ap393:6.4": "bhavissaṃ ādikammiko.",
  "tha-ap393:7.1": "Cintetvāhaṃ bahuvidhaṃ,",
  "tha-ap393:7.2": "yāge yassa sukhaṃphalaṃ;",
  "tha-ap393:7.3": "Parikkhāradānamaddakkhiṃ,",
  "tha-ap393:7.4": "mama saṅkappapūraṇaṃ.",
  "tha-ap393:8.1": "Parikkhārāni dassāmi,",
  "tha-ap393:8.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:8.3": "Adinnapubbamaññesaṃ,",
  "tha-ap393:8.4": "bhavissaṃ ādikammiko’.",
  "tha-ap393:9.0": "1.2. Dānavatthusampādana",
  "tha-ap393:9.1": "Naḷakāre upāgamma,",
  "tha-ap393:9.2": "chattaṃ kāresi tāvade;",
  "tha-ap393:9.3": "Chattasatasahassāni,",
  "tha-ap393:9.4": "ekato sannipātayiṃ.",
  "tha-ap393:10.1": "Dussasatasahassāni,",
  "tha-ap393:10.2": "ekato sannipātayiṃ;",
  "tha-ap393:10.3": "Pattasatasahassāni,",
  "tha-ap393:10.4": "ekato sannipātayiṃ.",
  "tha-ap393:11.1": "Vāsiyo satthake cāpi,",
  "tha-ap393:11.2": "sūciyo nakhachedane;",
  "tha-ap393:11.3": "Heṭṭhāchatte ṭhapāpesiṃ,",
  "tha-ap393:11.4": "kāretvā tadanucchave.",
  "tha-ap393:12.1": "Vidhūpane tālavaṇṭe,",
  "tha-ap393:12.2": "morahatthe ca cāmare;",
  "tha-ap393:12.3": "Parissāvane teladhāre,",
  "tha-ap393:12.4": "kārayiṃ tadanucchave.",
  "tha-ap393:13.1": "Sūcighare aṃsabaddhe,",
  "tha-ap393:13.2": "athopi kāyabandhane;",
  "tha-ap393:13.3": "Ādhārake ca sukate,",
  "tha-ap393:13.4": "kārayiṃ tadanucchave.",
  "tha-ap393:14.1": "Paribhogabhājane ca,",
  "tha-ap393:14.2": "athopi lohathālake;",
  "tha-ap393:14.3": "Bhesajje pūrayitvāna,",
  "tha-ap393:14.4": "heṭṭhāchatte ṭhapesahaṃ.",
  "tha-ap393:15.1": "Vacaṃ usīraṃ laṭṭhimadhuṃ,",
  "tha-ap393:15.2": "pipphalī maricāni ca;",
  "tha-ap393:15.3": "Harītakiṃ siṅgīveraṃ,",
  "tha-ap393:15.4": "sabbaṃ pūresi bhājane.",
  "tha-ap393:16.1": "Upāhanā pādukāyo,",
  "tha-ap393:16.2": "atho udakapuñchane;",
  "tha-ap393:16.3": "Kattaradaṇḍe sukate,",
  "tha-ap393:16.4": "kārayiṃ tadanucchave.",
  "tha-ap393:17.1": "Osadhañjananāḷī ca,",
  "tha-ap393:17.2": "salākā dhammakuttarā;",
  "tha-ap393:17.3": "Kuñcikā pañcavaṇṇehi,",
  "tha-ap393:17.4": "sibbite kuñcikāghare.",
  "tha-ap393:18.1": "Āyoge dhūmanette ca,",
  "tha-ap393:18.2": "athopi dīpadhārake;",
  "tha-ap393:18.3": "Tumbake ca karaṇḍe ca,",
  "tha-ap393:18.4": "kārayiṃ tadanucchave.",
  "tha-ap393:19.1": "Saṇḍāse pipphale ceva,",
  "tha-ap393:19.2": "athopi malahārake;",
  "tha-ap393:19.3": "Bhesajjathavike ceva,",
  "tha-ap393:19.4": "kārayiṃ tadanucchave.",
  "tha-ap393:20.1": "Āsandiyo pīṭhake ca,",
  "tha-ap393:20.2": "pallaṅke caturomaye;",
  "tha-ap393:20.3": "Tadanucchave kārayitvā,",
  "tha-ap393:20.4": "heṭṭhāchatte ṭhapesahaṃ.",
  "tha-ap393:21.1": "Uṇṇābhisī tūlabhisī,",
  "tha-ap393:21.2": "athopi pīṭhikābhisī;",
  "tha-ap393:21.3": "Bimbohane ca sukate,",
  "tha-ap393:21.4": "kārayiṃ tadanucchave.",
  "tha-ap393:22.1": "Kuruvinde madhusitthe,",
  "tha-ap393:22.2": "telaṃ hatthappatāpakaṃ;",
  "tha-ap393:22.3": "Sipāṭiphalake sucī,",
  "tha-ap393:22.4": "mañcaṃ attharaṇena ca.",
  "tha-ap393:23.1": "Senāsane pādapuñche,",
  "tha-ap393:23.2": "sayanāsanadaṇḍake;",
  "tha-ap393:23.3": "Dantapoṇe ca āṭalī,",
  "tha-ap393:23.4": "sīsālepanagandhake.",
  "tha-ap393:24.1": "Araṇī phalapīṭhe ca,",
  "tha-ap393:24.2": "pattapidhānathālake;",
  "tha-ap393:24.3": "Udakassa kaṭacchū ca,",
  "tha-ap393:24.4": "cuṇṇakaṃ rajanambaṇaṃ.",
  "tha-ap393:25.1": "Sammajjanaṃ udapattaṃ,",
  "tha-ap393:25.2": "tathā vassikasāṭikaṃ;",
  "tha-ap393:25.3": "Nisīdanaṃ kaṇḍucchādi,",
  "tha-ap393:25.4": "atha antaravāsakaṃ.",
  "tha-ap393:26.1": "Uttarāsaṅgasaṅghāṭī,",
  "tha-ap393:26.2": "natthukaṃ mukhasodhanaṃ;",
  "tha-ap393:26.3": "Biḷaṅgaloṇaṃ pahūtañca,",
  "tha-ap393:26.4": "madhuñca dadhipānakaṃ.",
  "tha-ap393:27.1": "Dhūpaṃ sitthaṃ pilotiñca,",
  "tha-ap393:27.2": "mukhapuñchanasuttakaṃ;",
  "tha-ap393:27.3": "Dātabbaṃ nāma yaṃ atthi,",
  "tha-ap393:27.4": "yañca kappati satthuno.",
  "tha-ap393:28.1": "Sabbametaṃ samānetvā,",
  "tha-ap393:28.2": "ānandaṃ upasaṅkamiṃ;",
  "tha-ap393:28.3": "Upasaṅkamma rājānaṃ,",
  "tha-ap393:28.4": "janetāraṃ mahesino;",
  "tha-ap393:28.5": "Sirasā abhivādetvā,",
  "tha-ap393:28.6": "idaṃ vacanamabraviṃ.",
  "tha-ap393:29.0": "1.3. Dānokāsayācanā",
  "tha-ap393:29.1": "‘Ekato jātasaṃvaddhā,",
  "tha-ap393:29.2": "ubhinnaṃ ekato manaṃ;",
  "tha-ap393:29.3": "Sādhāraṇā sukhadukkhe,",
  "tha-ap393:29.4": "ubho ca anuvattakā.",
  "tha-ap393:30.1": "Atthi cetasikaṃ dukkhaṃ,",
  "tha-ap393:30.2": "tavādheyyaṃ arindama;",
  "tha-ap393:30.3": "Yadi sakkosi taṃ dukkhaṃ,",
  "tha-ap393:30.4": "vinodeyyāsi khattiya’.",
  "tha-ap393:31.1": "‘Tava dukkhaṃ mama dukkhaṃ,",
  "tha-ap393:31.2": "Ubhinnaṃ ekato mano;",
  "tha-ap393:31.3": "Niṭṭhitanti vijānāhi,",
  "tha-ap393:31.4": "Mamādheyyaṃ sace tuvaṃ’.",
  "tha-ap393:32.1": "‘Jānāhi kho mahārāja,",
  "tha-ap393:32.2": "dukkhaṃ me dubbinodayaṃ;",
  "tha-ap393:32.3": "Pahu samāno gajjasu,",
  "tha-ap393:32.4": "ekaṃ te duccajaṃ varaṃ.",
  "tha-ap393:33.1": "Yāvatā vijite atthi,",
  "tha-ap393:33.2": "yāvatā mama jīvitaṃ;",
  "tha-ap393:33.3": "Etehi yadi te attho,",
  "tha-ap393:33.4": "dassāmi avikampito.",
  "tha-ap393:34.1": "Gajjitaṃ kho tayā deva,",
  "tha-ap393:34.2": "micchā taṃ bahu gajjitaṃ;",
  "tha-ap393:34.3": "Jānissāmi tuvaṃ ajja,",
  "tha-ap393:34.4": "sabbadhamme patiṭṭhitaṃ’.",
  "tha-ap393:35.1": "‘Atibāḷhaṃ nipīḷesi,",
  "tha-ap393:35.2": "dadamānassa me sato;",
  "tha-ap393:35.3": "Kiṃ te me pīḷitenattho,",
  "tha-ap393:35.4": "patthitaṃ te kathehi me’.",
  "tha-ap393:36.1": "‘Icchāmahaṃ mahārāja,",
  "tha-ap393:36.2": "buddhaseṭṭhaṃ anuttaraṃ;",
  "tha-ap393:36.3": "Bhojayissāmi sambuddhaṃ,",
  "tha-ap393:36.4": "vajjaṃ me māhu jīvitaṃ’.",
  "tha-ap393:37.1": "‘Aññaṃ tehaṃ varaṃ dammi,",
  "tha-ap393:37.2": "mā yācittho tathāgataṃ;",
  "tha-ap393:37.3": "Adeyyo kassaci buddho,",
  "tha-ap393:37.4": "maṇi jotiraso yathā’.",
  "tha-ap393:38.1": "‘Nanu te gajjitaṃ deva,",
  "tha-ap393:38.2": "yāva jīvitamattano;",
  "tha-ap393:38.3": "Jīvitaṃ dadamānena,",
  "tha-ap393:38.4": "yuttaṃ dātuṃ tathāgataṃ’.",
  "tha-ap393:39.1": "‘Ṭhapanīyo mahāvīro,",
  "tha-ap393:39.2": "adeyyo kassaci jino;",
  "tha-ap393:39.3": "Na me paṭissuto buddho,",
  "tha-ap393:39.4": "varassu amitaṃ dhanaṃ’.",
  "tha-ap393:40.1": "‘Vinicchayaṃ pāpuṇāma,",
  "tha-ap393:40.2": "pucchissāma vinicchaye;",
  "tha-ap393:40.3": "Yathāsaṇṭhaṃ kathessanti,",
  "tha-ap393:40.4": "paṭipucchāma taṃ tathā’.",
  "tha-ap393:41.1": "Rañño hatthe gahetvāna,",
  "tha-ap393:41.2": "agamāsiṃ vinicchayaṃ;",
  "tha-ap393:41.3": "Purato akkhadassānaṃ,",
  "tha-ap393:41.4": "idaṃ vacanamabraviṃ.",
  "tha-ap393:42.1": "‘Suṇantu me akkhadassā,",
  "tha-ap393:42.2": "rājā varamadāsi me;",
  "tha-ap393:42.3": "Na kiñci ṭhapayitvāna,",
  "tha-ap393:42.4": "jīvitampi pavārayi.",
  "tha-ap393:43.1": "Tassa me varadinnassa,",
  "tha-ap393:43.2": "buddhaseṭṭhaṃ variṃ ahaṃ;",
  "tha-ap393:43.3": "Sudinno hoti me buddho,",
  "tha-ap393:43.4": "chindatha saṃsayaṃ mama’.",
  "tha-ap393:44.1": "‘Sossāma tava vacanaṃ,",
  "tha-ap393:44.2": "bhūmipālassa rājino;",
  "tha-ap393:44.3": "Ubhinnaṃ vacanaṃ sutvā,",
  "tha-ap393:44.4": "chindissāmettha saṃsayaṃ.",
  "tha-ap393:45.1": "Sabbaṃ deva tayā dinnaṃ,",
  "tha-ap393:45.2": "imassa sabbagāhikaṃ;",
  "tha-ap393:45.3": "Na kiñci ṭhapayitvāna,",
  "tha-ap393:45.4": "jīvitampi pavārayi’.",
  "tha-ap393:46.1": "‘Kicchappattova hutvāna,",
  "tha-ap393:46.2": "yācī varamanuttaraṃ;",
  "tha-ap393:46.3": "Imaṃ sudukkhitaṃ ñatvā,",
  "tha-ap393:46.4": "adāsiṃ sabbagāhikaṃ’.",
  "tha-ap393:47.1": "‘Parājayo tuvaṃ deva,",
  "tha-ap393:47.2": "assa deyyo tathāgato;",
  "tha-ap393:47.3": "Ubhinnaṃ saṃsayo chinno,",
  "tha-ap393:47.4": "yathāsaṇṭhamhi tiṭṭhatha’.",
  "tha-ap393:48.1": "Rājā tattheva ṭhatvāna,",
  "tha-ap393:48.2": "akkhadassetadabravi;",
  "tha-ap393:48.3": "‘Sammā mayhampi deyyātha,",
  "tha-ap393:48.4": "puna buddhaṃ labhāmahaṃ’.",
  "tha-ap393:49.1": "‘Pūretvā tava saṅkappaṃ,",
  "tha-ap393:49.2": "bhojayitvā tathāgataṃ;",
  "tha-ap393:49.3": "Puna deyyāsi sambuddhaṃ,",
  "tha-ap393:49.4": "ānandassa yasassino’.",
  "tha-ap393:50.0": "1.4. Nimantanakathā",
  "tha-ap393:50.1": "Akkhadassebhivādetvā,",
  "tha-ap393:50.2": "ānandañcāpi khattiyaṃ;",
  "tha-ap393:50.3": "Tuṭṭho pamudito hutvā,",
  "tha-ap393:50.4": "sambuddhamupasaṅkamiṃ.",
  "tha-ap393:51.1": "Upasaṅkamma sambuddhaṃ,",
  "tha-ap393:51.2": "oghatiṇṇamanāsavaṃ;",
  "tha-ap393:51.3": "Sirasā abhivādetvā,",
  "tha-ap393:51.4": "idaṃ vacanamabraviṃ.",
  "tha-ap393:52.1": "‘Vasīsatasahassehi,",
  "tha-ap393:52.2": "adhivāsehi cakkhuma;",
  "tha-ap393:52.3": "Hāsayanto mama cittaṃ,",
  "tha-ap393:52.4": "nivesanamupehi me’.",
  "tha-ap393:53.1": "Padumuttaro lokavidū,",
  "tha-ap393:53.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap393:53.3": "Mama saṅkappamaññāya,",
  "tha-ap393:53.4": "adhivāsesi cakkhumā.",
  "tha-ap393:54.1": "Adhivāsanamaññāya,",
  "tha-ap393:54.2": "abhivādiya satthuno;",
  "tha-ap393:54.3": "Haṭṭho udaggacittohaṃ,",
  "tha-ap393:54.4": "nivesanamupāgamiṃ.",
  "tha-ap393:55.0": "1.5. Dānapaṭiyādana",
  "tha-ap393:55.1": "Mittāmacce samānetvā,",
  "tha-ap393:55.2": "idaṃ vacanamabraviṃ;",
  "tha-ap393:55.3": "‘Sudullabho mayā laddho,",
  "tha-ap393:55.4": "maṇi jotiraso yathā.",
  "tha-ap393:56.1": "Kena taṃ pūjayissāma,",
  "tha-ap393:56.2": "appameyyo anūpamo;",
  "tha-ap393:56.3": "Atulo asamo dhīro,",
  "tha-ap393:56.4": "jino appaṭipuggalo.",
  "tha-ap393:57.1": "Tathāsamasamo ceva,",
  "tha-ap393:57.2": "adutiyo narāsabho;",
  "tha-ap393:57.3": "Dukkaraṃ adhikārañhi,",
  "tha-ap393:57.4": "buddhānucchavikaṃ mayā.",
  "tha-ap393:58.1": "Nānāpupphe samānetvā,",
  "tha-ap393:58.2": "karoma pupphamaṇḍapaṃ;",
  "tha-ap393:58.3": "Buddhānucchavikaṃ etaṃ,",
  "tha-ap393:58.4": "sabbapūjā bhavissati’.",
  "tha-ap393:59.1": "Uppalaṃ padumaṃ vāpi,",
  "tha-ap393:59.2": "vassikaṃ adhimuttakaṃ;",
  "tha-ap393:59.3": "Campakaṃ nāgapupphañca,",
  "tha-ap393:59.4": "maṇḍapaṃ kārayiṃ ahaṃ.",
  "tha-ap393:60.1": "Satāsanasahassāni,",
  "tha-ap393:60.2": "chattacchāyāya paññapiṃ;",
  "tha-ap393:60.3": "Pacchimaṃ āsanaṃ mayhaṃ,",
  "tha-ap393:60.4": "adhikaṃ satamagghati.",
  "tha-ap393:61.1": "Satāsanasahassāni,",
  "tha-ap393:61.2": "chattacchāyāya paññapiṃ;",
  "tha-ap393:61.3": "Paṭiyādetvā annapānaṃ,",
  "tha-ap393:61.4": "kālaṃ ārocayiṃ ahaṃ.",
  "tha-ap393:62.1": "Ārocitamhi kālamhi,",
  "tha-ap393:62.2": "padumuttaro mahāmuni;",
  "tha-ap393:62.3": "Vasīsatasahassehi,",
  "tha-ap393:62.4": "nivesanamupesi me.",
  "tha-ap393:63.1": "Dhārentaṃ uparicchattaṃ,",
  "tha-ap393:63.2": "suphullapupphamaṇḍape;",
  "tha-ap393:63.3": "Vasīsatasahassehi,",
  "tha-ap393:63.4": "nisīdi purisuttamo.",
  "tha-ap393:64.1": "‘Chattasatasahassāni,",
  "tha-ap393:64.2": "satasahassamāsanaṃ;",
  "tha-ap393:64.3": "Kappiyaṃ anavajjañca,",
  "tha-ap393:64.4": "paṭigaṇhāhi cakkhuma’.",
  "tha-ap393:65.1": "Padumuttaro lokavidū,",
  "tha-ap393:65.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap393:65.3": "Mamaṃ tāretukāmo so,",
  "tha-ap393:65.4": "sampaṭicchi mahāmuni.",
  "tha-ap393:66.0": "1.6. Dānakathā",
  "tha-ap393:66.1": "Bhikkhuno ekamekassa,",
  "tha-ap393:66.2": "Paccekaṃ pattamadāsahaṃ;",
  "tha-ap393:66.3": "Jahiṃsu sumbhakaṃ pattaṃ,",
  "tha-ap393:66.4": "Lohapattaṃ adhārayuṃ.",
  "tha-ap393:67.1": "Sattarattindivaṃ buddho,",
  "tha-ap393:67.2": "nisīdi pupphamaṇḍape;",
  "tha-ap393:67.3": "Bodhayanto bahū satte,",
  "tha-ap393:67.4": "dhammacakkaṃ pavattayi.",
  "tha-ap393:68.1": "Dhammacakkaṃ pavattento,",
  "tha-ap393:68.2": "heṭṭhato pupphamaṇḍape;",
  "tha-ap393:68.3": "Cullāsītisahassānaṃ,",
  "tha-ap393:68.4": "dhammābhisamayo ahu.",
  "tha-ap393:69.1": "Sattame divase patte,",
  "tha-ap393:69.2": "padumuttaro mahāmuni;",
  "tha-ap393:69.3": "Chattacchāyāyamāsīno,",
  "tha-ap393:69.4": "imā gāthā abhāsatha.",
  "tha-ap393:70.0": "1.7. Byākaraṇa",
  "tha-ap393:70.1": "‘Anūnakaṃ dānavaraṃ,",
  "tha-ap393:70.2": "yo me pādāsi māṇavo;",
  "tha-ap393:70.3": "Tamahaṃ kittayissāmi,",
  "tha-ap393:70.4": "suṇātha mama bhāsato.",
  "tha-ap393:71.1": "Hatthī assā rathā pattī,",
  "tha-ap393:71.2": "senā ca caturaṅginī;",
  "tha-ap393:71.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap393:71.4": "sabbadānassidaṃ phalaṃ.",
  "tha-ap393:72.1": "Hatthiyānaṃ assayānaṃ,",
  "tha-ap393:72.2": "sivikā sandamānikā;",
  "tha-ap393:72.3": "Upaṭṭhissantimaṃ niccaṃ,",
  "tha-ap393:72.4": "sabbadānassidaṃ phalaṃ.",
  "tha-ap393:73.1": "Saṭṭhi rathasahassāni,",
  "tha-ap393:73.2": "sabbālaṅkārabhūsitā;",
  "tha-ap393:73.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap393:73.4": "sabbadānassidaṃ phalaṃ.",
  "tha-ap393:74.1": "Saṭṭhi tūriyasahassāni,",
  "tha-ap393:74.2": "bheriyo samalaṅkatā;",
  "tha-ap393:74.3": "Vajjayissantimaṃ niccaṃ,",
  "tha-ap393:74.4": "sabbadānassidaṃ phalaṃ.",
  "tha-ap393:75.1": "Chaḷāsītisahassāni,",
  "tha-ap393:75.2": "nāriyo samalaṅkatā;",
  "tha-ap393:75.3": "Vicittavatthābharaṇā,",
  "tha-ap393:75.4": "āmukkamaṇikuṇḍalā.",
  "tha-ap393:76.1": "Aḷārapamhā hasulā,",
  "tha-ap393:76.2": "susaññā tanumajjhimā;",
  "tha-ap393:76.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap393:76.4": "sabbadānassidaṃ phalaṃ.",
  "tha-ap393:77.1": "Tiṃsakappasahassāni,",
  "tha-ap393:77.2": "devaloke ramissati;",
  "tha-ap393:77.3": "Sahassakkhattuṃ devindo,",
  "tha-ap393:77.4": "devarajjaṃ karissati.",
  "tha-ap393:78.1": "Sahassakkhattuṃ rājā ca,",
  "tha-ap393:78.2": "cakkavattī bhavissati;",
  "tha-ap393:78.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap393:78.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap393:79.1": "Devaloke vasantassa,",
  "tha-ap393:79.2": "puññakammasamaṅgino;",
  "tha-ap393:79.3": "Devalokapariyantaṃ,",
  "tha-ap393:79.4": "ratanachattaṃ dharissati.",
  "tha-ap393:80.1": "Icchissati yadā chāyaṃ,",
  "tha-ap393:80.2": "chadanaṃ dussapupphajaṃ;",
  "tha-ap393:80.3": "Imassa cittamaññāya,",
  "tha-ap393:80.4": "nibaddhaṃ chādayissati.",
  "tha-ap393:81.1": "Devalokā cavitvāna,",
  "tha-ap393:81.2": "sukkamūlena codito;",
  "tha-ap393:81.3": "Puññakammena saṃyutto,",
  "tha-ap393:81.4": "brahmabandhu bhavissati.",
  "tha-ap393:82.1": "Kappasatasahassamhi,",
  "tha-ap393:82.2": "okkākakulasambhavo;",
  "tha-ap393:82.3": "Gotamo nāma gottena,",
  "tha-ap393:82.4": "satthā loke bhavissati.",
  "tha-ap393:83.1": "Sabbametaṃ abhiññāya,",
  "tha-ap393:83.2": "gotamo sakyapuṅgavo;",
  "tha-ap393:83.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap393:83.4": "etadagge ṭhapessati.",
  "tha-ap393:84.1": "Pilindavacchanāmena,",
  "tha-ap393:84.2": "hessati satthusāvako;",
  "tha-ap393:84.3": "Devānaṃ asurānañca,",
  "tha-ap393:84.4": "gandhabbānañca sakkato.",
  "tha-ap393:85.1": "Bhikkhūnaṃ bhikkhunīnañca,",
  "tha-ap393:85.2": "gihīnañca tatheva so;",
  "tha-ap393:85.3": "Piyo hutvāna sabbesaṃ,",
  "tha-ap393:85.4": "viharissatināsavo’.",
  "tha-ap393:86.0": "1.8. Dānānisaṃsakathā",
  "tha-ap393:86.1": "Satasahasse kataṃ kammaṃ,",
  "tha-ap393:86.2": "phalaṃ dassesi me idha;",
  "tha-ap393:86.3": "Sumutto saravegova,",
  "tha-ap393:86.4": "kilese jhāpayī mama.",
  "tha-ap393:87.1": "Aho me sukataṃ kammaṃ,",
  "tha-ap393:87.2": "puññakkhette anuttare;",
  "tha-ap393:87.3": "Yattha kāraṃ karitvāna,",
  "tha-ap393:87.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap393:88.1": "Anūnakaṃ dānavaraṃ,",
  "tha-ap393:88.2": "adāsi yo hi māṇavo;",
  "tha-ap393:88.3": "Ādipubbaṅgamo āsi,",
  "tha-ap393:88.4": "tassa dānassidaṃ phalaṃ.",
  "tha-ap393:89.0": "1.8.1. Chattānisaṃsa",
  "tha-ap393:89.1": "Chatte ca sugate datvā,",
  "tha-ap393:89.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:89.3": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:89.4": "kammānucchavike mama.",
  "tha-ap393:90.1": "Sītaṃ uṇhaṃ na jānāmi,",
  "tha-ap393:90.2": "rajojallaṃ na limpati;",
  "tha-ap393:90.3": "Anupaddavo anīti ca,",
  "tha-ap393:90.4": "homi apacito sadā.",
  "tha-ap393:91.1": "Sukhumacchaviko homi,",
  "tha-ap393:91.2": "visadaṃ hoti mānasaṃ;",
  "tha-ap393:91.3": "Chattasatasahassāni,",
  "tha-ap393:91.4": "bhave saṃsarato mama.",
  "tha-ap393:92.1": "Sabbālaṅkārayuttāni,",
  "tha-ap393:92.2": "tassa kammassa vāhasā;",
  "tha-ap393:92.3": "Imaṃ jātiṃ ṭhapetvāna,",
  "tha-ap393:92.4": "matthake dhārayanti me.",
  "tha-ap393:93.1": "Kasmā imāya jātiyā,",
  "tha-ap393:93.2": "natthi me chattadhāraṇā;",
  "tha-ap393:93.3": "Mama sabbaṃ kataṃ kammaṃ,",
  "tha-ap393:93.4": "vimuttichattapattiyā.",
  "tha-ap393:94.0": "1.8.2. Dussānisaṃsa",
  "tha-ap393:94.1": "Dussāni sugate datvā,",
  "tha-ap393:94.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:94.3": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:94.4": "kammānucchavike mama.",
  "tha-ap393:95.1": "Suvaṇṇavaṇṇo virajo,",
  "tha-ap393:95.2": "sappabhāso patāpavā;",
  "tha-ap393:95.3": "Siniddhaṃ hoti me gattaṃ,",
  "tha-ap393:95.4": "bhave saṃsarato mama.",
  "tha-ap393:96.1": "Dussasatasahassāni,",
  "tha-ap393:96.2": "setā pītā ca lohitā;",
  "tha-ap393:96.3": "Dhārenti matthake mayhaṃ,",
  "tha-ap393:96.4": "dussadānassidaṃ phalaṃ.",
  "tha-ap393:97.1": "Koseyyakambaliyāni,",
  "tha-ap393:97.2": "khomakappāsikāni ca;",
  "tha-ap393:97.3": "Sabbattha paṭilabhāmi,",
  "tha-ap393:97.4": "tesaṃ nissandato ahaṃ.",
  "tha-ap393:98.0": "1.8.3. Pattānisaṃsa",
  "tha-ap393:98.1": "Patte sugate datvāna,",
  "tha-ap393:98.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:98.3": "Dasānisaṃse anubhomi,",
  "tha-ap393:98.4": "kammānucchavike mama.",
  "tha-ap393:99.1": "Suvaṇṇathāle maṇithāle,",
  "tha-ap393:99.2": "rajatepi ca thālake;",
  "tha-ap393:99.3": "Lohitaṅgamaye thāle,",
  "tha-ap393:99.4": "paribhuñjāmi sabbadā.",
  "tha-ap393:100.1": "Anupaddavo anīti ca,",
  "tha-ap393:100.2": "homi apacito sadā;",
  "tha-ap393:100.3": "Lābhī annassa pānassa,",
  "tha-ap393:100.4": "vatthassa sayanassa ca.",
  "tha-ap393:101.1": "Na vinassanti me bhogā,",
  "tha-ap393:101.2": "ṭhitacitto bhavāmahaṃ;",
  "tha-ap393:101.3": "Dhammakāmo sadā homi,",
  "tha-ap393:101.4": "appakleso anāsavo.",
  "tha-ap393:102.1": "Devaloke manusse vā,",
  "tha-ap393:102.2": "anubandhā ime guṇā;",
  "tha-ap393:102.3": "Chāyā yathāpi rukkhassa,",
  "tha-ap393:102.4": "sabbattha na jahanti maṃ.",
  "tha-ap393:103.0": "1.8.4. Vāsiānisaṃsa",
  "tha-ap393:103.1": "Cittabandhanasambaddhā,",
  "tha-ap393:103.2": "sukatā vāsiyo bahū;",
  "tha-ap393:103.3": "Datvāna buddhaseṭṭhassa,",
  "tha-ap393:103.4": "saṃghassa ca tathevahaṃ.",
  "tha-ap393:104.1": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:104.2": "kammānucchavike mama;",
  "tha-ap393:104.3": "Sūro homavisārī ca,",
  "tha-ap393:104.4": "vesārajjesu pāramī.",
  "tha-ap393:105.1": "Dhitivīriyavā homi,",
  "tha-ap393:105.2": "paggahītamano sadā;",
  "tha-ap393:105.3": "Kilesacchedanaṃ ñāṇaṃ,",
  "tha-ap393:105.4": "sukhumaṃ atulaṃ suciṃ;",
  "tha-ap393:105.5": "Sabbattha paṭilabhāmi,",
  "tha-ap393:105.6": "tassa nissandato ahaṃ.",
  "tha-ap393:106.0": "1.8.5. Satthakānisaṃsa",
  "tha-ap393:106.1": "Akakkase apharuse,",
  "tha-ap393:106.2": "sudhote satthake bahū;",
  "tha-ap393:106.3": "Pasannacitto datvāna,",
  "tha-ap393:106.4": "buddhe saṃghe tatheva ca.",
  "tha-ap393:107.1": "Pañcānisaṃse anubhomi,",
  "tha-ap393:107.2": "kammānucchavike mama;",
  "tha-ap393:107.3": "Kalyāṇamittaṃ vīriyaṃ,",
  "tha-ap393:107.4": "khantiñca mettasatthakaṃ.",
  "tha-ap393:108.1": "Taṇhāsallassa chinnattā,",
  "tha-ap393:108.2": "paññāsatthaṃ anuttaraṃ;",
  "tha-ap393:108.3": "Vajirena samaṃ ñāṇaṃ,",
  "tha-ap393:108.4": "tesaṃ nissandato labhe.",
  "tha-ap393:109.0": "1.8.6. Sūciānisaṃsa",
  "tha-ap393:109.1": "Sūciyo sugate datvā,",
  "tha-ap393:109.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:109.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:109.4": "kammānucchavike mama.",
  "tha-ap393:110.1": "Na saṃsayo kaṅkhacchedo,",
  "tha-ap393:110.2": "abhirūpo ca bhogavā;",
  "tha-ap393:110.3": "Tikkhapañño sadā homi,",
  "tha-ap393:110.4": "saṃsaranto bhavābhave.",
  "tha-ap393:111.1": "Gambhīraṃ nipuṇaṃ ṭhānaṃ,",
  "tha-ap393:111.2": "atthaṃ ñāṇena passayiṃ;",
  "tha-ap393:111.3": "Vajiraggasamaṃ ñāṇaṃ,",
  "tha-ap393:111.4": "hoti me tamaghātanaṃ.",
  "tha-ap393:112.0": "1.8.7. Nakhacchedanānisaṃsa",
  "tha-ap393:112.1": "Nakhacchedane sugate,",
  "tha-ap393:112.2": "datvā saṃghe gaṇuttame;",
  "tha-ap393:112.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:112.4": "kammānucchavike mama.",
  "tha-ap393:113.1": "Dāsidāse gavasse ca,",
  "tha-ap393:113.2": "bhatake nāṭake bahū;",
  "tha-ap393:113.3": "Nhāpite bhattake sūde,",
  "tha-ap393:113.4": "sabbattheva labhāmahaṃ.",
  "tha-ap393:114.0": "1.8.8. Vidhūpanatālavaṇṭānisaṃsa",
  "tha-ap393:114.1": "Vidhūpane sugate datvā,",
  "tha-ap393:114.2": "tālavaṇṭe ca sobhane;",
  "tha-ap393:114.3": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:114.4": "kammānucchavike mama.",
  "tha-ap393:115.1": "Sītaṃ uṇhaṃ na jānāmi,",
  "tha-ap393:115.2": "pariḷāho na vijjati;",
  "tha-ap393:115.3": "Darathaṃ nābhijānāmi,",
  "tha-ap393:115.4": "cittasantāpanaṃ mama.",
  "tha-ap393:116.1": "Rāgaggi dosamohaggi,",
  "tha-ap393:116.2": "mānaggi diṭṭhiaggi ca;",
  "tha-ap393:116.3": "Sabbaggī nibbutā mayhaṃ,",
  "tha-ap393:116.4": "tassa nissandato mama.",
  "tha-ap393:117.0": "1.8.9. Morahattha-cāmara",
  "tha-ap393:117.1": "Morahatthe cāmariyo,",
  "tha-ap393:117.2": "datvā saṃghe gaṇuttame;",
  "tha-ap393:117.3": "Upasantakilesohaṃ,",
  "tha-ap393:117.4": "viharāmi anaṅgaṇo.",
  "tha-ap393:118.0": "1.8.10. Parissāvana-dhammakara",
  "tha-ap393:118.1": "Parissāvane sugate,",
  "tha-ap393:118.2": "datvā dhammakaruttame;",
  "tha-ap393:118.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:118.4": "kammānucchavike mama.",
  "tha-ap393:119.1": "Sabbesaṃ samatikkamma,",
  "tha-ap393:119.2": "dibbaṃ āyuṃ labhāmahaṃ;",
  "tha-ap393:119.3": "Appasayho sadā homi,",
  "tha-ap393:119.4": "corapaccatthikehi vā.",
  "tha-ap393:120.1": "Satthena vā visena vā,",
  "tha-ap393:120.2": "vihesampi na kubbate;",
  "tha-ap393:120.3": "Antarāmaraṇaṃ natthi,",
  "tha-ap393:120.4": "tesaṃ nissandato mama.",
  "tha-ap393:121.0": "1.8.11. Teladhārānisaṃsa",
  "tha-ap393:121.1": "Teladhāre sugate datvā,",
  "tha-ap393:121.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:121.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:121.4": "kammānucchavike mama.",
  "tha-ap393:122.1": "Sucārurūpo subhaddo,",
  "tha-ap393:122.2": "susamuggatamānaso;",
  "tha-ap393:122.3": "Avikkhittamano homi,",
  "tha-ap393:122.4": "sabbārakkhehi rakkhito.",
  "tha-ap393:123.0": "1.8.12. Sūcigharānisaṃsa",
  "tha-ap393:123.1": "Sūcighare sugate datvā,",
  "tha-ap393:123.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:123.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:123.4": "kammānucchavike mama.",
  "tha-ap393:124.1": "Cetosukhaṃ kāyasukhaṃ,",
  "tha-ap393:124.2": "iriyāpathajaṃ sukhaṃ;",
  "tha-ap393:124.3": "Ime guṇe paṭilabhe,",
  "tha-ap393:124.4": "tassa nissandato ahaṃ.",
  "tha-ap393:125.0": "1.8.13. Aṃsabaddhānisaṃsa",
  "tha-ap393:125.1": "Aṃsabaddhe jine datvā,",
  "tha-ap393:125.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:125.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:125.4": "kammānucchavike mama.",
  "tha-ap393:126.1": "Saddhamme gādhaṃ vindāmi,",
  "tha-ap393:126.2": "Sarāmi dutiyaṃ bhavaṃ;",
  "tha-ap393:126.3": "Sabbattha succhavī homi,",
  "tha-ap393:126.4": "Tassa nissandato ahaṃ.",
  "tha-ap393:127.0": "1.8.14. Kāyabandhanānisaṃsa",
  "tha-ap393:127.1": "Kāyabandhe jine datvā,",
  "tha-ap393:127.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:127.3": "Chānisaṃse anubhomi,",
  "tha-ap393:127.4": "kammānucchavike mama.",
  "tha-ap393:128.1": "Samādhīsu na kampāmi,",
  "tha-ap393:128.2": "vasī homi samādhisu;",
  "tha-ap393:128.3": "Abhejjapariso homi,",
  "tha-ap393:128.4": "ādeyyavacano sadā.",
  "tha-ap393:129.1": "Upaṭṭhitasati homi,",
  "tha-ap393:129.2": "tāso mayhaṃ na vijjati;",
  "tha-ap393:129.3": "Devaloke manusse vā,",
  "tha-ap393:129.4": "anubandhā ime guṇā.",
  "tha-ap393:130.0": "1.8.15. Ādhārakānisaṃsa",
  "tha-ap393:130.1": "Ādhārake jine datvā,",
  "tha-ap393:130.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:130.3": "Pañcavaṇṇehi dāyādo,",
  "tha-ap393:130.4": "acalo homi kenaci.",
  "tha-ap393:131.1": "Ye keci me sutā dhammā,",
  "tha-ap393:131.2": "satiñāṇappabodhanā;",
  "tha-ap393:131.3": "Dhatā me na vinassanti,",
  "tha-ap393:131.4": "bhavanti suvinicchitā.",
  "tha-ap393:132.0": "1.8.16. Bhājanānisaṃsa",
  "tha-ap393:132.1": "Bhājane paribhoge ca,",
  "tha-ap393:132.2": "datvā buddhe gaṇuttame;",
  "tha-ap393:132.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:132.4": "kammānucchavike mama.",
  "tha-ap393:133.1": "Soṇṇamaye maṇimaye,",
  "tha-ap393:133.2": "athopi phalikāmaye;",
  "tha-ap393:133.3": "Lohitaṅgamaye ceva,",
  "tha-ap393:133.4": "labhāmi bhājane ahaṃ.",
  "tha-ap393:134.1": "Bhariyā dāsadāsī ca,",
  "tha-ap393:134.2": "hatthissarathapattike;",
  "tha-ap393:134.3": "Itthī patibbatā ceva,",
  "tha-ap393:134.4": "paribhogāni sabbadā.",
  "tha-ap393:135.1": "Vijjā mantapade ceva,",
  "tha-ap393:135.2": "vividhe āgame bahū;",
  "tha-ap393:135.3": "Sabbaṃ sippaṃ nisāmemi,",
  "tha-ap393:135.4": "paribhogāni sabbadā.",
  "tha-ap393:136.0": "1.8.17. Thālakānisaṃsa",
  "tha-ap393:136.1": "Thālake sugate datvā,",
  "tha-ap393:136.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:136.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:136.4": "kammānucchavike mama.",
  "tha-ap393:137.1": "Soṇṇamaye maṇimaye,",
  "tha-ap393:137.2": "athopi phalikāmaye;",
  "tha-ap393:137.3": "Lohitaṅgamaye ceva,",
  "tha-ap393:137.4": "labhāmi thālake ahaṃ.",
  "tha-ap393:138.1": "Asatthake phalamaye,",
  "tha-ap393:138.2": "atho pokkharapattake;",
  "tha-ap393:138.3": "Madhupānakasaṅkhe ca,",
  "tha-ap393:138.4": "labhāmi thālake ahaṃ.",
  "tha-ap393:139.1": "Vatte guṇe paṭipatti,",
  "tha-ap393:139.2": "ācārakiriyāsu ca;",
  "tha-ap393:139.3": "Ime guṇe paṭilabhe,",
  "tha-ap393:139.4": "tassa nissandato ahaṃ.",
  "tha-ap393:140.0": "1.8.18. Bhesajjānisaṃsa",
  "tha-ap393:140.1": "Bhesajjaṃ sugate datvā,",
  "tha-ap393:140.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:140.3": "Dasānisaṃse anubhomi,",
  "tha-ap393:140.4": "kammānucchavike mama.",
  "tha-ap393:141.1": "Āyuvā balavā dhīro,",
  "tha-ap393:141.2": "vaṇṇavā yasavā sukhī;",
  "tha-ap393:141.3": "Anupaddavo anīti ca,",
  "tha-ap393:141.4": "homi apacito sadā;",
  "tha-ap393:141.5": "Na me piyaviyogatthi,",
  "tha-ap393:141.6": "tassa nissandato mama.",
  "tha-ap393:142.0": "1.8.19. Upāhanānisaṃsa",
  "tha-ap393:142.1": "Upāhane jine datvā,",
  "tha-ap393:142.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:142.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:142.4": "kammānucchavike mama.",
  "tha-ap393:143.1": "Hatthiyānaṃ assayānaṃ,",
  "tha-ap393:143.2": "sivikā sandamānikā;",
  "tha-ap393:143.3": "Saṭṭhisatasahassāni,",
  "tha-ap393:143.4": "parivārenti maṃ sadā.",
  "tha-ap393:144.1": "Maṇimayā tambamayā,",
  "tha-ap393:144.2": "soṇṇarajatapādukā;",
  "tha-ap393:144.3": "Nibbattanti paduddhāre,",
  "tha-ap393:144.4": "bhave saṃsarato mama.",
  "tha-ap393:145.1": "Niyāmaṃ sati dhāvanti,",
  "tha-ap393:145.2": "āguācārasodhanaṃ;",
  "tha-ap393:145.3": "Ime guṇe paṭilabhe,",
  "tha-ap393:145.4": "tassa nissandato ahaṃ.",
  "tha-ap393:146.0": "1.8.20. Pādukānisaṃsa",
  "tha-ap393:146.1": "Pāduke sugate datvā,",
  "tha-ap393:146.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:146.3": "Iddhipādukamāruyha,",
  "tha-ap393:146.4": "viharāmi yadicchakaṃ.",
  "tha-ap393:147.0": "1.8.21. Udakapuñchanānisaṃsa",
  "tha-ap393:147.1": "Udakapuñchanacoḷe,",
  "tha-ap393:147.2": "datvā buddhe gaṇuttame;",
  "tha-ap393:147.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:147.4": "kammānucchavike mama.",
  "tha-ap393:148.1": "Suvaṇṇavaṇṇo virajo,",
  "tha-ap393:148.2": "sappabhāso patāpavā;",
  "tha-ap393:148.3": "Siniddhaṃ hoti me gattaṃ,",
  "tha-ap393:148.4": "rajojallaṃ na limpati;",
  "tha-ap393:148.5": "Ime guṇe paṭilabhe,",
  "tha-ap393:148.6": "tassa nissandato ahaṃ.",
  "tha-ap393:149.0": "1.8.22. Kattaradaṇḍānisaṃsa",
  "tha-ap393:149.1": "Kattaradaṇḍe sugate,",
  "tha-ap393:149.2": "datvā saṃghe gaṇuttame;",
  "tha-ap393:149.3": "Chānisaṃse anubhomi,",
  "tha-ap393:149.4": "kammānucchavike mama.",
  "tha-ap393:150.1": "Puttā mayhaṃ bahū honti,",
  "tha-ap393:150.2": "tāso mayhaṃ na vijjati;",
  "tha-ap393:150.3": "Appasayho sadā homi,",
  "tha-ap393:150.4": "sabbārakkhehi rakkhito;",
  "tha-ap393:150.5": "Khalitampi na jānāmi,",
  "tha-ap393:150.6": "abhantaṃ mānasaṃ mama.",
  "tha-ap393:151.0": "1.8.23. Osadhañjanānisaṃsa",
  "tha-ap393:151.1": "Osadhaṃ añjanaṃ datvā,",
  "tha-ap393:151.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:151.3": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:151.4": "kammānucchavike mama.",
  "tha-ap393:152.1": "Visālanayano homi,",
  "tha-ap393:152.2": "setapīto ca lohito;",
  "tha-ap393:152.3": "Anāvilapasannakkho,",
  "tha-ap393:152.4": "sabbarogavivajjito.",
  "tha-ap393:153.1": "Labhāmi dibbanayanaṃ,",
  "tha-ap393:153.2": "paññācakkhuṃ anuttaraṃ;",
  "tha-ap393:153.3": "Ime guṇe paṭilabhe,",
  "tha-ap393:153.4": "tassa nissandato ahaṃ.",
  "tha-ap393:154.0": "1.8.24. Kuñcikānisaṃsa",
  "tha-ap393:154.1": "Kuñcike sugate datvā,",
  "tha-ap393:154.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:154.3": "Dhammadvāravivaraṇaṃ,",
  "tha-ap393:154.4": "labhāmi ñāṇakuñcikaṃ.",
  "tha-ap393:155.0": "1.8.25. Kuñcikāgharānisaṃsa",
  "tha-ap393:155.1": "Kuñcikānaṃ ghare datvā,",
  "tha-ap393:155.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:155.3": "Dvānisaṃse anubhomi,",
  "tha-ap393:155.4": "kammānucchavike mama;",
  "tha-ap393:155.5": "Appakodho anāyāso,",
  "tha-ap393:155.6": "saṃsaranto bhave ahaṃ.",
  "tha-ap393:156.0": "1.8.26. Āyogānisaṃsa",
  "tha-ap393:156.1": "Āyoge sugate datvā,",
  "tha-ap393:156.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:156.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:156.4": "kammānucchavike mama.",
  "tha-ap393:157.1": "Samādhīsu na kampāmi,",
  "tha-ap393:157.2": "vasī homi samādhisu;",
  "tha-ap393:157.3": "Abhejjapariso homi,",
  "tha-ap393:157.4": "ādeyyavacano sadā;",
  "tha-ap393:157.5": "Jāyati bhogasampatti,",
  "tha-ap393:157.6": "bhave saṃsarato mama.",
  "tha-ap393:158.0": "1.8.27. Dhūmanettānisaṃsa",
  "tha-ap393:158.1": "Dhūmanette jine datvā,",
  "tha-ap393:158.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:158.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:158.4": "kammānucchavike mama.",
  "tha-ap393:159.1": "Sati me ujukā hoti,",
  "tha-ap393:159.2": "susambandhā ca nhāravo;",
  "tha-ap393:159.3": "Labhāmi dibbanayanaṃ,",
  "tha-ap393:159.4": "tassa nissandato ahaṃ.",
  "tha-ap393:160.0": "1.8.28. Dīpadhārānisaṃsa",
  "tha-ap393:160.1": "Dīpadhāre jine datvā,",
  "tha-ap393:160.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:160.3": "Tīṇānisaṃse anubhomi,",
  "tha-ap393:160.4": "kammānucchavike mama.",
  "tha-ap393:161.1": "Jātimā aṅgasampanno,",
  "tha-ap393:161.2": "paññavā buddhasammato;",
  "tha-ap393:161.3": "Ime guṇe paṭilabhe,",
  "tha-ap393:161.4": "tassa nissandato ahaṃ.",
  "tha-ap393:162.0": "1.8.29. Tumbaka-karaṇḍa",
  "tha-ap393:162.1": "Tumbake ca karaṇḍe ca,",
  "tha-ap393:162.2": "datvā buddhe gaṇuttame;",
  "tha-ap393:162.3": "Dasānisaṃse anubhomi,",
  "tha-ap393:162.4": "kammānucchavike mama.",
  "tha-ap393:163.1": "Sugutto sukhasamaṅgī,",
  "tha-ap393:163.2": "Mahāyaso tathāgati;",
  "tha-ap393:163.3": "Vipattivigato sukhumālo,",
  "tha-ap393:163.4": "Sabbītiparivajjito.",
  "tha-ap393:164.1": "Vipule ca guṇe lābhī,",
  "tha-ap393:164.2": "samāva calanā mama;",
  "tha-ap393:164.3": "Suvivajjitaubbego,",
  "tha-ap393:164.4": "tumbake ca karaṇḍake.",
  "tha-ap393:165.1": "Labhāmi caturo vaṇṇe,",
  "tha-ap393:165.2": "hatthissaratanāni ca;",
  "tha-ap393:165.3": "Tāni me na vinassanti,",
  "tha-ap393:165.4": "tumbadāne idaṃ phalaṃ.",
  "tha-ap393:166.0": "1.8.30. Malaharaṇānisaṃsa",
  "tha-ap393:166.1": "Malaharaṇiyo datvā,",
  "tha-ap393:166.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:166.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:166.4": "kammānucchavike mama.",
  "tha-ap393:167.1": "Sabbalakkhaṇasampanno,",
  "tha-ap393:167.2": "āyupaññāsamāhito;",
  "tha-ap393:167.3": "Sabbāyāsavinimutto,",
  "tha-ap393:167.4": "kāyo me hoti sabbadā.",
  "tha-ap393:168.0": "1.8.31. Pipphalānisaṃsa",
  "tha-ap393:168.1": "Taṇudhāre sunisite,",
  "tha-ap393:168.2": "saṃghe datvāna pipphale;",
  "tha-ap393:168.3": "Kilesakantanaṃ ñāṇaṃ,",
  "tha-ap393:168.4": "labhāmi atulaṃ suciṃ.",
  "tha-ap393:169.0": "1.8.32. Saṇḍāsānisaṃsa",
  "tha-ap393:169.1": "Saṇḍāse sugate datvā,",
  "tha-ap393:169.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:169.3": "Kilesabhañjanaṃ ñāṇaṃ,",
  "tha-ap393:169.4": "labhāmi atulaṃ suciṃ.",
  "tha-ap393:170.0": "1.8.33. Natthukānisaṃsa",
  "tha-ap393:170.1": "Natthuke sugate datvā,",
  "tha-ap393:170.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:170.3": "Aṭṭhānisaṃse anubhomi,",
  "tha-ap393:170.4": "kammānucchavike mama.",
  "tha-ap393:171.1": "Saddhaṃ sīlaṃ hiriñcāpi,",
  "tha-ap393:171.2": "atha ottappiyaṃ guṇaṃ;",
  "tha-ap393:171.3": "Sutaṃ cāgañca khantiñca,",
  "tha-ap393:171.4": "paññaṃ me aṭṭhamaṃ guṇaṃ.",
  "tha-ap393:172.0": "1.8.34. Pīṭhakānisaṃsa",
  "tha-ap393:172.1": "Pīṭhake sugate datvā,",
  "tha-ap393:172.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:172.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:172.4": "kammānucchavike mama.",
  "tha-ap393:173.1": "Ucce kule pajāyāmi,",
  "tha-ap393:173.2": "mahābhogo bhavāmahaṃ;",
  "tha-ap393:173.3": "Sabbe maṃ apacāyanti,",
  "tha-ap393:173.4": "kitti abbhuggatā mama.",
  "tha-ap393:174.1": "Kappasatasahassāni,",
  "tha-ap393:174.2": "pallaṅkā caturassakā;",
  "tha-ap393:174.3": "Parivārenti maṃ niccaṃ,",
  "tha-ap393:174.4": "saṃvibhāgarato ahaṃ.",
  "tha-ap393:175.0": "1.8.35. Bhisiānisaṃsa",
  "tha-ap393:175.1": "Bhisiyo sugate datvā,",
  "tha-ap393:175.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:175.3": "Chānisaṃse anubhomi,",
  "tha-ap393:175.4": "kammānucchavike mama.",
  "tha-ap393:176.1": "Samasugattopacito,",
  "tha-ap393:176.2": "muduko cārudassano;",
  "tha-ap393:176.3": "Labhāmi ñāṇaparivāraṃ,",
  "tha-ap393:176.4": "bhisidānassidaṃ phalaṃ.",
  "tha-ap393:177.1": "Tūlikā vikatikāyo,",
  "tha-ap393:177.2": "kaṭṭissā cittakā bahū;",
  "tha-ap393:177.3": "Varapotthake kambale ca,",
  "tha-ap393:177.4": "labhāmi vividhe ahaṃ.",
  "tha-ap393:178.1": "Pāvārike ca muduke,",
  "tha-ap393:178.2": "mudukājinaveṇiyo;",
  "tha-ap393:178.3": "Labhāmi vividhatthāre,",
  "tha-ap393:178.4": "bhisidānassidaṃ phalaṃ.",
  "tha-ap393:179.1": "Yato sarāmi attānaṃ,",
  "tha-ap393:179.2": "yato pattosmi viññutaṃ;",
  "tha-ap393:179.3": "Atuccho jhānamañcomhi,",
  "tha-ap393:179.4": "bhisidānassidaṃ phalaṃ.",
  "tha-ap393:180.0": "1.8.36. Bibbohanānisaṃsa",
  "tha-ap393:180.1": "Bibbohane jine datvā,",
  "tha-ap393:180.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:180.3": "Chānisaṃse anubhomi,",
  "tha-ap393:180.4": "kammānucchavike mama.",
  "tha-ap393:181.1": "Uṇṇike padumake ca,",
  "tha-ap393:181.2": "atho lohitacandane;",
  "tha-ap393:181.3": "Bibbohane upādhemi,",
  "tha-ap393:181.4": "uttamaṅgaṃ sadā mama.",
  "tha-ap393:182.1": "Aṭṭhaṅgike maggavare,",
  "tha-ap393:182.2": "sāmaññe caturo phale;",
  "tha-ap393:182.3": "Tesu ñāṇaṃ uppādetvā,",
  "tha-ap393:182.4": "vihare niccakālikaṃ.",
  "tha-ap393:183.1": "Dāne dame saṃyame ca,",
  "tha-ap393:183.2": "appamaññāsu rūpisu;",
  "tha-ap393:183.3": "Tesu ñāṇaṃ uppādetvā,",
  "tha-ap393:183.4": "vihare sabbakālikaṃ.",
  "tha-ap393:184.1": "Vatte guṇe paṭipatti,",
  "tha-ap393:184.2": "ācārakiriyāsu ca;",
  "tha-ap393:184.3": "Tesu ñāṇaṃ uppādetvā,",
  "tha-ap393:184.4": "vihare sabbadā ahaṃ.",
  "tha-ap393:185.1": "Caṅkame vā padhāne vā,",
  "tha-ap393:185.2": "vīriye bodhipakkhiye;",
  "tha-ap393:185.3": "Tesu ñāṇaṃ uppādetvā,",
  "tha-ap393:185.4": "viharāmi yadicchakaṃ.",
  "tha-ap393:186.1": "Sīlaṃ samādhi paññā ca,",
  "tha-ap393:186.2": "vimutti ca anuttarā;",
  "tha-ap393:186.3": "Tesu ñāṇaṃ uppādetvā,",
  "tha-ap393:186.4": "viharāmi sukhaṃ ahaṃ.",
  "tha-ap393:187.0": "1.8.37. Phalapīṭhānisaṃsa",
  "tha-ap393:187.1": "Phalapīṭhe jine datvā,",
  "tha-ap393:187.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:187.3": "Dvānisaṃse anubhomi,",
  "tha-ap393:187.4": "kammānucchavike mama.",
  "tha-ap393:188.1": "Soṇṇamaye maṇimaye,",
  "tha-ap393:188.2": "dantasāramaye bahū;",
  "tha-ap393:188.3": "Pallaṅkaseṭṭhe vindāmi,",
  "tha-ap393:188.4": "phalapīṭhassidaṃ phalaṃ.",
  "tha-ap393:189.0": "1.8.38. Pādapīṭhānisaṃsa",
  "tha-ap393:189.1": "Pādapīṭhe jine datvā,",
  "tha-ap393:189.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:189.3": "Dvānisaṃse anubhomi,",
  "tha-ap393:189.4": "kammānucchavike mama;",
  "tha-ap393:189.5": "Labhāmi bahuke yāne,",
  "tha-ap393:189.6": "pādapīṭhassidaṃ phalaṃ.",
  "tha-ap393:190.1": "Dāsī dāsā ca bhariyā,",
  "tha-ap393:190.2": "ye caññe anujīvino;",
  "tha-ap393:190.3": "Sammā paricarante maṃ,",
  "tha-ap393:190.4": "pādapīṭhassidaṃ phalaṃ.",
  "tha-ap393:191.0": "1.8.39. Telabbhañjanānisaṃsa",
  "tha-ap393:191.1": "Telaabbhañjane datvā,",
  "tha-ap393:191.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:191.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:191.4": "kammānucchavike mama.",
  "tha-ap393:192.1": "Abyādhitā rūpavatā,",
  "tha-ap393:192.2": "khippaṃ dhammanisantitā;",
  "tha-ap393:192.3": "Lābhitā annapānassa,",
  "tha-ap393:192.4": "āyupañcamakaṃ mama.",
  "tha-ap393:193.0": "1.8.40. Sappitelānisaṃsa",
  "tha-ap393:193.1": "Sappitelañca datvāna,",
  "tha-ap393:193.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:193.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:193.4": "kammānucchavike mama.",
  "tha-ap393:194.1": "Thāmavā rūpasampanno,",
  "tha-ap393:194.2": "pahaṭṭhatanujo sadā;",
  "tha-ap393:194.3": "Abyādhi visado homi,",
  "tha-ap393:194.4": "sappitelassidaṃ phalaṃ.",
  "tha-ap393:195.0": "1.8.41. Mukhasodhanakānisaṃsa",
  "tha-ap393:195.1": "Mukhasodhanakaṃ datvā,",
  "tha-ap393:195.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:195.3": "Pañcānisaṃse anubhomi,",
  "tha-ap393:195.4": "kammānucchavike mama.",
  "tha-ap393:196.1": "Visuddhakaṇṭho madhurassaro,",
  "tha-ap393:196.2": "Kāsasāsavivajjito;",
  "tha-ap393:196.3": "Uppalagandho mukhato,",
  "tha-ap393:196.4": "Upavāyati me sadā.",
  "tha-ap393:197.0": "1.8.42. Dadhiānisaṃsa",
  "tha-ap393:197.1": "Dadhiṃ datvāna sampannaṃ,",
  "tha-ap393:197.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:197.3": "Bhuñjāmi amataṃ bhattaṃ,",
  "tha-ap393:197.4": "varaṃ kāyagatāsatiṃ.",
  "tha-ap393:198.0": "1.8.43. Madhuānisaṃsa",
  "tha-ap393:198.1": "Vaṇṇagandharasopetaṃ,",
  "tha-ap393:198.2": "madhuṃ datvā jine gaṇe;",
  "tha-ap393:198.3": "Anūpamaṃ atuliyaṃ,",
  "tha-ap393:198.4": "pive muttirasaṃ ahaṃ.",
  "tha-ap393:199.0": "1.8.44. Rasānisaṃsa",
  "tha-ap393:199.1": "Yathābhūtaṃ rasaṃ datvā,",
  "tha-ap393:199.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:199.3": "Caturo phale anubhomi,",
  "tha-ap393:199.4": "kammānucchavike mama.",
  "tha-ap393:200.0": "1.8.45. Annapānānisaṃsa",
  "tha-ap393:200.1": "Annaṃ pānañca datvāna,",
  "tha-ap393:200.2": "buddhe saṃghe gaṇuttame;",
  "tha-ap393:200.3": "Dasānisaṃse anubhomi,",
  "tha-ap393:200.4": "kammānucchavike mama.",
  "tha-ap393:201.1": "Āyuvā balavā dhīro,",
  "tha-ap393:201.2": "vaṇṇavā yasavā sukhī;",
  "tha-ap393:201.3": "Lābhī annassa pānassa,",
  "tha-ap393:201.4": "sūro paññāṇavā sadā;",
  "tha-ap393:201.5": "Ime guṇe paṭilabhe,",
  "tha-ap393:201.6": "saṃsaranto bhave ahaṃ.",
  "tha-ap393:202.0": "1.8.46. Dhūpānisaṃsa",
  "tha-ap393:202.1": "Dhūpaṃ datvāna sugate,",
  "tha-ap393:202.2": "saṃghe gaṇavaruttame;",
  "tha-ap393:202.3": "Dasānisaṃse anubhomi,",
  "tha-ap393:202.4": "kammānucchavike mama.",
  "tha-ap393:203.1": "Sugandhadeho yasavā,",
  "tha-ap393:203.2": "sīghapañño ca kittimā;",
  "tha-ap393:203.3": "Tikkhapañño bhūripañño,",
  "tha-ap393:203.4": "hāsagambhīrapaññavā.",
  "tha-ap393:204.1": "Vepullajavanapañño,",
  "tha-ap393:204.2": "saṃsaranto bhavābhave;",
  "tha-ap393:204.3": "Tasseva vāhasā dāni,",
  "tha-ap393:204.4": "patto santisukhaṃ sivaṃ.",
  "tha-ap393:205.0": "1.9. Sādhāraṇānisaṃsa",
  "tha-ap393:205.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap393:205.2": "bhavā sabbe samūhatā;",
  "tha-ap393:205.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap393:205.4": "viharāmi anāsavo.",
  "tha-ap393:206.1": "Svāgataṃ vata me āsi,",
  "tha-ap393:206.2": "mama buddhassa santike;",
  "tha-ap393:206.3": "Tisso vijjā anuppattā,",
  "tha-ap393:206.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap393:207.1": "Paṭisambhidā catasso,",
  "tha-ap393:207.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap393:207.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap393:207.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap393:208.1": "Itthaṃ sudaṃ āyasmā pilindavaccho thero imā gāthāyo abhāsitthāti.",
  "tha-ap393:209.1": "Pilindavacchattherassāpadānaṃ paṭhamaṃ."
