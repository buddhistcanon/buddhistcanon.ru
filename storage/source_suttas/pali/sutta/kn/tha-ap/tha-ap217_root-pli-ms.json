{
  "tha-ap217:0.1": "Therāpadāna",
  "tha-ap217:0.2": "Hatthivagga",
  "tha-ap217:0.3": "5. Raṃsisaññakattheraapadāna",
  "tha-ap217:1.1": "“Udentaṃ sataraṃsiṃva,",
  "tha-ap217:1.2": "pītaraṃsiṃva bhāṇumaṃ;",
  "tha-ap217:1.3": "Byagghūsabhaṃva pavaraṃ,",
  "tha-ap217:1.4": "sujātaṃ pabbatantare.",
  "tha-ap217:2.1": "Buddhassa ānubhāvo so,",
  "tha-ap217:2.2": "jalate pabbatantare;",
  "tha-ap217:2.3": "Raṃse cittaṃ pasādetvā,",
  "tha-ap217:2.4": "kappaṃ saggamhi modahaṃ.",
  "tha-ap217:3.1": "Avasesesu kappesu,",
  "tha-ap217:3.2": "kusalaṃ caritaṃ mayā;",
  "tha-ap217:3.3": "Tena cittappasādena,",
  "tha-ap217:3.4": "buddhānussatiyāpi ca.",
  "tha-ap217:4.1": "Tiṃsakappasahasseto,",
  "tha-ap217:4.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap217:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap217:4.4": "buddhasaññāyidaṃ phalaṃ.",
  "tha-ap217:5.1": "Sattapaññāsakappamhi,",
  "tha-ap217:5.2": "eko āsiṃ janādhipo;",
  "tha-ap217:5.3": "Sujāto nāma nāmena,",
  "tha-ap217:5.4": "cakkavattī mahabbalo.",
  "tha-ap217:6.1": "Paṭisambhidā catasso,",
  "tha-ap217:6.2": "…pe…",
  "tha-ap217:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap217:7.1": "Itthaṃ sudaṃ āyasmā raṃsisaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap217:8.1": "Raṃsisaññakattherassāpadānaṃ pañcamaṃ."
}