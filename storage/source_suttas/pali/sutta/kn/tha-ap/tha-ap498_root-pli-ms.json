{
  "tha-ap498:0.1": "Therāpadāna",
  "tha-ap498:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap498:0.3": "6. Ghatamaṇḍadāyakattheraapadāna",
  "tha-ap498:1.1": "“Sucintitaṃ bhagavantaṃ,",
  "tha-ap498:1.2": "lokajeṭṭhaṃ narāsabhaṃ;",
  "tha-ap498:1.3": "Upaviṭṭhaṃ mahāraññaṃ,",
  "tha-ap498:1.4": "vātābādhena pīḷitaṃ.",
  "tha-ap498:2.1": "Disvā cittaṃ pasādetvā,",
  "tha-ap498:2.2": "ghatamaṇḍamupānayiṃ;",
  "tha-ap498:2.3": "Katattā ācitattā ca,",
  "tha-ap498:2.4": "gaṅgā bhāgīrathī ayaṃ.",
  "tha-ap498:3.1": "Mahāsamuddā cattāro,",
  "tha-ap498:3.2": "ghataṃ sampajjare mama;",
  "tha-ap498:3.3": "Ayañca pathavī ghorā,",
  "tha-ap498:3.4": "appamāṇā asaṅkhiyā.",
  "tha-ap498:4.1": "Mama saṅkappamaññāya,",
  "tha-ap498:4.2": "bhavate madhusakkarā;",
  "tha-ap498:4.3": "Cātuddīpā ime rukkhā,",
  "tha-ap498:4.4": "pādapā dharaṇīruhā.",
  "tha-ap498:5.1": "Mama saṅkappamaññāya,",
  "tha-ap498:5.2": "kapparukkhā bhavanti te;",
  "tha-ap498:5.3": "Paññāsakkhattuṃ devindo,",
  "tha-ap498:5.4": "devarajjamakārayiṃ.",
  "tha-ap498:6.1": "Ekapaññāsakkhattuñca,",
  "tha-ap498:6.2": "cakkavattī ahosahaṃ;",
  "tha-ap498:6.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap498:6.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap498:7.1": "Catunnavutito kappe,",
  "tha-ap498:7.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap498:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap498:7.4": "ghatamaṇḍassidaṃ phalaṃ.",
  "tha-ap498:8.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap498:8.2": "…pe…",
  "tha-ap498:8.3": "viharāmi anāsavo.",
  "tha-ap498:9.1": "Svāgataṃ vata me āsi,",
  "tha-ap498:9.2": "…pe…",
  "tha-ap498:9.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap498:10.1": "Paṭisambhidā catasso,",
  "tha-ap498:10.2": "…pe…",
  "tha-ap498:10.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap498:11.1": "Itthaṃ sudaṃ āyasmā ghatamaṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap498:12.1": "Ghatamaṇḍadāyakattherassāpadānaṃ chaṭṭhaṃ."
}