{
  "tha-ap280:0.1": "Therāpadāna",
  "tha-ap280:0.2": "Suvaṇṇabibbohanavagga",
  "tha-ap280:0.3": "8. Āluvadāyakattheraapadāna",
  "tha-ap280:1.1": "“Pabbate himavantamhi,",
  "tha-ap280:1.2": "mahāsindhu sudassanā;",
  "tha-ap280:1.3": "Tatthaddasaṃ vītarāgaṃ,",
  "tha-ap280:1.4": "suppabhāsaṃ sudassanaṃ.",
  "tha-ap280:2.1": "Paramopasame yuttaṃ,",
  "tha-ap280:2.2": "disvā vimhitamānaso;",
  "tha-ap280:2.3": "Āluvaṃ tassa pādāsiṃ,",
  "tha-ap280:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap280:3.1": "Ekattiṃse ito kappe,",
  "tha-ap280:3.2": "yaṃ phalamadadiṃ tadā;",
  "tha-ap280:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap280:3.4": "āluvassa idaṃ phalaṃ.",
  "tha-ap280:4.1": "Paṭisambhidā catasso,",
  "tha-ap280:4.2": "…pe…",
  "tha-ap280:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap280:5.1": "Itthaṃ sudaṃ āyasmā āluvadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap280:6.1": "Āluvadāyakattherassāpadānaṃ aṭṭhamaṃ."
}