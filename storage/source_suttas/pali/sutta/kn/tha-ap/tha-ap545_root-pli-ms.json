{
  "tha-ap545:0.1": "Therāpadāna",
  "tha-ap545:0.2": "Bhaddiyavagga",
  "tha-ap545:0.3": "3. Sīvalittheraapadāna",
  "tha-ap545:1.1": "“Padumuttaro nāma jino,",
  "tha-ap545:1.2": "sabbadhammesu cakkhumā;",
  "tha-ap545:1.3": "Ito satasahassamhi,",
  "tha-ap545:1.4": "kappe uppajji nāyako.",
  "tha-ap545:2.1": "Sīlaṃ tassa asaṅkheyyaṃ,",
  "tha-ap545:2.2": "samādhi vajirūpamo;",
  "tha-ap545:2.3": "Asaṅkheyyaṃ ñāṇavaraṃ,",
  "tha-ap545:2.4": "vimutti ca anopamā.",
  "tha-ap545:3.1": "Manujāmaranāgānaṃ,",
  "tha-ap545:3.2": "brahmānañca samāgame;",
  "tha-ap545:3.3": "Samaṇabrāhmaṇākiṇṇe,",
  "tha-ap545:3.4": "dhammaṃ desesi nāyako.",
  "tha-ap545:4.1": "Sasāvakaṃ mahālābhiṃ,",
  "tha-ap545:4.2": "puññavantaṃ jutindharaṃ;",
  "tha-ap545:4.3": "Ṭhapesi etadaggamhi,",
  "tha-ap545:4.4": "parisāsu visārado.",
  "tha-ap545:5.1": "Tadāhaṃ khattiyo āsiṃ,",
  "tha-ap545:5.2": "nagare haṃsasavhaye;",
  "tha-ap545:5.3": "Sutvā jinassa taṃ vākyaṃ,",
  "tha-ap545:5.4": "sāvakassa guṇaṃ bahuṃ.",
  "tha-ap545:6.1": "Nimantayitvā sattāhaṃ,",
  "tha-ap545:6.2": "bhojayitvā sasāvakaṃ;",
  "tha-ap545:6.3": "Mahādānaṃ daditvāna,",
  "tha-ap545:6.4": "taṃ ṭhānamabhipatthayiṃ.",
  "tha-ap545:7.1": "Tadā maṃ vinataṃ pāde,",
  "tha-ap545:7.2": "disvāna purisāsabho;",
  "tha-ap545:7.3": "Sarena mahatā vīro,",
  "tha-ap545:7.4": "idaṃ vacanamabravi.",
  "tha-ap545:8.1": "‘Tato jinassa vacanaṃ,",
  "tha-ap545:8.2": "sotukāmā mahājanā;",
  "tha-ap545:8.3": "Devadānavagandhabbā,",
  "tha-ap545:8.4": "brahmāno ca mahiddhikā’.",
  "tha-ap545:9.1": "Samaṇabrāhmaṇā ceva,",
  "tha-ap545:9.2": "namassiṃsu katañjalī;",
  "tha-ap545:9.3": "‘Namo te purisājañña,",
  "tha-ap545:9.4": "namo te purisuttama.",
  "tha-ap545:10.1": "Khattiyena mahādānaṃ,",
  "tha-ap545:10.2": "dinnaṃ sattāhikampi vo;",
  "tha-ap545:10.3": "Sotukāmā phalaṃ tassa,",
  "tha-ap545:10.4": "byākarohi mahāmune’.",
  "tha-ap545:11.1": "Tato avoca bhagavā,",
  "tha-ap545:11.2": "‘suṇātha mama bhāsitaṃ;",
  "tha-ap545:11.3": "Appameyyamhi buddhamhi,",
  "tha-ap545:11.4": "sasaṃghamhi patiṭṭhitā.",
  "tha-ap545:12.1": "Dakkhiṇā tāya ko vattā,",
  "tha-ap545:12.2": "appameyyaphalā hi sā;",
  "tha-ap545:12.3": "Api ce sa mahābhogo,",
  "tha-ap545:12.4": "ṭhānaṃ pattheti uttamaṃ.",
  "tha-ap545:13.1": "Lābhī vipulalābhānaṃ,",
  "tha-ap545:13.2": "yathā bhikkhu sudassano;",
  "tha-ap545:13.3": "Tathāhampi bhaveyyanti,",
  "tha-ap545:13.4": "lacchase taṃ anāgate.",
  "tha-ap545:14.1": "Satasahassito kappe,",
  "tha-ap545:14.2": "okkākakulasambhavo;",
  "tha-ap545:14.3": "Gotamo nāma gottena,",
  "tha-ap545:14.4": "satthā loke bhavissati.",
  "tha-ap545:15.1": "Tassa dhammesu dāyādo,",
  "tha-ap545:15.2": "oraso dhammanimmito;",
  "tha-ap545:15.3": "Sīvali nāma nāmena,",
  "tha-ap545:15.4": "hessati satthu sāvako’.",
  "tha-ap545:16.1": "Tena kammena sukatena,",
  "tha-ap545:16.2": "cetanāpaṇidhīhi ca;",
  "tha-ap545:16.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap545:16.4": "tāvatiṃsūpago ahaṃ.",
  "tha-ap545:17.1": "Ekanavutito kappe,",
  "tha-ap545:17.2": "vipassī lokanāyako;",
  "tha-ap545:17.3": "Uppajji cārudassano,",
  "tha-ap545:17.4": "sabbadhammavipassako.",
  "tha-ap545:18.1": "Tadāhaṃ bandhumatiyaṃ,",
  "tha-ap545:18.2": "kulassaññatarassa ca;",
  "tha-ap545:18.3": "Dayito passito ceva,",
  "tha-ap545:18.4": "āsiṃ kammantavāvaṭo.",
  "tha-ap545:19.1": "Tadā aññataro pūgo,",
  "tha-ap545:19.2": "vipassissa mahesino;",
  "tha-ap545:19.3": "Parivesaṃ akārayi,",
  "tha-ap545:19.4": "mahantamativissutaṃ.",
  "tha-ap545:20.1": "Niṭṭhite ca mahādāne,",
  "tha-ap545:20.2": "daduṃ khajjakasañhitaṃ;",
  "tha-ap545:20.3": "Navaṃ dadhiṃ madhuñceva,",
  "tha-ap545:20.4": "vicinaṃ neva addasuṃ.",
  "tha-ap545:21.1": "Tadāhaṃ taṃ gahetvāna,",
  "tha-ap545:21.2": "navaṃ dadhiṃ madhumpi ca;",
  "tha-ap545:21.3": "Kammassāmigharaṃ gacchiṃ,",
  "tha-ap545:21.4": "tamesantā mamaddasuṃ.",
  "tha-ap545:22.1": "Sahassamapi datvāna,",
  "tha-ap545:22.2": "nālabhiṃsu ca taṃ dvayaṃ;",
  "tha-ap545:22.3": "Tatohaṃ evaṃ cintesiṃ,",
  "tha-ap545:22.4": "‘netaṃ hessati orakaṃ.",
  "tha-ap545:23.1": "Yathā ime janā sabbe,",
  "tha-ap545:23.2": "sakkaronti tathāgataṃ;",
  "tha-ap545:23.3": "Ahampi kāraṃ kassāmi,",
  "tha-ap545:23.4": "sasaṃghe lokanāyake’.",
  "tha-ap545:24.1": "Tadāhamevaṃ cintetvā,",
  "tha-ap545:24.2": "dadhiṃ madhuñca ekato;",
  "tha-ap545:24.3": "Madditvā lokanāthassa,",
  "tha-ap545:24.4": "sasaṃghassa adāsahaṃ.",
  "tha-ap545:25.1": "Tena kammena sukatena,",
  "tha-ap545:25.2": "cetanāpaṇidhīhi ca;",
  "tha-ap545:25.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap545:25.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap545:26.1": "Punāhaṃ bārāṇasiyaṃ,",
  "tha-ap545:26.2": "rājā hutvā mahāyaso;",
  "tha-ap545:26.3": "Sattukassa tadā duṭṭho,",
  "tha-ap545:26.4": "dvārarodhamakārayiṃ.",
  "tha-ap545:27.1": "Tadā tapassino ruddhā,",
  "tha-ap545:27.2": "ekāhaṃ rakkhitā ahuṃ;",
  "tha-ap545:27.3": "Tato tassa vipākena,",
  "tha-ap545:27.4": "pāpatiṃ nirayaṃ bhusaṃ.",
  "tha-ap545:28.1": "Pacchime ca bhave dāni,",
  "tha-ap545:28.2": "jātohaṃ koliye pure;",
  "tha-ap545:28.3": "Suppavāsā ca me mātā,",
  "tha-ap545:28.4": "mahāli licchavī pitā.",
  "tha-ap545:29.1": "Khattiye puññakammena,",
  "tha-ap545:29.2": "dvārarodhassa vāhasā;",
  "tha-ap545:29.3": "Satta vassāni nivasiṃ,",
  "tha-ap545:29.4": "mātukucchimhi dukkhito.",
  "tha-ap545:30.1": "Sattāhaṃ dvāramūḷhohaṃ,",
  "tha-ap545:30.2": "mahādukkhasamappito;",
  "tha-ap545:30.3": "Mātā me chandadānena,",
  "tha-ap545:30.4": "evaṃ āsi sudukkhitā.",
  "tha-ap545:31.1": "Suvatthitohaṃ nikkhanto,",
  "tha-ap545:31.2": "buddhena anukampito;",
  "tha-ap545:31.3": "Nikkhantadivaseyeva,",
  "tha-ap545:31.4": "pabbajiṃ anagāriyaṃ.",
  "tha-ap545:32.1": "Upajjhā sāriputto me,",
  "tha-ap545:32.2": "moggallāno mahiddhiko;",
  "tha-ap545:32.3": "Kese oropayanto me,",
  "tha-ap545:32.4": "anusāsi mahāmati.",
  "tha-ap545:33.1": "Kesesu chijjamānesu,",
  "tha-ap545:33.2": "arahattamapāpuṇiṃ;",
  "tha-ap545:33.3": "Devā nāgā manussā ca,",
  "tha-ap545:33.4": "paccaye upanenti me.",
  "tha-ap545:34.1": "Padumuttaranāthañca,",
  "tha-ap545:34.2": "vipassiñca vināyakaṃ;",
  "tha-ap545:34.3": "Yaṃ pūjayiṃ pamudito,",
  "tha-ap545:34.4": "paccayehi visesato.",
  "tha-ap545:35.1": "Tato tesaṃ visesena,",
  "tha-ap545:35.2": "kammānaṃ vipuluttamaṃ;",
  "tha-ap545:35.3": "Lābhaṃ labhāmi sabbattha,",
  "tha-ap545:35.4": "vane gāme jale thale.",
  "tha-ap545:36.1": "Revataṃ dassanatthāya,",
  "tha-ap545:36.2": "yadā yāti vināyako;",
  "tha-ap545:36.3": "Tiṃsabhikkhusahassehi,",
  "tha-ap545:36.4": "saha lokagganāyako.",
  "tha-ap545:37.1": "Tadā devopaṇītehi,",
  "tha-ap545:37.2": "mamatthāya mahāmati;",
  "tha-ap545:37.3": "Paccayehi mahāvīro,",
  "tha-ap545:37.4": "sasaṃgho lokanāyako.",
  "tha-ap545:38.1": "Upaṭṭhito mayā buddho,",
  "tha-ap545:38.2": "gantvā revatamaddasa;",
  "tha-ap545:38.3": "Tato jetavanaṃ gantvā,",
  "tha-ap545:38.4": "etadagge ṭhapesi maṃ.",
  "tha-ap545:39.1": "‘Lābhīnaṃ sīvali aggo,",
  "tha-ap545:39.2": "mama sissesu bhikkhavo’;",
  "tha-ap545:39.3": "Sabbalokahito satthā,",
  "tha-ap545:39.4": "kittayī parisāsu maṃ.",
  "tha-ap545:40.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap545:40.2": "…pe…",
  "tha-ap545:40.3": "viharāmi anāsavo.",
  "tha-ap545:41.1": "Svāgataṃ vata me āsi,",
  "tha-ap545:41.2": "…pe…",
  "tha-ap545:41.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap545:42.1": "Paṭisambhidā catasso,",
  "tha-ap545:42.2": "…pe…",
  "tha-ap545:42.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap545:43.1": "Itthaṃ sudaṃ āyasmā sīvalithero imā gāthāyo abhāsitthāti.",
  "tha-ap545:44.1": "Sīvalittherassāpadānaṃ tatiyaṃ."
}