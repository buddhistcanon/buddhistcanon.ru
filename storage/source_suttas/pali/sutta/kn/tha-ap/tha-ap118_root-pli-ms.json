{
  "tha-ap118:0.1": "Therāpadāna",
  "tha-ap118:0.2": "Mahāparivāravagga",
  "tha-ap118:0.3": "6. Citakapūjakattheraapadāna",
  "tha-ap118:1.1": "“Vasāmi rājāyatane,",
  "tha-ap118:1.2": "sāmacco saparijjano;",
  "tha-ap118:1.3": "Parinibbute bhagavati,",
  "tha-ap118:1.4": "sikhino lokabandhuno.",
  "tha-ap118:2.1": "Pasannacitto sumano,",
  "tha-ap118:2.2": "citakaṃ agamāsahaṃ;",
  "tha-ap118:2.3": "Tūriyaṃ tattha vādetvā,",
  "tha-ap118:2.4": "gandhamālaṃ samokiriṃ.",
  "tha-ap118:3.1": "Citamhi pūjaṃ katvāna,",
  "tha-ap118:3.2": "vanditvā citakaṃ ahaṃ;",
  "tha-ap118:3.3": "Pasannacitto sumano,",
  "tha-ap118:3.4": "sakaṃ bhavanupāgamiṃ.",
  "tha-ap118:4.1": "Bhavane upaviṭṭhohaṃ,",
  "tha-ap118:4.2": "citapūjaṃ anussariṃ;",
  "tha-ap118:4.3": "Tena kammena dvipadinda,",
  "tha-ap118:4.4": "lokajeṭṭha narāsabha.",
  "tha-ap118:5.1": "Anubhotvāna sampattiṃ,",
  "tha-ap118:5.2": "devesu mānusesu ca;",
  "tha-ap118:5.3": "Pattomhi acalaṃ ṭhānaṃ,",
  "tha-ap118:5.4": "hitvā jayaparājayaṃ.",
  "tha-ap118:6.1": "Ekattiṃse ito kappe,",
  "tha-ap118:6.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap118:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap118:6.4": "citapūjāyidaṃ phalaṃ.",
  "tha-ap118:7.1": "Ekūnatiṃsakappamhi,",
  "tha-ap118:7.2": "ito soḷasa rājāno;",
  "tha-ap118:7.3": "Uggatā nāma nāmena,",
  "tha-ap118:7.4": "cakkavattī mahabbalā.",
  "tha-ap118:8.1": "Paṭisambhidā catasso,",
  "tha-ap118:8.2": "…pe…",
  "tha-ap118:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap118:9.1": "Itthaṃ sudaṃ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap118:10.1": "Citakapūjakattherassāpadānaṃ chaṭṭhaṃ."
}