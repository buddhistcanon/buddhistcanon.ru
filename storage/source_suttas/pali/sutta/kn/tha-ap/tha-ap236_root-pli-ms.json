{
  "tha-ap236:0.1": "Therāpadāna",
  "tha-ap236:0.2": "Udakāsanavagga",
  "tha-ap236:0.3": "4. Kilañjadāyakattheraapadāna",
  "tha-ap236:1.1": "“Tivarāyaṃ pure ramme,",
  "tha-ap236:1.2": "naḷakāro ahaṃ tadā;",
  "tha-ap236:1.3": "Siddhatthe lokapajjote,",
  "tha-ap236:1.4": "pasannā janatā tahiṃ.",
  "tha-ap236:2.1": "Pūjatthaṃ lokanāthassa,",
  "tha-ap236:2.2": "kilañjaṃ pariyesati;",
  "tha-ap236:2.3": "Buddhapūjaṃ karontānaṃ,",
  "tha-ap236:2.4": "kilañjaṃ adadiṃ ahaṃ.",
  "tha-ap236:3.1": "Catunnavutito kappe,",
  "tha-ap236:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap236:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap236:3.4": "kilañjassa idaṃ phalaṃ.",
  "tha-ap236:4.1": "Sattasattatikappamhi,",
  "tha-ap236:4.2": "rājā āsiṃ jaladdharo;",
  "tha-ap236:4.3": "Sattaratanasampanno,",
  "tha-ap236:4.4": "cakkavattī mahabbalo.",
  "tha-ap236:5.1": "Paṭisambhidā catasso,",
  "tha-ap236:5.2": "…pe…",
  "tha-ap236:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap236:6.1": "Itthaṃ sudaṃ āyasmā kilañjadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap236:7.1": "Kilañjadāyakattherassāpadānaṃ catutthaṃ."
}