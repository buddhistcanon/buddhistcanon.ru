{
  "tha-ap300:0.1": "Therāpadāna",
  "tha-ap300:0.2": "Citakapūjakavagga",
  "tha-ap300:0.3": "8. Saraṇagamaniyattheraapadāna",
  "tha-ap300:1.1": "“Pabbate himavantamhi,",
  "tha-ap300:1.2": "ahosiṃ luddako tadā;",
  "tha-ap300:1.3": "Vipassiṃ addasaṃ buddhaṃ,",
  "tha-ap300:1.4": "lokajeṭṭhaṃ narāsabhaṃ.",
  "tha-ap300:2.1": "Upāsitvāna sambuddhaṃ,",
  "tha-ap300:2.2": "veyyāvaccamakāsahaṃ;",
  "tha-ap300:2.3": "Saraṇañca upāgacchiṃ,",
  "tha-ap300:2.4": "dvipadindassa tādino.",
  "tha-ap300:3.1": "Ekanavutito kappe,",
  "tha-ap300:3.2": "saraṇaṃ upagacchahaṃ;",
  "tha-ap300:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap300:3.4": "saraṇāgamanapphalaṃ.",
  "tha-ap300:4.1": "Paṭisambhidā catasso,",
  "tha-ap300:4.2": "…pe…",
  "tha-ap300:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap300:5.1": "Itthaṃ sudaṃ āyasmā saraṇagamaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap300:6.1": "Saraṇagamaniyattherassāpadānaṃ aṭṭhamaṃ."
}