{
  "tha-ap28:0.1": "Therāpadāna",
  "tha-ap28:0.2": "Subhūtivagga",
  "tha-ap28:0.3": "6. Dhūpadāyakattheraapadāna",
  "tha-ap28:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap28:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap28:1.3": "Kuṭidhūpaṃ mayā dinnaṃ,",
  "tha-ap28:1.4": "vippasannena cetasā.",
  "tha-ap28:2.1": "Yaṃ yaṃ yonupapajjāmi,",
  "tha-ap28:2.2": "devattaṃ atha mānusaṃ;",
  "tha-ap28:2.3": "Sabbesampi piyo homi,",
  "tha-ap28:2.4": "dhūpadānassidaṃ phalaṃ.",
  "tha-ap28:3.1": "Catunnavutito kappe,",
  "tha-ap28:3.2": "yaṃ dhūpamadadiṃ tadā;",
  "tha-ap28:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap28:3.4": "dhūpadānassidaṃ phalaṃ.",
  "tha-ap28:4.1": "Paṭisambhidā catasso,",
  "tha-ap28:4.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap28:4.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap28:4.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap28:5.1": "Itthaṃ sudaṃ āyasmā dhūpadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap28:6.1": "Dhūpadāyakattherassāpadānaṃ chaṭṭhaṃ."
}