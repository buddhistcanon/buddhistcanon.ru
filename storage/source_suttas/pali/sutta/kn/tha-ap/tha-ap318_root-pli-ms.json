{
  "tha-ap318:0.1": "Therāpadāna",
  "tha-ap318:0.2": "Ārakkhadāyakavagga",
  "tha-ap318:0.3": "6 Āsanasanthavikattheraapadāna",
  "tha-ap318:1.1": "“Cetiyaṃ uttamaṃ nāma,",
  "tha-ap318:1.2": "sikhino lokabandhuno;",
  "tha-ap318:1.3": "Araññe irīṇe vane,",
  "tha-ap318:1.4": "andhāhiṇḍāmahaṃ tadā.",
  "tha-ap318:2.1": "Pavanā nikkhamantena,",
  "tha-ap318:2.2": "diṭṭhaṃ sīhāsanaṃ mayā;",
  "tha-ap318:2.3": "Ekaṃsaṃ añjaliṃ katvā,",
  "tha-ap318:2.4": "santhaviṃ lokanāyakaṃ.",
  "tha-ap318:3.1": "Divasabhāgaṃ thavitvāna,",
  "tha-ap318:3.2": "buddhaṃ lokagganāyakaṃ;",
  "tha-ap318:3.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap318:3.4": "imaṃ vācaṃ udīrayiṃ.",
  "tha-ap318:4.1": "‘Namo te purisājañña,",
  "tha-ap318:4.2": "namo te purisuttama;",
  "tha-ap318:4.3": "Sabbaññūsi mahāvīra,",
  "tha-ap318:4.4": "lokajeṭṭha narāsabha’.",
  "tha-ap318:5.1": "Abhitthavitvā sikhinaṃ,",
  "tha-ap318:5.2": "nimittakaraṇenahaṃ;",
  "tha-ap318:5.3": "Āsanaṃ abhivādetvā,",
  "tha-ap318:5.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap318:6.1": "Ekattiṃse ito kappe,",
  "tha-ap318:6.2": "yaṃ thaviṃ vadataṃ varaṃ;",
  "tha-ap318:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap318:6.4": "thomanāya idaṃ phalaṃ.",
  "tha-ap318:7.1": "Sattavīse ito kappe,",
  "tha-ap318:7.2": "atulā satta āsu te;",
  "tha-ap318:7.3": "Sattaratanasampannā,",
  "tha-ap318:7.4": "cakkavattī mahabbalā.",
  "tha-ap318:8.1": "Paṭisambhidā catasso,",
  "tha-ap318:8.2": "…pe…",
  "tha-ap318:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap318:9.1": "Itthaṃ sudaṃ āyasmā āsanasanthaviko thero imā gāthāyo abhāsitthāti.",
  "tha-ap318:10.1": "Āsanasanthavikattherassāpadānaṃ chaṭṭhaṃ."
}