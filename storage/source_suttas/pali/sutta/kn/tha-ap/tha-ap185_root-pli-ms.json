{
  "tha-ap185:0.1": "Therāpadāna",
  "tha-ap185:0.2": "Kuṭajapupphiyavagga",
  "tha-ap185:0.3": "3 Koṭumbariyattheraapadāna",
  "tha-ap185:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap185:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap185:1.3": "Appameyyaṃva udadhiṃ,",
  "tha-ap185:1.4": "vitthataṃ dharaṇiṃ yathā.",
  "tha-ap185:2.1": "Pūjitaṃ devasaṅghena,",
  "tha-ap185:2.2": "nisabhājāniyaṃ yathā;",
  "tha-ap185:2.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap185:2.4": "upāgacchiṃ naruttamaṃ.",
  "tha-ap185:3.1": "Sattapupphāni paggayha,",
  "tha-ap185:3.2": "koṭumbarasamākulaṃ;",
  "tha-ap185:3.3": "Buddhassa abhiropesiṃ,",
  "tha-ap185:3.4": "sikhino lokabandhuno.",
  "tha-ap185:4.1": "Ekattiṃse ito kappe,",
  "tha-ap185:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap185:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap185:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap185:5.1": "Ito vīsatikappamhi,",
  "tha-ap185:5.2": "mahānelasanāmako;",
  "tha-ap185:5.3": "Eko āsi mahātejo,",
  "tha-ap185:5.4": "cakkavattī mahabbalo.",
  "tha-ap185:6.1": "Paṭisambhidā catasso,",
  "tha-ap185:6.2": "…pe…",
  "tha-ap185:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap185:7.1": "Itthaṃ sudaṃ āyasmā koṭumbariyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap185:8.1": "Koṭumbariyattherassāpadānaṃ tatiyaṃ."
}