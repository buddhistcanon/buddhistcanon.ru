{
  "tha-ap148:0.1": "Therāpadāna",
  "tha-ap148:0.2": "Chattavagga",
  "tha-ap148:0.3": "6 Anulepadāyakattheraapadāna",
  "tha-ap148:1.1": "“Anomadassīmunino,",
  "tha-ap148:1.2": "bodhivedimakāsahaṃ;",
  "tha-ap148:1.3": "Sudhāya piṇḍaṃ datvāna,",
  "tha-ap148:1.4": "pāṇikammaṃ akāsahaṃ.",
  "tha-ap148:2.1": "Disvā taṃ sukataṃ kammaṃ,",
  "tha-ap148:2.2": "anomadassī naruttamo;",
  "tha-ap148:2.3": "Bhikkhusaṃghe ṭhito satthā,",
  "tha-ap148:2.4": "imaṃ gāthaṃ abhāsatha.",
  "tha-ap148:3.1": "‘Iminā sudhakammena,",
  "tha-ap148:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap148:3.3": "Sampattiṃ anubhotvāna,",
  "tha-ap148:3.4": "dukkhassantaṃ karissati’.",
  "tha-ap148:4.1": "Pasannamukhavaṇṇomhi,",
  "tha-ap148:4.2": "ekaggo susamāhito;",
  "tha-ap148:4.3": "Dhāremi antimaṃ dehaṃ,",
  "tha-ap148:4.4": "sammāsambuddhasāsane.",
  "tha-ap148:5.1": "Ito kappasate āsiṃ,",
  "tha-ap148:5.2": "paripuṇṇe anūnake;",
  "tha-ap148:5.3": "Rājā sabbaghano nāma,",
  "tha-ap148:5.4": "cakkavattī mahabbalo.",
  "tha-ap148:6.1": "Paṭisambhidā catasso,",
  "tha-ap148:6.2": "…pe…",
  "tha-ap148:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap148:7.1": "Itthaṃ sudaṃ āyasmā anulepadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap148:8.1": "Anulepadāyakattherassāpadānaṃ chaṭṭhaṃ."
}