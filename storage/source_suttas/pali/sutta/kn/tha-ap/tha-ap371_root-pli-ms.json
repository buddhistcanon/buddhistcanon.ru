{
  "tha-ap371:0.1": "Therāpadāna",
  "tha-ap371:0.2": "Mandāravapupphiyavagga",
  "tha-ap371:0.3": "9. Timirapupphiyattheraapadāna",
  "tha-ap371:1.1": "“Candabhāgānadītīre,",
  "tha-ap371:1.2": "anusotaṃ vajāmahaṃ;",
  "tha-ap371:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap371:1.4": "sālarājaṃva phullitaṃ.",
  "tha-ap371:2.1": "Pasannacitto sumano,",
  "tha-ap371:2.2": "paccekamunimuttamaṃ;",
  "tha-ap371:2.3": "Gahetvā timiraṃ pupphaṃ,",
  "tha-ap371:2.4": "matthake okiriṃ ahaṃ.",
  "tha-ap371:3.1": "Ekanavutito kappe,",
  "tha-ap371:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap371:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap371:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap371:4.1": "Paṭisambhidā catasso,",
  "tha-ap371:4.2": "…pe…",
  "tha-ap371:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap371:5.1": "Itthaṃ sudaṃ āyasmā timirapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap371:6.1": "Timirapupphiyattherassāpadānaṃ navamaṃ."
}