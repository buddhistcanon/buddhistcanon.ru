{
  "tha-ap248:0.1": "Therāpadāna",
  "tha-ap248:0.2": "Tuvaradāyakavagga",
  "tha-ap248:0.3": "6. Pattadāyakattheraapadāna",
  "tha-ap248:1.1": "“Paramena damathena,",
  "tha-ap248:1.2": "siddhatthassa mahesino;",
  "tha-ap248:1.3": "Pattadānaṃ mayā dinnaṃ,",
  "tha-ap248:1.4": "ujubhūtassa tādino.",
  "tha-ap248:2.1": "Catunnavutito kappe,",
  "tha-ap248:2.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap248:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap248:2.4": "pattadānassidaṃ phalaṃ.",
  "tha-ap248:3.1": "Paṭisambhidā catasso,",
  "tha-ap248:3.2": "…pe…",
  "tha-ap248:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap248:4.1": "Itthaṃ sudaṃ āyasmā pattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap248:5.1": "Pattadāyakattherassāpadānaṃ chaṭṭhaṃ."
}