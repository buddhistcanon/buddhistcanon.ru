{
  "tha-ap120:0.1": "Therāpadāna",
  "tha-ap120:0.2": "Mahāparivāravagga",
  "tha-ap120:0.3": "8. Maggasaññakattheraapadāna",
  "tha-ap120:1.1": "“Padumuttarabuddhassa,",
  "tha-ap120:1.2": "sāvakā vanacārino;",
  "tha-ap120:1.3": "Vippanaṭṭhā brahāraññe,",
  "tha-ap120:1.4": "andhāva anusuyyare.",
  "tha-ap120:2.1": "Anussaritvā sambuddhaṃ,",
  "tha-ap120:2.2": "padumuttaranāyakaṃ;",
  "tha-ap120:2.3": "Tassa te munino puttā,",
  "tha-ap120:2.4": "vippanaṭṭhā mahāvane.",
  "tha-ap120:3.1": "Bhavanā oruhitvāna,",
  "tha-ap120:3.2": "agamiṃ bhikkhusantikaṃ;",
  "tha-ap120:3.3": "Tesaṃ maggañca ācikkhiṃ,",
  "tha-ap120:3.4": "bhojanañca adāsahaṃ.",
  "tha-ap120:4.1": "Tena kammena dvipadinda,",
  "tha-ap120:4.2": "lokajeṭṭha narāsabha;",
  "tha-ap120:4.3": "Jātiyā sattavassohaṃ,",
  "tha-ap120:4.4": "arahattamapāpuṇiṃ.",
  "tha-ap120:5.1": "Sacakkhū nāma nāmena,",
  "tha-ap120:5.2": "dvādasa cakkavattino;",
  "tha-ap120:5.3": "Sattaratanasampannā,",
  "tha-ap120:5.4": "pañcakappasate ito.",
  "tha-ap120:6.1": "Paṭisambhidā catasso,",
  "tha-ap120:6.2": "…pe…",
  "tha-ap120:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap120:7.1": "Itthaṃ sudaṃ āyasmā maggasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap120:8.1": "Maggasaññakattherassāpadānaṃ aṭṭhamaṃ."
}