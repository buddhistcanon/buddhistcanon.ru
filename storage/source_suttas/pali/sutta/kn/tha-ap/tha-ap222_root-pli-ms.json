{
  "tha-ap222:0.1": "Therāpadāna",
  "tha-ap222:0.2": "Hatthivagga",
  "tha-ap222:0.3": "10. Pāpanivāriyattheraapadāna",
  "tha-ap222:1.1": "“Piyadassissa bhagavato,",
  "tha-ap222:1.2": "caṅkamaṃ sodhitaṃ mayā;",
  "tha-ap222:1.3": "Naḷakehi paṭicchannaṃ,",
  "tha-ap222:1.4": "vātātapanivāraṇaṃ.",
  "tha-ap222:2.1": "Pāpaṃ vivajjanatthāya,",
  "tha-ap222:2.2": "kusalassupasampadā;",
  "tha-ap222:2.3": "Kilesānaṃ pahānāya,",
  "tha-ap222:2.4": "padahiṃ satthu sāsane.",
  "tha-ap222:3.1": "Ito ekādase kappe,",
  "tha-ap222:3.2": "aggidevoti vissuto;",
  "tha-ap222:3.3": "Sattaratanasampanno,",
  "tha-ap222:3.4": "cakkavattī mahabbalo.",
  "tha-ap222:4.1": "Paṭisambhidā catasso,",
  "tha-ap222:4.2": "…pe…",
  "tha-ap222:4.3": "kataṃ buddhassa sāsanaṃ”. (2368)",
  "tha-ap222:5.1": "Itthaṃ sudaṃ āyasmā pāpanivāriyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap222:6.1": "Pāpanivāriyattherassāpadānaṃ dasamaṃ.",
  "tha-ap222:7.1": "Hatthivaggo bāvīsatimo.",
  "tha-ap222:8.1": "Tassuddānaṃ",
  "tha-ap222:9.1": "Hatthi pānadhi saccañca,",
  "tha-ap222:9.2": "ekasaññi ca raṃsiko;",
  "tha-ap222:9.3": "Sandhito tālavaṇṭañca,",
  "tha-ap222:9.4": "tathā akkantasaññako;",
  "tha-ap222:9.5": "Sappi pāpanivārī ca,",
  "tha-ap222:9.6": "catuppaññāsa gāthakāti."
}