{
  "tha-ap296:0.1": "Therāpadāna",
  "tha-ap296:0.2": "Citakapūjakavagga",
  "tha-ap296:0.3": "4. Saddasaññakattheraapadāna",
  "tha-ap296:1.1": "“Anuggatamhi ādicce,",
  "tha-ap296:1.2": "panādo vipulo ahu;",
  "tha-ap296:1.3": "Buddhaseṭṭhassa lokamhi,",
  "tha-ap296:1.4": "pātubhāvo mahesino.",
  "tha-ap296:2.1": "Ghosamassosahaṃ tattha,",
  "tha-ap296:2.2": "na ca passāmi taṃ jinaṃ;",
  "tha-ap296:2.3": "Maraṇañca anuppatto,",
  "tha-ap296:2.4": "buddhasaññamanussariṃ.",
  "tha-ap296:3.1": "Catunnavutito kappe,",
  "tha-ap296:3.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap296:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap296:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap296:4.1": "Paṭisambhidā catasso,",
  "tha-ap296:4.2": "…pe…",
  "tha-ap296:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap296:5.1": "Itthaṃ sudaṃ āyasmā saddasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap296:6.1": "Saddasaññakattherassāpadānaṃ catutthaṃ."
}