{
  "tha-ap316:0.1": "Therāpadāna",
  "tha-ap316:0.2": "Ārakkhadāyakavagga",
  "tha-ap316:0.3": "4. Sattapadumiyattheraapadāna",
  "tha-ap316:1.1": "“Nadīkūle vasāmahaṃ,",
  "tha-ap316:1.2": "nesādo nāma brāhmaṇo;",
  "tha-ap316:1.3": "Satapattehi pupphehi,",
  "tha-ap316:1.4": "sammajjitvāna assamaṃ.",
  "tha-ap316:2.1": "Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap316:2.2": "Siddhatthaṃ lokanāyakaṃ;",
  "tha-ap316:2.3": "Disvā nabhena gacchantaṃ,",
  "tha-ap316:2.4": "Hāso me udapajjatha.",
  "tha-ap316:3.1": "Paccuggantvāna sambuddhaṃ,",
  "tha-ap316:3.2": "lokajeṭṭhaṃ narāsabhaṃ;",
  "tha-ap316:3.3": "Assamaṃ atināmetvā,",
  "tha-ap316:3.4": "jalajaggehi okiriṃ.",
  "tha-ap316:4.1": "Catunnavutito kappe,",
  "tha-ap316:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap316:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap316:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap316:5.1": "Ito te sattame kappe,",
  "tha-ap316:5.2": "caturo pādapāvarā;",
  "tha-ap316:5.3": "Sattaratanasampannā,",
  "tha-ap316:5.4": "cakkavattī mahabbalā.",
  "tha-ap316:6.1": "Paṭisambhidā catasso,",
  "tha-ap316:6.2": "…pe…",
  "tha-ap316:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap316:7.1": "Itthaṃ sudaṃ āyasmā sattapadumiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap316:8.1": "Sattapadumiyattherassāpadānaṃ catutthaṃ."
}