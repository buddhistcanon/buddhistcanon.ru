{
  "tha-ap420:0.1": "Therāpadāna",
  "tha-ap420:0.2": "Bhaddālivagga",
  "tha-ap420:0.3": "8. Yāgudāyakattheraapadāna",
  "tha-ap420:1.1": "“Atithiṃ me gahetvāna,",
  "tha-ap420:1.2": "agacchiṃ gāmakaṃ tadā;",
  "tha-ap420:1.3": "Sampuṇṇanadikaṃ disvā,",
  "tha-ap420:1.4": "saṃghārāmaṃ upāgamiṃ.",
  "tha-ap420:2.1": "Āraññakā dhutadharā,",
  "tha-ap420:2.2": "jhāyino lūkhacīvarā;",
  "tha-ap420:2.3": "Vivekābhiratā dhīrā,",
  "tha-ap420:2.4": "saṃghārāme vasanti te.",
  "tha-ap420:3.1": "Gati tesaṃ upacchinnā,",
  "tha-ap420:3.2": "suvimuttāna tādinaṃ;",
  "tha-ap420:3.3": "Piṇḍāya te na gacchanti,",
  "tha-ap420:3.4": "oruddhanaditāya hi.",
  "tha-ap420:4.1": "Pasannacitto sumano,",
  "tha-ap420:4.2": "vedajāto katañjalī;",
  "tha-ap420:4.3": "Taṇḍulaṃ me gahetvāna,",
  "tha-ap420:4.4": "yāgudānaṃ adāsahaṃ.",
  "tha-ap420:5.1": "Pañcannaṃ yāguṃ datvāna,",
  "tha-ap420:5.2": "pasanno sehi pāṇibhi;",
  "tha-ap420:5.3": "Sakakammābhiraddhohaṃ,",
  "tha-ap420:5.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap420:6.1": "Maṇimayañca me byamhaṃ,",
  "tha-ap420:6.2": "nibbatti tidase gaṇe;",
  "tha-ap420:6.3": "Nārīgaṇehi sahito,",
  "tha-ap420:6.4": "modāmi byamhamuttame.",
  "tha-ap420:7.1": "Tettiṃsakkhattuṃ devindo,",
  "tha-ap420:7.2": "devarajjamakārayiṃ;",
  "tha-ap420:7.3": "Tiṃsakkhattuṃ cakkavattī,",
  "tha-ap420:7.4": "mahārajjamakārayiṃ.",
  "tha-ap420:8.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap420:8.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap420:8.3": "Devaloke manusse vā,",
  "tha-ap420:8.4": "anubhotvā sayaṃ ahaṃ.",
  "tha-ap420:9.1": "Pacchime bhave sampatte,",
  "tha-ap420:9.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap420:9.3": "Saha oropite kese,",
  "tha-ap420:9.4": "sabbaṃ sampaṭivijjhahaṃ.",
  "tha-ap420:10.1": "Khayato vayato cāpi,",
  "tha-ap420:10.2": "sammasanto kaḷevaraṃ;",
  "tha-ap420:10.3": "Pure sikkhāpadādānā,",
  "tha-ap420:10.4": "arahattamapāpuṇiṃ.",
  "tha-ap420:11.1": "Sudinnaṃ me dānavaraṃ,",
  "tha-ap420:11.2": "vāṇijjaṃ sampayojitaṃ;",
  "tha-ap420:11.3": "Teneva yāgudānena,",
  "tha-ap420:11.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap420:12.1": "Sokaṃ pariddavaṃ byādhiṃ,",
  "tha-ap420:12.2": "darathaṃ cittatāpanaṃ;",
  "tha-ap420:12.3": "Nābhijānāmi uppannaṃ,",
  "tha-ap420:12.4": "yāgudānassidaṃ phalaṃ.",
  "tha-ap420:13.1": "Yāguṃ saṃghassa datvāna,",
  "tha-ap420:13.2": "puññakkhette anuttare;",
  "tha-ap420:13.3": "Pañcānisaṃse anubhomi,",
  "tha-ap420:13.4": "aho yāgusuyiṭṭhatā.",
  "tha-ap420:14.1": "Abyādhitā rūpavatā,",
  "tha-ap420:14.2": "khippaṃ dhammanisantitā;",
  "tha-ap420:14.3": "Lābhitā annapānassa,",
  "tha-ap420:14.4": "āyu pañcamakaṃ mama.",
  "tha-ap420:15.1": "Yo koci vedaṃ janayaṃ,",
  "tha-ap420:15.2": "saṃghe yāguṃ dadeyya so;",
  "tha-ap420:15.3": "Imāni pañca ṭhānāni,",
  "tha-ap420:15.4": "paṭigaṇheyya paṇḍito.",
  "tha-ap420:16.1": "Karaṇīyaṃ kataṃ sabbaṃ,",
  "tha-ap420:16.2": "bhavā ugghāṭitā mayā;",
  "tha-ap420:16.3": "Sabbāsavā parikkhīṇā,",
  "tha-ap420:16.4": "natthi dāni punabbhavo.",
  "tha-ap420:17.1": "So ahaṃ vicarissāmi,",
  "tha-ap420:17.2": "gāmā gāmaṃ purā puraṃ;",
  "tha-ap420:17.3": "Namassamāno sambuddhaṃ,",
  "tha-ap420:17.4": "dhammassa ca sudhammataṃ.",
  "tha-ap420:18.1": "Tiṃsakappasahassamhi,",
  "tha-ap420:18.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap420:18.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap420:18.4": "yāgudānassidaṃ phalaṃ.",
  "tha-ap420:19.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap420:19.2": "…pe…",
  "tha-ap420:19.3": "viharāmi anāsavo.",
  "tha-ap420:20.1": "Svāgataṃ vata me āsi,",
  "tha-ap420:20.2": "…pe…",
  "tha-ap420:20.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap420:21.1": "Paṭisambhidā catasso,",
  "tha-ap420:21.2": "…pe…",
  "tha-ap420:21.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap420:22.1": "Itthaṃ sudaṃ āyasmā yāgudāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap420:23.1": "Yāgudāyakattherassāpadānaṃ aṭṭhamaṃ."
}