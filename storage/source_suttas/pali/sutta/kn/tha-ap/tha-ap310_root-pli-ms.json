{
  "tha-ap310:0.1": "Therāpadāna",
  "tha-ap310:0.2": "Padumakesaravagga",
  "tha-ap310:0.3": "8. Anulepadāyakattheraapadāna",
  "tha-ap310:1.1": "“Atthadassissa munino,",
  "tha-ap310:1.2": "addasaṃ sāvakaṃ ahaṃ;",
  "tha-ap310:1.3": "Navakammaṃ karontassa,",
  "tha-ap310:1.4": "sīmāya upagacchahaṃ.",
  "tha-ap310:2.1": "Niṭṭhite navakamme ca,",
  "tha-ap310:2.2": "anulepamadāsahaṃ;",
  "tha-ap310:2.3": "Pasannacitto sumano,",
  "tha-ap310:2.4": "puññakkhette anuttare.",
  "tha-ap310:3.1": "Aṭṭhārase kappasate,",
  "tha-ap310:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap310:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap310:3.4": "anulepassidaṃ phalaṃ.",
  "tha-ap310:4.1": "Paṭisambhidā catasso,",
  "tha-ap310:4.2": "…pe…",
  "tha-ap310:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap310:5.1": "Itthaṃ sudaṃ āyasmā anulepadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap310:6.1": "Anulepadāyakattherassāpadānaṃ aṭṭhamaṃ."
}