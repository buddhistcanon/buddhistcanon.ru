{
  "tha-ap374:0.1": "Therāpadāna",
  "tha-ap374:0.2": "Bodhivandanavagga",
  "tha-ap374:0.3": "2. Pāṭalipupphiyattheraapadāna",
  "tha-ap374:1.1": "“Vipassī nāma bhagavā,",
  "tha-ap374:1.2": "sayambhū aggapuggalo;",
  "tha-ap374:1.3": "Purakkhato sasissehi,",
  "tha-ap374:1.4": "pāvisi bandhumaṃ jino.",
  "tha-ap374:2.1": "Tīṇi pāṭalipupphāni,",
  "tha-ap374:2.2": "ucchaṅge ṭhapitāni me;",
  "tha-ap374:2.3": "Sīsaṃ nhāyitukāmova,",
  "tha-ap374:2.4": "nadītitthaṃ agacchahaṃ.",
  "tha-ap374:3.1": "Nikkhamma bandhumatiyā,",
  "tha-ap374:3.2": "addasaṃ lokanāyakaṃ;",
  "tha-ap374:3.3": "Indīvaraṃva jalitaṃ,",
  "tha-ap374:3.4": "ādittaṃva hutāsanaṃ.",
  "tha-ap374:4.1": "Byagghūsabhaṃva pavaraṃ,",
  "tha-ap374:4.2": "abhijātaṃva kesariṃ;",
  "tha-ap374:4.3": "Gacchantaṃ samaṇānaggaṃ,",
  "tha-ap374:4.4": "bhikkhusaṃghapurakkhataṃ.",
  "tha-ap374:5.1": "Tasmiṃ pasanno sugate,",
  "tha-ap374:5.2": "kilesamaladhovane;",
  "tha-ap374:5.3": "Gahetvā tīṇi pupphāni,",
  "tha-ap374:5.4": "buddhaseṭṭhaṃ apūjayiṃ.",
  "tha-ap374:6.1": "Ekanavutito kappe,",
  "tha-ap374:6.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap374:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap374:6.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap374:7.1": "Paṭisambhidā catasso,",
  "tha-ap374:7.2": "…pe…",
  "tha-ap374:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap374:8.1": "Itthaṃ sudaṃ āyasmā pāṭalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap374:9.1": "Pāṭalipupphiyattherassāpadānaṃ dutiyaṃ."
}