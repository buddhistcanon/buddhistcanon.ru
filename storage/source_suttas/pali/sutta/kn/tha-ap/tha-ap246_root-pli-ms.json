{
  "tha-ap246:0.1": "Therāpadāna",
  "tha-ap246:0.2": "Tuvaradāyakavagga",
  "tha-ap246:0.3": "4 Viravapupphiyattheraapadāna",
  "tha-ap246:1.1": "“Khīṇāsavasahassehi,",
  "tha-ap246:1.2": "niyyāti lokanāyako;",
  "tha-ap246:1.3": "Viravapupphamādāya,",
  "tha-ap246:1.4": "buddhassa abhiropayiṃ.",
  "tha-ap246:2.1": "Ekanavutito kappe,",
  "tha-ap246:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap246:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap246:2.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap246:3.1": "Paṭisambhidā catasso,",
  "tha-ap246:3.2": "…pe…",
  "tha-ap246:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap246:4.1": "Itthaṃ sudaṃ āyasmā viravapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap246:5.1": "Viravapupphiyattherassāpadānaṃ catutthaṃ."
}