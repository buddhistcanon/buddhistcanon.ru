{
  "tha-ap107:0.1": "Therāpadāna",
  "tha-ap107:0.2": "Bhikkhadāyivagga",
  "tha-ap107:0.3": "5. Muṭṭhipupphiyattheraapadāna",
  "tha-ap107:1.1": "“Sudassanoti nāmena,",
  "tha-ap107:1.2": "mālākāro ahaṃ tadā;",
  "tha-ap107:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap107:1.4": "lokajeṭṭhaṃ narāsabhaṃ.",
  "tha-ap107:2.1": "Jātipupphaṃ gahetvāna,",
  "tha-ap107:2.2": "pūjayiṃ padumuttaraṃ;",
  "tha-ap107:2.3": "Visuddhacakkhu sumano,",
  "tha-ap107:2.4": "dibbacakkhuṃ samajjhagaṃ.",
  "tha-ap107:3.1": "Etissā pupphapūjāya,",
  "tha-ap107:3.2": "cittassa paṇidhīhi ca;",
  "tha-ap107:3.3": "Kappānaṃ satasahassaṃ,",
  "tha-ap107:3.4": "duggatiṃ nupapajjahaṃ.",
  "tha-ap107:4.1": "Soḷasāsiṃsu rājāno,",
  "tha-ap107:4.2": "devuttarasanāmakā;",
  "tha-ap107:4.3": "Chattiṃsamhi ito kappe,",
  "tha-ap107:4.4": "cakkavattī mahabbalā.",
  "tha-ap107:5.1": "Paṭisambhidā catasso,",
  "tha-ap107:5.2": "…pe…",
  "tha-ap107:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap107:6.1": "Itthaṃ sudaṃ āyasmā muṭṭhipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap107:7.1": "Muṭṭhipupphiyattherassāpadānaṃ pañcamaṃ."
}