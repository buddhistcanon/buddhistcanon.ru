{
  "tha-ap421:0.1": "Therāpadāna",
  "tha-ap421:0.2": "Bhaddālivagga",
  "tha-ap421:0.3": "9. Patthodanadāyakattheraapadāna",
  "tha-ap421:1.1": "“Vanacārī pure āsiṃ,",
  "tha-ap421:1.2": "satataṃ vanakammiko;",
  "tha-ap421:1.3": "Patthodanaṃ gahetvāna,",
  "tha-ap421:1.4": "kammantaṃ agamāsahaṃ.",
  "tha-ap421:2.1": "Tatthaddasāsiṃ sambuddhaṃ,",
  "tha-ap421:2.2": "sayambhuṃ aparājitaṃ;",
  "tha-ap421:2.3": "Vanā piṇḍāya nikkhantaṃ,",
  "tha-ap421:2.4": "disvā cittaṃ pasādayiṃ.",
  "tha-ap421:3.1": "Parakammāyane yutto,",
  "tha-ap421:3.2": "puññañca me na vijjati;",
  "tha-ap421:3.3": "Ayaṃ patthodano atthi,",
  "tha-ap421:3.4": "bhojayissāmahaṃ muniṃ.",
  "tha-ap421:4.1": "Patthodanaṃ gahetvāna,",
  "tha-ap421:4.2": "sayambhussa adāsahaṃ;",
  "tha-ap421:4.3": "Mama nijjhāyamānassa,",
  "tha-ap421:4.4": "paribhuñji tadā muni.",
  "tha-ap421:5.1": "Tena kammena sukatena,",
  "tha-ap421:5.2": "cetanāpaṇidhīhi ca;",
  "tha-ap421:5.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap421:5.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap421:6.1": "Chattiṃsakkhattuṃ devindo,",
  "tha-ap421:6.2": "devarajjamakārayiṃ;",
  "tha-ap421:6.3": "Tettiṃsakkhattuṃ rājā ca,",
  "tha-ap421:6.4": "cakkavattī ahosahaṃ.",
  "tha-ap421:7.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap421:7.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap421:7.3": "Sukhito yasavā homi,",
  "tha-ap421:7.4": "patthodanassidaṃ phalaṃ.",
  "tha-ap421:8.1": "Bhavābhave saṃsaranto,",
  "tha-ap421:8.2": "labhāmi amitaṃ dhanaṃ;",
  "tha-ap421:8.3": "Bhoge me ūnatā natthi,",
  "tha-ap421:8.4": "patthodanassidaṃ phalaṃ.",
  "tha-ap421:9.1": "Nadīsotapaṭibhāgā,",
  "tha-ap421:9.2": "bhogā nibbattare mama;",
  "tha-ap421:9.3": "Parimetuṃ na sakkomi,",
  "tha-ap421:9.4": "patthodanassidaṃ phalaṃ.",
  "tha-ap421:10.1": "Imaṃ khāda imaṃ bhuñja,",
  "tha-ap421:10.2": "imamhi sayane saya;",
  "tha-ap421:10.3": "Tenāhaṃ sukhito homi,",
  "tha-ap421:10.4": "patthodanassidaṃ phalaṃ.",
  "tha-ap421:11.1": "Catunnavutito kappe,",
  "tha-ap421:11.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap421:11.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap421:11.4": "patthodanassidaṃ phalaṃ.",
  "tha-ap421:12.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap421:12.2": "…pe…",
  "tha-ap421:12.3": "viharāmi anāsavo.",
  "tha-ap421:13.1": "Svāgataṃ vata me āsi,",
  "tha-ap421:13.2": "…pe…",
  "tha-ap421:13.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap421:14.1": "Paṭisambhidā catasso,",
  "tha-ap421:14.2": "…pe…",
  "tha-ap421:14.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap421:15.1": "Itthaṃ sudaṃ āyasmā patthodanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap421:16.1": "Patthodanadāyakattherassāpadānaṃ navamaṃ."
}