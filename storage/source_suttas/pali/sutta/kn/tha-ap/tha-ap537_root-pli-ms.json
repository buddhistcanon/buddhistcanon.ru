{
  "tha-ap537:0.1": "Therāpadāna",
  "tha-ap537:0.2": "Kaccāyanavagga",
  "tha-ap537:0.3": "5. Kumārakassapattheraapadāna",
  "tha-ap537:1.1": "“Ito satasahassamhi,",
  "tha-ap537:1.2": "kappe uppajji nāyako;",
  "tha-ap537:1.3": "Sabbalokahito vīro,",
  "tha-ap537:1.4": "padumuttaranāmako.",
  "tha-ap537:2.1": "Tadāhaṃ brāhmaṇo hutvā,",
  "tha-ap537:2.2": "vissuto vedapāragū;",
  "tha-ap537:2.3": "Divāvihāraṃ vicaraṃ,",
  "tha-ap537:2.4": "addasaṃ lokanāyakaṃ.",
  "tha-ap537:3.1": "Catusaccaṃ pakāsentaṃ,",
  "tha-ap537:3.2": "bodhayantaṃ sadevakaṃ;",
  "tha-ap537:3.3": "Vicittakathikānaggaṃ,",
  "tha-ap537:3.4": "vaṇṇayantaṃ mahājane.",
  "tha-ap537:4.1": "Tadā muditacittohaṃ,",
  "tha-ap537:4.2": "nimantetvā tathāgataṃ;",
  "tha-ap537:4.3": "Nānārattehi vatthehi,",
  "tha-ap537:4.4": "alaṅkaritvāna maṇḍapaṃ.",
  "tha-ap537:5.1": "Nānāratanapajjotaṃ,",
  "tha-ap537:5.2": "sasaṃghaṃ bhojayiṃ tahiṃ;",
  "tha-ap537:5.3": "Bhojayitvāna sattāhaṃ,",
  "tha-ap537:5.4": "nānaggarasabhojanaṃ.",
  "tha-ap537:6.1": "Nānācittehi pupphehi,",
  "tha-ap537:6.2": "pūjayitvā sasāvakaṃ;",
  "tha-ap537:6.3": "Nipacca pādamūlamhi,",
  "tha-ap537:6.4": "taṃ ṭhānaṃ patthayiṃ ahaṃ.",
  "tha-ap537:7.1": "Tadā munivaro āha,",
  "tha-ap537:7.2": "karuṇekarasāsayo;",
  "tha-ap537:7.3": "‘Passathetaṃ dijavaraṃ,",
  "tha-ap537:7.4": "padumānanalocanaṃ.",
  "tha-ap537:8.1": "Pītipāmojjabahulaṃ,",
  "tha-ap537:8.2": "samuggatatanūruhaṃ;",
  "tha-ap537:8.3": "Hāsamhitavisālakkhaṃ,",
  "tha-ap537:8.4": "mama sāsanalālasaṃ.",
  "tha-ap537:9.1": "Patitaṃ pādamūle me,",
  "tha-ap537:9.2": "ekāvatthasumānasaṃ;",
  "tha-ap537:9.3": "Esa pattheti taṃ ṭhānaṃ,",
  "tha-ap537:9.4": "vicittakathikattanaṃ.",
  "tha-ap537:10.1": "Satasahassito kappe,",
  "tha-ap537:10.2": "okkākakulasambhavo;",
  "tha-ap537:10.3": "Gotamo nāma gottena,",
  "tha-ap537:10.4": "satthā loke bhavissati.",
  "tha-ap537:11.1": "Tassa dhammesu dāyādo,",
  "tha-ap537:11.2": "oraso dhammanimmito;",
  "tha-ap537:11.3": "Kumārakassapo nāma,",
  "tha-ap537:11.4": "hessati satthu sāvako.",
  "tha-ap537:12.1": "Vicittapupphadussānaṃ,",
  "tha-ap537:12.2": "ratanānañca vāhasā;",
  "tha-ap537:12.3": "Vicittakathikānaṃ so,",
  "tha-ap537:12.4": "aggataṃ pāpuṇissati’.",
  "tha-ap537:13.1": "Tena kammena sukatena,",
  "tha-ap537:13.2": "cetanāpaṇidhīhi ca;",
  "tha-ap537:13.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap537:13.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap537:14.1": "Paribbhamaṃ bhavābhave,",
  "tha-ap537:14.2": "raṅgamajjhe yathā naṭo;",
  "tha-ap537:14.3": "Sākhamigatrajo hutvā,",
  "tha-ap537:14.4": "migiyā kucchimokkamiṃ.",
  "tha-ap537:15.1": "Tadā mayi kucchigate,",
  "tha-ap537:15.2": "vajjhavāro upaṭṭhito;",
  "tha-ap537:15.3": "Sākhena cattā me mātā,",
  "tha-ap537:15.4": "nigrodhaṃ saraṇaṃ gatā.",
  "tha-ap537:16.1": "Tena sā migarājena,",
  "tha-ap537:16.2": "maraṇā parimocitā;",
  "tha-ap537:16.3": "Pariccajitvā sapāṇaṃ,",
  "tha-ap537:16.4": "mamevaṃ ovadī tadā.",
  "tha-ap537:17.1": "‘Nigrodhameva seveyya,",
  "tha-ap537:17.2": "na sākhamupasaṃvase;",
  "tha-ap537:17.3": "Nigrodhasmiṃ mataṃ seyyo,",
  "tha-ap537:17.4": "yañce sākhamhi jīvitaṃ’.",
  "tha-ap537:18.1": "Tenānusiṭṭhā migayūthapena,",
  "tha-ap537:18.2": "Ahañca mātā ca tathetare ca;",
  "tha-ap537:18.3": "Āgamma rammaṃ tusitādhivāsaṃ,",
  "tha-ap537:18.4": "Gatā pavāsaṃ sagharaṃ yatheva.",
  "tha-ap537:19.1": "Puno kassapavīrassa,",
  "tha-ap537:19.2": "atthamentamhi sāsane;",
  "tha-ap537:19.3": "Āruyha selasikharaṃ,",
  "tha-ap537:19.4": "yuñjitvā jinasāsanaṃ.",
  "tha-ap537:20.1": "Idānāhaṃ rājagahe,",
  "tha-ap537:20.2": "jāto seṭṭhikule ahuṃ;",
  "tha-ap537:20.3": "Āpannasattā me mātā,",
  "tha-ap537:20.4": "pabbaji anagāriyaṃ.",
  "tha-ap537:21.1": "Sagabbhaṃ taṃ viditvāna,",
  "tha-ap537:21.2": "devadattamupānayuṃ;",
  "tha-ap537:21.3": "So avoca ‘vināsetha,",
  "tha-ap537:21.4": "pāpikaṃ bhikkhuniṃ imaṃ’.",
  "tha-ap537:22.1": "Idānipi munindena,",
  "tha-ap537:22.2": "jinena anukampitā;",
  "tha-ap537:22.3": "Sukhinī ajanī mayhaṃ,",
  "tha-ap537:22.4": "mātā bhikkhunupassaye.",
  "tha-ap537:23.1": "Taṃ viditvā mahīpālo,",
  "tha-ap537:23.2": "kosalo maṃ aposayi;",
  "tha-ap537:23.3": "Kumāraparihārena,",
  "tha-ap537:23.4": "nāmenāhañca kassapo.",
  "tha-ap537:24.1": "Mahākassapamāgamma,",
  "tha-ap537:24.2": "ahaṃ kumārakassapo;",
  "tha-ap537:24.3": "Vammikasadisaṃ kāyaṃ,",
  "tha-ap537:24.4": "sutvā buddhena desitaṃ.",
  "tha-ap537:25.1": "Tato cittaṃ vimucci me,",
  "tha-ap537:25.2": "anupādāya sabbaso;",
  "tha-ap537:25.3": "Pāyāsiṃ damayitvāhaṃ,",
  "tha-ap537:25.4": "etadaggamapāpuṇiṃ.",
  "tha-ap537:26.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap537:26.2": "…pe…",
  "tha-ap537:26.3": "viharāmi anāsavo.",
  "tha-ap537:27.1": "Svāgataṃ vata me āsi,",
  "tha-ap537:27.2": "…pe…",
  "tha-ap537:27.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap537:28.1": "Paṭisambhidā catasso,",
  "tha-ap537:28.2": "…pe…",
  "tha-ap537:28.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap537:29.1": "Itthaṃ sudaṃ āyasmā kumārakassapo thero imā gāthāyo abhāsitthāti.",
  "tha-ap537:30.1": "Kumārakassapattherassāpadānaṃ pañcamaṃ.",
  "tha-ap537:30.2": "Catuvīsatimaṃ bhāṇavāraṃ."
}