{
  "tha-ap367:0.1": "Therāpadāna",
  "tha-ap367:0.2": "Mandāravapupphiyavagga",
  "tha-ap367:0.3": "5. Aṅkolapupphiyattheraapadāna",
  "tha-ap367:1.1": "“Padumo nāma sambuddho,",
  "tha-ap367:1.2": "cittakūṭe vasī tadā;",
  "tha-ap367:1.3": "Disvāna taṃ ahaṃ buddhaṃ,",
  "tha-ap367:1.4": "sayambhuṃ aparājitaṃ.",
  "tha-ap367:2.1": "Aṅkolaṃ pupphitaṃ disvā,",
  "tha-ap367:2.2": "ocinitvānahaṃ tadā;",
  "tha-ap367:2.3": "Upagantvāna sambuddhaṃ,",
  "tha-ap367:2.4": "pūjayiṃ padumaṃ jinaṃ.",
  "tha-ap367:3.1": "Ekattiṃse ito kappe,",
  "tha-ap367:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap367:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap367:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap367:4.1": "Paṭisambhidā catasso,",
  "tha-ap367:4.2": "…pe…",
  "tha-ap367:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap367:5.1": "Itthaṃ sudaṃ āyasmā aṅkolapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap367:6.1": "Aṅkolapupphiyattherassāpadānaṃ pañcamaṃ."
}