{
  "tha-ap470:0.1": "Therāpadāna",
  "tha-ap470:0.2": "Sālakusumiyavagga",
  "tha-ap470:0.3": "8 Pilakkhaphaladāyakattheraapadāna",
  "tha-ap470:1.1": "“Vanantare buddhaṃ disvā,",
  "tha-ap470:1.2": "atthadassiṃ mahāyasaṃ;",
  "tha-ap470:1.3": "Pasannacitto sumano,",
  "tha-ap470:1.4": "pilakkhassa phalaṃ adā.",
  "tha-ap470:2.1": "Aṭṭhārase kappasate,",
  "tha-ap470:2.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap470:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap470:2.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap470:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap470:3.2": "…pe…",
  "tha-ap470:3.3": "viharāmi anāsavo.",
  "tha-ap470:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap470:4.2": "…pe…",
  "tha-ap470:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap470:5.1": "Paṭisambhidā catasso,",
  "tha-ap470:5.2": "…pe…",
  "tha-ap470:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap470:6.1": "Itthaṃ sudaṃ āyasmā pilakkhaphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap470:7.1": "Pilakkhaphaladāyakattherassāpadānaṃ aṭṭhamaṃ."
}