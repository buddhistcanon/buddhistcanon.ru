{
  "tha-ap21:0.1": "Therāpadāna",
  "tha-ap21:0.2": "Sīhāsaniyavagga",
  "tha-ap21:0.3": "9. Sopākattheraapadāna",
  "tha-ap21:1.1": "“Pabbhāraṃ sodhayantassa,",
  "tha-ap21:1.2": "vipine pabbatuttame;",
  "tha-ap21:1.3": "Siddhattho nāma bhagavā,",
  "tha-ap21:1.4": "āgacchi mama santikaṃ.",
  "tha-ap21:2.1": "Buddhaṃ upagataṃ disvā,",
  "tha-ap21:2.2": "lokajeṭṭhassa tādino;",
  "tha-ap21:2.3": "Santharaṃ paññapetvāna,",
  "tha-ap21:2.4": "pupphāsanamadāsahaṃ.",
  "tha-ap21:3.1": "Pupphāsane nisīditvā,",
  "tha-ap21:3.2": "siddhattho lokanāyako;",
  "tha-ap21:3.3": "Mamañca gatimaññāya,",
  "tha-ap21:3.4": "aniccatamudāhari.",
  "tha-ap21:4.1": "‘Aniccā vata saṅkhārā,",
  "tha-ap21:4.2": "uppādavayadhammino;",
  "tha-ap21:4.3": "Uppajjitvā nirujjhanti,",
  "tha-ap21:4.4": "tesaṃ vūpasamo sukho’.",
  "tha-ap21:5.1": "Idaṃ vatvāna sabbaññū,",
  "tha-ap21:5.2": "lokajeṭṭho narāsabho;",
  "tha-ap21:5.3": "Nabhaṃ abbhuggami vīro,",
  "tha-ap21:5.4": "haṃsarājāva ambare.",
  "tha-ap21:6.1": "Sakaṃ diṭṭhiṃ jahitvāna,",
  "tha-ap21:6.2": "bhāvayāniccasaññahaṃ;",
  "tha-ap21:6.3": "Ekāhaṃ bhāvayitvāna,",
  "tha-ap21:6.4": "tattha kālaṃ kato ahaṃ.",
  "tha-ap21:7.1": "Dve sampattī anubhotvā,",
  "tha-ap21:7.2": "sukkamūlena codito;",
  "tha-ap21:7.3": "Pacchime bhave sampatte,",
  "tha-ap21:7.4": "sapākayonupāgamiṃ.",
  "tha-ap21:8.1": "Agārā abhinikkhamma,",
  "tha-ap21:8.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap21:8.3": "Jātiyā sattavassohaṃ,",
  "tha-ap21:8.4": "arahattamapāpuṇiṃ.",
  "tha-ap21:9.1": "Āraddhavīriyo pahitatto,",
  "tha-ap21:9.2": "Sīlesu susamāhito;",
  "tha-ap21:9.3": "Tosetvāna mahānāgaṃ,",
  "tha-ap21:9.4": "Alatthaṃ upasampadaṃ.",
  "tha-ap21:10.1": "Catunnavutito kappe,",
  "tha-ap21:10.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap21:10.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap21:10.4": "pupphadānassidaṃ phalaṃ.",
  "tha-ap21:11.1": "Catunnavutito kappe,",
  "tha-ap21:11.2": "yaṃ saññaṃ bhāvayiṃ tadā;",
  "tha-ap21:11.3": "Taṃ saññaṃ bhāvayantassa,",
  "tha-ap21:11.4": "patto me āsavakkhayo.",
  "tha-ap21:12.1": "Paṭisambhidā catasso,",
  "tha-ap21:12.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap21:12.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap21:12.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap21:13.1": "Itthaṃ sudaṃ āyasmā sopāko thero imā gāthāyo abhāsitthāti.",
  "tha-ap21:14.1": "Sopākattherassāpadānaṃ navamaṃ."
}