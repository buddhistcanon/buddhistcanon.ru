{
  "tha-ap208:0.1": "Therāpadāna",
  "tha-ap208:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap208:0.3": "6. Udakadāyakattheraapadāna",
  "tha-ap208:1.1": "“Bhuñjantaṃ samaṇaṃ disvā,",
  "tha-ap208:1.2": "vippasannamanāvilaṃ;",
  "tha-ap208:1.3": "Ghaṭenodakamādāya,",
  "tha-ap208:1.4": "siddhatthassa adāsahaṃ.",
  "tha-ap208:2.1": "Nimmalo homahaṃ ajja,",
  "tha-ap208:2.2": "vimalo khīṇasaṃsayo;",
  "tha-ap208:2.3": "Bhave nibbattamānamhi,",
  "tha-ap208:2.4": "phalaṃ nibbattate mama.",
  "tha-ap208:3.1": "Catunnavutito kappe,",
  "tha-ap208:3.2": "udakaṃ yamadāsahaṃ;",
  "tha-ap208:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap208:3.4": "dakadānassidaṃ phalaṃ.",
  "tha-ap208:4.1": "Ekasaṭṭhimhito kappe,",
  "tha-ap208:4.2": "ekova vimalo ahu;",
  "tha-ap208:4.3": "Sattaratanasampanno,",
  "tha-ap208:4.4": "cakkavattī mahabbalo.",
  "tha-ap208:5.1": "Paṭisambhidā catasso,",
  "tha-ap208:5.2": "…pe…",
  "tha-ap208:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap208:6.1": "Itthaṃ sudaṃ āyasmā udakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap208:7.1": "Udakadāyakattherassāpadānaṃ chaṭṭhaṃ."
}