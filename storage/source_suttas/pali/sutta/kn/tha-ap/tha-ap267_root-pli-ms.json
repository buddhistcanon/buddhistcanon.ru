{
  "tha-ap267:0.1": "Therāpadāna",
  "tha-ap267:0.2": "Padumukkhipavagga",
  "tha-ap267:0.3": "5. Biḷālidāyakattheraapadāna",
  "tha-ap267:1.1": "“Himavantassāvidūre,",
  "tha-ap267:1.2": "romaso nāma pabbato;",
  "tha-ap267:1.3": "Tamhi pabbatapādamhi,",
  "tha-ap267:1.4": "samaṇo bhāvitindriyo.",
  "tha-ap267:2.1": "Biḷāliyo gahetvāna,",
  "tha-ap267:2.2": "samaṇassa adāsahaṃ;",
  "tha-ap267:2.3": "Anumodi mahāvīro,",
  "tha-ap267:2.4": "sayambhū aparājito.",
  "tha-ap267:3.1": "Biḷālī te mama dinnā,",
  "tha-ap267:3.2": "vippasannena cetasā;",
  "tha-ap267:3.3": "Bhave nibbattamānamhi,",
  "tha-ap267:3.4": "phalaṃ nibbattataṃ tava.",
  "tha-ap267:4.1": "Catunnavutito kappe,",
  "tha-ap267:4.2": "yaṃ biḷālimadāsahaṃ;",
  "tha-ap267:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap267:4.4": "biḷāliyā idaṃ phalaṃ.",
  "tha-ap267:5.1": "Paṭisambhidā catasso,",
  "tha-ap267:5.2": "…pe…",
  "tha-ap267:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap267:6.1": "Itthaṃ sudaṃ āyasmā biḷālidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap267:7.1": "Biḷālidāyakattherassāpadānaṃ pañcamaṃ."
}