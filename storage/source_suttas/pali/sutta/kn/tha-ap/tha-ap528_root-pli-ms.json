{
  "tha-ap528:0.1": "Therāpadāna",
  "tha-ap528:0.2": "Tiṇadāyakavagga",
  "tha-ap528:0.3": "6. Daṇḍadāyakattheraapadāna",
  "tha-ap528:1.1": "“Kānanaṃ vanamogayha,",
  "tha-ap528:1.2": "veḷuṃ chetvānahaṃ tadā;",
  "tha-ap528:1.3": "Ālambaṇaṃ karitvāna,",
  "tha-ap528:1.4": "saṃghassa adadiṃ bahuṃ.",
  "tha-ap528:2.1": "Tena cittappasādena,",
  "tha-ap528:2.2": "subbate abhivādiya;",
  "tha-ap528:2.3": "Ālambadaṇḍaṃ datvāna,",
  "tha-ap528:2.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap528:3.1": "Catunnavutito kappe,",
  "tha-ap528:3.2": "yaṃ daṇḍamadadiṃ tadā;",
  "tha-ap528:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap528:3.4": "daṇḍadānassidaṃ phalaṃ.",
  "tha-ap528:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap528:4.2": "…pe…",
  "tha-ap528:4.3": "viharāmi anāsavo.",
  "tha-ap528:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap528:5.2": "…pe…",
  "tha-ap528:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap528:6.1": "Paṭisambhidā catasso,",
  "tha-ap528:6.2": "…pe…",
  "tha-ap528:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap528:7.1": "Itthaṃ sudaṃ āyasmā daṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap528:8.1": "Daṇḍadāyakattherassāpadānaṃ chaṭṭhaṃ.",
  "tha-ap528:8.2": "Tevīsatimaṃ bhāṇavāraṃ."
}