{
  "tha-ap8:0.1": "Therāpadāna",
  "tha-ap8:0.2": "Buddhavagga",
  "tha-ap8:0.3": "8. Upālittheraapadāna",
  "tha-ap8:1.1": "“Nagare haṃsavatiyā,",
  "tha-ap8:1.2": "sujāto nāma brāhmaṇo;",
  "tha-ap8:1.3": "Asītikoṭinicayo,",
  "tha-ap8:1.4": "pahūtadhanadhaññavā.",
  "tha-ap8:2.1": "Ajjhāyako mantadharo,",
  "tha-ap8:2.2": "tiṇṇaṃ vedāna pāragū;",
  "tha-ap8:2.3": "Lakkhaṇe itihāse ca,",
  "tha-ap8:2.4": "sadhamme pāramiṃ gato.",
  "tha-ap8:3.1": "Paribbājā ekasikhā,",
  "tha-ap8:3.2": "gotamā buddhasāvakā;",
  "tha-ap8:3.3": "Carakā tāpasā ceva,",
  "tha-ap8:3.4": "caranti mahiyā tadā.",
  "tha-ap8:4.1": "Tepi maṃ parivārenti,",
  "tha-ap8:4.2": "brāhmaṇo vissuto iti;",
  "tha-ap8:4.3": "Bahujjano maṃ pūjeti,",
  "tha-ap8:4.4": "nāhaṃ pūjemi kiñcanaṃ.",
  "tha-ap8:5.1": "Pūjārahaṃ na passāmi,",
  "tha-ap8:5.2": "mānatthaddho ahaṃ tadā;",
  "tha-ap8:5.3": "Buddhoti vacanaṃ natthi,",
  "tha-ap8:5.4": "tāva nuppajjate jino.",
  "tha-ap8:6.1": "Accayena ahorattaṃ,",
  "tha-ap8:6.2": "padumuttaranāmako;",
  "tha-ap8:6.3": "Sabbaṃ tamaṃ vinodetvā,",
  "tha-ap8:6.4": "loke uppajji cakkhumā.",
  "tha-ap8:7.1": "Vitthārike bāhujaññe,",
  "tha-ap8:7.2": "puthubhūte ca sāsane;",
  "tha-ap8:7.3": "Upāgami tadā buddho,",
  "tha-ap8:7.4": "nagaraṃ haṃsasavhayaṃ.",
  "tha-ap8:8.1": "Pitu atthāya so buddho,",
  "tha-ap8:8.2": "dhammaṃ desesi cakkhumā;",
  "tha-ap8:8.3": "Tena kālena parisā,",
  "tha-ap8:8.4": "samantā yojanaṃ tadā.",
  "tha-ap8:9.1": "Sammato manujānaṃ so,",
  "tha-ap8:9.2": "sunando nāma tāpaso;",
  "tha-ap8:9.3": "Yāvatā buddhaparisā,",
  "tha-ap8:9.4": "pupphehacchādayī tadā.",
  "tha-ap8:10.1": "Catusaccaṃ pakāsente,",
  "tha-ap8:10.2": "seṭṭhe ca pupphamaṇḍape;",
  "tha-ap8:10.3": "Koṭisatasahassānaṃ,",
  "tha-ap8:10.4": "dhammābhisamayo ahu.",
  "tha-ap8:11.1": "Sattarattindivaṃ buddho,",
  "tha-ap8:11.2": "vassetvā dhammavuṭṭhiyo;",
  "tha-ap8:11.3": "Aṭṭhame divase patte,",
  "tha-ap8:11.4": "sunandaṃ kittayī jino.",
  "tha-ap8:12.1": "Devaloke manusse vā,",
  "tha-ap8:12.2": "saṃsaranto ayaṃ bhave;",
  "tha-ap8:12.3": "Sabbesaṃ pavaro hutvā,",
  "tha-ap8:12.4": "bhavesu saṃsarissati.",
  "tha-ap8:13.1": "Kappasatasahassamhi,",
  "tha-ap8:13.2": "okkākakulasambhavo;",
  "tha-ap8:13.3": "Gotamo nāma gottena,",
  "tha-ap8:13.4": "satthā loke bhavissati.",
  "tha-ap8:14.1": "Tassa dhammesu dāyādo,",
  "tha-ap8:14.2": "oraso dhammanimmito;",
  "tha-ap8:14.3": "Mantāṇiputto puṇṇoti,",
  "tha-ap8:14.4": "hessati satthu sāvako.",
  "tha-ap8:15.1": "Evaṃ kittayi sambuddho,",
  "tha-ap8:15.2": "sunandaṃ tāpasaṃ tadā;",
  "tha-ap8:15.3": "Hāsayanto janaṃ sabbaṃ,",
  "tha-ap8:15.4": "dassayanto sakaṃ balaṃ.",
  "tha-ap8:16.1": "Katañjalī namassanti,",
  "tha-ap8:16.2": "sunandaṃ tāpasaṃ janā;",
  "tha-ap8:16.3": "Buddhe kāraṃ karitvāna,",
  "tha-ap8:16.4": "sodhesi gatimattano.",
  "tha-ap8:17.1": "Tattha me ahu saṅkappo,",
  "tha-ap8:17.2": "sutvāna munino vacaṃ;",
  "tha-ap8:17.3": "Ahampi kāraṃ kassāmi,",
  "tha-ap8:17.4": "yathā passāmi gotamaṃ.",
  "tha-ap8:18.1": "Evāhaṃ cintayitvāna,",
  "tha-ap8:18.2": "kiriyaṃ cintayiṃ mama;",
  "tha-ap8:18.3": "Kyāhaṃ kammaṃ ācarāmi,",
  "tha-ap8:18.4": "puññakkhette anuttare.",
  "tha-ap8:19.1": "Ayañca pāṭhiko bhikkhu,",
  "tha-ap8:19.2": "sabbapāṭhissa sāsane;",
  "tha-ap8:19.3": "Vinaye agganikkhitto,",
  "tha-ap8:19.4": "taṃ ṭhānaṃ patthaye ahaṃ.",
  "tha-ap8:20.1": "Idaṃ me amitaṃ bhogaṃ,",
  "tha-ap8:20.2": "akkhobhaṃ sāgarūpamaṃ;",
  "tha-ap8:20.3": "Tena bhogena buddhassa,",
  "tha-ap8:20.4": "ārāmaṃ māpaye ahaṃ.",
  "tha-ap8:21.1": "Sobhanaṃ nāma ārāmaṃ,",
  "tha-ap8:21.2": "nagarassa puratthato;",
  "tha-ap8:21.3": "Kiṇitvā satasahassena,",
  "tha-ap8:21.4": "saṃghārāmaṃ amāpayiṃ.",
  "tha-ap8:22.1": "Kūṭāgāre ca pāsāde,",
  "tha-ap8:22.2": "maṇḍape hammiye guhā;",
  "tha-ap8:22.3": "Caṅkame sukate katvā,",
  "tha-ap8:22.4": "saṃghārāmaṃ amāpayiṃ.",
  "tha-ap8:23.1": "Jantāgharaṃ aggisālaṃ,",
  "tha-ap8:23.2": "atho udakamāḷakaṃ;",
  "tha-ap8:23.3": "Nhānagharaṃ māpayitvā,",
  "tha-ap8:23.4": "bhikkhusaṃghassadāsahaṃ.",
  "tha-ap8:24.1": "Āsandiyo pīṭhake ca,",
  "tha-ap8:24.2": "paribhoge ca bhājane;",
  "tha-ap8:24.3": "Ārāmikañca bhesajjaṃ,",
  "tha-ap8:24.4": "sabbametaṃ adāsahaṃ.",
  "tha-ap8:25.1": "Ārakkhaṃ paṭṭhapetvāna,",
  "tha-ap8:25.2": "pākāraṃ kārayiṃ daḷhaṃ;",
  "tha-ap8:25.3": "Mā naṃ koci viheṭhesi,",
  "tha-ap8:25.4": "santacittāna tādinaṃ.",
  "tha-ap8:26.1": "Satasahassenāvāsaṃ,",
  "tha-ap8:26.2": "saṃghārāme amāpayiṃ;",
  "tha-ap8:26.3": "Vepullaṃ taṃ māpayitvā,",
  "tha-ap8:26.4": "sambuddhaṃ upanāmayiṃ.",
  "tha-ap8:27.1": "Niṭṭhāpito mayārāmo,",
  "tha-ap8:27.2": "sampaṭiccha tuvaṃ muni;",
  "tha-ap8:27.3": "Niyyādessāmi taṃ vīra,",
  "tha-ap8:27.4": "adhivāsehi cakkhuma.",
  "tha-ap8:28.1": "Padumuttaro lokavidū,",
  "tha-ap8:28.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap8:28.3": "Mama saṅkappamaññāya,",
  "tha-ap8:28.4": "adhivāsesi nāyako.",
  "tha-ap8:29.1": "Adhivāsanamaññāya,",
  "tha-ap8:29.2": "sabbaññussa mahesino;",
  "tha-ap8:29.3": "Bhojanaṃ paṭiyādetvā,",
  "tha-ap8:29.4": "kālamārocayiṃ ahaṃ.",
  "tha-ap8:30.1": "Ārocitamhi kālamhi,",
  "tha-ap8:30.2": "padumuttaranāyako;",
  "tha-ap8:30.3": "Khīṇāsavasahassehi,",
  "tha-ap8:30.4": "ārāmaṃ me upāgami.",
  "tha-ap8:31.1": "Nisinnaṃ kālamaññāya,",
  "tha-ap8:31.2": "annapānena tappayiṃ;",
  "tha-ap8:31.3": "Bhuttāviṃ kālamaññāya,",
  "tha-ap8:31.4": "idaṃ vacanamabraviṃ.",
  "tha-ap8:32.1": "Kīto satasahassena,",
  "tha-ap8:32.2": "tattakeneva kārito;",
  "tha-ap8:32.3": "Sobhano nāma ārāmo,",
  "tha-ap8:32.4": "sampaṭiccha tuvaṃ muni.",
  "tha-ap8:33.1": "Iminārāmadānena,",
  "tha-ap8:33.2": "cetanāpaṇidhīhi ca;",
  "tha-ap8:33.3": "Bhave nibbattamānohaṃ,",
  "tha-ap8:33.4": "labhāmi mama patthitaṃ.",
  "tha-ap8:34.1": "Paṭiggahetvā sambuddho,",
  "tha-ap8:34.2": "saṃghārāmaṃ sumāpitaṃ;",
  "tha-ap8:34.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap8:34.4": "idaṃ vacanamabravi.",
  "tha-ap8:35.1": "Yo so buddhassa pādāsi,",
  "tha-ap8:35.2": "saṃghārāmaṃ sumāpitaṃ;",
  "tha-ap8:35.3": "Tamahaṃ kittayissāmi,",
  "tha-ap8:35.4": "suṇātha mama bhāsato.",
  "tha-ap8:36.1": "Hatthī assā rathā pattī,",
  "tha-ap8:36.2": "senā ca caturaṅginī;",
  "tha-ap8:36.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap8:36.4": "saṃghārāmassidaṃ phalaṃ.",
  "tha-ap8:37.1": "Saṭṭhi tūrasahassāni,",
  "tha-ap8:37.2": "bheriyo samalaṅkatā;",
  "tha-ap8:37.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap8:37.4": "saṃghārāmassidaṃ phalaṃ.",
  "tha-ap8:38.1": "Chaḷasītisahassāni,",
  "tha-ap8:38.2": "nāriyo samalaṅkatā;",
  "tha-ap8:38.3": "Vicittavatthābharaṇā,",
  "tha-ap8:38.4": "āmuttamaṇikuṇḍalā.",
  "tha-ap8:39.1": "Aḷārapamhā hasulā,",
  "tha-ap8:39.2": "susaññā tanumajjhimā;",
  "tha-ap8:39.3": "Parivāressantimaṃ niccaṃ,",
  "tha-ap8:39.4": "saṃghārāmassidaṃ phalaṃ.",
  "tha-ap8:40.1": "Tiṃsakappasahassāni,",
  "tha-ap8:40.2": "devaloke ramissati;",
  "tha-ap8:40.3": "Sahassakkhattuṃ devindo,",
  "tha-ap8:40.4": "devarajjaṃ karissati.",
  "tha-ap8:41.1": "Devarājena pattabbaṃ,",
  "tha-ap8:41.2": "sabbaṃ paṭilabhissati;",
  "tha-ap8:41.3": "Anūnabhogo hutvāna,",
  "tha-ap8:41.4": "devarajjaṃ karissati.",
  "tha-ap8:42.1": "Sahassakkhattuṃ cakkavattī,",
  "tha-ap8:42.2": "rājā raṭṭhe bhavissati;",
  "tha-ap8:42.3": "Pathabyā rajjaṃ vipulaṃ,",
  "tha-ap8:42.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap8:43.1": "Kappasatasahassamhi,",
  "tha-ap8:43.2": "okkākakulasambhavo;",
  "tha-ap8:43.3": "Gotamo nāma gottena,",
  "tha-ap8:43.4": "satthā loke bhavissati.",
  "tha-ap8:44.1": "Tassa dhammesu dāyādo,",
  "tha-ap8:44.2": "oraso dhammanimmito;",
  "tha-ap8:44.3": "Upāli nāma nāmena,",
  "tha-ap8:44.4": "hessati satthu sāvako.",
  "tha-ap8:45.1": "Vinaye pāramiṃ patvā,",
  "tha-ap8:45.2": "ṭhānāṭhāne ca kovido;",
  "tha-ap8:45.3": "Jinasāsanaṃ dhārento,",
  "tha-ap8:45.4": "viharissatināsavo.",
  "tha-ap8:46.1": "Sabbametaṃ abhiññāya,",
  "tha-ap8:46.2": "gotamo sakyapuṅgavo;",
  "tha-ap8:46.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap8:46.4": "etadagge ṭhapessati.",
  "tha-ap8:47.1": "Aparimeyyupādāya,",
  "tha-ap8:47.2": "patthemi tava sāsanaṃ;",
  "tha-ap8:47.3": "So me attho anuppatto,",
  "tha-ap8:47.4": "sabbasaṃyojanakkhayo.",
  "tha-ap8:48.1": "Yathā sūlāvuto poso,",
  "tha-ap8:48.2": "rājadaṇḍena tajjito;",
  "tha-ap8:48.3": "Sūle sātaṃ avindanto,",
  "tha-ap8:48.4": "parimuttiṃva icchati.",
  "tha-ap8:49.1": "Tathevāhaṃ mahāvīra,",
  "tha-ap8:49.2": "bhavadaṇḍena tajjito;",
  "tha-ap8:49.3": "Kammasūlāvuto santo,",
  "tha-ap8:49.4": "pipāsāvedanaṭṭito.",
  "tha-ap8:50.1": "Bhave sātaṃ na vindāmi,",
  "tha-ap8:50.2": "ḍayhanto tīhi aggibhi;",
  "tha-ap8:50.3": "Parimuttiṃ gavesāmi,",
  "tha-ap8:50.4": "yathāpi rājadaṇḍito.",
  "tha-ap8:51.1": "Yathā visādo puriso,",
  "tha-ap8:51.2": "visena paripīḷito;",
  "tha-ap8:51.3": "Agadaṃ so gaveseyya,",
  "tha-ap8:51.4": "visaghātāyupāyanaṃ.",
  "tha-ap8:52.1": "Gavesamāno passeyya,",
  "tha-ap8:52.2": "agadaṃ visaghātakaṃ;",
  "tha-ap8:52.3": "Taṃ pivitvā sukhī assa,",
  "tha-ap8:52.4": "visamhā parimuttiyā.",
  "tha-ap8:53.1": "Tathevāhaṃ mahāvīra,",
  "tha-ap8:53.2": "yathā visahato naro;",
  "tha-ap8:53.3": "Sampīḷito avijjāya,",
  "tha-ap8:53.4": "saddhammāgadamesahaṃ.",
  "tha-ap8:54.1": "Dhammāgadaṃ gavesanto,",
  "tha-ap8:54.2": "addakkhiṃ sakyasāsanaṃ;",
  "tha-ap8:54.3": "Aggaṃ sabbosadhānaṃ taṃ,",
  "tha-ap8:54.4": "sabbasallavinodanaṃ.",
  "tha-ap8:55.1": "Dhammosadhaṃ pivitvāna,",
  "tha-ap8:55.2": "visaṃ sabbaṃ samūhaniṃ;",
  "tha-ap8:55.3": "Ajarāmaraṃ sītibhāvaṃ,",
  "tha-ap8:55.4": "nibbānaṃ phassayiṃ ahaṃ.",
  "tha-ap8:56.1": "Yathā bhūtaṭṭito poso,",
  "tha-ap8:56.2": "bhūtaggāhena pīḷito;",
  "tha-ap8:56.3": "Bhūtavejjaṃ gaveseyya,",
  "tha-ap8:56.4": "bhūtasmā parimuttiyā.",
  "tha-ap8:57.1": "Gavesamāno passeyya,",
  "tha-ap8:57.2": "bhūtavijjāsu kovidaṃ;",
  "tha-ap8:57.3": "Tassa so vihane bhūtaṃ,",
  "tha-ap8:57.4": "samūlañca vināsaye.",
  "tha-ap8:58.1": "Tathevāhaṃ mahāvīra,",
  "tha-ap8:58.2": "tamaggāhena pīḷito;",
  "tha-ap8:58.3": "Ñāṇālokaṃ gavesāmi,",
  "tha-ap8:58.4": "tamato parimuttiyā.",
  "tha-ap8:59.1": "Athaddasaṃ sakyamuniṃ,",
  "tha-ap8:59.2": "kilesatamasodhanaṃ;",
  "tha-ap8:59.3": "So me tamaṃ vinodesi,",
  "tha-ap8:59.4": "bhūtavejjova bhūtakaṃ.",
  "tha-ap8:60.1": "Saṃsārasotaṃ sañchindiṃ,",
  "tha-ap8:60.2": "taṇhāsotaṃ nivārayiṃ;",
  "tha-ap8:60.3": "Bhavaṃ ugghāṭayiṃ sabbaṃ,",
  "tha-ap8:60.4": "bhūtavejjova mūlato.",
  "tha-ap8:61.1": "Garuḷo yathā opatati,",
  "tha-ap8:61.2": "pannagaṃ bhakkhamattano;",
  "tha-ap8:61.3": "Samantā yojanasataṃ,",
  "tha-ap8:61.4": "vikkhobheti mahāsaraṃ.",
  "tha-ap8:62.1": "Pannagaṃ so gahetvāna,",
  "tha-ap8:62.2": "adhosīsaṃ viheṭhayaṃ;",
  "tha-ap8:62.3": "Ādāya so pakkamati,",
  "tha-ap8:62.4": "yenakāmaṃ vihaṅgamo.",
  "tha-ap8:63.1": "Tathevāhaṃ mahāvīra,",
  "tha-ap8:63.2": "yathāpi garuḷo balī;",
  "tha-ap8:63.3": "Asaṅkhataṃ gavesanto,",
  "tha-ap8:63.4": "dose vikkhālayiṃ ahaṃ.",
  "tha-ap8:64.1": "Diṭṭho ahaṃ dhammavaraṃ,",
  "tha-ap8:64.2": "santipadamanuttaraṃ;",
  "tha-ap8:64.3": "Ādāya viharāmetaṃ,",
  "tha-ap8:64.4": "garuḷo pannagaṃ yathā.",
  "tha-ap8:65.1": "Āsāvatī nāma latā,",
  "tha-ap8:65.2": "jātā cittalatāvane;",
  "tha-ap8:65.3": "Tassā vassasahassena,",
  "tha-ap8:65.4": "ekaṃ nibbattate phalaṃ.",
  "tha-ap8:66.1": "Taṃ devā payirupāsanti,",
  "tha-ap8:66.2": "tāvadūraphale sati;",
  "tha-ap8:66.3": "Devānaṃ sā piyā evaṃ,",
  "tha-ap8:66.4": "āsāvatī latuttamā.",
  "tha-ap8:67.1": "Satasahassupādāya,",
  "tha-ap8:67.2": "tāhaṃ paricare muni;",
  "tha-ap8:67.3": "Sāyaṃ pātaṃ namassāmi,",
  "tha-ap8:67.4": "devā āsāvatiṃ yathā.",
  "tha-ap8:68.1": "Avañjhā pāricariyā,",
  "tha-ap8:68.2": "amoghā ca namassanā;",
  "tha-ap8:68.3": "Dūrāgatampi maṃ santaṃ,",
  "tha-ap8:68.4": "khaṇoyaṃ na virādhayi.",
  "tha-ap8:69.1": "Paṭisandhiṃ na passāmi,",
  "tha-ap8:69.2": "vicinanto bhave ahaṃ;",
  "tha-ap8:69.3": "Nirūpadhi vippamutto,",
  "tha-ap8:69.4": "upasanto carāmahaṃ.",
  "tha-ap8:70.1": "Yathāpi padumaṃ nāma,",
  "tha-ap8:70.2": "sūriyaraṃsena pupphati;",
  "tha-ap8:70.3": "Tathevāhaṃ mahāvīra,",
  "tha-ap8:70.4": "buddharaṃsena pupphito.",
  "tha-ap8:71.1": "Yathā balākayonimhi,",
  "tha-ap8:71.2": "na vijjati pumo sadā;",
  "tha-ap8:71.3": "Meghesu gajjamānesu,",
  "tha-ap8:71.4": "gabbhaṃ gaṇhanti tā sadā.",
  "tha-ap8:72.1": "Cirampi gabbhaṃ dhārenti,",
  "tha-ap8:72.2": "yāva megho na gajjati;",
  "tha-ap8:72.3": "Bhārato parimuccanti,",
  "tha-ap8:72.4": "yadā megho pavassati.",
  "tha-ap8:73.1": "Padumuttarabuddhassa,",
  "tha-ap8:73.2": "dhammameghena gajjato;",
  "tha-ap8:73.3": "Saddena dhammameghassa,",
  "tha-ap8:73.4": "dhammagabbhaṃ agaṇhahaṃ.",
  "tha-ap8:74.1": "Satasahassupādāya,",
  "tha-ap8:74.2": "puññagabbhaṃ dharemahaṃ;",
  "tha-ap8:74.3": "Nappamuccāmi bhārato,",
  "tha-ap8:74.4": "dhammamegho na gajjati.",
  "tha-ap8:75.1": "Yadā tuvaṃ sakyamuni,",
  "tha-ap8:75.2": "ramme kapilavatthave;",
  "tha-ap8:75.3": "Gajjasi dhammameghena,",
  "tha-ap8:75.4": "bhārato parimuccahaṃ.",
  "tha-ap8:76.1": "Suññataṃ animittañca,",
  "tha-ap8:76.2": "Tathāppaṇihitampi ca;",
  "tha-ap8:76.3": "Caturo ca phale sabbe,",
  "tha-ap8:76.4": "Dhammevaṃ vijanayiṃ ahaṃ.",
  "tha-ap8:77.1": "Dutiyabhāṇavāraṃ.",
  "tha-ap8:78.1": "Aparimeyyupādāya,",
  "tha-ap8:78.2": "patthemi tava sāsanaṃ;",
  "tha-ap8:78.3": "So me attho anuppatto,",
  "tha-ap8:78.4": "santipadamanuttaraṃ.",
  "tha-ap8:79.1": "Vinaye pāramiṃ patto,",
  "tha-ap8:79.2": "yathāpi pāṭhiko isi;",
  "tha-ap8:79.3": "Na me samasamo atthi,",
  "tha-ap8:79.4": "dhāremi sāsanaṃ ahaṃ.",
  "tha-ap8:80.1": "Vinaye khandhake cāpi,",
  "tha-ap8:80.2": "tikacchede ca pañcame;",
  "tha-ap8:80.3": "Ettha me vimati natthi,",
  "tha-ap8:80.4": "akkhare byañjanepi vā.",
  "tha-ap8:81.1": "Niggahe paṭikamme ca,",
  "tha-ap8:81.2": "ṭhānāṭhāne ca kovido;",
  "tha-ap8:81.3": "Osāraṇe vuṭṭhāpane,",
  "tha-ap8:81.4": "sabbattha pāramiṃ gato.",
  "tha-ap8:82.1": "Vinaye khandhake vāpi,",
  "tha-ap8:82.2": "nikkhipitvā padaṃ ahaṃ;",
  "tha-ap8:82.3": "Ubhato viniveṭhetvā,",
  "tha-ap8:82.4": "rasato osareyyahaṃ.",
  "tha-ap8:83.1": "Niruttiyā sukusalo,",
  "tha-ap8:83.2": "atthānatthe ca kovido;",
  "tha-ap8:83.3": "Anaññātaṃ mayā natthi,",
  "tha-ap8:83.4": "ekaggo satthu sāsane.",
  "tha-ap8:84.1": "Rūpadakkho ahaṃ ajja,",
  "tha-ap8:84.2": "sakyaputtassa sāsane;",
  "tha-ap8:84.3": "Kaṅkhaṃ sabbaṃ vinodemi,",
  "tha-ap8:84.4": "chindāmi sabbasaṃsayaṃ.",
  "tha-ap8:85.1": "Padaṃ anupadañcāpi,",
  "tha-ap8:85.2": "akkharañcāpi byañjanaṃ;",
  "tha-ap8:85.3": "Nidāne pariyosāne,",
  "tha-ap8:85.4": "sabbattha kovido ahaṃ.",
  "tha-ap8:86.1": "Yathāpi rājā balavā,",
  "tha-ap8:86.2": "niggaṇhitvā parantape;",
  "tha-ap8:86.3": "Vijinitvāna saṅgāmaṃ,",
  "tha-ap8:86.4": "nagaraṃ tattha māpaye.",
  "tha-ap8:87.1": "Pākāraṃ parikhañcāpi,",
  "tha-ap8:87.2": "esikaṃ dvārakoṭṭhakaṃ;",
  "tha-ap8:87.3": "Aṭṭālake ca vividhe,",
  "tha-ap8:87.4": "kāraye nagare bahū.",
  "tha-ap8:88.1": "Siṅghāṭakaṃ caccarañca,",
  "tha-ap8:88.2": "suvibhattantarāpaṇaṃ;",
  "tha-ap8:88.3": "Kārayeyya sabhaṃ tattha,",
  "tha-ap8:88.4": "atthānatthavinicchayaṃ.",
  "tha-ap8:89.1": "Nigghātatthaṃ amittānaṃ,",
  "tha-ap8:89.2": "chiddāchiddañca jānituṃ;",
  "tha-ap8:89.3": "Balakāyassa rakkhāya,",
  "tha-ap8:89.4": "senāpaccaṃ ṭhapeti so.",
  "tha-ap8:90.1": "Ārakkhatthāya bhaṇḍassa,",
  "tha-ap8:90.2": "nidhānakusalaṃ naraṃ;",
  "tha-ap8:90.3": "Mā me bhaṇḍaṃ vinassīti,",
  "tha-ap8:90.4": "bhaṇḍarakkhaṃ ṭhapeti so.",
  "tha-ap8:91.1": "Mamatto hoti yo rañño,",
  "tha-ap8:91.2": "vuddhiṃ yassa ca icchati;",
  "tha-ap8:91.3": "Tassādhikaraṇaṃ deti,",
  "tha-ap8:91.4": "mittassa paṭipajjituṃ.",
  "tha-ap8:92.1": "Uppātesu nimittesu,",
  "tha-ap8:92.2": "lakkhaṇesu ca kovidaṃ;",
  "tha-ap8:92.3": "Ajjhāyakaṃ mantadharaṃ,",
  "tha-ap8:92.4": "porohicce ṭhapeti so.",
  "tha-ap8:93.1": "Etehaṅgehi sampanno,",
  "tha-ap8:93.2": "khattiyoti pavuccati;",
  "tha-ap8:93.3": "Sadā rakkhanti rājānaṃ,",
  "tha-ap8:93.4": "cakkavākova dukkhitaṃ.",
  "tha-ap8:94.1": "Tatheva tvaṃ mahāvīra,",
  "tha-ap8:94.2": "hatāmittova khattiyo;",
  "tha-ap8:94.3": "Sadevakassa lokassa,",
  "tha-ap8:94.4": "dhammarājāti vuccati.",
  "tha-ap8:95.1": "Titthiye nihanitvāna,",
  "tha-ap8:95.2": "mārañcāpi sasenakaṃ;",
  "tha-ap8:95.3": "Tamandhakāraṃ vidhamitvā,",
  "tha-ap8:95.4": "dhammanagaraṃ amāpayi.",
  "tha-ap8:96.1": "Sīlaṃ pākārakaṃ tattha,",
  "tha-ap8:96.2": "ñāṇaṃ te dvārakoṭṭhakaṃ;",
  "tha-ap8:96.3": "Saddhā te esikā vīra,",
  "tha-ap8:96.4": "dvārapālo ca saṃvaro.",
  "tha-ap8:97.1": "Satipaṭṭhānamaṭṭālaṃ,",
  "tha-ap8:97.2": "paññā te caccaraṃ mune;",
  "tha-ap8:97.3": "Iddhipādañca siṅghāṭaṃ,",
  "tha-ap8:97.4": "dhammavīthi sumāpitā.",
  "tha-ap8:98.1": "Suttantaṃ abhidhammañca,",
  "tha-ap8:98.2": "vinayañcāpi kevalaṃ;",
  "tha-ap8:98.3": "Navaṅgaṃ buddhavacanaṃ,",
  "tha-ap8:98.4": "esā dhammasabhā tava.",
  "tha-ap8:99.1": "Suññataṃ animittañca,",
  "tha-ap8:99.2": "vihārañcappaṇīhitaṃ;",
  "tha-ap8:99.3": "Āneñjañca nirodho ca,",
  "tha-ap8:99.4": "esā dhammakuṭī tava.",
  "tha-ap8:100.1": "Paññāya aggo nikkhitto,",
  "tha-ap8:100.2": "paṭibhāne ca kovido;",
  "tha-ap8:100.3": "Sāriputtoti nāmena,",
  "tha-ap8:100.4": "dhammasenāpatī tava.",
  "tha-ap8:101.1": "Cutūpapātakusalo,",
  "tha-ap8:101.2": "iddhiyā pāramiṃ gato;",
  "tha-ap8:101.3": "Kolito nāma nāmena,",
  "tha-ap8:101.4": "porohicco tavaṃ mune.",
  "tha-ap8:102.1": "Porāṇakavaṃsadharo,",
  "tha-ap8:102.2": "uggatejo durāsado;",
  "tha-ap8:102.3": "Dhutavādīguṇenaggo,",
  "tha-ap8:102.4": "akkhadasso tavaṃ mune.",
  "tha-ap8:103.1": "Bahussuto dhammadharo,",
  "tha-ap8:103.2": "Sabbapāṭhī ca sāsane;",
  "tha-ap8:103.3": "Ānando nāma nāmena,",
  "tha-ap8:103.4": "Dhammārakkho tavaṃ mune.",
  "tha-ap8:104.1": "Ete sabbe atikkamma,",
  "tha-ap8:104.2": "pamesi bhagavā mamaṃ;",
  "tha-ap8:104.3": "Vinicchayaṃ me pādāsi,",
  "tha-ap8:104.4": "vinaye viññudesitaṃ.",
  "tha-ap8:105.1": "Yo koci vinaye pañhaṃ,",
  "tha-ap8:105.2": "pucchati buddhasāvako;",
  "tha-ap8:105.3": "Tattha me cintanā natthi,",
  "tha-ap8:105.4": "taññevatthaṃ kathemahaṃ.",
  "tha-ap8:106.1": "Yāvatā buddhakhettamhi,",
  "tha-ap8:106.2": "ṭhapetvā taṃ mahāmuni;",
  "tha-ap8:106.3": "Vinaye mādiso natthi,",
  "tha-ap8:106.4": "kuto bhiyyo bhavissati.",
  "tha-ap8:107.1": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap8:107.2": "evaṃ gajjati gotamo;",
  "tha-ap8:107.3": "Upālissa samo natthi,",
  "tha-ap8:107.4": "vinaye khandhakesu ca.",
  "tha-ap8:108.1": "Yāvatā buddhabhaṇitaṃ,",
  "tha-ap8:108.2": "navaṅgaṃ satthusāsanaṃ;",
  "tha-ap8:108.3": "Vinayogadhaṃ taṃ sabbaṃ,",
  "tha-ap8:108.4": "vinayamūlapassino.",
  "tha-ap8:109.1": "Mama kammaṃ saritvāna,",
  "tha-ap8:109.2": "gotamo sakyapuṅgavo;",
  "tha-ap8:109.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap8:109.4": "etadagge ṭhapesi maṃ.",
  "tha-ap8:110.1": "Satasahassupādāya,",
  "tha-ap8:110.2": "imaṃ ṭhānaṃ apatthayiṃ;",
  "tha-ap8:110.3": "So me attho anuppatto,",
  "tha-ap8:110.4": "vinaye pāramiṃ gato.",
  "tha-ap8:111.1": "Sakyānaṃ nandijanano,",
  "tha-ap8:111.2": "kappako āsahaṃ pure;",
  "tha-ap8:111.3": "Vijahitvāna taṃ jātiṃ,",
  "tha-ap8:111.4": "putto jāto mahesino.",
  "tha-ap8:112.1": "Ito dutiyake kappe,",
  "tha-ap8:112.2": "Añjaso nāma khattiyo;",
  "tha-ap8:112.3": "Anantatejo amitayaso,",
  "tha-ap8:112.4": "Bhūmipālo mahaddhano.",
  "tha-ap8:113.1": "Tassa rañño ahaṃ putto,",
  "tha-ap8:113.2": "candano nāma khattiyo;",
  "tha-ap8:113.3": "Jātimadenupatthaddho,",
  "tha-ap8:113.4": "yasabhogamadena ca.",
  "tha-ap8:114.1": "Nāgasatasahassāni,",
  "tha-ap8:114.2": "sabbālaṅkārabhūsitā;",
  "tha-ap8:114.3": "Tidhāpabhinnā mātaṅgā,",
  "tha-ap8:114.4": "parivārenti maṃ sadā.",
  "tha-ap8:115.1": "Sabalehi paretohaṃ,",
  "tha-ap8:115.2": "uyyānaṃ gantukāmako;",
  "tha-ap8:115.3": "Āruyha sirikaṃ nāgaṃ,",
  "tha-ap8:115.4": "nagarā nikkhamiṃ tadā.",
  "tha-ap8:116.1": "Caraṇena ca sampanno,",
  "tha-ap8:116.2": "guttadvāro susaṃvuto;",
  "tha-ap8:116.3": "Devalo nāma sambuddho,",
  "tha-ap8:116.4": "āgacchi purato mama.",
  "tha-ap8:117.1": "Pesetvā sirikaṃ nāgaṃ,",
  "tha-ap8:117.2": "buddhaṃ āsādayiṃ tadā;",
  "tha-ap8:117.3": "Tato sañjātakopo so,",
  "tha-ap8:117.4": "nāgo nuddharate padaṃ.",
  "tha-ap8:118.1": "Nāgaṃ duṭṭhamanaṃ disvā,",
  "tha-ap8:118.2": "buddhe kodhaṃ akāsahaṃ;",
  "tha-ap8:118.3": "Vihesayitvā sambuddhaṃ,",
  "tha-ap8:118.4": "uyyānaṃ agamāsahaṃ.",
  "tha-ap8:119.1": "Sātaṃ tattha na vindāmi,",
  "tha-ap8:119.2": "siro pajjalito yathā;",
  "tha-ap8:119.3": "Pariḷāhena ḍayhāmi,",
  "tha-ap8:119.4": "macchova baḷisādako.",
  "tha-ap8:120.1": "Sasāgarantā pathavī,",
  "tha-ap8:120.2": "ādittā viya hoti me;",
  "tha-ap8:120.3": "Pitu santikupāgamma,",
  "tha-ap8:120.4": "idaṃ vacanamabraviṃ.",
  "tha-ap8:121.1": "Āsīvisaṃva kupitaṃ,",
  "tha-ap8:121.2": "aggikkhandhaṃva āgataṃ;",
  "tha-ap8:121.3": "Mattaṃva kuñjaraṃ dantiṃ,",
  "tha-ap8:121.4": "yaṃ sayambhumasādayiṃ.",
  "tha-ap8:122.1": "Āsādito mayā buddho,",
  "tha-ap8:122.2": "ghoro uggatapo jino;",
  "tha-ap8:122.3": "Purā sabbe vinassāma,",
  "tha-ap8:122.4": "khamāpessāma taṃ muniṃ.",
  "tha-ap8:123.1": "No ce taṃ nijjhāpessāma,",
  "tha-ap8:123.2": "attadantaṃ samāhitaṃ;",
  "tha-ap8:123.3": "Orena sattadivasā,",
  "tha-ap8:123.4": "raṭṭhaṃ me vidhamissati.",
  "tha-ap8:124.1": "Sumekhalo kosiyo ca,",
  "tha-ap8:124.2": "siggavo cāpi sattako;",
  "tha-ap8:124.3": "Āsādayitvā isayo,",
  "tha-ap8:124.4": "duggatā te saraṭṭhakā.",
  "tha-ap8:125.1": "Yadā kuppanti isayo,",
  "tha-ap8:125.2": "saññatā brahmacārino;",
  "tha-ap8:125.3": "Sadevakaṃ vināsenti,",
  "tha-ap8:125.4": "sasāgaraṃ sapabbataṃ.",
  "tha-ap8:126.1": "Tiyojanasahassamhi,",
  "tha-ap8:126.2": "purise sannipātayiṃ;",
  "tha-ap8:126.3": "Accayaṃ desanatthāya,",
  "tha-ap8:126.4": "sayambhuṃ upasaṅkamiṃ.",
  "tha-ap8:127.1": "Allavatthā allasirā,",
  "tha-ap8:127.2": "sabbeva pañjalīkatā;",
  "tha-ap8:127.3": "Buddhassa pāde nipatitvā,",
  "tha-ap8:127.4": "idaṃ vacanamabravuṃ.",
  "tha-ap8:128.1": "Khamassu tvaṃ mahāvīra,",
  "tha-ap8:128.2": "abhiyācati taṃ jano;",
  "tha-ap8:128.3": "Pariḷāhaṃ vinodehi,",
  "tha-ap8:128.4": "mā no raṭṭhaṃ vināsaya.",
  "tha-ap8:129.1": "Sadevamānusā sabbe,",
  "tha-ap8:129.2": "sadānavā sarakkhasā;",
  "tha-ap8:129.3": "Ayomayena kūṭena,",
  "tha-ap8:129.4": "siraṃ bhindeyyu me sadā.",
  "tha-ap8:130.1": "Dake aggi na saṇṭhāti,",
  "tha-ap8:130.2": "bījaṃ sele na rūhati;",
  "tha-ap8:130.3": "Agade kimi na saṇṭhāti,",
  "tha-ap8:130.4": "kopo buddhe na jāyati.",
  "tha-ap8:131.1": "Yathā ca bhūmi acalā,",
  "tha-ap8:131.2": "appameyyo ca sāgaro;",
  "tha-ap8:131.3": "Anantako ca ākāso,",
  "tha-ap8:131.4": "evaṃ buddhā akhobhiyā.",
  "tha-ap8:132.1": "Sadā khantā mahāvīrā,",
  "tha-ap8:132.2": "khamitā ca tapassino;",
  "tha-ap8:132.3": "Khantānaṃ khamitānañca,",
  "tha-ap8:132.4": "gamanaṃ taṃ na vijjati.",
  "tha-ap8:133.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap8:133.2": "pariḷāhaṃ vinodayaṃ;",
  "tha-ap8:133.3": "Mahājanassa purato,",
  "tha-ap8:133.4": "nabhaṃ abbhuggami tadā.",
  "tha-ap8:134.1": "Tena kammenahaṃ vīra,",
  "tha-ap8:134.2": "hīnattaṃ ajjhupāgato;",
  "tha-ap8:134.3": "Samatikkamma taṃ jātiṃ,",
  "tha-ap8:134.4": "pāvisiṃ abhayaṃ puraṃ.",
  "tha-ap8:135.1": "Tadāpi maṃ mahāvīra,",
  "tha-ap8:135.2": "ḍayhamānaṃ susaṇṭhitaṃ;",
  "tha-ap8:135.3": "Pariḷāhaṃ vinodesi,",
  "tha-ap8:135.4": "sayambhuñca khamāpayiṃ.",
  "tha-ap8:136.1": "Ajjāpi maṃ mahāvīra,",
  "tha-ap8:136.2": "ḍayhamānaṃ tihaggibhi;",
  "tha-ap8:136.3": "Nibbāpesi tayo aggī,",
  "tha-ap8:136.4": "sītibhāvañca pāpayī.",
  "tha-ap8:137.1": "Yesaṃ sotāvadhānatthi,",
  "tha-ap8:137.2": "suṇātha mama bhāsato;",
  "tha-ap8:137.3": "Atthaṃ tumhaṃ pavakkhāmi,",
  "tha-ap8:137.4": "yathā diṭṭhaṃ padaṃ mama.",
  "tha-ap8:138.1": "Sayambhuṃ taṃ vimānetvā,",
  "tha-ap8:138.2": "santacittaṃ samāhitaṃ;",
  "tha-ap8:138.3": "Tena kammenahaṃ ajja,",
  "tha-ap8:138.4": "jātomhi nīcayoniyaṃ.",
  "tha-ap8:139.1": "Mā vo khaṇaṃ virādhetha,",
  "tha-ap8:139.2": "khaṇātītā hi socare;",
  "tha-ap8:139.3": "Sadatthe vāyameyyātha,",
  "tha-ap8:139.4": "khaṇo vo paṭipādito.",
  "tha-ap8:140.1": "Ekaccānañca vamanaṃ,",
  "tha-ap8:140.2": "ekaccānaṃ virecanaṃ;",
  "tha-ap8:140.3": "Visaṃ halāhalaṃ eke,",
  "tha-ap8:140.4": "ekaccānañca osadhaṃ.",
  "tha-ap8:141.1": "Vamanaṃ paṭipannānaṃ,",
  "tha-ap8:141.2": "phalaṭṭhānaṃ virecanaṃ;",
  "tha-ap8:141.3": "Osadhaṃ phalalābhīnaṃ,",
  "tha-ap8:141.4": "puññakkhettaṃ gavesinaṃ.",
  "tha-ap8:142.1": "Sāsanena viruddhānaṃ,",
  "tha-ap8:142.2": "visaṃ halāhalaṃ yathā;",
  "tha-ap8:142.3": "Āsīviso diṭṭhaviso,",
  "tha-ap8:142.4": "evaṃ jhāpeti taṃ naraṃ.",
  "tha-ap8:143.1": "Sakiṃ pītaṃ halāhalaṃ,",
  "tha-ap8:143.2": "uparundhati jīvitaṃ;",
  "tha-ap8:143.3": "Sāsanena virujjhitvā,",
  "tha-ap8:143.4": "kappakoṭimhi ḍayhati.",
  "tha-ap8:144.1": "Khantiyā avihiṃsāya,",
  "tha-ap8:144.2": "mettacittavatāya ca;",
  "tha-ap8:144.3": "Sadevakaṃ so tāreti,",
  "tha-ap8:144.4": "tasmā vo avirodhiyā.",
  "tha-ap8:145.1": "Lābhālābhe na sajjanti,",
  "tha-ap8:145.2": "sammānanavimānane;",
  "tha-ap8:145.3": "Pathavīsadisā buddhā,",
  "tha-ap8:145.4": "tasmā te na virodhiyā.",
  "tha-ap8:146.1": "Devadatte ca vadhake,",
  "tha-ap8:146.2": "core aṅgulimālake;",
  "tha-ap8:146.3": "Rāhule dhanapāle ca,",
  "tha-ap8:146.4": "sabbesaṃ samako muni.",
  "tha-ap8:147.1": "Etesaṃ paṭigho natthi,",
  "tha-ap8:147.2": "rāgomesaṃ na vijjati;",
  "tha-ap8:147.3": "Sabbesaṃ samako buddho,",
  "tha-ap8:147.4": "vadhakassorasassa ca.",
  "tha-ap8:148.1": "Panthe disvāna kāsāvaṃ,",
  "tha-ap8:148.2": "chaḍḍitaṃ mīḷhamakkhitaṃ;",
  "tha-ap8:148.3": "Sirasmiṃ añjaliṃ katvā,",
  "tha-ap8:148.4": "vanditabbaṃ isiddhajaṃ.",
  "tha-ap8:149.1": "Abbhatītā ca ye buddhā,",
  "tha-ap8:149.2": "vattamānā anāgatā;",
  "tha-ap8:149.3": "Dhajenānena sujjhanti,",
  "tha-ap8:149.4": "tasmā ete namassiyā.",
  "tha-ap8:150.1": "Satthukappaṃ suvinayaṃ,",
  "tha-ap8:150.2": "dhāremi hadayenahaṃ;",
  "tha-ap8:150.3": "Namassamāno vinayaṃ,",
  "tha-ap8:150.4": "viharissāmi sabbadā.",
  "tha-ap8:151.1": "Vinayo āsayo mayhaṃ,",
  "tha-ap8:151.2": "vinayo ṭhānacaṅkamaṃ;",
  "tha-ap8:151.3": "Kappemi vinaye vāsaṃ,",
  "tha-ap8:151.4": "vinayo mama gocaro.",
  "tha-ap8:152.1": "Vinaye pāramippatto,",
  "tha-ap8:152.2": "samathe cāpi kovido;",
  "tha-ap8:152.3": "Upāli taṃ mahāvīra,",
  "tha-ap8:152.4": "pāde vandati satthuno.",
  "tha-ap8:153.1": "So ahaṃ vicarissāmi,",
  "tha-ap8:153.2": "gāmā gāmaṃ purā puraṃ;",
  "tha-ap8:153.3": "Namassamāno sambuddhaṃ,",
  "tha-ap8:153.4": "dhammassa ca sudhammataṃ.",
  "tha-ap8:154.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap8:154.2": "bhavā sabbe samūhatā;",
  "tha-ap8:154.3": "Sabbāsavā parikkhīṇā,",
  "tha-ap8:154.4": "natthi dāni punabbhavo.",
  "tha-ap8:155.1": "Svāgataṃ vata me āsi,",
  "tha-ap8:155.2": "buddhaseṭṭhassa santike;",
  "tha-ap8:155.3": "Tisso vijjā anuppattā,",
  "tha-ap8:155.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap8:156.1": "Paṭisambhidā catasso,",
  "tha-ap8:156.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap8:156.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap8:156.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap8:157.1": "Itthaṃ sudaṃ āyasmā upāli thero imā gāthāyo abhāsitthāti.",
  "tha-ap8:158.1": "Upālittherassāpadānaṃ chaṭṭhaṃ."
}