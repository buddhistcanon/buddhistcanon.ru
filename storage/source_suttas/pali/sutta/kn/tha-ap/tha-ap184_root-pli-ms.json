{
  "tha-ap184:0.1": "Therāpadāna",
  "tha-ap184:0.2": "Kuṭajapupphiyavagga",
  "tha-ap184:0.3": "2. Bandhujīvakattheraapadāna",
  "tha-ap184:1.1": "“Siddhattho nāma sambuddho,",
  "tha-ap184:1.2": "sayambhū sabbhi vaṇṇito;",
  "tha-ap184:1.3": "Samādhiṃ so samāpanno,",
  "tha-ap184:1.4": "nisīdi pabbatantare.",
  "tha-ap184:2.1": "Jātassare gavesanto,",
  "tha-ap184:2.2": "dakajaṃ pupphamuttamaṃ;",
  "tha-ap184:2.3": "Bandhujīvakapupphāni,",
  "tha-ap184:2.4": "addasaṃ samanantaraṃ.",
  "tha-ap184:3.1": "Ubho hatthehi paggayha,",
  "tha-ap184:3.2": "upāgacchiṃ mahāmuniṃ;",
  "tha-ap184:3.3": "Pasannacitto sumano,",
  "tha-ap184:3.4": "siddhatthassābhiropayiṃ.",
  "tha-ap184:4.1": "Catunnavutito kappe,",
  "tha-ap184:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap184:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap184:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap184:5.1": "Ito cātuddase kappe,",
  "tha-ap184:5.2": "eko āsiṃ janādhipo;",
  "tha-ap184:5.3": "Samuddakappo nāmena,",
  "tha-ap184:5.4": "cakkavattī mahabbalo.",
  "tha-ap184:6.1": "Paṭisambhidā catasso,",
  "tha-ap184:6.2": "…pe…",
  "tha-ap184:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap184:7.1": "Itthaṃ sudaṃ āyasmā bandhujīvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap184:8.1": "Bandhujīvakattherassāpadānaṃ dutiyaṃ."
}