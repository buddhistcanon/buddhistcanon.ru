{
  "tha-ap455:0.1": "Therāpadāna",
  "tha-ap455:0.2": "Jagatidāyakavagga",
  "tha-ap455:0.3": "3 Sīhāsanabījiyattheraapadāna",
  "tha-ap455:1.1": "“Tissassāhaṃ bhagavato,",
  "tha-ap455:1.2": "bodhirukkhamavandiyaṃ;",
  "tha-ap455:1.3": "Paggayha bījaniṃ tattha,",
  "tha-ap455:1.4": "sīhāsanamabījahaṃ.",
  "tha-ap455:2.1": "Dvenavute ito kappe,",
  "tha-ap455:2.2": "sīhāsanamabījahaṃ;",
  "tha-ap455:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap455:2.4": "bījanāya idaṃ phalaṃ.",
  "tha-ap455:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap455:3.2": "…pe…",
  "tha-ap455:3.3": "viharāmi anāsavo.",
  "tha-ap455:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap455:4.2": "…pe…",
  "tha-ap455:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap455:5.1": "Paṭisambhidā catasso,",
  "tha-ap455:5.2": "…pe…",
  "tha-ap455:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap455:6.1": "Itthaṃ sudaṃ āyasmā sīhāsanabījiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap455:7.1": "Sīhāsanabījiyattherassāpadānaṃ tatiyaṃ."
}