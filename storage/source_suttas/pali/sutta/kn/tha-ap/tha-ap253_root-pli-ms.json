{
  "tha-ap253:0.1": "Therāpadāna",
  "tha-ap253:0.2": "Thomakavagga",
  "tha-ap253:0.3": "1. Thomakattheraapadāna",
  "tha-ap253:1.1": "“Devaloke ṭhito santo,",
  "tha-ap253:1.2": "vipassissa mahesino;",
  "tha-ap253:1.3": "Dhammaṃ suṇitvā mudito,",
  "tha-ap253:1.4": "imaṃ vācaṃ abhāsahaṃ.",
  "tha-ap253:2.1": "‘Namo te purisājañña,",
  "tha-ap253:2.2": "namo te purisuttama;",
  "tha-ap253:2.3": "Bahujjanaṃ tārayasi,",
  "tha-ap253:2.4": "desento amataṃ padaṃ’.",
  "tha-ap253:3.1": "Ekanavutito kappe,",
  "tha-ap253:3.2": "yaṃ vācamabhaṇiṃ tadā;",
  "tha-ap253:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap253:3.4": "thomanāya idaṃ phalaṃ.",
  "tha-ap253:4.1": "Paṭisambhidā catasso,",
  "tha-ap253:4.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap253:4.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap253:4.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap253:5.1": "Itthaṃ sudaṃ āyasmā thomako thero imā gāthāyo abhāsitthāti.",
  "tha-ap253:6.1": "Thomakattherassāpadānaṃ paṭhamaṃ."
}