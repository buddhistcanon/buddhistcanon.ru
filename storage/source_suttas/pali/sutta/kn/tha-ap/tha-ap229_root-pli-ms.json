{
  "tha-ap229:0.1": "Therāpadāna",
  "tha-ap229:0.2": "Ālambaṇadāyakavagga",
  "tha-ap229:0.3": "7. Sovaṇṇavaṭaṃsakiyattheraapadāna",
  "tha-ap229:1.1": "“Uyyānabhūmiṃ niyyanto,",
  "tha-ap229:1.2": "addasaṃ lokanāyakaṃ;",
  "tha-ap229:1.3": "Vaṭaṃsakaṃ gahetvāna,",
  "tha-ap229:1.4": "sovaṇṇaṃ sādhunimmitaṃ.",
  "tha-ap229:2.1": "Sīghaṃ tato samāruyha,",
  "tha-ap229:2.2": "hatthikkhandhagato ahaṃ;",
  "tha-ap229:2.3": "Buddhassa abhiropesiṃ,",
  "tha-ap229:2.4": "sikhino lokabandhuno.",
  "tha-ap229:3.1": "Ekattiṃse ito kappe,",
  "tha-ap229:3.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap229:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap229:3.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap229:4.1": "Sattavīse ito kappe,",
  "tha-ap229:4.2": "eko āsiṃ janādhipo;",
  "tha-ap229:4.3": "Mahāpatāpanāmena,",
  "tha-ap229:4.4": "cakkavattī mahabbalo.",
  "tha-ap229:5.1": "Paṭisambhidā catasso,",
  "tha-ap229:5.2": "…pe…",
  "tha-ap229:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap229:6.1": "Itthaṃ sudaṃ āyasmā sovaṇṇavaṭaṃsakiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap229:7.1": "Sovaṇṇavaṭaṃsakiyattherassāpadānaṃ sattamaṃ."
}