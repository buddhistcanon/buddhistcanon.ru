{
  "tha-ap435:0.1": "Therāpadāna",
  "tha-ap435:0.2": "Ekavihārivagga",
  "tha-ap435:0.3": "3 Pāṭihīrasaññakattheraapadāna",
  "tha-ap435:1.1": "“Padumuttaro nāma jino,",
  "tha-ap435:1.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap435:1.3": "Vasīsatasahassehi,",
  "tha-ap435:1.4": "nagaraṃ pāvisī tadā.",
  "tha-ap435:2.1": "Nagaraṃ pavisantassa,",
  "tha-ap435:2.2": "upasantassa tādino;",
  "tha-ap435:2.3": "Ratanāni pajjotiṃsu,",
  "tha-ap435:2.4": "nigghoso āsi tāvade.",
  "tha-ap435:3.1": "Buddhassa ānubhāvena,",
  "tha-ap435:3.2": "bherī vajjumaghaṭṭitā;",
  "tha-ap435:3.3": "Sayaṃ vīṇā pavajjanti,",
  "tha-ap435:3.4": "buddhassa pavisato puraṃ.",
  "tha-ap435:4.1": "Buddhaseṭṭhaṃ namassāmi,",
  "tha-ap435:4.2": "padumuttaramahāmuniṃ;",
  "tha-ap435:4.3": "Pāṭihīrañca passitvā,",
  "tha-ap435:4.4": "tattha cittaṃ pasādayiṃ.",
  "tha-ap435:5.1": "Aho buddhā aho dhammā,",
  "tha-ap435:5.2": "aho no satthusampadā;",
  "tha-ap435:5.3": "Acetanāpi turiyā,",
  "tha-ap435:5.4": "sayameva pavajjare.",
  "tha-ap435:6.1": "Satasahassito kappe,",
  "tha-ap435:6.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap435:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap435:6.4": "buddhasaññāyidaṃ phalaṃ.",
  "tha-ap435:7.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap435:7.2": "…pe…",
  "tha-ap435:7.3": "viharāmi anāsavo.",
  "tha-ap435:8.1": "Svāgataṃ vata me āsi,",
  "tha-ap435:8.2": "…pe…",
  "tha-ap435:8.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap435:9.1": "Paṭisambhidā catasso,",
  "tha-ap435:9.2": "…pe…",
  "tha-ap435:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap435:10.1": "Itthaṃ sudaṃ āyasmā pāṭihīrasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap435:11.1": "Pāṭihīrasaññakattherassāpadānaṃ tatiyaṃ."
}