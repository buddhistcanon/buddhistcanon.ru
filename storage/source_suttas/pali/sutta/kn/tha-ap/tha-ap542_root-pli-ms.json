{
  "tha-ap542:0.1": "Therāpadāna",
  "tha-ap542:0.2": "Kaccāyanavagga",
  "tha-ap542:0.3": "10. Mogharājattheraapadāna",
  "tha-ap542:1.1": "“Padumuttaro nāma jino,",
  "tha-ap542:1.2": "sabbalokavidū muni;",
  "tha-ap542:1.3": "Ito satasahassamhi,",
  "tha-ap542:1.4": "kappe uppajji cakkhumā.",
  "tha-ap542:2.1": "Ovādako viññāpako,",
  "tha-ap542:2.2": "tārako sabbapāṇinaṃ;",
  "tha-ap542:2.3": "Desanākusalo buddho,",
  "tha-ap542:2.4": "tāresi janataṃ bahuṃ.",
  "tha-ap542:3.1": "Anukampako kāruṇiko,",
  "tha-ap542:3.2": "hitesī sabbapāṇinaṃ;",
  "tha-ap542:3.3": "Sampatte titthiye sabbe,",
  "tha-ap542:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap542:4.1": "Evaṃ nirākulaṃ āsi,",
  "tha-ap542:4.2": "suññataṃ titthiyehi ca;",
  "tha-ap542:4.3": "Vicittaṃ arahantehi,",
  "tha-ap542:4.4": "vasībhūtehi tādibhi.",
  "tha-ap542:5.1": "Ratanānaṭṭhapaññāsaṃ,",
  "tha-ap542:5.2": "uggato so mahāmuni;",
  "tha-ap542:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap542:5.4": "bāttiṃsavaralakkhaṇo.",
  "tha-ap542:6.1": "Vassasatasahassāni,",
  "tha-ap542:6.2": "āyu vijjati tāvade;",
  "tha-ap542:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap542:6.4": "tāresi janataṃ bahuṃ.",
  "tha-ap542:7.1": "Tadāhaṃ haṃsavatiyaṃ,",
  "tha-ap542:7.2": "kule aññatare ahuṃ;",
  "tha-ap542:7.3": "Parakammāyane yutto,",
  "tha-ap542:7.4": "natthi me kiñci sandhanaṃ.",
  "tha-ap542:8.1": "Paṭikkamanasālāyaṃ,",
  "tha-ap542:8.2": "vasanto katabhūmiyaṃ;",
  "tha-ap542:8.3": "Aggiṃ ujjālayiṃ tattha,",
  "tha-ap542:8.4": "daḷhaṃ kaṇhāsi sā mahī.",
  "tha-ap542:9.1": "Tadā parisatiṃ nātho,",
  "tha-ap542:9.2": "catusaccapakāsako;",
  "tha-ap542:9.3": "Sāvakaṃ sampakittesi,",
  "tha-ap542:9.4": "lūkhacīvaradhārakaṃ.",
  "tha-ap542:10.1": "Tassa tamhi guṇe tuṭṭho,",
  "tha-ap542:10.2": "paṇipacca tathāgataṃ;",
  "tha-ap542:10.3": "Lūkhacīvaradhāraggaṃ,",
  "tha-ap542:10.4": "patthayiṃ ṭhānamuttamaṃ.",
  "tha-ap542:11.1": "Tadā avoca bhagavā,",
  "tha-ap542:11.2": "sāvake padumuttaro;",
  "tha-ap542:11.3": "‘Passathetaṃ purisakaṃ,",
  "tha-ap542:11.4": "kucelaṃ tanudehakaṃ.",
  "tha-ap542:12.1": "Pītippasannavadanaṃ,",
  "tha-ap542:12.2": "saddhādhanasamanvitaṃ;",
  "tha-ap542:12.3": "Udaggatanujaṃ haṭṭhaṃ,",
  "tha-ap542:12.4": "acalaṃ sālapiṇḍitaṃ.",
  "tha-ap542:13.1": "Eso pattheti taṃ ṭhānaṃ,",
  "tha-ap542:13.2": "saccasenassa bhikkhuno;",
  "tha-ap542:13.3": "Lūkhacīvaradhārissa,",
  "tha-ap542:13.4": "tassa vaṇṇasitāsayo’.",
  "tha-ap542:14.1": "Taṃ sutvā mudito hutvā,",
  "tha-ap542:14.2": "nipacca sirasā jinaṃ;",
  "tha-ap542:14.3": "Yāvajīvaṃ subhaṃ kammaṃ,",
  "tha-ap542:14.4": "karitvā jinasāsane.",
  "tha-ap542:15.1": "Tena kammena sukatena,",
  "tha-ap542:15.2": "cetanāpaṇidhīhi ca;",
  "tha-ap542:15.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap542:15.4": "tāvatiṃsūpago ahaṃ.",
  "tha-ap542:16.1": "Paṭikkamanasālāyaṃ,",
  "tha-ap542:16.2": "bhūmidāhakakammunā;",
  "tha-ap542:16.3": "Samasahassaṃ niraye,",
  "tha-ap542:16.4": "adayhiṃ vedanāṭṭito.",
  "tha-ap542:17.1": "Tena kammāvasesena,",
  "tha-ap542:17.2": "pañca jātisatānihaṃ;",
  "tha-ap542:17.3": "Manusso kulajo hutvā,",
  "tha-ap542:17.4": "jātiyā lakkhaṇaṅkito.",
  "tha-ap542:18.1": "Pañca jātisatāneva,",
  "tha-ap542:18.2": "kuṭṭharogasamappito;",
  "tha-ap542:18.3": "Mahādukkhaṃ anubhaviṃ,",
  "tha-ap542:18.4": "tassa kammassa vāhasā.",
  "tha-ap542:19.1": "Imasmiṃ bhaddake kappe,",
  "tha-ap542:19.2": "upariṭṭhaṃ yasassinaṃ;",
  "tha-ap542:19.3": "Piṇḍapātena tappesiṃ,",
  "tha-ap542:19.4": "pasannamānaso ahaṃ.",
  "tha-ap542:20.1": "Tena kammavisesena,",
  "tha-ap542:20.2": "cetanāpaṇidhīhi ca;",
  "tha-ap542:20.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap542:20.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap542:21.1": "Pacchime bhave sampatte,",
  "tha-ap542:21.2": "ajāyiṃ khattiye kule;",
  "tha-ap542:21.3": "Pituno accayenāhaṃ,",
  "tha-ap542:21.4": "mahārajjasamappito.",
  "tha-ap542:22.1": "Kuṭṭharogādhibhūtohaṃ,",
  "tha-ap542:22.2": "na ratiṃ na sukhaṃ labhe;",
  "tha-ap542:22.3": "Moghaṃ rajjaṃ sukhaṃ yasmā,",
  "tha-ap542:22.4": "mogharājā tato ahaṃ.",
  "tha-ap542:23.1": "Kāyassa dosaṃ disvāna,",
  "tha-ap542:23.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap542:23.3": "Bāvarissa dijaggassa,",
  "tha-ap542:23.4": "sissattaṃ ajjhupāgamiṃ.",
  "tha-ap542:24.1": "Mahatā parivārena,",
  "tha-ap542:24.2": "upecca naranāyakaṃ;",
  "tha-ap542:24.3": "Apucchiṃ nipuṇaṃ pañhaṃ,",
  "tha-ap542:24.4": "taṃ vīraṃ vādisūdanaṃ.",
  "tha-ap542:25.1": "‘Ayaṃ loko paro loko,",
  "tha-ap542:25.2": "brahmaloko sadevako;",
  "tha-ap542:25.3": "Diṭṭhiṃ no nābhijānāmi,",
  "tha-ap542:25.4": "gotamassa yasassino.",
  "tha-ap542:26.1": "Evābhikkantadassāviṃ,",
  "tha-ap542:26.2": "atthi pañhena āgamaṃ;",
  "tha-ap542:26.3": "Kathaṃ lokaṃ avekkhantaṃ,",
  "tha-ap542:26.4": "maccurājā na passati’.",
  "tha-ap542:27.1": "‘Suññato lokaṃ avekkhassu,",
  "tha-ap542:27.2": "mogharāja sadā sato;",
  "tha-ap542:27.3": "Attānudiṭṭhiṃ uhacca,",
  "tha-ap542:27.4": "evaṃ maccutaro siyā.",
  "tha-ap542:28.1": "Evaṃ lokaṃ avekkhantaṃ,",
  "tha-ap542:28.2": "maccurājā na passati’;",
  "tha-ap542:28.3": "Iti maṃ abhaṇi buddho,",
  "tha-ap542:28.4": "sabbarogatikicchako.",
  "tha-ap542:29.1": "Saha gāthāvasānena,",
  "tha-ap542:29.2": "kesamassuvivajjito;",
  "tha-ap542:29.3": "Kāsāvavatthavasano,",
  "tha-ap542:29.4": "āsiṃ bhikkhu tathārahā.",
  "tha-ap542:30.1": "Saṃghikesu vihāresu,",
  "tha-ap542:30.2": "na vasiṃ rogapīḷito;",
  "tha-ap542:30.3": "Mā vihāro padussīti,",
  "tha-ap542:30.4": "vātarogehi pīḷito.",
  "tha-ap542:31.1": "Saṅkārakūṭā āhitvā,",
  "tha-ap542:31.2": "susānā rathikāhi ca;",
  "tha-ap542:31.3": "Tato saṅghāṭiṃ karitvā,",
  "tha-ap542:31.4": "dhārayiṃ lūkhacīvaraṃ.",
  "tha-ap542:32.1": "Mahābhisakko tasmiṃ me,",
  "tha-ap542:32.2": "guṇe tuṭṭho vināyako;",
  "tha-ap542:32.3": "Lūkhacīvaradhārīnaṃ,",
  "tha-ap542:32.4": "etadagge ṭhapesi maṃ.",
  "tha-ap542:33.1": "Puññapāpaparikkhīṇo,",
  "tha-ap542:33.2": "sabbarogavivajjito;",
  "tha-ap542:33.3": "Sikhīva anupādāno,",
  "tha-ap542:33.4": "nibbāyissamanāsavo.",
  "tha-ap542:34.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap542:34.2": "…pe…",
  "tha-ap542:34.3": "viharāmi anāsavo.",
  "tha-ap542:35.1": "Svāgataṃ vata me āsi,",
  "tha-ap542:35.2": "…pe…",
  "tha-ap542:35.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap542:36.1": "Paṭisambhidā catasso,",
  "tha-ap542:36.2": "…pe…",
  "tha-ap542:36.3": "kataṃ buddhassa sāsanaṃ”. (5937)",
  "tha-ap542:37.1": "Itthaṃ sudaṃ āyasmā mogharājā thero imā gāthāyo abhāsitthāti.",
  "tha-ap542:38.1": "Mogharājattherassāpadānaṃ dasamaṃ.",
  "tha-ap542:39.1": "Kaccāyanavaggo catupaññāsamo.",
  "tha-ap542:40.1": "Tassuddānaṃ",
  "tha-ap542:41.1": "Kaccāno vakkalī thero,",
  "tha-ap542:41.2": "mahākappinasavhayo;",
  "tha-ap542:41.3": "Dabbo kumāranāmo ca,",
  "tha-ap542:41.4": "bāhiyo koṭṭhiko vasī.",
  "tha-ap542:42.1": "Uruveḷakassapo rādho,",
  "tha-ap542:42.2": "mogharājā ca paṇḍito;",
  "tha-ap542:42.3": "Tīṇi gāthāsatānettha,",
  "tha-ap542:42.4": "bāsaṭṭhi ceva piṇḍitā."
}