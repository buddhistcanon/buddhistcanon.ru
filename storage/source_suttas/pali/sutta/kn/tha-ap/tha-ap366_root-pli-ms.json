{
  "tha-ap366:0.1": "Therāpadāna",
  "tha-ap366:0.2": "Mandāravapupphiyavagga",
  "tha-ap366:0.3": "4. Kesarapupphiyattheraapadāna",
  "tha-ap366:1.1": "“Vijjādharo tadā āsiṃ,",
  "tha-ap366:1.2": "himavantamhi pabbate;",
  "tha-ap366:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap366:1.4": "caṅkamantaṃ mahāyasaṃ.",
  "tha-ap366:2.1": "Tīṇi kesarapupphāni,",
  "tha-ap366:2.2": "sīse katvānahaṃ tadā;",
  "tha-ap366:2.3": "Upasaṅkamma sambuddhaṃ,",
  "tha-ap366:2.4": "vessabhuṃ abhipūjayiṃ.",
  "tha-ap366:3.1": "Ekattiṃse ito kappe,",
  "tha-ap366:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap366:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap366:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap366:4.1": "Paṭisambhidā catasso,",
  "tha-ap366:4.2": "…pe…",
  "tha-ap366:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap366:5.1": "Itthaṃ sudaṃ āyasmā kesarapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap366:6.1": "Kesarapupphiyattherassāpadānaṃ catutthaṃ."
}