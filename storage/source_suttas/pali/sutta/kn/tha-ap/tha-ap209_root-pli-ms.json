{
  "tha-ap209:0.1": "Therāpadāna",
  "tha-ap209:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap209:0.3": "7 Salalamāliyattheraapadāna",
  "tha-ap209:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap209:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap209:1.3": "Obhāsentaṃ disā sabbā,",
  "tha-ap209:1.4": "siddhatthaṃ narasārathiṃ.",
  "tha-ap209:2.1": "Dhanuṃ advejjhaṃ katvāna,",
  "tha-ap209:2.2": "usuṃ sannayhahaṃ tadā;",
  "tha-ap209:2.3": "Pupphaṃ savaṇṭaṃ chetvāna,",
  "tha-ap209:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap209:3.1": "Catunnavutito kappe,",
  "tha-ap209:3.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap209:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap209:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap209:4.1": "Ekapaññāsito kappe,",
  "tha-ap209:4.2": "eko āsiṃ jutindharo;",
  "tha-ap209:4.3": "Sattaratanasampanno,",
  "tha-ap209:4.4": "cakkavattī mahabbalo.",
  "tha-ap209:5.1": "Paṭisambhidā catasso,",
  "tha-ap209:5.2": "…pe…",
  "tha-ap209:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap209:6.1": "Itthaṃ sudaṃ āyasmā salalamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap209:7.1": "Salalamāliyattherassāpadānaṃ sattamaṃ."
}