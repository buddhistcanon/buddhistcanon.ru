{
  "tha-ap426:0.1": "Therāpadāna",
  "tha-ap426:0.2": "Sakiṃsammajjakavagga",
  "tha-ap426:0.3": "4. Sattakadambapupphiyattheraapadāna",
  "tha-ap426:1.1": "“Himavantassāvidūre,",
  "tha-ap426:1.2": "kukkuṭo nāma pabbato;",
  "tha-ap426:1.3": "Tamhi pabbatapādamhi,",
  "tha-ap426:1.4": "satta buddhā vasiṃsu te.",
  "tha-ap426:2.1": "Kadambaṃ pupphitaṃ disvā,",
  "tha-ap426:2.2": "paggahetvāna añjaliṃ;",
  "tha-ap426:2.3": "Satta mālā gahetvāna,",
  "tha-ap426:2.4": "puññacittena okiriṃ.",
  "tha-ap426:3.1": "Tena kammena sukatena,",
  "tha-ap426:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap426:3.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap426:3.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap426:4.1": "Catunnavutito kappe,",
  "tha-ap426:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap426:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap426:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap426:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap426:5.2": "…pe…",
  "tha-ap426:5.3": "viharāmi anāsavo.",
  "tha-ap426:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap426:6.2": "…pe…",
  "tha-ap426:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap426:7.1": "Paṭisambhidā catasso,",
  "tha-ap426:7.2": "…pe…",
  "tha-ap426:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap426:8.1": "Itthaṃ sudaṃ āyasmā sattakadambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap426:9.1": "Sattakadambapupphiyattherassāpadānaṃ catutthaṃ."
}