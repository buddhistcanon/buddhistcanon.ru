{
  "tha-ap372:0.1": "Therāpadāna",
  "tha-ap372:0.2": "Mandāravapupphiyavagga",
  "tha-ap372:0.3": "10 Saḷalapupphiyattheraapadāna",
  "tha-ap372:1.1": "“Candabhāgānadītīre,",
  "tha-ap372:1.2": "ahosiṃ kinnaro tadā;",
  "tha-ap372:1.3": "Tatthaddasaṃ devadevaṃ,",
  "tha-ap372:1.4": "caṅkamantaṃ narāsabhaṃ.",
  "tha-ap372:2.1": "Ocinitvāna saḷalaṃ,",
  "tha-ap372:2.2": "pupphaṃ buddhassadāsahaṃ;",
  "tha-ap372:2.3": "Upasiṅghi mahāvīro,",
  "tha-ap372:2.4": "saḷalaṃ devagandhikaṃ.",
  "tha-ap372:3.1": "Paṭiggahetvā sambuddho,",
  "tha-ap372:3.2": "vipassī lokanāyako;",
  "tha-ap372:3.3": "Upasiṅghi mahāvīro,",
  "tha-ap372:3.4": "pekkhamānassa me sato.",
  "tha-ap372:4.1": "Pasannacitto sumano,",
  "tha-ap372:4.2": "vanditvā dvipaduttamaṃ;",
  "tha-ap372:4.3": "Añjaliṃ paggahetvāna,",
  "tha-ap372:4.4": "puna pabbatamāruhiṃ.",
  "tha-ap372:5.1": "Ekanavutito kappe,",
  "tha-ap372:5.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap372:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap372:5.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap372:6.1": "Paṭisambhidā catasso,",
  "tha-ap372:6.2": "…pe…",
  "tha-ap372:6.3": "kataṃ buddhassa sāsanaṃ”. (3213)",
  "tha-ap372:7.1": "Itthaṃ sudaṃ āyasmā saḷalapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap372:8.1": "Saḷalapupphiyattherassāpadānaṃ dasamaṃ.",
  "tha-ap372:9.1": "Mandāravapupphiyavaggo sattatiṃsatimo.",
  "tha-ap372:10.1": "Tassuddānaṃ",
  "tha-ap372:11.1": "Mandāravañca kakkāru,",
  "tha-ap372:11.2": "bhisakesarapupphiyo;",
  "tha-ap372:11.3": "Aṅkolako kadambī ca,",
  "tha-ap372:11.4": "uddālī ekacampako;",
  "tha-ap372:11.5": "Timiraṃ saḷalañceva,",
  "tha-ap372:11.6": "gāthā tālīsameva ca."
}