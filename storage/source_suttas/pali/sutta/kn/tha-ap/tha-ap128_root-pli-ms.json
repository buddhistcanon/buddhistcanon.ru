{
  "tha-ap128:0.1": "Therāpadāna",
  "tha-ap128:0.2": "Sereyyavagga",
  "tha-ap128:0.3": "6. Kusumāsaniyattheraapadāna",
  "tha-ap128:1.1": "“Nagare dhaññavatiyā,",
  "tha-ap128:1.2": "ahosiṃ brāhmaṇo tadā;",
  "tha-ap128:1.3": "Lakkhaṇe itihāse ca,",
  "tha-ap128:1.4": "sanighaṇḍusakeṭubhe.",
  "tha-ap128:2.1": "Padako veyyākaraṇo,",
  "tha-ap128:2.2": "nimittakovido ahaṃ;",
  "tha-ap128:2.3": "Mante ca sisse vācesiṃ,",
  "tha-ap128:2.4": "tiṇṇaṃ vedāna pāragū.",
  "tha-ap128:3.1": "Pañca uppalahatthāni,",
  "tha-ap128:3.2": "piṭṭhiyaṃ ṭhapitāni me;",
  "tha-ap128:3.3": "Āhutiṃ yiṭṭhukāmohaṃ,",
  "tha-ap128:3.4": "pitumātusamāgame.",
  "tha-ap128:4.1": "Tadā vipassī bhagavā,",
  "tha-ap128:4.2": "bhikkhusaṃghapurakkhato;",
  "tha-ap128:4.3": "Obhāsento disā sabbā,",
  "tha-ap128:4.4": "āgacchati narāsabho.",
  "tha-ap128:5.1": "Āsanaṃ paññapetvāna,",
  "tha-ap128:5.2": "nimantetvā mahāmuniṃ;",
  "tha-ap128:5.3": "Santharitvāna taṃ pupphaṃ,",
  "tha-ap128:5.4": "abhinesiṃ sakaṃ gharaṃ.",
  "tha-ap128:6.1": "Yaṃ me atthi sake gehe,",
  "tha-ap128:6.2": "āmisaṃ paccupaṭṭhitaṃ;",
  "tha-ap128:6.3": "Tāhaṃ buddhassa pādāsiṃ,",
  "tha-ap128:6.4": "pasanno sehi pāṇibhi.",
  "tha-ap128:7.1": "Bhuttāviṃ kālamaññāya,",
  "tha-ap128:7.2": "pupphahatthamadāsahaṃ;",
  "tha-ap128:7.3": "Anumoditvāna sabbaññū,",
  "tha-ap128:7.4": "pakkāmi uttarāmukho.",
  "tha-ap128:8.1": "Ekanavutito kappe,",
  "tha-ap128:8.2": "yaṃ pupphamadadiṃ tadā;",
  "tha-ap128:8.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap128:8.4": "pupphadānassidaṃ phalaṃ.",
  "tha-ap128:9.1": "Anantaraṃ ito kappe,",
  "tha-ap128:9.2": "rājāhuṃ varadassano;",
  "tha-ap128:9.3": "Sattaratanasampanno,",
  "tha-ap128:9.4": "cakkavattī mahabbalo.",
  "tha-ap128:10.1": "Paṭisambhidā catasso,",
  "tha-ap128:10.2": "…pe…",
  "tha-ap128:10.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap128:11.1": "Itthaṃ sudaṃ āyasmā kusumāsaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap128:12.1": "Kusumāsaniyattherassāpadānaṃ chaṭṭhaṃ."
}