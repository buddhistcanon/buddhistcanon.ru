{
  "tha-ap512:0.1": "Therāpadāna",
  "tha-ap512:0.2": "Kaṇikāravagga",
  "tha-ap512:0.3": "10 Nāḷikeraphaladāyakattheraapadāna",
  "tha-ap512:1.1": "“Nagare bandhumatiyā,",
  "tha-ap512:1.2": "ārāmiko ahaṃ tadā;",
  "tha-ap512:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap512:1.4": "gacchantaṃ anilañjase.",
  "tha-ap512:2.1": "Nāḷikeraphalaṃ gayha,",
  "tha-ap512:2.2": "buddhaseṭṭhassadāsahaṃ;",
  "tha-ap512:2.3": "Ākāse ṭhitako santo,",
  "tha-ap512:2.4": "paṭiggaṇhi mahāyaso.",
  "tha-ap512:3.1": "Vittisañjanano mayhaṃ,",
  "tha-ap512:3.2": "diṭṭhadhammasukhāvaho;",
  "tha-ap512:3.3": "Phalaṃ buddhassa datvāna,",
  "tha-ap512:3.4": "vippasannena cetasā.",
  "tha-ap512:4.1": "Adhigacchiṃ tadā pītiṃ,",
  "tha-ap512:4.2": "vipulañca sukhuttamaṃ;",
  "tha-ap512:4.3": "Uppajjateva ratanaṃ,",
  "tha-ap512:4.4": "nibbattassa tahiṃ tahiṃ.",
  "tha-ap512:5.1": "Ekanavutito kappe,",
  "tha-ap512:5.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap512:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap512:5.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap512:6.1": "Dibbacakkhu visuddhaṃ me,",
  "tha-ap512:6.2": "samādhikusalo ahaṃ;",
  "tha-ap512:6.3": "Abhiññāpāramippatto,",
  "tha-ap512:6.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap512:7.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap512:7.2": "…pe…",
  "tha-ap512:7.3": "viharāmi anāsavo.",
  "tha-ap512:8.1": "Svāgataṃ vata me āsi,",
  "tha-ap512:8.2": "…pe…",
  "tha-ap512:8.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap512:9.1": "Paṭisambhidā catasso,",
  "tha-ap512:9.2": "…pe…",
  "tha-ap512:9.3": "kataṃ buddhassa sāsanaṃ”. (5366)",
  "tha-ap512:10.1": "Itthaṃ sudaṃ āyasmā nāḷikeraphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap512:11.1": "Nāḷikeraphaladāyakattherassāpadānaṃ dasamaṃ.",
  "tha-ap512:12.1": "Kaṇikāravaggo ekapaññāsamo.",
  "tha-ap512:13.1": "Tassuddānaṃ",
  "tha-ap512:14.1": "Kaṇikārekapattā ca,",
  "tha-ap512:14.2": "kāsumārī tathāvaṭā;",
  "tha-ap512:14.3": "Pādañca mātuluṅgañca,",
  "tha-ap512:14.4": "ajelīmodameva ca.",
  "tha-ap512:15.1": "Tālaṃ tathā nāḷikeraṃ,",
  "tha-ap512:15.2": "gāthāyo gaṇitā viha;",
  "tha-ap512:15.3": "Ekaṃ gāthāsataṃ hoti,",
  "tha-ap512:15.4": "ūnādhikavivajjitaṃ."
}