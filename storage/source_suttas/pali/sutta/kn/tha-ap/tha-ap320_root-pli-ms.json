{
  "tha-ap320:0.1": "Therāpadāna",
  "tha-ap320:0.2": "Ārakkhadāyakavagga",
  "tha-ap320:0.3": "8. Tiraṃsiyattheraapadāna",
  "tha-ap320:1.1": "“Kesariṃ abhijātaṃva,",
  "tha-ap320:1.2": "aggikkhandhaṃva pabbate;",
  "tha-ap320:1.3": "Obhāsentaṃ disā sabbā,",
  "tha-ap320:1.4": "siddhatthaṃ pabbatantare.",
  "tha-ap320:2.1": "Sūriyassa ca ālokaṃ,",
  "tha-ap320:2.2": "candālokaṃ tatheva ca;",
  "tha-ap320:2.3": "Buddhālokañca disvāna,",
  "tha-ap320:2.4": "vitti me udapajjatha.",
  "tha-ap320:3.1": "Tayo āloke disvāna,",
  "tha-ap320:3.2": "sambuddhaṃ sāvakuttamaṃ;",
  "tha-ap320:3.3": "Ekaṃsaṃ ajinaṃ katvā,",
  "tha-ap320:3.4": "santhaviṃ lokanāyakaṃ.",
  "tha-ap320:4.1": "Tayo hi ālokakarā,",
  "tha-ap320:4.2": "loke lokatamonudā;",
  "tha-ap320:4.3": "Cando ca sūriyo cāpi,",
  "tha-ap320:4.4": "buddho ca lokanāyako.",
  "tha-ap320:5.1": "Opammaṃ upadassetvā,",
  "tha-ap320:5.2": "kittito me mahāmuni;",
  "tha-ap320:5.3": "Buddhassa vaṇṇaṃ kittetvā,",
  "tha-ap320:5.4": "kappaṃ saggamhi modahaṃ.",
  "tha-ap320:6.1": "Catunnavutito kappe,",
  "tha-ap320:6.2": "yaṃ buddhamabhikittayiṃ;",
  "tha-ap320:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap320:6.4": "kittanāya idaṃ phalaṃ.",
  "tha-ap320:7.1": "Ekasaṭṭhimhito kappe,",
  "tha-ap320:7.2": "eko ñāṇadharo ahu;",
  "tha-ap320:7.3": "Sattaratanasampanno,",
  "tha-ap320:7.4": "cakkavattī mahabbalo.",
  "tha-ap320:8.1": "Paṭisambhidā catasso,",
  "tha-ap320:8.2": "…pe…",
  "tha-ap320:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap320:9.1": "Itthaṃ sudaṃ āyasmā tiraṃsiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap320:10.1": "Tiraṃsiyattherassāpadānaṃ aṭṭhamaṃ."
}