{
  "tha-ap97:0.1": "Therāpadāna",
  "tha-ap97:0.2": "Sudhāvagga",
  "tha-ap97:0.3": "5. Gandhamāliyattheraapadāna",
  "tha-ap97:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap97:1.2": "gandhathūpaṃ akāsahaṃ;",
  "tha-ap97:1.3": "Sumanehi paṭicchannaṃ,",
  "tha-ap97:1.4": "buddhānucchavikaṃ kataṃ.",
  "tha-ap97:2.1": "Kañcanagghiyasaṅkāsaṃ,",
  "tha-ap97:2.2": "buddhaṃ lokagganāyakaṃ;",
  "tha-ap97:2.3": "Indīvaraṃva jalitaṃ,",
  "tha-ap97:2.4": "ādittaṃva hutāsanaṃ.",
  "tha-ap97:3.1": "Byagghūsabhaṃva pavaraṃ,",
  "tha-ap97:3.2": "abhijātaṃva kesariṃ;",
  "tha-ap97:3.3": "Nisinnaṃ samaṇānaggaṃ,",
  "tha-ap97:3.4": "bhikkhusaṃghapurakkhataṃ.",
  "tha-ap97:4.1": "Vanditvā satthuno pāde,",
  "tha-ap97:4.2": "pakkāmiṃ uttarāmukho;",
  "tha-ap97:4.3": "Catunnavutito kappe,",
  "tha-ap97:4.4": "gandhamālaṃ yato adaṃ.",
  "tha-ap97:5.1": "Buddhe katassa kārassa,",
  "tha-ap97:5.2": "phalenāhaṃ visesato;",
  "tha-ap97:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap97:5.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap97:6.1": "Cattārīsamhi ekūne,",
  "tha-ap97:6.2": "kappe āsiṃsu soḷasa;",
  "tha-ap97:6.3": "Devagandhasanāmā te,",
  "tha-ap97:6.4": "rājāno cakkavattino.",
  "tha-ap97:7.1": "Paṭisambhidā catasso,",
  "tha-ap97:7.2": "…pe…",
  "tha-ap97:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap97:8.1": "Itthaṃ sudaṃ āyasmā gandhamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap97:9.1": "Gandhamāliyattherassāpadānaṃ pañcamaṃ."
}