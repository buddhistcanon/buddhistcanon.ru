{
  "tha-ap312:0.1": "Therāpadāna",
  "tha-ap312:0.2": "Padumakesaravagga",
  "tha-ap312:0.3": "10. Pabbhāradāyakattheraapadāna",
  "tha-ap312:1.1": "“Piyadassino bhagavato,",
  "tha-ap312:1.2": "pabbhāro sodhito mayā;",
  "tha-ap312:1.3": "Ghaṭakañca upaṭṭhāsiṃ,",
  "tha-ap312:1.4": "paribhogāya tādino.",
  "tha-ap312:2.1": "Taṃ me buddho viyākāsi,",
  "tha-ap312:2.2": "piyadassī mahāmuni;",
  "tha-ap312:2.3": "Sahassakaṇḍo satabheṇḍu,",
  "tha-ap312:2.4": "dhajālu haritāmayo.",
  "tha-ap312:3.1": "Nibbattissati so yūpo,",
  "tha-ap312:3.2": "ratanañca anappakaṃ;",
  "tha-ap312:3.3": "Pabbhāradānaṃ datvāna,",
  "tha-ap312:3.4": "kappaṃ saggamhi modahaṃ.",
  "tha-ap312:4.1": "Ito bāttiṃsakappamhi,",
  "tha-ap312:4.2": "susuddho nāma khattiyo;",
  "tha-ap312:4.3": "Sattaratanasampanno,",
  "tha-ap312:4.4": "cakkavattī mahabbalo.",
  "tha-ap312:5.1": "Paṭisambhidā catasso,",
  "tha-ap312:5.2": "…pe…",
  "tha-ap312:5.3": "kataṃ buddhassa sāsanaṃ”. (2763)",
  "tha-ap312:6.1": "Itthaṃ sudaṃ āyasmā pabbhāradāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap312:7.1": "Pabbhāradāyakattherassāpadānaṃ dasamaṃ.",
  "tha-ap312:8.1": "Padumakesaravaggo ekatiṃsatimo.",
  "tha-ap312:9.1": "Tassuddānaṃ",
  "tha-ap312:10.1": "Kesaraṃ gandhamannañca,",
  "tha-ap312:10.2": "dhammasaññī phalena ca;",
  "tha-ap312:10.3": "Pasādārāmadāyī ca,",
  "tha-ap312:10.4": "lepako buddhasaññako;",
  "tha-ap312:10.5": "Pabbhārado ca gāthāyo,",
  "tha-ap312:10.6": "ekapaññāsa kittitā."
}