{
  "tha-ap210:0.1": "Therāpadāna",
  "tha-ap210:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap210:0.3": "8. Koraṇḍapupphiyattheraapadāna",
  "tha-ap210:1.1": "“Akkantañca padaṃ disvā,",
  "tha-ap210:1.2": "cakkālaṅkārabhūsitaṃ;",
  "tha-ap210:1.3": "Padenānupadaṃ yanto,",
  "tha-ap210:1.4": "vipassissa mahesino.",
  "tha-ap210:2.1": "Koraṇḍaṃ pupphitaṃ disvā,",
  "tha-ap210:2.2": "samūlaṃ pūjitaṃ mayā;",
  "tha-ap210:2.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap210:2.4": "avandiṃ padamuttamaṃ.",
  "tha-ap210:3.1": "Ekanavutito kappe,",
  "tha-ap210:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap210:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap210:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap210:4.1": "Sattapaññāsakappamhi,",
  "tha-ap210:4.2": "eko vītamalo ahuṃ;",
  "tha-ap210:4.3": "Sattaratanasampanno,",
  "tha-ap210:4.4": "cakkavattī mahabbalo.",
  "tha-ap210:5.1": "Paṭisambhidā catasso,",
  "tha-ap210:5.2": "…pe…",
  "tha-ap210:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap210:6.1": "Itthaṃ sudaṃ āyasmā koraṇḍapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap210:7.1": "Koraṇḍapupphiyattherassāpadānaṃ aṭṭhamaṃ."
}