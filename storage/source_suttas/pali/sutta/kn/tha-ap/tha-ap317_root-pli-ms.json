{
  "tha-ap317:0.1": "Therāpadāna",
  "tha-ap317:0.2": "Ārakkhadāyakavagga",
  "tha-ap317:0.3": "5. Pupphāsanadāyakattheraapadāna",
  "tha-ap317:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap317:1.2": "Pītaraṃsiṃva bhāṇumaṃ;",
  "tha-ap317:1.3": "Avidūrena gacchantaṃ,",
  "tha-ap317:1.4": "Siddhatthaṃ aparājitaṃ.",
  "tha-ap317:2.1": "Tassa paccuggamitvāna,",
  "tha-ap317:2.2": "pavesetvāna assamaṃ;",
  "tha-ap317:2.3": "Pupphāsanaṃ mayā dinnaṃ,",
  "tha-ap317:2.4": "vippasannena cetasā.",
  "tha-ap317:3.1": "Añjaliṃ paggahetvāna,",
  "tha-ap317:3.2": "vedajāto tadā ahaṃ;",
  "tha-ap317:3.3": "Buddhe cittaṃ pasādetvā,",
  "tha-ap317:3.4": "taṃ kammaṃ pariṇāmayiṃ.",
  "tha-ap317:4.1": "Yaṃ me atthi kataṃ puññaṃ,",
  "tha-ap317:4.2": "sayambhumhaparājite;",
  "tha-ap317:4.3": "Sabbena tena kusalena,",
  "tha-ap317:4.4": "vimalo homi sāsane.",
  "tha-ap317:5.1": "Catunnavutito kappe,",
  "tha-ap317:5.2": "pupphāsanamadaṃ tadā;",
  "tha-ap317:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap317:5.4": "pupphāsanassidaṃ phalaṃ.",
  "tha-ap317:6.1": "Paṭisambhidā catasso,",
  "tha-ap317:6.2": "…pe…",
  "tha-ap317:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap317:7.1": "Itthaṃ sudaṃ āyasmā pupphāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap317:8.1": "Pupphāsanadāyakattherassāpadānaṃ pañcamaṃ."
}