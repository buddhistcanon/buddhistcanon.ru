{
  "tha-ap349:0.1": "Therāpadāna",
  "tha-ap349:0.2": "Ekapadumiyavagga",
  "tha-ap349:0.3": "7. Padumapūjakattheraapadāna",
  "tha-ap349:1.1": "“Himavantassāvidūre,",
  "tha-ap349:1.2": "romaso nāma pabbato;",
  "tha-ap349:1.3": "Buddhopi sambhavo nāma,",
  "tha-ap349:1.4": "abbhokāse vasī tadā.",
  "tha-ap349:2.1": "Bhavanā nikkhamitvāna,",
  "tha-ap349:2.2": "padumaṃ dhārayiṃ ahaṃ;",
  "tha-ap349:2.3": "Ekāhaṃ dhārayitvāna,",
  "tha-ap349:2.4": "puna bhavanupāgamiṃ.",
  "tha-ap349:3.1": "Ekanavutito kappe,",
  "tha-ap349:3.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap349:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap349:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap349:4.1": "Paṭisambhidā catasso,",
  "tha-ap349:4.2": "…pe…",
  "tha-ap349:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap349:5.1": "Itthaṃ sudaṃ āyasmā padumapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap349:6.1": "Padumapūjakattherassāpadānaṃ sattamaṃ.",
  "tha-ap349:6.2": "Terasamaṃ bhāṇavāraṃ."
}