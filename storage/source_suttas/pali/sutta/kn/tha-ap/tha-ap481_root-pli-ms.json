{
  "tha-ap481:0.1": "Therāpadāna",
  "tha-ap481:0.2": "Naḷamālivagga",
  "tha-ap481:0.3": "9. Pānadhidāyakattheraapadāna",
  "tha-ap481:1.1": "“Anomadassī bhagavā,",
  "tha-ap481:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap481:1.3": "Divāvihārā nikkhamma,",
  "tha-ap481:1.4": "pathamāruhi cakkhumā.",
  "tha-ap481:2.1": "Pānadhiṃ sukataṃ gayha,",
  "tha-ap481:2.2": "addhānaṃ paṭipajjahaṃ;",
  "tha-ap481:2.3": "Tatthaddasāsiṃ sambuddhaṃ,",
  "tha-ap481:2.4": "pattikaṃ cārudassanaṃ.",
  "tha-ap481:3.1": "Sakaṃ cittaṃ pasādetvā,",
  "tha-ap481:3.2": "nīharitvāna pānadhiṃ;",
  "tha-ap481:3.3": "Pādamūle ṭhapetvāna,",
  "tha-ap481:3.4": "idaṃ vacanamabraviṃ.",
  "tha-ap481:4.1": "‘Abhirūha mahāvīra,",
  "tha-ap481:4.2": "sugatinda vināyaka;",
  "tha-ap481:4.3": "Ito phalaṃ labhissāmi,",
  "tha-ap481:4.4": "so me attho samijjhatu’.",
  "tha-ap481:5.1": "Anomadassī bhagavā,",
  "tha-ap481:5.2": "lokajeṭṭho narāsabho;",
  "tha-ap481:5.3": "Pānadhiṃ abhirūhitvā,",
  "tha-ap481:5.4": "idaṃ vacanamabravi.",
  "tha-ap481:6.1": "‘Yo pānadhiṃ me adāsi,",
  "tha-ap481:6.2": "pasanno sehi pāṇibhi;",
  "tha-ap481:6.3": "Tamahaṃ kittayissāmi,",
  "tha-ap481:6.4": "suṇātha mama bhāsato’.",
  "tha-ap481:7.1": "Buddhassa giramaññāya,",
  "tha-ap481:7.2": "sabbe devā samāgatā;",
  "tha-ap481:7.3": "Udaggacittā sumanā,",
  "tha-ap481:7.4": "vedajātā katañjalī.",
  "tha-ap481:8.1": "‘Pānadhīnaṃ padānena,",
  "tha-ap481:8.2": "sukhitoyaṃ bhavissati;",
  "tha-ap481:8.3": "Pañcapaññāsakkhattuñca,",
  "tha-ap481:8.4": "devarajjaṃ karissati.",
  "tha-ap481:9.1": "Sahassakkhattuṃ rājā ca,",
  "tha-ap481:9.2": "cakkavattī bhavissati;",
  "tha-ap481:9.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap481:9.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap481:10.1": "Aparimeyye ito kappe,",
  "tha-ap481:10.2": "okkākakulasambhavo;",
  "tha-ap481:10.3": "Gotamo nāma gottena,",
  "tha-ap481:10.4": "satthā loke bhavissati.",
  "tha-ap481:11.1": "Tassa dhammesu dāyādo,",
  "tha-ap481:11.2": "oraso dhammanimmito;",
  "tha-ap481:11.3": "Sabbāsave pariññāya,",
  "tha-ap481:11.4": "nibbāyissatināsavo.",
  "tha-ap481:12.1": "Devaloke manusse vā,",
  "tha-ap481:12.2": "nibbattissati puññavā;",
  "tha-ap481:12.3": "Devayānapaṭibhāgaṃ,",
  "tha-ap481:12.4": "yānaṃ paṭilabhissati’.",
  "tha-ap481:13.1": "Pāsādā sivikā vayhaṃ,",
  "tha-ap481:13.2": "hatthino samalaṅkatā;",
  "tha-ap481:13.3": "Rathā vājaññasaṃyuttā,",
  "tha-ap481:13.4": "sadā pātubhavanti me.",
  "tha-ap481:14.1": "Agārā nikkhamantopi,",
  "tha-ap481:14.2": "rathena nikkhamiṃ ahaṃ;",
  "tha-ap481:14.3": "Kesesu chijjamānesu,",
  "tha-ap481:14.4": "arahattamapāpuṇiṃ.",
  "tha-ap481:15.1": "Lābhā mayhaṃ suladdhaṃ me,",
  "tha-ap481:15.2": "vāṇijjaṃ suppayojitaṃ;",
  "tha-ap481:15.3": "Datvāna pānadhiṃ ekaṃ,",
  "tha-ap481:15.4": "pattomhi acalaṃ padaṃ.",
  "tha-ap481:16.1": "Aparimeyye ito kappe,",
  "tha-ap481:16.2": "yaṃ pānadhimadāsahaṃ;",
  "tha-ap481:16.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap481:16.4": "pānadhissa idaṃ phalaṃ.",
  "tha-ap481:17.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap481:17.2": "…pe…",
  "tha-ap481:17.3": "viharāmi anāsavo.",
  "tha-ap481:18.1": "Svāgataṃ vata me āsi,",
  "tha-ap481:18.2": "…pe…",
  "tha-ap481:18.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap481:19.1": "Paṭisambhidā catasso,",
  "tha-ap481:19.2": "…pe…",
  "tha-ap481:19.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap481:20.1": "Itthaṃ sudaṃ āyasmā pānadhidāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap481:21.1": "Pānadhidāyakattherassāpadānaṃ navamaṃ."
}