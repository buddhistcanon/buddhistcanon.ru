{
  "tha-ap204:0.1": "Therāpadāna",
  "tha-ap204:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap204:0.3": "2. Minelapupphiyattheraapadāna",
  "tha-ap204:1.1": "“Suvaṇṇavaṇṇo bhagavā,",
  "tha-ap204:1.2": "sataraṃsī patāpavā;",
  "tha-ap204:1.3": "Caṅkamanaṃ samārūḷho,",
  "tha-ap204:1.4": "mettacitto sikhīsabho.",
  "tha-ap204:2.1": "Pasannacitto sumano,",
  "tha-ap204:2.2": "vanditvā ñāṇamuttamaṃ;",
  "tha-ap204:2.3": "Minelapupphaṃ paggayha,",
  "tha-ap204:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap204:3.1": "Ekattiṃse ito kappe,",
  "tha-ap204:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap204:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap204:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap204:4.1": "Ekūnatiṃsakappamhi,",
  "tha-ap204:4.2": "sumeghaghananāmako;",
  "tha-ap204:4.3": "Sattaratanasampanno,",
  "tha-ap204:4.4": "cakkavattī mahabbalo.",
  "tha-ap204:5.1": "Paṭisambhidā catasso,",
  "tha-ap204:5.2": "…pe…",
  "tha-ap204:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap204:6.1": "Itthaṃ sudaṃ āyasmā minelapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap204:7.1": "Minelapupphiyattherassāpadānaṃ dutiyaṃ."
}