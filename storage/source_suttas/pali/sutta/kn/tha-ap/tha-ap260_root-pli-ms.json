{
  "tha-ap260:0.1": "Therāpadāna",
  "tha-ap260:0.2": "Thomakavagga",
  "tha-ap260:0.3": "8. Paṇṇadāyakattheraapadāna",
  "tha-ap260:1.1": "“Pabbate himavantamhi,",
  "tha-ap260:1.2": "vākacīradharo ahaṃ;",
  "tha-ap260:1.3": "Aloṇapaṇṇabhakkhomhi,",
  "tha-ap260:1.4": "niyamesu ca saṃvuto.",
  "tha-ap260:2.1": "Pātarāse anuppatte,",
  "tha-ap260:2.2": "siddhattho upagacchi maṃ;",
  "tha-ap260:2.3": "Tāhaṃ buddhassa pādāsiṃ,",
  "tha-ap260:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap260:3.1": "Catunnavutito kappe,",
  "tha-ap260:3.2": "yaṃ paṇṇamadadiṃ tadā;",
  "tha-ap260:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap260:3.4": "paṇṇadānassidaṃ phalaṃ.",
  "tha-ap260:4.1": "Sattavīsatikappamhi,",
  "tha-ap260:4.2": "rājā āsiṃ sadatthiyo;",
  "tha-ap260:4.3": "Sattaratanasampanno,",
  "tha-ap260:4.4": "cakkavattī mahabbalo.",
  "tha-ap260:5.1": "Paṭisambhidā catasso,",
  "tha-ap260:5.2": "…pe…",
  "tha-ap260:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap260:6.1": "Itthaṃ sudaṃ āyasmā paṇṇadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap260:7.1": "Paṇṇadāyakattherassāpadānaṃ aṭṭhamaṃ."
}