{
  "tha-ap201:0.1": "Therāpadāna",
  "tha-ap201:0.2": "Tamālapupphiyavagga",
  "tha-ap201:0.3": "9 Kiṃkaṇikapupphiyattheraapadāna",
  "tha-ap201:1.1": "“Sumaṅgaloti nāmena,",
  "tha-ap201:1.2": "sayambhū aparājito;",
  "tha-ap201:1.3": "Pavanā nikkhamitvāna,",
  "tha-ap201:1.4": "nagaraṃ pāvisī jino.",
  "tha-ap201:2.1": "Piṇḍacāraṃ caritvāna,",
  "tha-ap201:2.2": "nikkhamma nagarā muni;",
  "tha-ap201:2.3": "Katakiccova sambuddho,",
  "tha-ap201:2.4": "so vasī vanamantare.",
  "tha-ap201:3.1": "Kiṃkaṇipupphaṃ paggayha,",
  "tha-ap201:3.2": "buddhassa abhiropayiṃ;",
  "tha-ap201:3.3": "Pasannacitto sumano,",
  "tha-ap201:3.4": "sayambhussa mahesino.",
  "tha-ap201:4.1": "Catunnavutito kappe,",
  "tha-ap201:4.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap201:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap201:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap201:5.1": "Chaḷāsītimhito kappe,",
  "tha-ap201:5.2": "apilāsisanāmako;",
  "tha-ap201:5.3": "Sattaratanasampanno,",
  "tha-ap201:5.4": "cakkavattī mahabbalo.",
  "tha-ap201:6.1": "Paṭisambhidā catasso,",
  "tha-ap201:6.2": "…pe…",
  "tha-ap201:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap201:7.1": "Itthaṃ sudaṃ āyasmā kiṃkaṇikapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap201:8.1": "Kiṃkaṇikapupphiyattherassāpadānaṃ navamaṃ."
}