{
  "tha-ap170:0.1": "Therāpadāna",
  "tha-ap170:0.2": "Supāricariyavagga",
  "tha-ap170:0.3": "8. Dussadāyakattheraapadāna",
  "tha-ap170:1.1": "“Tivarāyaṃ pure ramme,",
  "tha-ap170:1.2": "rājaputtosahaṃ tadā;",
  "tha-ap170:1.3": "Paṇṇākāraṃ labhitvāna,",
  "tha-ap170:1.4": "upasantassadāsahaṃ.",
  "tha-ap170:2.1": "Adhivāsesi bhagavā,",
  "tha-ap170:2.2": "vatthaṃ hatthena āmasi;",
  "tha-ap170:2.3": "Siddhattho adhivāsetvā,",
  "tha-ap170:2.4": "vehāsaṃ nabhamuggami.",
  "tha-ap170:3.1": "Buddhassa gacchamānassa,",
  "tha-ap170:3.2": "dussā dhāvanti pacchato;",
  "tha-ap170:3.3": "Tattha cittaṃ pasādesiṃ,",
  "tha-ap170:3.4": "buddho no aggapuggalo.",
  "tha-ap170:4.1": "Catunnavutito kappe,",
  "tha-ap170:4.2": "yaṃ dussamadadiṃ tadā;",
  "tha-ap170:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap170:4.4": "dussadānassidaṃ phalaṃ.",
  "tha-ap170:5.1": "Sattasaṭṭhimhito kappe,",
  "tha-ap170:5.2": "cakkavattī tadā ahuṃ;",
  "tha-ap170:5.3": "Parisuddhoti nāmena,",
  "tha-ap170:5.4": "manujindo mahabbalo.",
  "tha-ap170:6.1": "Paṭisambhidā catasso,",
  "tha-ap170:6.2": "…pe…",
  "tha-ap170:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap170:7.1": "Itthaṃ sudaṃ āyasmā dussadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap170:8.1": "Dussadāyakattherassāpadānaṃ aṭṭhamaṃ."
}