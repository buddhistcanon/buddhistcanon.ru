{
  "tha-ap461:0.1": "Therāpadāna",
  "tha-ap461:0.2": "Jagatidāyakavagga",
  "tha-ap461:0.3": "9 Paṭṭipupphiyattheraapadāna",
  "tha-ap461:1.1": "“Nīharante sarīramhi,",
  "tha-ap461:1.2": "vajjamānāsu bherisu;",
  "tha-ap461:1.3": "Pasannacitto sumano,",
  "tha-ap461:1.4": "paṭṭipupphamapūjayiṃ.",
  "tha-ap461:2.1": "Satasahassito kappe,",
  "tha-ap461:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap461:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap461:2.4": "dehapūjāyidaṃ phalaṃ.",
  "tha-ap461:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap461:3.2": "…pe…",
  "tha-ap461:3.3": "viharāmi anāsavo.",
  "tha-ap461:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap461:4.2": "…pe…",
  "tha-ap461:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap461:5.1": "Paṭisambhidā catasso,",
  "tha-ap461:5.2": "…pe…",
  "tha-ap461:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap461:6.1": "Itthaṃ sudaṃ āyasmā paṭṭipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap461:7.1": "Paṭṭipupphiyattherassāpadānaṃ navamaṃ."
}