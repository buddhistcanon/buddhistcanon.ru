{
  "tha-ap133:0.1": "Therāpadāna",
  "tha-ap133:0.2": "Sobhitavagga",
  "tha-ap133:0.3": "1. Sobhitattheraapadāna",
  "tha-ap133:1.1": "“Padumuttaro nāma jino,",
  "tha-ap133:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap133:1.3": "Mahato janakāyassa,",
  "tha-ap133:1.4": "deseti amataṃ padaṃ.",
  "tha-ap133:2.1": "Tassāhaṃ vacanaṃ sutvā,",
  "tha-ap133:2.2": "vācāsabhimudīritaṃ;",
  "tha-ap133:2.3": "Añjaliṃ paggahetvāna,",
  "tha-ap133:2.4": "ekaggo āsahaṃ tadā.",
  "tha-ap133:3.1": "‘Yathā samuddo udadhīnamaggo,",
  "tha-ap133:3.2": "Nerū nagānaṃ pavaro siluccayo;",
  "tha-ap133:3.3": "Tatheva ye cittavasena vattare’,",
  "tha-ap133:3.4": "Na buddhañāṇassa kalaṃ upenti te.",
  "tha-ap133:4.1": "Dhammavidhiṃ ṭhapetvāna,",
  "tha-ap133:4.2": "buddho kāruṇiko isi;",
  "tha-ap133:4.3": "Bhikkhusaṃghe nisīditvā,",
  "tha-ap133:4.4": "imā gāthā abhāsatha.",
  "tha-ap133:5.1": "‘Yo so ñāṇaṃ pakittesi,",
  "tha-ap133:5.2": "buddhamhi lokanāyake;",
  "tha-ap133:5.3": "Kappānaṃ satasahassaṃ,",
  "tha-ap133:5.4": "duggatiṃ na gamissati.",
  "tha-ap133:6.1": "Kilese jhāpayitvāna,",
  "tha-ap133:6.2": "ekaggo susamāhito;",
  "tha-ap133:6.3": "Sobhito nāma nāmena,",
  "tha-ap133:6.4": "hessati satthu sāvako’.",
  "tha-ap133:7.1": "Paññāse kappasahasse,",
  "tha-ap133:7.2": "sattevāsuṃ yasuggatā;",
  "tha-ap133:7.3": "Sattaratanasampannā,",
  "tha-ap133:7.4": "cakkavattī mahabbalā.",
  "tha-ap133:8.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap133:8.2": "bhavā sabbe samūhatā;",
  "tha-ap133:8.3": "Tisso vijjā anuppattā,",
  "tha-ap133:8.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap133:9.1": "Paṭisambhidā catasso,",
  "tha-ap133:9.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap133:9.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap133:9.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap133:10.1": "Itthaṃ sudaṃ āyasmā sobhito thero imā gāthāyo abhāsitthāti.",
  "tha-ap133:11.1": "Sobhitattherassāpadānaṃ paṭhamaṃ."
}