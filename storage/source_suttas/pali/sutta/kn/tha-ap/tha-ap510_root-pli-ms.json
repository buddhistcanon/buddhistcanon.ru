{
  "tha-ap510:0.1": "Therāpadāna",
  "tha-ap510:0.2": "Kaṇikāravagga",
  "tha-ap510:0.3": "8 Amodaphaliyattheraapadāna",
  "tha-ap510:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap510:1.2": "Āhutīnaṃ paṭiggahaṃ;",
  "tha-ap510:1.3": "Rathiyaṃ paṭipajjantaṃ,",
  "tha-ap510:1.4": "Āmodamadadiṃ phalaṃ.",
  "tha-ap510:2.1": "Ekanavutito kappe,",
  "tha-ap510:2.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap510:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap510:2.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap510:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap510:3.2": "…pe…",
  "tha-ap510:3.3": "viharāmi anāsavo.",
  "tha-ap510:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap510:4.2": "…pe…",
  "tha-ap510:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap510:5.1": "Paṭisambhidā catasso,",
  "tha-ap510:5.2": "…pe…",
  "tha-ap510:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap510:6.1": "Itthaṃ sudaṃ āyasmā amodaphaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap510:7.1": "Amodaphaliyattherassāpadānaṃ aṭṭhamaṃ."
}