{
  "tha-ap80:0.1": "Therāpadāna",
  "tha-ap80:0.2": "Nāgasamālavagga",
  "tha-ap80:0.3": "8. Pāṭalipupphiyattheraapadāna",
  "tha-ap80:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap80:1.2": "Gacchantaṃ antarāpaṇe;",
  "tha-ap80:1.3": "Kañcanagghiyasaṅkāsaṃ,",
  "tha-ap80:1.4": "Bāttiṃsavaralakkhaṇaṃ.",
  "tha-ap80:2.1": "Seṭṭhiputto tadā āsiṃ,",
  "tha-ap80:2.2": "sukhumālo sukhedhito;",
  "tha-ap80:2.3": "Ucchaṅge pāṭalipupphaṃ,",
  "tha-ap80:2.4": "katvāna abhisaṃhariṃ.",
  "tha-ap80:3.1": "Haṭṭho haṭṭhena cittena,",
  "tha-ap80:3.2": "pupphehi abhipūjayiṃ;",
  "tha-ap80:3.3": "Tissaṃ lokaviduṃ nāthaṃ,",
  "tha-ap80:3.4": "naradevaṃ namassahaṃ.",
  "tha-ap80:4.1": "Dvenavute ito kappe,",
  "tha-ap80:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap80:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap80:4.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap80:5.1": "Ito tesaṭṭhikappamhi,",
  "tha-ap80:5.2": "abhisammatanāmako;",
  "tha-ap80:5.3": "Sattaratanasampanno,",
  "tha-ap80:5.4": "cakkavattī mahabbalo.",
  "tha-ap80:6.1": "Paṭisambhidā catasso,",
  "tha-ap80:6.2": "…pe…",
  "tha-ap80:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap80:7.1": "Itthaṃ sudaṃ āyasmā pāṭalipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap80:8.1": "Pāṭalipupphiyattherassāpadānaṃ aṭṭhamaṃ."
}