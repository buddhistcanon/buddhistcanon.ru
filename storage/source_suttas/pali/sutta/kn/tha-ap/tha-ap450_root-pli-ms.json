{
  "tha-ap450:0.1": "Therāpadāna",
  "tha-ap450:0.2": "Vibhītakavagga",
  "tha-ap450:0.3": "8. Pādapīṭhiyattheraapadāna",
  "tha-ap450:1.1": "“Sumedho nāma sambuddho,",
  "tha-ap450:1.2": "aggo kāruṇiko muni;",
  "tha-ap450:1.3": "Tārayitvā bahū satte,",
  "tha-ap450:1.4": "nibbuto so mahāyaso.",
  "tha-ap450:2.1": "Sīhāsanassa sāmantā,",
  "tha-ap450:2.2": "sumedhassa mahesino;",
  "tha-ap450:2.3": "Pasannacitto sumano,",
  "tha-ap450:2.4": "pādapīṭhamakārayiṃ.",
  "tha-ap450:3.1": "Katvāna kusalaṃ kammaṃ,",
  "tha-ap450:3.2": "sukhapākaṃ sukhudrayaṃ;",
  "tha-ap450:3.3": "Puññakammena saṃyutto,",
  "tha-ap450:3.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap450:4.1": "Tattha me vasamānassa,",
  "tha-ap450:4.2": "puññakammasamaṅgino;",
  "tha-ap450:4.3": "Padāni uddharantassa,",
  "tha-ap450:4.4": "soṇṇapīṭhā bhavanti me.",
  "tha-ap450:5.1": "Lābhā tesaṃ suladdhaṃ vo,",
  "tha-ap450:5.2": "ye labhanti upassutiṃ;",
  "tha-ap450:5.3": "Nibbute kāraṃ katvāna,",
  "tha-ap450:5.4": "labhanti vipulaṃ sukhaṃ.",
  "tha-ap450:6.1": "Mayāpi sukataṃ kammaṃ,",
  "tha-ap450:6.2": "vāṇijjaṃ suppayojitaṃ;",
  "tha-ap450:6.3": "Pādapīṭhaṃ karitvāna,",
  "tha-ap450:6.4": "soṇṇapīṭhaṃ labhāmahaṃ.",
  "tha-ap450:7.1": "Yaṃ yaṃ disaṃ pakkamāmi,",
  "tha-ap450:7.2": "kenaci kiccayenahaṃ;",
  "tha-ap450:7.3": "Soṇṇapīṭhe akkamāmi,",
  "tha-ap450:7.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap450:8.1": "Tiṃsakappasahassamhi,",
  "tha-ap450:8.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap450:8.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap450:8.4": "pādapīṭhassidaṃ phalaṃ.",
  "tha-ap450:9.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap450:9.2": "…pe…",
  "tha-ap450:9.3": "viharāmi anāsavo.",
  "tha-ap450:10.1": "Svāgataṃ vata me āsi,",
  "tha-ap450:10.2": "…pe…",
  "tha-ap450:10.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap450:11.1": "Paṭisambhidā catasso,",
  "tha-ap450:11.2": "…pe…",
  "tha-ap450:11.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap450:12.1": "Itthaṃ sudaṃ āyasmā pādapīṭhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap450:13.1": "Pādapīṭhiyattherassāpadānaṃ aṭṭhamaṃ."
}