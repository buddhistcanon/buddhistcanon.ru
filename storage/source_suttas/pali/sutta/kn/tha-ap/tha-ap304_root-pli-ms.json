{
  "tha-ap304:0.1": "Therāpadāna",
  "tha-ap304:0.2": "Padumakesaravagga",
  "tha-ap304:0.3": "2. Sabbagandhiyattheraapadāna",
  "tha-ap304:1.1": "“Gandhamālaṃ mayā dinnaṃ,",
  "tha-ap304:1.2": "vipassissa mahesino;",
  "tha-ap304:1.3": "Adāsiṃ ujubhūtassa,",
  "tha-ap304:1.4": "koseyyavatthamuttamaṃ.",
  "tha-ap304:2.1": "Ekanavutito kappe,",
  "tha-ap304:2.2": "yaṃ vatthamadadiṃ pure;",
  "tha-ap304:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap304:2.4": "gandhadānassidaṃ phalaṃ.",
  "tha-ap304:3.1": "Ito pannarase kappe,",
  "tha-ap304:3.2": "suceḷo nāma khattiyo;",
  "tha-ap304:3.3": "Sattaratanasampanno,",
  "tha-ap304:3.4": "cakkavattī mahabbalo.",
  "tha-ap304:4.1": "Paṭisambhidā catasso,",
  "tha-ap304:4.2": "…pe…",
  "tha-ap304:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap304:5.1": "Itthaṃ sudaṃ āyasmā sabbagandhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap304:6.1": "Sabbagandhiyattherassāpadānaṃ dutiyaṃ."
}