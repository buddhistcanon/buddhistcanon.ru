{
  "tha-ap259:0.1": "Therāpadāna",
  "tha-ap259:0.2": "Thomakavagga",
  "tha-ap259:0.3": "7. Mañjaripūjakattheraapadāna",
  "tha-ap259:1.1": "“Mañjarikaṃ karitvāna,",
  "tha-ap259:1.2": "rathiyaṃ paṭipajjahaṃ;",
  "tha-ap259:1.3": "Addasaṃ samaṇānaggaṃ,",
  "tha-ap259:1.4": "bhikkhusaṃghapurakkhataṃ.",
  "tha-ap259:2.1": "Pasannacitto sumano,",
  "tha-ap259:2.2": "paramāya ca pītiyā;",
  "tha-ap259:2.3": "Ubho hatthehi paggayha,",
  "tha-ap259:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap259:3.1": "Dvenavute ito kappe,",
  "tha-ap259:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap259:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap259:3.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap259:4.1": "Ito tesattatikappe,",
  "tha-ap259:4.2": "eko āsiṃ mahīpati;",
  "tha-ap259:4.3": "Jotiyo nāma nāmena,",
  "tha-ap259:4.4": "cakkavattī mahabbalo.",
  "tha-ap259:5.1": "Paṭisambhidā catasso,",
  "tha-ap259:5.2": "…pe…",
  "tha-ap259:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap259:6.1": "Itthaṃ sudaṃ āyasmā mañjaripūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap259:7.1": "Mañjaripūjakattherassāpadānaṃ sattamaṃ."
}