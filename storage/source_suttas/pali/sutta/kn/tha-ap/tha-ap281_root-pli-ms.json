{
  "tha-ap281:0.1": "Therāpadāna",
  "tha-ap281:0.2": "Suvaṇṇabibbohanavagga",
  "tha-ap281:0.3": "9 Ekapuṇḍarīkattheraapadāna",
  "tha-ap281:1.1": "“Romaso nāma nāmena,",
  "tha-ap281:1.2": "sayambhū subbato tadā;",
  "tha-ap281:1.3": "Puṇḍarīkaṃ mayā dinnaṃ,",
  "tha-ap281:1.4": "vippasannena cetasā.",
  "tha-ap281:2.1": "Catunnavutito kappe,",
  "tha-ap281:2.2": "puṇḍarīkamadaṃ tadā;",
  "tha-ap281:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap281:2.4": "puṇḍarīkassidaṃ phalaṃ.",
  "tha-ap281:3.1": "Paṭisambhidā catasso,",
  "tha-ap281:3.2": "…pe…",
  "tha-ap281:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap281:4.1": "Itthaṃ sudaṃ āyasmā ekapuṇḍarīko thero imā gāthāyo abhāsitthāti.",
  "tha-ap281:5.1": "Ekapuṇḍarīkattherassāpadānaṃ navamaṃ."
}