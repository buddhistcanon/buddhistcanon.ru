{
  "tha-ap216:0.1": "Therāpadāna",
  "tha-ap216:0.2": "Hatthivagga",
  "tha-ap216:0.3": "4. Ekasaññakattheraapadāna",
  "tha-ap216:1.1": "“Dumagge paṃsukūlikaṃ,",
  "tha-ap216:1.2": "laggaṃ disvāna satthuno;",
  "tha-ap216:1.3": "Añjaliṃ paggahetvāna,",
  "tha-ap216:1.4": "paṃsukūlaṃ avandahaṃ.",
  "tha-ap216:2.1": "Ekattiṃse ito kappe,",
  "tha-ap216:2.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap216:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap216:2.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap216:3.1": "Pañcavīse ito kappe,",
  "tha-ap216:3.2": "eko āsiṃ janādhipo;",
  "tha-ap216:3.3": "Amitābhoti nāmena,",
  "tha-ap216:3.4": "cakkavattī mahabbalo.",
  "tha-ap216:4.1": "Paṭisambhidā catasso,",
  "tha-ap216:4.2": "…pe…",
  "tha-ap216:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap216:5.1": "Itthaṃ sudaṃ āyasmā ekasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap216:6.1": "Ekasaññakattherassāpadānaṃ catutthaṃ."
}