{
  "tha-ap286:0.1": "Therāpadāna",
  "tha-ap286:0.2": "Paṇṇadāyakavagga",
  "tha-ap286:0.3": "4. Ekapupphiyattheraapadāna",
  "tha-ap286:1.1": "“Dakkhiṇamhi duvāramhi,",
  "tha-ap286:1.2": "pisāco āsahaṃ tadā;",
  "tha-ap286:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap286:1.4": "pītaraṃsiṃva bhāṇumaṃ.",
  "tha-ap286:2.1": "Vipassissa naraggassa,",
  "tha-ap286:2.2": "sabbalokahitesino;",
  "tha-ap286:2.3": "Ekapupphaṃ mayā dinnaṃ,",
  "tha-ap286:2.4": "dvipadindassa tādino.",
  "tha-ap286:3.1": "Ekanavutito kappe,",
  "tha-ap286:3.2": "yaṃ pupphamadadiṃ tadā;",
  "tha-ap286:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap286:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap286:4.1": "Paṭisambhidā catasso,",
  "tha-ap286:4.2": "…pe…",
  "tha-ap286:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap286:5.1": "Itthaṃ sudaṃ āyasmā ekapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap286:6.1": "Ekapupphiyattherassāpadānaṃ catutthaṃ."
}