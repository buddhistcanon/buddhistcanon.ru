{
  "tha-ap449:0.1": "Therāpadāna",
  "tha-ap449:0.2": "Vibhītakavagga",
  "tha-ap449:0.3": "7. Sīhāsanikattheraapadāna",
  "tha-ap449:1.1": "“Padumuttarassa bhagavato,",
  "tha-ap449:1.2": "Sabbabhūtahitesino;",
  "tha-ap449:1.3": "Pasannacitto sumano,",
  "tha-ap449:1.4": "Sīhāsanamadāsahaṃ.",
  "tha-ap449:2.1": "Devaloke manusse vā,",
  "tha-ap449:2.2": "yattha yattha vasāmahaṃ;",
  "tha-ap449:2.3": "Labhāmi vipulaṃ byamhaṃ,",
  "tha-ap449:2.4": "sīhāsanassidaṃ phalaṃ.",
  "tha-ap449:3.1": "Soṇṇamayā rūpimayā,",
  "tha-ap449:3.2": "lohitaṅgamayā bahū;",
  "tha-ap449:3.3": "Maṇimayā ca pallaṅkā,",
  "tha-ap449:3.4": "nibbattanti mamaṃ sadā.",
  "tha-ap449:4.1": "Bodhiyā āsanaṃ katvā,",
  "tha-ap449:4.2": "jalajuttamanāmino;",
  "tha-ap449:4.3": "Ucce kule pajāyāmi,",
  "tha-ap449:4.4": "aho dhammasudhammatā.",
  "tha-ap449:5.1": "Satasahassito kappe,",
  "tha-ap449:5.2": "sīhāsanamakāsahaṃ;",
  "tha-ap449:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap449:5.4": "sīhāsanassidaṃ phalaṃ.",
  "tha-ap449:6.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap449:6.2": "…pe…",
  "tha-ap449:6.3": "viharāmi anāsavo.",
  "tha-ap449:7.1": "Svāgataṃ vata me āsi,",
  "tha-ap449:7.2": "…pe…",
  "tha-ap449:7.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap449:8.1": "Paṭisambhidā catasso,",
  "tha-ap449:8.2": "…pe…",
  "tha-ap449:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap449:9.1": "Itthaṃ sudaṃ āyasmā sīhāsaniko thero imā gāthāyo abhāsitthāti.",
  "tha-ap449:10.1": "Sīhāsanikattherassāpadānaṃ sattamaṃ."
}