{
  "tha-ap254:0.1": "Therāpadāna",
  "tha-ap254:0.2": "Thomakavagga",
  "tha-ap254:0.3": "2. Ekāsanadāyakattheraapadāna",
  "tha-ap254:1.1": "“Vijahitvā devavaṇṇaṃ,",
  "tha-ap254:1.2": "sabhariyo idhāgamiṃ;",
  "tha-ap254:1.3": "Adhikāraṃ kattukāmo,",
  "tha-ap254:1.4": "buddhaseṭṭhassa sāsane.",
  "tha-ap254:2.1": "Devalo nāma nāmena,",
  "tha-ap254:2.2": "padumuttarasāvako;",
  "tha-ap254:2.3": "Tassa bhikkhā mayā dinnā,",
  "tha-ap254:2.4": "vippasannena cetasā.",
  "tha-ap254:3.1": "Satasahassito kappe,",
  "tha-ap254:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap254:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap254:3.4": "piṇḍapātassidaṃ phalaṃ.",
  "tha-ap254:4.1": "Paṭisambhidā catasso,",
  "tha-ap254:4.2": "…pe…",
  "tha-ap254:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap254:5.1": "Itthaṃ sudaṃ āyasmā ekāsanadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap254:6.1": "Ekāsanadāyakattherassāpadānaṃ dutiyaṃ."
}