{
  "tha-ap519:0.1": "Therāpadāna",
  "tha-ap519:0.2": "Phaladāyakavagga",
  "tha-ap519:0.3": "7. Kuṭajapupphiyattheraapadāna",
  "tha-ap519:1.1": "“Himavantassāvidūre,",
  "tha-ap519:1.2": "vasalo nāma pabbato;",
  "tha-ap519:1.3": "Buddho sudassano nāma,",
  "tha-ap519:1.4": "vasate pabbatantare.",
  "tha-ap519:2.1": "Pupphaṃ hemavantaṃ gayha,",
  "tha-ap519:2.2": "vehāsaṃ agamāsahaṃ;",
  "tha-ap519:2.3": "Tatthaddasāsiṃ sambuddhaṃ,",
  "tha-ap519:2.4": "oghatiṇṇamanāsavaṃ.",
  "tha-ap519:3.1": "Pupphaṃ kuṭajamādāya,",
  "tha-ap519:3.2": "sire katvāna añjaliṃ;",
  "tha-ap519:3.3": "Buddhassa abhiropesiṃ,",
  "tha-ap519:3.4": "sayambhussa mahesino.",
  "tha-ap519:4.1": "Ekatiṃse ito kappe,",
  "tha-ap519:4.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap519:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap519:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap519:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap519:5.2": "…pe…",
  "tha-ap519:5.3": "viharāmi anāsavo.",
  "tha-ap519:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap519:6.2": "…pe…",
  "tha-ap519:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap519:7.1": "Paṭisambhidā catasso,",
  "tha-ap519:7.2": "…pe…",
  "tha-ap519:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap519:8.1": "Itthaṃ sudaṃ āyasmā kuṭajapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap519:9.1": "Kuṭajapupphiyattherassāpadānaṃ sattamaṃ."
}