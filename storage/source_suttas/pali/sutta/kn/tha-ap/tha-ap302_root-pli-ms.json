{
  "tha-ap302:0.1": "Therāpadāna",
  "tha-ap302:0.2": "Citakapūjakavagga",
  "tha-ap302:0.3": "10. Anusaṃsāvakattheraapadāna",
  "tha-ap302:1.1": "“Piṇḍāya caramānāhaṃ,",
  "tha-ap302:1.2": "vipassimaddasaṃ jinaṃ;",
  "tha-ap302:1.3": "Uḷuṅgabhikkhaṃ pādāsiṃ,",
  "tha-ap302:1.4": "dvipadindassa tādino.",
  "tha-ap302:2.1": "Pasannacitto sumano,",
  "tha-ap302:2.2": "abhivādesahaṃ tadā;",
  "tha-ap302:2.3": "Anusaṃsāvayiṃ buddhaṃ,",
  "tha-ap302:2.4": "uttamatthassa pattiyā.",
  "tha-ap302:3.1": "Ekanavutito kappe,",
  "tha-ap302:3.2": "anusaṃsāvayiṃ ahaṃ;",
  "tha-ap302:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap302:3.4": "anusaṃsāvanā phalaṃ.",
  "tha-ap302:4.1": "Paṭisambhidā catasso,",
  "tha-ap302:4.2": "…pe…",
  "tha-ap302:4.3": "kataṃ buddhassa sāsanaṃ”. (2712)",
  "tha-ap302:5.1": "Itthaṃ sudaṃ āyasmā anusaṃsāvako thero imā gāthāyo abhāsitthāti.",
  "tha-ap302:6.1": "Anusaṃsāvakattherassāpadānaṃ dasamaṃ.",
  "tha-ap302:6.2": "Citakapūjakavaggo tiṃsatimo.",
  "tha-ap302:7.1": "Tassuddānaṃ",
  "tha-ap302:8.1": "Citakaṃ pārichatto ca,",
  "tha-ap302:8.2": "saddagosīsasantharaṃ;",
  "tha-ap302:8.3": "Pādo padesaṃ saraṇaṃ,",
  "tha-ap302:8.4": "ambo saṃsāvakopi ca;",
  "tha-ap302:8.5": "Aṭṭhatālīsa gāthāyo,",
  "tha-ap302:8.6": "gaṇitāyo vibhāvibhi.",
  "tha-ap302:9.1": "Atha vagguddānaṃ",
  "tha-ap302:10.1": "Kaṇikāro hatthidado,",
  "tha-ap302:10.2": "ālambaṇudakāsanaṃ;",
  "tha-ap302:10.3": "Tuvaraṃ thomako ceva,",
  "tha-ap302:10.4": "ukkhepaṃ sīsupadhānaṃ.",
  "tha-ap302:11.1": "Paṇṇado citapūjī ca,",
  "tha-ap302:11.2": "gāthāyo ceva sabbaso;",
  "tha-ap302:11.3": "Cattāri ca satānīha,",
  "tha-ap302:11.4": "ekapaññāsameva ca.",
  "tha-ap302:12.1": "Pañcavīsasatā sabbā,",
  "tha-ap302:12.2": "dvāsattati taduttari;",
  "tha-ap302:12.3": "Tisataṃ apadānānaṃ,",
  "tha-ap302:12.4": "gaṇitā atthadassibhi.",
  "tha-ap302:13.1": "Kaṇikāravaggadasakaṃ.",
  "tha-ap302:14.1": "Tatiyasatakaṃ samattaṃ."
}