{
  "tha-ap554:0.1": "Therāpadāna",
  "tha-ap554:0.2": "Yasavagga",
  "tha-ap554:0.3": "2. Nadīkassapattheraapadāna",
  "tha-ap554:1.1": "“Padumuttarassa bhagavato,",
  "tha-ap554:1.2": "Lokajeṭṭhassa tādino;",
  "tha-ap554:1.3": "Piṇḍacāraṃ carantassa,",
  "tha-ap554:1.4": "Vārato uttamaṃ yasaṃ;",
  "tha-ap554:1.5": "Aggaphalaṃ gahetvāna,",
  "tha-ap554:1.6": "Adāsiṃ satthuno ahaṃ.",
  "tha-ap554:2.1": "Tena kammena devindo,",
  "tha-ap554:2.2": "lokajeṭṭho narāsabho;",
  "tha-ap554:2.3": "Sampattomhi acalaṃ ṭhānaṃ,",
  "tha-ap554:2.4": "hitvā jayaparājayaṃ.",
  "tha-ap554:3.1": "Satasahassito kappe,",
  "tha-ap554:3.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap554:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap554:3.4": "aggadānassidaṃ phalaṃ.",
  "tha-ap554:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap554:4.2": "…pe…",
  "tha-ap554:4.3": "viharāmi anāsavo.",
  "tha-ap554:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap554:5.2": "…pe…",
  "tha-ap554:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap554:6.1": "Paṭisambhidā catasso,",
  "tha-ap554:6.2": "…pe…",
  "tha-ap554:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap554:7.1": "Itthaṃ sudaṃ āyasmā nadīkassapo thero imā gāthāyo abhāsitthāti.",
  "tha-ap554:8.1": "Nadīkassapattherassāpadānaṃ dutiyaṃ."
}