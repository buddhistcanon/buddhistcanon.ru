{
  "tha-ap39:0.1": "Therāpadāna",
  "tha-ap39:0.2": "Kuṇḍadhānavagga",
  "tha-ap39:0.3": "7. Lasuṇadāyakattheraapadāna",
  "tha-ap39:1.1": "“Himavantassāvidūre,",
  "tha-ap39:1.2": "tāpaso āsahaṃ tadā;",
  "tha-ap39:1.3": "Lasuṇaṃ upajīvāmi,",
  "tha-ap39:1.4": "lasuṇaṃ mayhabhojanaṃ.",
  "tha-ap39:2.1": "Khāriyo pūrayitvāna,",
  "tha-ap39:2.2": "saṃghārāmamagacchahaṃ;",
  "tha-ap39:2.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap39:2.4": "saṃghassa lasuṇaṃ adaṃ.",
  "tha-ap39:3.1": "Vipassissa naraggassa,",
  "tha-ap39:3.2": "sāsane niratassahaṃ;",
  "tha-ap39:3.3": "Saṃghassa lasuṇaṃ datvā,",
  "tha-ap39:3.4": "kappaṃ saggamhi modahaṃ.",
  "tha-ap39:4.1": "Ekanavutito kappe,",
  "tha-ap39:4.2": "lasuṇaṃ yamadaṃ tadā;",
  "tha-ap39:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap39:4.4": "lasuṇassa idaṃ phalaṃ.",
  "tha-ap39:5.1": "Paṭisambhidā catasso,",
  "tha-ap39:5.2": "…pe…",
  "tha-ap39:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap39:6.1": "Itthaṃ sudaṃ āyasmā lasuṇadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap39:7.1": "Lasuṇadāyakattherassāpadānaṃ sattamaṃ."
}