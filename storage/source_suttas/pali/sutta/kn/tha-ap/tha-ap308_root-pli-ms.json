{
  "tha-ap308:0.1": "Therāpadāna",
  "tha-ap308:0.2": "Padumakesaravagga",
  "tha-ap308:0.3": "6 Sampasādakattheraapadāna",
  "tha-ap308:1.1": "“‘Namo te buddha vīratthu,",
  "tha-ap308:1.2": "vippamuttosi sabbadhi;",
  "tha-ap308:1.3": "Byasanamhi anuppatto,",
  "tha-ap308:1.4": "tassa me saraṇaṃ bhava’.",
  "tha-ap308:2.1": "Siddhattho tassa byākāsi,",
  "tha-ap308:2.2": "loke appaṭipuggalo;",
  "tha-ap308:2.3": "‘Mahodadhisamo saṃgho,",
  "tha-ap308:2.4": "appameyyo anuttaro.",
  "tha-ap308:3.1": "Tattha tvaṃ viraje khette,",
  "tha-ap308:3.2": "anantaphaladāyake;",
  "tha-ap308:3.3": "Saṃghe cittaṃ pasādetvā,",
  "tha-ap308:3.4": "subījaṃ vāpa ropaya’.",
  "tha-ap308:4.1": "Idaṃ vatvāna sabbaññū,",
  "tha-ap308:4.2": "lokajeṭṭho narāsabho;",
  "tha-ap308:4.3": "Mameva anusāsitvā,",
  "tha-ap308:4.4": "vehāsaṃ nabhamuggami.",
  "tha-ap308:5.1": "Aciraṃ gatamattamhi,",
  "tha-ap308:5.2": "sabbaññumhi narāsabhe;",
  "tha-ap308:5.3": "Maraṇaṃ samanuppatto,",
  "tha-ap308:5.4": "tusitaṃ upapajjahaṃ.",
  "tha-ap308:6.1": "Tadāhaṃ viraje khette,",
  "tha-ap308:6.2": "anantaphaladāyake;",
  "tha-ap308:6.3": "Saṃghe cittaṃ pasādetvā,",
  "tha-ap308:6.4": "kappaṃ saggamhi modahaṃ.",
  "tha-ap308:7.1": "Catunnavutito kappe,",
  "tha-ap308:7.2": "pasādamalabhiṃ tadā;",
  "tha-ap308:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap308:7.4": "pasādassa idaṃ phalaṃ.",
  "tha-ap308:8.1": "Paṭisambhidā catasso,",
  "tha-ap308:8.2": "…pe…",
  "tha-ap308:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap308:9.1": "Itthaṃ sudaṃ āyasmā sampasādako thero imā gāthāyo abhāsitthāti.",
  "tha-ap308:10.1": "Sampasādakattherassāpadānaṃ chaṭṭhaṃ."
}