{
  "tha-ap173:0.1": "Therāpadāna",
  "tha-ap173:0.2": "Kumudavagga",
  "tha-ap173:0.3": "1. Kumudamāliyattheraapadāna",
  "tha-ap173:1.1": "“Pabbate himavantamhi,",
  "tha-ap173:1.2": "mahājātassaro ahu;",
  "tha-ap173:1.3": "Tatthajo rakkhaso āsiṃ,",
  "tha-ap173:1.4": "ghorarūpo mahabbalo.",
  "tha-ap173:2.1": "Kumudaṃ pupphate tattha,",
  "tha-ap173:2.2": "cakkamattāni jāyare;",
  "tha-ap173:2.3": "Ocināmi ca taṃ pupphaṃ,",
  "tha-ap173:2.4": "balino samitiṃ tadā.",
  "tha-ap173:3.1": "Atthadassī tu bhagavā,",
  "tha-ap173:3.2": "dvipadindo narāsabho;",
  "tha-ap173:3.3": "Pupphasaṅkocitaṃ disvā,",
  "tha-ap173:3.4": "āgacchi mama santikaṃ.",
  "tha-ap173:4.1": "Upāgatañca sambuddhaṃ,",
  "tha-ap173:4.2": "devadevaṃ narāsabhaṃ;",
  "tha-ap173:4.3": "Sabbañca pupphaṃ paggayha,",
  "tha-ap173:4.4": "buddhassa abhiropayiṃ.",
  "tha-ap173:5.1": "Yāvatā himavantantā,",
  "tha-ap173:5.2": "parisā sā tadā ahu;",
  "tha-ap173:5.3": "Tāvacchadanasampanno,",
  "tha-ap173:5.4": "agamāsi tathāgato.",
  "tha-ap173:6.1": "Aṭṭhārase kappasate,",
  "tha-ap173:6.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap173:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap173:6.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap173:7.1": "Ito pannarase kappe,",
  "tha-ap173:7.2": "sattāhesuṃ janādhipā;",
  "tha-ap173:7.3": "Sahassarathanāmā te,",
  "tha-ap173:7.4": "cakkavattī mahabbalā.",
  "tha-ap173:8.1": "Paṭisambhidā catasso,",
  "tha-ap173:8.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap173:8.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap173:8.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap173:9.1": "Itthaṃ sudaṃ āyasmā kumudamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap173:10.1": "Kumudamāliyattherassāpadānaṃ paṭhamaṃ."
}