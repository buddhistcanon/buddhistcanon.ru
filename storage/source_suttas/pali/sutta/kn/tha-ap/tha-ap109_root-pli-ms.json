{
  "tha-ap109:0.1": "Therāpadāna",
  "tha-ap109:0.2": "Bhikkhadāyivagga",
  "tha-ap109:0.3": "7. Naḷamāliyattheraapadāna",
  "tha-ap109:1.1": "“Padumuttarabuddhassa,",
  "tha-ap109:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap109:1.3": "Tiṇatthare nisinnassa,",
  "tha-ap109:1.4": "upasantassa tādino.",
  "tha-ap109:2.1": "Naḷamālaṃ gahetvāna,",
  "tha-ap109:2.2": "bandhitvā bījaniṃ ahaṃ;",
  "tha-ap109:2.3": "Buddhassa upanāmesiṃ,",
  "tha-ap109:2.4": "dvipadindassa tādino.",
  "tha-ap109:3.1": "Paṭiggahetvā sabbaññū,",
  "tha-ap109:3.2": "bījaniṃ lokanāyako;",
  "tha-ap109:3.3": "Mama saṅkappamaññāya,",
  "tha-ap109:3.4": "imaṃ gāthaṃ abhāsatha.",
  "tha-ap109:4.1": "‘Yathā me kāyo nibbāti,",
  "tha-ap109:4.2": "pariḷāho na vijjati;",
  "tha-ap109:4.3": "Tatheva tividhaggīhi,",
  "tha-ap109:4.4": "cittaṃ tava vimuccatu’.",
  "tha-ap109:5.1": "Sabbe devā samāgacchuṃ,",
  "tha-ap109:5.2": "ye keci vananissitā;",
  "tha-ap109:5.3": "Sossāma buddhavacanaṃ,",
  "tha-ap109:5.4": "hāsayantañca dāyakaṃ.",
  "tha-ap109:6.1": "Nisinno bhagavā tattha,",
  "tha-ap109:6.2": "devasaṅghapurakkhato;",
  "tha-ap109:6.3": "Dāyakaṃ sampahaṃsento,",
  "tha-ap109:6.4": "imā gāthā abhāsatha.",
  "tha-ap109:7.1": "‘Iminā bījanidānena,",
  "tha-ap109:7.2": "cittassa paṇidhīhi ca;",
  "tha-ap109:7.3": "Subbato nāma nāmena,",
  "tha-ap109:7.4": "cakkavattī bhavissati.",
  "tha-ap109:8.1": "Tena kammāvasesena,",
  "tha-ap109:8.2": "sukkamūlena codito;",
  "tha-ap109:8.3": "Māluto nāma nāmena,",
  "tha-ap109:8.4": "cakkavattī bhavissati’.",
  "tha-ap109:9.1": "Iminā bījanidānena,",
  "tha-ap109:9.2": "sammānavipulena ca;",
  "tha-ap109:9.3": "Kappasatasahassampi,",
  "tha-ap109:9.4": "duggatiṃ nupapajjati.",
  "tha-ap109:10.1": "Tiṃsakappasahassamhi,",
  "tha-ap109:10.2": "subbatā aṭṭhatiṃsa te;",
  "tha-ap109:10.3": "Ekūnatiṃsasahasse,",
  "tha-ap109:10.4": "aṭṭha mālutanāmakā.",
  "tha-ap109:11.1": "Paṭisambhidā catasso,",
  "tha-ap109:11.2": "…pe…",
  "tha-ap109:11.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap109:12.1": "Itthaṃ sudaṃ āyasmā naḷamāliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap109:13.1": "Naḷamāliyattherassāpadānaṃ sattamaṃ.",
  "tha-ap109:13.2": "Sattamabhāṇavāraṃ."
}