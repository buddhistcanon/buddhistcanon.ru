{
  "tha-ap362:0.1": "Therāpadāna",
  "tha-ap362:0.2": "Saddasaññakavagga",
  "tha-ap362:0.3": "10. Piṇḍapātikattheraapadāna",
  "tha-ap362:1.1": "“Tisso nāmāsi sambuddho,",
  "tha-ap362:1.2": "vihāsi vipine tadā;",
  "tha-ap362:1.3": "Tusitā hi idhāgantvā,",
  "tha-ap362:1.4": "piṇḍapātaṃ adāsahaṃ.",
  "tha-ap362:2.1": "Sambuddhamabhivādetvā,",
  "tha-ap362:2.2": "tissaṃ nāma mahāyasaṃ;",
  "tha-ap362:2.3": "Sakaṃ cittaṃ pasādetvā,",
  "tha-ap362:2.4": "tusitaṃ agamāsahaṃ.",
  "tha-ap362:3.1": "Dvenavute ito kappe,",
  "tha-ap362:3.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap362:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap362:3.4": "piṇḍapātassidaṃ phalaṃ.",
  "tha-ap362:4.1": "Paṭisambhidā catasso,",
  "tha-ap362:4.2": "…pe…",
  "tha-ap362:4.3": "kataṃ buddhassa sāsanaṃ”. (3173)",
  "tha-ap362:5.1": "Itthaṃ sudaṃ āyasmā piṇḍapātiko thero imā gāthāyo abhāsitthāti.",
  "tha-ap362:6.1": "Piṇḍapātikattherassāpadānaṃ dasamaṃ.",
  "tha-ap362:7.1": "Saddasaññakavaggo chattiṃsatimo.",
  "tha-ap362:8.1": "Tassuddānaṃ",
  "tha-ap362:9.1": "Saddasaññī yavasiko,",
  "tha-ap362:9.2": "kiṃsukoraṇḍapupphiyo;",
  "tha-ap362:9.3": "Ālambano ambayāgu,",
  "tha-ap362:9.4": "supuṭī mañcadāyako;",
  "tha-ap362:9.5": "Saraṇaṃ piṇḍapāto ca,",
  "tha-ap362:9.6": "gāthā tālīsameva ca."
}