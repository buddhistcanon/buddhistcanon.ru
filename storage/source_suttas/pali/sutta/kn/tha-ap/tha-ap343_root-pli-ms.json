{
  "tha-ap343:0.1": "Therāpadāna",
  "tha-ap343:0.2": "Ekapadumiyavagga",
  "tha-ap343:0.3": "1. Ekapadumiyattheraapadāna",
  "tha-ap343:1.1": "“Padumuttaro nāma jino,",
  "tha-ap343:1.2": "sabbadhammāna pāragū;",
  "tha-ap343:1.3": "Bhavābhave vibhāvento,",
  "tha-ap343:1.4": "tāresi janataṃ bahuṃ.",
  "tha-ap343:2.1": "Haṃsarājā tadā homi,",
  "tha-ap343:2.2": "dijānaṃ pavaro ahaṃ;",
  "tha-ap343:2.3": "Jātassaraṃ samogayha,",
  "tha-ap343:2.4": "kīḷāmi haṃsakīḷitaṃ.",
  "tha-ap343:3.1": "Padumuttaro lokavidū,",
  "tha-ap343:3.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap343:3.3": "Jātassarassa upari,",
  "tha-ap343:3.4": "āgacchi tāvade jino.",
  "tha-ap343:4.1": "Disvānahaṃ devadevaṃ,",
  "tha-ap343:4.2": "sayambhuṃ lokanāyakaṃ;",
  "tha-ap343:4.3": "Vaṇṭe chetvāna padumaṃ,",
  "tha-ap343:4.4": "satapattaṃ manoramaṃ.",
  "tha-ap343:5.1": "Mukhatuṇḍena paggayha,",
  "tha-ap343:5.2": "pasanno lokanāyake;",
  "tha-ap343:5.3": "Ukkhipitvāna gagane,",
  "tha-ap343:5.4": "buddhaseṭṭhaṃ apūjayiṃ.",
  "tha-ap343:6.1": "Padumuttaro lokavidū,",
  "tha-ap343:6.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap343:6.3": "Antalikkhe ṭhito satthā,",
  "tha-ap343:6.4": "akā me anumodanaṃ.",
  "tha-ap343:7.1": "‘Iminā ekapadumena,",
  "tha-ap343:7.2": "cetanāpaṇidhīhi ca;",
  "tha-ap343:7.3": "Kappānaṃ satasahassaṃ,",
  "tha-ap343:7.4": "vinipātaṃ na gacchasi’.",
  "tha-ap343:8.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap343:8.2": "jalajuttamanāmako;",
  "tha-ap343:8.3": "Mama kammaṃ pakittetvā,",
  "tha-ap343:8.4": "agamā yena patthitaṃ.",
  "tha-ap343:9.1": "Satasahassito kappe,",
  "tha-ap343:9.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap343:9.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap343:9.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap343:10.1": "Paṭisambhidā catasso,",
  "tha-ap343:10.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap343:10.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap343:10.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap343:11.1": "Itthaṃ sudaṃ āyasmā ekapadumiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap343:12.1": "Ekapadumiyattherassāpadānaṃ paṭhamaṃ."
}