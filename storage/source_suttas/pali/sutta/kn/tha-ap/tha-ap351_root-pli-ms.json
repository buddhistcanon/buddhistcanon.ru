{
  "tha-ap351:0.1": "Therāpadāna",
  "tha-ap351:0.2": "Ekapadumiyavagga",
  "tha-ap351:0.3": "9. Tindukaphaladāyakattheraapadāna",
  "tha-ap351:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap351:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap351:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap351:1.4": "oghatiṇṇamanāsavaṃ.",
  "tha-ap351:2.1": "Tindukaṃ saphalaṃ disvā,",
  "tha-ap351:2.2": "bhinditvāna sakosakaṃ;",
  "tha-ap351:2.3": "Pasannacitto sumano,",
  "tha-ap351:2.4": "sayambhussa madāsahaṃ.",
  "tha-ap351:3.1": "Ekanavutito kappe,",
  "tha-ap351:3.2": "yaṃ phalamadadiṃ tadā;",
  "tha-ap351:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap351:3.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap351:4.1": "Paṭisambhidā catasso,",
  "tha-ap351:4.2": "…pe…",
  "tha-ap351:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap351:5.1": "Itthaṃ sudaṃ āyasmā tindukaphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap351:6.1": "Tindukaphaladāyakattherassāpadānaṃ navamaṃ."
}