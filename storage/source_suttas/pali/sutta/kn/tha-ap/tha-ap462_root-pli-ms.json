{
  "tha-ap462:0.1": "Therāpadāna",
  "tha-ap462:0.2": "Jagatidāyakavagga",
  "tha-ap462:0.3": "10. Gandhapūjakattheraapadāna",
  "tha-ap462:1.1": "“Citāsu kurumānāsu,",
  "tha-ap462:1.2": "nānāgandhe samāhaṭe;",
  "tha-ap462:1.3": "Pasannacitto sumano,",
  "tha-ap462:1.4": "gandhamuṭṭhimapūjayiṃ.",
  "tha-ap462:2.1": "Satasahassito kappe,",
  "tha-ap462:2.2": "citakaṃ yamapūjayiṃ;",
  "tha-ap462:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap462:2.4": "citapūjāyidaṃ phalaṃ.",
  "tha-ap462:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap462:3.2": "…pe…",
  "tha-ap462:3.3": "viharāmi anāsavo.",
  "tha-ap462:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap462:4.2": "…pe…",
  "tha-ap462:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap462:5.1": "Paṭisambhidā catasso,",
  "tha-ap462:5.2": "…pe…",
  "tha-ap462:5.3": "kataṃ buddhassa sāsanaṃ”. (4771)",
  "tha-ap462:6.1": "Itthaṃ sudaṃ āyasmā gandhapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap462:7.1": "Gandhapūjakattherassāpadānaṃ dasamaṃ.",
  "tha-ap462:8.1": "Jagatidāyakavaggo chacattālīsamo.",
  "tha-ap462:9.1": "Tassuddānaṃ",
  "tha-ap462:10.1": "Jagatī morahatthī ca,",
  "tha-ap462:10.2": "āsanī ukkadhārako;",
  "tha-ap462:10.3": "Akkami vanakoraṇḍi,",
  "tha-ap462:10.4": "chattado jātipūjako.",
  "tha-ap462:11.1": "Paṭṭipupphī ca yo thero,",
  "tha-ap462:11.2": "dasamo gandhapūjako;",
  "tha-ap462:11.3": "Sattasaṭṭhi ca gāthāyo,",
  "tha-ap462:11.4": "gaṇitāyo vibhāvibhi."
}