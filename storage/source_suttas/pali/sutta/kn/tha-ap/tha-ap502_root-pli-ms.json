{
  "tha-ap502:0.1": "Therāpadāna",
  "tha-ap502:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap502:0.3": "10. Piyālaphaladāyakattheraapadāna",
  "tha-ap502:1.1": "“Migaluddo pure āsiṃ,",
  "tha-ap502:1.2": "vipine vicaraṃ tadā;",
  "tha-ap502:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap502:1.4": "sabbadhammāna pāraguṃ.",
  "tha-ap502:2.1": "Piyālaphalamādāya,",
  "tha-ap502:2.2": "buddhaseṭṭhassadāsahaṃ;",
  "tha-ap502:2.3": "Puññakkhettassa vīrassa,",
  "tha-ap502:2.4": "pasanno sehi pāṇibhi.",
  "tha-ap502:3.1": "Ekatiṃse ito kappe,",
  "tha-ap502:3.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap502:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap502:3.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap502:4.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap502:4.2": "…pe…",
  "tha-ap502:4.3": "viharāmi anāsavo.",
  "tha-ap502:5.1": "Svāgataṃ vata me āsi,",
  "tha-ap502:5.2": "…pe…",
  "tha-ap502:5.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap502:6.1": "Paṭisambhidā catasso,",
  "tha-ap502:6.2": "…pe…",
  "tha-ap502:6.3": "kataṃ buddhassa sāsanaṃ”. (5267)",
  "tha-ap502:7.1": "Itthaṃ sudaṃ āyasmā piyālaphaladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap502:8.1": "Piyālaphaladāyakattherassāpadānaṃ dasamaṃ.",
  "tha-ap502:8.2": "Kiṅkaṇipupphavaggo paññāsamo.",
  "tha-ap502:9.1": "Tassuddānaṃ",
  "tha-ap502:10.1": "Kiṅkaṇī paṃsukūlañca,",
  "tha-ap502:10.2": "koraṇḍamatha kiṃsukaṃ;",
  "tha-ap502:10.3": "Upaḍḍhadussī ghatado,",
  "tha-ap502:10.4": "udakaṃ thūpakārako.",
  "tha-ap502:11.1": "Naḷakārī ca navamo,",
  "tha-ap502:11.2": "piyālaphaladāyako;",
  "tha-ap502:11.3": "Satamekañca gāthānaṃ,",
  "tha-ap502:11.4": "navakañca taduttari.",
  "tha-ap502:12.1": "Atha vagguddānaṃ",
  "tha-ap502:13.1": "Metteyyavaggo bhaddāli,",
  "tha-ap502:13.2": "sakiṃsammajjakopi ca;",
  "tha-ap502:13.3": "Ekavihārī vibhītakī,",
  "tha-ap502:13.4": "jagatī sālapupphiyo.",
  "tha-ap502:14.1": "Naḷāgāraṃ paṃsukūlaṃ,",
  "tha-ap502:14.2": "kiṅkaṇipupphiyo tathā;",
  "tha-ap502:14.3": "Asīti dve ca gāthāyo,",
  "tha-ap502:14.4": "catuddasasatāni ca.",
  "tha-ap502:15.1": "Metteyyavaggadasakaṃ.",
  "tha-ap502:16.1": "Pañcamasatakaṃ samattaṃ."
}