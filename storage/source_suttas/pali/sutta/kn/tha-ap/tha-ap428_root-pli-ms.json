{
  "tha-ap428:0.1": "Therāpadāna",
  "tha-ap428:0.2": "Sakiṃsammajjakavagga",
  "tha-ap428:0.3": "6 Ghatamaṇḍadāyakattheraapadāna",
  "tha-ap428:1.1": "“Sucintitaṃ bhagavantaṃ,",
  "tha-ap428:1.2": "lokajeṭṭhaṃ narāsabhaṃ;",
  "tha-ap428:1.3": "Upaviṭṭhaṃ mahāraññaṃ,",
  "tha-ap428:1.4": "vātābādhena pīḷitaṃ.",
  "tha-ap428:2.1": "Disvā cittaṃ pasādetvā,",
  "tha-ap428:2.2": "ghatamaṇḍamupānayiṃ;",
  "tha-ap428:2.3": "Katattā ācitattā ca,",
  "tha-ap428:2.4": "gaṅgā bhāgīrathī ayaṃ.",
  "tha-ap428:3.1": "Mahāsamuddā cattāro,",
  "tha-ap428:3.2": "ghataṃ sampajjare mama;",
  "tha-ap428:3.3": "Ayañca pathavī ghorā,",
  "tha-ap428:3.4": "appamāṇā asaṅkhiyā.",
  "tha-ap428:4.1": "Mama saṅkappamaññāya,",
  "tha-ap428:4.2": "bhavate madhusakkarā;",
  "tha-ap428:4.3": "Cātuddīpā ime rukkhā,",
  "tha-ap428:4.4": "pādapā dharaṇīruhā.",
  "tha-ap428:5.1": "Mama saṅkappamaññāya,",
  "tha-ap428:5.2": "kapparukkhā bhavanti te;",
  "tha-ap428:5.3": "Paññāsakkhattuṃ devindo,",
  "tha-ap428:5.4": "devarajjamakārayiṃ.",
  "tha-ap428:6.1": "Ekapaññāsakkhattuñca,",
  "tha-ap428:6.2": "cakkavattī ahosahaṃ;",
  "tha-ap428:6.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap428:6.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap428:7.1": "Catunnavutito kappe,",
  "tha-ap428:7.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap428:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap428:7.4": "ghatamaṇḍassidaṃ phalaṃ.",
  "tha-ap428:8.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap428:8.2": "…pe…",
  "tha-ap428:8.3": "viharāmi anāsavo.",
  "tha-ap428:9.1": "Svāgataṃ vata me āsi,",
  "tha-ap428:9.2": "…pe…",
  "tha-ap428:9.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap428:10.1": "Paṭisambhidā catasso,",
  "tha-ap428:10.2": "…pe…",
  "tha-ap428:10.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap428:11.1": "Itthaṃ sudaṃ āyasmā ghatamaṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap428:12.1": "Ghatamaṇḍadāyakattherassāpadānaṃ chaṭṭhaṃ."
}