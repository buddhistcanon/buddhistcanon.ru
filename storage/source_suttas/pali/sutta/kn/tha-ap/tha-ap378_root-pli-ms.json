{
  "tha-ap378:0.1": "Therāpadāna",
  "tha-ap378:0.2": "Bodhivandanavagga",
  "tha-ap378:0.3": "6. Gandhamuṭṭhiyattheraapadāna",
  "tha-ap378:1.1": "“Citake karīyamāne,",
  "tha-ap378:1.2": "nānāgandhe samāhate;",
  "tha-ap378:1.3": "Pasannacitto sumano,",
  "tha-ap378:1.4": "gandhamuṭṭhimapūjayiṃ.",
  "tha-ap378:2.1": "Satasahassito kappe,",
  "tha-ap378:2.2": "citakaṃ yaṃ apūjayiṃ;",
  "tha-ap378:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap378:2.4": "citapūjāyidaṃ phalaṃ.",
  "tha-ap378:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap378:3.2": "…pe…",
  "tha-ap378:3.3": "viharāmi anāsavo.",
  "tha-ap378:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap378:4.2": "…pe…",
  "tha-ap378:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap378:5.1": "Paṭisambhidā catasso,",
  "tha-ap378:5.2": "…pe…",
  "tha-ap378:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap378:6.1": "Itthaṃ sudaṃ āyasmā gandhamuṭṭhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap378:7.1": "Gandhamuṭṭhiyattherassāpadānaṃ chaṭṭhaṃ."
}