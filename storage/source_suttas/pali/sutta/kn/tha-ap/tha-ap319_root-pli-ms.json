{
  "tha-ap319:0.1": "Therāpadāna",
  "tha-ap319:0.2": "Ārakkhadāyakavagga",
  "tha-ap319:0.3": "7. Saddasaññakattheraapadāna",
  "tha-ap319:1.1": "“Sudassano mahāvīro,",
  "tha-ap319:1.2": "deseti amataṃ padaṃ;",
  "tha-ap319:1.3": "Parivuto sāvakehi,",
  "tha-ap319:1.4": "vasati gharamuttame.",
  "tha-ap319:2.1": "Tāya vācāya madhurāya,",
  "tha-ap319:2.2": "saṅgaṇhāti mahājanaṃ;",
  "tha-ap319:2.3": "Ghoso ca vipulo āsi,",
  "tha-ap319:2.4": "āsīso devamānuse.",
  "tha-ap319:3.1": "Nigghosasaddaṃ sutvāna,",
  "tha-ap319:3.2": "siddhatthassa mahesino;",
  "tha-ap319:3.3": "Sadde cittaṃ pasādetvā,",
  "tha-ap319:3.4": "avandiṃ lokanāyakaṃ.",
  "tha-ap319:4.1": "Catunnavutito kappe,",
  "tha-ap319:4.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap319:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap319:4.4": "buddhasaññāyidaṃ phalaṃ.",
  "tha-ap319:5.1": "Paṭisambhidā catasso,",
  "tha-ap319:5.2": "…pe…",
  "tha-ap319:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap319:6.1": "Itthaṃ sudaṃ āyasmā saddasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap319:7.1": "Saddasaññakattherassāpadānaṃ sattamaṃ."
}