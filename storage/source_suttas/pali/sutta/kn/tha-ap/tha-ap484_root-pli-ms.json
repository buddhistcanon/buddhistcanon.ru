{
  "tha-ap484:0.1": "Therāpadāna",
  "tha-ap484:0.2": "Paṃsukūlavagga",
  "tha-ap484:0.3": "2. Buddhasaññakattheraapadāna",
  "tha-ap484:1.1": "“Ajjhāyako mantadharo,",
  "tha-ap484:1.2": "tiṇṇaṃ vedāna pāragū;",
  "tha-ap484:1.3": "Lakkhaṇe itihāse ca,",
  "tha-ap484:1.4": "sanighaṇḍusakeṭubhe.",
  "tha-ap484:2.1": "Nadīsotapaṭibhāgā,",
  "tha-ap484:2.2": "sissā āyanti me tadā;",
  "tha-ap484:2.3": "Tesāhaṃ mante vācemi,",
  "tha-ap484:2.4": "rattindivamatandito.",
  "tha-ap484:3.1": "Siddhattho nāma sambuddho,",
  "tha-ap484:3.2": "loke uppajji tāvade;",
  "tha-ap484:3.3": "Tamandhakāraṃ nāsetvā,",
  "tha-ap484:3.4": "ñāṇālokaṃ pavattayi.",
  "tha-ap484:4.1": "Mama aññataro sisso,",
  "tha-ap484:4.2": "sissānaṃ so kathesi me;",
  "tha-ap484:4.3": "Sutvāna te etamatthaṃ,",
  "tha-ap484:4.4": "ārocesuṃ mamaṃ tadā.",
  "tha-ap484:5.1": "‘Buddho loke samuppanno,",
  "tha-ap484:5.2": "sabbaññū lokanāyako;",
  "tha-ap484:5.3": "Tassānuvattati jano,",
  "tha-ap484:5.4": "lābho amhaṃ na vijjati.",
  "tha-ap484:6.1": "Adhiccuppattikā buddhā,",
  "tha-ap484:6.2": "cakkhumanto mahāyasā;",
  "tha-ap484:6.3": "Yannūnāhaṃ buddhaseṭṭhaṃ,",
  "tha-ap484:6.4": "passeyyaṃ lokanāyakaṃ’.",
  "tha-ap484:7.1": "Ajinaṃ me gahetvāna,",
  "tha-ap484:7.2": "vākacīraṃ kamaṇḍaluṃ;",
  "tha-ap484:7.3": "Assamā abhinikkhamma,",
  "tha-ap484:7.4": "sisse āmantayiṃ ahaṃ.",
  "tha-ap484:8.1": "Odumbarikapupphaṃva,",
  "tha-ap484:8.2": "candamhi sasakaṃ yathā;",
  "tha-ap484:8.3": "Vāyasānaṃ yathā khīraṃ,",
  "tha-ap484:8.4": "dullabho lokanāyako.",
  "tha-ap484:9.1": "Buddho lokamhi uppanno,",
  "tha-ap484:9.2": "manussattampi dullabhaṃ;",
  "tha-ap484:9.3": "Ubhosu vijjamānesu,",
  "tha-ap484:9.4": "savanañca sudullabhaṃ.",
  "tha-ap484:10.1": "Buddho loke samuppanno,",
  "tha-ap484:10.2": "cakkhuṃ lacchāma no bhavaṃ;",
  "tha-ap484:10.3": "Etha sabbe gamissāma,",
  "tha-ap484:10.4": "sammāsambuddhasantikaṃ.",
  "tha-ap484:11.1": "Kamaṇḍaludharā sabbe,",
  "tha-ap484:11.2": "kharājinanivāsino;",
  "tha-ap484:11.3": "Te jaṭā bhārabharitā,",
  "tha-ap484:11.4": "nikkhamuṃ vipinā tadā.",
  "tha-ap484:12.1": "Yugamattaṃ pekkhamānā,",
  "tha-ap484:12.2": "uttamatthaṃ gavesino;",
  "tha-ap484:12.3": "Āsattidosarahitā,",
  "tha-ap484:12.4": "asambhītāva kesarī.",
  "tha-ap484:13.1": "Appakiccā aloluppā,",
  "tha-ap484:13.2": "nipakā santavuttino;",
  "tha-ap484:13.3": "Uñchāya caramānā te,",
  "tha-ap484:13.4": "buddhaseṭṭhamupāgamuṃ.",
  "tha-ap484:14.1": "Diyaḍḍhayojane sese,",
  "tha-ap484:14.2": "byādhi me upapajjatha;",
  "tha-ap484:14.3": "Buddhaseṭṭhaṃ saritvāna,",
  "tha-ap484:14.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap484:15.1": "Catunnavutito kappe,",
  "tha-ap484:15.2": "yaṃ saññamalabhiṃ tadā;",
  "tha-ap484:15.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap484:15.4": "buddhasaññāyidaṃ phalaṃ.",
  "tha-ap484:16.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap484:16.2": "…pe…",
  "tha-ap484:16.3": "viharāmi anāsavo.",
  "tha-ap484:17.1": "Svāgataṃ vata me āsi,",
  "tha-ap484:17.2": "…pe…",
  "tha-ap484:17.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap484:18.1": "Paṭisambhidā catasso,",
  "tha-ap484:18.2": "…pe…",
  "tha-ap484:18.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap484:19.1": "Itthaṃ sudaṃ āyasmā buddhasaññako thero imā gāthāyo abhāsitthāti.",
  "tha-ap484:20.1": "Buddhasaññakattherassāpadānaṃ dutiyaṃ."
}