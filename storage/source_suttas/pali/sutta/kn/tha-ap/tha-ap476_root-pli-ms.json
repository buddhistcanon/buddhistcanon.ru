{
  "tha-ap476:0.1": "Therāpadāna",
  "tha-ap476:0.2": "Naḷamālivagga",
  "tha-ap476:0.3": "4. Sumanabījaniyattheraapadāna",
  "tha-ap476:1.1": "“Vipassino bhagavato,",
  "tha-ap476:1.2": "bodhiyā pādaputtame;",
  "tha-ap476:1.3": "Sumano bījaniṃ gayha,",
  "tha-ap476:1.4": "abījiṃ bodhimuttamaṃ.",
  "tha-ap476:2.1": "Ekanavutito kappe,",
  "tha-ap476:2.2": "abījiṃ bodhimuttamaṃ;",
  "tha-ap476:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap476:2.4": "bījanāya idaṃ phalaṃ.",
  "tha-ap476:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap476:3.2": "…pe…",
  "tha-ap476:3.3": "viharāmi anāsavo.",
  "tha-ap476:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap476:4.2": "…pe…",
  "tha-ap476:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap476:5.1": "Paṭisambhidā catasso,",
  "tha-ap476:5.2": "…pe…",
  "tha-ap476:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap476:6.1": "Itthaṃ sudaṃ āyasmā sumanabījaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap476:7.1": "Sumanabījaniyattherassāpadānaṃ catutthaṃ."
}