{
  "tha-ap478:0.1": "Therāpadāna",
  "tha-ap478:0.2": "Naḷamālivagga",
  "tha-ap478:0.3": "6. Kusaṭṭhakadāyakattheraapadāna",
  "tha-ap478:1.1": "“Kassapassa bhagavato,",
  "tha-ap478:1.2": "brāhmaṇassa vusīmato;",
  "tha-ap478:1.3": "Pasannacitto sumano,",
  "tha-ap478:1.4": "kusaṭṭhakamadāsahaṃ.",
  "tha-ap478:2.1": "Imasmiṃyeva kappasmiṃ,",
  "tha-ap478:2.2": "kusaṭṭhakamadāsahaṃ;",
  "tha-ap478:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap478:2.4": "kusaṭṭhakassidaṃ phalaṃ.",
  "tha-ap478:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap478:3.2": "…pe…",
  "tha-ap478:3.3": "viharāmi anāsavo.",
  "tha-ap478:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap478:4.2": "…pe…",
  "tha-ap478:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap478:5.1": "Paṭisambhidā catasso,",
  "tha-ap478:5.2": "…pe…",
  "tha-ap478:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap478:6.1": "Itthaṃ sudaṃ āyasmā kusaṭṭhakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap478:7.1": "Kusaṭṭhakadāyakattherassāpadānaṃ chaṭṭhaṃ."
}