{
  "tha-ap345:0.1": "Therāpadāna",
  "tha-ap345:0.2": "Ekapadumiyavagga",
  "tha-ap345:0.3": "3. Dhajadāyakattheraapadāna",
  "tha-ap345:1.1": "“Tisso nāma ahu satthā,",
  "tha-ap345:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap345:1.3": "Tayopadhikkhaye disvā,",
  "tha-ap345:1.4": "dhajaṃ āropitaṃ mayā.",
  "tha-ap345:2.1": "Tena kammena sukatena,",
  "tha-ap345:2.2": "cetanāpaṇidhīhi ca;",
  "tha-ap345:2.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap345:2.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap345:3.1": "Satānaṃ tīṇikkhattuñca,",
  "tha-ap345:3.2": "devarajjaṃ akārayiṃ;",
  "tha-ap345:3.3": "Satānaṃ pañcakkhattuñca,",
  "tha-ap345:3.4": "cakkavattī ahosahaṃ.",
  "tha-ap345:4.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap345:4.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap345:4.3": "Anubhomi sakaṃ kammaṃ,",
  "tha-ap345:4.4": "pubbe sukatamattano.",
  "tha-ap345:5.1": "Dvenavute ito kappe,",
  "tha-ap345:5.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap345:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap345:5.4": "dhajadānassidaṃ phalaṃ.",
  "tha-ap345:6.1": "Icchamāno cahaṃ ajja,",
  "tha-ap345:6.2": "sakānanaṃ sapabbataṃ;",
  "tha-ap345:6.3": "Khomadussena chādeyyaṃ,",
  "tha-ap345:6.4": "tadā mayhaṃ kate phalaṃ.",
  "tha-ap345:7.1": "Paṭisambhidā catasso,",
  "tha-ap345:7.2": "…pe…",
  "tha-ap345:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap345:8.1": "Itthaṃ sudaṃ āyasmā dhajadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap345:9.1": "Dhajadāyakattherassāpadānaṃ tatiyaṃ."
}