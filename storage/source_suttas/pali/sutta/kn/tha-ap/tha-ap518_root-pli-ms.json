{
  "tha-ap518:0.1": "Therāpadāna",
  "tha-ap518:0.2": "Phaladāyakavagga",
  "tha-ap518:0.3": "6. Ajjunapupphiyattheraapadāna",
  "tha-ap518:1.1": "“Candabhāgānadītīre,",
  "tha-ap518:1.2": "ahosiṃ kinnaro tadā;",
  "tha-ap518:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap518:1.4": "sayambhuṃ aparājitaṃ.",
  "tha-ap518:2.1": "Pasannacitto sumano,",
  "tha-ap518:2.2": "vedajāto katañjalī;",
  "tha-ap518:2.3": "Gahetvā ajjunaṃ pupphaṃ,",
  "tha-ap518:2.4": "sayambhuṃ abhipūjayiṃ.",
  "tha-ap518:3.1": "Tena kammena sukatena,",
  "tha-ap518:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap518:3.3": "Jahitvā kinnaraṃ dehaṃ,",
  "tha-ap518:3.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap518:4.1": "Chattiṃsakkhattuṃ devindo,",
  "tha-ap518:4.2": "devarajjamakārayiṃ;",
  "tha-ap518:4.3": "Dasakkhattuṃ cakkavattī,",
  "tha-ap518:4.4": "mahārajjamakārayiṃ.",
  "tha-ap518:5.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap518:5.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap518:5.3": "Sukhette vappitaṃ bījaṃ,",
  "tha-ap518:5.4": "sayambhumhi aho mama.",
  "tha-ap518:6.1": "Kusalaṃ vijjate mayhaṃ,",
  "tha-ap518:6.2": "pabbajiṃ anagāriyaṃ;",
  "tha-ap518:6.3": "Pūjāraho ahaṃ ajja,",
  "tha-ap518:6.4": "sakyaputtassa sāsane.",
  "tha-ap518:7.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap518:7.2": "…pe…",
  "tha-ap518:7.3": "viharāmi anāsavo.",
  "tha-ap518:8.1": "Svāgataṃ vata me āsi,",
  "tha-ap518:8.2": "…pe…",
  "tha-ap518:8.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap518:9.1": "Paṭisambhidā catasso,",
  "tha-ap518:9.2": "…pe…",
  "tha-ap518:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap518:10.1": "Itthaṃ sudaṃ āyasmā ajjunapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap518:11.1": "Ajjunapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}