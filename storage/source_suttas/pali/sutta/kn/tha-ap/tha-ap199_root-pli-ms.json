{
  "tha-ap199:0.1": "Therāpadāna",
  "tha-ap199:0.2": "Tamālapupphiyavagga",
  "tha-ap199:0.3": "7. Tindukadāyakattheraapadāna",
  "tha-ap199:1.1": "“Giriduggacaro āsiṃ,",
  "tha-ap199:1.2": "makkaṭo thāmavegiko;",
  "tha-ap199:1.3": "Phalinaṃ tindukaṃ disvā,",
  "tha-ap199:1.4": "buddhaseṭṭhaṃ anussariṃ.",
  "tha-ap199:2.1": "Nikkhamitvā katipāhaṃ,",
  "tha-ap199:2.2": "viciniṃ lokanāyakaṃ;",
  "tha-ap199:2.3": "Pasannacitto sumano,",
  "tha-ap199:2.4": "siddhatthaṃ tibhavantaguṃ.",
  "tha-ap199:3.1": "Mama saṅkappamaññāya,",
  "tha-ap199:3.2": "satthā loke anuttaro;",
  "tha-ap199:3.3": "Khīṇāsavasahassehi,",
  "tha-ap199:3.4": "āgacchi mama santikaṃ.",
  "tha-ap199:4.1": "Pāmojjaṃ janayitvāna,",
  "tha-ap199:4.2": "phalahattho upāgamiṃ;",
  "tha-ap199:4.3": "Paṭiggahesi bhagavā,",
  "tha-ap199:4.4": "sabbaññū vadataṃ varo.",
  "tha-ap199:5.1": "Catunnavutito kappe,",
  "tha-ap199:5.2": "yaṃ phalaṃ adadiṃ tadā;",
  "tha-ap199:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap199:5.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap199:6.1": "Sattapaññāsakappamhi,",
  "tha-ap199:6.2": "upanandasanāmako;",
  "tha-ap199:6.3": "Sattaratanasampanno,",
  "tha-ap199:6.4": "cakkavattī mahabbalo.",
  "tha-ap199:7.1": "Paṭisambhidā catasso,",
  "tha-ap199:7.2": "…pe…",
  "tha-ap199:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap199:8.1": "Itthaṃ sudaṃ āyasmā tindukadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap199:9.1": "Tindukadāyakattherassāpadānaṃ sattamaṃ."
}