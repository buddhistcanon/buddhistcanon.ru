{
  "tha-ap440:0.1": "Therāpadāna",
  "tha-ap440:0.2": "Ekavihārivagga",
  "tha-ap440:0.3": "8. Harītakadāyakattheraapadāna",
  "tha-ap440:1.1": "“Harītakaṃ āmalakaṃ,",
  "tha-ap440:1.2": "ambajambuvibhītakaṃ;",
  "tha-ap440:1.3": "Kolaṃ bhallātakaṃ billaṃ,",
  "tha-ap440:1.4": "sayameva harāmahaṃ.",
  "tha-ap440:2.1": "Disvāna pabbhāragataṃ,",
  "tha-ap440:2.2": "jhāyiṃ jhānarataṃ muniṃ;",
  "tha-ap440:2.3": "Ābādhena āpīḷentaṃ,",
  "tha-ap440:2.4": "adutīyaṃ mahāmuniṃ.",
  "tha-ap440:3.1": "Harītakaṃ gahetvāna,",
  "tha-ap440:3.2": "sayambhussa adāsahaṃ;",
  "tha-ap440:3.3": "Khādamattamhi bhesajje,",
  "tha-ap440:3.4": "byādhi passambhi tāvade.",
  "tha-ap440:4.1": "Pahīnadaratho buddho,",
  "tha-ap440:4.2": "anumodamakāsi me;",
  "tha-ap440:4.3": "‘Bhesajjadāneniminā,",
  "tha-ap440:4.4": "byādhivūpasamena ca.",
  "tha-ap440:5.1": "Devabhūto manusso vā,",
  "tha-ap440:5.2": "jāto vā aññajātiyā;",
  "tha-ap440:5.3": "Sabbattha sukhito hotu,",
  "tha-ap440:5.4": "mā ca te byādhimāgamā’.",
  "tha-ap440:6.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap440:6.2": "sayambhū aparājito;",
  "tha-ap440:6.3": "Nabhaṃ abbhuggamī dhīro,",
  "tha-ap440:6.4": "haṃsarājāva ambare.",
  "tha-ap440:7.1": "Yato harītakaṃ dinnaṃ,",
  "tha-ap440:7.2": "sayambhussa mahesino;",
  "tha-ap440:7.3": "Imaṃ jātiṃ upādāya,",
  "tha-ap440:7.4": "byādhi me nupapajjatha.",
  "tha-ap440:8.1": "Ayaṃ pacchimako mayhaṃ,",
  "tha-ap440:8.2": "carimo vattate bhavo;",
  "tha-ap440:8.3": "Tisso vijjā sacchikatā,",
  "tha-ap440:8.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap440:9.1": "Catunnavutito kappe,",
  "tha-ap440:9.2": "bhesajjamadadiṃ tadā;",
  "tha-ap440:9.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap440:9.4": "bhesajjassa idaṃ phalaṃ.",
  "tha-ap440:10.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap440:10.2": "…pe…",
  "tha-ap440:10.3": "viharāmi anāsavo.",
  "tha-ap440:11.1": "Svāgataṃ vata me āsi,",
  "tha-ap440:11.2": "…pe…",
  "tha-ap440:11.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap440:12.1": "Paṭisambhidā catasso,",
  "tha-ap440:12.2": "…pe…",
  "tha-ap440:12.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap440:13.1": "Itthaṃ sudaṃ āyasmā harītakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap440:14.1": "Harītakadāyakattherassāpadānaṃ aṭṭhamaṃ."
}