{
  "tha-ap381:0.1": "Therāpadāna",
  "tha-ap381:0.2": "Bodhivandanavagga",
  "tha-ap381:0.3": "9. Sumanadāmiyattheraapadāna",
  "tha-ap381:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap381:1.2": "nhātakassa tapassino;",
  "tha-ap381:1.3": "Katvāna sumanadāmaṃ,",
  "tha-ap381:1.4": "dhārayiṃ purato ṭhito.",
  "tha-ap381:2.1": "Catunnavutito kappe,",
  "tha-ap381:2.2": "yaṃ dāmaṃ dhārayiṃ tadā;",
  "tha-ap381:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap381:2.4": "sumanadhāraṇe phalaṃ.",
  "tha-ap381:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap381:3.2": "…pe…",
  "tha-ap381:3.3": "viharāmi anāsavo.",
  "tha-ap381:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap381:4.2": "…pe…",
  "tha-ap381:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap381:5.1": "Paṭisambhidā catasso,",
  "tha-ap381:5.2": "…pe…",
  "tha-ap381:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap381:6.1": "Itthaṃ sudaṃ āyasmā sumanadāmiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap381:7.1": "Sumanadāmiyattherassāpadānaṃ navamaṃ."
}