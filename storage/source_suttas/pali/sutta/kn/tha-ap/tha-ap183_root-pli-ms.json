{
  "tha-ap183:0.1": "Therāpadāna",
  "tha-ap183:0.2": "Kuṭajapupphiyavagga",
  "tha-ap183:0.3": "1. Kuṭajapupphiyattheraapadāna",
  "tha-ap183:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap183:1.2": "Sataraṃsiṃva uggataṃ;",
  "tha-ap183:1.3": "Disaṃ anuvilokentaṃ,",
  "tha-ap183:1.4": "Gacchantaṃ anilañjase.",
  "tha-ap183:2.1": "Kuṭajaṃ pupphitaṃ disvā,",
  "tha-ap183:2.2": "saṃvitthatasamotthataṃ;",
  "tha-ap183:2.3": "Rukkhato ocinitvāna,",
  "tha-ap183:2.4": "phussassa abhiropayiṃ.",
  "tha-ap183:3.1": "Dvenavute ito kappe,",
  "tha-ap183:3.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap183:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap183:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap183:4.1": "Ito sattarase kappe,",
  "tha-ap183:4.2": "tayo āsuṃ supupphitā;",
  "tha-ap183:4.3": "Sattaratanasampannā,",
  "tha-ap183:4.4": "cakkavattī mahabbalā.",
  "tha-ap183:5.1": "Paṭisambhidā catasso,",
  "tha-ap183:5.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap183:5.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap183:5.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap183:6.1": "Itthaṃ sudaṃ āyasmā kuṭajapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap183:7.1": "Kuṭajapupphiyattherassāpadānaṃ paṭhamaṃ."
}