{
  "tha-ap341:0.1": "Therāpadāna",
  "tha-ap341:0.2": "Gandhodakavagga",
  "tha-ap341:0.3": "9 Dhammasavaniyattheraapadāna",
  "tha-ap341:1.1": "“Padumuttaro nāma jino,",
  "tha-ap341:1.2": "sabbadhammāna pāragū;",
  "tha-ap341:1.3": "Catusaccaṃ pakāsento,",
  "tha-ap341:1.4": "santāresi bahuṃ janaṃ.",
  "tha-ap341:2.1": "Ahaṃ tena samayena,",
  "tha-ap341:2.2": "jaṭilo uggatāpano;",
  "tha-ap341:2.3": "Dhunanto vākacīrāni,",
  "tha-ap341:2.4": "gacchāmi ambare tadā.",
  "tha-ap341:3.1": "Buddhaseṭṭhassa upari,",
  "tha-ap341:3.2": "gantuṃ na visahāmahaṃ;",
  "tha-ap341:3.3": "Pakkhīva selamāsajja,",
  "tha-ap341:3.4": "gamanaṃ na labhāmahaṃ.",
  "tha-ap341:4.1": "Na me idaṃ bhūtapubbaṃ,",
  "tha-ap341:4.2": "iriyassa vikopanaṃ;",
  "tha-ap341:4.3": "Dake yathā ummujjitvā,",
  "tha-ap341:4.4": "evaṃ gacchāmi ambare.",
  "tha-ap341:5.1": "Uḷārabhūto manujo,",
  "tha-ap341:5.2": "heṭṭhāsīno bhavissati;",
  "tha-ap341:5.3": "Handa menaṃ gavesissaṃ,",
  "tha-ap341:5.4": "api atthaṃ labheyyahaṃ.",
  "tha-ap341:6.1": "Orohanto antalikkhā,",
  "tha-ap341:6.2": "saddamassosi satthuno;",
  "tha-ap341:6.3": "Aniccataṃ kathentassa,",
  "tha-ap341:6.4": "tamahaṃ uggahiṃ tadā.",
  "tha-ap341:7.1": "Aniccasaññamuggayha,",
  "tha-ap341:7.2": "agamāsiṃ mamassamaṃ;",
  "tha-ap341:7.3": "Yāvatāyuṃ vasitvāna,",
  "tha-ap341:7.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap341:8.1": "Carime vattamānamhi,",
  "tha-ap341:8.2": "Taṃ dhammasavanaṃ sariṃ;",
  "tha-ap341:8.3": "Tena kammena sukatena,",
  "tha-ap341:8.4": "Tāvatiṃsamagacchahaṃ.",
  "tha-ap341:9.1": "Tiṃsakappasahassāni,",
  "tha-ap341:9.2": "devaloke ramiṃ ahaṃ;",
  "tha-ap341:9.3": "Ekapaññāsakkhattuñca,",
  "tha-ap341:9.4": "devarajjamakārayiṃ.",
  "tha-ap341:10.1": "Ekasattatikkhattuñca,",
  "tha-ap341:10.2": "cakkavattī ahosahaṃ;",
  "tha-ap341:10.3": "Padesarajjaṃ vipulaṃ,",
  "tha-ap341:10.4": "gaṇanāto asaṅkhiyaṃ.",
  "tha-ap341:11.1": "Pitugehe nisīditvā,",
  "tha-ap341:11.2": "samaṇo bhāvitindriyo;",
  "tha-ap341:11.3": "Gāthāya paridīpento,",
  "tha-ap341:11.4": "aniccatamudāhari.",
  "tha-ap341:12.1": "Anussarāmi taṃ saññaṃ,",
  "tha-ap341:12.2": "saṃsaranto bhavābhave;",
  "tha-ap341:12.3": "Na koṭiṃ paṭivijjhāmi,",
  "tha-ap341:12.4": "nibbānaṃ accutaṃ padaṃ.",
  "tha-ap341:13.1": "Aniccā vata saṅkhārā,",
  "tha-ap341:13.2": "uppādavayadhammino;",
  "tha-ap341:13.3": "Uppajjitvā nirujjhanti,",
  "tha-ap341:13.4": "tesaṃ vūpasamo sukho.",
  "tha-ap341:14.1": "Saha gāthaṃ suṇitvāna,",
  "tha-ap341:14.2": "pubbakammaṃ anussariṃ;",
  "tha-ap341:14.3": "Ekāsane nisīditvā,",
  "tha-ap341:14.4": "arahattamapāpuṇiṃ.",
  "tha-ap341:15.1": "Jātiyā sattavassohaṃ,",
  "tha-ap341:15.2": "arahattamapāpuṇiṃ;",
  "tha-ap341:15.3": "Upasampādayi buddho,",
  "tha-ap341:15.4": "guṇamaññāya cakkhumā.",
  "tha-ap341:16.1": "Dārakova ahaṃ santo,",
  "tha-ap341:16.2": "karaṇīyaṃ samāpayiṃ;",
  "tha-ap341:16.3": "Kiṃ me karaṇīyaṃ ajja,",
  "tha-ap341:16.4": "sakyaputtassa sāsane.",
  "tha-ap341:17.1": "Satasahassito kappe,",
  "tha-ap341:17.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap341:17.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap341:17.4": "saddhammasavane phalaṃ.",
  "tha-ap341:18.1": "Paṭisambhidā catasso,",
  "tha-ap341:18.2": "…pe…",
  "tha-ap341:18.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap341:19.1": "Itthaṃ sudaṃ āyasmā dhammasavaniyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap341:20.1": "Dhammasavaniyattherassāpadānaṃ navamaṃ."
}