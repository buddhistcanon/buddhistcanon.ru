{
  "tha-ap195:0.1": "Therāpadāna",
  "tha-ap195:0.2": "Tamālapupphiyavagga",
  "tha-ap195:0.3": "3. Khaṇḍaphulliyattheraapadāna",
  "tha-ap195:1.1": "“Phussassa kho bhagavato,",
  "tha-ap195:1.2": "thūpo āsi mahāvane;",
  "tha-ap195:1.3": "Kuñjarehi tadā bhinno,",
  "tha-ap195:1.4": "parūḷho pādapo tahiṃ.",
  "tha-ap195:2.1": "Visamañca samaṃ katvā,",
  "tha-ap195:2.2": "sudhāpiṇḍaṃ adāsahaṃ;",
  "tha-ap195:2.3": "Tilokagaruno tassa,",
  "tha-ap195:2.4": "guṇehi paritosito.",
  "tha-ap195:3.1": "Dvenavute ito kappe,",
  "tha-ap195:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap195:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap195:3.4": "sudhāpiṇḍassidaṃ phalaṃ.",
  "tha-ap195:4.1": "Sattasattatikappamhi,",
  "tha-ap195:4.2": "jitasenāsuṃ soḷasa;",
  "tha-ap195:4.3": "Sattaratanasampannā,",
  "tha-ap195:4.4": "cakkavattī mahabbalā.",
  "tha-ap195:5.1": "Paṭisambhidā catasso,",
  "tha-ap195:5.2": "…pe…",
  "tha-ap195:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap195:6.1": "Itthaṃ sudaṃ āyasmā khaṇḍaphulliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap195:7.1": "Khaṇḍaphulliyattherassāpadānaṃ tatiyaṃ."
}