{
  "tha-ap295:0.1": "Therāpadāna",
  "tha-ap295:0.2": "Citakapūjakavagga",
  "tha-ap295:0.3": "3. Chattadāyakattheraapadāna",
  "tha-ap295:1.1": "“Putto mama pabbajito,",
  "tha-ap295:1.2": "kāsāyavasano tadā;",
  "tha-ap295:1.3": "So ca buddhattaṃ sampatto,",
  "tha-ap295:1.4": "nibbuto lokapūjito.",
  "tha-ap295:2.1": "Vicinanto sakaṃ puttaṃ,",
  "tha-ap295:2.2": "agamaṃ pacchato ahaṃ;",
  "tha-ap295:2.3": "Nibbutassa mahantassa,",
  "tha-ap295:2.4": "citakaṃ agamāsahaṃ.",
  "tha-ap295:3.1": "Paggayha añjaliṃ tattha,",
  "tha-ap295:3.2": "vanditvā citakaṃ ahaṃ;",
  "tha-ap295:3.3": "Setacchattañca paggayha,",
  "tha-ap295:3.4": "āropesiṃ ahaṃ tadā.",
  "tha-ap295:4.1": "Catunnavutito kappe,",
  "tha-ap295:4.2": "yaṃ chattamabhiropayiṃ;",
  "tha-ap295:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap295:4.4": "chattadānassidaṃ phalaṃ.",
  "tha-ap295:5.1": "Pañcavīse ito kappe,",
  "tha-ap295:5.2": "satta āsuṃ janādhipā;",
  "tha-ap295:5.3": "Mahārahasanāmā te,",
  "tha-ap295:5.4": "cakkavattī mahabbalā.",
  "tha-ap295:6.1": "Paṭisambhidā catasso,",
  "tha-ap295:6.2": "…pe…",
  "tha-ap295:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap295:7.1": "Itthaṃ sudaṃ āyasmā chattadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap295:8.1": "Chattadāyakattherassāpadānaṃ tatiyaṃ."
}