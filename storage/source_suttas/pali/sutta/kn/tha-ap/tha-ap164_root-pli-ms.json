{
  "tha-ap164:0.1": "Therāpadāna",
  "tha-ap164:0.2": "Supāricariyavagga",
  "tha-ap164:0.3": "2. Kaṇaverapupphiyattheraapadāna",
  "tha-ap164:1.1": "“Siddhattho nāma bhagavā,",
  "tha-ap164:1.2": "lokajeṭṭho narāsabho;",
  "tha-ap164:1.3": "Purakkhato sāvakehi,",
  "tha-ap164:1.4": "nagaraṃ paṭipajjatha.",
  "tha-ap164:2.1": "Rañño antepure āsiṃ,",
  "tha-ap164:2.2": "gopako abhisammato;",
  "tha-ap164:2.3": "Pāsāde upaviṭṭhohaṃ,",
  "tha-ap164:2.4": "addasaṃ lokanāyakaṃ.",
  "tha-ap164:3.1": "Kaṇaveraṃ gahetvāna,",
  "tha-ap164:3.2": "bhikkhusaṃghe samokiriṃ;",
  "tha-ap164:3.3": "Buddhassa visuṃ katvāna,",
  "tha-ap164:3.4": "tato bhiyyo samokiriṃ.",
  "tha-ap164:4.1": "Catunnavutito kappe,",
  "tha-ap164:4.2": "Yaṃ pupphamabhipūjayiṃ;",
  "tha-ap164:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap164:4.4": "Buddhapūjāyidaṃ phalaṃ.",
  "tha-ap164:5.1": "Sattāsītimhito kappe,",
  "tha-ap164:5.2": "caturāsuṃ mahiddhikā;",
  "tha-ap164:5.3": "Sattaratanasampannā,",
  "tha-ap164:5.4": "cakkavattī mahabbalā.",
  "tha-ap164:6.1": "Paṭisambhidā catasso,",
  "tha-ap164:6.2": "…pe…",
  "tha-ap164:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap164:7.1": "Itthaṃ sudaṃ āyasmā kaṇaverapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap164:8.1": "Kaṇaverapupphiyattherassāpadānaṃ dutiyaṃ."
}