{
  "tha-ap298:0.1": "Therāpadāna",
  "tha-ap298:0.2": "Citakapūjakavagga",
  "tha-ap298:0.3": "6 Pādapūjakattheraapadāna",
  "tha-ap298:1.1": "“Pabbate himavantamhi,",
  "tha-ap298:1.2": "ahosiṃ kinnaro tadā;",
  "tha-ap298:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap298:1.4": "pītaraṃsiṃva bhāṇumaṃ.",
  "tha-ap298:2.1": "Upetaṃ tamahaṃ buddhaṃ,",
  "tha-ap298:2.2": "vipassiṃ lokanāyakaṃ;",
  "tha-ap298:2.3": "Candanaṃ tagarañcāpi,",
  "tha-ap298:2.4": "pāde osiñcahaṃ tadā.",
  "tha-ap298:3.1": "Ekanavutito kappe,",
  "tha-ap298:3.2": "yaṃ pādaṃ abhipūjayiṃ;",
  "tha-ap298:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap298:3.4": "pādapūjāyidaṃ phalaṃ.",
  "tha-ap298:4.1": "Paṭisambhidā catasso,",
  "tha-ap298:4.2": "…pe…",
  "tha-ap298:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap298:5.1": "Itthaṃ sudaṃ āyasmā pādapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap298:6.1": "Pādapūjakattherassāpadānaṃ chaṭṭhaṃ."
}