{
  "tha-ap165:0.1": "Therāpadāna",
  "tha-ap165:0.2": "Supāricariyavagga",
  "tha-ap165:0.3": "3. Khajjakadāyakattheraapadāna",
  "tha-ap165:1.1": "“Tissassa kho bhagavato,",
  "tha-ap165:1.2": "pubbe phalamadāsahaṃ;",
  "tha-ap165:1.3": "Nāḷikerañca pādāsiṃ,",
  "tha-ap165:1.4": "khajjakaṃ abhisammataṃ.",
  "tha-ap165:2.1": "Buddhassa tamahaṃ datvā,",
  "tha-ap165:2.2": "Tissassa tu mahesino;",
  "tha-ap165:2.3": "Modāmahaṃ kāmakāmī,",
  "tha-ap165:2.4": "Upapajjiṃ yamicchakaṃ.",
  "tha-ap165:3.1": "Dvenavute ito kappe,",
  "tha-ap165:3.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap165:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap165:3.4": "phaladānassidaṃ phalaṃ.",
  "tha-ap165:4.1": "Ito terasakappamhi,",
  "tha-ap165:4.2": "rājā indasamo ahu;",
  "tha-ap165:4.3": "Sattaratanasampanno,",
  "tha-ap165:4.4": "cakkavattī mahabbalo.",
  "tha-ap165:5.1": "Paṭisambhidā catasso,",
  "tha-ap165:5.2": "…pe…",
  "tha-ap165:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap165:6.1": "Itthaṃ sudaṃ āyasmā khajjakadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap165:7.1": "Khajjakadāyakattherassāpadānaṃ tatiyaṃ."
}