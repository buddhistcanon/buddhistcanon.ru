{
  "tha-ap354:0.1": "Therāpadāna",
  "tha-ap354:0.2": "Saddasaññakavagga",
  "tha-ap354:0.3": "2. Yavakalāpiyattheraapadāna",
  "tha-ap354:1.1": "“Nagare aruṇavatiyā,",
  "tha-ap354:1.2": "āsiṃ yavasiko tadā;",
  "tha-ap354:1.3": "Panthe disvāna sambuddhaṃ,",
  "tha-ap354:1.4": "yavakalāpaṃ santhariṃ.",
  "tha-ap354:2.1": "Anukampako kāruṇiko,",
  "tha-ap354:2.2": "sikhī lokagganāyako;",
  "tha-ap354:2.3": "Mama saṅkappamaññāya,",
  "tha-ap354:2.4": "nisīdi yavasanthare.",
  "tha-ap354:3.1": "Disvā nisinnaṃ vimalaṃ,",
  "tha-ap354:3.2": "mahājhāyiṃ vināyakaṃ;",
  "tha-ap354:3.3": "Pāmojjaṃ janayitvāna,",
  "tha-ap354:3.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap354:4.1": "Ekattiṃse ito kappe,",
  "tha-ap354:4.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap354:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap354:4.4": "yavatthare idaṃ phalaṃ.",
  "tha-ap354:5.1": "Paṭisambhidā catasso,",
  "tha-ap354:5.2": "…pe…",
  "tha-ap354:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap354:6.1": "Itthaṃ sudaṃ āyasmā yavakalāpiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap354:7.1": "Yavakalāpiyattherassāpadānaṃ dutiyaṃ."
}