{
  "tha-ap287:0.1": "Therāpadāna",
  "tha-ap287:0.2": "Paṇṇadāyakavagga",
  "tha-ap287:0.3": "5. Maghavapupphiyattheraapadāna",
  "tha-ap287:1.1": "“Nammadānadiyā tīre,",
  "tha-ap287:1.2": "sayambhū aparājito;",
  "tha-ap287:1.3": "Samādhiṃ so samāpanno,",
  "tha-ap287:1.4": "vippasanno anāvilo.",
  "tha-ap287:2.1": "Disvā pasannasumano,",
  "tha-ap287:2.2": "sambuddhaṃ aparājitaṃ;",
  "tha-ap287:2.3": "Tāhaṃ maghavapupphena,",
  "tha-ap287:2.4": "sayambhuṃ pūjayiṃ tadā.",
  "tha-ap287:3.1": "Ekanavutito kappe,",
  "tha-ap287:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap287:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap287:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap287:4.1": "Paṭisambhidā catasso,",
  "tha-ap287:4.2": "…pe…",
  "tha-ap287:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap287:5.1": "Itthaṃ sudaṃ āyasmā maghavapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap287:6.1": "Maghavapupphiyattherassāpadānaṃ pañcamaṃ."
}