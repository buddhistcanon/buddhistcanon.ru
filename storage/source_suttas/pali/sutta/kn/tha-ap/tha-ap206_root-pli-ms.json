{
  "tha-ap206:0.1": "Therāpadāna",
  "tha-ap206:0.2": "Kaṇikārapupphiyavagga",
  "tha-ap206:0.3": "4. Taraṇiyattheraapadāna",
  "tha-ap206:1.1": "“Atthadassī tu bhagavā,",
  "tha-ap206:1.2": "dvipadindo narāsabho;",
  "tha-ap206:1.3": "Purakkhato sāvakehi,",
  "tha-ap206:1.4": "gaṅgātīramupāgami.",
  "tha-ap206:2.1": "Samatitti kākapeyyā,",
  "tha-ap206:2.2": "gaṅgā āsi duruttarā;",
  "tha-ap206:2.3": "Uttārayiṃ bhikkhusaṃghaṃ,",
  "tha-ap206:2.4": "buddhañca dvipaduttamaṃ.",
  "tha-ap206:3.1": "Aṭṭhārase kappasate,",
  "tha-ap206:3.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap206:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap206:3.4": "taraṇāya idaṃ phalaṃ.",
  "tha-ap206:4.1": "Teraseto kappasate,",
  "tha-ap206:4.2": "pañca sabbobhavā ahuṃ;",
  "tha-ap206:4.3": "Sattaratanasampannā,",
  "tha-ap206:4.4": "cakkavattī mahabbalā.",
  "tha-ap206:5.1": "Pacchime ca bhave asmiṃ,",
  "tha-ap206:5.2": "jātohaṃ brāhmaṇe kule;",
  "tha-ap206:5.3": "Saddhiṃ tīhi sahāyehi,",
  "tha-ap206:5.4": "pabbajiṃ satthu sāsane.",
  "tha-ap206:6.1": "Paṭisambhidā catasso,",
  "tha-ap206:6.2": "…pe…",
  "tha-ap206:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap206:7.1": "Itthaṃ sudaṃ āyasmā taraṇiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap206:8.1": "Taraṇiyattherassāpadānaṃ catutthaṃ."
}