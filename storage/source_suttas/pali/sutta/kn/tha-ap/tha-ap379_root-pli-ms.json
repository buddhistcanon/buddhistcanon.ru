{
  "tha-ap379:0.1": "Therāpadāna",
  "tha-ap379:0.2": "Bodhivandanavagga",
  "tha-ap379:0.3": "7. Citakapūjakattheraapadāna",
  "tha-ap379:1.1": "“Parinibbute bhagavati,",
  "tha-ap379:1.2": "jalajuttamanāmake;",
  "tha-ap379:1.3": "Āropitamhi citake,",
  "tha-ap379:1.4": "sālapupphamapūjayiṃ.",
  "tha-ap379:2.1": "Satasahassito kappe,",
  "tha-ap379:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap379:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap379:2.4": "citapūjāyidaṃ phalaṃ.",
  "tha-ap379:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap379:3.2": "…pe…",
  "tha-ap379:3.3": "viharāmi anāsavo.",
  "tha-ap379:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap379:4.2": "…pe…",
  "tha-ap379:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap379:5.1": "Paṭisambhidā catasso,",
  "tha-ap379:5.2": "…pe…",
  "tha-ap379:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap379:6.1": "Itthaṃ sudaṃ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap379:7.1": "Citakapūjakattherassāpadānaṃ sattamaṃ."
}