{
  "tha-ap493:0.1": "Therāpadāna",
  "tha-ap493:0.2": "Kiṅkaṇipupphavagga",
  "tha-ap493:0.3": "1. Tikiṅkaṇipupphiyattheraapadāna",
  "tha-ap493:1.1": "“Kaṇikāraṃva jotantaṃ,",
  "tha-ap493:1.2": "nisinnaṃ pabbatantare;",
  "tha-ap493:1.3": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap493:1.4": "vipassiṃ lokanāyakaṃ.",
  "tha-ap493:2.1": "Tīṇi kiṅkaṇipupphāni,",
  "tha-ap493:2.2": "paggayha abhiropayiṃ;",
  "tha-ap493:2.3": "Sambuddhamabhipūjetvā,",
  "tha-ap493:2.4": "gacchāmi dakkhiṇāmukho.",
  "tha-ap493:3.1": "Tena kammena sukatena,",
  "tha-ap493:3.2": "cetanāpaṇidhīhi ca;",
  "tha-ap493:3.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap493:3.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap493:4.1": "Ekanavutito kappe,",
  "tha-ap493:4.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap493:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap493:4.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap493:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap493:5.2": "bhavā sabbe samūhatā;",
  "tha-ap493:5.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap493:5.4": "viharāmi anāsavo.",
  "tha-ap493:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap493:6.2": "mama buddhassa santike;",
  "tha-ap493:6.3": "Tisso vijjā anuppattā,",
  "tha-ap493:6.4": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap493:7.1": "Paṭisambhidā catasso,",
  "tha-ap493:7.2": "vimokkhāpi ca aṭṭhime;",
  "tha-ap493:7.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap493:7.4": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap493:8.1": "Itthaṃ sudaṃ āyasmā tikiṅkaṇipupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap493:9.1": "Tikiṅkaṇipupphiyattherassāpadānaṃ paṭhamaṃ."
}