{
  "tha-ap436:0.1": "Therāpadāna",
  "tha-ap436:0.2": "Ekavihārivagga",
  "tha-ap436:0.3": "4. Ñāṇatthavikattheraapadāna",
  "tha-ap436:1.1": "“Kaṇikāraṃva jalitaṃ,",
  "tha-ap436:1.2": "dīparukkhaṃva jotitaṃ;",
  "tha-ap436:1.3": "Kañcanaṃva virocantaṃ,",
  "tha-ap436:1.4": "addasaṃ dvipaduttamaṃ.",
  "tha-ap436:2.1": "Kamaṇḍaluṃ ṭhapetvāna,",
  "tha-ap436:2.2": "vākacīrañca kuṇḍikaṃ;",
  "tha-ap436:2.3": "Ekaṃsaṃ ajinaṃ katvā,",
  "tha-ap436:2.4": "buddhaseṭṭhaṃ thaviṃ ahaṃ.",
  "tha-ap436:3.1": "‘Tamandhakāraṃ vidhamaṃ,",
  "tha-ap436:3.2": "mohajālasamākulaṃ;",
  "tha-ap436:3.3": "Ñāṇālokaṃ dassetvāna,",
  "tha-ap436:3.4": "nittiṇṇosi mahāmuni.",
  "tha-ap436:4.1": "Samuddharasimaṃ lokaṃ,",
  "tha-ap436:4.2": "sabbāvantamanuttaraṃ;",
  "tha-ap436:4.3": "Ñāṇe te upamā natthi,",
  "tha-ap436:4.4": "yāvatājagatogati.",
  "tha-ap436:5.1": "Tena ñāṇena sabbaññū,",
  "tha-ap436:5.2": "iti buddho pavuccati;",
  "tha-ap436:5.3": "Vandāmi taṃ mahāvīraṃ,",
  "tha-ap436:5.4": "sabbaññutamanāvaraṃ’.",
  "tha-ap436:6.1": "Satasahassito kappe,",
  "tha-ap436:6.2": "buddhaseṭṭhaṃ thaviṃ ahaṃ;",
  "tha-ap436:6.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap436:6.4": "ñāṇatthavāyidaṃ phalaṃ.",
  "tha-ap436:7.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap436:7.2": "…pe…",
  "tha-ap436:7.3": "viharāmi anāsavo.",
  "tha-ap436:8.1": "Svāgataṃ vata me āsi,",
  "tha-ap436:8.2": "…pe…",
  "tha-ap436:8.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap436:9.1": "Paṭisambhidā catasso,",
  "tha-ap436:9.2": "…pe…",
  "tha-ap436:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap436:10.1": "Itthaṃ sudaṃ āyasmā ñāṇatthaviko thero imā gāthāyo abhāsitthāti.",
  "tha-ap436:11.1": "Ñāṇatthavikattherassāpadānaṃ catutthaṃ."
}