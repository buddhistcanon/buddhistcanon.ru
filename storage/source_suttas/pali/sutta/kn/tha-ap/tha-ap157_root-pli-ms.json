{
  "tha-ap157:0.1": "Therāpadāna",
  "tha-ap157:0.2": "Bandhujīvakavagga",
  "tha-ap157:0.3": "5 Mandāravapupphapūjakattheraapadāna",
  "tha-ap157:1.1": "“Devaputto ahaṃ santo,",
  "tha-ap157:1.2": "pūjayiṃ sikhināyakaṃ;",
  "tha-ap157:1.3": "Mandāravena pupphena,",
  "tha-ap157:1.4": "buddhassa abhiropayiṃ.",
  "tha-ap157:2.1": "Sattāhaṃ chadanaṃ āsi,",
  "tha-ap157:2.2": "dibbaṃ mālaṃ tathāgate;",
  "tha-ap157:2.3": "Sabbe janā samāgantvā,",
  "tha-ap157:2.4": "namassiṃsu tathāgataṃ.",
  "tha-ap157:3.1": "Ekattiṃse ito kappe,",
  "tha-ap157:3.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap157:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap157:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap157:4.1": "Ito ca dasame kappe,",
  "tha-ap157:4.2": "rājāhosiṃ jutindharo;",
  "tha-ap157:4.3": "Sattaratanasampanno,",
  "tha-ap157:4.4": "cakkavattī mahabbalo.",
  "tha-ap157:5.1": "Paṭisambhidā catasso,",
  "tha-ap157:5.2": "…pe…",
  "tha-ap157:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap157:6.1": "Itthaṃ sudaṃ āyasmā mandāravapupphapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap157:7.1": "Mandāravapupphapūjakattherassāpadānaṃ pañcamaṃ."
}