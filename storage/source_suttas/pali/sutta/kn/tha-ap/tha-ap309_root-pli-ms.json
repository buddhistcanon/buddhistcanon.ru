{
  "tha-ap309:0.1": "Therāpadāna",
  "tha-ap309:0.2": "Padumakesaravagga",
  "tha-ap309:0.3": "7. Ārāmadāyakattheraapadāna",
  "tha-ap309:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap309:1.2": "ārāmo ropito mayā;",
  "tha-ap309:1.3": "Sandacchāyesu rukkhesu,",
  "tha-ap309:1.4": "upāsantesu pakkhisu.",
  "tha-ap309:2.1": "Addasaṃ virajaṃ buddhaṃ,",
  "tha-ap309:2.2": "āhutīnaṃ paṭiggahaṃ;",
  "tha-ap309:2.3": "Ārāmaṃ abhināmesiṃ,",
  "tha-ap309:2.4": "lokajeṭṭhaṃ narāsabhaṃ.",
  "tha-ap309:3.1": "Haṭṭho haṭṭhena cittena,",
  "tha-ap309:3.2": "phalaṃ pupphamadāsahaṃ;",
  "tha-ap309:3.3": "Tato jātappasādova,",
  "tha-ap309:3.4": "taṃ vanaṃ pariṇāmayiṃ.",
  "tha-ap309:4.1": "Buddhassa yamidaṃ dāsiṃ,",
  "tha-ap309:4.2": "vippasannena cetasā;",
  "tha-ap309:4.3": "Bhave nibbattamānamhi,",
  "tha-ap309:4.4": "nibbattati phalaṃ mama.",
  "tha-ap309:5.1": "Catunnavutito kappe,",
  "tha-ap309:5.2": "yaṃ ārāmamadaṃ tadā;",
  "tha-ap309:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap309:5.4": "ārāmassa idaṃ phalaṃ.",
  "tha-ap309:6.1": "Sattatiṃse ito kappe,",
  "tha-ap309:6.2": "sattāsuṃ mudusītalā;",
  "tha-ap309:6.3": "Sattaratanasampannā,",
  "tha-ap309:6.4": "cakkavattī mahabbalā.",
  "tha-ap309:7.1": "Paṭisambhidā catasso,",
  "tha-ap309:7.2": "…pe…",
  "tha-ap309:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap309:8.1": "Itthaṃ sudaṃ āyasmā ārāmadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap309:9.1": "Ārāmadāyakattherassāpadānaṃ sattamaṃ."
}