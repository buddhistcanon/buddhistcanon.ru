{
  "tha-ap81:0.1": "Therāpadāna",
  "tha-ap81:0.2": "Nāgasamālavagga",
  "tha-ap81:0.3": "9. Ṭhitañjaliyattheraapadāna",
  "tha-ap81:1.1": "“Migaluddo pure āsiṃ,",
  "tha-ap81:1.2": "Araññe kānane ahaṃ;",
  "tha-ap81:1.3": "Tattha addasaṃ sambuddhaṃ,",
  "tha-ap81:1.4": "Bāttiṃsavaralakkhaṇaṃ.",
  "tha-ap81:2.1": "Tatthāhaṃ añjaliṃ katvā,",
  "tha-ap81:2.2": "pakkāmiṃ pācināmukho;",
  "tha-ap81:2.3": "Avidūre nisinnassa,",
  "tha-ap81:2.4": "niyake paṇṇasanthare.",
  "tha-ap81:3.1": "Tato me asanīpāto,",
  "tha-ap81:3.2": "matthake nipatī tadā;",
  "tha-ap81:3.3": "Sohaṃ maraṇakālamhi,",
  "tha-ap81:3.4": "akāsiṃ punarañjaliṃ.",
  "tha-ap81:4.1": "Dvenavute ito kappe,",
  "tha-ap81:4.2": "añjaliṃ akariṃ tadā;",
  "tha-ap81:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap81:4.4": "añjalissa idaṃ phalaṃ.",
  "tha-ap81:5.1": "Catupaṇṇāsakappamhi,",
  "tha-ap81:5.2": "migaketusanāmako;",
  "tha-ap81:5.3": "Sattaratanasampanno,",
  "tha-ap81:5.4": "cakkavattī mahabbalo.",
  "tha-ap81:6.1": "Paṭisambhidā catasso,",
  "tha-ap81:6.2": "…pe…",
  "tha-ap81:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap81:7.1": "Itthaṃ sudaṃ āyasmā ṭhitañjaliyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap81:8.1": "Ṭhitañjaliyattherassāpadānaṃ navamaṃ."
}