{
  "tha-ap86:0.1": "Therāpadāna",
  "tha-ap86:0.2": "Timiravagga",
  "tha-ap86:0.3": "4. Adhopupphiyattheraapadāna",
  "tha-ap86:1.1": "“Abhibhū nāma so bhikkhu,",
  "tha-ap86:1.2": "sikhino aggasāvako;",
  "tha-ap86:1.3": "Mahānubhāvo tevijjo,",
  "tha-ap86:1.4": "himavantaṃ upāgami.",
  "tha-ap86:2.1": "Ahampi himavantamhi,",
  "tha-ap86:2.2": "ramaṇīyassame isi;",
  "tha-ap86:2.3": "Vasāmi appamaññāsu,",
  "tha-ap86:2.4": "iddhīsu ca tadā vasī.",
  "tha-ap86:3.1": "Pakkhijāto viyākāse,",
  "tha-ap86:3.2": "pabbataṃ adhivatthayiṃ;",
  "tha-ap86:3.3": "Adhopupphaṃ gahetvāna,",
  "tha-ap86:3.4": "āgacchiṃ pabbataṃ ahaṃ.",
  "tha-ap86:4.1": "Satta pupphāni gaṇhitvā,",
  "tha-ap86:4.2": "matthake okiriṃ ahaṃ;",
  "tha-ap86:4.3": "Ālokite ca vīrena,",
  "tha-ap86:4.4": "pakkāmiṃ pācināmukho.",
  "tha-ap86:5.1": "Āvāsaṃ abhisambhosiṃ,",
  "tha-ap86:5.2": "patvāna assamaṃ ahaṃ;",
  "tha-ap86:5.3": "Khāribhāraṃ gahetvāna,",
  "tha-ap86:5.4": "pāyāsiṃ pabbatantaraṃ.",
  "tha-ap86:6.1": "Ajagaro maṃ pīḷesi,",
  "tha-ap86:6.2": "ghorarūpo mahabbalo;",
  "tha-ap86:6.3": "Pubbakammaṃ saritvāna,",
  "tha-ap86:6.4": "tattha kālaṅkato ahaṃ.",
  "tha-ap86:7.1": "Ekattiṃse ito kappe,",
  "tha-ap86:7.2": "yaṃ pupphamabhiropayiṃ;",
  "tha-ap86:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap86:7.4": "pupphapūjāyidaṃ phalaṃ.",
  "tha-ap86:8.1": "Paṭisambhidā catasso,",
  "tha-ap86:8.2": "…pe…",
  "tha-ap86:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap86:9.1": "Itthaṃ sudaṃ āyasmā adhopupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap86:10.1": "Adhopupphiyattherassāpadānaṃ catutthaṃ."
}