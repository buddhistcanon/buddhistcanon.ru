{
  "tha-ap58:0.1": "Therāpadāna",
  "tha-ap58:0.2": "Bījanivagga",
  "tha-ap58:0.3": "6. Saparivārāsanattheraapadāna",
  "tha-ap58:1.1": "“Padumuttarabuddhassa,",
  "tha-ap58:1.2": "piṇḍapātaṃ adāsahaṃ;",
  "tha-ap58:1.3": "Gantvā kiliṭṭhakaṃ ṭhānaṃ,",
  "tha-ap58:1.4": "mallikāhi parikkhitaṃ.",
  "tha-ap58:2.1": "Tamhāsanamhi āsīno,",
  "tha-ap58:2.2": "buddho lokagganāyako;",
  "tha-ap58:2.3": "Akittayi piṇḍapātaṃ,",
  "tha-ap58:2.4": "ujubhūto samāhito.",
  "tha-ap58:3.1": "Yathāpi bhaddake khette,",
  "tha-ap58:3.2": "bījaṃ appampi ropitaṃ;",
  "tha-ap58:3.3": "Sammā dhāraṃ pavecchante,",
  "tha-ap58:3.4": "phalaṃ toseti kassakaṃ.",
  "tha-ap58:4.1": "Tathevāyaṃ piṇḍapāto,",
  "tha-ap58:4.2": "sukhette ropito tayā;",
  "tha-ap58:4.3": "Bhave nibbattamānamhi,",
  "tha-ap58:4.4": "phalaṃ te tosayissati.",
  "tha-ap58:5.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap58:5.2": "jalajuttamanāmako;",
  "tha-ap58:5.3": "Piṇḍapātaṃ gahetvāna,",
  "tha-ap58:5.4": "pakkāmi uttarāmukho.",
  "tha-ap58:6.1": "Saṃvuto pātimokkhasmiṃ,",
  "tha-ap58:6.2": "indriyesu ca pañcasu;",
  "tha-ap58:6.3": "Pavivekamanuyutto,",
  "tha-ap58:6.4": "viharāmi anāsavo.",
  "tha-ap58:7.1": "Paṭisambhidā catasso,",
  "tha-ap58:7.2": "…pe…",
  "tha-ap58:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap58:8.1": "Itthaṃ sudaṃ āyasmā saparivārāsano thero imā gāthāyo abhāsitthāti.",
  "tha-ap58:9.1": "Saparivārāsanattherassāpadānaṃ chaṭṭhaṃ."
}