{
  "tha-ap331:0.1": "Therāpadāna",
  "tha-ap331:0.2": "Umāpupphiyavagga",
  "tha-ap331:0.3": "9 Pupphacchattiyattheraapadāna",
  "tha-ap331:1.1": "“Siddhatthassa bhagavato,",
  "tha-ap331:1.2": "lokajeṭṭhassa tādino;",
  "tha-ap331:1.3": "Saccaṃ pakāsayantassa,",
  "tha-ap331:1.4": "nibbāpentassa pāṇino.",
  "tha-ap331:2.1": "Jalajaṃ āharitvāna,",
  "tha-ap331:2.2": "satapattaṃ manoramaṃ;",
  "tha-ap331:2.3": "Pupphassa chattaṃ katvāna,",
  "tha-ap331:2.4": "buddhassa abhiropayiṃ.",
  "tha-ap331:3.1": "Siddhattho ca lokavidū,",
  "tha-ap331:3.2": "āhutīnaṃ paṭiggaho;",
  "tha-ap331:3.3": "Bhikkhusaṃghe ṭhito satthā,",
  "tha-ap331:3.4": "imaṃ gāthaṃ abhāsatha.",
  "tha-ap331:4.1": "‘Yo me cittaṃ pasādetvā,",
  "tha-ap331:4.2": "pupphacchattaṃ adhārayiṃ;",
  "tha-ap331:4.3": "Tena cittappasādena,",
  "tha-ap331:4.4": "duggatiṃ so na gacchati’.",
  "tha-ap331:5.1": "Idaṃ vatvāna sambuddho,",
  "tha-ap331:5.2": "siddhattho lokanāyako;",
  "tha-ap331:5.3": "Uyyojetvāna parisaṃ,",
  "tha-ap331:5.4": "vehāsaṃ nabhamuggami.",
  "tha-ap331:6.1": "Vuṭṭhite naradevamhi,",
  "tha-ap331:6.2": "setacchattampi vuṭṭhahi;",
  "tha-ap331:6.3": "Purato buddhaseṭṭhassa,",
  "tha-ap331:6.4": "gacchati chattamuttamaṃ.",
  "tha-ap331:7.1": "Catunnavutito kappe,",
  "tha-ap331:7.2": "yaṃ chattaṃ abhiropayiṃ;",
  "tha-ap331:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap331:7.4": "pupphacchattassidaṃ phalaṃ.",
  "tha-ap331:8.1": "Catusattatikappamhi,",
  "tha-ap331:8.2": "aṭṭha jalasikhā ahū;",
  "tha-ap331:8.3": "Sattaratanasampannā,",
  "tha-ap331:8.4": "cakkavattī mahabbalā.",
  "tha-ap331:9.1": "Paṭisambhidā catasso,",
  "tha-ap331:9.2": "…pe…",
  "tha-ap331:9.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap331:10.1": "Itthaṃ sudaṃ āyasmā pupphacchattiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap331:11.1": "Pupphacchattiyattherassāpadānaṃ navamaṃ."
}