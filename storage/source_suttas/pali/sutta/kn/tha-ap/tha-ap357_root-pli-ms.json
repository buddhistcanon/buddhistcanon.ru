{
  "tha-ap357:0.1": "Therāpadāna",
  "tha-ap357:0.2": "Saddasaññakavagga",
  "tha-ap357:0.3": "5. Daṇḍadāyakattheraapadāna",
  "tha-ap357:1.1": "“Kānanaṃ vanamogayha,",
  "tha-ap357:1.2": "veḷuṃ chetvānahaṃ tadā;",
  "tha-ap357:1.3": "Ālambanaṃ karitvāna,",
  "tha-ap357:1.4": "saṃghassa adadaṃ ahaṃ.",
  "tha-ap357:2.1": "Tena cittappasādena,",
  "tha-ap357:2.2": "subbate abhivādiya;",
  "tha-ap357:2.3": "Ālambanampi datvāna,",
  "tha-ap357:2.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap357:3.1": "Catunnavutito kappe,",
  "tha-ap357:3.2": "yaṃ daṇḍamadadiṃ tadā;",
  "tha-ap357:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap357:3.4": "daṇḍadānassidaṃ phalaṃ.",
  "tha-ap357:4.1": "Paṭisambhidā catasso,",
  "tha-ap357:4.2": "…pe…",
  "tha-ap357:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap357:5.1": "Itthaṃ sudaṃ āyasmā daṇḍadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap357:6.1": "Daṇḍadāyakattherassāpadānaṃ pañcamaṃ."
}