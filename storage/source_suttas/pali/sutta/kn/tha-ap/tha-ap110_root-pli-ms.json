{
  "tha-ap110:0.1": "Therāpadāna",
  "tha-ap110:0.2": "Bhikkhadāyivagga",
  "tha-ap110:0.3": "8 Āsanupaṭṭhāhakattheraapadāna",
  "tha-ap110:1.1": "“Kānanaṃ vanamogayha,",
  "tha-ap110:1.2": "appasaddaṃ nirākulaṃ;",
  "tha-ap110:1.3": "Sīhāsanaṃ mayā dinnaṃ,",
  "tha-ap110:1.4": "atthadassissa tādino.",
  "tha-ap110:2.1": "Mālāhatthaṃ gahetvāna,",
  "tha-ap110:2.2": "katvā ca naṃ padakkhiṇaṃ;",
  "tha-ap110:2.3": "Satthāraṃ payirupāsitvā,",
  "tha-ap110:2.4": "pakkāmiṃ uttarāmukho.",
  "tha-ap110:3.1": "Tena kammena dvipadinda,",
  "tha-ap110:3.2": "lokajeṭṭha narāsabha;",
  "tha-ap110:3.3": "Sannibbāpemi attānaṃ,",
  "tha-ap110:3.4": "bhavā sabbe samūhatā.",
  "tha-ap110:4.1": "Aṭṭhārasakappasate,",
  "tha-ap110:4.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap110:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap110:4.4": "sīhāsanassidaṃ phalaṃ.",
  "tha-ap110:5.1": "Ito sattakappasate,",
  "tha-ap110:5.2": "sannibbāpaka khattiyo;",
  "tha-ap110:5.3": "Sattaratanasampanno,",
  "tha-ap110:5.4": "cakkavattī mahabbalo.",
  "tha-ap110:6.1": "Paṭisambhidā catasso,",
  "tha-ap110:6.2": "…pe…",
  "tha-ap110:6.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap110:7.1": "Itthaṃ sudaṃ āyasmā āsanupaṭṭhāhako thero imā gāthāyo abhāsitthāti.",
  "tha-ap110:8.1": "Āsanupaṭṭhāhakattherassāpadānaṃ aṭṭhamaṃ."
}