{
  "tha-ap444:0.1": "Therāpadāna",
  "tha-ap444:0.2": "Vibhītakavagga",
  "tha-ap444:0.3": "2. Koladāyakattheraapadāna",
  "tha-ap444:1.1": "“Ajinena nivatthohaṃ,",
  "tha-ap444:1.2": "Vākacīradharo tadā;",
  "tha-ap444:1.3": "Khāriyā pūrayitvāna,",
  "tha-ap444:1.4": "Kolaṃhāsiṃ mamassamaṃ.",
  "tha-ap444:2.1": "Tamhi kāle sikhī buddho,",
  "tha-ap444:2.2": "eko adutiyo ahu;",
  "tha-ap444:2.3": "Mamassamaṃ upāgacchi,",
  "tha-ap444:2.4": "jānanto sabbakālikaṃ.",
  "tha-ap444:3.1": "Sakaṃ cittaṃ pasādetvā,",
  "tha-ap444:3.2": "vanditvāna ca subbataṃ;",
  "tha-ap444:3.3": "Ubho hatthehi paggayha,",
  "tha-ap444:3.4": "kolaṃ buddhassadāsahaṃ.",
  "tha-ap444:4.1": "Ekatiṃse ito kappe,",
  "tha-ap444:4.2": "yaṃ phalamadadiṃ tadā;",
  "tha-ap444:4.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap444:4.4": "koladānassidaṃ phalaṃ.",
  "tha-ap444:5.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap444:5.2": "…pe…",
  "tha-ap444:5.3": "viharāmi anāsavo.",
  "tha-ap444:6.1": "Svāgataṃ vata me āsi,",
  "tha-ap444:6.2": "…pe…",
  "tha-ap444:6.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap444:7.1": "Paṭisambhidā catasso,",
  "tha-ap444:7.2": "…pe…",
  "tha-ap444:7.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap444:8.1": "Itthaṃ sudaṃ āyasmā koladāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap444:9.1": "Koladāyakattherassāpadānaṃ dutiyaṃ."
}