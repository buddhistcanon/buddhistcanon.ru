{
  "tha-ap342:0.1": "Therāpadāna",
  "tha-ap342:0.2": "Gandhodakavagga",
  "tha-ap342:0.3": "10. Ukkhittapadumiyattheraapadāna",
  "tha-ap342:1.1": "“Nagare haṃsavatiyā,",
  "tha-ap342:1.2": "ahosiṃ māliko tadā;",
  "tha-ap342:1.3": "Ogāhetvā padumasaraṃ,",
  "tha-ap342:1.4": "satapattaṃ ocināmahaṃ.",
  "tha-ap342:2.1": "Padumuttaro nāma jino,",
  "tha-ap342:2.2": "sabbadhammāna pāragū;",
  "tha-ap342:2.3": "Saha satasahassehi,",
  "tha-ap342:2.4": "santacittehi tādibhi.",
  "tha-ap342:3.1": "Khīṇāsavehi suddhehi,",
  "tha-ap342:3.2": "chaḷabhiññehi jhāyibhi;",
  "tha-ap342:3.3": "Mama vuddhiṃ samanvesaṃ,",
  "tha-ap342:3.4": "āgacchi mama santikaṃ.",
  "tha-ap342:4.1": "Disvānahaṃ devadevaṃ,",
  "tha-ap342:4.2": "sayambhuṃ lokanāyakaṃ;",
  "tha-ap342:4.3": "Vaṇṭe chetvā satapattaṃ,",
  "tha-ap342:4.4": "ukkhipimambare tadā.",
  "tha-ap342:5.1": "Yadi buddho tuvaṃ vīra,",
  "tha-ap342:5.2": "lokajeṭṭho narāsabho;",
  "tha-ap342:5.3": "Sayaṃ gantvā satapattā,",
  "tha-ap342:5.4": "matthake dhārayantu te.",
  "tha-ap342:6.1": "Adhiṭṭhahi mahāvīro,",
  "tha-ap342:6.2": "lokajeṭṭho narāsabho;",
  "tha-ap342:6.3": "Buddhassa ānubhāvena,",
  "tha-ap342:6.4": "matthake dhārayiṃsu te.",
  "tha-ap342:7.1": "Tena kammena sukatena,",
  "tha-ap342:7.2": "cetanāpaṇidhīhi ca;",
  "tha-ap342:7.3": "Jahitvā mānusaṃ dehaṃ,",
  "tha-ap342:7.4": "tāvatiṃsamagacchahaṃ.",
  "tha-ap342:8.1": "Tattha me sukataṃ byamhaṃ,",
  "tha-ap342:8.2": "satapattanti vuccati;",
  "tha-ap342:8.3": "Saṭṭhiyojanamubbiddhaṃ,",
  "tha-ap342:8.4": "tiṃsayojanavitthataṃ.",
  "tha-ap342:9.1": "Sahassakkhattuṃ devindo,",
  "tha-ap342:9.2": "devarajjamakārayiṃ;",
  "tha-ap342:9.3": "Pañcasattatikkhattuñca,",
  "tha-ap342:9.4": "cakkavattī ahosahaṃ.",
  "tha-ap342:10.1": "Padesarajjaṃ vipulaṃ,",
  "tha-ap342:10.2": "gaṇanāto asaṅkhiyaṃ;",
  "tha-ap342:10.3": "Anubhomi sakaṃ kammaṃ,",
  "tha-ap342:10.4": "pubbe sukatamattano.",
  "tha-ap342:11.1": "Tenevekapadumena,",
  "tha-ap342:11.2": "anubhotvāna sampadā;",
  "tha-ap342:11.3": "Gotamassa bhagavato,",
  "tha-ap342:11.4": "dhammaṃ sacchikariṃ ahaṃ.",
  "tha-ap342:12.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap342:12.2": "bhavā sabbe samūhatā;",
  "tha-ap342:12.3": "Nāgova bandhanaṃ chetvā,",
  "tha-ap342:12.4": "viharāmi anāsavo.",
  "tha-ap342:13.1": "Satasahassito kappe,",
  "tha-ap342:13.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap342:13.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap342:13.4": "ekapadumassidaṃ phalaṃ.",
  "tha-ap342:14.1": "Paṭisambhidā catasso,",
  "tha-ap342:14.2": "…pe…",
  "tha-ap342:14.3": "kataṃ buddhassa sāsanaṃ”. (3067)",
  "tha-ap342:15.1": "Itthaṃ sudaṃ āyasmā ukkhittapadumiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap342:16.1": "Ukkhittapadumiyattherassāpadānaṃ dasamaṃ.",
  "tha-ap342:17.1": "Gandhodakavaggo catutiṃsatimo.",
  "tha-ap342:18.1": "Tassuddānaṃ",
  "tha-ap342:19.1": "Gandhadhūpo udakañca,",
  "tha-ap342:19.2": "punnāga ekadussakā;",
  "tha-ap342:19.3": "Phusito ca pabhaṅkaro,",
  "tha-ap342:19.4": "kuṭido uttarīyako.",
  "tha-ap342:20.1": "Savanī ekapadumī,",
  "tha-ap342:20.2": "gāthāyo sabbapiṇḍitā;",
  "tha-ap342:20.3": "Ekaṃ gāthāsatañceva,",
  "tha-ap342:20.4": "catutālīsameva ca."
}