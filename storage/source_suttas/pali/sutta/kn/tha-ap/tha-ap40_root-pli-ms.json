{
  "tha-ap40:0.1": "Therāpadāna",
  "tha-ap40:0.2": "Kuṇḍadhānavagga",
  "tha-ap40:0.3": "8 Āyāgadāyakattheraapadāna",
  "tha-ap40:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap40:1.2": "sikhimhi vadataṃ vare;",
  "tha-ap40:1.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap40:1.4": "avandiṃ thūpamuttamaṃ.",
  "tha-ap40:2.1": "Vaḍḍhakīhi kathāpetvā,",
  "tha-ap40:2.2": "mūlaṃ datvānahaṃ tadā;",
  "tha-ap40:2.3": "Haṭṭho haṭṭhena cittena,",
  "tha-ap40:2.4": "āyāgaṃ kārapesahaṃ.",
  "tha-ap40:3.1": "Aṭṭha kappāni devesu,",
  "tha-ap40:3.2": "abbokiṇṇaṃ vasiṃ ahaṃ;",
  "tha-ap40:3.3": "Avasesesu kappesu,",
  "tha-ap40:3.4": "vokiṇṇaṃ saṃsariṃ ahaṃ.",
  "tha-ap40:4.1": "Kāye visaṃ na kamati,",
  "tha-ap40:4.2": "satthāni na ca hanti me;",
  "tha-ap40:4.3": "Udakehaṃ na miyyāmi,",
  "tha-ap40:4.4": "āyāgassa idaṃ phalaṃ.",
  "tha-ap40:5.1": "Yadicchāmi ahaṃ vassaṃ,",
  "tha-ap40:5.2": "mahāmegho pavassati;",
  "tha-ap40:5.3": "Devāpi me vasaṃ enti,",
  "tha-ap40:5.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap40:6.1": "Sattaratanasampanno,",
  "tha-ap40:6.2": "tiṃsakkhattuṃ ahosahaṃ;",
  "tha-ap40:6.3": "Na maṃ kecāvajānanti,",
  "tha-ap40:6.4": "puññakammassidaṃ phalaṃ.",
  "tha-ap40:7.1": "Ekattiṃse ito kappe,",
  "tha-ap40:7.2": "āyāgaṃ yamakārayiṃ;",
  "tha-ap40:7.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap40:7.4": "āyāgassa idaṃ phalaṃ.",
  "tha-ap40:8.1": "Paṭisambhidā catasso,",
  "tha-ap40:8.2": "…pe…",
  "tha-ap40:8.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap40:9.1": "Itthaṃ sudaṃ āyasmā āyāgadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap40:10.1": "Āyāgadāyakattherassāpadānaṃ aṭṭhamaṃ."
}