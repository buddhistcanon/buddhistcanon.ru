{
  "tha-ap249:0.1": "Therāpadāna",
  "tha-ap249:0.2": "Tuvaradāyakavagga",
  "tha-ap249:0.3": "7. Dhātupūjakattheraapadāna",
  "tha-ap249:1.1": "“Nibbute lokanāthamhi,",
  "tha-ap249:1.2": "siddhatthamhi naruttame;",
  "tha-ap249:1.3": "Ekā dhātu mayā laddhā,",
  "tha-ap249:1.4": "dvipadindassa tādino.",
  "tha-ap249:2.1": "Tāhaṃ dhātuṃ gahetvāna,",
  "tha-ap249:2.2": "buddhassādiccabandhuno;",
  "tha-ap249:2.3": "Pañcavasse paricariṃ,",
  "tha-ap249:2.4": "tiṭṭhantaṃva naruttamaṃ.",
  "tha-ap249:3.1": "Catunnavutito kappe,",
  "tha-ap249:3.2": "yaṃ dhātuṃ pūjayiṃ tadā;",
  "tha-ap249:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap249:3.4": "dhātupaṭṭhahane phalaṃ.",
  "tha-ap249:4.1": "Paṭisambhidā catasso,",
  "tha-ap249:4.2": "…pe…",
  "tha-ap249:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap249:5.1": "Itthaṃ sudaṃ āyasmā dhātupūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap249:6.1": "Dhātupūjakattherassāpadānaṃ sattamaṃ."
}