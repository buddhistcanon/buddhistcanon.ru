{
  "tha-ap239:0.1": "Therāpadāna",
  "tha-ap239:0.2": "Udakāsanavagga",
  "tha-ap239:0.3": "7. Piyālapupphiyattheraapadāna",
  "tha-ap239:1.1": "“Migaluddo pure āsiṃ,",
  "tha-ap239:1.2": "araññe kānane ahaṃ;",
  "tha-ap239:1.3": "Piyālaṃ pupphitaṃ disvā,",
  "tha-ap239:1.4": "gatamagge khipiṃ ahaṃ.",
  "tha-ap239:2.1": "Ekanavutito kappe,",
  "tha-ap239:2.2": "yaṃ pupphamabhipūjayiṃ;",
  "tha-ap239:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap239:2.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap239:3.1": "Paṭisambhidā catasso,",
  "tha-ap239:3.2": "…pe…",
  "tha-ap239:3.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap239:4.1": "Itthaṃ sudaṃ āyasmā piyālapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap239:5.1": "Piyālapupphiyattherassāpadānaṃ sattamaṃ."
}