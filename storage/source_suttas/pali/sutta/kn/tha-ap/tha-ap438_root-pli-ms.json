{
  "tha-ap438:0.1": "Therāpadāna",
  "tha-ap438:0.2": "Ekavihārivagga",
  "tha-ap438:0.3": "6 Kaḷambadāyakattheraapadāna",
  "tha-ap438:1.1": "“Romaso nāma sambuddho,",
  "tha-ap438:1.2": "vasate pabbatantare;",
  "tha-ap438:1.3": "Kaḷambaṃ tassa pādāsiṃ,",
  "tha-ap438:1.4": "pasanno sehi pāṇibhi.",
  "tha-ap438:2.1": "Catunnavutito kappe,",
  "tha-ap438:2.2": "yaṃ dānamadadiṃ tadā;",
  "tha-ap438:2.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap438:2.4": "kaḷambassa idaṃ phalaṃ.",
  "tha-ap438:3.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap438:3.2": "…pe…",
  "tha-ap438:3.3": "viharāmi anāsavo.",
  "tha-ap438:4.1": "Svāgataṃ vata me āsi,",
  "tha-ap438:4.2": "…pe…",
  "tha-ap438:4.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap438:5.1": "Paṭisambhidā catasso,",
  "tha-ap438:5.2": "…pe…",
  "tha-ap438:5.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap438:6.1": "Itthaṃ sudaṃ āyasmā kaḷambadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap438:7.1": "Kaḷambadāyakattherassāpadānaṃ chaṭṭhaṃ."
}