{
  "tha-ap538:0.1": "Therāpadāna",
  "tha-ap538:0.2": "Kaccāyanavagga",
  "tha-ap538:0.3": "6. Bāhiyattheraapadāna",
  "tha-ap538:1.1": "“Ito satasahassamhi,",
  "tha-ap538:1.2": "kappe uppajji nāyako;",
  "tha-ap538:1.3": "Mahappabho tilokaggo,",
  "tha-ap538:1.4": "nāmena padumuttaro.",
  "tha-ap538:2.1": "Khippābhiññassa bhikkhussa,",
  "tha-ap538:2.2": "guṇaṃ kittayato mune;",
  "tha-ap538:2.3": "Sutvā udaggacittohaṃ,",
  "tha-ap538:2.4": "kāraṃ katvā mahesino.",
  "tha-ap538:3.1": "Datvā sattāhikaṃ dānaṃ,",
  "tha-ap538:3.2": "sasissassa mune ahaṃ;",
  "tha-ap538:3.3": "Abhivādiya sambuddhaṃ,",
  "tha-ap538:3.4": "taṃ ṭhānaṃ patthayiṃ tadā.",
  "tha-ap538:4.1": "Tato maṃ byākari buddho,",
  "tha-ap538:4.2": "‘etaṃ passatha brāhmaṇaṃ;",
  "tha-ap538:4.3": "Patitaṃ pādamūle me,",
  "tha-ap538:4.4": "cariyaṃ paccavekkhaṇaṃ.",
  "tha-ap538:5.1": "Hemayaññopacitaṅgaṃ,",
  "tha-ap538:5.2": "avadātatanuttacaṃ;",
  "tha-ap538:5.3": "Palambabimbatamboṭṭhaṃ,",
  "tha-ap538:5.4": "setatiṇhasamaṃ dijaṃ.",
  "tha-ap538:6.1": "Guṇathāmabahutaraṃ,",
  "tha-ap538:6.2": "samuggatatanūruhaṃ;",
  "tha-ap538:6.3": "Guṇoghāyatanībhūtaṃ,",
  "tha-ap538:6.4": "pītisamphullitānanaṃ.",
  "tha-ap538:7.1": "Eso patthayate ṭhānaṃ,",
  "tha-ap538:7.2": "khippābhiññassa bhikkhuno;",
  "tha-ap538:7.3": "Anāgate mahāvīro,",
  "tha-ap538:7.4": "gotamo nāma hessati.",
  "tha-ap538:8.1": "Tassa dhammesu dāyādo,",
  "tha-ap538:8.2": "oraso dhammanimmito;",
  "tha-ap538:8.3": "Bāhiyo nāma nāmena,",
  "tha-ap538:8.4": "hessati satthu sāvako’.",
  "tha-ap538:9.1": "Tadā hi tuṭṭho vuṭṭhāya,",
  "tha-ap538:9.2": "yāvajīvaṃ mahāmune;",
  "tha-ap538:9.3": "Kāraṃ katvā cuto saggaṃ,",
  "tha-ap538:9.4": "agaṃ sabhavanaṃ yathā.",
  "tha-ap538:10.1": "Devabhūto manusso vā,",
  "tha-ap538:10.2": "sukhito tassa kammuno;",
  "tha-ap538:10.3": "Vāhasā saṃsaritvāna,",
  "tha-ap538:10.4": "sampattimanubhomahaṃ.",
  "tha-ap538:11.1": "Puna kassapavīrassa,",
  "tha-ap538:11.2": "atthamentamhi sāsane;",
  "tha-ap538:11.3": "Āruyha selasikharaṃ,",
  "tha-ap538:11.4": "yuñjitvā jinasāsanaṃ.",
  "tha-ap538:12.1": "Visuddhasīlo sappañño,",
  "tha-ap538:12.2": "jinasāsanakārako;",
  "tha-ap538:12.3": "Tato cutā pañca janā,",
  "tha-ap538:12.4": "devalokaṃ agamhase.",
  "tha-ap538:13.1": "Tatohaṃ bāhiyo jāto,",
  "tha-ap538:13.2": "bhārukacche puruttame;",
  "tha-ap538:13.3": "Tato nāvāya pakkhando,",
  "tha-ap538:13.4": "sāgaraṃ appasiddhiyaṃ.",
  "tha-ap538:14.1": "Tato nāvā abhijjittha,",
  "tha-ap538:14.2": "gantvāna katipāhakaṃ;",
  "tha-ap538:14.3": "Tadā bhīsanake ghore,",
  "tha-ap538:14.4": "patito makarākare.",
  "tha-ap538:15.1": "Tadāhaṃ vāyamitvāna,",
  "tha-ap538:15.2": "santaritvā mahodadhiṃ;",
  "tha-ap538:15.3": "Suppārapaṭṭanavaraṃ,",
  "tha-ap538:15.4": "sampatto mandavedhito.",
  "tha-ap538:16.1": "Dārucīraṃ nivāsetvā,",
  "tha-ap538:16.2": "gāmaṃ piṇḍāya pāvisiṃ;",
  "tha-ap538:16.3": "Tadāha so jano tuṭṭho,",
  "tha-ap538:16.4": "‘arahāyamidhāgato.",
  "tha-ap538:17.1": "Imaṃ annena pānena,",
  "tha-ap538:17.2": "vatthena sayanena ca;",
  "tha-ap538:17.3": "Bhesajjena ca sakkatvā,",
  "tha-ap538:17.4": "hessāma sukhitā mayaṃ’.",
  "tha-ap538:18.1": "Paccayānaṃ tadā lābhī,",
  "tha-ap538:18.2": "tehi sakkatapūjito;",
  "tha-ap538:18.3": "Arahāhanti saṅkappaṃ,",
  "tha-ap538:18.4": "uppādesiṃ ayoniso.",
  "tha-ap538:19.1": "Tato me cittamaññāya,",
  "tha-ap538:19.2": "codayī pubbadevatā;",
  "tha-ap538:19.3": "‘Na tvaṃ upāyamaggaññū,",
  "tha-ap538:19.4": "kuto tvaṃ arahā bhave’.",
  "tha-ap538:20.1": "Codito tāya saṃviggo,",
  "tha-ap538:20.2": "tadāhaṃ paripucchi taṃ;",
  "tha-ap538:20.3": "‘Ke vā ete kuhiṃ loke,",
  "tha-ap538:20.4": "arahanto naruttamā’.",
  "tha-ap538:21.1": "‘Sāvatthiyaṃ kosalamandire jino,",
  "tha-ap538:21.2": "Pahūtapañño varabhūrimedhaso;",
  "tha-ap538:21.3": "So sakyaputto arahā anāsavo,",
  "tha-ap538:21.4": "Deseti dhammaṃ arahattapattiyā’.",
  "tha-ap538:22.1": "Tadassa sutvā vacanaṃ supīṇito,",
  "tha-ap538:22.2": "Nidhiṃva laddhā kapaṇoti vimhito;",
  "tha-ap538:22.3": "Udaggacitto arahattamuttamaṃ,",
  "tha-ap538:22.4": "Sudassanaṃ daṭṭhumanantagocaraṃ.",
  "tha-ap538:23.1": "Tadā tato nikkhamitvāna ‘satthuno,",
  "tha-ap538:23.2": "Sadā jinaṃ passāmi vimalānanaṃ’;",
  "tha-ap538:23.3": "Upecca rammaṃ vijitavhayaṃ vanaṃ,",
  "tha-ap538:23.4": "Dije apucchiṃ ‘kuhiṃ lokanandano’.",
  "tha-ap538:24.1": "‘Tato avocuṃ naradevavandito,",
  "tha-ap538:24.2": "Puraṃ paviṭṭho asanesanāya so;",
  "tha-ap538:24.3": "Sasova khippaṃ munidassanussuko,",
  "tha-ap538:24.4": "Upecca vandāhi tamaggapuggalaṃ’.",
  "tha-ap538:25.1": "Tatohaṃ tuvaṭaṃ gantvā,",
  "tha-ap538:25.2": "sāvatthiṃ puramuttamaṃ;",
  "tha-ap538:25.3": "Vicarantaṃ tamaddakkhiṃ,",
  "tha-ap538:25.4": "piṇḍatthaṃ apihāgidhaṃ.",
  "tha-ap538:26.1": "Pattapāṇiṃ alolakkhaṃ,",
  "tha-ap538:26.2": "pācayantaṃ pītākaraṃ;",
  "tha-ap538:26.3": "Sirīnilayasaṅkāsaṃ,",
  "tha-ap538:26.4": "ravidittiharānanaṃ.",
  "tha-ap538:27.1": "Taṃ samecca nipaccāhaṃ,",
  "tha-ap538:27.2": "idaṃ vacanamabraviṃ;",
  "tha-ap538:27.3": "‘Kupathe vippanaṭṭhassa,",
  "tha-ap538:27.4": "saraṇaṃ hohi gotama’.",
  "tha-ap538:28.1": "‘Pāṇasantāraṇatthāya,",
  "tha-ap538:28.2": "piṇḍāya vicarāmahaṃ;",
  "tha-ap538:28.3": "Na te dhammakathākālo’,",
  "tha-ap538:28.4": "iccāha munisattamo.",
  "tha-ap538:29.1": "Tadā punappunaṃ buddhaṃ,",
  "tha-ap538:29.2": "āyāciṃ dhammalālaso;",
  "tha-ap538:29.3": "Yo me dhammamadesesi,",
  "tha-ap538:29.4": "gambhīraṃ suññataṃ padaṃ.",
  "tha-ap538:30.1": "Tassa dhammaṃ suṇitvāna,",
  "tha-ap538:30.2": "pāpuṇiṃ āsavakkhayaṃ;",
  "tha-ap538:30.3": "Parikkhīṇāyuko santo,",
  "tha-ap538:30.4": "aho satthānukampako.",
  "tha-ap538:31.1": "Kilesā jhāpitā mayhaṃ,",
  "tha-ap538:31.2": "…pe…",
  "tha-ap538:31.3": "viharāmi anāsavo.",
  "tha-ap538:32.1": "Svāgataṃ vata me āsi,",
  "tha-ap538:32.2": "…pe…",
  "tha-ap538:32.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap538:33.1": "Paṭisambhidā catasso,",
  "tha-ap538:33.2": "…pe…",
  "tha-ap538:33.3": "kataṃ buddhassa sāsanaṃ.",
  "tha-ap538:34.1": "Evaṃ thero viyākāsi,",
  "tha-ap538:34.2": "bāhiyo dārucīriyo;",
  "tha-ap538:34.3": "Saṅkārakūṭe patito,",
  "tha-ap538:34.4": "bhūtāviṭṭhāya gāviyā.",
  "tha-ap538:35.1": "Attano pubbacariyaṃ,",
  "tha-ap538:35.2": "kittayitvā mahāmati;",
  "tha-ap538:35.3": "Parinibbāyi so thero,",
  "tha-ap538:35.4": "sāvatthiyaṃ puruttame.",
  "tha-ap538:36.1": "Nagarā nikkhamanto taṃ,",
  "tha-ap538:36.2": "disvāna isisattamo;",
  "tha-ap538:36.3": "Dārucīradharaṃ dhīraṃ,",
  "tha-ap538:36.4": "bāhiyaṃ bāhitāgamaṃ.",
  "tha-ap538:37.1": "Bhūmiyaṃ patitaṃ dantaṃ,",
  "tha-ap538:37.2": "indaketūva pātitaṃ;",
  "tha-ap538:37.3": "Gatāyuṃ sukkhakilesaṃ,",
  "tha-ap538:37.4": "jinasāsanakārakaṃ.",
  "tha-ap538:38.1": "Tato āmantayī satthā,",
  "tha-ap538:38.2": "sāvake sāsane rate;",
  "tha-ap538:38.3": "‘Gaṇhatha netvā jhāpetha,",
  "tha-ap538:38.4": "tanuṃ sabrahmacārino.",
  "tha-ap538:39.1": "Thūpaṃ karotha pūjetha,",
  "tha-ap538:39.2": "nibbuto so mahāmati;",
  "tha-ap538:39.3": "Khippābhiññānamesaggo,",
  "tha-ap538:39.4": "sāvako me vacokaro.",
  "tha-ap538:40.1": "Sahassamapi ce gāthā,",
  "tha-ap538:40.2": "anatthapadasañhitā;",
  "tha-ap538:40.3": "Ekaṃ gāthāpadaṃ seyyo,",
  "tha-ap538:40.4": "yaṃ sutvā upasammati.",
  "tha-ap538:41.1": "Yattha āpo ca pathavī,",
  "tha-ap538:41.2": "tejo vāyo na gādhati;",
  "tha-ap538:41.3": "Na tattha sukkā jotanti,",
  "tha-ap538:41.4": "ādicco na pakāsati.",
  "tha-ap538:42.1": "Na tattha candimā bhāti,",
  "tha-ap538:42.2": "tamo tattha na vijjati;",
  "tha-ap538:42.3": "Yadā ca attanā vedi,",
  "tha-ap538:42.4": "munimonena brāhmaṇo.",
  "tha-ap538:43.1": "Atha rūpā arūpā ca,",
  "tha-ap538:43.2": "sukhadukkhā vimuccati’;",
  "tha-ap538:43.3": "Iccevaṃ abhaṇī nātho,",
  "tha-ap538:43.4": "tilokasaraṇo muni”.",
  "tha-ap538:44.1": "Itthaṃ sudaṃ āyasmā bāhiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap538:45.1": "Bāhiyattherassāpadānaṃ chaṭṭhaṃ."
}