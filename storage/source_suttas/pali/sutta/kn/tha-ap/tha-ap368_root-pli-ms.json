{
  "tha-ap368:0.1": "Therāpadāna",
  "tha-ap368:0.2": "Mandāravapupphiyavagga",
  "tha-ap368:0.3": "6. Kadambapupphiyattheraapadāna",
  "tha-ap368:1.1": "“Suvaṇṇavaṇṇaṃ sambuddhaṃ,",
  "tha-ap368:1.2": "Gacchantaṃ antarāpaṇe;",
  "tha-ap368:1.3": "Kañcanagghiyasaṅkāsaṃ,",
  "tha-ap368:1.4": "Bāttiṃsavaralakkhaṇaṃ.",
  "tha-ap368:2.1": "Nisajja pāsādavare,",
  "tha-ap368:2.2": "addasaṃ lokanāyakaṃ;",
  "tha-ap368:2.3": "Kadambapupphaṃ paggayha,",
  "tha-ap368:2.4": "vipassiṃ abhipūjayiṃ.",
  "tha-ap368:3.1": "Ekanavutito kappe,",
  "tha-ap368:3.2": "yaṃ buddhamabhipūjayiṃ;",
  "tha-ap368:3.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap368:3.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap368:4.1": "Paṭisambhidā catasso,",
  "tha-ap368:4.2": "…pe…",
  "tha-ap368:4.3": "kataṃ buddhassa sāsanaṃ”.",
  "tha-ap368:5.1": "Itthaṃ sudaṃ āyasmā kadambapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap368:6.1": "Kadambapupphiyattherassāpadānaṃ chaṭṭhaṃ."
}