{
  "tha-ap72:0.1": "Therāpadāna",
  "tha-ap72:0.2": "Sakacintaniyavagga",
  "tha-ap72:0.3": "10. Pupphacaṅkoṭiyattheraapadāna",
  "tha-ap72:1.1": "“Abhītarūpaṃ sīhaṃva,",
  "tha-ap72:1.2": "garuḷaggaṃva pakkhinaṃ;",
  "tha-ap72:1.3": "Byagghūsabhaṃva pavaraṃ,",
  "tha-ap72:1.4": "abhijātaṃva kesariṃ.",
  "tha-ap72:2.1": "Sikhiṃ tilokasaraṇaṃ,",
  "tha-ap72:2.2": "anejaṃ aparājitaṃ;",
  "tha-ap72:2.3": "Nisinnaṃ samaṇānaggaṃ,",
  "tha-ap72:2.4": "bhikkhusaṃghapurakkhataṃ.",
  "tha-ap72:3.1": "Caṅkoṭake ṭhapetvāna,",
  "tha-ap72:3.2": "anojaṃ pupphamuttamaṃ;",
  "tha-ap72:3.3": "Saha caṅkoṭakeneva,",
  "tha-ap72:3.4": "buddhaseṭṭhaṃ samokiriṃ.",
  "tha-ap72:4.1": "Tena cittappasādena,",
  "tha-ap72:4.2": "dvipadinda narāsabha;",
  "tha-ap72:4.3": "Pattomhi acalaṃ ṭhānaṃ,",
  "tha-ap72:4.4": "hitvā jayaparājayaṃ.",
  "tha-ap72:5.1": "Ekattiṃse ito kappe,",
  "tha-ap72:5.2": "yaṃ kammamakariṃ tadā;",
  "tha-ap72:5.3": "Duggatiṃ nābhijānāmi,",
  "tha-ap72:5.4": "buddhapūjāyidaṃ phalaṃ.",
  "tha-ap72:6.1": "Sampuṇṇe tiṃsakappamhi,",
  "tha-ap72:6.2": "devabhūtisanāmakā;",
  "tha-ap72:6.3": "Sattaratanasampannā,",
  "tha-ap72:6.4": "pañcāsuṃ cakkavattino.",
  "tha-ap72:7.1": "Paṭisambhidā catasso,",
  "tha-ap72:7.2": "…pe…",
  "tha-ap72:7.3": "kataṃ buddhassa sāsanaṃ”. (1412)",
  "tha-ap72:8.1": "Itthaṃ sudaṃ āyasmā pupphacaṅkoṭiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap72:9.1": "Pupphacaṅkoṭiyattherassāpadānaṃ dasamaṃ.",
  "tha-ap72:10.1": "Sakacintaniyavaggo sattamo.",
  "tha-ap72:11.1": "Tassuddānaṃ",
  "tha-ap72:12.1": "Sakacintī avopupphī,",
  "tha-ap72:12.2": "sapaccāgamanena ca;",
  "tha-ap72:12.3": "Parappasādī bhisado,",
  "tha-ap72:12.4": "sucinti vatthadāyako.",
  "tha-ap72:13.1": "Ambadāyī ca sumano,",
  "tha-ap72:13.2": "pupphacaṅkoṭakīpi ca;",
  "tha-ap72:13.3": "Gāthekasattati vuttā,",
  "tha-ap72:13.4": "gaṇitā atthadassibhi."
}