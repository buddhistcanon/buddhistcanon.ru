{
  "thig2.8:0.1": "Therīgāthā",
  "thig2.8:0.2": "Dukanipāta",
  "thig2.8:0.3": "8. Abhayamātutherīgāthā",
  "thig2.8:1.1": "“Uddhaṃ pādatalā amma,",
  "thig2.8:1.2": "adho ve kesamatthakā;",
  "thig2.8:1.3": "Paccavekkhassumaṃ kāyaṃ,",
  "thig2.8:1.4": "asuciṃ pūtigandhikaṃ.",
  "thig2.8:2.1": "Evaṃ viharamānāya,",
  "thig2.8:2.2": "sabbo rāgo samūhato;",
  "thig2.8:2.3": "Pariḷāho samucchinno,",
  "thig2.8:2.4": "sītibhūtāmhi nibbutā”ti.",
  "thig2.8:3.1": "…",
  "thig2.8:3.2": "Abhayamātā therī …."
}