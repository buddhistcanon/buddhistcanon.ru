{
  "thig2.4:0.1": "Therīgāthā",
  "thig2.4:0.2": "Dukanipāta",
  "thig2.4:0.3": "4 Aḍḍhakāsitherīgāthā",
  "thig2.4:1.1": "“Yāva kāsijanapado,",
  "thig2.4:1.2": "suṅko me tatthako ahu;",
  "thig2.4:1.3": "Taṃ katvā negamo agghaṃ,",
  "thig2.4:1.4": "aḍḍhenagghaṃ ṭhapesi maṃ.",
  "thig2.4:2.1": "Atha nibbindahaṃ rūpe,",
  "thig2.4:2.2": "nibbindañca virajjahaṃ;",
  "thig2.4:2.3": "Mā puna jātisaṃsāraṃ,",
  "thig2.4:2.4": "sandhāveyyaṃ punappunaṃ;",
  "thig2.4:2.5": "Tisso vijjā sacchikatā,",
  "thig2.4:2.6": "kataṃ buddhassa sāsanan”ti.",
  "thig2.4:3.1": "…",
  "thig2.4:3.2": "Aḍḍhakāsi therī …."
}