{
  "thig5.12:0.1": "Therīgāthā",
  "thig5.12:0.2": "Pañcakanipāta",
  "thig5.12:0.3": "12. Candātherīgāthā",
  "thig5.12:1.1": "“Duggatāhaṃ pure āsiṃ,",
  "thig5.12:1.2": "vidhavā ca aputtikā;",
  "thig5.12:1.3": "Vinā mittehi ñātīhi,",
  "thig5.12:1.4": "bhattacoḷassa nādhigaṃ.",
  "thig5.12:2.1": "Pattaṃ daṇḍañca gaṇhitvā,",
  "thig5.12:2.2": "bhikkhamānā kulā kulaṃ;",
  "thig5.12:2.3": "Sītuṇhena ca ḍayhantī,",
  "thig5.12:2.4": "satta vassāni cārihaṃ.",
  "thig5.12:3.1": "Bhikkhuniṃ puna disvāna,",
  "thig5.12:3.2": "annapānassa lābhiniṃ;",
  "thig5.12:3.3": "Upasaṅkamma avocaṃ,",
  "thig5.12:3.4": "‘pabbajjaṃ anagāriyaṃ’.",
  "thig5.12:4.1": "Sā ca maṃ anukampāya,",
  "thig5.12:4.2": "pabbājesi paṭācārā;",
  "thig5.12:4.3": "Tato maṃ ovaditvāna,",
  "thig5.12:4.4": "paramatthe niyojayi.",
  "thig5.12:5.1": "Tassāhaṃ vacanaṃ sutvā,",
  "thig5.12:5.2": "akāsiṃ anusāsaniṃ;",
  "thig5.12:5.3": "Amogho ayyāyovādo,",
  "thig5.12:5.4": "tevijjāmhi anāsavā”ti.",
  "thig5.12:6.1": "…",
  "thig5.12:6.2": "Candā therī ….",
  "thig5.12:7.1": "Pañcakanipāto niṭṭhito."
}