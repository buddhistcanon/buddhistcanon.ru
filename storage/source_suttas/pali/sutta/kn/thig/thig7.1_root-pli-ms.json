{
  "thig7.1:0.1": "Therīgāthā",
  "thig7.1:0.2": "Sattakanipāta",
  "thig7.1:0.3": "1. Uttarātherīgāthā",
  "thig7.1:1.1": "“Musalāni gahetvāna,",
  "thig7.1:1.2": "dhaññaṃ koṭṭenti māṇavā;",
  "thig7.1:1.3": "Puttadārāni posentā,",
  "thig7.1:1.4": "dhanaṃ vindanti māṇavā.",
  "thig7.1:2.1": "Ghaṭetha buddhasāsane,",
  "thig7.1:2.2": "yaṃ katvā nānutappati;",
  "thig7.1:2.3": "Khippaṃ pādāni dhovitvā,",
  "thig7.1:2.4": "ekamantaṃ nisīdatha.",
  "thig7.1:3.1": "Cittaṃ upaṭṭhapetvāna,",
  "thig7.1:3.2": "ekaggaṃ susamāhitaṃ;",
  "thig7.1:3.3": "Paccavekkhatha saṅkhāre,",
  "thig7.1:3.4": "parato no ca attato”.",
  "thig7.1:4.1": "“Tassāhaṃ vacanaṃ sutvā,",
  "thig7.1:4.2": "paṭācārānusāsaniṃ;",
  "thig7.1:4.3": "Pāde pakkhālayitvāna,",
  "thig7.1:4.4": "ekamante upāvisiṃ.",
  "thig7.1:5.1": "Rattiyā purime yāme,",
  "thig7.1:5.2": "pubbajātimanussariṃ;",
  "thig7.1:5.3": "Rattiyā majjhime yāme,",
  "thig7.1:5.4": "dibbacakkhuṃ visodhayiṃ.",
  "thig7.1:6.1": "Rattiyā pacchime yāme,",
  "thig7.1:6.2": "tamokhandhaṃ padālayiṃ;",
  "thig7.1:6.3": "Tevijjā atha vuṭṭhāsiṃ,",
  "thig7.1:6.4": "katā te anusāsanī.",
  "thig7.1:7.1": "Sakkaṃva devā tidasā,",
  "thig7.1:7.2": "saṅgāme aparājitaṃ;",
  "thig7.1:7.3": "Purakkhatvā vihassāmi,",
  "thig7.1:7.4": "tevijjāmhi anāsavā”.",
  "thig7.1:8.1": "…",
  "thig7.1:8.2": "Uttarā therī …."
}