{
  "thig6.7:0.1": "Therīgāthā",
  "thig6.7:0.2": "Chakkanipāta",
  "thig6.7:0.3": "7. Guttātherīgāthā",
  "thig6.7:1.1": "“Gutte yadatthaṃ pabbajjā,",
  "thig6.7:1.2": "hitvā puttaṃ vasuṃ piyaṃ;",
  "thig6.7:1.3": "Tameva anubrūhehi,",
  "thig6.7:1.4": "mā cittassa vasaṃ gami.",
  "thig6.7:2.1": "Cittena vañcitā sattā,",
  "thig6.7:2.2": "mārassa visaye ratā;",
  "thig6.7:2.3": "Anekajātisaṃsāraṃ,",
  "thig6.7:2.4": "sandhāvanti aviddasū.",
  "thig6.7:3.1": "Kāmacchandañca byāpādaṃ,",
  "thig6.7:3.2": "sakkāyadiṭṭhimeva ca;",
  "thig6.7:3.3": "Sīlabbataparāmāsaṃ,",
  "thig6.7:3.4": "vicikicchañca pañcamaṃ.",
  "thig6.7:4.1": "Saṃyojanāni etāni,",
  "thig6.7:4.2": "pajahitvāna bhikkhunī;",
  "thig6.7:4.3": "Orambhāgamanīyāni,",
  "thig6.7:4.4": "nayidaṃ punarehisi.",
  "thig6.7:5.1": "Rāgaṃ mānaṃ avijjañca,",
  "thig6.7:5.2": "uddhaccañca vivajjiya;",
  "thig6.7:5.3": "Saṃyojanāni chetvāna,",
  "thig6.7:5.4": "dukkhassantaṃ karissasi.",
  "thig6.7:6.1": "Khepetvā jātisaṃsāraṃ,",
  "thig6.7:6.2": "pariññāya punabbhavaṃ;",
  "thig6.7:6.3": "Diṭṭheva dhamme nicchātā,",
  "thig6.7:6.4": "upasantā carissatī”ti.",
  "thig6.7:7.1": "…",
  "thig6.7:7.2": "Guttā therī …."
}