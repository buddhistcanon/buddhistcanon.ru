{
  "thig8.1:0.1": "Therīgāthā",
  "thig8.1:0.2": "Aṭṭhakanipāta",
  "thig8.1:0.3": "1. Sīsūpacālātherīgāthā",
  "thig8.1:1.1": "“Bhikkhunī sīlasampannā,",
  "thig8.1:1.2": "indriyesu susaṃvutā;",
  "thig8.1:1.3": "Adhigacche padaṃ santaṃ,",
  "thig8.1:1.4": "asecanakamojavaṃ”.",
  "thig8.1:2.1": "“Tāvatiṃsā ca yāmā ca,",
  "thig8.1:2.2": "tusitā cāpi devatā;",
  "thig8.1:2.3": "Nimmānaratino devā,",
  "thig8.1:2.4": "ye devā vasavattino;",
  "thig8.1:2.5": "Tattha cittaṃ paṇīdhehi,",
  "thig8.1:2.6": "yattha te vusitaṃ pure”.",
  "thig8.1:3.1": "“Tāvatiṃsā ca yāmā ca,",
  "thig8.1:3.2": "tusitā cāpi devatā;",
  "thig8.1:3.3": "Nimmānaratino devā,",
  "thig8.1:3.4": "ye devā vasavattino.",
  "thig8.1:4.1": "Kālaṃ kālaṃ bhavābhavaṃ,",
  "thig8.1:4.2": "sakkāyasmiṃ purakkhatā;",
  "thig8.1:4.3": "Avītivattā sakkāyaṃ,",
  "thig8.1:4.4": "jātimaraṇasārino.",
  "thig8.1:5.1": "Sabbo ādīpito loko,",
  "thig8.1:5.2": "sabbo loko padīpito;",
  "thig8.1:5.3": "Sabbo pajjalito loko,",
  "thig8.1:5.4": "sabbo loko pakampito.",
  "thig8.1:6.1": "Akampiyaṃ atuliyaṃ,",
  "thig8.1:6.2": "aputhujjanasevitaṃ;",
  "thig8.1:6.3": "Buddho dhammamadesesi,",
  "thig8.1:6.4": "tattha me nirato mano.",
  "thig8.1:7.1": "Tassāhaṃ vacanaṃ sutvā,",
  "thig8.1:7.2": "vihariṃ sāsane ratā;",
  "thig8.1:7.3": "Tisso vijjā anuppattā,",
  "thig8.1:7.4": "kataṃ buddhassa sāsanaṃ.",
  "thig8.1:8.1": "Sabbattha vihatā nandī,",
  "thig8.1:8.2": "tamokhandho padālito;",
  "thig8.1:8.3": "Evaṃ jānāhi pāpima,",
  "thig8.1:8.4": "nihato tvamasi antaka”.",
  "thig8.1:9.1": "…",
  "thig8.1:9.2": "Sīsūpacālā therī ….",
  "thig8.1:10.1": "Aṭṭhakanipāto niṭṭhito."
}