{
  "thig3.4:0.1": "Therīgāthā",
  "thig3.4:0.2": "Tikanipāta",
  "thig3.4:0.3": "4. Dantikātherīgāthā",
  "thig3.4:1.1": "“Divāvihārā nikkhamma,",
  "thig3.4:1.2": "gijjhakūṭamhi pabbate;",
  "thig3.4:1.3": "Nāgaṃ ogāhamuttiṇṇaṃ,",
  "thig3.4:1.4": "nadītīramhi addasaṃ.",
  "thig3.4:2.1": "Puriso aṅkusamādāya,",
  "thig3.4:2.2": "‘dehi pādan’ti yācati;",
  "thig3.4:2.3": "Nāgo pasārayī pādaṃ,",
  "thig3.4:2.4": "puriso nāgamāruhi.",
  "thig3.4:3.1": "Disvā adantaṃ damitaṃ,",
  "thig3.4:3.2": "manussānaṃ vasaṃ gataṃ;",
  "thig3.4:3.3": "Tato cittaṃ samādhesiṃ,",
  "thig3.4:3.4": "khalu tāya vanaṃ gatā”ti.",
  "thig3.4:4.1": "…",
  "thig3.4:4.2": "Dantikā therī …."
}