{
  "thig5.3:0.1": "Therīgāthā",
  "thig5.3:0.2": "Pañcakanipāta",
  "thig5.3:0.3": "3. Sīhātherīgāthā",
  "thig5.3:1.1": "“Ayoniso manasikārā,",
  "thig5.3:1.2": "kāmarāgena aṭṭitā;",
  "thig5.3:1.3": "Ahosiṃ uddhatā pubbe,",
  "thig5.3:1.4": "citte avasavattinī.",
  "thig5.3:2.1": "Pariyuṭṭhitā klesehi,",
  "thig5.3:2.2": "subhasaññānuvattinī;",
  "thig5.3:2.3": "Samaṃ cittassa na labhiṃ,",
  "thig5.3:2.4": "rāgacittavasānugā.",
  "thig5.3:3.1": "Kisā paṇḍu vivaṇṇā ca,",
  "thig5.3:3.2": "satta vassāni cārihaṃ;",
  "thig5.3:3.3": "Nāhaṃ divā vā rattiṃ vā,",
  "thig5.3:3.4": "sukhaṃ vindiṃ sudukkhitā.",
  "thig5.3:4.1": "Tato rajjuṃ gahetvāna,",
  "thig5.3:4.2": "pāvisiṃ vanamantaraṃ;",
  "thig5.3:4.3": "Varaṃ me idha ubbandhaṃ,",
  "thig5.3:4.4": "yañca hīnaṃ punācare.",
  "thig5.3:5.1": "Daḷhapāsaṃ karitvāna,",
  "thig5.3:5.2": "rukkhasākhāya bandhiya;",
  "thig5.3:5.3": "Pakkhipiṃ pāsaṃ gīvāyaṃ,",
  "thig5.3:5.4": "atha cittaṃ vimucci me”ti.",
  "thig5.3:6.1": "…",
  "thig5.3:6.2": "Sīhā therī …."
}