{
  "kv7.6:0.1": "Kathāvatthu",
  "kv7.6:0.2": "Mahāpaṇṇāsaka",
  "kv7.6:0.3": "Sattamavagga",
  "kv7.6:0.4": "Itodinnakathā",
  "kv7.6:1.1": "☑ Ito dinnena tattha yāpentīti?",
  "kv7.6:1.2": "Āmantā.",
  "kv7.6:1.3": "Ito cīvaraṃ denti taṃ cīvaraṃ tattha paribhuñjantīti?",
  "kv7.6:1.4": "Na hevaṃ vattabbe …pe…",
  "kv7.6:1.5": "ito piṇḍapātaṃ denti, ito senāsanaṃ denti, ito gilānapaccayabhesajjaparikkhāraṃ denti, ito khādanīyaṃ denti, ito bhojanīyaṃ denti, ito pānīyaṃ denti;",
  "kv7.6:1.6": "taṃ pānīyaṃ tattha paribhuñjantīti?",
  "kv7.6:1.7": "Na hevaṃ vattabbe …pe….",
  "kv7.6:2.1": "☑ Ito dinnena tattha yāpentīti?",
  "kv7.6:2.2": "Āmantā.",
  "kv7.6:2.3": "Añño aññassa kārako parakataṃ sukhadukkhaṃ añño karoti, añño paṭisaṃvedetīti?",
  "kv7.6:2.4": "Na hevaṃ vattabbe …pe….",
  "kv7.6:3.1": "☒ Na vattabbaṃ—",
  "kv7.6:3.2": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:3.3": "Āmantā.",
  "kv7.6:3.4": "Nanu petā attano atthāya dānaṃ dentaṃ anumodenti, cittaṃ pasādenti, pītiṃ uppādenti, somanassaṃ paṭilabhantīti?",
  "kv7.6:3.5": "Āmantā.",
  "kv7.6:3.6": "Hañci petā attano atthāya dānaṃ dentaṃ anumodenti, cittaṃ pasādenti, pītiṃ uppādenti, somanassaṃ paṭilabhanti;",
  "kv7.6:3.7": "tena vata re vattabbe—",
  "kv7.6:3.8": "“ito dinnena tattha yāpentī”ti.",
  "kv7.6:4.1": "☒ Na vattabbaṃ—",
  "kv7.6:4.2": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:4.3": "Āmantā.",
  "kv7.6:4.4": "Nanu vuttaṃ bhagavatā—",
  "kv7.6:5.1": "“Unname udakaṃ vuṭṭhaṃ,",
  "kv7.6:5.2": "yathāninnaṃ pavattati;",
  "kv7.6:5.3": "Evameva ito dinnaṃ,",
  "kv7.6:5.4": "petānaṃ upakappati.",
  "kv7.6:6.1": "Yathā vārivahā pūrā,",
  "kv7.6:6.2": "paripūrenti sāgaraṃ;",
  "kv7.6:6.3": "Evameva ito dinnaṃ,",
  "kv7.6:6.4": "petānaṃ upakappati.",
  "kv7.6:7.1": "Na hi tattha kasī atthi,",
  "kv7.6:7.2": "gorakkhettha na vijjati;",
  "kv7.6:7.3": "Vaṇijjā tādisī natthi,",
  "kv7.6:7.4": "hiraññena kayākayaṃ;",
  "kv7.6:7.5": "Ito dinnena yāpenti,",
  "kv7.6:7.6": "petā kālaṅkatā tahin”ti.",
  "kv7.6:8.1": "Attheva suttantoti?",
  "kv7.6:8.2": "Āmantā.",
  "kv7.6:8.3": "Tena hi ito dinnena tattha yāpentīti.",
  "kv7.6:9.1": "☒ Na vattabbaṃ—",
  "kv7.6:9.2": "“ito dinnena tattha yāpentī”ti?",
  "kv7.6:9.3": "Āmantā.",
  "kv7.6:9.4": "Nanu vuttaṃ bhagavatā—",
  "kv7.6:9.5": "“pañcimāni, bhikkhave, ṭhānāni sampassantā mātāpitaro puttaṃ icchanti kule jāyamānaṃ.",
  "kv7.6:9.6": "Katamāni pañca?",
  "kv7.6:9.7": "Bhaṭo vā no bharissati, kiccaṃ vā no karissati, kulavaṃso ciraṃ ṭhassati, dāyajjaṃ paṭipajjissati, atha vā pana petānaṃ kālaṅkatānaṃ dakkhiṇaṃ anuppadassati—",
  "kv7.6:9.8": "imāni kho, bhikkhave, pañca ṭhānāni sampassantā mātāpitaro puttaṃ icchanti kule jāyamānanti.",
  "kv7.6:10.1": "Pañca ṭhānāni sampassaṃ,",
  "kv7.6:10.2": "puttaṃ icchanti paṇḍitā;",
  "kv7.6:10.3": "Bhaṭo vā no bharissati,",
  "kv7.6:10.4": "kiccaṃ vā no karissati.",
  "kv7.6:11.1": "Kulavaṃso ciraṃ tiṭṭhe,",
  "kv7.6:11.2": "dāyajjaṃ paṭipajjati;",
  "kv7.6:11.3": "Atha vā pana petānaṃ,",
  "kv7.6:11.4": "dakkhiṇaṃ anuppadassati.",
  "kv7.6:12.1": "Ṭhānānetāni sampassaṃ,",
  "kv7.6:12.2": "puttaṃ icchanti paṇḍitā;",
  "kv7.6:12.3": "Tasmā santo sappurisā,",
  "kv7.6:12.4": "kataññū katavedino.",
  "kv7.6:13.1": "Bharanti mātāpitaro,",
  "kv7.6:13.2": "pubbe katamanussaraṃ;",
  "kv7.6:13.3": "Karonti tesaṃ kiccāni,",
  "kv7.6:13.4": "yathā taṃ pubbakārinaṃ.",
  "kv7.6:14.1": "Ovādakārī bhaṭaposī,",
  "kv7.6:14.2": "kulavaṃsaṃ ahāpayaṃ;",
  "kv7.6:14.3": "Saddho sīlena sampanno,",
  "kv7.6:14.4": "putto hoti pasaṃsiyo”ti.",
  "kv7.6:15.1": "Attheva suttantoti?",
  "kv7.6:15.2": "Āmantā.",
  "kv7.6:15.3": "Tena hi ito dinnena tattha yāpentīti.",
  "kv7.6:15.4": "Ito dinnakathā niṭṭhitā."
}